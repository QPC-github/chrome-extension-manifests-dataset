{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Downloads",
  "version": "2.0.0.3",
  "manifest_version": 2,
  "homepage_url": "https://singleclickapps.com/downloads-button",
  "description": "A shortcut to Chrome downloads",
  "icons": {
    "16": "icon.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Downloads"
  },
  "incognito": "spanning",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "settings.html"
}
