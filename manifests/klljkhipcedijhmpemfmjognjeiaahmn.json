{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "pageQlip",
  "version": "0.9",
  "manifest_version": 2,
  "description": "Qlip your websites to view them later",
  "homepage_url": "http://www.pageqlip.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/pageqlip16.png",
    "default_title": "pageQlip",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*.pageqlip.com/",
    "https://*.pageqlip.com/",
    "http://*/*",
    "https://*/*"
  ]
}
