{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "short_name": "All-in-One Messenger",
  "description": "__MSG_description__",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "256": "icons/icon256.png",
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": [
        "js/telegram_content_start.js"
      ],
      "matches": [
        "*://web.telegram.org/*"
      ],
      "all_frames": true
    },
    {
      "js": [
        "js/whatsapp_content.js"
      ],
      "matches": [
        "*://web.whatsapp.com/*"
      ],
      "all_frames": true
    },
    {
      "js": [
        "js/slype_content.js"
      ],
      "matches": [
        "*://web.skype.com/*"
      ],
      "all_frames": true
    },
    {
      "js": [
        "js/jquery.min.js",
        "js/msgr_content.js"
      ],
      "matches": [
        "*://multimessenger.cc/*"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "js/analytics.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],
  "version": "4.5.8"
}
