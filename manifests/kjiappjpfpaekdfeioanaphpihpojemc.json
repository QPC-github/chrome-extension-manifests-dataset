{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Purify",
  "description": "Read news articles with minimal distraction and scrolling.",
  "version": "0.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery.js",
        "js/Util.js",
        "js/ArticleParser.js",
        "js/ArticleView.js",
        "js/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/style.css",
    "img/*.png"
  ],
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "Purify",
    "default_icon": {
      "19": "img/icon19.png"
    }
  }
}
