{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LIHKG Purger",
  "version": "1.0",
  "description": "Get rid of your addiction! Close tabs of LIHKG after a certain time.",
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
