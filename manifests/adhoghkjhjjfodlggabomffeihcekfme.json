{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Single Page Scrapper",
  "version": "1.0",
  "background": {
    "scripts": [
      "jquery.min.js",
      "chrome-msging.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "chrome-msging.js",
        "parsers.js",
        "db.js",
        "content-common.js",
        "search-content.js",
        "category-content.js",
        "product-content.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "page_action": {
    "default_title": "Select Page Type",
    "default_popup": "select-type.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "manifest_version": 2
}
