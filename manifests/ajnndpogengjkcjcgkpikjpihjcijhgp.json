{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RIDI 키워드",
  "version": "1.0",
  "description": "맘에 안드는 키워드 검색결과에서 없애기",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ridibooks.com/keyword-finder/*"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "js": [
        "keywordRemover.js"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
