{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Imgfave",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Save all your favorite images to imgfave.com",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "menu.html",
    "default_title": "Imgfave"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "http://*/",
    "https://*/"
  ]
}
