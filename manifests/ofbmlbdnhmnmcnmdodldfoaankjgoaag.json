{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0",
  "name": "My browsing history",
  "description": "Displays your recent history on webpages in pop-up.",
  "background": {
    "scripts": [
      "js/jquery.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/ico_19.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "tabs",
    "history"
  ],
  "icons": {
    "16": "img/ico_16.png",
    "48": "img/ico_48.png"
  }
}
