{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "TTS Engine using Google Translate™",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Uses Google Translate™ to provide a voice.",
  "homepage_url": "http://ivan.vucica.net/chrome-googletranslatetts/",
  "permissions": [
    "ttsEngine"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "console_tts_engine.js"
    ]
  },
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Google Translate™ TTS",
        "event_types": [
          "start",
          "sentence",
          "end"
        ]
      }
    ]
  }
}
