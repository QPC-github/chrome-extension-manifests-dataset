{
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/ga.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/content.js"
      ],
      "matches": [
        "https://*.canaltech.com.br/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/16.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "icons": {
    "128": "img/128.png",
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png"
  },
  "manifest_version": 2,
  "name": "Canaltech",
  "description": "Tecnologia para quem entende: notícias, entrevistas, análises de smartphones e tablets, dicas, tutoriais e apps.",
  "permissions": [
    "background",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "notifications",
    "history",
    "storage",
    "idle"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.3"
}
