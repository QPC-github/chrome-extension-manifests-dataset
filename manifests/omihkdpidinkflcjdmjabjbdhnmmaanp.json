{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Prayers Gadget",
  "description": "Islamic prayer times for the Desktop",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "27",
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "fileSystem",
    "<all_urls>",
    "idle"
  ]
}
