{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HKG39 Chrome Plugin Helper",
  "version": "1.6",
  "description": "HKG39 Chrome Native Messaging for PCCW Global (NewClient) Plugin Player",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "nativeMessaging",
    "background"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*",
      "*://hkg39.ontaptv.com/*",
      "*://*.ontaptv.com/*"
    ]
  }
}
