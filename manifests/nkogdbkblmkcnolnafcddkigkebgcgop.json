{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ionplayer",
  "version": "1.4",
  "description": "Ionplayer",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "nativeMessaging",
    "background"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*SamplePlayerPPAPI.html",
      "*://*.ionplayer.es:*/*",
      "*://ionplayer.es:*/*",
      "*://*.perseo.tv:*/*"
    ]
  }
}
