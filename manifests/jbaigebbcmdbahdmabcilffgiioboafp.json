{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nudgr Helper",
  "short_name": "Nudgr Tag Helper",
  "description": "Checks to see if your Nudgr code is installed correctly, and allows you to test fire a nudge",
  "version": "0.0.8.2",
  "icons": {
    "128": "nudgr-128.png"
  },
  "browser_action": {
    "default_icon": "nudgrLogo.png",
    "default_popup": "nudgrHelper.html",
    "default_title": "Nudgr Tag Helper Extension"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "nudgrHelper.js"
    ],
    "persistent": true
  }
}
