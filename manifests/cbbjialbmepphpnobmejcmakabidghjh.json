{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "iShort",
  "default_locale": "en",
  "author": "Nir Tamir",
  "homepage_url": "https://ishort.gq",
  "version": "3.6.4",
  "icons": {
    "16": "./img/icons/blue/16.png",
    "32": "./img/icons/blue/32.png",
    "64": "./img/icons/blue/64.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "commands": {
    "toggle-reader-view": {
      "description": "Toggle the Reader View"
    }
  },
  "incognito": "split",
  "options_ui": {
    "chrome_style": true,
    "page": "./options.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "./img/icons/blue/16.png",
      "32": "./img/icons/blue/32.png",
      "64": "./img/icons/blue/64.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "*://*/*",
    "chrome://favicon/",
    "notifications",
    "activeTab",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "<all_urls>",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "*",
    "adblock.js",
    "adblockLuncher.js",
    "background.js",
    "reader.html",
    "reader.js",
    "reader.css",
    "<all_urls>"
  ]
}
