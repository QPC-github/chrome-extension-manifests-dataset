{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "script.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "19.png"
    },
    "default_popup": "price.htm",
    "default_title": "Click to show more information"
  },
  "description": "Displays the current bitcoin price.",
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png"
  },
  "manifest_version": 2,
  "name": "Bitcoin price",
  "permissions": [
    "https://coinmarketcap.com/",
    "storage"
  ],
  "short_name": "Bitcoin Price",
  "version": "1.0"
}
