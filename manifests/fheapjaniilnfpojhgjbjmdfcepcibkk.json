{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GA-Notifier",
  "short_name": "GA-Notifier",
  "description": "Notifies about Google Analyticsâ„¢ tracking on websites",
  "version": "0.0.0.2",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "notifications",
    "tabs",
    "<all_urls>",
    "*://stats.g.doubleclick.net/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-bug.png",
    "default_title": "Click here to activate notifications"
  },
  "web_accessible_resources": [
    "icon-event.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  }
}
