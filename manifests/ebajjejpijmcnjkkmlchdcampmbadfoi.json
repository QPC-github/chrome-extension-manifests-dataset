{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DLive Giveaway Asistance",
  "version": "1.1.2",
  "description": "Giveaway extension for DLive",
  "icons": {
    "48": "dlive.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dlive.tv/*"
      ],
      "css": [
        "req/bootstrap.min.css",
        "req/xmpage.css"
      ],
      "js": [
        "req/jquery.min.js",
        "req/bootstrap.min.js",
        "req/xmloader.js",
        "req/xmpage.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "req/xmpage.html"
  ]
}
