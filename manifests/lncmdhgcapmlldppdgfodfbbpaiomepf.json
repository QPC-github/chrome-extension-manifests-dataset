{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "聚友趣网页收藏工具",
  "version": "1.1.5",
  "manifest_version": 2,
  "description": "这个扩展程序可以让你方便地从任意网站上采集喜欢的图片和内容到聚友趣上。这是聚友趣官方提供的扩展。",
  "icons": {
    "16": "images/logo_16.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "preferences.html",
  "browser_action": {
    "default_icon": {
      "19": "images/logo_19.png",
      "38": "images/logo_38.png"
    },
    "default_title": "聚友趣收藏插件",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/libs/jquery-1.11.2.min.js",
        "js/libs/masonry.pkgd.js",
        "js/content.js",
        "js/kernel.js",
        "js/resize.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "js/wechat_login.js"
      ],
      "matches": [
        "http://www.juyouqu.la/wechart_login_callback/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "<all_urls>"
  ]
}
