{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Death Clock",
  "description": "Gentle reminder about how fleeting life is. Time to make the most of it!",
  "version": "1.0.5",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "/views/popup.html"
  },
  "icons": {
    "16": "icons/hourglass-16.png",
    "48": "icons/hourglass-48.png",
    "128": "icons/hourglass-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
