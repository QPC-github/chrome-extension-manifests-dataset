{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Silktide - website accessibility simulator",
  "short_name": "Disability simulator",
  "description": "A browser plugin that helps you develop accessible websites by simulating a range of experiences.",
  "version": "1.2.1",
  "icons": {
    "16": "icons/S16.png",
    "32": "icons/S32.png",
    "48": "icons/S48.png",
    "128": "icons/S128.png"
  },
  "browser_action": {
    "default_title": "Disability simulator",
    "default_icon": {
      "16": "icons/S16.png",
      "32": "icons/S32.png",
      "48": "icons/S48.png",
      "128": "icons/S128.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K",
        "linux": "Ctrl+Shift+K"
      },
      "description": "Enable disability simulator"
    }
  },
  "homepage_url": "https://silktide.com/toolbar",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "web_accessible_resources": [
    "bundle.js",
    "style.css",
    "nunito-font.css",
    "files/*"
  ]
}
