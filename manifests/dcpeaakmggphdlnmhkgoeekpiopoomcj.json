{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YouTube Messager",
  "version": "1.1",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "description": "Send mass messages to your YouTube subscribers.",
  "browser_action": {
    "default_title": "Send Message NOW!",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "load.js"
    ]
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "jquery.js",
    "hook.js"
  ]
}
