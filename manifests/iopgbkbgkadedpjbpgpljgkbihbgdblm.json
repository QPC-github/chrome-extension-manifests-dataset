{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shhh: Secret Messenger Tab",
  "author": "redphx",
  "description": "Ẩn nội dung của Facebook Messenger",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.messenger.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "css/styles.css"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "img/*",
    "css/*"
  ],
  "permissions": [
    "*://*.messenger.com/*"
  ]
}
