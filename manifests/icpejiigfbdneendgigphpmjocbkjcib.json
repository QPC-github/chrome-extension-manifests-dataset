{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LDD Show Reponses",
  "short_name": "LDD Reponses",
  "description": "Adds a [+] link next to message links on the developerWorks forums to view them inline instead of having to open multiple pages.",
  "version": "2.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.lotus.com/ldd*"
      ],
      "js": [
        "lddresponse.user.js"
      ]
    }
  ]
}
