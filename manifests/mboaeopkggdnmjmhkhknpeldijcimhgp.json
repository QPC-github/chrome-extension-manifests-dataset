{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Arc Dark Scrollbars",
  "version": "1.1",
  "description": "Chrome extension that matches your scrollbars to the Arc Dark theme",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "manifest_version": 2
}
