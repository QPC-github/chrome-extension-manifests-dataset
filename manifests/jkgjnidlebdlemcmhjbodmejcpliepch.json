{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cloudversify Desktop Streamer",
  "description": "An extension that allows you to stream your desktop into meetings with any Cloudversify platform.",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "cloudversify-logo-16x16.png",
    "48": "cloudversify-logo-48x48.png",
    "128": "cloudversify-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://192.168.1.64/*",
      "*://localhost/*",
      "*://darik.ca/*",
      "*://meet.cloudversify.com/*",
      "*://webdev.cloudversify.com/*",
      "*://espace.learnquebec.ca/*",
      "*://versid.io/*",
      "*://webdev.versid.io/*"
    ]
  }
}
