{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "B2B Data Services",
  "description": "The best data solutions to accelerate your business' development",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "dist/jquery.min.js",
      "dist/bootstrap.min.js",
      "dist/ml-stack-nav.min.js",
      "dist/custom.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "dist/jquery.min.js",
        "dist/bootstrap.min.js",
        "dist/ml-stack-nav.min.js",
        "dist/custom.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "contextMenus"
  ]
}
