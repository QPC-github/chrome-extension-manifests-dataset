{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Zoru",
  "description": "Cette extension te permet de suivre les différentes activités de Zoru et le soutenir facilement !",
  "version": "1.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/check.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon96.png",
    "default_title": "Zoru"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "https://www.googleapis.com/youtube/v3/*",
    "https://api.twitch.tv/kraken/*"
  ]
}
