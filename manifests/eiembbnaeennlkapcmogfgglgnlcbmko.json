{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PikaZoom для pikabu.ru",
  "short_name": "PikaZoom",
  "version": "1.1",
  "description": "По клику увеличивает картинки из ленты pikabu.ru",
  "author": "Alexander Larikov",
  "content_scripts": [
    {
      "matches": [
        "http://*.pikabu.ru/*"
      ],
      "js": [
        "pikazoom.js"
      ],
      "css": [
        "pikazoom.css"
      ]
    }
  ],
  "icons": {
    "128": "pikazoom.png"
  }
}
