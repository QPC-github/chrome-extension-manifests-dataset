{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_application_title__",
  "description": "__MSG_application_description__",
  "default_locale": "en",
  "version": "1.2",
  "browser_action": {
    "default_icon": {
      "128": "icon_128.png",
      "16": "icon_16.png"
    }
  },
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
