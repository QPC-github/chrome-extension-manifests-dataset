{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gifbin Insta-Add",
  "description": "This extension lets you instantly add any gif to gibin!",
  "version": "1.1",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "gifbinadd.js"
    ]
  },
  "icons": {
    "16": "gifbin-small.png",
    "48": "gifbin-med.png",
    "128": "gifbin-large.png"
  },
  "manifest_version": 2,
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://gifbin.biz/*",
      "*://www.gifbin.biz/*",
      "*://staging.gifbin.biz/*",
      "http://localhost:8000/"
    ]
  }
}
