{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.1",
  "name": "Player.FM Plugin",
  "description": "A Player.FM plugin to play/pause podcasts.",
  "homepage_url": "http://zolfer.com/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "data/icon/16.png",
    "32": "data/icon/32.png",
    "48": "data/icon/48.png",
    "64": "data/icon/64.png",
    "128": "data/icon/128.png",
    "256": "data/icon/256.png"
  },
  "browser_action": {
    "default_title": "Player.FM Plugin",
    "default_icon": {
      "16": "data/icon/16.png",
      "32": "data/icon/32.png",
      "48": "data/icon/48.png",
      "64": "data/icon/64.png",
      "128": "data/icon/128.png",
      "256": "data/icon/256.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "*://player.fm/*"
  ]
}
