{
  "background": {
    "scripts": [
      "src/js/background.js",
      "src/js/newtab.js"
    ]
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "encoding": "UTF-8",
      "favicon_url": "http://newtab.co/favicon.ico",
      "is_default": true,
      "keyword": "NewTabCo",
      "name": "NewTab.co",
      "search_url": "http://newtab.co/?q={searchTerms}",
      "suggest_url": "http://newtab.co/suggest.php?q={searchTerms}"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "description": "NewTab.co upgraded version of the clasic new tab",
  "icons": {
    "128": "icons/128.png"
  },
  "manifest_version": 2,
  "name": "newTab.co - Reinvent the Home Page",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "management",
    "storage",
    "cookies",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.2",
  "short_name": "newTab.co"
}
