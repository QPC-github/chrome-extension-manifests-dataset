{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Chroxy",
  "description": "Simplified proxy rotation for Chrome",
  "version": "1.0.7",
  "manifest_version": 2,
  "icons": {
    "16": "img/chroxy16.png",
    "48": "img/chroxy48.png",
    "128": "img/chroxy128.png"
  },
  "browser_action": {
    "default_icon": "img/chroxy.png",
    "default_popup": "chroxy.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "proxy",
    "alarms"
  ]
}
