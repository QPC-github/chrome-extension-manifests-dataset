{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CapScreen",
  "version": "1.0",
  "description": "Takes screenshot of the current tab",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
