{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Cookie Monster",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Eating cookies from the domain of the current page.",
  "icons": {
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "icon19.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "notifications",
    "cookies",
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "48.png"
  ]
}
