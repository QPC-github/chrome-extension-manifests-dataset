{
  "author": "Hlawuleka Maswanganyi",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.gif",
    "default_popup": "popup.html",
    "default_title": "Advanced Page Language Switcher"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "A browser language switching extention / plugin written and designed by Hlawuleka Maswanganyi ",
  "icons": {
    "128": "iconBig.gif",
    "32": "icon.gif",
    "64": "iconBig.gif"
  },
  "manifest_version": 2,
  "name": "Advanced Page Language Switcher",
  "options_page": "popup.html",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "<all_urls>"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2.0",
  "web_accessible_resources": [
    "icon.gif"
  ]
}
