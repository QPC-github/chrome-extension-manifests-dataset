{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "api_console_project_id": 989612280692,
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "short_name": "Hippo Video",
  "version": "3.16.3",
  "container": "GOOGLE_DRIVE",
  "optional_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "identity",
    "unlimitedStorage",
    "desktopCapture",
    "gcm",
    "storage",
    "notifications",
    "tabs",
    "https://www.hippovideo.io/",
    "<all_urls>",
    "tabCapture",
    "management"
  ],
  "background": {
    "scripts": [
      "js/bg/mixpanel-2-latest.min.js",
      "js/common/constants.js",
      "js/common/volume-meter.js",
      "js/common/jquery-3.1.1.min.js",
      "js/bg/aws-sdk.min.js",
      "js/bg/CommonUtils.js",
      "js/bg/Firehose.js",
      "js/bg/LoggingUtils.js",
      "js/bg/idb.js",
      "js/bg/IDBUtils.js",
      "js/bg/APIClient.js",
      "js/bg/statuspoller.js",
      "js/bg/FileUploadManager.js",
      "js/bg/DataStreamer.js",
      "js/bg/background.js",
      "js/bg/S3Uploader.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/extension/main-icon.png",
    "default_title": "Record Screen",
    "default_popup": "html/extension/popup.html"
  },
  "icons": {
    "16": "images/injected/logo.png",
    "22": "images/injected/logo.png",
    "32": "images/injected/logo.png",
    "48": "images/injected/logo.png",
    "128": "images/injected/logo.png"
  },
  "web_accessible_resources": [
    "/images/injected/*",
    "/images/extension/*",
    "/html/injected/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://*.hippowiz.com/*",
      "https://*.hippovideo.io/*"
    ]
  },
  "oauth2": {
    "client_id": "975749760800-l1851utorkcoretsnpubljpi7u59kmvk.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email"
    ]
  }
}
