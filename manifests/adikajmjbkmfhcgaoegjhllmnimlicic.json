{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WorkAxle Twilio Video Screen sharing",
  "description": "An extension to allow you to Twilio Video screen sharing.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://app.workaxle.com/*",
      "*://staging.workaxle.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
