{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Secure or not",
  "description": "Tells you if the page you are browsing is secure or not",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icone.png",
    "default_popup": "popup.html",
    "default_title": "ilyks.com"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "notifications",
    "tabs"
  ]
}
