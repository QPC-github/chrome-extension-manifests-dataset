{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Snakenet URL Maker",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Create an URL shortcut of the current page suitable to post at the Snakenetmetalradio Battleboard.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  }
}
