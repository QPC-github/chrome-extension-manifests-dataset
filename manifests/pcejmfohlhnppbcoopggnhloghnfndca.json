{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Simple Prayers",
  "description": "Prayer timings display",
  "version": "0.4.14",
  "manifest_version": 2,
  "options_page": "options.html",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "main.html",
    "default_icon": "favicon.png"
  }
}
