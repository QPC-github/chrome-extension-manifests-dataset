{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Barcamania Scroll Fix",
  "description": "This extension fixes Barcamania.ge on Mac OS & Widnows, Also fixes post header title",
  "version": "1.1",
  "permissions": [
    "tabs",
    "*://barcamania.ge/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://barcamania.ge/*"
      ],
      "js": [
        "jquery.js",
        "jquery.smooth-scroll.min.js",
        "slimscroll.js",
        "background.js"
      ]
    }
  ]
}
