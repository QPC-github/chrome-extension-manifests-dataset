{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HackHands screen sharing",
  "author": "HackHands",
  "version": "1.0.6",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "The fastest way to get live programming help.",
  "homepage_url": "http://hackhands.com/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.hackhands.com/*",
      "*://*.pluralsight.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
