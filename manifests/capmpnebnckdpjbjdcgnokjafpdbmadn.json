{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pong 2",
  "description": "Play Pong with a friend or by yourself! Its like ping pong but for your computer!",
  "version": "5",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ],
      "container": "panel",
      "width": 640,
      "height": 480
    }
  },
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "offline_enabled": true
}
