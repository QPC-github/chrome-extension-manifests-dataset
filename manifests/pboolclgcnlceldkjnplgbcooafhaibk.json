{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Talk-Cloud Extension",
  "version": "1.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Talk-Cloud Application",
  "homepage_url": "http://www.talk-cloud.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://localhost/*",
        "http://*/*",
        "https://*/*",
        "file://*"
      ]
    }
  ],
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "*://localhost/*",
    "http://*/*",
    "https://*/*",
    "file://*"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
