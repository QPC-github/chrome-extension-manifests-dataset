{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "右键先生-搜狗搜索",
  "short_name": "右键搜狗搜索",
  "description": "在右键菜单添加搜狗文字搜索功能。与全家桶式右键扩展不一样的是，本扩展专注搜狗搜索，因此扩展右键顶级菜单就是搜索按钮，更适合高频率使用搜狗的用户。",
  "version": "1.0.2",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "sogo.js"
    ]
  },
  "manifest_version": 2
}
