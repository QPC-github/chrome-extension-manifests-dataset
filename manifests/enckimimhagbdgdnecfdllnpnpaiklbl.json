{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HelioViewer",
  "short_name": "HelioViewer",
  "description": "An open-source project for the visualization of solar and heliospheric data. It has an easy to use interface with various features.",
  "version": "0.1",
  "minimum_chrome_version": "38",
  "offline_enabled": false,
  "permissions": [
    "webview"
  ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "64": "assets/64.png",
    "128": "assets/128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
