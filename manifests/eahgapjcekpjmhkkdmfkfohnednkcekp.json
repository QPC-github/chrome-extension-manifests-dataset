{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTubeâ„¢ auto Pause and Resume",
  "short_name": "iyapresume",
  "description": "Pause YouTube player when page is hidden and resume when it is active again",
  "author": "James Fray",
  "version": "0.1.1",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "common.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "64": "data/icons/64.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "data/inject.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "homepage_url": "http://add0n.com/youtube-tools.html?from=auto-pause",
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  }
}
