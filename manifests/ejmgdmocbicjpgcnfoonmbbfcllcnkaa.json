{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Let Me Read",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Provides a distraction free reading.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
