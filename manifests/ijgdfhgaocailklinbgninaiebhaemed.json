{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "homepage_url": "https://www.tembin.com",
  "manifest_version": 2,
  "name": "Amazon Review助手",
  "version": "2.2.19",
  "background": {
    "scripts": [
      "lib/jquery-2.0.0.min.js",
      "background.js"
    ]
  },
  "description": "Amazon Review助手, 评价匹配订单",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Amazon Review助手",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "tabs",
    "*://*.amazon.com/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.mx/*",
    "*://*.tembin.com/",
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "lib/jquery-2.0.0.min.js",
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
