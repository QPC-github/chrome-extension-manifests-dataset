{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Portal iClic",
  "version": "2.1",
  "description": "Confira as novidades do portal iClic!",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/logo.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "app.html"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-latest.min.js",
        "inject.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>",
    "unlimitedStorage"
  ]
}
