{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Gloheal Screen Share Extension",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Desktop sharing for WebRTC",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.9",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Gloheal Share Screen extension enables users to share the screen with the remote participant during the consultation.",
  "externally_connectable": {
    "matches": [
      "https://*.tcura.com/*",
      "https://*.gloheal.com/*"
    ]
  },
  "icons": {
    "128": "woogeen_icon_128.png",
    "16": "woogeen_icon_16.png",
    "48": "woogeen_icon_48.png"
  },
  "browser_action": {
    "default_icon": "woogeen_icon_16.png"
  }
}
