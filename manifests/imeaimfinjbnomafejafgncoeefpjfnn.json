{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "ChromeIdea",
  "description": "Idea Informer widget for Google Chrome: your forum, bagtracker, todo list... on hand.",
  "version": "1.1",
  "manifest_version": 2,
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html",
    "default_title": "ChromeIdea"
  },
  "icons": {
    "128": "img/icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
