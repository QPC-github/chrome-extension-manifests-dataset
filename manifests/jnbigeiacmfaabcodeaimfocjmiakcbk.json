{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FT, ad free",
  "description": "Disables adblock countermeasures on ft.com.",
  "version": "0.1.1",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "FT, ad free"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ft.com/*"
      ],
      "css": [
        "ft.css"
      ]
    }
  ],
  "permissions": [
    "https://www.ft.com/*/"
  ]
}
