{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DG Speak Text",
  "version": "1.0",
  "description": "DG Speak Text is a simple, nice but powerful extension that will speak selected text by you!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "tts"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "eventAction.js"
    ]
  }
}
