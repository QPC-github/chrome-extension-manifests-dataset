{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Camka Screen Sharing",
  "author": "Amplexor",
  "version": "3.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for CAMKA application. It allows you to share you screen during a videoconference.",
  "homepage_url": "http://www.camka.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.camka.com/*"
    ]
  },
  "icons": {
    "64": "logo.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
