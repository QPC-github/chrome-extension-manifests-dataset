{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.1.0",
  "author": [
    {
      "name": "NEMS Srl"
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "externally_connectable": {
    "matches": [
      "*://*.nems.cloud/*",
      "*://*.nems.it/*",
      "*://*.loquace.cloud/*",
      "*://*.loquace.it/*"
    ]
  },
  "icons": {
    "128": "logoloquace_128.png",
    "16": "logoloquace_16.png",
    "48": "logoloquace_48.png"
  },
  "minimum_chrome_version": "34",
  "permissions": [
    "desktopCapture"
  ]
}
