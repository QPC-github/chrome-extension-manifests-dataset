{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Leaptuitive",
  "version": "1.0",
  "description": "Leap Motion Chrome Support",
  "icons": {
    "16": "rs16.png",
    "48": "rs48.png",
    "128": "rs128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "tabs",
    "activeTab",
    "bookmarks",
    "declarativeWebRequest",
    "*://*/*",
    "storage",
    "history"
  ],
  "background": {
    "scripts": [
      "jquery-1.10.2.min.js",
      "leap.min.js",
      "rs.js"
    ]
  },
  "browser_action": {
    "default_title": "RadicSoft LeapMotion",
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
