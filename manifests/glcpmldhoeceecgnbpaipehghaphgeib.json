{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PollCart for Chrome",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Share polls on PollCart using our chrome extension",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PollCart: Poll contacts to advise, assist, and agree on purchases."
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
