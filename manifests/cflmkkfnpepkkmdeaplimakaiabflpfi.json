{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "remote-jobs-search",
  "version": "0.0.1",
  "description": "Browser extension that helps you on your remote job search",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": "icons/icon-48.png",
    "default_title": "Remote Jobs Search",
    "default_popup": "build/popup.html"
  },
  "background": {
    "scripts": [
      "build/background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "<all_urls>",
    "storage",
    "tabs"
  ]
}
