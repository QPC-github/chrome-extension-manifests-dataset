{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Project CMFA - Quick Templates",
  "description": "Always copy pasting templates into your Zarpgaming.com post(s) can be a pain. This tool will take away that heavy work.",
  "version": "1.0.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "background",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "insertTemplate.js"
    ]
  }
}
