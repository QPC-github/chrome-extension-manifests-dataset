{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Compartir Pantalla - Tabalive",
  "author": "Tabalive",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Extensi√≥n para compartir la pantalla con WebRTC",
  "homepage_url": "http://www.tabalive.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "matches": [
        "*://*.tabalive.com/*",
        "*://*.webrtc.local/*",
        "https://192.168.23.14:3000/",
        "*://*.tabalive.local/*"
      ]
    }
  ],
  "icons": {
    "48": "screen48.png",
    "128": "screen128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "screen48.png",
    "screen128.png"
  ]
}
