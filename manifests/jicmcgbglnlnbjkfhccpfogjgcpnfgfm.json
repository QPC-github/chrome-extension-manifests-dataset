{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "authors": [
    {
      "email": "hi@mysmartprice.com",
      "name": "MySmartPrice"
    }
  ],
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon_32px.png",
      "38": "icon_64px.png"
    },
    "default_popup": "popup.html",
    "default_title": "BonusApp - Cashback & Coupons"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.min.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://www.googletagmanager.com   https://sdk.amazonaws.com; object-src 'self'",
  "description": "Extra upto 20% cashback on your online purchases. Automatically apply best coupon. Save upto Rs. 20,000 per year",
  "homepage_url": "https://www.bonusapp.in",
  "icons": {
    "32": "icon_32px.png",
    "128": "icon_128px.png"
  },
  "manifest_version": 2,
  "name": "BonusApp - Cashback & Coupons",
  "permissions": [
    "tabs",
    "alarms",
    "http://*/*",
    "https://*/*",
    "cookies",
    "notifications",
    "contextMenus",
    "gcm",
    "unlimitedStorage",
    "storage",
    "idle",
    "webNavigation"
  ],
  "short_name": "BonusApp",
  "version": "4.1",
  "web_accessible_resources": [
    "icon.png",
    "jquery.min.map"
  ]
}
