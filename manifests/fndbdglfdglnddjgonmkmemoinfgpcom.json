{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Search Amazon",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "description": "Highlight any term on a page, right click and \"Search\" your favorite Amazon site.",
  "icons": {
    "128": "amazon128.png",
    "16": "amazon16.png",
    "48": "amazon48.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "version": "1.0"
}
