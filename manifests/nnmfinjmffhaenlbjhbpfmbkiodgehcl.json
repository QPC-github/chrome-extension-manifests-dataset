{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mergely Text Compare",
  "version": "1.0.1",
  "description": "Mergely lets you compare any text with rich intuitive interface",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "app": {
    "launch": {
      "local_path": "app.html"
    }
  },
  "default_locale": "en",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'"
}
