{
  "author": "Solaborate",
  "background": {
    "persistent": false,
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://*.solaborate.com/*",
        "https://*.developersgrave.com/*",
        "https://*.developershub.info/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Webrtc screen sharing",
  "homepage_url": "https://www.solaborate.com",
  "icons": {
    "48": "icon.png"
  },
  "minimum_chrome_version": "34",
  "name": "Solaborate Screen Capturing",
  "permissions": [
    "desktopCapture"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "4.0",
  "web_accessible_resources": [
    "icon.png"
  ],
  "manifest_version": 2
}
