{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "The Edge Tutors Screen Sharing",
  "author": "The Edge Learning Center",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extensions implements screen sharing for TheEdgeTutors.com.",
  "homepage_url": "http://www.theedgetutors.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.theedgetutors.com/*",
      "https://edge-dev.azurewebsites.net/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
