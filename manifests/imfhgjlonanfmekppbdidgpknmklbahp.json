{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Safepost",
  "short_name": "Safepost",
  "description": "Safepost for Chrome",
  "version": "0.2.8",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "underscore-min.js",
      "openpgp.min.js",
      "firebase.js",
      "firebase-simple-login.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "permissions": [
    "https://*.firebaseio.com/*",
    "https://*.firebase.com/*",
    "https://www.gravatar.com/avatar/*",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.firebaseio.com https://*.firebase.com ; object-src 'self'"
}
