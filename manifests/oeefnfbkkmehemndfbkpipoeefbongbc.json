{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Youtube Caption Search",
  "version": "1.0",
  "description": "Search for text in youtube videos",
  "icons": {
    "16": "16.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "*://*.youtube.com/*",
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
