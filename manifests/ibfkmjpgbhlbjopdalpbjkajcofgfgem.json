{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "#Специи — кэшбэк-сервис от МегаФона",
  "version": "0.4.0",
  "description": "Кэшбэк-сервис #Специи от МегаФона позволяет экономить на покупках в интернет-магазинах.",
  "homepage_url": "https://special.megafon.ru",
  "browser_action": {
    "default_title": "#Специи — кэшбэк-сервис от МегаФона",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-disabled-16.png",
      "32": "icons/icon-disabled-32.png"
    }
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://special.megafon.ru/*"
  ]
}
