{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cat Pun Replacer",
  "description": "A tool for replacing words with cat puns.",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "19": "images/enabled.png"
    },
    "default_title": "Click to disable cat puns"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "images/icon128.png"
  }
}
