{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MangoApps for Chrome",
  "description": "This browser extension provides users quick & secure access to their most recently accessed MangoApps content.",
  "manifest_version": 2,
  "version": "3.0",
  "author": "MangoApps",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "browser_action": {
    "default_icon": "icons/logo128.png",
    "default_title": "MangoApps Quick Access",
    "default_popup": "quick_access/quick_access.html"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "https://*.mangoapps.com/*",
      "https://*.mangopulse.com/*",
      "https://*.engageexpress.com/*",
      "https://*.teamhealth.com/*",
      "https://*.wsba.org/*",
      "https://*.andrewsbrewview.com/*",
      "https://*.africafoodsecurity.net/*",
      "https://*.kellymoore.com/*",
      "https://*.integralgroup.com/*",
      "https://*.mtishows.com/*",
      "https://*.yard4.org/*",
      "https://*.belron.com/*",
      "https://*.ekspert.ch/*",
      "https://*.euromoneydigital.com/*",
      "https://*.amadeus.com/*",
      "https://*.ccsfundraising.com/*",
      "https://*.pfmmedical.com/*",
      "https://*.bawagpsk.com/*",
      "https://*.interracu.com/*",
      "https://*.dearbytes.com/*",
      "https://*.sasserfamilyholdings.com/*",
      "https://*.niwetu.org/*",
      "https://*.everest.nl/*",
      "https://*.treliant.com/*",
      "https://*.mtsi-va.com/*",
      "https://*.ymca.net/*",
      "https://*.oneacg.com/*"
    ]
  },
  "permissions": [
    "webRequest",
    "desktopCapture",
    "storage",
    "activeTab",
    "tabs",
    "https://*.mangoapps.com/*",
    "https://*.mangopulse.com/*",
    "https://*.officechat.com/*",
    "https://*.engageexpress.com/*",
    "https://*.teamhealth.com/*",
    "https://*.wsba.org/*",
    "https://*.andrewsbrewview.com/*",
    "https://*.africafoodsecurity.net/*",
    "https://*.kellymoore.com/*",
    "https://*.integralgroup.com/*",
    "https://*.mtishows.com/*",
    "https://*.yard4.org/*",
    "https://*.belron.com/*",
    "https://*.ekspert.ch/*",
    "https://*.euromoneydigital.com/*",
    "https://*.amadeus.com/*",
    "https://*.ccsfundraising.com/*",
    "https://*.pfmmedical.com/*",
    "https://*.bawagpsk.com/*",
    "https://*.interracu.com/*",
    "https://*.dearbytes.com/*",
    "https://*.sasserfamilyholdings.com/*",
    "https://*.niwetu.org/*",
    "https://*.everest.nl/*",
    "https://*.treliant.com/*",
    "https://*.mtsi-va.com/*",
    "https://*.ymca.net/*",
    "https://*.oneacg.com/*"
  ]
}
