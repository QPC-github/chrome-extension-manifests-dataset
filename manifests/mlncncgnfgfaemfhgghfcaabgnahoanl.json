{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Случайный незнакомец вконтакте VK.COM",
  "description": "Переход на страницу случайного человека. Можно настроить пол, страну, город, статус случайного человека.",
  "version": "1.1.7",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "icon_38.png",
      "19": "icon_19.png"
    },
    "default_title": "Поиск ВК"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon.png"
  },
  "manifest_version": 2,
  "options_page": "popup.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
