{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screen Sharing infomedia.co.id",
  "author": "floox.id",
  "version": "1.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for http://floox.id WCS Api to enable screen capture.",
  "homepage_url": "http://floox.id",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://dev-vcon.infomedia.co.id/*",
      "https://*.dev-vcon.infomedia.co.id/*",
      "https://infomedia.co.id/*",
      "https://*.infomedia.co.id/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo48.png"
  ]
}
