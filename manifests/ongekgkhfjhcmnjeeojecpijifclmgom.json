{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Customerly screensharing plugin",
  "description": "Screensharing utility for Customerly",
  "version": "0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.customerly.io/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.customerly.io/*"
    ]
  },
  "web_accessible_resources": [
    "1px.png"
  ]
}
