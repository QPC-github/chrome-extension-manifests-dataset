{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chrome Tracker",
  "short_name": "Tracker",
  "version": "3.2",
  "description": "Chrome Tracker is simple chrome extension for http://chrometracker.com that helps you to track your activity and productivity",
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icons/online-inactive.png",
    "default_title": "Tracker"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "background",
    "desktopCapture",
    "storage",
    "unlimitedStorage",
    "notifications",
    "cookies",
    "idle",
    "alarms",
    "system.display",
    "http://localhost/",
    "*://chrometracker.com/"
  ],
  "manifest_version": 2,
  "system_indicator": {
    "default_icon": {
      "19": "icons/online-inactive.png",
      "38": "icons/online-inactive.png"
    }
  }
}
