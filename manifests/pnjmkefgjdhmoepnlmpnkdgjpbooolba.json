{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Allow-Marcos-IPF-Print",
  "description": "Permite la comunicacion con la interface para impresoras fiscales de Marcos, desde el google Chrome",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Marcos IPF Chrome extension"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "on.png",
    "off.png"
  ]
}
