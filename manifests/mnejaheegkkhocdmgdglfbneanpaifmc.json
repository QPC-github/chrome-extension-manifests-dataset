{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Rignite Social Post Extension",
  "version": "1.5.1",
  "description": "Rignite is a social media management software solution that helps your business get results from social marketing.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/icon38.png",
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "cookies",
    "http://*/",
    "https://*/"
  ]
}
