{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Finslator",
  "description": "This extension shows notifcation with translated Finnish words",
  "version": "1.8",
  "permissions": [
    "activeTab",
    "notifications",
    "http://finmorph.info/*",
    "https://finmorph.info/*"
  ],
  "browser_action": {
    "default_icon": "book_off.png",
    "default_title": "Finslator"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}
