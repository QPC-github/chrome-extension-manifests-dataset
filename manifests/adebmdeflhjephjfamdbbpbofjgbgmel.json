{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Aliexpress.com - Store info",
  "description": "Aliexpress.com - Store Info",
  "version": "1.6.3.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Проверить продавца Aliexpress.com",
    "default_icon": "img/16x16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/16x16.png",
    "32": "img/32x32.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "storage",
    "https://track24.ru/*",
    "https://*.track24.ru/*",
    "http://*.aliexpress.com/*",
    "https://*.aliexpress.com/*",
    "http://*.aliexpress.ru/*/*",
    "https://*.aliexpress.ru/*",
    "https://letyshops.ru/api/*"
  ],
  "web_accessible_resources": [
    "img/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.aliexpress.com/*",
        "https://*.aliexpress.com/*",
        "http://*.aliexpress.ru/*",
        "https://*.aliexpress.ru/*"
      ],
      "css": [
        "css/style.css",
        "css/font-awesome.min.css",
        "css/animate.min.css"
      ],
      "js": [
        "js/jquery-latest.js",
        "js/content.js",
        "js/chart.min.js"
      ]
    }
  ]
}
