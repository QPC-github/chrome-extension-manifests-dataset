{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Verug",
  "version": "1.0",
  "description": "Companion extension for the Verug.com video game store",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.verug.com/*",
      "*://*.anygaming.co/*"
    ]
  },
  "manifest_version": 2
}
