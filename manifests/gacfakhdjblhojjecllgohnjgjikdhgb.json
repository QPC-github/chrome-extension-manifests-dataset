{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Amazon Cart Hider",
  "version": "0.0.3",
  "description": "Hides the Amazon side cart!",
  "author": "Intercedan Technology",
  "short_name": "Amazon Cart Hider",
  "icons": {
    "16": "images/img16.png",
    "32": "images/img32.png",
    "48": "images/img48.png",
    "64": "images/img64.png",
    "128": "images/img128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.amazon.cn/*",
        "*://*.amazon.in/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.com.sg/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.it/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.es/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.br/*"
      ]
    }
  ]
}
