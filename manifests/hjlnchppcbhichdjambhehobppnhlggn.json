{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_ExtensionName__",
  "short_name": "__MSG_ExtensionShortName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.8.5",
  "icons": {
    "16": "images/mainicon_16.png",
    "19": "images/mainicon_19.png",
    "32": "images/mainicon_32.png",
    "38": "images/mainicon_38.png",
    "48": "images/mainicon_48.png",
    "128": "images/mainicon_128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/mainicon_19.png",
      "38": "images/mainicon_38.png"
    },
    "default_title": "__MSG_ExtensionName__"
  },
  "permissions": [
    "tabs",
    "system.display",
    "*://*.jw.org/*",
    "alarms",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html"
}
