{
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/index.css"
      ],
      "matches": [
        "*://*.amazon.co.jp/*",
        "*://www.toranoana.jp/*",
        "http://melonbooks.co.jp/",
        "*://www.suruga-ya.jp/*",
        "*://*.booth.pm/*",
        "*://www.c-queen.net/*",
        "http://www.meikido.com/*"
      ]
    }
  ],
  "description": "在可以代购的网站上展示一个购买条",
  "icons": {
    "128": "img/icon/guge128.png",
    "16": "img/icon/guge16.png",
    "48": "img/icon/guge48.png"
  },
  "manifest_version": 2,
  "name": "玛沙多拉工具条",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "storage",
    "nativeMessaging",
    "http://*.masadora.net/",
    "http://*.masadora.jp/",
    "http://*.masadora.io/"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.4",
  "web_accessible_resources": [
    "js/content.js",
    "css/index.css"
  ]
}
