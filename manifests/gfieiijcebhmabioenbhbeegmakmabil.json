{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chinese Tutor Extension",
  "manifest_version": 2,
  "description": "Fast Chinese-English dictionary search! Look up Mandarin Chinese words using Hanzi characters, Pinyin, or English.",
  "version": "3",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  }
}
