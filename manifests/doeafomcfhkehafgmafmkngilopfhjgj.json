{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.0",
  "manifest_version": 2,
  "short_name": "hostadblocker",
  "name": "Host AdBlocker - Block By Domain",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/host-blocker.html",
  "description": "A fast and lite adblocker based on domain matching.",
  "options_ui": {
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_title": "Host AdBlocker",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
