{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smarthinking",
  "short_name": "Smarthinking",
  "description": "This extension will use to allow the screen share option",
  "version": "0.1",
  "background": {
    "scripts": [
      "index.js"
    ]
  },
  "icons": {
    "16": "smarthinking.png",
    "48": "smarthinking.png",
    "128": "smarthinking.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "smarthinking.png",
      "24": "smarthinking.png",
      "32": "smarthinking.png",
      "48": "smarthinking.png",
      "128": "smarthinking.png"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://*.smarthinking.com/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "activeTab",
    "tabs"
  ]
}
