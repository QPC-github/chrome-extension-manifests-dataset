{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Correction Highlighter",
  "short_name": "C-Hightlighter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Highlight changes in two lines of text. Useful to language teachers to highlight corrections.",
  "icons": {
    "128": "compare128.png"
  },
  "background": {
    "scripts": [
      "popup.js"
    ]
  },
  "browser_action": {
    "default_title": "highlight your corrections",
    "default_popup": "popup.html",
    "allframes": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "compareText": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Compare text"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+C",
        "mac": "Command+Shift+C",
        "chromeos": "Ctrl+Shift+C",
        "linux": "Ctrl+Shift+C"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
    }
  }
}
