{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spiritual Screen",
  "version": "1.1.2",
  "version_name": "Beta version 1.1.2",
  "description": "Chrome extension to manage your new tab with spirituality.",
  "icons": {
    "16": "appAssets/images/spiritual16.png",
    "48": "appAssets/images/spiritual48.png",
    "128": "appAssets/images/spiritual128.png"
  },
  "browser_action": {
    "default_icon": "appAssets/images/spiritual16.png"
  },
  "author": "MeshWorld",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "topSites",
    "history",
    "bookmarks"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
