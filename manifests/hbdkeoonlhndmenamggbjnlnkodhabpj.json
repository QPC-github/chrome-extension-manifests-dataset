{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Weather (instant)",
  "short_name": "climate",
  "description": "Finest weather extension in store",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/favicons19/02.png",
      "38": "icons/favicons38/02.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "app/updateIcon.js"
    ],
    "persistant": false
  },
  "permissions": [
    "storage",
    "alarms"
  ]
}
