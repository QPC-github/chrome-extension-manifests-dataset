{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FanFiction Story Saver",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Consolidates Fan Fiction stories for easier reading and saving.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "main.png",
    "default_title": "Export Story"
  },
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "*://www.fanfiction.net/*"
  ]
}
