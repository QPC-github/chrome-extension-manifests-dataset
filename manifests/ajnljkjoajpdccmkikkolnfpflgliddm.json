{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TVAbout News",
  "version": "1.0",
  "description": "Приложение на TVAbout.info, което ще ви уведомява при наличието на нови статии в сайта, за да не пропуснете нищо!",
  "icons": {
    "48": "img/ic48.png",
    "128": "img/ic128.png",
    "16": "img/ic16.png"
  },
  "browser_action": {
    "default_icon": "img/ic128.png",
    "default_title": "Новините в TVAbout.info",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "notifications"
  ]
}
