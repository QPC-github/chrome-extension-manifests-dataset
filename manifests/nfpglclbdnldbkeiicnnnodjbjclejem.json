{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Responsinator",
  "manifest_version": 2,
  "version": "0.1.0",
  "author": "Ghanshyam Katriya (anshkatriya@gmail.com)",
  "description": "Responsinator is an tool to check responsiveness of any website.",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "18": "ext_icons/icon_18.png",
      "24": "ext_icons/icon_24.png",
      "36": "ext_icons/icon_36.png",
      "48": "ext_icons/icon_48.png"
    }
  },
  "icons": {
    "18": "ext_icons/icon_18.png",
    "24": "ext_icons/icon_24.png",
    "36": "ext_icons/icon_36.png",
    "48": "ext_icons/icon_48.png"
  },
  "permissions": [
    "background"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "*"
  ]
}
