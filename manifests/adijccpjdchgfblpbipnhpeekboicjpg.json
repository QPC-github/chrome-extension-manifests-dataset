{
  "author": "Max Grass (http://maxgrass.eu)",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "description": "MG Pomodoro Timer",
  "icons": {
    "128": "icon_128.png"
  },
  "options_ui": {
