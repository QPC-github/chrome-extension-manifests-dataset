{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RobinBook",
  "description": "Check your local library for books you find on Amazon.",
  "version": "2.0.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "*://*.amazon.com/*",
    "http://*.amazon.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "robinbook.js"
      ],
      "matches": [
        "*://*.amazon.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "jquery-1.10.1.min.map"
  ]
}
