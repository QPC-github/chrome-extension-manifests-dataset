{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Busca en Poderopedia - Beta",
  "version": "0.1.9",
  "manifest_version": 2,
  "description": "Permite buscar el texto seleccionado en www.poderopedia.org",
  "homepage_url": "http://www.poderopedia.org",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
