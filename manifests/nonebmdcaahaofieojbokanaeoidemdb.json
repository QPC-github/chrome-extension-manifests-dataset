{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ElixirDoc",
  "version": "0.1",
  "manifest_version": 2,
  "description": "ElixirDoc in Chrome extension",
  "browser_action": {
    "default_icon": "imgs/ED-32.png",
    "default_title": "ElixirDoc Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "imgs/ED-32.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
