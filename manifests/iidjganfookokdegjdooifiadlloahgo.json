{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Site Block Ultimate: Best Blocker for Chrome",
  "short_name": "Site Block Ultimate",
  "version": "1.2.1",
  "description": "Block entire sites or only specific parts of sites. Blocked websites will be blocked everywhere - also blocks embeds!",
  "permissions": [
    "<all_urls>",
    "declarativeContent",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
