{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Does it use SVG?",
  "version": "1.1",
  "description": "Show an icon if a page uses SVG.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "svg-19.png",
    "default_title": "Does it use SVG?"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "24": "svg-24.png",
    "48": "svg-48.png",
    "128": "svg-128.png"
  },
  "manifest_version": 2
}
