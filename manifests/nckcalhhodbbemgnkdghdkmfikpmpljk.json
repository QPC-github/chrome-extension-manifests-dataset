{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ENKICAPT",
  "description": "For easy screen captures",
  "version": "1.0.0.3",
  "icons": {
    "16": "assets/imgs/16x16.png",
    "32": "assets/imgs/32x32.png",
    "64": "assets/imgs/64x64.png",
    "128": "assets/imgs/128x128.png"
  },
  "browser_action": {
    "default_icon": "assets/imgs/32x32.png",
    "default_title": "ENKICAPT"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval';  object-src 'self'",
  "permissions": [
    "storage",
    "identity",
    "activeTab"
  ]
}
