{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smile for FCSN",
  "short_name": "SmileForFCSN",
  "version": "1.1",
  "description": "Load Amazon Smile when you navigate to an Amazon page, in order to donate a portion of your purchase to FCSN",
  "homepage_url": "https://github.com/wangqi0316/smile-for-fcsn",
  "icons": {
    "36": "36x36.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://amazon.com/*",
    "*://www.amazon.com/*",
    "*://amazon.co.uk/*",
    "*://www.amazon.co.uk/*",
    "*://amazon.de/*",
    "*://www.amazon.de/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
