{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Rendezvous",
  "short_name": "Rendezvous",
  "version": "1.20",
  "description": "Get relevant recommendations from your friends",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "browser_action": {
    "default_title": "Rendezvous",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "24": "icons/icon-16x16.png",
      "32": "icons/icon-16x16.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    },
    "default_popup": "chrome_extension.html"
  },
  "externally_connectable": {
    "matches": [
      "*://*.rancardmobility.com/*",
      "http://localhost:8080/*"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/",
    "http://srgw.rancardmobility.com/",
    "https://maxcdn.bootstrapcdn.com/",
    "https://cdnjs.cloudflare.com/",
    "https://connect.facebook.com/",
    "https://connect.facebook.net/",
    "https://www.google-analytics.com/",
    "https://apis.google.com/",
    "https://sdk.clarifai.com/",
    "https://maps.googleapis.com/",
    "https://ecn.dev.virtualearth.net/"
  ]
}
