{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "image under cursor",
  "short_name": "image under cursor",
  "version": "1.2.0",
  "minimum_chrome_version": "49",
  "manifest_version": 2,
  "description": "open the image under the cursor in a new tab, even if the website doesnâ€™t want you to",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "image-under-cursor.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "bg.js"
    ]
  }
}
