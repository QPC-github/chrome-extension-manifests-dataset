{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TodayWeather",
  "description": "Inform how warm or cold it is today than yesterday.",
  "icons": {
    "128": "icon128.png"
  },
  "version": "0.6.3",
  "browser_action": {
    "default_title": "TodayWeather",
    "default_icon": "icon128.png",
    "default_popup": "www/index.html"
  },
  "permissions": [
    "activeTab",
    "geolocation",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
