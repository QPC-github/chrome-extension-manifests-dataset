{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hızlı Türkçe Çeviricisi",
  "description": "Seçilen İngilizce metini Google Translate aracılığıyla, tek tıkla Türkçe'ye çevirir.",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus"
  ]
}
