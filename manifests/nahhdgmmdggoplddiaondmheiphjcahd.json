{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "虎扑改造器",
  "description": "让浏览虎扑有更好的体验",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://bbs.hupu.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "jquery.min.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
