{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.3",
  "name": "Just Be Productive",
  "description": "Inspiration in your new tab and with a personal dashboard featuring focus, to-do, weather, balance etc.",
  "homepage_url": "https://www.justbeproductive.com",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "https://www.bensendigital.com/justbeproductive/*",
    "bookmarks"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/bd-16.png",
      "32": "images/bd-32.png",
      "48": "images/bd-48.png",
      "128": "images/bd-128.png"
    }
  },
  "icons": {
    "16": "images/bd-16.png",
    "32": "images/bd-32.png",
    "48": "images/bd-48.png",
    "128": "images/bd-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "landing.html"
  },
  "web_accessible_resources": [
    "images/*.*"
  ],
  "content_security_policy": "script-src 'self' https://www.bensendigital.com/justbeproductive/custom.js https://www.bensendigital.com/justbeproductive/background.js https://ssl.google-analytics.com; object-src 'self';style-src 'self' 'unsafe-inline' *;media-src *;"
}
