{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KONEKT Desktop Sharing",
  "description": "A simple extension to share your desktop with KONEKT.",
  "version": "1.1",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "konekt-logo-16x16.png",
    "48": "konekt-logo-48x48.png",
    "128": "konekt-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://albatros.oustad.tv/*"
    ]
  }
}
