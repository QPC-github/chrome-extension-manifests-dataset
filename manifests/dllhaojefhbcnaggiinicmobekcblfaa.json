{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.5",
  "name": "Benjamin Sch√§fer Amazon",
  "short_name": "Amazon Benny",
  "description": "This is an extension for my family / friends only. It's a simple page forwarding extension!",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "64": "64.png"
  },
  "browser_action": {
    "default_icon": "16.png",
    "default_popup": "popup.html"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
