  "icons": {
    "128": "capital128.png",
    "16": "capital.png",
    "32": "capital32.png",
    "48": "capital48.png"
  },
  "name": "Capital.bg",
  "permissions": [
    "tabs",
    "notifications",
    "http://www.capital.bg/*"
  ],
  "version": "0.3",
  "manifest_version": 2
}
