{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Omnifriend",
  "short_name": "Omnifriend",
  "description": "Quick access to friends' social profiles via the omnibox.",
  "version": "1.1.1",
  "author": "Ollie Terrance",
  "homepage_url": "https://github.com/OllieTerrance/Omnifriend",
  "omnibox": {
    "keyword": "friend"
  },
  "background": {
    "scripts": [
      "res/js/background.js"
    ],
    "persistent": false
  },
  "options_page": "res/html/options.html",
  "permissions": [
    "cookies",
    "storage"
  ],
  "optional_permissions": [
    "https://www.facebook.com/",
    "https://twitter.com/",
    "https://mobile.twitter.com/",
    "https://plus.google.com/"
  ],
  "icons": {
    "16": "res/img/icon-16.png",
    "48": "res/img/icon-48.png",
    "128": "res/img/icon-128.png"
  },
  "manifest_version": 2
}
