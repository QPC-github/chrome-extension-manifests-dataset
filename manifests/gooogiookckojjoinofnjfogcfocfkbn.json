{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Local Video Player in Browser",
  "short_name": "Local Video Player",
  "version": "1.0",
  "description": "Simple browser based video player to play your local computer movies, songs etc.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "homepage_url": "https://videoplayer.chromecrxstore.com/",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Play Your Local Video"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
