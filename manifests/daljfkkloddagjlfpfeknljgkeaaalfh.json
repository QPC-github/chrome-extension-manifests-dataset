{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FOTOSAP v0.83",
  "version": "0.83",
  "description": "FOTOSAP - Программа для отправки презентаций и скачивания фото с сайта Аренды Питер.",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://arenda-piter.ru/*",
    "http://internet-piter.ru/*",
    "http://ap78.ru/*",
    "http://merapoisk.ru/*",
    "http://pin7.ru/*",
    "http://fotosap.ru/*",
    "http://feedmaker.ru/*"
  ],
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "page_action": {
    "default_title": "FOTOSAP",
    "default_icon": "img/icon19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://arenda-piter.ru/*",
        "http://www.arenda-piter.ru/*",
        "http://internet-piter.ru/*",
        "http://www.internet-piter.ru/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/script.js"
      ]
    }
  ]
}
