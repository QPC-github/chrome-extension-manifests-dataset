{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Blurr",
  "version": "0.86",
  "manifest_version": 2,
  "description": "Anonymize your Digital Footprint",
  "author": "Garritt Moede",
  "icons": {
    "32": "images/hblur32.png",
    "48": "images/hblur48.png",
    "128": "images/hblur128.png"
  },
  "background": {
    "scripts": [
      "js/global.js",
      "js/background.js",
      "js/run.js"
    ]
  },
  "web_accessible_resources": [
    "js/index.html"
  ],
  "browser_action": {
    "default_title": "Blurr",
    "default_icon": "images/hblur32.png",
    "default_popup": "html/main.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "storage",
    "background"
  ]
}
