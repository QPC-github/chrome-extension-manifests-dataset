{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "short_name": "CoverageClip",
  "version": "0.0.28",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/cov-book-48.png",
    "128": "images/cov-book-48.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/cov-book-48.png",
      "38": "images/cov-book-48.png"
    },
    "default_title": "Add URLs to your CoverageBook list",
    "default_popup": "popup.html"
  }
}
