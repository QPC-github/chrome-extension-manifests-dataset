{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Simnote",
  "version": "0.1",
  "description": "One click to save selected text, with title and url auto included, to Smarterim.",
  "icons": {
    "29": "c29x29.png",
    "40": "c40x40.png",
    "60": "c60x60.png",
    "120": "c40x40x3.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "identity",
    "storage",
    "https://www.propersh.com/*"
  ],
  "options_page": "options.html"
}
