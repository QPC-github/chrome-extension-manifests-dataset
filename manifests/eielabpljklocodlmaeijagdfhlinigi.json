{
  "name": "Learnivore.com screen sharing",
  "short_name": "learnivore.com screen sharing",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.6.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Share the screen from your computer in a video conversation, to show presentations, photos and documents. ",
  "icons": {
    "128": "images/icon_128.png",
    "16": "images/icon_16.png",
    "48": "images/icon_48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.learnivore.com/*",
        "*://*.lvh.me/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "desktopCapture",
    "*://*.learnivore.com/*",
    "*://*.lvh.me/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.learnivore.com/*",
      "*://*.lvh.me/*"
    ]
  }
}
