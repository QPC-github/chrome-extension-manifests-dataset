{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "No No Mr Roboto",
  "description": "Removes the roboto font from G+ pages",
  "version": "1.1",
  "icons": {
    "16": "font16.png",
    "48": "font48.png",
    "128": "font128.png"
  },
  "permissions": [
    "tabs",
    "https://plus.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://plus.google.com/*"
      ],
      "js": [
        "background.js"
      ]
    }
  ]
}
