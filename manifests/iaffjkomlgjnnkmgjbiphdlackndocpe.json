{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Totul despre cumparaturi online",
  "version": "1.0.6",
  "manifest_version": 2,
  "description": "Primesti instant ultimele noutati legate de reducerile, ofertele si promotii de Black Friday din magazinele online din Romania.",
  "homepage_url": "https://www.cumparama.com",
  "icons": {
    "16": "icons/cumparama-icon-16.png",
    "32": "icons/cumparama-icon-32.png",
    "48": "icons/cumparama-icon-48.png",
    "64": "icons/cumparama-icon-64.png",
    "128": "icons/cumparama-icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/cumparama-icon-32.png"
  },
  "default_locale": "ro",
  "options_page": "src/bg/options.html",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "https://www.google.com/*",
    "http://www.google.com/*",
    "notifications"
  ]
}
