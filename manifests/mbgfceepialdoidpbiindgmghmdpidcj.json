{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Go Aller",
  "version": "1.2",
  "description": "Open 'Google Translate' page to look up selected text.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/go-aller-128.png",
    "default_title": "Translate Text",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/go-aller-128.png"
  }
}
