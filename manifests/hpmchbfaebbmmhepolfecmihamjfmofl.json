{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Trusty Search Assistant for Amazon",
  "short_name": "Trusty Search",
  "version": "1.0.7",
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/s*",
        "*://*.amazon.co.uk/s*",
        "*://*.amazon.ca/s*",
        "*://*.amazon.de/s*",
        "*://*.amazon.it/s*",
        "*://*.amazon.es/s*",
        "*://*.amazon.fr/s*",
        "*://*.amazon.com.br/s*",
        "*://*.amazon.in/s*"
      ],
      "css": [
        "lib/jquery-ui.min.css",
        "lib/rangeslider.css",
        "main.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/jquery-ui.min.js",
        "lib/rangeslider.min.js",
        "lib/lodash.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "trusty-bar.html",
    "lib/trusty-logo-grey.gif"
  ],
  "browser_action": {
    "default_title": "Trusty Search",
    "default_icon": "lib/icon16.png"
  },
  "icons": {
    "16": "lib/icon16.png",
    "48": "lib/icon48.png",
    "128": "lib/icon128.png"
  },
  "permissions": [
    "activeTab",
    "*://*.amazon.com/s*",
    "*://*.amazon.co.uk/s*",
    "*://*.amazon.ca/s*",
    "*://*.amazon.de/s*",
    "*://*.amazon.it/s*",
    "*://*.amazon.es/s*",
    "*://*.amazon.fr/s*",
    "*://*.amazon.com.br/s*",
    "*://*.amazon.in/s*"
  ]
}
