{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XYLO Cast - Chrome Podcast Manager",
  "short_name": "XYLO Cast",
  "description": "Streaming podcast manager for Chrome.",
  "version": "1.1.1.2",
  "version_name": "1.1.1b",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "storage"
  ]
}
