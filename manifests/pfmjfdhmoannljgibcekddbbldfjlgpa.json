{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Greek TV",
  "description": "Greek tv controller",
  "version": "1.2.1",
  "icons": {
    "128": "icon3.png"
  },
  "browser_action": {
    "default_icon": "icon19x19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://connect.facebook.net/el_GR/sdk.js; object-src 'self'"
}
