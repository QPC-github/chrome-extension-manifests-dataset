{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CommentsPlus",
  "version": "1.0.848.74",
  "description": "Voice your opinion in a fun, fast and easy way with CommentsPlus",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "brand.js",
      "bg.js",
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    },
    "default_title": "Voice your opinion in a fun, fast and easy way with CommentsPlus"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*.comments-plus.com/*",
    "https://service.prsstobe.com/*",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "icons/checker.gif"
  ]
}
