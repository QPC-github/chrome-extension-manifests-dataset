{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SAML SSO for Chrome Apps",
  "description": "Helper extension for admins to configure SAML SSO for Chrome apps.",
  "version": "1.0",
  "manifest_version": 2,
  "storage": {
    "managed_schema": "schema.json"
  },
  "permissions": [
    "cookies",
    "storage",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
