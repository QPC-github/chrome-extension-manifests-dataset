{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Webisaac Blog",
  "version": "2.0",
  "description": "Receba em primeira mão as novidades de Marketing Digital, SEO e Google Docs do Blog Webisaac.",
  "icons": {
    "48": "img/webisaac_seo_e_google_docs_OmO_icon.ico",
    "16": "img/webisaac_seo_e_google_docs_OmO_icon.ico",
    "128": "img/webisaac-icon-chrome.png"
  },
  "browser_action": {
    "default_icon": "img/webisaac-icon-chrome.png",
    "default_title": "Receba novidades em primeira mão sobre o MKT Digital.",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "notifications"
  ]
}
