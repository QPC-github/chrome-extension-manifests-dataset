{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon-transparent-19.png",
      "38": "img/icon-transparent-38.png"
    },
    "default_title": "Panda"
  },
  "chrome_url_overrides": {
    "newtab": "index.html#/"
  },
  "content_security_policy": "script-src 'self' https://*.pnd.gs https://ssl.google-analytics.com https://*.twitter.com https://*.thestocks.im https://*.braintreegateway.com 'unsafe-eval'; object-src 'self'",
  "description": "Find the best content. Be informed. Stay inspired.",
  "icons": {
    "128": "img/icon-128.png",
    "16": "img/icon-16.png",
    "48": "img/icon-48.png"
  },
  "manifest_version": 2,
  "name": "Panda 5 | News & Inspiration Dashboard",
  "optional_permissions": [
    "https://query.yahooapis.com/v1/public/yql",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs"
  ],
  "permissions": [
    "storage"
  ],
  "version": "1.0",
  "web_accessible_resources": [
    "index.html",
    "index.html/*"
  ]
}
