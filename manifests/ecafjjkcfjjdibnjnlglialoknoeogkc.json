{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Furigana hider",
  "short_name": "Furigana hider",
  "description": "Simple way to get hide/show furigana in <ruby><rt> tags.",
  "version": "0.9.3",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "sys.min.js",
        "chrome.min.js",
        "cs.min.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon016.png",
    "32": "icons/icon032.png",
    "48": "icons/icon048.png",
    "64": "icons/icon064.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
