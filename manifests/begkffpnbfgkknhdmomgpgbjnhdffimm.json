{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EduvesLive EkranPaylasim Uzantisi",
  "author": "EduvesLive",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "EduvesLive sanalsinif ve e-toplantilarinda WebRTC ekran yakalama yetenekleri sağlayan Chrome Uzantısı.",
  "homepage_url": "https://www.eduves.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.eduves.com/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
