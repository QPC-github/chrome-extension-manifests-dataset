{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ShopperStopper",
  "short_name": "Shopper Stopper",
  "version": "0.0.18",
  "manifest_version": 2,
  "description": "Shopper Stopper",
  "homepage_url": "https://shopperstopper.plexus.support",
  "icons": {
    "16": "icons/128.png",
    "48": "icons/128.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "content_script/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_title": "Shopper Stopper",
    "default_popup": "popup/pluginpopup.html"
  },
  "permissions": [
    "cookies",
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://beta.shopperstopper.co.uk/*",
        "*://shopperstopper.co.uk/*",
        "*://www.shopperstopper.co.uk/*",
        "*://192.168.1.118/*",
        "*://127.0.0.1/*",
        "*://shopperstopper.plexus.support/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "content_script/contentscript.js"
      ],
      "css": [
        "css/inject.css"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://beta.shopperstopper.co.uk/*",
      "*://shopperstopper.co.uk/*",
      "*://www.shopperstopper.co.uk/*",
      "*://192.168.1.118/*",
      "*://127.0.0.1/*",
      "*://shopperstopper.plexus.support/*"
    ]
  },
  "web_accessible_resources": [
    "icons/*.png"
  ]
}
