{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "O Tempo - Cinema",
  "description": "Veja o que está em cartaz nos cinemas de Belo Horizonte e região metropolitana.",
  "icons": {
    "128": "icon_128.png"
  },
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "background",
    "notifications",
    "http://*/",
    "https://*/",
    "http://www.otempo.com.br/",
    "http://dev.otempo.com.br/",
    "http://*.google.com/",
    "https://maps.google.com/"
  ],
  "background": {
    "scripts": [
      "popup_files/jquery.min.js",
      "aes.js",
      "background.js"
    ]
  }
}
