{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Image Remover",
  "version": "1.0",
  "permissions": [
    "background",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "imgremove.png"
  },
  "browser_action": {
    "default_title": "Click to remove all images",
    "default_icon": "imgremove.png"
  },
  "manifest_version": 2,
  "short_name": "Image Remover"
}
