{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tabbit",
  "author": "Zektek",
  "version": "0.1.3",
  "manifest_version": 2,
  "description": "A fresh image from Reddit each time you open a new tab.",
  "homepage_url": "http://zektek.com",
  "icons": {
    "16": "/src/img/icons/extension_1x.png",
    "48": "/src/img/icons/extension_2x.png"
  },
  "default_locale": "en",
  "background": {
    "page": "/src/background.html",
    "persistent": true
  },
  "chrome_url_overrides": {
    "newtab": "/src/tab.html"
  },
  "options_ui": {
    "page": "/src/options.html",
    "chrome_style": true
  },
  "permissions": [
    "cookies",
    "storage",
    "notifications",
    "tabs",
    "alarms",
    "geolocation",
    "http://*/*",
    "https://*/*"
  ]
}
