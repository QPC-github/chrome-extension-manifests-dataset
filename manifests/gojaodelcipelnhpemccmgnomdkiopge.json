{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Webphone",
  "description": "Webphone速 Web Suite Extension速 Share Screen & Desktop Sharing",
  "version": "1.2.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Webphone速 Web Suite Extension速 Share Screen & Desktop Sharing"
  },
  "permissions": [
    "desktopCapture",
    "tabCapture",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
