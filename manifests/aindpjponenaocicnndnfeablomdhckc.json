{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CoinBalance.org Extension",
  "description": "A widget to show your ROI from the CoinBalance.org website",
  "version": "1.0",
  "permissions": [
    "storage",
    "https://coinbalance.org/*",
    "http://coinbalance.lcl/*",
    "background",
    "notifications"
  ],
  "background": {
    "scripts": [
      "frameworks/jquery-2.2.2.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}
