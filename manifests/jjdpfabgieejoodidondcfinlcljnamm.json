{
  "name": "Everything is Druzhko",
  "description": "Replaces all images with photos of Druzhko",
  "version": "1.0",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "druzhko.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "128": "128.png",
    "16": "16.png"
  },
  "browser_action": {
    "default_title": "Everything is Druzhko"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2
}
