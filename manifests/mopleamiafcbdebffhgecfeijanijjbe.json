{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Quickiepedia",
  "short_name": "Una sveltina con la conoscenza",
  "description": "Scegli una parola e cercala su Wikipedia!",
  "version": "1.1",
  "icons": {
    "16": "favicon16.png",
    "48": "favicon48.png",
    "128": "favicon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "https://en.wikipedia.org/",
    "https://it.wikipedia.org/"
  ],
  "browser_action": {
    "default_icon": "favicon128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
