{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Absolute Free WordReference Dict. \r\n(Ctrl+Q)",
  "short_name": "WR(Ctrl+Q)",
  "description": "This extension allows the user to look up the selected word in wordreference.com dictionary in all languages. Absolutely Free",
  "version": "1.5",
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon144.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Q",
        "mac": "Ctrl+Q",
        "chromeos": "Ctrl+Q",
        "linux": "Ctrl+Q"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "windows": "Ctrl+Q",
        "mac": "Ctrl+Q"
      }
    }
  },
  "browser_action": {
    "default_icon": "icons/icon96.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' chrome-extension-resource:  ; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage"
  ]
}
