{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Buscador.com",
  "short_name": "Buscador.com",
  "version": "1.1",
  "description": "Extensi√≥n de Buscador.com para Chrome",
  "manifest_version": 2,
  "omnibox": {
    "keyword": "b"
  },
  "chrome_settings_overrides": {
    "homepage": "https://www.buscador.com",
    "search_provider": {
      "name": "Buscador.com",
      "keyword": "busca",
      "search_url": "https://www.buscador.com/search?q={searchTerms}",
      "favicon_url": "https://www.buscador.com/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    },
    "startup_pages": [
      "https://www.buscador.com"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "buscador.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.buscador.com/*",
        "https://*.buscador.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon32.png",
    "48": "icon64.png",
    "128": "icon128.png"
  }
}
