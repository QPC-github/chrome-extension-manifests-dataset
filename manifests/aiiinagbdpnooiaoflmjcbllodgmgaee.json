{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "js": [
        "content_scripts/open_chouti.js",
        "content_scripts/block_unwanted.js",
        "content_scripts/down_pictures.js"
      ],
      "matches": [
        "*://dig.chouti.com/*"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "options_page": "options_pages/options.html",
  "background": {
    "scripts": [
      "background_pages/background.js"
    ]
  },
  "permissions": [
    "downloads",
    "tabs"
  ],
  "description": "抽屉辅助工具",
  "icons": {
    "128": "icons/icon_128.png"
  },
  "manifest_version": 2,
  "name": "Chouti Assistant Tool",
  "version": "1.0.0"
}
