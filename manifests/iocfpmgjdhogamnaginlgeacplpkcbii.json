{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HA Block - Quản lý thời gian sử dụng MXH",
  "version": "1.2",
  "description": "HA Block là công cụ giúp bạn có thể quản lý thời gian sử dụng mạng xã hội hiệu quả",
  "author": "Lê Tuấn Anh",
  "browser_action": {
    "default_title": "HA Block",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "jquery.js",
        "fb.js"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "jquery.js",
        "yt.js"
      ]
    },
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "jquery.js",
        "ld.js"
      ]
    },
    {
      "matches": [
        "*://*.zalo.me/*"
      ],
      "js": [
        "jquery.js",
        "zl.js"
      ]
    },
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "jquery.js",
        "insta.js"
      ]
    },
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "jquery.js",
        "twitter.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
