{
  "author": "CCBST",
  "background": {
    "persistent": true,
    "scripts": [
      "background-script.js"
    ]
  },
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to CCBST meetings.",
  "externally_connectable": {
    "matches": [
      "*://*.ccbst.info/*"
    ]
  },
  "homepage_url": "https://ccbst.info/",
  "icons": {
    "48": "icon.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "CCBST Screenshare Extension",
  "permissions": [
    "desktopCapture"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.12",
  "web_accessible_resources": [
    "icon.png"
  ]
}
