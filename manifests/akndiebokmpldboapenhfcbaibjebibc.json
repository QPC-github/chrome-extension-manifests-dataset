{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BTC Convert Extension",
  "description": "A simple BTC currency converter",
  "version": "0.12",
  "browser_action": {
    "default_icon": "ext-icon_128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "ext-icon_16.png",
    "48": "ext-icon_48.png",
    "128": "ext-icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js"
      ],
      "all_frames": false
    }
  ]
}
