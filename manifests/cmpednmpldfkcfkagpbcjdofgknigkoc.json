{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DELTA tracer",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "Amazon.co.jpの商品ページ上に価格・ランキング履歴のチャートを表示します。",
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.co.jp/*"
      ],
      "js": [
        "jquery-3.1.1.min.js",
        "main.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "background",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "*://delta-tracer.com/*",
    "*://*.amazon.co.jp/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  }
}
