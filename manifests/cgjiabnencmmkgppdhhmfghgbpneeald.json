{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FinancialJuice Screen Sharing",
  "author": "FinancialJuice",
  "version": "1.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for http://www.financialjuice.com to enable screen capture.",
  "homepage_url": "http://www.financialjuice.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://www.financialjuice.com/*",
      "https://*.financialjuice.com/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo48.png"
  ]
}
