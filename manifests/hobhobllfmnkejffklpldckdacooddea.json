{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "description": "Redirects old BlitzBasic forum URLs to point to the archive.",
  "icons": {
    "128": "icon/128.png",
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png"
  },
  "manifest_version": 2,
  "name": "BlitzBasic Archive Redirector",
  "permissions": [
    "<all_urls>",
    "webRequestBlocking",
    "webRequest"
  ],
  "version": "1.3"
}
