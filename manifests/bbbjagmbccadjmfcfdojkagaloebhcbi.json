{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Intelligent Search - By LCS",
  "description": "First Chrome App powered by LCS.",
  "version": "0.1.6",
  "author": "Juturu Sanathan",
  "short_name": "Intelligent Search LCS",
  "manifest_version": 2,
  "options_page": "index.html",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; image-src *",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "ievolve_16.png",
    "48": "ievolve_128.png",
    "128": "ievolve_128.png"
  }
}
