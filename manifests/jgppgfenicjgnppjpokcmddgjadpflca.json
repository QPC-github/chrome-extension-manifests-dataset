{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Temporary Tabs",
  "description": "Temporary Tabs lets you open a link in a Tab with a timer associated with it. Once the timer expires, the tab closes automatically.",
  "version": "1.0.2",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "https://*/*",
    "http://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
