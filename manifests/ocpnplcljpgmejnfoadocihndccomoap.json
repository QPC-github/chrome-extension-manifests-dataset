{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Progressive Downloader Extension",
  "description": "Bridge between Google Chrome and Progressive Downloader.",
  "version": "1.14",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "tabs",
    "cookies",
    "storage",
    "downloads",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
