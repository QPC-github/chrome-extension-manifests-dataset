{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "...But whats its rating?",
  "version": "1.3",
  "browser_action": {
    "default_icon": "IMDb-icon.png",
    "default_title": "Get IMDb rating for selected text"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "http://www.omdbapi.com/*",
    "https://m.media-amazon.com/images/*"
  ],
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "icons": {
    "16": "IMDb-icon.png",
    "48": "IMDb-icon.png"
  }
}
