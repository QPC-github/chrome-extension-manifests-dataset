{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "5miles for Chrome",
  "short_name": "5miles",
  "description": "Recommend for second hand goods",
  "version": "1.0.3",
  "permissions": [
    "idle",
    "http://*/*",
    "https://*/*",
    "notifications",
    "background",
    "tabs",
    "cookies"
  ],
  "background": {
    "page": "background_page.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*"
      ],
      "css": [
        "css/five_content.css"
      ],
      "js": [
        "js/plugin/jquery-2.1.4.js",
        "js/plugin/angular.min.js",
        "js/settings.js",
        "js/content_scripts/amazon.js",
        "js/content_scripts/base.js"
      ]
    },
    {
      "matches": [
        "*://www.ebay.com/*"
      ],
      "css": [
        "css/five_content.css"
      ],
      "js": [
        "js/plugin/jquery-2.1.4.js",
        "js/angular.min.js",
        "js/settings.js",
        "js/content_scripts/ebay.js",
        "js/content_scripts/base.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "img/icon.png",
    "img/search_icon.png",
    "img/close_icon.png",
    "popup.html"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  }
}
