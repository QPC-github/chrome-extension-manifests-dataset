{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PriceFox",
  "description": "This extension will compare product prices",
  "version": "1.1",
  "icons": {
    "16": "pricefox16.png",
    "48": "pricefox48.png",
    "128": "pricefox128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "pricefox.css"
      ],
      "js": [
        "pricefox.js"
      ]
    }
  ]
}
