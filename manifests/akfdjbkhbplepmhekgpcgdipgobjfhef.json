{
  "version": "1.0.0.1001",
  "manifest_version": 2,
  "minimum_chrome_version": "18.0.0.0",
  "default_locale": "zh_CN",
  "name": "__MSG_default_title__",
  "description": "__MSG_description__",
  "icons": {
    "16": "img/19.png",
    "19": "img/19.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "page": "bg.html"
  },
  "browser_action": {
    "default_icon": "img/19.png",
    "default_popup": "pop.html"
  },
  "content_scripts": [
    {
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/content.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "pop.html"
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "storage",
    "cookies"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
