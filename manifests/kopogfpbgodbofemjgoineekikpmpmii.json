{
  "name": "PixTeller",
  "version": "0.02",
  "description": "Create your own designs for Social Media, Website, Blog, Covers, Flyers, Invitations, Presentations and more.",
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "PixTeller"
  },
  "icons": {
    "192": "192.png",
    "128": "128.png",
    "96": "96.png",
    "32": "32.png",
    "16": "16.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ]
}
