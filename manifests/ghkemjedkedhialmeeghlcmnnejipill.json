{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Snapbird",
  "description": "Connects Snapbird to your Twitter account",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "cookies",
    "tabs",
    "https://*.twitter.com/"
  ],
  "browser_action": {
    "default_title": "Connect to Snapbird",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon32x32@2x.png",
    "48": "icon32x32@2x.png",
    "128": "icon128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
