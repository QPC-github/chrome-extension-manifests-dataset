{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RLive Radio Live",
  "version": "2.9.2",
  "description": "גישה מהירה לתחנות הרדיו המועדפות שלך ולתחנות רדיו מובילות מאתר RLive.co.il לגישה מהירה ופשוטה",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_popup": "popup.html",
    "default_title": "RLive רדיו לייב"
  },
  "short_name": "RLive",
  "homepage_url": "https://www.rlive.co.il/",
  "web_accessible_resources": [
    "img/TopRadio-play.png"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "https://*.rlive.co.il/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.rlive.co.il/*"
    ]
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}
