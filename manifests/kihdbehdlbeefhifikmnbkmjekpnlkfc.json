{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cookie Manager",
  "description": "Manage Multiple Cookie using this Extension.",
  "version": "1.0.1",
  "icons": {
    "16": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon32.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "bgCookieManager.js",
      "jquery.min.js"
    ]
  },
  "content_scripts": [],
  "web_accessible_resources": [
    "/scripts/*"
  ],
  "permissions": [
    "tabs",
    "<all_urls>",
    "unlimitedStorage",
    "cookies",
    "storage",
    "activeTab"
  ]
}
