{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Wow Tooltip Interpreter",
  "short_name": "WTI",
  "description": "This extension is aimed to translate on the go tooltip from World Of Warcraft fansite to your desired language.",
  "version": "0.1.4",
  "icons": {
    "16": "icons/icon_standard16.png",
    "48": "icons/icon_standard48.png",
    "128": "icons/icon_standard128.png"
  },
  "browser_action": {
    "default_title": "Translate Wow tooltip if possible !"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": false
  },
  "author": "Gargam"
}
