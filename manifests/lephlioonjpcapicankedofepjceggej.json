{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Czapucha: Wykrywanie tematów w tekście.",
  "short_name": "Czapucha - Tematy",
  "description": "Wtyczka służy do automatycznego wykrywania tematów w zaznaczonym tekście.",
  "version": "1.0.5",
  "icons": {
    "16": "icons/czapucha-logo-T-16.png",
    "32": "icons/czapucha-logo-T-32.png",
    "48": "icons/czapucha-logo-T-48.png",
    "128": "icons/czapucha-logo-T-128.png"
  },
  "browser_action": {
    "default_icon": "icons/czapucha-logo-T-128.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "activeTab",
    "tabs",
    "webNavigation"
  ]
}
