{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Weather for Chrome",
  "version": "1.3.4",
  "description": "America, Europe, Asia, Africa... all world weather forecast. Perfect Weather Forecast extension for Chrome simple and accurate.",
  "permissions": [
    "https://api.openweathermap.org/",
    "storage",
    "activeTab",
    "geolocation"
  ],
  "background": {},
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/img/icon/icon-16.png",
      "32": "assets/img/icon/icon-32.png",
      "128": "assets/img/icon/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/img/icon/icon-16.png",
    "32": "assets/img/icon/icon-32.png",
    "128": "assets/img/icon/icon-128.png"
  }
}
