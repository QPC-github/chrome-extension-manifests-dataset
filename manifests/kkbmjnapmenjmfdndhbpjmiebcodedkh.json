{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KW Index Checker and Amazon Rank Tracker",
  "version": "0.0.2.7",
  "description": "Check the indexing and ranks of all your Amazon \"Phrase\" and \"Back End\" keywords (Search Terms) in minutes, all for free.",
  "icons": {
    "128": "icon-128x128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "*://*.wordtree.io/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.es/*",
    "*://*.amazon.it/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.wordtree.io/*"
      ],
      "js": [
        "jquery.js",
        "inject.js"
      ]
    }
  ]
}
