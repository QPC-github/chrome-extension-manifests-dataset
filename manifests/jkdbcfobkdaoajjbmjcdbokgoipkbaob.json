{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "IMDb Context Menu",
  "description": "Adds a context menu item upon selecting text and right clicking it, then searches IMDb for it.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "javascript.js"
    ]
  },
  "manifest_version": 2
}
