{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Redirect HN to Premii",
  "short_name": "HN2Premii",
  "version": "0.0.1",
  "description": "Redirects all HN requests to hn.premii.com.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://news.ycombinator.com/"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
