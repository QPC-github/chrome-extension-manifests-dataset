{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Wordphy",
  "author": "Jhon Trejos",
  "version": "0.1",
  "description": "Usa el diccionario del navegador para que resalte palabras con errores de ortograf√≠a.",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "contentMode.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Wordphy",
    "default_icon": "img/icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}
