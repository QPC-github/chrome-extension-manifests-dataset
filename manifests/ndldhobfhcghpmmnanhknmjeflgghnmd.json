{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cipafilter Authenticator",
  "description": "Authenticate with Cipafilter",
  "version": "0.1.2",
  "permissions": [
    "background",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "alarms",
    "proxy",
    "*://*/"
  ],
  "icons": {
    "16": "gfx/icon16.png",
    "48": "gfx/icon48.png",
    "128": "gfx/icon128.png"
  },
  "browser_action": {
    "default_icon": "gfx/icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": true
  }
}
