{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "On Heroku",
  "description": "This extension says if an app is running on heroku.",
  "version": "1.0",
  "icons": {
    "48": "heroku48.png",
    "128": "heroku128.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://on-heroku.herokuapp.com/",
    "storage",
    "tabs"
  ],
  "page_action": {
    "default_icon": "heroku.png"
  }
}
