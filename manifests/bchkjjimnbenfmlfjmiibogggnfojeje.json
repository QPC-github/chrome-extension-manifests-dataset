{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "0.0.48",
  "manifest_version": 2,
  "description": "To use this application simply click the breedtv icon in your toolbar. You will get a personalized video recommended to you.",
  "icons": {
    "16": "images/btv-logo-sm.png",
    "128": "images/btv-logo.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/btv-logo-sm.png",
      "38": "images/btv-logo.png"
    },
    "default_title": "breedtv",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "omnibox": {
    "keyword": "breedtv"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
