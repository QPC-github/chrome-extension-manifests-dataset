{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "default_locale": "en",
  "name": "Cheap Flight & Hotel - FlightHint",
  "description": "Search for flight or hotel on flighthint.com",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Book Flights & Hotels",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  },
  "permissions": [
    "tabs"
  ]
}
