{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Valentine quotes",
  "description": "Valentine quotes from authors, artists, scientists and also from a few movies",
  "version": "0.0.4",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "valentine.html"
  },
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Rita",
        "lang": "en-US",
        "gender": "female",
        "remote": true,
        "event_types": [
          "start",
          "marker",
          "end"
        ]
      }
    ]
  },
  "permissions": [
    "activeTab",
    "tts",
    "storage",
    "ttsEngine"
  ]
}
