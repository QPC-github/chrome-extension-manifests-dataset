{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Flight Search",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Search for cheap flights quickly and easily",
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Flight Search",
    "default_popup": "popdown.html"
  },
  "permissions": [
    "notifications",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://s3.amazonaws.com; object-src 'self'"
}
