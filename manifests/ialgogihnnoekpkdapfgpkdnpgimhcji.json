{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TMXC URL Shortener",
  "short_name": "URL shortener",
  "version": "1",
  "description": "Сокращатель ссылок",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "author": "Bakli",
  "browser_action": {
    "default_icon": {
      "19": "img/19.png",
      "38": "img/38.png"
    },
    "default_title": "Сократить ссылку",
    "default_popup": "popup.html"
  },
  "options_page": "history.html",
  "permissions": [
    "http://tmxc.ru/*",
    "clipboardWrite",
    "tabs",
    "storage"
  ]
}
