{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "cheaper.ly",
  "description": "Add products to cheaper.ly from your browser.",
  "version": "0.1.5",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/",
    "http://*.cheaper.ly/",
    "https://*.cheaper.ly/",
    "http://*.cheaperly.com/",
    "https://*.cheaperly.com/"
  ]
}
