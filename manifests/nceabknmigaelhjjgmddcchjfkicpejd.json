{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SubjectMatter Screenshare Extension",
  "author": "SubjectMatter",
  "version": "4.2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to SubjectMatter meetings.",
  "homepage_url": "https://subjectmatter.me/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.bigbluebutton.org/*",
      "*://*.subjectmatter.me/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
