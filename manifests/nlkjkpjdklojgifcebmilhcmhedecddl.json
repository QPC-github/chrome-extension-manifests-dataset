{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Auto Invite for Facebook",
  "version": "1.0",
  "description": "Increase your page likes! This extension automatically invites Facebook post likers to like your page as well.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*",
    "http://web.facebook.com/*",
    "https://web.facebook.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 2
}
