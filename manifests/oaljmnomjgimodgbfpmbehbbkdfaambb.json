{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "UTM Tracking Url Builder for Google Analytics",
  "short_name": "UTM Tracking",
  "version": "0.2.5",
  "manifest_version": 2,
  "description": "Add utm_medium, utm_source and other tracking parameters to your links",
  "icons": {
    "16": "images/16x16.png",
    "128": "images/128x128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/19x19.png",
      "38": "images/38x38.png"
    },
    "default_title": "Google Analytics UTM Tracking URL Builder",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ]
}
