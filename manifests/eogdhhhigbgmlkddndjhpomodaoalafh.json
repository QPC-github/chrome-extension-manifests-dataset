{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TabTuner",
  "description": "Automatically pause or play videos on pages when switching between tabs. ",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "*://*/",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "tabtuner_128_transparent.png",
    "default_title": "TabTuner"
  },
  "icons": {
    "16": "tabtuner_16_transparent.png",
    "48": "tabtuner_48_transparent.png",
    "128": "tabtuner_128_transparent.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
