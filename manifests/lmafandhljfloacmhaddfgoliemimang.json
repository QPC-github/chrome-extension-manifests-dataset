{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Quit Quitting Chrome",
  "version": "1.2",
  "description": "Never accidentally quit Chrome again. Just leave this tab open and your browser won't be closed automatically!",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "management",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/quitqutting.png",
      "32": "images/quitqutting.png",
      "48": "images/quitqutting.png",
      "128": "images/quitqutting.png"
    }
  },
  "icons": {
    "16": "images/quitqutting.png",
    "32": "images/quitqutting.png",
    "48": "images/quitqutting.png",
    "128": "images/quitqutting.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
