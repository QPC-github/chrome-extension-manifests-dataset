{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BA Avios Shopping",
  "version": "0.1",
  "description": "Shows an alert for pages where you could earn Avios by Spending",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Get Avios!"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "manifest_version": 2
}
