{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "plusTab",
  "version": "1.0",
  "description": "Custom new tab page with bookmark integration",
  "manifest_version": 2,
  "permissions": [
    "https://*.google.com/",
    "bookmarks",
    "storage"
  ],
  "icons": {
    "16": "images/plus-16.png",
    "48": "images/plus-48.png",
    "128": "images/plus-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
