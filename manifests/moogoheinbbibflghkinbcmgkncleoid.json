{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Clean on Refresh",
  "version": "1.2",
  "description": "Automatically clear clutter on refresh.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://apps.facebook.com/kingdomsofcamelot/*",
    "tabs",
    "storage",
    "browsingData",
    "declarativeContent",
    "history"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "imgs/16.png",
      "32": "imgs/32.png"
    }
  }
}
