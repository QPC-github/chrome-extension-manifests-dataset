{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NebogameClient Chrome Extension",
  "version": "1.0.3",
  "description": "Расширение помогает пользователям скопировать Cookie для авторизации в NebogameClient",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "cookies",
    "*://nebogame.com/*"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
