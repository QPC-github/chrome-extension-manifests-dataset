{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ruler 3000",
  "version": "1.0",
  "description": "Displays a line to be used as a ruler for aligning items.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "name": "Ruler 3000"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2
}
