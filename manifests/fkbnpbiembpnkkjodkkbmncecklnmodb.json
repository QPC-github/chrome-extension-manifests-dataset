{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Rails 2/3 Guides redirect",
  "version": "2.0.3",
  "manifest_version": 2,
  "description": "Automatically redirect Rails Guide pages to their Rails 2 or 3 equivalent",
  "icons": {
    "16": "images/icons/icon_16.png",
    "48": "images/icons/icon_48.png",
    "128": "images/icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/app.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icons/icon_16.png",
    "default_name": "Rails 2/3 Guides redirect",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs"
  ]
}
