{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ILE / Uczę się angielskiego by AFYA.pl",
  "description": "Po podwójnym kliknięciu w słowo usłyszysz jego wymowę, automatycznie otworzy się również jego tłumaczenie!",
  "version": "1.0.3",
  "icons": {
    "128": "icon_128.png",
    "64": "icon_64.png",
    "48": "icon_48.png"
  },
  "page_action": {
    "default_title": "ILE by AFYA.pl",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "script1.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://www.howjsay.com/*",
    "http://ling.pl/*",
    "http://afya.pl/*",
    "http://wizyty.afya.pl/*",
    "contextMenus"
  ]
}
