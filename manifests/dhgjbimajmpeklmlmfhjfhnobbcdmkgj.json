{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Obleť Svět - hlídač akčních letenek",
  "short_name": "obletsvet.cz",
  "description": "Upozornění na nové tipy na obletsvet.cz ihned po publikování.",
  "options_page": "options.html",
  "version": "1.0.3",
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Obleť Svět - notifikace"
  },
  "background": {
    "scripts": [
      "/js/background.js",
      "/js/core.js",
      "/js/functions.js",
      "/js/options.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://obletsvet.cz/",
    "https://obletsvet.cz/"
  ]
}
