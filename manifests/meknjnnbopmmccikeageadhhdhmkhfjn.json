{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Feature Bee Extension",
  "version": "0.7.2",
  "description": "A chrome extension to support the using of FeatureBee",
  "permissions": [
    "tabs",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "webRequest",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "chrome/injector.js"
    ]
  },
  "browser_action": {
    "default_title": "FeatureBee Chrome Extension",
    "default_icon": "data/img/bee.png"
  },
  "icons": {
    "16": "data/img/bee_16.png",
    "48": "data/img/bee_48.png",
    "128": "data/img/bee_128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "data/css/styles.css",
    "data/js/Presenter.js",
    "data/js/Repository.js",
    "data/js/chrome/FeatureBeeClientInterface.js",
    "data/img/logo.png",
    "data/img/help.png",
    "data/img/bt_export.png",
    "data/img/openIeAndSmartphone.png",
    "data/img/bt_smartphone.png"
  ]
}
