{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "知乎阅读盒子",
  "description": "一款美化知乎页面的插件",
  "version": "2.0",
  "manifest_version": 2,
  "icons": {
    "64": "icon_64.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "知乎阅读盒子"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.zhihu.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "main.js"
      ]
    }
  ]
}
