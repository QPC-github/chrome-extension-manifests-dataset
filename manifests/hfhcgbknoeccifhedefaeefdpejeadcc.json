{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Wearealexander Pulse Desktop Streamer",
  "description": "A screen share chrome extension for Wearealexander Pulse",
  "version": "0.2.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo16x16.png",
    "48": "logo48x48.png",
    "128": "logo128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://pulse.wearealexander.com/*"
    ]
  }
}
