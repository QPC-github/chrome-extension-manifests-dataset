{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Polcode Desktop Sharing",
  "description": "An extension that allows you to share your desktop with Polcode",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "polcode-16x16.png",
    "48": "polcode-48x48.png",
    "128": "polcode-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://jitsi.polcode.com/*"
    ]
  }
}
