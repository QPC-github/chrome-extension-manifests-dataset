{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Boardhub Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Boardhub Meet and Boardhub Videobridge.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "boardhub-logo-16x16.png",
    "48": "boardhub-logo-48x48.png",
    "128": "boardhub-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://app.boardhub.io/*"
    ]
  }
}
