{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mark Attendance",
  "version": "1.0",
  "description": "Chrome extension for marking attendance",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/default.png"
  },
  "manifest_version": 2
}
