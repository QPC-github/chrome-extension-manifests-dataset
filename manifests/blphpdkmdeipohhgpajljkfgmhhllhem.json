{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reload Crashed Tabs",
  "description": "Automatically reload active tabs that have crashed.",
  "version": "0.1",
  "icons": {
    "48": "icon48.png",
    "80": "icon80.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
