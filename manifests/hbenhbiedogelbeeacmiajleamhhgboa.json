{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MaxtheMiles Avios Notifyer",
  "version": "1.0",
  "description": "Alerts you to shop via the British Airways gate365 shopping portal when visiting merchants that offer Avios",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    "*.png"
  ],
  "icons": {
    "16": "goldprop.png",
    "48": "goldprop.png",
    "128": "goldprop.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "js.css"
      ]
    }
  ]
}
