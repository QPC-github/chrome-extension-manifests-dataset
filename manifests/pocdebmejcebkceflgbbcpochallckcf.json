{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Thread Hider for The Bore",
  "version": "1.0.4",
  "description": "Hide threads of your choosing on thebore.com.",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://www.thebore.com/forum/index.php?board=*",
        "http://www.thebore.com/forum/index.php?*board=*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ]
}
