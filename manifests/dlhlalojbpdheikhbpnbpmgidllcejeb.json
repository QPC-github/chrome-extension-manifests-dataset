{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "'Cards View' Filter for Trello",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Small extension that adds filtering by list in Trello's 'Cards' view.",
  "content_scripts": [
    {
      "js": [
        "filter.js"
      ],
      "css": [
        "filter.css"
      ],
      "matches": [
        "*://trello.com/*"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "icons": {
    "48": "trello-card-filter-48.png",
    "128": "trello-card-filter-128.png"
  }
}
