{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Admicro's Ads Detector",
  "description": "Tìm kiếm các quảng cáo của Admicro đang được hiện thị trên trang",
  "version": "2.1.1",
  "icons": {
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Admicro's Ads Detector",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "admExtLib.css"
      ],
      "js": [
        "const.js",
        "admExtLib.js",
        "admZone.js",
        "admAdsDetector.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "*"
  ]
}
