{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TXT RPLCR",
  "description": "Replaces one or more words on websites just for fun.",
  "version": "1.1",
  "offline_enabled": true,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "128x128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
