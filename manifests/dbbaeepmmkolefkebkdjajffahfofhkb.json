{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Multi Social Share Chrome App",
  "description": "This application lets you to share to multiple social networks such as Facebook, Twitter, LinkedIn and Flickr with a single click.",
  "version": "1.0",
  "app": {
    "urls": [
      "http://www.multisocialshare.com/"
    ],
    "launch": {
      "web_url": "http://www.multisocialshare.com/?referrer=chromeapp"
    }
  },
  "icons": {
    "16": "MSS favicon 16.png",
    "128": "MSS favicon 128.png"
  },
  "short_name": "MSS",
  "permissions": [
    "unlimitedStorage"
  ]
}
