{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.5",
  "manifest_version": 2,
  "name": "Download Accelerator & Manager",
  "short_name": "download-accelerator-manager",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "description": "Easily manage and accelerate your downloads up to 5 times!",
  "homepage_url": "https://mybrowseraddon.com/download-accelerator-manager.html",
  "permissions": [
    "storage",
    "*://*/*",
    "downloads",
    "contextMenus",
    "notifications",
    "downloads.open",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_popup": "data/popup/popup.html",
    "default_title": "Download Accelerator & Manager",
    "default_icon": {
      "16": "data/icons/toolbar/16.png",
      "32": "data/icons/toolbar/32.png",
      "48": "data/icons/toolbar/48.png",
      "64": "data/icons/toolbar/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
