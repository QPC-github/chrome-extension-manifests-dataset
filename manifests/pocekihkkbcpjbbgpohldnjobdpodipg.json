{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MDBus",
  "version": "0.2",
  "author": "xiaoyao9184",
  "description": "一个使用MD风格的中国大陆公交查询扩展",
  "icons": {
    "18": "res/bus18.png",
    "48": "res/bus48.png",
    "192": "res/bus192.png"
  },
  "browser_action": {
    "default_icon": "res/bluebus.png",
    "default_popup": "html/md_Main.html",
    "default_title": "MDBus"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://0311.mygolbs.com/",
    "http://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
