{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hicoria.com Server Extender",
  "description": "Automatic server extender for Hicoria.com",
  "version": "1.5",
  "content_scripts": [
    {
      "matches": [
        "https://hicoria.com/intro/crossroads/"
      ],
      "js": [
        "jquery.js",
        "extender.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
