{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "POGC [Twitch]",
  "manifest_version": 2,
  "version": "0.5.1",
  "description": "Chrome extension for the Pants Off Gaming Channel",
  "homepage_url": "https://www.twitch.tv/pantsoffgamingchannel",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "*://api.twitch.tv/*"
  ],
  "web_accessible_resources": [
    "assets/cookie600x600.png"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}
