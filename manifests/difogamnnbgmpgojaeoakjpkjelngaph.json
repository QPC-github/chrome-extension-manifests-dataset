{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Check for wrong images",
  "version": "1.2.3",
  "description": "Check images for wrong width, height and sizes",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webNavigation",
    "contextMenus",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "notifications",
    "idle",
    "background",
    "storage"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "on-load.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Check page for wrong images",
    "default_popup": "popup/popup.html",
    "default_icon": "img-128.png"
  },
  "icons": {
    "16": "img-16.png",
    "32": "img-32.png",
    "48": "img-48.png",
    "128": "img-128.png"
  }
}
