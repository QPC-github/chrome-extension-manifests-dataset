{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SynthPass",
  "short_name": "SynthPass",
  "description": "High-security password synthesizer",
  "omnibox": {
    "keyword": "src"
  },
  "version": "0.2.4",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "history"
  ],
  "content_security_policy": "default-src 'self'; img-src 'self' data:; style-src 'self'; frame-src 'self' https://* http://*",
  "background": {
    "scripts": [
      "js-src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "SynthPass",
    "default_popup": "html/popup.html"
  }
}
