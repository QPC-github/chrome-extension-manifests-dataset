{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ShopStyle Collective LinkIt",
  "short_name": "LinkIt",
  "version": "0.1.0",
  "description": "Easily create monetized links on any ShopStyle-supported site.",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/bg.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon-48.png",
      "38": "img/icon-48.png"
    }
  },
  "web_accessible_resources": [
    "js/linkit.js"
  ]
}
