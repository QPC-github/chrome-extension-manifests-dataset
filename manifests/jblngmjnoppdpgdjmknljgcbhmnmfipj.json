{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TinyButton",
  "description": "Make your site multi language.",
  "version": "1.2",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_title": "Launch TinyButton Translator"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "http://*/*",
    "https://*/*",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "js/lib/jquery-2.1.1.js",
      "js/background/background.js"
    ]
  }
}
