{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "EyeSaver",
  "version": "0.3.6",
  "description": "Enhances Chrome by applying a User Set Theme to ALL Websites and more!",
  "background": {
    "scripts": [
      "app/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "ui/popup.html",
    "default_title": "EyeSaver Menu"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "settings.json"
  ],
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "fontSettings"
  ]
}
