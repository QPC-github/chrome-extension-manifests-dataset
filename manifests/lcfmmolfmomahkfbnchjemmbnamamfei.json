{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Coupon Express",
  "description": "Coupon Express will notify you when there are coupons available for the website you are shopping on.",
  "version": "2.1",
  "background": {
    "scripts": [
      "functions.js",
      "jquery.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "scissors.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "http://couponexpress.co/"
  ]
}
