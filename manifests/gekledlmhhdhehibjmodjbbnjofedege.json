{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Smile Helper",
  "description": "Helps to not forget to turn on Amazon Smile",
  "version": "2.0.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "lib/replacer.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "STA-16x16.png",
    "48": "STA-48x48.png",
    "128": "STA-128x128.png"
  },
  "permissions": [
    "webRequest",
    "*://smile.amazon.com/*",
    "*://www.amazon.com/*",
    "webRequestBlocking"
  ]
}
