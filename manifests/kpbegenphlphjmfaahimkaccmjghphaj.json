{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VK music hot-keys",
  "short_name": "vk music",
  "description": "Медиа-клавиши на клавиатуре для переключения музыки в Вконтакте. VK music shortcuts.",
  "version": "1.4",
  "author": "quix",
  "permissions": [
    "tabs",
    "http://vk.com/*",
    "https://vk.com/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://vk.com/*",
        "https://vk.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "MediaNextTrack": {
      "suggested_key": {
        "windows": "MediaNextTrack",
        "mac": "MediaNextTrack",
        "chromeos": "MediaNextTrack",
        "linux": "MediaNextTrack"
      },
      "description": "MediaNextTrack",
      "global": true
    },
    "MediaPrevTrack": {
      "suggested_key": {
        "windows": "MediaPrevTrack",
        "mac": "MediaPrevTrack",
        "chromeos": "MediaPrevTrack",
        "linux": "MediaPrevTrack"
      },
      "description": "MediaPrevTrack",
      "global": true
    },
    "MediaPlayPause": {
      "suggested_key": {
        "windows": "MediaPlayPause",
        "mac": "MediaPlayPause",
        "chromeos": "MediaPlayPause",
        "linux": "MediaPlayPause"
      },
      "description": "MediaPlayPause",
      "global": true
    },
    "MediaStop": {
      "suggested_key": {
        "windows": "MediaStop",
        "mac": "MediaStop",
        "chromeos": "MediaStop",
        "linux": "MediaStop"
      },
      "description": "MediaStop",
      "global": true
    }
  },
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
