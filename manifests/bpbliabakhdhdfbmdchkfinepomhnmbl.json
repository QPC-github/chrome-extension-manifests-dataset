{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SansBullshitSans Button",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Replace the font of a website with the SansBullshitSans.com font. Extension by grumpy-old-man.nl",
  "homepage_url": "http://grumpy-old-man.nl",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/icon19_Off.png",
    "default_title": "SansBullshit Button"
  },
  "web_accessible_resources": [
    "SansBullshitSans.ttf"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
