{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Biblistika",
  "description": "Read Bible verse every time you open a browser or a new tab!",
  "version": "1.3",
  "author": "Roman Paprotsky",
  "icons": {
    "16": "images/title16.png",
    "48": "images/title48.png",
    "128": "images/title128.png"
  },
  "browser_action": {
    "default_icon": "images/title128.png",
    "default_title": "Biblistika"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}
