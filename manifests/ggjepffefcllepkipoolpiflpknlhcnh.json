{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RadioCast",
  "version": "15",
  "description": "Listen to online radio stations on Chromecast devices.",
  "icons": {
    "128": "radiocolor128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "radiocolor128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "https://radiocast.xyz/"
  ]
}
