{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Videocec Screen Share",
  "description": "Join a WebRTC video conference powered by the Videocec.",
  "version": "1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "videocec-logo-16x16.png",
    "48": "videocec-logo-48x48.png",
    "128": "videocec-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://videocec.net/*"
    ]
  }
}
