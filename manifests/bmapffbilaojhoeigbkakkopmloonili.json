{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "The Thebe Advertiser Chrome plugin",
  "description": "Quickly check what's new on the Thebe Advertiser",
  "short_name": "Thebe Notifier",
  "icons": {
    "16": "icon.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "The Thebe Advertiser Chrome plugin",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "version": "0.4.0"
}
