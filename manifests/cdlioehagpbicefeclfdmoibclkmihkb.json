{
  "name": "ClearSlide for Gmail",
  "version": "2.0.10",
  "icons": {
    "16": "images/cs_icon_16.png",
    "48": "images/cs_icon_48.png",
    "128": "images/cs_icon_128.png"
  },
  "homepage_url": "http://www.clearslide.com",
  "description": "Extend ClearSlideâ€™s seamless experience to your Gmail inbox. Close more deals even faster.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "declarativeContent",
    "https://mail.google.com/mail/*",
    "*://*.clearslideng.com/*",
    "*://*.clearslide.com/*",
    "*://*.googleusercontent.com/proxy/*"
  ],
  "optional_permissions": [
    "https://calendar.google.com/calendar/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.googleusercontent.com/proxy/*",
      "https://mail.google.com/mail/*",
      "https://calendar.google.com/calendar/*",
      "*://*.clearslide.com/*",
      "*://*.clearslideng.com/*"
    ]
  },
  "web_accessible_resources": [
    "content.css",
    "calendarCssLoader.js",
    "calendarScriptLoader.js",
    "images/arrow-down.svg",
    "images/arrow-left.svg",
    "images/arrow-right.svg",
    "images/calendar.svg",
    "images/checkbox.png",
    "images/checkbox@2x.png",
    "images/clicks-grey.svg",
    "images/clicks.svg",
    "images/company_name_close.gif",
    "images/container-pointer-up.png",
    "images/container-pointer.png",
    "images/cs_compose_logo.svg",
    "images/cs_compose_settings.svg",
    "images/cs_icon_128.png",
    "images/cs_icon_16.png",
    "images/cs_icon_48.png",
    "images/cs-main-logo.svg",
    "images/cs-menu-gray.svg",
    "images/cs-menu.svg",
    "images/cs-new-version-0.28-1.png",
    "images/cs-new-version-0.28-2.png",
