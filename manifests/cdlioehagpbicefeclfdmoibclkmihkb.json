    "images/views-grey.svg",
    "images/views.svg"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "js": [
        "content.js",
        "grabaccount.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "*://*.clearslide.com/*",
        "*://*.clearslideng.com/*"
      ],
      "js": [
        "clearslide.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx"
}
