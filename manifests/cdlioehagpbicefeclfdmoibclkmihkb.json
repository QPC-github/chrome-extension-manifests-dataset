    "images/cs-new-version-0.28-4.png",
    "images/cs-remove.svg",
    "images/cs-schedule-send.svg",
    "images/cs-smalllogo.png",
    "images/cs-smalllogo@2x.png",
    "images/emaillink.svg",
    "images/following.svg",
    "images/icon-close.png",
    "images/icon-remove-preso.png",
    "images/icons-closecancel.png",
    "images/link-arrow-down.png",
    "images/link-arrow-right.png",
    "images/magnifying-glass.png",
    "images/menu.svg",
    "images/nav-arrow-left.png",
    "images/nav-arrow-right.png",
    "images/nav-meeting.svg",
    "images/ok.svg",
    "images/plus.svg",
    "images/remove-sign-black.svg",
    "images/remove-sign-grey.svg",
    "images/replies-grey.svg",
    "images/replies.svg",
    "images/send-later-light.svg",
    "images/send-later.svg",
    "images/sent.svg",
    "images/spinner.gif",
    "images/spinner.svg",
    "images/startover-black.svg",
    "images/startover-grey.svg",
    "images/stationery-layout",
    "images/stationery-layout/icon-bottom-on.svg",
    "images/stationery-layout/icon-bottom.svg",
    "images/stationery-layout/icon-nolinks-on.svg",
    "images/stationery-layout/icon-nolinks.svg",
    "images/stationery-layout/icon-nothumb-on.svg",
    "images/stationery-layout/icon-nothumb.svg",
    "images/stationery-layout/icon-original-on.svg",
    "images/stationery-layout/icon-original.svg",
    "images/stationery-layout/icon-top-on.svg",
