{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hex FRVR",
  "short_name": "Hex FRVR",
  "description": "Free Hexagon Puzzle",
  "version": "3.0.5",
  "default_locale": "en",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "webview"
  ],
  "icons": {
    "16": "assets/icon16x16.png",
    "128": "assets/icon128x128.png"
  },
  "url_handlers": {
    "play_hex": {
      "matches": [
        "https://hex.frvr.com/*",
        "http://hex.frvr.com/*"
      ],
      "title": "Play Hex FRVR"
    }
  }
}
