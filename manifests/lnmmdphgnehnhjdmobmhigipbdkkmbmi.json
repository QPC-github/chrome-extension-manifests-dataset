{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "The Krakendoger",
  "version": "1.0.2",
  "description": "Converts BTC/DOGE on Kraken.com to DOGE/BTC",
  "author": "Nick Penney",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kraken.com/*"
      ],
      "js": [
        "/js/jquery.js",
        "/js/converter.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
