{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Abre Focus Extension",
  "short_name": "Abre Focus Extension",
  "description": "Browser extension for delivering a focused lesson",
  "version": "0.1.2",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "abre-128.png",
    "default_popup": "popup.html",
    "default_title": "Abre Focus"
  },
  "permissions": [
    "identity",
    "identity.email",
    "tabs",
    "history",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/jquery-3.1.1.min.js"
    ]
  },
  "icons": {
    "16": "abre-16.png",
    "128": "abre-128.png"
  }
}
