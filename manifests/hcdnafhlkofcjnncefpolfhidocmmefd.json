{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Spotter - Fake news detector",
  "version": "0.0.1",
  "description": "Protect yourself from fake media",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "default_locale": "cs",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./data.js",
        "./content_script/content_script.js"
      ],
      "css": [
        "./content_script/content_script.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "./images/ic_16.png",
      "32": "./images/ic_32.png",
      "48": "./images/ic_48.png",
      "128": "./images/ic_128.png"
    }
  },
  "icons": {
    "16": "./images/ic_16.png",
    "32": "./images/ic_32.png",
    "48": "./images/ic_48.png",
    "128": "./images/ic_128.png"
  },
  "manifest_version": 2
}
