{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide Vidio.com Live Comments",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension will hide comments when you watch Vidio.com live videos.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.vidio.com/live/*"
      ],
      "css": [
        "hide-vidio.css"
      ]
    }
  ]
}
