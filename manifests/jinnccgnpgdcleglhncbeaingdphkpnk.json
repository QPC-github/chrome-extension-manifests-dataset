{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "eccle - Your self-cleaning bookmark manager",
  "version": "1.0.1",
  "description": "Save links to your self-cleaning bookmarking library with this handy Chrome extension.",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Save to eccle",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/app-icon.png",
      "32": "images/app-icon.png",
      "48": "images/app-icon.png",
      "128": "images/app-icon.png"
    }
  },
  "icons": {
    "16": "images/app-icon.png",
    "32": "images/app-icon.png",
    "48": "images/app-icon.png",
    "128": "images/app-icon.png"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com https://bolt.typemojo.com; object-src 'self'",
  "manifest_version": 2
}
