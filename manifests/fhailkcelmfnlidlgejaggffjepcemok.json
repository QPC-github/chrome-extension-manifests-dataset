{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide Mouse",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Hides mouse in fullscreen",
  "icons": {
    "128": "hide-mouse.png"
  },
  "browser_action": {},
  "author": "Ryan Gerald Conley",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery-3.1.0.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
