{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "milblock",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Bloquea anuncios destacados en milanuncios, vibbo y otras webs",
  "author": "Fran Rold√°n",
  "offline_enabled": false,
  "background": {
    "scripts": [
      "js/jquery.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "milblock"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.milanuncios.com/*",
        "http://milanuncios.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/block.js"
      ],
      "run_at": "document_end"
    }
  ]
}
