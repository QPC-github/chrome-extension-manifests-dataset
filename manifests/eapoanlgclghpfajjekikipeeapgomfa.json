{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.1",
  "name": "Vocabulary PLUS",
  "manifest_version": 2,
  "description": "Vocabulary Plus lets you learn new words while you are browsing on google chrome",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "192": "img/icon-192.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "/main.css"
      ],
      "js": [
        "/js/inject.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "*://*/*"
  ]
}
