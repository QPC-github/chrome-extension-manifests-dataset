{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hippos Bite",
  "version": "0.2.1",
  "description": "Adds an Amazon item to your Hippos Bite watchlist",
  "manifest_version": 2,
  "homepage_url": "http://hipposbite.appspot.com",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": "icon48.png",
    "default_title": "Hippos Bite Watchlist",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://hipposbite.appspot.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
