{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cool Drinks",
  "short_name": "Cool Drinks",
  "description": "Get a Cool Drink on every new tab",
  "version": "1.02",
  "incognito": "split",
  "externally_connectable": {
    "matches": [
      "*://*.freehdtabs.com/*",
      "*://freehdtabs.com/*",
      "*://*.freehdtabs.test/*",
      "*://freehdtabs.test/*"
    ]
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.freehdtabs.com/*",
    "*://freehdtabs.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon_16.png",
      "32": "icon_32.png"
    },
    "default_title": "See a Drink"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Internet",
      "keyword": "a",
      "search_url": "https://freehdtabs.com/search?id=drink&q={searchTerms}",
      "favicon_url": "https://freehdtabs.com/favicons/drink.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "manifest_version": 2
}
