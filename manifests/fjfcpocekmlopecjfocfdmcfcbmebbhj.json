{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.0",
  "default_locale": "en",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "lorem.html",
    "default_icon": "images/48.png"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "web_accessible_resources": [
    "cool.html",
    "images/*.png",
    "styles/*.css",
    "styles/fonts/*",
    "js/main.js",
    "js/config.js",
    "js/pusher.js",
    "js/jquery-1.11.2.min.js"
  ]
}
