{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SmartMarks",
  "version": "1.4",
  "description": "SmartMarks allows you to store expirable bookmarks.",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_title": "SmartMarks",
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
