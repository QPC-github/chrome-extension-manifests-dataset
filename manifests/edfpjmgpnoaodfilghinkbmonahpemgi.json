{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ISAM LogViewer",
  "version": "0.1",
  "description": "Developer Tools extension to view IBM Security Access Manager log files.",
  "devtools_page": "devtools.html",
  "optional_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "8": "isam_logo_transparent.png",
    "12": "isam_logo_transparent.png",
    "16": "isam_logo_transparent.png",
    "48": "isam_logo_transparent.png"
  },
  "browser_action": {
    "default_icon": "isam_logo_transparent.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
