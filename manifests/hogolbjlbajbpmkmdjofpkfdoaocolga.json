{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "short_name": "__MSG_name__",
  "default_locale": "en",
  "description": "__MSG_description__",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "32": "media/icons/color32.png",
    "64": "media/icons/color64.png",
    "128": "media/icons/color128.png"
  },
  "permissions": [
    "downloads",
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "script/app/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "32": "media/icons/grey32.png",
      "64": "media/icons/grey64.png",
      "128": "media/icons/grey128.png"
    },
    "default_title": "__MSG_description__",
    "default_popup": "page/popup.html"
  },
  "web_accessible_resources": [
    "script/app/domain.json"
  ]
}
