{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Proxy Switch by Proxy-Hub",
  "version": "1.0",
  "description": "Proxy Swtich v1.0 is an ultimate proxy manager for proxy rotation with all needed features.",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "commands": {
    "change-proxy": {
      "suggested_key": {
        "default": "Ctrl + Shift + 0",
        "mac": "Command + Shift + 0"
      },
      "description": "Rotate the proxy randomly",
      "global": true
    }
  },
  "permissions": [
    "storage",
    "proxy",
    "privacy",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "https://*/*",
    "http://*/*",
    "cookies",
    "history",
    "browsingData",
    "contentSettings",
    "commands"
  ],
  "manifest_version": 2
}
