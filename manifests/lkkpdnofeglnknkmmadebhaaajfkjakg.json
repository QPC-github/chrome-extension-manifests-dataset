{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon_32px.png",
      "38": "icon_64px.png"
    },
    "default_title": "So Sánh Giá Online (SoSanhGiaOnline.Com)",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.min.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "description": "Công cụ giúp bạn So Sánh Giá và lấy Mã Giảm Giá trực tuyến dễ dàng! So sánh giá và mã giảm giá từ Lazada, Adayroi, Tiki, etc.",
  "homepage_url": "https://www.sosanhgiaonline.com/",
  "icons": {
    "16": "icon_16px.png",
    "128": "icon_128px.png"
  },
  "manifest_version": 2,
  "name": "Web So Sánh Giá Online",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies",
    "gcm",
    "unlimitedStorage",
    "storage"
  ],
  "optional_permissions": [
    "topSites",
    "<all_urls>"
  ],
  "short_name": "SoSanhGiaOnline.Com",
  "version": "6.1.2",
  "web_accessible_resources": [
    "icon.png",
    "jquery.min.map"
  ]
}
