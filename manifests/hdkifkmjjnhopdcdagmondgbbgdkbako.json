{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "InstaPostGram Connect",
  "version": "1.9.2",
  "author": "Rasta - Rhafaman | Rha Marketing",
  "description": "Connecting your account to our system is now very easy with our extension!",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "webRequest",
    "unlimitedStorage",
    "notifications",
    "storage",
    "clipboardWrite",
    "webRequestBlocking",
    "*://*.instagram.com/*",
    "*://*.instapostgram.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "externally_connectable": {
    "matches": [
      "https://instapostgram.com/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.instapostgram.com/accounts-ext"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/noty/lib/noty.min.js",
        "js/rastabase.js"
      ],
      "css": [
        "css/style.css",
        "js/noty/lib/noty.css",
        "js/noty/lib/themes/sunset.css"
      ],
      "run_at": "document_end",
      "persistent": false
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "manifest_version": 2
}
