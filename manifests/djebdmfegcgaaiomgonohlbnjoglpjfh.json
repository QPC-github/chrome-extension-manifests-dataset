{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Snap&Read PDF Reader",
  "version": "0.9.0.4",
  "manifest_version": 2,
  "description": "Open your PDFs stored in Google Drive with Snap&Read",
  "container": [
    "GOOGLE_DRIVE"
  ],
  "api_console_project_id": "730806512083",
  "gdrive_mime_types": {
    "http://drive.google.com/intents/opendrivedoc": [
      {
        "type": [
          "application/pdf",
          "application/vnd.google.drive.ext-type.pdf"
        ],
        "href": "https://pdf.snapandread.com/viewer?gdrive={ids}",
        "title": "Open",
        "disposition": "window"
      }
    ]
  },
  "icons": {
    "256": "icon_256.png",
    "128": "icon_128.png"
  },
  "app": {
    "launch": {
      "web_url": "https://pdf.snapandread.com/viewer"
    }
  }
}
