{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PT POPDIC",
  "version": "0.1",
  "description": "간편한 포르투갈어 단어 검색",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "notifications",
    "contextMenus"
  ],
  "sandbox": {
    "pages": [
      "index.html"
    ]
  }
}
