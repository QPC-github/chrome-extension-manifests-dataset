{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Jesus Extension",
  "description": "Jesus image extension",
  "version": "1.0.5",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": [
      "assets/js/background.min.js"
    ]
  },
  "icons": {
    "48": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": "/assets/icons/icon_48.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com https://www.gstatic.com/  https://www.googleapis.com; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "background",
    "identity",
    "<all_urls>"
  ]
}
