{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Valgenesis Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Valgenesis",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.5",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in Valgenesis applications.",
  "externally_connectable": {
    "matches": [
      "*://*.valgenesis.in/*",
      "*://*.valgenesis.net/*",
      "*://*.valgenesis.us/*"
    ]
  },
  "icons": {
    "128": "valgenesis-vector-logo.png"
  },
  "browser_action": {
    "default_icon": "valgenesis-vector-logo.png"
  }
}
