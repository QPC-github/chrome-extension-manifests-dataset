{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Text Roller",
  "description": "Experimental extension to play with CSS",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "roll.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
