{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Movie Reviews for Families by Movieguide®",
  "short_name": "Family Reviews by Movieguide®",
  "description": "Get Movieguide's® family friendly-reviews on iTunes, Amazon, Google Play and more!",
  "version": "1.0.3",
  "homepage_url": "https://www.movieguide.org",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png"
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "content_scripts": [
    {
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/mutation-summary.js",
        "js/fplib.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "matches": [
        "*://www.amazon.com/*",
        "*://smile.amazon.com/*",
        "*://itunes.apple.com/*",
        "*://play.google.com/*",
        "*://pureflix.com/*",
        "*://www.fandango.com/*",
        "*://www.netflix.com/*",
        "*://www.hulu.com/*"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://www.amazon.com/*",
    "https://www.amazon.com/*",
    "http://smile.amazon.com/*",
    "https://smile.amazon.com/*",
    "http://itunes.apple.com/*",
    "https://itunes.apple.com/*",
    "http://play.google.com/*",
    "https://play.google.com/*",
    "http://pureflix.com/*",
    "https://pureflix.com/*",
    "http://www.fandango.com/*",
    "https://www.fandango.com/*",
    "http://www.netflix.com/*",
    "https://www.netflix.com/*",
    "http://www.hulu.com/*",
    "https://www.hulu.com/*"
  ],
  "manifest_version": 2
}
