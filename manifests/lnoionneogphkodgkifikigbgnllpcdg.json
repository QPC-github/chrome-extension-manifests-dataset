{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HiveFlux",
  "version": "1.0.2",
  "description": "The HiveFlux extension is a quick shortcut to HiveFlux login.",
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "HiveFlux",
    "default_icon": "icon19.png"
  },
  "background": {
    "scripts": [
      "popup.js"
    ]
  },
  "permissions": [
    "tabs"
  ]
}
