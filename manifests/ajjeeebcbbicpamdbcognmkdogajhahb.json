{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Save to Merrow",
  "version": "0.0.3",
  "description": "It is the best way to add content to Merrow.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/lib/material.min.js",
        "js/lib/jquery-3.1.1.min.js",
        "js/lib/jquery-ui.min.js",
        "js/common.js",
        "js/content_script.js"
      ],
      "css": [
        "css/lib/jquery-ui.min.css",
        "css/style.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/16_bw.png",
      "48": "icons/48_bw.png",
      "128": "icons/128_bw.png"
    }
  },
  "background": {
    "scripts": [
      "js/lib/jquery-3.1.1.min.js",
      "js/common.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "https://me.rrow.me/",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "html/save.html",
    "html/error.html",
    "fonts/material-icons.woff2"
  ],
  "externally_connectable": {
    "matches": [
      "https://me.rrow.me/*"
    ]
  }
}
