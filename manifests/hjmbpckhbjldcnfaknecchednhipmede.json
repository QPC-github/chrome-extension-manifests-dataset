{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Check HackerNews for this webpage",
  "short_name": "Check HN",
  "description": "This extension checks if the current tab has been submitted to Hacker News",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Check HN for this URL"
  },
  "permissions": [
    "activeTab",
    "http://hn.algolia.com/api/"
  ]
}
