{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cashback checker",
  "version": "0.9",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "coins48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "coins16.png",
    "48": "coins48.png",
    "128": "coins128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "https://cashback.ru/*",
    "storage"
  ]
}
