{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cam Scroller",
  "description": "This extension lets a user scroll webpages using webcam gestures.",
  "version": "0.1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ]
}
