{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "IR Safe Site !",
  "description": "Detect phishing and unsafe websites",
  "version": "1.1.1",
  "icons": {
    "32": "images/icon_32.png",
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_title": "IR Safe Site",
    "default_icon": {
      "32": "images/icon_32.png",
      "128": "images/icon_128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "alarms",
    "background",
    "http://irsafesite.ir/",
    "http://data.irsafesite.ir/index.php"
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  }
}
