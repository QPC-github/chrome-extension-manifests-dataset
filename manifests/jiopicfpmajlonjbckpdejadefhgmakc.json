{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "short_name": "VKfoxx",
  "version": "5.7.3",
  "manifest_version": 2,
  "default_locale": "ru",
  "description": "__MSG_description__",
  "background": {
    "page": "pages/background.html"
  },
  "icons": {
    "16": "assets/logo16.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png"
  },
  "permissions": [
    "https://*.vk.me/*",
    "https://imv4.vk.com/*",
    "https://api.vk.com/*",
    "https://login.vk.com/*",
    "https://oauth.vk.com/*",
    "https://pp.userapi.com/*",
    "https://sun1-1.userapi.com/*",
    "https://sun9-1.userapi.com/*",
    "https://sun9-2.userapi.com/*",
    "https://sun9-3.userapi.com/*",
    "https://sun9-4.userapi.com/*",
    "https://sun9-5.userapi.com/*",
    "https://sun9-6.userapi.com/*",
    "https://sun9-7.userapi.com/*",
    "https://sun9-8.userapi.com/*",
    "https://sun9-9.userapi.com/*",
    "https://vk.com/*",
    "https://*.vk.com/*",
    "tabs",
    "notifications"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/logo19_offline.png",
      "38": "assets/logo38_offline.png"
    },
    "default_title": "VKfox",
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://oauth.vk.com/blank.html*"
      ],
      "js": [
        "vkfox/common/auth/oauth.vk.com.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "minimum_chrome_version": "29"
}
