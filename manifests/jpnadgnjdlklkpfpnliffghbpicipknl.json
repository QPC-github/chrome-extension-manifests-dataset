{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Browser Window Closer",
  "short_name": "Browser Window Closer",
  "version": "1.0",
  "description": "Close all open Window & tabs except active tab on single click",
  "icons": {
    "16": "images/Icon-16.png",
    "48": "images/Icon-48.png",
    "128": "images/Icon-128.png"
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/Icon-19.png",
      "38": "images/Icon-38.png"
    },
    "default_title": "Browser Window Closer"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
