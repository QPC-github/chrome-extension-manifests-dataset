{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Clever Ideas Screen Share",
  "description": "A Screen Sharing extension for Clever Ideas business intelligence software solutions provider",
  "version": "0.1.7",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "clever16.png",
    "48": "clever48.png",
    "128": "clever128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://show.cleverideas.com.mx/*"
    ]
  }
}
