{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Open-as-Popup",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Open the current tab as a popup window."
  },
  "description": "Opens the current tab as a popup window.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
