{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "极简图床",
  "description": "帮你快速下载页面中的图片",
  "version": "3.0.1",
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "image/setting.png",
    "login.html"
  ],
  "browser_action": {
    "default_title": "采集图片",
    "default_icon": "image/icon48.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "build/background.js"
    ]
  },
  "manifest_version": 2
}
