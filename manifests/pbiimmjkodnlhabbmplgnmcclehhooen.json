{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Image Squirrel",
  "version": "0.0.2",
  "default_locale": "en",
  "description": "A Squirrel to collect all images from the Internet",
  "icons": {
    "32": "assets/32.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "assets/32.png"
    },
    "default_title": "Image Suqrriel",
    "default_popup": "pop.html"
  },
  "background": {
    "scripts": [
      "squirrel.js",
      "background.js"
    ]
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "http://www.hoyt-tian.com/imagesquirrel/",
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ]
}
