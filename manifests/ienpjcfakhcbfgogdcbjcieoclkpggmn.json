{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Astia Health Screen Sharing Extension",
  "author": "Astia Health - Telemedicine Professionals",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed to support screen sharing for ASTIA Health care application.",
  "homepage_url": "https://app.astiahealth.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://app.astiahealth.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
