{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Owlsee Reader",
  "description": "A text/epub file Reader for Google Drive",
  "version": "1.1.0",
  "manifest_version": 2,
  "container": "GOOGLE_DRIVE",
  "api_console_project_id": "918747958121",
  "icons": {
    "16": "img/logo16.png",
    "24": "img/logo24.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png",
    "256": "img/logo256.png"
  },
  "app": {
    "urls": [
      "https://reader.owlsee.com/"
    ],
    "launch": {
      "web_url": "https://reader.owlsee.com/files"
    }
  },
  "gdrive_mime_types": {
    "http://drive.google.com/intents/opendrivedoc": [
      {
        "type": [
          "text/plain",
          "text/html",
          "text/csv",
          "text/tab-separated-values",
          "application/vnd.google-apps.script+json",
          "application/epub+zip",
          "application/vnd.google.drive.ext-type.html",
          "application/vnd.google.drive.ext-type.txt"
        ],
        "href": "https://reader.owlsee.com/files",
        "title": "Open",
        "disposition": "window"
      }
    ]
  }
}
