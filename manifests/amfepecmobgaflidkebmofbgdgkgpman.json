{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ROBLOX Forums+",
  "short_name": "Forums+",
  "description": "Adds formatting and numbering of ROBLOX posts",
  "version": "1.0.7",
  "icons": {
    "16": "Icons/icon16.png",
    "48": "Icons/icon48.png",
    "128": "Icons/icon128.png"
  },
  "permissions": [
    "storage",
    "http://*.imgur.com/*",
    "http://nekofont.upat.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.roblox.com/Forum/ShowPost.aspx?PostID=*",
        "http://www.roblox.com/Forum/ShowForum.aspx?ForumID=*",
        "http://www.roblox.com/Forum/User/MyForums.aspx",
        "http://www.roblox.com/Forum/AddPost.aspx?*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery.js",
        "acronyms.js",
        "objects.js",
        "forums.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.roblox.com/my/account*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery.js",
        "objects.js",
        "settings.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Forums+",
    "default_icon": "Icons/icon16.png",
    "default_popup": "options.html"
  },
  "web_accessible_resources": [
    "Images/*",
    "fonts/*"
  ]
}
