{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "xPath Wrap",
  "version": "0.5",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "description": "Enter xPaths and wrap them in a border so you can visualize selections",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png"
  }
}
