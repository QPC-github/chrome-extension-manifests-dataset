{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Geetalk notification manager for Chrome",
  "version": "1.55",
  "manifest_version": 2,
  "description": "Geetalk plugin to get all your cellphone notification easily in your computer screen.",
  "icons": {
    "16": "images/geetalk-16.png",
    "48": "images/geetalk-48.png",
    "128": "images/geetalk-128.png"
  },
  "web_accessible_resources": [
    "templates/*",
    "css/*",
    "fonts/*",
    "images/*",
    "libs/*",
    "core/*"
  ],
  "permissions": [
    "tabs",
    "notifications",
    "background",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "images/geetalk-128-gray.png",
    "default_popup": "templates/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "libs/jquery.min.js",
        "libs/underscore-min.js",
        "libs/moment-with-langs.min.js",
        "libs/twitter-text.js",
        "core/constants.js",
        "core/chrome.js",
        "core/container.js"
      ]
    }
  ],
  "author": "Geetalk",
  "homepage_url": "https://geetalk.com",
  "short_name": "Geetalk",
  "background": {
    "scripts": [
      "libs/jquery.min.js",
      "libs/moment-with-langs.min.js",
      "core/constants.js",
      "core/geeApi.js",
      "core/utils.js",
      "core/chrome.js",
      "core/background.js"
    ]
  },
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
