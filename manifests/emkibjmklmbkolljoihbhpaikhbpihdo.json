{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Perna URL Shortener",
  "description": "Encurtador de url simples, fácil e rápido",
  "version": "1.0",
  "author": "Anderson Meira",
  "homepage_url": "http://andersonmeira.com",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/clipboard.min.js",
      "js/app.js",
      "css/style.css"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://perna.in/"
  ]
}
