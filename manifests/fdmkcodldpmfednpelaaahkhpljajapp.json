{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "js/background.js",
      "js/updateChecker.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "static/icon-48.png",
    "default_title": "Extension Manager"
  },
  "description": "Manage Chrome extensions, apps and themes. Get alerts when extensions update.",
  "homepage_url": "https://browsernative.com/chrome-extension-manager/",
  "icons": {
    "48": "static/icon-48.png",
    "128": "static/icon-128.png"
  },
  "manifest_version": 2,
  "name": "Extension Manager (Beta)",
  "short_name": "Extension Manager",
  "version": "0.0.8",
  "permissions": [
    "management",
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "options_ui": {
    "page": "home.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      }
    }
  }
}
