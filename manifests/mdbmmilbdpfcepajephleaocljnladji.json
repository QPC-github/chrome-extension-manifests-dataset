{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Saver",
  "version": "1.0",
  "description": "Save and restore tabs with a single click. Tab Saver allows you to manage your tabs and you can restore them for a future date.",
  "permissions": [
    "storage",
    "tabs",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo_.png",
      "32": "images/logo_.png",
      "48": "images/logo_.png",
      "128": "images/logo_.png"
    }
  },
  "icons": {
    "16": "images/logo_.png",
    "32": "images/logo_.png",
    "48": "images/logo_.png",
    "128": "images/logo_.png"
  },
  "manifest_version": 2
}
