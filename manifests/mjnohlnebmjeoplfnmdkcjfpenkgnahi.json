{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "UploadCC: Screen Capture Tool (Share or Save)",
  "version": "1.7",
  "description": "Simple screenshot tool, select the area which you want to capture and upload or download it",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "UploadCC: Screen Capture Tool"
  },
  "commands": {
    "trigger-screen-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Trigger screen capture"
    }
  },
  "icons": {
    "19": "images/icon19.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "38": "images/icon38.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "manifest_version": 2
}
