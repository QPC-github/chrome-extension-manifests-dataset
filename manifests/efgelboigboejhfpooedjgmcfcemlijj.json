{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "StudySync",
  "description": "StudySync student app",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "version": "5.0.0",
  "offline_enabled": true,
  "icons": {
    "16": "app-assets/icons/icon16.png",
    "36": "app-assets/icons/icon36.png",
    "48": "app-assets/icons/icon48.png",
    "57": "app-assets/icons/icon57.png",
    "72": "app-assets/icons/icon72.png",
    "96": "app-assets/icons/icon96.png",
    "114": "app-assets/icons/icon114.png",
    "128": "app-assets/icons/icon128.png",
    "144": "app-assets/icons/icon144.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "<all_urls>",
    "fileSystem",
    "unlimitedStorage",
    "storage",
    "fullscreen"
  ]
}
