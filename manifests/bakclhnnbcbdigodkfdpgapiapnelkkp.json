{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Extension NHTQ",
  "description": "Extension tool hỗ trợ khách hàng đặt hàng & tìm hàng.",
  "version": "1.0.1",
  "icons": {
    "16": "assets/icons/48x48.png",
    "48": "assets/icons/48x48.png",
    "128": "assets/icons/48x48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "background",
    "tabs",
    "storage",
    "notifications",
    "alarms",
    "http://*/*",
    "https://*/*"
  ]
}
