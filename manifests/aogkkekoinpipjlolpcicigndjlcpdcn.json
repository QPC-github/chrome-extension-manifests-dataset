{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "3.55.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "homepage_url": "https://app.dropified.com",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_appName__",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.dropified.com/*",
        "*://*.aliexpress.com/*",
        "*://*.alibaba.com/*",
        "*://*.alipay.com/*",
        "*://*.ebay.com/*",
        "*://*.ebay.co.uk/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "styles/spinner.css",
    "styles/epacket.css",
    "styles/loader.gif",
    "audit.html",
    "popup.html",
    "images/*"
  ],
  "optional_permissions": [
    "https://*.myshopify.com/*",
    "https://app.oberlo.com/*"
  ],
  "permissions": [
    "*://*.dropified.com/*",
    "*://*.aliexpress.com/*",
    "*://*.alibaba.com/*",
    "*://*.alipay.com/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ]
}
