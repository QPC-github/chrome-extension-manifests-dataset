{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cloud Plus ERP Screen sharing",
  "description": "An extension to allow you to share your screen with other.",
  "version": "0.1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.cloudpluserp.com/*",
      "http://admin.localhost/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
