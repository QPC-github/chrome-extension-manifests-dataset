{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "short_name": "PC. Mania",
  "description": "__MSG_appDesc__",
  "author": "Jasmin Dreasond",
  "default_locale": "en",
  "version": "2.3.0.4",
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon_38.png"
    }
  },
  "permissions": [
    "background",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],
  "options_page": "index.html",
  "icons": {
    "128": "icons/icon_128.png",
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png"
  },
  "content_scripts": [
    {
      "exclude_matches": [
        "https://jasmindreasond.github.io/New-Browser-Ponies/*",
        "http://jasmindreasond.github.io/New-Browser-Ponies/*"
      ],
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery/jquery-2.1.1.js",
        "js/generator-ponies.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://jasmindreasond.github.io/New-Browser-Ponies/*",
        "http://jasmindreasond.github.io/New-Browser-Ponies/*"
      ],
      "js": [
        "js/jquery/jquery-2.1.1.js",
        "js/homepage.js",
        "js/tradutor.js"
      ],
      "css": [
        "css/homepage.css"
      ],
      "run_at": "document_end"
    }
  ]
}
