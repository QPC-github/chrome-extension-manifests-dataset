{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bitbucket Whitespace Ignorer",
  "version": "0.3",
  "description": "Automatically enables the ignore whitespace option on Bitbucket PRs and commits",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Bitbucket Whitespace Ignorer"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "storage",
    "<all_urls>",
    "webRequestBlocking"
  ]
}
