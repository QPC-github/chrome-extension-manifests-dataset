{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Readersourcing 2.0: RS_Rate",
  "short_name": "RS_Rate",
  "version": "1.0.14",
  "version_name": "1.0.14-alpha",
  "description": "Allows to rate scientific publications within the Readersourcing approach.",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "default_locale": "en",
  "browser_action": {
    "browser_style": true,
    "default_popup": "src/views/home.html",
    "default_icon": {
      "16": "src/img/icon16.png",
      "32": "src/img/icon32.png",
      "48": "src/img/icon48.png",
      "128": "src/img/icon128.png"
    }
  },
  "icons": {
    "16": "src/img/icon16.png",
    "32": "src/img/icon32.png",
    "48": "src/img/icon48.png",
    "128": "src/img/icon128.png"
  },
  "options_ui": {
    "page": "src/views/options.html",
    "open_in_tab": false
  },
  "content_security_policy": "script-src 'self' https://kit.fontawesome.com; object-src 'self'"
}
