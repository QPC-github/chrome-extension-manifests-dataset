{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SamSearch USA",
  "author": "SamSearch",
  "description": "Make SamSearch USA your default Search Engine",
  "version": "1.2",
  "manifest_version": 2,
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "64": "icons/logo.png"
  },
  "browser_action": {
    "default_icon": "icons/logo.png"
  },
  "chrome_url_overrides": {
    "newtab": "new_tab.html"
  },
  "chrome_settings_overrides": {
    "homepage": "https://www.samsearch.co/?app",
    "search_provider": {
      "name": "SamSearch",
      "keyword": "SamSearch, search, engine, search engine",
      "search_url": "https://www.samsearch.co/web?q={searchTerms}",
      "favicon_url": "https://www.samsearch.co/themes/search/assets/images/favicon.png",
      "image_url": "https://www.samsearch.co/images?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    }
  }
}
