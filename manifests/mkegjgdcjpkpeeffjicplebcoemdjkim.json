{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Amazon Fit Reader",
  "version": "1.0",
  "description": "Automatically read and synthesize customer reviews for fitting information.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "manifest_version": 2
}
