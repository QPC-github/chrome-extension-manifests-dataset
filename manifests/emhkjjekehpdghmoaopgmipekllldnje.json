{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sticky Window",
  "description": "Open all new tabs in specified window",
  "version": "0.2",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://*/",
    "tabs",
    "storage"
  ],
  "commands": {
    "stick": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "sticks the window"
    },
    "unstick": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "unsticks the window"
    }
  }
}
