{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "luiscoimbra",
  "name": "Fixmodo",
  "description": "Reduz o tamanho da fonte e desabilita o menu deslizante do site do gizmodo",
  "version": "1.0.1",
  "permissions": [
    "http://gizmodo.uol.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://gizmodo.uol.com.br/*"
      ],
      "css": [
        "gizmodoAdaptStyle.css"
      ]
    }
  ],
  "icons": {
    "16": "g16.png",
    "48": "g48.png",
    "128": "g128.png"
  }
}
