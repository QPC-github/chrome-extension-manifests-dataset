{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Azure DevOps Board Scroller",
  "version": "1.0",
  "description": "This plugin adds a toggle to each Azure DevOps board column to allow for independent column scrolling.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "toggleme.js"
      ],
      "matches": [
        "https://*.visualstudio.com/*/_boards/board/*"
      ]
    }
  ],
  "icons": {
    "16": "scroll16.png",
    "48": "scroll48.png",
    "64": "scroll64.png",
    "128": "scroll128.png"
  },
  "author": "Amit âš¡ Amikuma",
  "manifest_version": 2
}
