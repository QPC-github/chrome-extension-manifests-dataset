{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch2Go",
  "description": "This extension adds a resizable Twitch stream to a page. Vist https://github.com/Maast3r/Twitch2Go for details.",
  "version": "2.0",
  "browser_action": {
    "default_title": "This extension adds a resizable Twitch stream to a page.",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "ja": [
        "material.min.js"
      ],
      "css": [
        "material.indigo-pink.min.css",
        "streamStyle.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
