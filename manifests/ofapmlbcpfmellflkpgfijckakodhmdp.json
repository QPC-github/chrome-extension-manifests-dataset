{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ミエルカキャプチャー　手元再現のためのキャプチャ機能",
  "version": "0.0.1",
  "permissions": [
    "storage",
    "desktopCapture",
    "downloads",
    "tabs",
    "https://mieruca-capture.kan.localhost/",
    "https://mieruca-capture.com/"
  ],
  "browser_action": {
    "default_icon": "img/mieruca.png",
    "default_title": "mieruca-capture",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "icons": {
    "32": "img/mieruca.png",
    "128": "img/mieruca-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
