{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Conference Screen Sharing",
  "author": "Konstantin Kotov",
  "version": "1.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for GVO to enable screen capture.",
  "homepage_url": "http://gogvo.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://7minx.com/*",
      "https://*.7minx.com/*",
      "https://myownmeeting.net/*",
      "https://*.myownmeeting.net/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo48.png"
  ]
}
