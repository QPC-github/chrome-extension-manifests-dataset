{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Grab It!",
  "description": "This extension builds the bridge between desktop and mobile world.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Grabit!"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "jquery.min.js",
      "jquery.qrcode.min.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}
