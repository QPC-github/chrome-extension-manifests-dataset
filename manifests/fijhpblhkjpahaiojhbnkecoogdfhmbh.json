{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Screenwriting Tools",
  "description": "Learn how to properly format your screenplays and write them for free!",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "screenplay16.png",
      "32": "screenplay32.png",
      "48": "screenplay48.png",
      "128": "screenplay128.png"
    }
  },
  "icons": {
    "16": "screenplay16.png",
    "32": "screenplay32.png",
    "48": "screenplay48.png",
    "128": "screenplay128.png"
  },
  "permissions": [
    "activeTab"
  ]
}
