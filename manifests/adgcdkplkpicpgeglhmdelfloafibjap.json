{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mint English Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Mint English Helper",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Hi, Minter!",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon_mint-16.png",
    "128": "icon_mint-128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
