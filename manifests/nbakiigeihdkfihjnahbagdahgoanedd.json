{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chaim",
  "short_name": "Chaim",
  "version": "0.0.9",
  "manifest_version": 2,
  "description": "Japanese text input for ChromeOS",
  "background": {
    "scripts": [
      "chaim.js",
      "romakana.js",
      "dictdata.js",
      "webdictdata.js",
      "dict.js"
    ]
  },
  "permissions": [
    "input",
    "storage"
  ],
  "icons": {
    "48": "icons/chaim-48.png",
    "96": "icons/chaim-96.png"
  },
  "input_components": [
    {
      "name": "Chaim",
      "type": "ime",
      "id": "Chaim.com.pitecan",
      "description": "Japanese text input for ChromeOS",
      "language": "ja",
      "layouts": [
        "us"
      ]
    }
  ]
}
