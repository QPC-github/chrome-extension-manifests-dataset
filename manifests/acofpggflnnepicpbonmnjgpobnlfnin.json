{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTube Pause",
  "short_name": "youtube-pause",
  "version": "1.1.0",
  "description": "No more scrolling down the page when you hit the spacebar on YouTube",
  "manifest_version": 2,
  "author": "@nshanmugham",
  "icons": {
    "512": "icons/icon512.png",
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "src/scripts/content-script.js"
      ],
      "match_about_blank": false,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "notifications"
  ],
  "web_accessible_resources": [
    "src/scripts/youtube-pause-extension.js"
  ]
}
