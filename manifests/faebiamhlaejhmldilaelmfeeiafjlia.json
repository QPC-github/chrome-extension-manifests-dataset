{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fix Powerschool Learning Discussion Posts",
  "version": "1.0",
  "description": "A simple program designed to make Discussion Posts on PowerSchool Learning more readable.",
  "permissions": [
    "storage",
    "declarativeContent",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon16.png",
      "48": "images/icon16.png",
      "128": "images/icon16.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon16.png",
    "48": "images/icon16.png",
    "128": "images/icon16.png"
  },
  "manifest_version": 2
}
