{
  "background": {
    "page": "background.htm"
  },
  "content_scripts": [
    {
      "css": [
        "css/scroll-bars.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "Light up any website to celebrate the holiday season with the smart Festive Scrollbar",
  "homepage_url": "http://www.thesmartcityproject.ca/",
  "icons": {
    "128": "img/128x128.png",
    "16": "img/16x16.png",
    "48": "img/48x48.png"
  },
  "manifest_version": 2,
  "name": "smart Festive Scrollbar",
  "permissions": [
    "contextMenus",
    "unlimitedStorage",
    "notifications"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0"
}
