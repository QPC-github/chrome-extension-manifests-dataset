{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "[[|]] OpenBijbel : Bijbel Toolbar 1.0",
  "short_name": "OpenBijbel",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Deze extensie is voor de de Bijbel toolbar van OpenBijbel.nu",
  "homepage_url": "http://www.openbijbel.nu",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "https://cdn.rawgit.com/Openbijbel-nu/DeBijbelToolbar/master/debijbel.nl.toolbar.js",
    "https://api.reftagger.com/v2/RefTagger.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.debijbel.nl/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
