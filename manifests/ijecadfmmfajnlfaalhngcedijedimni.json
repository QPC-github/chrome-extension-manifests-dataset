{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WebBookmarks",
  "description": "App to remember where you stop reading",
  "version": "1.3.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "bookmark.png",
    "default_popup": "popup.html",
    "default_title": "WebBookmarks"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "background",
    "http://*/*",
    "https://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "icons": {
    "16": "bookmark.png",
    "48": "bookmark.png",
    "128": "bookmark.png"
  }
}
