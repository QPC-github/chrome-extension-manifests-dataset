{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Android downloader",
  "version": "1.1",
  "description": "Send this link to my android then download it",
  "permissions": [
    "http://*/*",
    "contextMenus",
    "storage"
  ],
  "page_action": {
    "default_title": "Download to my android",
    "default_icon": "icon.jpg",
    "default_popup": "default.htm"
  },
  "background": {
    "scripts": [
      "rightclick.js"
    ]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
