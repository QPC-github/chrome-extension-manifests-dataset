{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "pokeBack",
  "description": "Pokes back all who have poked you, and continues to poke them back for as long as the poke window is open.",
  "version": "1.0",
  "permissions": [
    "https://www.facebook.com/pokes/*",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "poke.png"
  },
  "background": {
    "scripts": [
      "script.js"
    ],
    "persistent": true
  },
  "icons": {
    "128": "pokeBig.png"
  }
}
