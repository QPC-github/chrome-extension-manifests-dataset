{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ShopToList",
  "description": "This is a universal wish list extension, save your items, get notifications in case the price drops",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "cookies",
    "management",
    "tabs",
    "http://localhost:5000/",
    "http://127.0.0.1:5000/",
    "https://shoptolist.com/*",
    "http://*/"
  ]
}
