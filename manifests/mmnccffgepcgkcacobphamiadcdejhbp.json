{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "10.1.42",
  "manifest_version": 2,
  "name": "Savings Alerts",
  "description": "Receive alerts when you are on a participating retailer's site.",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Savings Alerts"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "storage",
    "webRequest",
    "webNavigation",
    "https://secure.extensiondownload.com/",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "icons/transparent128.png"
  }
}
