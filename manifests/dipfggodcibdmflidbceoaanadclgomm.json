{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Intelligence Search",
  "version": "3.0.2",
  "manifest_version": 2,
  "description": "Searching Facebook",
  "browser_action": {
    "default_icon": {
      "16": "core/icons/icon16.png",
      "32": "core/icons/icon32.png",
      "48": "core/icons/icon48.png",
      "64": "core/icons/icon64.png",
      "128": "core/icons/icon128.png"
    },
    "default_popup": "core/html/popup.html",
    "default_title": "Facebook Search"
  },
  "background": {
    "scripts": [
      "core/background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.intel-sw.com/*"
    ]
  },
  "web_accessible_resources": [
    "/core/icons/*"
  ],
  "permissions": [
    "notifications",
    "tabs",
    "activeTab",
    "http://www.intel-sw.com/",
    "https://www.facebook.com/",
    "https://www.linkedin.com/",
    "https://www.twitter.com/",
    "http://localhost/*"
  ],
  "icons": {
    "16": "core/icons/icon16.png",
    "32": "core/icons/icon32.png",
    "48": "core/icons/icon48.png",
    "64": "core/icons/icon64.png",
    "128": "core/icons/icon128.png"
  }
}
