{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ASIN Nabber",
  "description": "Grabs the ASIN from a page",
  "version": "1.2",
  "icons": {
    "16": "grab16.png",
    "48": "grab48.png",
    "128": "grab128.png"
  },
  "web_accessible_resources": [
    "bomb48.png"
  ],
  "permissions": [
    "notifications",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*"
      ],
      "js": [
        "nabber.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "ASIN Nabber",
    "default_icon": "grab128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2
}
