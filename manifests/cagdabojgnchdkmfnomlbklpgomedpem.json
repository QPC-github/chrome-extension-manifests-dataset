{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hippocampus",
  "version": "0.0.4",
  "description": "Be deliberate about where you spend your time on the internet. Set goals for number of articles to read on your favorite blogs.",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
