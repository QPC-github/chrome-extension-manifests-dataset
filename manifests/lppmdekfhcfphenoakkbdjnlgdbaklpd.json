{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Boo!",
  "short_name": "Boo!",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Adds very realistic animated spiders to your chrome browser.",
  "homepage_url": "https://auz.github.io/Bug/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "boo!"
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "boo-icon16.png",
    "48": "boo-icon48.png",
    "64": "boo-icon64.png",
    "128": "boo-icon128.png"
  }
}
