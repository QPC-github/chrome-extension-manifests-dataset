{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "New Adjacent Tab",
  "version": "1.0.1",
  "description": "Opens a new tab to the right or left of the current one.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "minimum_chrome_version": "62",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "browser_action": {},
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "newTabToTheRight": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "New tab to the right"
    },
    "newTabToTheLeft": {
      "suggested_key": {
        "default": "Alt+H"
      },
      "description": "New tab to the left"
    }
  }
}
