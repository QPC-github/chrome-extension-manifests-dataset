{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tweet The Web",
  "description": "Now you can comment (tweet) on ANY webpage!",
  "version": "1.3",
  "short_name": "TweetTheWeb",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "img/TweetTheWeb4_16.png",
    "48": "img/TweetTheWeb4_48.png",
    "128": "img/TweetTheWeb4_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/TweetTheWeb4_512.png",
      "38": "img/TweetTheWeb4_512.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://cdn.syndication.twimg.com; object-src 'self'",
  "web_accessible_resources": [
    "img/TweetTheWeb4_128.png"
  ]
}
