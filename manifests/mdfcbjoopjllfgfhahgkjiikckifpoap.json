{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "3Dmeet Screen Sharing",
  "description": "An extension to allow you share your screen during an interactive 3D web conference.",
  "version": "1.0.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://*.3dmeet.com/*"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ]
}
