{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Back to Top",
  "version": "1.0",
  "description": "Back to the top of the web",
  "homepage_url": "https://github.com/MinpuKang/back_to_top",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "16": "images/top.png",
    "48": "images/top.png",
    "128": "images/top.png"
  },
  "browser_action": {
    "default_icon": "images/top.png",
    "default_title": "Back to Top"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/back_to_top.js"
    ]
  }
}
