{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Padlet",
  "description": "The easiest way to create and collaborate in the world",
  "manifest_version": 2,
  "version": "0.6",
  "app": {
    "urls": [
      "*://*.wallwisher.com/",
      "*://wallwisher.com/",
      "*://padlet.com/",
      "*://*.padlet.com/"
    ],
    "launch": {
      "web_url": "http://padlet.com/?ref=chromeapp"
    }
  },
  "icons": {
    "128": "chrome_app_128.png"
  },
  "permissions": [
    "unlimitedStorage",
    "notifications",
    "clipboardRead",
    "clipboardWrite"
  ]
}
