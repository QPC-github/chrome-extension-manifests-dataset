{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BeFrugal: Automatic Coupons and Cash Back",
  "short_name": "BeFrugal",
  "description": "Automatically apply coupons and cash back at thousands of your favorite stores!",
  "version": "2020.5.110.0",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "optional_permissions": [
    "management"
  ],
  "icons": {
    "16": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/contentscript.js",
        "js/autoApplyPrefs.js",
        "js/documentAccess.js",
        "js/autoApplyContent.js",
        "js/purify.min.js"
      ]
    },
    {
      "matches": [
        "*://*.yahoo.com/*"
      ],
      "js": [
        "js/yahooPopupSuppress.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "AutoApplyResources/*",
    "animations/badgeIcons/*",
    "animations/checkmark/*",
    "instructionImages/*",
    "notifybar/images/*",
    "disable/*",
    "ratepopup/*",
    "fonts/*",
    "toast_icon.png",
    "search_icon.png",
    "banner_next.png",
    "banner_prev.png",
    "disableExtensionsPage.html",
    "settingsPage.html",
    "up-arrow.png",
    "chrome-arrow.png",
    "chrome-arrow-small.png",
    "skin/go.png",
    "icon48.png",
    "icon128.png",
    "icon_cb.png",
    "grey_icon48.png",
    "scrollbar.js",
    "scrollbar.css",
    "js/newToast.js",
    "js/button.js",
    "js/notifybar.js",
    "settings/settings.html",
    "settings/searchSites.html"
  ],
  "browser_action": {
    "default_icon": "grey_icon48.png",
    "default_title": "BeFrugal",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.befrugal.com; object-src 'self';"
}
