{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VLB Express Shoppping",
  "description": "vlovebuy shopping service & parcel forwarding.",
  "version": "1.1",
  "browser_action": {
    "default_icon": {
      "19": "images/vlb_19x19.png",
      "38": "images/vlb_38x38.png",
      "128": "images/vlb_128x128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery-1.7.1.min.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "default_locale": "th"
}
