{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "互动百科工具版",
  "manifest_version": 2,
  "version": "1.2.8",
  "description": "在任意网页上选中文本或者链接后右键激活互动百科工具版，双击图标即可在页面右侧显示互动百科的词条，是信息工作者和百科爱好者的必备工具。",
  "background": {
    "page": "background.htm"
  },
  "icons": {
    "16": "appicon16.png",
    "48": "appicon48.png",
    "128": "appicon128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "idle",
    "cookies",
    "contextMenus",
    "background",
    "browsingData",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://secure.nenglp.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "appconf.js",
        "contentscript.js",
        "chromecs.js",
        "appcs.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
