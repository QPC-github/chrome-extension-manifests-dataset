{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nootpad",
  "description": "A notepad whenever you need it.",
  "version": "0.71",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Open a nootpad",
    "default_popup": "nootpad.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "19": "icon19.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ]
}
