{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shoptivity",
  "version": "1.1.0",
  "background": {
    "scripts": [
      "spy.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon-48.png",
    "default_title": "Shoptivity"
  },
  "description": "Shop. Save. Smile. The best way to shop online.",
  "homepage_url": "https://www.shoptivity.com/",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "cookies"
  ]
}
