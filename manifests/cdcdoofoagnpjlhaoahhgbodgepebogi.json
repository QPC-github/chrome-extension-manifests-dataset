{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hedwige",
  "short_name": "Hedwige",
  "version": "0.0.7",
  "description": "Hedwige : Lettre en ligne",
  "icons": {
    "16": "assets/img/logo-16.png",
    "48": "assets/img/logo-48.png",
    "128": "assets/img/logo-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/logo-16.png",
      "24": "assets/img/logo-24.png",
      "32": "assets/img/logo-32.png"
    },
    "default_title": "Hedwige"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "web_accessible_resources": [
    "assets/img/ic_check_black_24px.svg",
    "assets/img/ic_check_green_24px.svg",
    "assets/img/ic_close_black_24px.svg",
    "assets/img/three-dots.svg"
  ],
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "tabs",
    "http://*/",
    "https://*/",
    "https://mail.google.com/mail/*"
  ]
}
