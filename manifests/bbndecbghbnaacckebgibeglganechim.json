{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QuanticMind Pixel Helper",
  "version": "1.2",
  "description": "This extension allows QuanticMind customers to verify QuanticMind pixel implementations.",
  "homepage_url": "https://quanticmind.com/",
  "icons": {
    "16": "images/qm-icon-16.png",
    "48": "images/qm-icon-48.png",
    "128": "images/qm-icon-128.png"
  },
  "browser_action": {
    "default_title": "QuanticMind Pixel Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.min.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "tabs",
    "activeTab",
    "webNavigation",
    "cookies"
  ]
}
