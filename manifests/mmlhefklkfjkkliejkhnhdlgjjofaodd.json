{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Twitter Thanks",
  "description": "Twitter thanks for following",
  "version": "2.0.2",
  "author": "Denys Spirin",
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Say thanks",
    "default_icon": "icon48.png"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
