{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GhostPage",
  "description": "Page layout checker.",
  "version": "1.0",
  "background": {
    "scripts": [
      "ghost.js"
    ]
  },
  "browser_action": {
    "default_icon": "ghost.png",
    "default_title": "GhostPage"
  },
  "permissions": [
    "activeTab"
  ]
}
