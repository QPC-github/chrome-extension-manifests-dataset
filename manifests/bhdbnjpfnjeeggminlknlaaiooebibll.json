{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pi Reminder App Launcher",
  "description": "Quickly add a reminder for yourself and friends (Android App also available)",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "app": {
    "urls": [
      "http://pireminder.com/app/"
    ],
    "launch": {
      "web_url": "http://pireminder.com/app/"
    }
  },
  "permissions": [
    "unlimitedStorage",
    "notifications"
  ]
}
