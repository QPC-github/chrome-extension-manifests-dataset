{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "js/downloads.js",
      "js/auto.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "32": "img/auto-32.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "Auto Clear"
  },
  "description": "Automatically clears download list of unnecessary items according to user preferences",
  "icons": {
    "16": "img/auto-16.png",
    "32": "img/auto-32.png",
    "48": "img/auto-48.png",
    "128": "img/auto-128.png"
  },
  "manifest_version": 2,
  "name": "Download Auto Clear",
  "short_name": "Auto Clear",
  "options_page": "html/options.html",
  "permissions": [
    "downloads",
    "background",
    "storage"
  ],
  "version": "1.0.0"
}
