{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Swiss Army Knife",
  "short_name": "SAK",
  "version": "0.9.4",
  "description": "Swiss Army Knife for browser",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "SAK-icon.png"
  },
  "icons": {
    "48": "SAK-icon-48.png"
  },
  "options_page": "html/options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
