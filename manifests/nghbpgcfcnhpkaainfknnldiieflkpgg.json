{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "一键刷新所有",
  "version": "0.0.5",
  "description": "一键刷新所有当前窗口所打开的标签",
  "browser_action": {
    "default_title": "刷新所有",
    "default_icon": "images/16.png"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "notifications",
    "alarms",
    "cookies",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "manifest_version": 2
}
