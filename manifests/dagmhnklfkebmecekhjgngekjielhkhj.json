{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BeerFinder",
  "description": "Easily use the context menu to search for a highlighted beer name on Untappd, RateBeer or BeerAdvocate.",
  "version": "1.4",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "locales.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "beerfinder16.png",
    "48": "beerfinder48.png",
    "128": "beerfinder128.png"
  }
}
