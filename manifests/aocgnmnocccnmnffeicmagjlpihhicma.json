{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OWA Notifications",
  "description": "New E-Mails and Appointments notifications for OWA",
  "version": "0.17",
  "minimum_chrome_version": "50",
  "permissions": [
    "activeTab",
    "tabs",
    "background",
    "notifications",
    "idle"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/owa/*",
        "https://*/mail/*"
      ],
      "js": [
        "app.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "OWA Notifications",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "appointment.png",
    "mail.png",
    "error.png",
    "mailsync.png",
    "appointment.mp3",
    "new_mail.mp3",
    "snooze.mp3",
    "wtfpl-badge-1.png"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
