{
  "background": {
    "persistent": false,
    "scripts": [
      "script/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Silph Arena Tools",
    "name": "Silph Arena Tools"
  },
  "content_scripts": [
    {
      "js": [
        "script/content.js"
      ],
      "matches": [
        "https://silph.gg/*",
        "https://*.silph.gg/*"
      ]
    }
  ],
  "description": "CSS tools to aid in use of the Silph Arena.",
  "manifest_version": 2,
  "name": "Silph Arena Tools",
  "permissions": [
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.2",
  "web_accessible_resources": [
    "styles/*.css"
  ]
}
