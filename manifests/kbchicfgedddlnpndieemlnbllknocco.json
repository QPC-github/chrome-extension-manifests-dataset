{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pokémon Radio",
  "version": "1.0",
  "description": "Experience nostalgia as you listen to a variety of songs from the Pokémon video games while you browse with Google Chrome.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": [
      "scripts/AudioManager.js",
      "scripts/NotificationManager.js",
      "scripts/StateManager.js",
      "scripts/main.js"
    ]
  },
  "browser_action": {
    "default_title": "Pokémon Radio",
    "default_icon": {
      "16": "images/pokeball16.png",
      "32": "images/pokeball32.png",
      "48": "images/pokeball48.png",
      "128": "images/pokeball128.png"
    },
    "icons": {
      "16": "images/pokeball16.png",
      "32": "images/pokeball32.png",
      "48": "images/pokeball48.png",
      "128": "images/pokeball128.png"
    }
  },
  "options_page": "views/options.html",
  "manifest_version": 2
}
