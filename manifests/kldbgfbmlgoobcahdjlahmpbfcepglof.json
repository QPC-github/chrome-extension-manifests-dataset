{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smart Scroll Polissa",
  "description": "This extension will can scroll to top of page, to bottom or to stored positions",
  "version": "1.1",
  "browser_action": {
    "default_icon": {
      "19": "icon_19.png",
      "38": "icon_38.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "jquery-ui.min.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "48": "icon_48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "jquery-ui.min.js",
        "background.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
