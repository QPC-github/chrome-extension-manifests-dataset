{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MidwayConnect Recording Extension",
  "short_name": "MidwayRE",
  "author": "MidwayConnect",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "incognito": "not_allowed",
  "description": "Recording extension for MidwayConnect platform",
  "homepage_url": "https://www.midwayconnect.com/",
  "background": {
    "scripts": [
      "background.js",
      "RecordRTC.min.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/main-icon.png",
    "default_title": "Record Screen"
  },
  "icons": {
    "16": "images/main-icon.png",
    "22": "images/main-icon.png",
    "32": "images/main-icon.png",
    "48": "images/main-icon.png",
    "128": "images/main-icon.png"
  },
  "permissions": [
    "desktopCapture",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "images/main-icon.png"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}
