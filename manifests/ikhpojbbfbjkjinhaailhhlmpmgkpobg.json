{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "毛豆直播插件",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "毛豆直播插件",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.3",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "用于提供桌面共享功能的支持",
  "externally_connectable": {
    "matches": [
      "*://*.maodou.io/*",
      "*://127.0.0.1/*",
      "https://*.zhenchuanx.com/*"
    ]
  },
  "icons": {
    "128": "maodou_icon_128.png",
    "16": "maodou_icon_16.png",
    "48": "maodou_icon_48.png"
  },
  "browser_action": {
    "default_icon": "maodou_icon_16.png"
  }
}
