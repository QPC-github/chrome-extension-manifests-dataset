{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Talenthire Smart Hiring - US",
  "description": "Easily add candidates from popular websites directly into the CEIPAL ATS applicant tracking system.",
  "version": "3.1.6",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "all_frames": true,
      "matches": [
        "https://resdex.naukri.com/*",
        "https://www.linkedin.com/*",
        "https://employer.dice.com/*",
        "https://recruiter.monsterindia.com/*"
      ],
      "js": [
        "jquery-1.10.2.min.js",
        "jquery-ui.js",
        "content.js",
        "multiple-select.js",
        "combo-select-custom.js",
        "select2.js",
        "custom.js"
      ],
      "css": [
        "jquery-ui.css",
        "multiple-select.css",
        "css/style.css",
        "select2-css/select2.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "talenthire_logo.png",
    "icon.png",
    "loading.gif",
    "user_icon.svg",
    "right_arrow.svg",
    "left_arrow.svg",
    "minus_icon.png",
    "max_icon.jpg",
    "multiple-select.png",
    "linkedin-multiple-select.png",
    "candidate_preview.html",
    "css/style.css",
    "select2-css/select2.css"
  ],
  "permissions": [
    "webNavigation",
    "activeTab",
    "tabs",
    "https://www.linkedin.com/*",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
