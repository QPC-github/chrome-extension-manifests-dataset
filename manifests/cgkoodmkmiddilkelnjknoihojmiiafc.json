{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ads Blocker for Youtube page",
  "version": "1.0.1",
  "description": "Automatically blocks ads on your Youtube player and side panels.",
  "short_name": "Ads blocker",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://www.youtube.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/youtube-ads-blocker-16.png",
      "32": "images/youtube-ads-blocker-32.png",
      "48": "images/youtube-ads-blocker-48.png",
      "128": "images/youtube-ads-blocker-128.png"
    }
  },
  "icons": {
    "16": "images/youtube-ads-blocker-16.png",
    "32": "images/youtube-ads-blocker-32.png",
    "48": "images/youtube-ads-blocker-48.png",
    "128": "images/youtube-ads-blocker-128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src https://www.youtube.com",
  "offline_enabled": false
}
