{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "2ch-caster",
  "version": "1.3.0",
  "description": "2ch-caster will notify you about new threads on 2ch.hk via pop-up notifications.\nMiss no thread, anonymous!",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png"
  },
  "browser_action": {
    "default_icon": "icon-64.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "tts",
    "http://2ch.hk/"
  ]
}
