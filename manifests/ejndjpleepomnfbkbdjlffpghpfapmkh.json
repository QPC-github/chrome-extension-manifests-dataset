{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Userstand Screensharing",
  "author": "IsmaÃ«l Sow at Userstand",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension allows you to share your screen when participating to a user research session with Userstand.",
  "homepage_url": "http://userstand.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://userstand.com/*",
      "https://app.userstand.com/*",
      "https://userstand-staging.herokuapp.com/*",
      "https://userstand-production.herokuapp.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "64": "logo64.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
