{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "IsThisFakeNews.com",
  "description": "This extension will check if a website is known to spread misinformation",
  "version": "1.0",
  "icons": {
    "16": "new-icon/neutral/icon16.png",
    "32": "new-icon/neutral/icon32.png",
    "48": "new-icon/neutral/icon48.png",
    "128": "new-icon/neutral/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "new-icon/neutral/icon16.png",
      "32": "new-icon/neutral/icon32.png",
      "48": "new-icon/neutral/icon48.png",
      "128": "new-icon/neutral/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
