{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smart Playback for YouTube",
  "short_name": "smartt.yt",
  "description": "Smart playback for YouTube enhances the playback experience with custom intervals.",
  "version": "1.1.4",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png",
    "256": "img/icon256.png"
  },
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*"
      ],
      "css": [
        "css/vendor/jquery-ui-1.10.3.custom.min.css",
        "css/content.css"
      ],
      "js": [
        "js/vendor/jquery-1.11.1.min.js",
        "js/vendor/jquery-migrate-1.2.1.min.js",
        "js/vendor/jquery-ui-1.10.3.custom.min.js",
        "js/content.js",
        "js/yt.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "js/player.js",
    "js/vendor/jquery-1.11.1.min.map",
    "img/*",
    "js/ytcomments.js"
  ]
}
