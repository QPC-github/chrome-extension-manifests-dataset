{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Twitagram",
  "short_name": "Twitagram",
  "description": "Enhance your Twitter experience by directly rendering Instagram images into your feed.",
  "version": "0.1.3",
  "permissions": [
    "https://twitter.com/",
    "http://twitter.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Twitagram",
    "default_icon": "icon-off.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "style.css"
  ],
  "manifest_version": 2
}
