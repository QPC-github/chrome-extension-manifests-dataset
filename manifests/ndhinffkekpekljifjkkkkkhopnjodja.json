{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Feedly Mini",
  "description": "Easily add content to your Feedly while browsing",
  "author": "Feedly",
  "version": "50",
  "manifest_version": 2,
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "background": {
    "scripts": [
      "background-bundle.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "19x19.png",
      "38": "19x19@2x.png"
    },
    "default_title": "Feedly Mini",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "*://feedly.com/",
    "https://graph.facebook.com/*"
  ],
  "web_accessible_resources": [
    "128x128.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://feedly.com/*"
      ],
      "js": [
        "inject-bundle.js"
      ]
    }
  ]
}
