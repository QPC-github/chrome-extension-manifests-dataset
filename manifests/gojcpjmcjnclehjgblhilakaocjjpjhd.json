{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Escapist",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Close tabs with the Escape key.",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "ears.js"
      ]
    }
  ],
  "icons": {
    "16": "exit-16.png",
    "48": "exit-48.png",
    "128": "exit-128.png"
  },
  "permissions": [
    "tabs"
  ]
}
