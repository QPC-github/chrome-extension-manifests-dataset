{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WGU+",
  "short_name": "WGU+",
  "version": "2019.504.018",
  "description": "A plugin to quickly show resources available for WGU classes",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://my.wgu.edu/courses/course/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "links/*.txt"
  ],
  "permissions": [
    "tabs"
  ]
}
