{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Elevate",
  "short_name": "Elevate",
  "description": "A new tab extension for Chrome designed to improve productivity.",
  "version": "1.0.0.0",
  "icons": {
    "16": "images/icons/elevate-icon-16.png",
    "32": "images/icons/elevate-icon-32.png",
    "48": "images/icons/elevate-icon-48.png",
    "128": "images/icons/elevate-icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icons/elevate-icon-16.png",
      "32": "images/icons/elevate-icon-32.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "geolocation",
    "storage",
    "*://weather-ydn-yql.media.yahoo.com/*",
    "*://unsplash.com/*"
  ]
}
