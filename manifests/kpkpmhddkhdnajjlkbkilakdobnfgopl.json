{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TechGenyz - Technology News, Daily Updates",
  "short_name": "TechGenyz",
  "description": "Get top technology news, latest news on mobile, AR, VR, gaming, apps and more. Install TechGenyz Chrome extension to stay updated.",
  "version": "2.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "assets/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "*://*/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon-16.png"
    }
  },
  "icons": {
    "24": "img/icon-24.png",
    "32": "img/icon-32.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "manifest.json",
    "popup.html",
    "assets/contentscript.js"
  ]
}
