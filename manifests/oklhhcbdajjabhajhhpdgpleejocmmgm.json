{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Crypto Rates",
  "description": "Convert from one crypto currency to another",
  "version": "0.4",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "30": "icon30.png",
    "48": "icon48.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "web_accessible_resources": [
    "/popup.html",
    "/popup.js",
    "/style.css",
    "/libs/*"
  ],
  "manifest_version": 2,
  "author": "Turbatu Dumitru Titus <titus.tur.dum@gmail.com>"
}
