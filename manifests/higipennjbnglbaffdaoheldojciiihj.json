{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HA-Sites Notificações",
  "short_name": "HA-Sites",
  "description": "Plugin monitor de tickets e faturas da Hospedagem-Anual de Sites e Criação de App (iOS/Android).",
  "icons": {
    "16": "icons/16px.png",
    "48": "icons/48px.png",
    "128": "icons/128px.png"
  },
  "version": "1.1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/browser_disabled@1x.png",
      "38": "icons/browser_disabled@2x.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "notifications",
    "*://*/"
  ]
}
