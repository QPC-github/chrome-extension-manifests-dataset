{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Verdien geld voor Excelsior",
  "version": "1.0.1",
  "description": "Geeft een herinnering bij het bezoek van deelnemende webwinkels waarbij je via Excelsior kunt shoppen. Verdien geld voor Excelsior!",
  "icons": {
    "128": "icons/excelsior128.png",
    "48": "icons/excelsior48.png",
    "16": "icons/excelsior16.png"
  },
  "author": "Erik van der Veen",
  "content_scripts": [
    {
      "js": [
        "shops.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
