{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mixalator",
  "description": "Easily add and browse links from your Mixalator.com account",
  "version": "0.2.1",
  "homepage_url": "https://mixalator.com",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128_96.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Mixalator"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "topSites",
    "https://*.mixalator.com/"
  ],
  "incognito": "spanning",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      }
    },
    "add-current-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Add the current page to your Mixalator mix."
    }
  }
}
