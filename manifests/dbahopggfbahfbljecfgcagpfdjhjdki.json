{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.4",
  "manifest_version": 2,
  "short_name": "icloudnotifier",
  "name": "Notifier for iCloud™",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/icloud-notifier.html",
  "options_ui": {
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "description": "Get Badge notification for iCloud and instant access to your inbox with just one click.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.icloud.com/*",
    "http://mybrowseraddon.com/*"
  ],
  "browser_action": {
    "default_title": "Notifier for iCloud™",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
