{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Greenpeace Highlight",
  "description": "Highlights Greenpeace on web pages.",
  "author": "Greenpeace NZ",
  "short_name": "Greenpeace",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "activeTab"
  ],
  "version": "0.0.0.6",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "exclude_matches": [
        "*://www.greenpeace.org.nz/*",
        "*://mail.google.com/*",
        "*://docs.google.com/*",
        "*://drive.google.com/*",
        "*://*.box.com/*",
        "*://*.twitter.com/*",
        "*://*.facebook.com/*",
        "*://*.e-activist.com/*",
        "*://*.greenpeace.org/*",
        "*://app.terminusapp.com/*",
        "*://*.google.com/*"
      ],
      "run_at": "document_end"
    }
  ]
}
