{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cyael Twitch Alert",
  "author": "Norix Wolfe",
  "options_page": "options.html",
  "version": "1.0.2",
  "description": "This app notifies you when Cyael goes live on Twitch!",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "Cyael Twitch Alert",
    "default_icon": "icon_128.png",
    "default_popup": "popout.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "run.js"
    ]
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "*://static-cdn.jtvnw.net/*"
  ],
  "web_accessible_resources": [
    "icon_128.png"
  ]
}
