{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Remomedi screen capture",
  "description": "Allows you to capture your desktop for use in remomedi application",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.videoapteekki.fi/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
