{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Kigi Team",
  "version": "1.6.0",
  "name": "Kigi",
  "description": "Veja informações da sua empresa, conecte-se com maquininhas e muito mais.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "assets/images/favicon.png",
    "48": "assets/images/favicon.png",
    "128": "assets/images/favicon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "*://192.168.100.36/*",
      "*://localhost/*",
      "*://*.kigisistemas.com.br/*"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://localhost/*",
    "*://*.kigisistemas.com.br/*",
    "*://*.nfe.fazenda.gov.br/*"
  ]
}
