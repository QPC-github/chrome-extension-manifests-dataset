{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MattePad",
  "short_name": "mPad",
  "description": "In-browser text editor",
  "version": "2.0.1",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "MattePad",
    "default_icon": "icon_32.png"
  }
}
