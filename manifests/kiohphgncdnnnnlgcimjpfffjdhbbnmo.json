{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Easy QrCode",
  "description": "Com esta extensão é possível criar códigos Qr facilmente baseado na url acessada.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Easy QrCode",
    "default_popup": "popup.html",
    "default_icon": "img/32.png"
  },
  "icons": {
    "32": "img/32.png",
    "128": "img/128.png"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
