{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mizumori extension",
  "description": "Allow clipboard access to mizumori.org for auto catching cards.",
  "version": "1.0.9",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://mizumori.org/*"
    ]
  }
}
