{
  "manifest_version": 2,
  "name": "Colourless Browsing",
  "version": "0.2",
  "content_scripts": [
    {
      "js": [
        "colourless.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_page": "options.html",
  "description": "Toggle extension activity to browse in black and white, or colour.",
  "permissions": [
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "icons": {
    "16": "img/colourless-16.png",
    "128": "img/colourless-128.png"
  }
}
