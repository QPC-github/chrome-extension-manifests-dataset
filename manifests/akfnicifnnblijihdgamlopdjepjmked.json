{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ShipBH Place Orders Plugin",
  "description": "Báo giá trực tiếp phí ship về VN các trang Amazon, eBay, Jomashop, Ashford ",
  "version": "1.7",
  "content_scripts": [
    {
      "matches": [
        "https://amazon.com/*",
        "https://www.amazon.com/*"
      ],
      "css": [
        "toastr.min.css"
      ],
      "js": [
        "jquery.min.js",
        "toastr.min.js",
        "content.js"
      ]
    },
    {
      "matches": [
        "https://ebay.com/*",
        "https://www.ebay.com/*"
      ],
      "css": [
        "toastr.min.css"
      ],
      "js": [
        "jquery.min.js",
        "toastr.min.js",
        "contentEbay.js"
      ]
    },
    {
      "matches": [
        "https://jomashop.com/*",
        "https://www.jomashop.com/*"
      ],
      "css": [
        "toastr.min.css"
      ],
      "js": [
        "jquery.min.js",
        "toastr.min.js",
        "contentJomashop.js"
      ]
    },
    {
      "matches": [
        "https://ashford.com/*",
        "https://www.ashford.com/*"
      ],
      "css": [
        "toastr.min.css"
      ],
      "js": [
        "jquery.min.js",
        "toastr.min.js",
        "contentAshford.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
