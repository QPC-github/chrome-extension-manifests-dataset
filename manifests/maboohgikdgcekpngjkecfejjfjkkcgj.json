{
  "background": {
    "scripts": [
      "js/koo/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon64-gray.png",
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "content_security_policy": "script-src 'self' https://koo.elibsystem.ru; object-src 'self'",
  "default_locale": "ru",
  "description": "__MSG_appDesc__",
  "icons": {
    "128": "img/icon64.png"
  },
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "permissions": [
    "storage",
    "proxy",
    "alarms",
    "notifications",
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "privacy"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.3"
}
