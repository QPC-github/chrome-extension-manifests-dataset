{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "post_to_glimpse.js"
    ]
  },
  "description": "Add a context menu item to post images to the Glimpse service.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "minimum_chrome_version": "6",
  "name": "Post to Glimpse (BETA)",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "version": "1.2"
}
