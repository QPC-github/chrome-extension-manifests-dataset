{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Generate qr code",
  "version": "1.0",
  "description": "Generate qr code within few seconds!",
  "permissions": [
    "declarativeContent",
    "tabs"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "img/icons/micky16.png",
      "32": "img/icons/micky32.png",
      "48": "img/icons/micky48.png",
      "128": "img/icons/micky128.png"
    }
  },
  "icons": {
    "16": "img/icons/micky16.png",
    "32": "img/icons/micky32.png",
    "48": "img/icons/micky48.png",
    "128": "img/icons/micky128.png"
  }
}
