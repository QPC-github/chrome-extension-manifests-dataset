{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Iframely Responsive Embeds",
  "description": "Iframely gives responsive embed codes for YouTube, Vimeo, Instagram, Imgur, Vine, Flickr and 1500 others.",
  "version": "2.0.11",
  "icons": {
    "128": "icons/iframely-icon-128x128.png"
  },
  "page_action": {
    "default_icon": "icons/iframely-icon-ready.png",
    "default_title": "Iframely"
  },
  "content_scripts": [
    {
      "js": [
        "js/content_finder.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "page": "background.html?mode=prod&action=shorten"
  },
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
