{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ContinuM Screen Share Extension",
  "description": "Screen share from ContinuM",
  "version": "1.0.3",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.continum.com/*",
      "*://continum.com/*",
      "*://localhost/*",
      "*://continum.hazel.sites.coffee/*",
      "*://continum.blue.sites.coffee/*",
      "*://continum.red.sites.coffee/*",
      "*://continum.green.sites.coffee/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
