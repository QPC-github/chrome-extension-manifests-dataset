{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TOUT METZ",
  "description": "L'extension TOUT METZ vous alerte discrètement de la parution d'informations régionales et frontalières",
  "version": "1.0",
  "author": "Add Valoris",
  "homepage_url": "http://www.tout-metz.com",
  "browser_action": {
    "default_title": "TOUT METZ",
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ],
    "persistent": true
  }
}
