{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ForYouSyriaNews",
  "description": "For you Syria news feed",
  "version": "1.0",
  "short_name": "FYSnews",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "http://www.foryousyria.com/*",
    "https://www.foryousyria.com/*",
    "notifications",
    "background",
    "storage",
    "http://*/*"
  ]
}
