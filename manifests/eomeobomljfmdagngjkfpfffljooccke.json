{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chia sẻ màn hình - Screen Sharing - Aloguru",
  "short_name": "Aloguru Screen Sharing",
  "author": "trinvh@inapps",
  "version": "0.1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is developed for capture content of your screen and using it for Aloguru conversations.",
  "homepage_url": "https://aloguru.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.aloguru.com/*",
      "https://*.alo.guru/*",
      "https://*.guru.test/*"
    ]
  },
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "browser_action": {
    "default_icon": "48x48.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "16x16.png"
  ]
}
