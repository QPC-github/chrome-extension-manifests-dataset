{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Random Wallpaper Generator",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Quick and easy way to find desktop wallpaper. Select dimensions and color preference and Random Wallpaper Generator will do the rest",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "72": "icons/icon72.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "192": "icons/icon192.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Random Wallpaper Generator",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "https://unsplash.it/"
  ]
}
