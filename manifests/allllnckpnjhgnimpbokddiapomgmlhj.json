{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Torah Links Amazon Smile",
  "description": "This extension sponsored by Torah Links will automatically redirect you to Amazon Smile to support them.",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "*://www.amazon.com/*"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "jquery.min.js",
      "bg.js"
    ]
  }
}
