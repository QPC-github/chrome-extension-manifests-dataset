{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sovrn //Commerce",
  "version": "1.8.13",
  "description": "Create and share monetized links to over 70,000 affiliate merchants.",
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "background": {
    "scripts": [
      "extension/checkaffiliation.js",
      "extension/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage",
    "notifications"
  ]
}
