{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shorten URL",
  "description": "Small extension for get Shorten URL and share Social Network",
  "version": "1.1",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "clipboardWrite",
    "clipboardRead"
  ]
}
