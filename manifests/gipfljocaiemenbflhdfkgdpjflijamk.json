{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bare Tracker",
  "description": "\"Bare Tracker\" helps peoples get a barer, lighter browsing experience by informing them about their browsing environmental impact.",
  "version": "1.0",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "tools.js",
      "background/tabs.js",
      "background/badge.js",
      "background/storage.js",
      "background/main.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "storage",
    "*://*/*"
  ]
}
