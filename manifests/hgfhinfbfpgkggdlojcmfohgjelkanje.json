{
  "browser_action": {
    "default_icon": "128.png",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/menu.js"
      ],
      "matches": [
        "*://vk.com/*",
        "*://new.vk.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "Это расширение добавляет любые выбранные вами ссылки ссылки в меню на сайте vk.com",
  "icons": {
    "128": "128.png"
  },
  "manifest_version": 2,
  "name": "Мое ВК меню",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0"
}
