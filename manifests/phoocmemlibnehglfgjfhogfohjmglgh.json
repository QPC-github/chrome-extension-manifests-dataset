{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Новости дня СМИ2",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/button.png"
  },
  "web_accessible_resources": [
    "check.html"
  ],
  "description": "Самые интересные и актуальные новости российских онлайн-медиа",
  "background": {
    "page": "background.html"
  },
  "homepage_url": "http://smi2.ru/",
  "version": "1.4.2",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/button.png",
    "default_title": "Главные новости России"
  },
  "permissions": [
    "webNavigation",
    "notifications",
    "http://*/*",
    "https://*/*",
    "storage",
    "gcm"
  ]
}
