{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Leap Scroll",
  "description": "Scrolling pages thanks to the orientation of the hand with the Leap",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
