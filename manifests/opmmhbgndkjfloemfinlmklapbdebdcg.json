{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Remove Youtube Comments",
  "description": "Removes comments under Youtube video - Скрывает и удаляет комментарии в Ютуб",
  "version": "1.1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "css": [
        "youtube.css"
      ],
      "js": [
        "script.js"
      ],
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png"
  }
}
