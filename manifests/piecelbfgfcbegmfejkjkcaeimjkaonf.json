{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "small_camera.png"
    },
    "default_popup": "tabs.html",
    "default_title": "SnapTab"
  },
  "description": "Take a snapshot of all of the tabs currently open, and pop them back up even after they're all closed.",
  "icons": {
    "48": "large_camera.png",
    "128": "large_camera.png"
  },
  "manifest_version": 2,
  "name": "SnapTab",
  "permissions": [
    "tabs",
    "notifications"
  ],
  "version": "1.0"
}
