{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Типограф",
  "short_name": "Типограф",
  "description": "Программа бесплатно доступна на сайте artlebedev.ru",
  "author": "Александр Никитин (nikitin82@gmail.com)",
  "version": "1.0.3.0",
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon16.png",
    "default_title": "Типограф",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "http://typograf.artlebedev.ru/",
    "storage"
  ]
}
