{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MouseZoom",
  "version": "0.2.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "description": "Zoom in and out with the right mouse button and left click or wheel.",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "MouseZoom",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "options.model.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
