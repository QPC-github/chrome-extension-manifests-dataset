{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WPGA Roster Download",
  "description": "This extension allows the users to download class rosters from the WPGA website.",
  "version": "1.3",
  "icons": {
    "16": "WPGARosterWidget_Icon_16.png",
    "48": "WPGARosterWidget_Icon_48.png",
    "128": "WPGARosterWidget_Icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "WPGARosterWidget_Icon_16.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://wpga.myschoolapp.com/*"
  ]
}
