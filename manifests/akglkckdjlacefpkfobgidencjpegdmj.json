{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "BriteClass Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for BriteClass",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.3",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in BriteClass.",
  "externally_connectable": {
    "matches": [
      "*://*.briteu.com/*"
    ]
  },
  "icons": {
    "128": "briteclass_icon_128.png",
    "16": "briteclass_icon_16.png",
    "48": "briteclass_icon_48.png"
  },
  "browser_action": {
    "default_icon": "briteclass_icon_16.png"
  }
}
