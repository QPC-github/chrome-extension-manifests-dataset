{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TopicHeads Text-Checker Extension",
  "version": "2.2",
  "description": "TopicHeads Text-Checker f√ºr Chrome",
  "icons": {
    "16": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content_script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "background",
    "tabs"
  ]
}
