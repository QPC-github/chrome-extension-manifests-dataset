{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screen Sharing",
  "description": "Screensharing utility",
  "version": "1.1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "52",
  "icons": {
    "64": "logo64.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "https://*.netsapiens.com/*",
      "https://*.cloudsfu.com/*"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.netsapiens.com/*",
        "https://*.cloudsfu.com/*"
      ]
    }
  ]
}
