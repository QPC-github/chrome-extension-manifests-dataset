{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GLH Utils - Link Copier",
  "version": "1.1.6",
  "manifest_version": 2,
  "description": "Right-click to copy a Full-link with both title and URL. Press Ctrl+C to copy link under mouse pointer or the page URL+title itself.",
  "homepage_url": "http://huydung.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_title": "Copy Page Title + URL",
    "default_icon": "icons/icon19.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/contentscript.js"
      ]
    }
  ],
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "declarativeContent",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "webNavigation",
    "https://*/*",
    "http://*/*"
  ]
}
