{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Web Playground",
  "version": "1.0",
  "description": "A website editor that will allow you to change the CSS of any website and have it save! Control The Web!",
  "icons": {
    "48": "css_icon_white(48).png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "author": "Alex Thomas",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Saves To .CSS File"
    },
    "clear": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Clears Changes!"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content_script_css.css"
      ],
      "js": [
        "content_script_js.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "debugger"
  ],
  "short_name": "WebPlay",
  "version_name": "BareBones"
}
