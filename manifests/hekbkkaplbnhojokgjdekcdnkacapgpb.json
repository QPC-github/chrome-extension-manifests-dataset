{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cookie Eater",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Clears all cookies when browser starts and after a user-specified period of inactivity.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "cookies",
    "idle",
    "<all_urls>"
  ]
}
