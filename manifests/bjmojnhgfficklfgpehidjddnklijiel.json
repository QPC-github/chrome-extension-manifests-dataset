{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HackForums Giveaway",
  "description": "Easy and fair giveaway contest!",
  "version": "1.0.1",
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/main.js"
      ],
      "matches": [
        "*://*.hackforums.net/showthread.php?tid=*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.hackforums.net/*",
    "storage"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "img/gift.png",
    "js/jquery.js",
    "js/main.js",
    "img/delete.png",
    "img/pp.png"
  ]
}
