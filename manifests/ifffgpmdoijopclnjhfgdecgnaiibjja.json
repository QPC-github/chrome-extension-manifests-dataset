{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "XKCDifier",
  "version": "1.0",
  "description": "XKCD replacements, but real.",
  "homepage_url": "https://miguelpiedrafita.com",
  "author": "Miguel Piedrafita",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Autometalogolex"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "xkcdifier.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "assets/logo.png"
  }
}
