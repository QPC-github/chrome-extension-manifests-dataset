{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Engage with Change.org",
  "short_name": "Engage",
  "version": "0.0.1",
  "description": "Accelerate growth of petitions by getting notified when new ones are created.",
  "author": "Rahul Matta",
  "permissions": [
    "background",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon_32.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
