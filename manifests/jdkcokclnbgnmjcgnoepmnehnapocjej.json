{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SQURL",
  "description": "This extension allows you add current link to SQURL",
  "version": "1.8.2",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "presistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html",
    "default_title": "Add to SQURL"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/content_controller.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
