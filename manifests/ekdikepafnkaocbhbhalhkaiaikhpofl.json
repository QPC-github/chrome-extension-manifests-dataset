{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screen Sharing for enguruTalk",
  "author": "Ajmal Ebrahim",
  "version": "2.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for implementing screen sharing capacity for engurutalk classes.",
  "homepage_url": "https://engurutalk.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://learn.engurutalk.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
