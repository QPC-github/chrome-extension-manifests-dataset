{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nxt.is plugin",
  "description": "Nxt.is - Your URL shortener [plugin]",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Short your url",
    "default_popup": "popup/popup.html",
    "default_icon": "img/logo_single.png"
  },
  "author": "SUBSEQ.NET",
  "homepage_url": "https://www.subseq.net/",
  "permissions": [
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "cookies"
  ],
  "manifest_version": 2
}
