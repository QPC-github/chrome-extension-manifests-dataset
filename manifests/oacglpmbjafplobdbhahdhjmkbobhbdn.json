{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Parsel Addlet",
  "description": "This extension allows you to add products from anywhere on the web to your Parsel store.",
  "version": "0.7",
  "permissions": [
    "*://*/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/icon16.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/parsel_extension.js"
    ]
  },
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png"
  },
  "web_accessible_resources": [
    "img/*.png",
    "js/*.js"
  ]
}
