{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Comparatix : comparateur de prix",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "version": "1.9.1",
  "description": "Comparateur de prix sur internet. Comparatix compare en temps r√©el les prix de nos partenaires et vous indique le meilleur prix.",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js",
      "js/amazon.js",
      "js/boulanger.js",
      "js/cdiscount.js",
      "js/cultura.js",
      "js/darty.js",
      "js/fnac.js",
      "js/mistergooddeal.js",
      "js/pixmania.js",
      "js/priceminister.js",
      "js/rueducommerce.js",
      "js/toysrus.js"
    ]
  },
  "browser_action": {
    "name": "Mon comparateur",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "background",
    "tabs",
    "activeTab",
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
