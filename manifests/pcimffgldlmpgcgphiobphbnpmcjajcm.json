{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "chatcrm",
  "short_name": "Chat CRM",
  "description": "Chat CRM - Easy connect to all chat platform",
  "version": "3.2.1",
  "browser_action": {
    "default_icon": "icon48_off.png",
    "default_popup": "settings_popup.html",
    "default_title": "chatcrm"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "config.js",
        "script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "settings.html",
  "web_accessible_resources": [
    "client.js"
  ],
  "background": {
    "scripts": [
      "config.js",
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "https://*.chatcrm.app/*",
    "http://*.whatsapp.*/*",
    "https://*.whatsapp.*/*"
  ]
}
