{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Qapture",
  "short_name": "Qapture",
  "author": "THE DIGITAL GROUP",
  "version": "2.2",
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "description": "Build 141019.01 Copyright @ The Digital Group Infotech Pvt. Ltd. 2019",
  "icons": {
    "48": "TDG-icon.png",
    "128": "TDG-icon-big.png"
  },
  "homepage_url": "https://www.thedigitalgroup.com/",
  "background": {
    "scripts": [
      "background/background.js",
      "background/background.capture.js",
      "background/background.common.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/qara.png",
    "default_title": "Capture, Explain and Report",
    "default_popup": "popup.html"
  },
  "permissions": [
    "desktopCapture",
    "storage",
    "tabs",
    "tabCapture",
    "activeTab",
    "identity",
    "<all_urls>",
    "background",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; ",
  "web_accessible_resources": [
    "images/main-icon.png",
    "config.json"
  ]
}
