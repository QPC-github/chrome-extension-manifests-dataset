{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "System Searcher",
  "short_name": "System Searcher",
  "description": "Quick search tool for any webesite",
  "version": "2.0.5",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_popup": "popup.html"
  }
}
