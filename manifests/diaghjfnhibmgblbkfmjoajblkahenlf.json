{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Creatant Clipper",
  "short_name": "Creatant Clipper",
  "description": "Easily bookmark content into your Creatant account.",
  "version": "2.0.14",
  "icons": {
    "32": "assets/favicon-32x32.png",
    "96": "assets/favicon-96x96.png",
    "144": "assets/favicon-144x144.png"
  },
  "browser_action": {
    "default_icon": "assets/favicon-96x96.png",
    "default_title": "Creatant Clipper"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": [
    "dnd-handler.css",
    "assets/fonts/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.creatant.com/*"
    ]
  }
}
