{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AT / WebLock",
  "description": "Extension for lock websites",
  "version": "1.2",
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/16.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "unlimitedStorage",
    "notifications",
    "storage",
    "activeTab",
    "tabs",
    "https://web.whatsapp.com/*",
    "http://web.whatsapp.com/*",
    "https://m.facebook.com/*",
    "http://m.facebook.com/*",
    "https://www.facebook.com/*",
    "http://www.facebook.com/*",
    "https://outlook.live.com/*",
    "http://outlook.live.com/*",
    "https://mail.yahoo.com/*",
    "http://mail.yahoo.com/*",
    "https://mail.google.com/*",
    "http://mail.google.com/*",
    "https://mail.zoho.com/zm/*",
    "http://mail.zoho.com/zm/*",
    "https://inbox.google.com/*",
    "http://inbox.google.com/*",
    "https://www.instagram.com/*",
    "http://www.instagram.com/*"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "http://web.whatsapp.com/*",
        "https://m.facebook.com/*",
        "http://m.facebook.com/*",
        "https://www.facebook.com/*",
        "http://www.facebook.com/*",
        "https://outlook.live.com/*",
        "http://outlook.live.com/*",
        "https://mail.yahoo.com/*",
        "http://mail.yahoo.com/*",
        "https://mail.google.com/*",
        "http://mail.google.com/*",
        "https://mail.zoho.com/zm/*",
        "http://mail.zoho.com/zm/*",
        "https://inbox.google.com/*",
        "http://inbox.google.com/*",
        "https://www.instagram.com/*",
        "http://www.instagram.com/*"
      ],
      "css": [
        "css/flexboxgrid.min.css",
        "css/jquery-pincode-autotab.css",
        "css/lock.css",
        "css/font-awesome.css",
        "css/jquery.btnswitch.css",
        "css/toastr.min.css"
      ],
      "js": [
        "js/jq.js",
        "js/idle-timer.js",
        "options/jquery-pincode-autotab.js",
        "options/bootstrap.js",
        "js/toastr.min.js",
        "options/underscore.js",
        "options/backbone.js",
        "js/app/constants.js",
        "js/app/main.js",
        "js/app/app.js"
      ]
    }
  ]
}
