{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cookie Snapshots",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Save and restore cookies quickly! It's like behaves multiple login sessions.",
  "permissions": [
    "tabs",
    "<all_urls>",
    "cookies",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/util.js",
      "js/background.js"
    ]
  },
  "page_action": {
    "default_icon": "img/icon.png",
    "default_title": "Cookie Snapshots",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon.png"
  }
}
