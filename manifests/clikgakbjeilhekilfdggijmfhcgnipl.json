{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Red and Black Shards Wallpaper Tab Theme",
  "version": "0.37",
  "description": "HI-RES images of red and black shards on every new tab.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Red and Black Shards Wallpaper Tab Theme",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "https://home.newtabgallery.com/*"
  ]
}
