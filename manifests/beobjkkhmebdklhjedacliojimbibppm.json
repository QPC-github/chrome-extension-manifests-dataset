{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Optimilia Studios",
  "background": {
    "scripts": [
      "background.js",
      "entry.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser19.png",
      "20": "images/browser20.png",
      "38": "images/browser38.png",
      "40": "images/browser40.png"
    },
    "default_popup": "popup.html"
  },
  "description": "This extension allows to download files with iDownload Manager.",
  "icons": {
    "16": "images/browser16.png",
    "19": "images/browser19.png",
    "20": "images/browser20.png",
    "24": "images/browser24.png",
    "32": "images/browser32.png",
    "40": "images/browser40.png",
    "48": "images/browser48.png",
    "64": "images/browser64.png"
  },
  "manifest_version": 2,
  "name": "iDM Integration Extension",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "cookies",
    "contextMenus",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "short_name": "iDM IE",
  "version": "1.1.6"
}
