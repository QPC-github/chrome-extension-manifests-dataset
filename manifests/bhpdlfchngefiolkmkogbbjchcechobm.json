{
  "manifest_version": 2,
  "name": "Gmail Zero",
  "version": "1.0.0",
  "description": "When your Gmail hits Inbox zero, display the Inbox zero image.",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "zero.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ],
  "permissions": [
    "https://mail.google.com/*"
  ],
  "short_name": "Gmail Zero",
  "update_url": "https://clients2.google.com/service/update2/crx"
}
