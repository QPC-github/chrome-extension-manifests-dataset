{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AU Library Search +",
  "version": "0.04",
  "manifest_version": 2,
  "short_name": "AU Library Search +",
  "description": "Context search the Athabasca University Library catalog, Google Scholar, and other academic search engines.",
  "author": "David H. Scott",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ],
  "homepage_url": "http://student.athabascau.ca/~davidsc61/",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "img/logo-16.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "browser_action": {
    "default_icon": {
      "26": "img/logo-16.png",
      "48": "img/logo-48.png",
      "128": "img/logo-128.png"
    },
    "default_title": "AU Library Search+",
    "default_popup": "popup.html"
  }
}
