{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "name": "Aba Olímpica ",
  "short_name": "Aba Olímpica",
  "description": "Acompanhe os jogos Rio 2016 na página inicial do seu navegador.",
  "version": "0.4",
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com/; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "storage",
    "alarms"
  ],
  "optional_permissions": [
    "cookies",
    "*://*.brasil2016.gov.br/"
  ],
  "web_accessible_resources": [
    "*/*",
    "/*"
  ]
}
