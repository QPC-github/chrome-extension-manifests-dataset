{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Edurary Screenshare Extension",
  "author": "Edurary",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to Edurary meetings.",
  "homepage_url": "https://edurary.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.edurary.com/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
