{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "American Well Screensharing Extension",
  "description": "Enables screen sharing with American Well Video Platform",
  "version": "0.0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "permissions": [
    "desktopCapture",
    "https://*.avizia.com",
    "https://*.avizia.io",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "options_page": "options.html"
}
