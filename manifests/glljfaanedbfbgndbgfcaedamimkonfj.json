{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "View Comments",
  "description": "Open page in View Comments",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open in View Comments",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "manifest_version": 2
}
