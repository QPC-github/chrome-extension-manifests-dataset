{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AssignmentMe Screenshare Extension",
  "author": "AssignmentMe",
  "version": "1.0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to AssignmentMe tutoring sessions.",
  "homepage_url": "https://assignmentme.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.bigbluebutton.org/*",
      "*://*.assignmentme.com/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
