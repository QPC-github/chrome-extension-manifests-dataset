{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Better Reddit Modals",
    "default_popup": "popup.html"
  },
  "description": "Makes the Reddit modals more like twitter.",
  "name": "Better Reddit Modals",
  "version": "0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
