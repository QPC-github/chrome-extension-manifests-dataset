{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Qry",
  "short_name": "Qry",
  "description": "Perform searches faster",
  "version": "2.0.3",
  "manifest_version": 2,
  "omnibox": {
    "keyword": "q"
  },
  "background": {
    "scripts": [
      "js/underscore-min.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.local.test/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.local.test/*"
    ]
  }
}
