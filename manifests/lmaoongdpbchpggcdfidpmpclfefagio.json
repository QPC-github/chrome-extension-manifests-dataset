{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sirius (SIRX) Price Ticker",
  "version": "1.0.0",
  "description": "This extension display the latest price of Sirius (SIRX) on Cryptopia.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/icon32.png",
    "default_title": "Sirius (SIRX) Price Ticker"
  },
  "background": {
    "scripts": [
      "js/background.min.js",
      "js/notifications.min.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "https://www.cryptopia.co.nz/",
    "notifications",
    "storage"
  ]
}
