{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ThermoReader",
  "description": "ThermoReader allows you to acquire the hottest news!",
  "version": "1.0",
  "browser_action": {
    "default_title": "ThermoReader",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-2.0.3.min.js",
      "thermo.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "http://*/",
    "https://*/",
    "background"
  ]
}
