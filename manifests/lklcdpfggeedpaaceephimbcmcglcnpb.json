{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Simple Alarm (suspend mode)",
  "description": "Simple Alarm (suspend mode)",
  "version": "2.5",
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  },
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "alarms",
    "power",
    "alwaysOnTopWindows",
    "nativeMessaging",
    {
      "fileSystem": [
        "write",
        "retainEntries"
      ]
    }
  ]
}
