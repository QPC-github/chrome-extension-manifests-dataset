{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pointofmail.com Email Tracking & Recall",
  "version": "6.0.0",
  "manifest_version": 2,
  "short_name": "Pointofmail",
  "description": "Know who opens your emails, links and attachments, where and for how long. Recall and send self-destructed emails.",
  "icons": {
    "16": "img/pom-16.png",
    "48": "img/pom-48.png",
    "128": "img/pom-128.png"
  },
  "browser_action": {
    "default_title": "Send via Pointofmail.com ",
    "default_icon": "img/pom.png"
  },
  "background": {
    "scripts": [
      "js/jquery-3.1.0.min.js",
      "js/pointofmail.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/jquery-3.1.0.min.js",
    "js/tooltip.min.js",
    "js/gmail.js",
    "js/scheduler.js",
    "js/pointofmail.js",
    "js/toolbar.js",
    "js/main.js",
    "css/pom.css",
    "css/tooltip.css",
    "start.html"
  ]
}
