{
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "haivn-icon-02.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Cập nhật số ảnh mới trên trang chủ HaiVN.com",
  "icons": {
    "128": "haivn.png"
  },
  "manifest_version": 2,
  "name": "HaiVN.com - Cộng đồng mạng Việt Nam",
  "short_name": "HaiVN.com",
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "gcm",
    "storage",
    "webNavigation",
    "*://*.haivn.com/*",
    "*://haivn.com/*"
  ],
  "web_accessible_resources": [
    "haivn.png"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.3"
}
