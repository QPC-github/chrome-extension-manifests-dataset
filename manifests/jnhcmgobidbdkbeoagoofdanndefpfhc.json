{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Sonixc HERO.Remote.Connect Desktop Sharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Sonixc HERO.Remote.Connect",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.1.14",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow desktop sharing for WebRTC applications.",
  "externally_connectable": {
    "matches": [
      "*://*.sonixc.com/*",
      "*://remotlysonixc.germanycentral.cloudapp.microsoftazure.de/*",
      "*://51.4.188.43/*",
      "*://localhost/*",
      "*://192.168.1.101/*"
    ]
  },
  "icons": {
    "128": "screen-sharing-128.png",
    "16": "screen-sharing-16.png",
    "48": "screen-sharing-48.png"
  },
  "page_action": {
    "default_icon": {
      "128": "screen-sharing-128.png",
      "16": "screen-sharing-16.png",
      "48": "screen-sharing-48.png"
    }
  }
}
