{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Einvoice Signing",
  "version": "1.0.3",
  "minimum_chrome_version": "40.0",
  "manifest_version": 2,
  "description": "Thaison Technology Development Co., Ltd",
  "icons": {
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "nativeMessaging",
    "tabs"
  ],
  "applications": {
    "gecko": {
      "id": "tsd@thaison.vn"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://eiv.com/*",
      "*://*.einvoice.com.vn/*",
      "*://*.einvoice.vn/*"
    ]
  }
}
