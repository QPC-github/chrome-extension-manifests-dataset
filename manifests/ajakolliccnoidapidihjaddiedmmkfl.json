{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screensharing for Interpret.World",
  "author": "Interpret.World",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension enables screensharing for Interpret.World platform.",
  "homepage_url": "https://interpret.world/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.interpret.world/*",
      "https://interpret.world/*",
      "https://*.dev.interprefy.java.magora.team/*",
      "https://dev.interprefy.java.magora.team/*",
      "http://localhost:8086/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
