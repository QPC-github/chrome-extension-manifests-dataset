{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kindle, Nook and Kobo Book Deals",
  "short_name": "Daily Book Deals",
  "description": "Kindle Book Deals, Nook Book Deals and Kobo Book Deals are directly in your browser",
  "version": "1.0",
  "permissions": [
    "http://kebooks.com/",
    "http://colornook.wordpress.com/",
    "http://*.koboreview.com/"
  ],
  "browser_action": {
    "default_icon": "icon_48.png"
  },
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
