{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VK Admin Tools 2 [alpha]",
  "version": "1.0.6",
  "permissions": [
    "https://vk.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}
