{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bitcoin Gold Price",
  "version": "0.0.1",
  "description": "Get the current bitcoin gold price from multiple sources",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "author": "BITVoxy Network",
  "background": {
    "page": "popup.html",
    "persistent": false
  },
  "homepage_url": "http://bitvoxy.com",
  "permissions": [
    "https://api.bitcoinaverage.com/ticker/USD/",
    "https://api.coinmarketcap.com/v1/ticker/bitcoin-gold/"
  ]
}
