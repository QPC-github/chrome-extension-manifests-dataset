{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Way Interactive Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Video Way Interactive Meet.",
  "version": "0.1.1",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo-way-16x16.png",
    "48": "logo-way-48x48.png",
    "128": "logo-way-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://video.way-interactive.com/*"
    ]
  }
}
