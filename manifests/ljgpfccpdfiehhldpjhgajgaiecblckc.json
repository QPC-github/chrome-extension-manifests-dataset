{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Counter.Station.BZ",
  "description": "__MSG_extDesc__",
  "version": "0.9.1",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icone48.png",
