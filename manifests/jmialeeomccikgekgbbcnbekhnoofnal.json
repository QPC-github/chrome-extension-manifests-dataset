{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MTPEXPRESS",
  "version": "0.52",
  "description": "Công cụ mua đặt hàng Mtp Express",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "https://detail.1688.com/*",
    "https://item.taobao.com/*",
    "https://detail.tmall.com/*",
    "https://mtpexpress.vn/*"
  ],
  "icons": {
    "16": "cookie.png",
    "48": "cookie.png",
    "128": "cookie.png"
  },
  "browser_action": {
    "default_icon": "cookie.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://detail.1688.com/*",
        "https://item.taobao.com/*",
        "https://detail.tmall.com/*"
      ],
      "all_frames": true,
      "css": [
        "bootstrap.min.css"
      ],
      "js": [
        "jquery.min.js",
        "myscripts.js",
        "bootbox.min.js",
        "bootstrap.min.js"
      ]
    }
  ],
  "manifest_version": 2
}
