{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "The Biggest Leap Forward",
  "description": "Edge to edge. Top to bottom. (Works on YouTube)",
  "version": "0.1",
  "icons": {
    "16": "/img/icons/16.png",
    "48": "/img/icons/48.png",
    "128": "/img/icons/128.png"
  },
  "permissions": [
    "geolocation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://www.youtube.com/*"
      ],
      "js": [
        "/js/external/jquery.js",
        "/js/content_script.js"
      ]
    }
  ],
  "manifest_version": 2
}
