{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "smsLv",
  "version": "1.0.1",
  "description": "Extension for fast sms.lv web service access.",
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://sms.lv/*",
    "tabs"
  ]
}
