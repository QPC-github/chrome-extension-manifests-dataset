{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Essential Care Chrome Extension",
  "version": "0.0.4",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*.curatess.io/*",
    "*://localhost/*",
    "https://*.curatess.com/*",
    "https://*.curatess.app/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://*.curatess.com/*",
      "https://*.curatess.app/*"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "logos/logo19.png",
      "38": "logos/logo38.png"
    }
  },
  "icons": {
    "16": "logos/logo16.png",
    "48": "logos/logo48.png",
    "128": "logos/logo128.png"
  }
}
