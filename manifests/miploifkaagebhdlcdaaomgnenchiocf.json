{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Movies, TV-series search",
  "description": "Search for movies and TV-series in online databases.",
  "version": "0.2",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2,
  "homepage_url": "http://marss.co.ua"
}
