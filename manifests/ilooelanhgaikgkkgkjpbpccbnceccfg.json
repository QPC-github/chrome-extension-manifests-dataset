{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Simple Text Reader",
  "description": "Reads out the text of what you right-click on. The '`' key cancels long speech.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "tts",
    "<all_urls>"
  ],
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
