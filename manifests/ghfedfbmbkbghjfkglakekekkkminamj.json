{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "sur-ecoute",
  "version": "0.2.0",
  "description": "Sur-écoute est une extension pour lutter contre la surveillance de masse mise en place par la Loi Renseignement.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Sur-écoute",
    "default_icon": "icon16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
