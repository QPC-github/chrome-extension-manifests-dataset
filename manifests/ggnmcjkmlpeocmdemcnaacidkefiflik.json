{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BridgeWorks",
  "content_security_policy": "script-src 'self' https://bridgeworks.brightwaycloud.com/ https://*.msecnd.net; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "BridgeWorks",
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "https://bridgeworks.brightwaycloud.com/*"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "storage",
    "cookies",
    "identity",
    "nativeMessaging",
    "downloads",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "description": "Brightway CRM Integration",
  "version": "2.7.4"
}
