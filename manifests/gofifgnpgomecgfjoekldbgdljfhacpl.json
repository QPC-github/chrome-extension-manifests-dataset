{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Find Hidden Suggestions",
  "version": "1.0",
  "description": "Highlights hidden suggestions in Superdesk's editor.",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "activeTab",
    "*://superdesk.thetriangle.org/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/Blue_White_Icon_Web.png",
    "48": "images/Blue_White_Icon_Web.png",
    "128": "images/Blue_White_Icon_Web.png"
  }
}
