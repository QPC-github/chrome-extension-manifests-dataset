{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Meethub Public Desktop Streamer",
  "description": "An extension that allows to stream your desktop into Meethub Public Conferences.",
  "version": "0.2.9",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "meethub-logo-16x16.png",
    "48": "meethub-logo-48x48.png",
    "128": "meethub-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://public.meethub.org/*"
    ]
  }
}
