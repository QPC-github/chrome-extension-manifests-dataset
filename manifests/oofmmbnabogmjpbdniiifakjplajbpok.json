{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Akari URL Shortener",
  "version": "2.0.5",
  "author": "bedabeda",
  "homepage_url": "https://waa.ai",
  "manifest_version": 2,
  "description": "Akari will reduce the presence of your URL. Uses waa.ai API to generate short URLs.",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "img/icon16.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "https://api.waa.ai/*",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "img/icon48.png",
    "akarin.mp3"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
