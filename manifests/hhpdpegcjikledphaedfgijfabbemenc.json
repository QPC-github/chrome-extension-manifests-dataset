{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sapiyen",
  "description": "Add articles, stay on track, achieve your reading goals",
  "version": "1.0.7",
  "browser_action": {
    "default_icon": "resources/staticResources/einstein-drawing_sxabmy.png",
    "default_popup": "resources/popup.html"
  },
  "background": {
    "persistent": false,
    "page": "resources/background.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications"
  ],
  "web_accessible_resources": [
    "resources/popupStyles.css",
    "resources/*"
  ]
}
