{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Better Focus Extension",
  "description": "Achieve your focus by keeping track in browser new tab",
  "homepage_url": "https://www.betterfocusextension.com",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "https://www.renaissancebeautyllc.com/betterfocus/*"
  ],
  "version": "2.2",
  "browser_action": {
    "default_icon": {
      "16": "images/bd-16.png",
      "32": "images/bd-32.png",
      "48": "images/bd-48.png",
      "128": "images/bd-128.png"
    }
  },
  "icons": {
    "16": "images/bd-16.png",
    "32": "images/bd-32.png",
    "48": "images/bd-48.png",
    "128": "images/bd-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "landing.html"
  },
  "web_accessible_resources": [
    "images/*.*"
  ],
  "content_security_policy": "script-src 'self' https://www.renaissancebeautyllc.com/betterfocus/custom.js https://www.renaissancebeautyllc.com/betterfocus/background.js https://ssl.google-analytics.com https://unpkg.com/sweetalert/dist/sweetalert.min.js; object-src 'self';style-src 'self' 'unsafe-inline' *;media-src *;"
}
