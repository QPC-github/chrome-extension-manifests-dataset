{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pepper Flow Digital Review",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Review web pages in their native format with the life science industryâ€™s first interactive review solution.",
  "homepage_url": "https://www.vodori.com/products/pepper-flow-digital-review/",
  "icons": {
    "16": "/dist/assets/images/icon-16x16.png",
    "48": "/dist/assets/images/icon-48x48.png",
    "128": "/dist/assets/images/icon-128x128.png"
  },
  "background": {
    "scripts": [
      "/dist/js/vendor.js",
      "/dist/js/background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "/dist/*/*"
  ],
  "browser_action": {
    "default_icon": "/dist/assets/images/icon-128x128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": false,
      "js": [
        "/dist/assets/scripts/tabReset.js"
      ],
      "run_at": "document_start"
    }
  ]
}
