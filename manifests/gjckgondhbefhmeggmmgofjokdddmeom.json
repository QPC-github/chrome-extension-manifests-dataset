{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Русская Семерка",
  "short_name": "russian7",
  "manifest_version": 2,
  "version": "1.0.4",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Русская Семерка",
    "default_icon": "icon128.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "http://*/*",
    "notifications",
    "management"
  ],
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  }
}
