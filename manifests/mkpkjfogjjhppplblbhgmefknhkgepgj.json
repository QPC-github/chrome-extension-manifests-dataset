{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "My Little Sandbox",
  "version": "0.2.4",
  "description": "A Simple sandbox and physics game.",
  "icons": {
    "48": "img/icon_48.png",
    "128": "img/icon_128.png",
    "16": "img/icon_16.png"
  },
  "browser_action": {
    "default_icon": "img/icon_48.png",
    "default_title": "Click Here",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}
