{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Entertain Me",
  "description": "An extension to brighten your day with a Chuck Norris joke!",
  "version": "0.0.1",
  "background": {
    "page": "popup.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Entertain Me"
  },
  "permissions": [
    "background",
    "https://api.icndb.com/"
  ]
}
