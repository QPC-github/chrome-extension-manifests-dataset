{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Web Text Editor",
  "short_name": "WebText Edit",
  "description": "This extension makes the text of a web page editable on the fly.",
  "version": "1.3",
  "version_name": "1.3",
  "minimum_chrome_version": "50",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Web Page Editor",
    "default_icon": {
      "19": "icons/icons19.png",
      "38": "icons/icons38.png"
    }
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "file:///*"
  ]
}
