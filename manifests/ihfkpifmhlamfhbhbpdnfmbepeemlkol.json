{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Gin Everywhere",
  "short_name": "GinEvery",
  "description": "The only proper drink is gin. Turn every mention of other drinks into gin with this extension.",
  "icons": {
    "16": "gin-16.png",
    "48": "gin-48.png",
    "128": "gin-128.png"
  },
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
