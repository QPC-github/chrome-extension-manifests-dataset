{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Astray Game",
  "short_name": "Funny Game",
  "manifest_version": 2,
  "version": "1.0.0.1",
  "description": "You have to control the ball to the exit",
  "browser_action": {
    "default_icon": "icon/48.png",
    "default_title": "Launch game"
  },
  "background": {
    "page": "bgr.html",
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "48": "icon/48.png",
    "16": "icon/64.png",
    "128": "icon/128.png"
  },
  "web_accessible_resources": [
    "game/*.html",
    "game/*.png",
    "game/*.js"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
