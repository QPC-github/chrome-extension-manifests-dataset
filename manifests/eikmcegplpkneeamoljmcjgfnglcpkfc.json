{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mesadecontrol.com - Captura asistida",
  "description": "Esta extensi√≥n habilita la captura asistida para la herramienta mesadecontrol.com",
  "version": "0.3",
  "browser_action": {
    "default_icon": "ic_mdc_2.png",
    "default_title": "Llenar formulario"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "short_name": "MDC",
  "externally_connectable": {
    "matches": [
      "http://127.0.0.1/*",
      "http://metis.klayware.com/*",
      "http://pasiphae.klayware.com/*",
      "http://portal.mesadecontrol.com.mx/*",
      "http://pruebas.mesadecontrol.com.mx/*"
    ]
  }
}
