{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Popup Notifications for Craigslist",
  "background": {
    "page": "background.html"
  },
  "icons": {
    "128": "images/icon-128x128.png",
    "48": "images/icon-48x48.png",
    "16": "images/icon-16x16.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "images/icon-128x128.png",
      "48": "images/icon-48x48.png",
      "16": "images/icon-16x16.png",
      "19": "images/icon.png"
    },
    "default_title": "Popup Notifications for Craigslist",
    "default_popup": "views/popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "tools/jquery-1.10.2.min.js",
        "injected.js"
      ],
      "css": [
        "css/injected.css"
      ],
      "matches": [
        "*://*.craigslist.org/*",
        "*://*.craigslist.com/*",
        "*://*.craigslist.ca/*",
        "*://*.craigslist.cz/*",
        "*://*.craigslist.fi/*",
        "*://*.craigslist.de/*",
        "*://*.craigslist.gr/*",
        "*://*.craigslist.it/*",
        "*://*.craigslist.pl/*",
        "*://*.craigslist.pt/*",
        "*://*.craigslist.es/*",
        "*://*.craigslist.ch/*",
        "*://*.craigslist.co.uk/*",
        "*://*.craigslist.com.cn/*",
        "*://*.craigslist.co.in/*",
        "*://*.craigslist.jp/*",
        "*://*.craigslist.com.ph/*",
        "*://*.craigslist.sg/*",
        "*://*.craigslist.tw/*",
        "*://*.craigslist.co.th/*",
        "*://*.craigslist.hk/*",
        "*://*.craigslist.com.au/*",
        "*://*.craigslist.com.mx/*",
        "*://*.craigslist.co.za/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Checks Craigslist every 5 min for your saved searches.",
  "short_name": "Craigslist Notificaton",
  "minimum_chrome_version": "28.0.0",
  "options_page": "views/settings.html",
  "permissions": [
    "tabs",
    "background",
    "storage",
    "alarms",
    "notifications",
    "*://*.craigslist.org/*",
    "*://*.craigslist.com/*",
    "*://*.craigslist.ca/*",
    "*://*.craigslist.cz/*",
    "*://*.craigslist.fi/*",
    "*://*.craigslist.de/*",
    "*://*.craigslist.gr/*",
    "*://*.craigslist.it/*",
    "*://*.craigslist.pl/*",
    "*://*.craigslist.pt/*",
    "*://*.craigslist.es/*",
    "*://*.craigslist.ch/*",
    "*://*.craigslist.co.uk/*",
    "*://*.craigslist.com.cn/*",
    "*://*.craigslist.co.in/*",
    "*://*.craigslist.jp/*",
    "*://*.craigslist.com.ph/*",
    "*://*.craigslist.sg/*",
    "*://*.craigslist.tw/*",
    "*://*.craigslist.co.th/*",
    "*://*.craigslist.hk/*",
    "*://*.craigslist.com.au/*",
    "*://*.craigslist.com.mx/*",
    "*://*.craigslist.co.za/*",
    "*://*.craigshunter.com/*"
  ],
  "manifest_version": 2,
  "version": "2.0.0.117"
}
