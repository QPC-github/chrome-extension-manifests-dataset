{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bang Links",
  "Author": "Alec Rodgers",
  "description": "Custom url shortcuts for Chrome",
  "version": "1.1.1",
  "manifest_version": 2,
  "omnibox": {
    "keyword": "!"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "options_page": "index.html",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
