{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "C3Video Screen Sharing",
  "permissions": [
    "desktopCapture",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "short_name": "Screen sharing for C3Video",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.5",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in CCCVideo applications.",
  "externally_connectable": {
    "matches": [
      "*://*.gsnetcloud.com/*"
    ]
  },
  "icons": {
    "128": "c3video_icon_128.png",
    "16": "c3video_icon_16.png",
    "48": "c3video_icon_48.png"
  },
  "browser_action": {
    "default_icon": "c3video_icon_16.png"
  }
}
