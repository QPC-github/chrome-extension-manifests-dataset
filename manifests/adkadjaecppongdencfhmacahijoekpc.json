{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Calm New Tab",
  "short_name": "Calm",
  "author": "Brendan Viscomi",
  "version": "0.1.2",
  "description": "Replace your new tab page with a relaxing photo. No frills, no tracking, open source.",
  "homepage_url": "https://github.com/brendanv/calm-new-tab",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Calm New Tab",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
