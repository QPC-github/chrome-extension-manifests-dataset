{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Search Arena",
  "short_name": "Search Arena",
  "description": "Search Arena is an extension for Google Chromeâ„¢ that allows you to experience the ease of finding live sports and web results.",
  "version": "1.1",
  "chrome_settings_overrides": {
    "homepage": "http://h.searchie.net",
    "startup_pages": [
      "http://s.searchie.net"
    ],
    "search_provider": {
      "is_default": true,
      "encoding": "UTF-8",
      "favicon_url": "http://searchie.net/favico.png",
      "keyword": "searchie.net",
      "name": "Searchie",
      "search_url": "http://searchie.net/?q={searchTerms}"
    },
    "custom_settings": {
      "affiliate": "nbaextension",
      "sponsor": "chromext_b2b"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "chrome://favicon/*",
    "webRequest",
    "webRequestBlocking",
    "cookies"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "img/search_arena/icon16.png",
    "32": "img/search_arena/icon32.png",
    "48": "img/search_arena/icon48.png",
    "128": "img/search_arena/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Choose a Different Search Engine",
    "default_icon": "img/search_arena/icon128.png",
    "default_popup": "popup.html"
  }
}
