{
  "background": {
    "scripts": [
      "js/background.js",
      "js/helpers.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/common.js",
        "js/helpers.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/logo_32x32.png",
    "default_title": "Add to Wantery"
  },
  "icons": {
    "16": "icons/logo_32x32.png",
    "48": "icons/logo_48x48.png",
    "128": "icons/logo_128x128.png"
  },
  "manifest_version": 2,
  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html"
  },
  "name": "Wantery",
  "short_name": "Wantery",
  "description": "Discover and collect hand-curated cool products",
  "homepage_url": "http://wantery.com",
  "version": "1.6",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "background"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [
    "icons/logo_128x128.png"
  ]
}
