{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Magic Hat",
  "version": "1.2.1",
  "description": "Store interesting pages in the hat",
  "browser_action": {
    "default_title": "Got something for the hat?",
    "default_popup": "popup.htm",
    "default_icon": {
      "19": "artassets/magichat19.png",
      "38": "artassets/magichat38.png"
    }
  },
  "options_page": "options.htm",
  "author": [
    "William Yao"
  ],
  "icons": {
    "128": "artassets/magichat128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "magic_hat.js"
    ]
  },
  "commands": {
    "pull-hat": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Pull a page out of the hat"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
