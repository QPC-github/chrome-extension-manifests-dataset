{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ShinyStat OptOut",
  "manifest_version": 2,
  "author": "Triboo Data Analytics Srl",
  "version": "1.0",
  "description": "__MSG_shinystat_optout_description__",
  "default_locale": "en",
  "browser_action": {
    "default_title": "Shiny - disable ShinyStat functionalities",
    "browser_style": false,
    "default_icon": {
      "16": "icons/shn_off_color_16.png",
      "24": "icons/shn_off_color_24.png",
      "32": "icons/shn_off_color_32.png",
      "48": "icons/shn_off_color_48.png",
      "64": "icons/shn_off_color_64.png",
      "128": "icons/shn_off_color_128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icons/shn_off_color_16.png",
    "24": "icons/shn_off_color_24.png",
    "32": "icons/shn_off_color_32.png",
    "48": "icons/shn_off_color_48.png",
    "64": "icons/shn_off_color_64.png",
    "128": "icons/shn_off_color_128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ]
}
