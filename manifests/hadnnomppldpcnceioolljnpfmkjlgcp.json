{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ITU Mail Checker",
  "description": "Displays the number of unread messages in your ITU Mail inbox. You can also click the button to open your inbox.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon_3.png",
    "default_title": "ITU Mail Checker"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://webmail.itu.edu.tr/*"
  ]
}
