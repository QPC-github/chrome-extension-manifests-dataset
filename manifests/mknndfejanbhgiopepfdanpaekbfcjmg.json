{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Nico Herold",
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/bexshort.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "css/content.css",
        "css/jquery-ui.css"
      ],
      "js": [
        "js/jquery.js",
        "js/jquery-ui.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "description": "Kuerzen sie Ihre URL per Mausklick !",
  "homepage_url": "http://bsx.li/",
  "icons": {
    "128": "icons/icon_128.png",
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png"
  },
  "manifest_version": 2,
  "name": "BeXShort ~ Dein URL verkuerzerer",
  "permissions": [
    "<all_urls>",
    "tabs",
    "notifications",
    "storage"
  ],
  "short_name": "BeXShort",
  "version": "2.0"
}
