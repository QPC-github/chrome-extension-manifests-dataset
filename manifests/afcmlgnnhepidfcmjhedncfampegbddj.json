{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Outliner",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Add outline to all the elements.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "http://localhost/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "commands": {
    "something-to-do": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "MacCtrl+M"
      },
      "description": "Toggle outlines"
    }
  }
}
