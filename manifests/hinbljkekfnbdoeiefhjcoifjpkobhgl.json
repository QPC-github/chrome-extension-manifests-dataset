{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Netflix and Conceal",
  "description": "Hide all Netflix synopsis boxes for previews and overview.",
  "version": "0.2.4",
  "homepage_url": "http://www.enzly.co.uk",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.netflix.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
