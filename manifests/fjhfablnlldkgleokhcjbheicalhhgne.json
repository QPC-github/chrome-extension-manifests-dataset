{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SquadPod Screensharing",
  "short_name": "SquadPod Screensharing",
  "version": "1.0.1",
  "author": "Bolste, Inc",
  "description": "This Chrome extension provides screen sharing capabilities in the SquadPod App",
  "homepage_url": "https://squadpod.com",
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.squadpod.com/*",
      "https://*.bolste.net/*",
      "*://localhost/*"
    ]
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ]
}
