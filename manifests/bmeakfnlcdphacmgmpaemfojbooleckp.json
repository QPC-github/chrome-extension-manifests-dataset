{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Big Brother",
  "version": "0.1.0",
  "description": "Accountability",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "page": "background.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
