{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Abilita ScreenShare su Docety",
  "short_name": "Docety ScreenShare",
  "description": "Estensione necessaria ad abilitare la condivisione dello schermo per Chrome Browser su webrtc.docety.com",
  "version": "1.0.3",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": true
  },
  "icons": {
    "36": "icon-0-75x.png",
    "48": "icon-1x.png",
    "72": "icon-1-5x.png",
    "96": "icon-2x.png",
    "144": "icon-3x.png",
    "192": "icon-4x.png",
    "512": "icon-512.png"
  },
  "externally_connectable": {
    "matches": [
      "*://*.docety.com/*"
    ]
  },
  "homepage_url": "https://webrtc.docety.com",
  "permissions": [
    "desktopCapture",
    "displaySource",
    "tabCapture",
    "pageCapture",
    "tabs"
  ]
}
