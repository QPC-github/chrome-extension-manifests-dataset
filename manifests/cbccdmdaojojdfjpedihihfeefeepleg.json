{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "USD to BTC Price Converter",
  "description": "Automatically convert prices from US Dollars ($, USD) into Bitcoin (â‚¿, BTC) on sites where you normally shop!",
  "version": "0.0.0.4",
  "icons": {
    "128": "bitcoin-logo.jpeg"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "libs/underscore.min.js",
        "libs/jquery-3.3.1.min.js",
        "content-script.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "USD to BTC Price Converter",
    "default_popup": "popup.html"
  }
}
