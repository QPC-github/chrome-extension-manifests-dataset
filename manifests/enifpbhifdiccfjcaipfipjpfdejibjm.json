{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.5.5",
  "short_name": "promocot",
  "name": "Промокот",
  "description": "Выгодные предложения онлайн-магазинов",
  "manifest_version": 2,
  "homepage_url": "https://promocot.ru",
  "browser_action": {
    "default_icon": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    },
    "default_popup": "index.html",
    "default_title": "Промокот"
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
