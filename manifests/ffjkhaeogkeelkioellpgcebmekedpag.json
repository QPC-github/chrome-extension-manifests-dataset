{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Barre de Confiance CM-CIC",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "Aide à détecter les sites de confiance CM, CIC et les tentatives de phishing",
  "browser_action": {
    "default_icon": "images/bc_inet.gif",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "variables.js",
      "domaineconfiance.js",
      "background.js",
      "listenoire.js",
      "localstorage.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "cookies"
  ],
  "minimum_chrome_version": "12.0.706.0",
  "homepage_url": "https://www.creditmutuel.fr/",
  "icons": {
    "16": "images/bc_logo.png",
    "48": "images/bc_logo.png",
    "128": "images/bc_logo.png"
  },
  "web_accessible_resources": [
    "include/blocage.css",
    "include/blocage.js",
    "include/bc_logo-detective.png",
    "include/googleanalytics.js",
    "include/googleanalyticsconfiance.js"
  ]
}
