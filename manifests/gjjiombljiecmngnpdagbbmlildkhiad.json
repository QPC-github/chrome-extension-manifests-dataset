{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cookie Cruncher",
  "description": "Simplifies deleting cookies related to the current web site.",
  "version": "1.0.8",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "Cookie Cruncher"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "remove-site-related-cookies": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Delete cookies related to the current web site"
    }
  }
}
