{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Doxy.me Screen Sharing",
  "author": "Doxy.me LLC",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Extension that captures content of your screen.",
  "homepage_url": "https://doxy.me",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "matches": [
        "https://*.doxy.me/*",
        "https://doxy.me/*",
        "https://doxi.me/*",
        "https://*.doxi.me/*"
      ]
    }
  ],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
