{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Gitlab Board+ Chrome Extension",
  "description": "This extension allow to add some features to a Gitlab Board.",
  "version": "1.1.2",
  "browser_action": {
    "default_icon": {
      "16": "src/images/logo-chrome-ext-16.png",
      "24": "src/images/logo-chrome-ext-32.png",
      "32": "src/images/logo-chrome-ext-32.png"
    },
    "default_title": "Gitlab Board+"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "src/images/logo-chrome-ext-16.png",
    "24": "src/images/logo-chrome-ext-32.png",
    "32": "src/images/logo-chrome-ext-32.png",
    "64": "src/images/logo-chrome-ext-64.png",
    "128": "src/images/logo-chrome-ext-128.png"
  },
  "permissions": [
    "background",
    "storage",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "options_ui": {
    "page": "src/options/option.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
