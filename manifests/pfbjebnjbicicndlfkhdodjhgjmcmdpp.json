{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SBS Screen Sharing",
  "author": "SBS Insurance Services",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for use with the SBS WebChat. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://sbs-claims.co.uk/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.sbs-claims.co.uk/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
