{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Аудио плеер",
  "short_name": "Аудио плеер для браузера",
  "description": "Загружайте свою любимую музыку в брауйзер и слушайте без любых ограничений!",
  "version": "3.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "icon/panel.html"
  },
  "icons": {
    "128": "icon/icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://kissvk.com/*",
        "http://kissvk.com/*",
        "https://zaycev.net/*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "play": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Play/pause",
      "global": true
    },
    "forward": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "forward",
      "global": true
    },
    "back": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "back",
      "global": true
    }
  }
}
