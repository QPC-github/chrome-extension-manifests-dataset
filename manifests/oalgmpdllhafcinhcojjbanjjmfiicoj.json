    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "38": "images/icon-38.png",
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  "version": "1.2",
  "manifest_version": 2,
  "name": "Công cụ Nguồn Hàng Tiết Kiệm",
  "short_name": "Nguồn Hàng Tiết Kiệm",
  "permissions": [
    "http://*.taobao.com/*",
    "https://*.taobao.com/*",
    "http://*.1688.com/*",
    "https://*.1688.com/*",
    "http://*.tmall.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.hk/*",
    "https://*.tmall.hk/*",
    "https://nguonhangtietkiem.com//*",
    "https://nguonhangtietkiem.com//*",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "images/*",
    "template/*",
    "css/*"
  ]
