{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "script": "js/background.js",
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/test.js",
        "js/config.js",
        "js/md5.min.js",
        "js/background.js",
        "js/script.js"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.1688.com/*",
        "https://*.1688.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*"
      ]
    },
    {
      "js": [
        "js/jquery.js",
        "js/background.js",
        "js/test.js",
        "js/config.js",
        "js/md5.min.js",
        "js/script.js",
        "js/web_service_config.js",
        "js/web_service_script.js"
      ],
      "matches": [
        "http://*.nguonhangtietkiem.com/*",
        "https://*.nguonhangtietkiem.com/*"
      ],
      "exclude_matches": [
        "http://*.nguonhangtietkiem.com/admin/*",
        "https://*.nguonhangtietkiem.com/admin/*"
      ]
    }
