{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "extension Cadorable",
  "version": "1.0.0",
  "description": "Ajoutez facilement une idée cadeau à la hotte sur www.cadorable.com",
  "author": "Printanie - F. Esnault",
  "homepage_url": "https://www.cadorable.com",
  "offline_enabled": false,
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "img/logo-16.png",
      "32": "img/logo-32.png",
      "48": "img/logo-48.png",
      "128": "img/logo-128.png"
    },
    "default_title": "Enregistrer une idée cadeau",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "manifest_version": 2,
  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html"
  },
  "permissions": [
    "https://www.cadorable.com/*",
    "*://*/*",
    "contextMenus",
    "cookies",
    "notifications",
    "storage",
    "tabs",
    "activeTab"
  ]
}
