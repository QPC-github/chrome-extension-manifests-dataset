{
  "background": {
    "persistent": true,
    "scripts": [
      "./js/bg.js"
    ],
    "browser_action": {}
  },
  "browser_action": {
    "default_icon": {
      "32": "img/discount_32x32.png"
    },
    "default_popup": "./index.html",
    "default_title": "__MSG_apptitle__"
  },
  "content_security_policy": "script-src 'self'  'unsafe-eval'; object-src 'self'",
  "default_locale": "en",
  "description": "__MSG_appdesc__",
  "icons": {
    "128": "img/discount_128x128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "36",
  "name": "__MSG_appname__",
  "short_name": "AMZ Discount",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*"
      ],
      "js": [
        "./js/functions.js",
        "./js/popper.min.js"
      ],
      "run_at": "document_end"
    }
  ],
  "offline_enabled": true,
  "permissions": [
    "chrome://favicon/",
    "storage",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.it/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.es/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0.9"
}
