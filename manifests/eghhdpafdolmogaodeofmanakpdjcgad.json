{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Always Shop on Amazon Smile",
  "description": "Redirect any amazon.com site to smile.amazon.com",
  "version": "1.0",
  "author": "Greg Greiner",
  "icons": {
    "16": "smile16.png",
    "48": "smile48.png",
    "128": "smile128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "*://amazon.com/*",
    "*://www.amazon.com/*",
    "webRequestBlocking"
  ]
}
