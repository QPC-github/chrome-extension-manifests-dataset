{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch Check",
  "description": "Checks whether your favorite streams are online",
  "version": "1.1",
  "permissions": [
    "https://api.twitch.tv/*",
    "storage",
    "contextMenus"
  ],
  "icons": {
    "16": "twitchsmall.png"
  },
  "background": {
    "scripts": [
      "back.js"
    ]
  },
  "browser_action": {
    "default_icon": "twitchsmall.png",
    "default_popup": "popup.html"
  }
}
