{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "EasyCheck",
  "short_name": "EasyCheck",
  "description": "EasyCheck provides a simple/quick way to check massive checkbox in one page.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "img/EasyCheck_small.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "48": "img/EasyCheck_normal.png",
    "128": "img/EasyCheck_large.png"
  }
}
