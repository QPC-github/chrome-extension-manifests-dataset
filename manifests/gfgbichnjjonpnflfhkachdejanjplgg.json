{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kirkify",
  "description": "Because Kirk is always in fashion",
  "version": "1.0",
  "icons": {
    "128": "kirkcon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "kirk.png"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Kirkify",
    "default_icon": "kirkcon.png"
  },
  "manifest_version": 2
}
