{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Txtr",
  "description": "This extension texts the link of the page you are currently viewing to your phone, so you can read it later",
  "version": "0.8.1",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon_med.png",
    "128": "icon_big.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to send link"
  },
  "permissions": [
    "activeTab",
    "https://txtr.imrapid.io/",
    "https://api.jquery.com/",
    "storage"
  ]
}
