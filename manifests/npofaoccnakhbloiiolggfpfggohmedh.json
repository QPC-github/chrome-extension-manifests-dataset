{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "موقع كوبوني",
  "version": "1.0",
  "description": "كوبوني موقع العروض وقسائم التخفيض الاشمل ",
  "icons": {
    "48": "img/logo-layered.png",
    "16": "img/logo-layered.png",
    "128": "img/logo-layered.png"
  },
  "browser_action": {
    "default_icon": "img/logo-layered.png",
    "default_title": "احصل على قسائم خصم للموقع الذي تبحث عنه",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs"
  ]
}
