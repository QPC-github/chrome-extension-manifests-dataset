{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OpenIINA",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Open IINA from URL",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_title": "Open URL in the IINA"
  }
}
