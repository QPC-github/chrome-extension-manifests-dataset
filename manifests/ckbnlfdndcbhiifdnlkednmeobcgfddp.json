{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VK Memos — Заметки для ВКонтакте",
  "short_name": "VK Memos",
  "version": "1.0.2",
  "description": "Оставляйте персональные заметки о ваших друзьях прямо на странице ВКонтакте. Ваши заметки видны только вам.",
  "author": [
    {
      "name": "Виктор Никитин",
      "email": "victor.mac.nikitin@gmail.com"
    }
  ],
  "permissions": [
    "tabs",
    "*://vk.com/*",
    "*://*.vk.com/*"
  ],
  "content_scripts": [
    {
      "all_frames": false,
      "include_globs": [
        "http://vk.com/*",
        "http://*.vk.com/*",
        "http://vkontakte.ru/*",
        "http://*.vkontakte.ru/*",
        "https://vk.com/*",
        "https://*.vk.com/*",
        "https://vkontakte.ru/*",
        "https://*.vkontakte.ru/*"
      ],
      "matches": [
        "*://vk.com/*",
        "*://*.vk.com/*"
      ],
      "css": [
        "styles/vkmemos.css",
        "styles/writebox.css"
      ],
      "js": [
        "/scripts/jquery-2.1.3.min.js",
        "background.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "/scripts/jquery-2.1.3.min.js",
    "/scripts/jquery.debounce.min.js",
    "/scripts/vk.openapi.js",
    "/scripts/vkmemos.js"
  ],
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
