{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ConnectNow",
  "short_name": "ConnectNow",
  "description": "The ConnectNow extension provides access to advanced collaboration tools and features when using ConnectNow with Google Chrome.",
  "version": "1.0.5",
  "version_name": "1.00.5",
  "icons": {
    "48": "ConnectNowChromeExtensionIcon48x48.png",
    "128": "ConnectNowChromeExtensionIcon128x128.png"
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "*://*/*",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
