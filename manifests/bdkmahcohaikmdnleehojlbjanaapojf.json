{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ヤフーメール通知",
  "version": "0.10",
  "manifest_version": 2,
  "description": "ヤフーメール通知拡張 30秒に一度自動で確認 ログインしておく必要があります。",
  "permissions": [
    "storage",
    "https://www.yahoo.co.jp/",
    "https://jp.mg5.mail.yahoo.co.jp/",
    "https://web-yunz.yahoo.co.jp/Yunz/V1/getNotifications"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ヤフーメール通知"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "api_connecter.js",
      "background.js"
    ]
  }
}
