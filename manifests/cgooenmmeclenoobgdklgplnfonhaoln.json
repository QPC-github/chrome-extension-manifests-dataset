{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Comic Sansify",
  "description": "*{font-family:'comic sans' !important;}",
  "version": "1.0",
  "icons": {
    "128": "icon_128.png",
    "64": "icon_64.png"
  },
  "web_accessible_resources": [
    "style.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}
