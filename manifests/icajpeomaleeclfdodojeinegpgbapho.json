{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitter Message Assistant",
  "version": "0.1.3",
  "description": "Automatic message templating for Twitter",
  "short_name": "Twitter Message Assistant",
  "browser_action": {
    "default_icon": "air.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://twitter.com/*",
    "storage"
  ],
  "icons": {
    "16": "air.png",
    "48": "air.png",
    "128": "air.png"
  },
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ]
}
