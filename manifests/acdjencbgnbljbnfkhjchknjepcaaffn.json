{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Flipkart Deals Alarm",
  "short_name": "Flipkart",
  "description": "Flipkart Deals App. This app will notify you about newest hot daily deals on Flipkart.com",
  "version": "1.0.2",
  "app": {
    "background": {
      "scripts": [
        "js/main.js"
      ]
    }
  },
  "icons": {
    "128": "img/icon128.png"
  },
  "permissions": [
    "*://*.flipkart.net/",
    "*://*.fkcdn.com/",
    "storage",
    "notifications"
  ],
  "manifest_version": 2
}
