{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Radio Pilarium Song Uploader",
  "description": "Automatically add current Youtube track to the Radio playlist",
  "version": "1.3",
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "72": "icons/icon72.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "permissions": [
    "tabs",
    "https://radio.pilu.fun/api/*"
  ]
}
