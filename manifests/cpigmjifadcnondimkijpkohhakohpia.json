{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/128.png",
    "default_popup": "notificador.html",
    "default_title": "MenciONaME para twitter"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Notificador de menciones en Twitter para Chrome.",
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "manifest_version": 2,
  "name": "Notificador de menciones para Twitter",
  "options_page": "options/index.html",
  "permissions": [
    "tabs",
    "notifications",
    "http://*.twitter.com/",
    "https://*.twitter.com/"
  ],
  "version": "1.0"
}
