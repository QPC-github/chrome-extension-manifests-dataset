{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CashOn - Your CashBack Agent!!",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Find Best Deals & Discount Coupons, Also get additional CashBack",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
