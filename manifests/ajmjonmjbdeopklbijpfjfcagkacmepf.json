{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CryptoMove",
  "author": "CryptoMove Development Team",
  "version": "0.0.32",
  "description": "Protect secrets and data on any website by moving it around in the cloud.",
  "browser_action": {
    "default_icon": {
      "16": "images/logo16.png",
      "48": "images/logo48.png"
    },
    "default_popup": "index.html",
    "default_title": "CryptoMove"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite",
    "tabs",
    "activeTab",
    "https://app.cryptomove.com/*",
    "https://js.stripe.com/v3/"
  ],
  "web_accessible_resources": [
    "index.html",
    "images/*.png",
    "images/*.svg"
  ],
  "content_security_policy": "script-src 'self' https://js.stripe.com/v3/; object-src 'self'"
}
