{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Talk Fusion WebRTC Screen Capture",
  "version": "1.0.7",
  "description": "This extension allows WebRTC connections to use the screen as a video source.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "author": "Talk Fusion",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://localhost/*",
        "*://*.talkfusion.com/*",
        "*://*.talkfusion-cert.com/*",
        "*://*.talkfusion-labs.com/*",
        "*://*.talkfusion-cloud.com/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.talkfusion.com/*",
      "*://*.talkfusion-cert.com/*",
      "*://*.talkfusion-labs.com/*",
      "*://*.talkfusion-cloud.com/*"
    ]
  },
  "homepage_url": "https://talkfusion.com/",
  "minimum_chrome_version": "34",
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon-16.png",
    "icon-32.png",
    "icon-48.png",
    "icon-128.png"
  ]
}
