{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MonoChrome",
  "short_name": "MonoChrome",
  "description": "Show you monochromatic webpages.",
  "author": "Kosuke Matsuura",
  "version": "1.0",
  "browser_action": {
    "default_icon": "./images/icon.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ]
}
