{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Facebook seen message remover",
  "version": "1.1",
  "description": "Prevents other people from seeing when you read their messages.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "Messages blocked!"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "notifications",
    "webRequestBlocking",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "web_accessible_resources": [
    "icon-48.png"
  ],
  "manifest_version": 2
}
