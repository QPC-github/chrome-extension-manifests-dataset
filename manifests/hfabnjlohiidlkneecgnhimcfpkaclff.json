{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide My Reddit Username",
  "version": "1.00",
  "manifest_version": 2,
  "description": "Avoid prying eyes and hide your reddit username until you hover over it.",
  "icons": {
    "128": "spin-big.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "script.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab"
  ]
}
