{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "128": "images/icon128.png"
  },
  "default_locale": "fr",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "https://*/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "38": "images/icondisable38.png"
    },
    "default_title": "Akio Social Media",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/picto.svg"
  ]
}
