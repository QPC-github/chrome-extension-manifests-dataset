{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "default_locale": "fr",
  "name": "Shop Fairly",
  "description": "__MSG_ExtDescr__",
  "version": "1.0.1",
  "web_accessible_resources": [
    "img/*"
  ],
  "permissions": [
    "*://*.shopfairly.com/*",
    "storage",
    "tabs",
    "management"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "externally_connectable": {
    "matches": [
      "*://*.shopfairly.com/*"
    ]
  },
  "icons": {
    "128": "img/icon-128.png",
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png"
  },
  "page_action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_title": "Faire apparaitre la barre masqu√©e Shop Fairly"
  }
}
