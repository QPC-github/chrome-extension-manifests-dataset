{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "轻轻一点新标签页",
  "short_name": "点空传送门",
  "version": "0.3.14",
  "default_locale": "zh_CN",
  "description": "使用可随意定制的 轻轻一点（771dian.com）的传送门，作为新标签页",
  "author": "点空",
  "icons": {
    "128": "asset/img/icon_128.png",
    "16": "asset/img/icon_16.png"
  },
  "content_security_policy": "script-src 'self' https://*.google.com https://*.771dian.com https://*.geetest.com 'unsafe-eval'; object-src 'self';",
  "browser_action": {
    "default_icon": "asset/img/icon_16.png",
    "default_popup": "pop/pop.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ]
}
