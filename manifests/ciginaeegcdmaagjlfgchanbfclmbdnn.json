{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BVN toolbar",
  "version": "0.0.18",
  "description": "A browser action with a popup to give access to BVN related URLs",
  "permissions": [],
  "browser_action": {
    "default_title": "BVN toolbar",
    "default_icon": "tropos_icon-04.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "tropos_icon-04.png",
    "32": "tropos_icon-03.png",
    "48": "tropos_icon-02.png",
    "128": "tropos_icon-01.png"
  },
  "background": {
    "page": "index.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://ssl.google-analytics.com; object-src 'self'"
}
