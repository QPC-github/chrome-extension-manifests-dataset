{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Inferno Legend",
  "description": "Great 3D RPG game, where you will play the character of the devil.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Inferno Legend",
    "default_icon": "icon.png"
  }
}
