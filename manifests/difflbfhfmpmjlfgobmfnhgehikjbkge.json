{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ClearSwitch",
  "short_name": "ClearSwitch",
  "description": "If ClearSwitch can't communicate with you within the time period you specify, it will automatically clear your browser history.",
  "version": "1.3",
  "permissions": [
    "alarms",
    "activeTab",
    "browsingData",
    "https://api.clearswitch.io/",
    "bookmarks"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "icons": {
    "128": "clearswitch-128x128-notext.png",
    "48": "clearswitch-48x48-notext.png",
    "16": "clearswitch-16x16-notext.png"
  },
  "browser_action": {
    "default_icon": "clearswitch19x19.png",
    "default_popup": "popup.html"
  }
}
