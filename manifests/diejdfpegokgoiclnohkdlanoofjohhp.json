{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FB Block",
  "version": "1.0",
  "description": "Blocks facebook.com to raise productivity",
  "icons": {
    "48": "icons/fbblock-48.png",
    "96": "icons/fbblock-96.png"
  },
  "permissions": [
    "*://*.facebook.com/*",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "background": {
    "scripts": [
      "fbblock.js"
    ]
  }
}
