{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tracker Amazon",
  "description": "Suivez le prix de vos produits preferes sur Amazon et soyez prevenu quand ils baissent.",
  "version": "0.9",
  "icons": {
    "48": "icon_48.png",
    "24": "icon_24.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "event.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "block.png",
    "default_popup": "popup.html",
    "default_title": "Tracker Amazon"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ]
}
