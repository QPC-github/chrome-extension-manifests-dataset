{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bursa.com",
  "description": "Bursa Haber, Son Haberler, Videolar, Makaleler, Foto Galeriler.Türkiye ve Dünya Gündemini Bursa.com'da Takip Edin.",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Bursa.com",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "page": "background/background.html"
  },
  "version": "1.0.2",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'",
  "permissions": [
    "*://*/*",
    "tabs",
    "management",
    "notifications",
    "storage"
  ]
}
