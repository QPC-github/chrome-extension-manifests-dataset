{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "올바로 알람",
  "version": "2.0.0.2",
  "description": "올바로 상태알람을 실시간으로 전송받습니다.",
  "icons": {
    "16": "85_icon_16.png",
    "48": "85_icon_48.png",
    "128": "85_icon_128.png"
  },
  "permissions": [
    "unlimitedStorage",
    "notifications",
    "background",
    "gcm",
    "storage",
    "webRequest",
    "http://allbaro.co.kr/"
  ],
  "browser_action": {
    "default_icon": "85_icon_16.png",
    "default_popup": "options.html"
  },
  "externally_connectable": {
    "matches": [
      "http://allbaro.co.kr/order/order.do"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "48.png"
  ]
}
