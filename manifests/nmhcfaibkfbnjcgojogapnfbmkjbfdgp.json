{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ruby Slippers",
  "description": "This extension takes you to the top level page for any domain.",
  "version": "1.0",
  "offline_enabled": false,
  "browser_action": {
    "default_title": "Take me home!"
  },
  "icons": {
    "16": "rubyslipperlogo.png",
    "48": "rubyslipperlogo48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}
