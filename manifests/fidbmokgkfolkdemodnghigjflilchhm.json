{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Forward to Telegram"
  },
  "description": "Share the current page via Telegram messenger in just one click",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "name": "Telegram Share",
  "permissions": [
    "activeTab"
  ],
  "version": "1.0"
}
