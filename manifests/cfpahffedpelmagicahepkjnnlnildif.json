{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch OnAir",
  "description": "A simple browser extension that allow you to know if your favorite streamer is on live",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "https://www.google.com/",
    "storage",
    "notifications"
  ],
  "icons": {
    "64": "img/offline.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
