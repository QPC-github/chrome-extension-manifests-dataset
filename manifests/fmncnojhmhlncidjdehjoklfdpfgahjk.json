{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Link Sync",
  "version": "1.0.0",
  "description": "Syncs url from mobile to desktop",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "background",
    "identity",
    "tabs"
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  }
}
