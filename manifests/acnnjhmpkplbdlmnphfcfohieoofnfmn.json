{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Search Accelerator",
  "description": "Search Google faster than ever through hotkeys. Forget your mouse. ",
  "version": "1.1",
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "alarms",
    "contextMenus",
    "cookies",
    "notifications",
    "webNavigation"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Search Accelerator",
    "default_popup": "main.html"
  }
}
