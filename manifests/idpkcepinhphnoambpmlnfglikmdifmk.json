{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "data/main.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    },
    "default_popup": "data/popup.html"
  },
  "description": "Share to Twitter, Facebook & LinkedIn with automatic, recurring scheduling.",
  "icons": {
    "128": "icons/icon_128.png",
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png"
  },
  "manifest_version": 2,
  "name": "Spokal",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "version": "1.0.0"
}
