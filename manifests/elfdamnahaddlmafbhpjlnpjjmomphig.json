{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Disable Facebook Trending",
  "version": "0.1",
  "description": "Hides the trending topics/news box on Facebook.com",
  "author": "Justin Hendryx",
  "permissions": [
    "contentSettings",
    "tabs"
  ],
  "icons": {
    "256": "fbt256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ],
      "css": [
        "fixsocial.css"
      ]
    }
  ],
  "manifest_version": 2
}
