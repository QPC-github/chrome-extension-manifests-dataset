{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Yariz - Like",
  "description": "Youtube Auto Comment Voter",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Youtube Auto Comment Voter"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://www.youtube.com/*",
    "identity",
    "identity.email"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
