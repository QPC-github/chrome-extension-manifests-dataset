{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Osoyan More Flash Games",
  "version": "1.0",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "description": "Получай самые новые флеш игры одним нажатием",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "bgwork.js"
    ]
  },
  "homepage_url": "http://osoyan.net/",
  "browser_action": {
    "default_title": "Получить новые игры",
    "default_icon": "icon_48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://vk.com/*",
    "http://osoyan.net/*"
  ]
}
