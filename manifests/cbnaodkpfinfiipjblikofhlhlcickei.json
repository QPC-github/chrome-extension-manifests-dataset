{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "version": "1.32.14",
  "default_locale": "en",
  "description": "__MSG_extension_description__",
  "icons": {
    "16": "static/images/16.png",
    "19": "static/images/19.png",
    "32": "static/images/32.png",
    "38": "static/images/38.png",
    "48": "static/images/48.png",
    "64": "static/images/64.png",
    "96": "static/images/96.png",
    "128": "static/images/128.png",
    "256": "static/images/256.png"
  },
  "browser_action": {
    "default_title": "__MSG_extension_name__",
    "default_icon": {
      "256": "static/images/256.png"
    }
  },
  "author": "Weava",
  "background": {
    "scripts": [
      "static/js/lib/purl.js",
      "build/staticConstants.build.js",
      "static/js/gistnoteStaticUtility/firebaseIdGenerator.js",
      "static/js/gistnoteStaticUtility/urlUtil.js",
      "static/js/gistnoteStaticUtility/gistnoteUUID.js",
      "static/js/lib/amplitude.js",
      "static/js/lib/mixpanel.js",
      "static/js/lib/googleAnalytic.js",
      "static/js/lib/debounce.js",
      "static/js/constants/chromeMessageConstants.js",
      "build/background.build.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com https://d24n15hnbwhuhn.cloudfront.net/ https://www.google-analytics.com/analytics.js https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'; script-src-elem 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com https://d24n15hnbwhuhn.cloudfront.net/ https://www.google-analytics.com/analytics.js https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "file://*/*.pdf",
    "*://*.weavatools.com/*",
    "https://weava-files-storage.s3.amazonaws.com/pdf/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*.pdf"
      ],
      "css": [
        "static/css/gistnoteGlobal.css"
      ],
      "js": [
        "build/staticConstants.build.js",
        "build/content_script.build.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "static/css/gistnoteGlobal.css",
    "static/html/dropArea.html",
    "src/iframe/*",
    "src/pdfviewer/onboardArrow/onboardArrow.html",
    "src/pdfviewer/highlightPdfButton/highlight-pdf-button.html",
    "src/pdfviewer/web/viewer.html",
    "src/webviewer/gistnoteWebViewer.html",
    "src/auth_page/auth.html",
    "static/images/*",
    "static/video/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.weavatools.com/*",
      "*://*.gistnote.com/*"
    ]
  },
  "commands": {
    "TOGGLE_HIGHLIGHT_MODE_BY_SHORTCUT": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Enable/Disable Weava"
    },
    "TOGGLE_SIDEBAR_BY_SHORTCUT": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Show/Hide Sidebar"
    },
    "PIN_SIDEBAR_BY_SHORTCUT": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Pin/Unpin Sidebar"
    }
  }
}
