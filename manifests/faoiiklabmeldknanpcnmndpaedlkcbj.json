{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Anime Ngon Helpers",
  "description": "An animengon.com extention.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "32": "icons/video-player-32.png",
    "128": "icons/video-player-128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://video.xx.fbcdn.net/*"
  ],
  "browser_action": {
    "default_title": "Anime Ngon Helpers"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options/options.html",
  "externally_connectable": {
    "matches": [
      "*://animengon.com/*"
    ]
  }
}
