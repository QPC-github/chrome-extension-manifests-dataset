{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "i-Part Notify",
  "description": "display message count on extension button",
  "version": "1.2",
  "icons": {
    "16": "image/icon_16.png",
    "48": "image/icon_48.png",
    "128": "image/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "image/icon.png",
      "38": "image/icon.png"
    }
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "idle",
    "notifications",
    "http://www.i-part.com.tw/"
  ],
  "web_accessible_resources": [
    "image/new_msg.png"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
