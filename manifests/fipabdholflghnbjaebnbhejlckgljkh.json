{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ESI Meet Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with ESI Meet.",
  "version": "0.1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "esi-logo-16x16.png",
    "48": "esi-logo-48x48.png",
    "128": "esi-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.esi-estech.com/*"
    ]
  }
}
