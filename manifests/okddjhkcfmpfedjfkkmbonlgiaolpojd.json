{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Curae Connect",
  "browser_action": {
    "default_popup": "curae.html?popup=true",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "web_accessible_resources": [
    "options.html"
  ],
  "description": "Quickly and easily send Curae applications to patients by email without leaving your EHR and PM systems.",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "https://dev-portal.aquinahealth.com/",
    "https://qas-portal.aquinahealth.com/",
    "https://portal.aquinahealth.com/"
  ],
  "version": "1.2"
}
