{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Afiliados - Gerador de Links",
  "short_name": "Afiliados Links",
  "description": "Links encurtados e com os parâmetros necessários para sua divulgação!",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Afiliados - Gerador de Links"
  },
  "version": "3.1.0",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.app.afiliados.com.br/*",
      "*://localhost/*"
    ]
  }
}
