{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "lempod",
  "version": "2.0.7",
  "default_locale": "en",
  "description": "lempod helps you 10x your LinkedIn post views so you can reach a much bigger audience with your content.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "short_name": "lempod",
  "homepage_url": "https://lempod.com",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "lempod",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.linkedin.com/*"
  ]
}
