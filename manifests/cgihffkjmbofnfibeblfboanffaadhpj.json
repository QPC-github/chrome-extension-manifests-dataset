{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Amazites - Smart Product Price Alerts",
  "description": "This extension send product URL from Amazon, Ebay or Etsy to Amazites.com. Amazites notifies you when product price drops",
  "version": "1.0",
  "icons": {
    "16": "amazites.png",
    "48": "amazites.png",
    "128": "amazites.png"
  },
  "browser_action": {
    "default_icon": "amazites.png",
    "default_popup": "amazites.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://www.amazon.es/*"
      ]
    },
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://www.amazon.de/*"
      ]
    },
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://www.amazon.com/*"
      ]
    },
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://www.amazon.com.au/*"
      ]
    },
    {
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "*://www.amazon.com.br/*"
      ]
    },
    {
      "css": [
        "style.css"
      ],
