{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Text Clarifier MEIRYO",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Text Clarifier MEIRYO"
  }
}
