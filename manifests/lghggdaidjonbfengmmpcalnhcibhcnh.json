{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "にこぷれ（ニコニコ動画プレイヤー）",
  "short_name": "にこぷれ",
  "manifest_version": 2,
  "version": "1.0.4.1",
  "background": {
    "scripts": [
      "javascripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_title": "にこぷれ",
    "default_popup": "html/popup.html"
  },
  "description": "ニコニコ動画を音楽再生に特化させます．ニコニコ動画上にアップロードされた動画を音楽プレイヤー感覚でバックグラウンド再生します．マイリスト・プレイリストの編集ができます．",
  "icons": {
    "16": "image/icon.png",
    "32": "image/icon.png",
    "64": "image/icon.png"
  },
  "permissions": [
    "tabs",
    "*://secure.nicovideo.jp/*",
    "*://live.nicovideo.jp/*",
    "*://api.ce.nicovideo.jp/*",
    "*://www.nicovideo.jp/*",
    "*://tn-skr3.smilevideo.jp/*",
    "*://flapi.nicovideo.jp/*",
    "*://*.nicovideo.jp/*"
  ],
  "web_accessible_resources": [
    "image/icon.png"
  ]
}
