{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RoofScope Easy Order",
  "version": "1.0.1.5",
  "description": "Order aerial takeoff reports and view the status or recent RoofScope orders with ease.",
  "permissions": [
    "desktopCapture",
    "activeTab",
    "declarativeContent",
    "storage",
    "https://api.myscopetech.io/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js",
      "popup.css"
    ]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Favicon.png",
      "32": "images/Favicon.png",
      "48": "images/Favicon.png",
      "128": "images/Favicon.png"
    }
  },
  "icons": {
    "16": "images/Favicon.png",
    "32": "images/Favicon.png",
    "48": "images/Favicon.png",
    "128": "images/Favicon.png"
  },
  "manifest_version": 2
}
