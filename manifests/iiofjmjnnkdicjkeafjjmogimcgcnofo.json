{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GitHug QOTD",
  "version": "1.0",
  "description": "Motivational quotes and reminders for those who face imposter syndrome.",
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/git_hug_16.png",
      "32": "images/git_hug_32.png",
      "48": "images/git_hug_48.png",
      "128": "images/git_hug_128.png"
    }
  },
  "icons": {
    "16": "images/git_hug_16.png",
    "32": "images/git_hug_32.png",
    "48": "images/git_hug_48.png",
    "128": "images/git_hug_128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
