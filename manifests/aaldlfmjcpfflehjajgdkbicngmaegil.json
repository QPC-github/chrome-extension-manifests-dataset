{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Remove Skins from Instagram Photos",
  "description": "Allow right click over Instagram photos",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Click to remove to allow download"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "*://www.instagram.com/*"
  ],
  "web_accessible_resources": [
    "inject_instagram.js",
    "chrome-devtools://*"
  ],
  "manifest_version": 2
}
