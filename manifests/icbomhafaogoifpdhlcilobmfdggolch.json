{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js",
      "viewport.js",
      "open.js",
      "notify_number.js",
      "start.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-48.png",
    "default_title": "Stackerdecks"
  },
  "name": "Stackerdecks",
  "short_name": "Stackit",
  "options_page": "options.html",
  "description": "Stackerdecks are easy-to-build slideshows and lists made from posts found anywhere on social media or the web.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon_active-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "web_accessible_resources": [
    "ring.wav",
    "popout.html",
    "options.html",
    "icon-16.png"
  ],
  "version": "4.0",
  "manifest_version": 2
}
