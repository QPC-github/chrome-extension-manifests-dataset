{
  "author": "PhoneSlide",
  "background": {
    "persistent": false,
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://*.phoneslide.com/*"
      ]
    }
  ],
  "description": "PhoneSlide screensharing Chrome extension",
  "homepage_url": "http://www.phoneslide.com",
  "icons": {
    "48": "icon.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "PhoneSlide Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.2",
  "web_accessible_resources": [
    "icon.png"
  ]
}
