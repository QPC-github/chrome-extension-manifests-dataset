{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GitFavorites",
  "description": "Add favorites to GitHub",
  "version": "1.0.5",
  "homepage_url": "https://github.com/Aystub/GitFavorites",
  "icons": {
    "19": "images/icon19.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "96": "images/icon96.png",
      "128": "images/icon128.png",
      "256": "images/icon256.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://*.github.com/",
    "https://*.github.com/*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/"
      ],
      "js": [
        "gitFav.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.github.com/*/*"
      ],
      "js": [
        "addFav.js"
      ],
      "run_at": "document_end"
    }
  ]
}
