{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Turbo Chrome - Navegue mais rápido!",
  "short_name": "Turbo Chrome",
  "version": "1.0",
  "manifest_version": 2,
  "description": "O Turbo Chrome torna sua navegação mais rápida carregando arquivos de bibliotecas comuns localmente.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon16.png",
      "38": "icons/icon32.png"
    },
    "default_title": "Configurações",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_scripts": [],
  "web_accessible_resources": [
    "injectees/*"
  ]
}
