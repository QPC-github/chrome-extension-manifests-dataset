{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Creditsafe",
  "description": "Changing the way Business Information is Used. By the Global Business Intelligence Experts. Bringing B2B data to your fingertips.",
  "version": "1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery-3.2.1.js",
        "js/bootstrap.min.js",
        "js/bootstrapValidator.js"
      ]
    }
  ],
  "icons": {
    "19": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*.google.com/",
    "geolocation",
    "notifications",
    "contextMenus",
    "activeTab"
  ]
}
