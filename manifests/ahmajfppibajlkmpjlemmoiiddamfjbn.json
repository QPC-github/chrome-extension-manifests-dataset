{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bitcoin Ticker",
  "version": "1.0",
  "description": "Current Bitcoin Price Ticker",
  "icons": {
    "16": "css/bitcointicker16.png",
    "32": "css/bitcointicker32.png",
    "48": "css/bitcointicker48.png",
    "128": "css/bitcointicker128.png"
  },
  "browser_action": {
    "default_icon": "css/bitcointicker.png",
    "default_popup": "popuprates.html"
  },
  "background": {
    "scripts": [
      "js/event.js"
    ],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "alarms",
    "storage"
  ]
}
