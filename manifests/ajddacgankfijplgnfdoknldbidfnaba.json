{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "S3Engage",
  "description": "S3Engage lets you share great content to Twitter, Facebook and LinkedIn from anywhere on the web, with just one click.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "logo-19x19.png",
    "default_title": "S3Engage"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "s3engage.css"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "s3engage.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "https://s3engage.com/",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "share-image.png",
    "icon.png"
  ],
  "icons": {
    "16": "logo-16x16.png",
    "24": "logo-24x24.png",
    "32": "logo-32x32.png",
    "48": "logo-48x48.png",
    "64": "logo-64x64.png",
    "128": "logo-128x128.png"
  }
}
