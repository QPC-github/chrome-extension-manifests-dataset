{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Time Tracker",
  "description": "Tracks your time usage on websites you visit",
  "version": "1.01",
  "manifest_version": 2,
  "permissions": [
    {
      "fileSystem": [
        "directory",
        "retainEntries"
      ]
    },
    "identity",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "resources/icons/appIcon_16.png",
      "32": "resources/icons/appIcon_32.png",
      "48": "resources/icons/appIcon_48.png",
      "128": "resources/icons/appIcon_128.png"
    }
  },
  "icons": {
    "16": "resources/icons/appIcon_16.png",
    "32": "resources/icons/appIcon_32.png",
    "48": "resources/icons/appIcon_48.png",
    "128": "resources/icons/appIcon_128.png"
  }
}
