{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bistri Video Chat",
  "version": "1.1",
  "icons": {
    "24": "24.png",
    "128": "128.png"
  },
  "description": "Take screenshots during your free video calls using over 20 fun effects. Save them to your computer and post to Twitter or Facebook!",
  "app": {
    "urls": [
      "*://bistri.com/",
      "*://bistri.me/"
    ],
    "launch": {
      "web_url": "https://bistri.com/?tm=Chrome_App"
    },
    "browser_action": {
      "default_icon": "19.png",
      "default_title": "Bistri Video Chat"
    }
  },
  "permissions": [
    "notifications",
    "background"
  ],
  "manifest_version": 2
}
