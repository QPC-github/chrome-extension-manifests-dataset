{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NRC Articles For Free",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Read any article on NRC for free!",
  "browser_action": {
    "name": "DOM",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "background.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
