{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "eClinic Screen Sharing",
  "author": "Healthcare Communications UK Ltd.",
  "version": "1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension lets you share your screen with the patient during the call.",
  "homepage_url": "https://www.healthcare-communications.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.imiassist.ai/*",
      "https://*.eclinic.org.uk/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo16.png"
  ]
}
