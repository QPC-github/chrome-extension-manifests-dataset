{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Industria40 Screensharing",
  "author": "Industria40",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome extension to enable Screen sharing on Industria40 Remote Assistant tool.",
  "homepage_url": "https://streaming.industria40.me",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.streaming.industria40.me/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
