{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Match The News",
  "version": "2.0.1",
  "description": "Get news in a sidebar depending on the content you see",
  "browser_action": {
    "default_icon": "icons/mtn_logo_128x128_shadow.png"
  },
  "icons": {
    "48": "icons/mtn_logo_48x48_shadow.png",
    "128": "icons/mtn_logo_128x128_shadow.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "css/normalize.css",
        "css/panel.css",
        "css/jquery-ui.min.css",
        "css/jquery-ui.structure.min.css",
        "css/jquery-ui.theme.min.css",
        "css/bootstrap.min.css",
        "css/bootstrap2-toggle.min.css",
        "css/font-awesome.min.css"
      ],
      "js": [
        "js/lunr.min.js",
        "js/jquery.min.js",
        "js/jquery-ui.min.js",
        "js/content.js",
        "js/bootstrap.min.js",
        "js/bootstrap2-toggle.min.js",
        "js/underscore-min.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "management",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*",
    "activeTab"
  ],
  "web_accessible_resources": [
    "icons/mtn_logo_48x48_shadow.png",
    "icons/no-image.png",
    "fonts/*"
  ]
}
