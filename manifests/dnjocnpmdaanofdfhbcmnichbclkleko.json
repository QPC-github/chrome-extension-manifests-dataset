{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Space Pause",
  "description": "Pause YouTube / Bandcamp with the space bar, even when the player isn't in focus.",
  "version": "0.0.0.4",
  "icons": {
    "48": "icon48.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://*.bandcamp.com/*"
      ],
      "js": [
        "spacepause.js"
      ]
    }
  ]
}
