{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YouWatch",
  "version": "1.1",
  "description": "Turn on Chrome's Picture in Picture mode everywhere it's accessable in one click!",
  "icons": {
    "128": "images/img128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": {
      "128": "images/img128.png"
    }
  }
}
