{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "eK Notifier",
  "version": "1.0",
  "description": "eKreative notifier",
  "icons": {
    "128": "images/128.png",
    "16": "images/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "omnibox": {
    "keyword": "ek"
  },
  "permissions": [
    "background",
    "storage",
    "tabs",
    "alarms",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "EkreativeNotifier",
    "default_icon": "images/128.png",
    "default_popup": "popup.html"
  },
  "author": "Igor Dubiy"
}
