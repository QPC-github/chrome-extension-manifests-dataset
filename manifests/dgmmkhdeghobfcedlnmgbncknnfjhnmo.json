{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.2.0",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "storage"
  ],
  "commands": {
    "typograf-key": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "__MSG_commandShortcut__"
    }
  },
  "background": {
    "scripts": [
      "popup/browser.js",
      "popup/typograf.all.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup/browser.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  }
}
