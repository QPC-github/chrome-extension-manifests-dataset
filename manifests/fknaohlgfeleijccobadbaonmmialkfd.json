{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Quotempole",
  "description": "This extension allows you to easily add quotes from a website to your own personal quote collection at Quotempole.com",
  "version": "1.0.16",
  "icons": {
    "16": "images/qtmp-icon-16.png",
    "48": "images/qtmp-icon-48.png",
    "128": "images/qtmp-icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/qtmp-icon-16.png",
    "default_popup": "qtmp-add-quote.html",
    "default_title": "Add a quote to Quotempole"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.quotempole.com/"
  ]
}
