{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Spotniks.com",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Receba notificações sobre novos posts do Spotniks.",
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "browser_action": {
    "default_icon": "19.png",
    "default_title": "Spotniks.com"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "homepage_url": "http://spotniks.com",
  "permissions": [
    "notifications",
    "unlimitedStorage",
    "storage"
  ]
}
