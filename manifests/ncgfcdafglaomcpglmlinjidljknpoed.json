{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mr Skin Companion",
  "description": "Adds Mr Skin context actions to other sites.",
  "version": "1.4",
  "permissions": [
    "https://www.imdb.com/*",
    "https://*.imdb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.imdb.com/*",
        "https://*.imdb.com/*"
      ],
      "js": [
        "jquery.min.js",
        "app.js"
      ]
    }
  ]
}
