{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "abcCorrector para Chrome",
  "short_name": "abcCorrector",
  "version": "1.0.2.1",
  "manifest_version": 2,
  "description": "Asegura que tus textos est√°n libres de errores.",
