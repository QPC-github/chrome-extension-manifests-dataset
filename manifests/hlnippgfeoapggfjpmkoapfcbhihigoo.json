{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "UFCG - Conferências",
  "description": "Extensão para compartilhamento de tela.",
  "version": "1.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://conferencia.ufcg.me/*"
    ]
  }
}
