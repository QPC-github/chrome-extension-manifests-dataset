{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "tabenol - manage tabs",
  "version": "1.1.8",
  "short_name": "tabenol",
  "description": "Manage tab headaches - view all tabs grouped by window, exit all and reload later with the same layout across devices.",
  "icons": {
    "128": "icon-128x128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "t.png",
    "default_title": "tabenol"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Comma",
        "mac": "Command+Comma",
        "linux": "Ctrl+Comma",
        "default": "Ctrl+Comma"
      }
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
