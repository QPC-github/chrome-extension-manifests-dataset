{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "mltshp",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Post photos to mltshp.com.",
  "browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "menu.html",
    "default_title": "MLTSHP"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "96": "icon_96.png",
    "128": "icon_128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "http://*/",
    "https://*/"
  ]
}
