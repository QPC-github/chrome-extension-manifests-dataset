{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Savurly Bookmarks",
  "short_name": "Savurly",
  "manifest_version": 2,
  "version": "2.1.3",
  "description": "Easily save, search, and share your favorite bookmarks from anywhere! And discover what others already love.",
  "homepage_url": "http://www.savurly.com",
  "browser_action": {
    "default_title": "Savurly",
    "default_icon": "png/savurly-icon-white-48px.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "png/savurly-icon-16px.png",
    "48": "png/savurly-icon-48px.png",
    "128": "png/savurly-icon-128px.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "<all_urls>"
      ],
      "js": [
        "js/lib/jquery-3.1.1.min.js",
        "js/savurly-inject.min.js"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "*://*/*",
    "<all_urls>"
  ]
}
