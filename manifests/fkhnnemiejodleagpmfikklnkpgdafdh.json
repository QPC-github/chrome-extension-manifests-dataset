{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Happy Tab!",
  "version": "2.2",
  "author": "Cristian Cuevas",
  "description": "Every one bad days, some more than others, but you know what we all share the same feeling for? Puppies and Kitties.",
  "browser_action": {
    "default_title": "Happy Tab!",
    "default_icon": {
      "16": "imgs/happy16.png",
      "64": "imgs/happy64.png",
      "128": "imgs/happy128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}
