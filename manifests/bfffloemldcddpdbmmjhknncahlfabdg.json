{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AmSmart Conference Desktop Share Plugin",
  "description": "An extension that allows you to stream your desktop into meetings on AmSmart Conference Platform.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "amsmart_blue_logo_16.png",
    "48": "amsmart_blue_logo_48.png",
    "128": "amsmart_blue_logo_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://conference.amsmart.biz/*"
    ]
  }
}
