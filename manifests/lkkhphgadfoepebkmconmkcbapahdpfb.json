{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Brainspace",
  "description": "Easily save, share and discover web content within Brainspace.",
  "short_name": "brainspace",
  "version": "0.4",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "images/bs_logo.png"
  },
  "permissions": [
    "https://fonts.googleapis.com/css/*",
    "https://api-v3.brainspace.com/*",
    "https://*/",
    "tabs",
    "debugger",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://brainspaceweb-images-production.s3.amazonaws.com; object-src 'self'"
}
