{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Text2QR",
  "description": "This extension allows you to convert text to QR codes",
  "version": "1.0.1",
  "icons": {
    "48": "static/images/icons/icon_48.png",
    "16": "static/images/icons/icon_16.png"
  },
  "permissions": [
    "tabs",
    "http://chart.googleapis.com/",
    "https://chart.googleapis.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "static/images/icons/icon_19.png",
      "38": "static/images/icons/icon_38.png"
    },
    "default_title": "Text2QR 1.0.1",
    "default_popup": "popup.html"
  }
}
