{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Browserpass OTP",
  "description": "OTP extension for browserpass",
  "version": "0.2.5",
  "author": "Maxim Baz <browserpass@maximbaz.com>, Steve Gilberd <steve@erayd.net>",
  "homepage_url": "https://github.com/browserpass/browserpass-otp",
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.dist.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
