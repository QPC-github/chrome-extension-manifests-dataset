{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Extensions",
  "version": "2.0.0.4",
  "homepage_url": "https://singleclickapps.com/extensions-button",
  "description": "Shortcut to Chrome extensions page",
  "permissions": [
    "contextMenus"
  ],
  "manifest_version": 2,
  "icons": {
    "16": "i24px.png",
    "48": "i48px.png",
    "128": "i128px.png"
  },
  "browser_action": {
    "default_icon": "i24px.png",
    "default_title": "Extensions"
  },
  "background": {
    "scripts": [
      "bgr-page.js"
    ],
    "persistent": false
  },
  "options_page": "options-page.html",
  "offline_enabled": true,
  "incognito": "spanning"
}
