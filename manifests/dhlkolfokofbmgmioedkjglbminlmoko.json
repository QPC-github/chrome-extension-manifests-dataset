{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "History Remote",
  "description": "Manage and Erase your history remotely from your Mobile",
  "version": "1.0",
  "options_page": "page_options.html",
  "homepage_url": "https://historyremote.com",
  "icons": {
    "128": "img/logo_inverse2.png"
  },
  "browser_action": {
    "default_icon": "img/logo_inverse2.png",
    "default_popup": "popup.html",
    "default_title": "History Remote"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "history",
    "cookies",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "contact@historyremote.com"
    }
  }
}
