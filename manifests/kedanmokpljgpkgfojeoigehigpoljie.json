{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hoverpad",
  "version": "1.8.2",
  "description": "Allows the user to make quick notes by clicking a button and entering text into the resulting popup.",
  "icons": {
    "48": "icons/hoverpad-48.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/hoverpad-32.png"
    },
    "default_title": "Hoverpad",
    "default_popup": "index.html"
  }
}
