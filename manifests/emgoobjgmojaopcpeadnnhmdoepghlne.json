{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NexusTopia Screen Sharing for Chrome.",
  "author": "Ariel Alvarez",
  "version": "2.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for nexustopia.net. It is needed to allow video calls and screensharing.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://rwtc1.nexustopia.net/*",
      "https://rwtc7.nexustopia.net/*",
      "https://localhost:8080/*",
      "https://dev.localhost.com/*",
      "https://*.nexustopia.net/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
