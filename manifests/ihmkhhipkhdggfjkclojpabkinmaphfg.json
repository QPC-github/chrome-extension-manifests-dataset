{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nox Influencer for YouTube",
  "version": "1.3.0",
  "browser_action": {
    "default_icon": {
      "20": "noxinfluencer_16.png",
      "40": "noxinfluencer_48.png"
    },
    "default_title": "NoxInfluencer"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "dist/js/chunk-vendors.js",
        "dist/js/app.js"
      ],
      "css": [
        "dist/css/chunk-vendors.css",
        "dist/css/app.css"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "noxinfluencer_16.png",
    "48": "noxinfluencer_48.png",
    "128": "noxinfluencer_128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "*://*.youtube.com/*",
    "https://www.google-analytics.com/",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
