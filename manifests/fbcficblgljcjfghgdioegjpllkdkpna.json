{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Copy URLs from Tabs",
  "short_name": "Copy URLs from Tabs",
  "description": "Copy and Paste all URLs, easily",
  "version": "0.3.4",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19px.gif"
    },
    "default_popup": "main_popup.html",
    "default_title": "Copy and Paste all URLs, easily"
  },
  "icons": {
    "128": "icons/icon_128px.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "clipboardRead"
  ]
}
