{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "securMeet Desktop Streamer",
  "description": "This extension allows you to stream your desktop into meetings with securMeet.",
  "version": "0.0.1",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.securcom.me/*"
    ]
  }
}
