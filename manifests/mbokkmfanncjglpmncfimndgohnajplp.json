{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Envato Authors: No Author Fee",
  "description": "This extension removes the author fee from the statement page in Envato Markets.",
  "version": "1.0",
  "browser_action": {
    "name": "Envato: Remove Author Fee!",
    "icons": {
      "128": "icon_128.png"
    },
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://themeforest.net/statement*",
        "https://themeforest.net/statement*",
        "http://audiojungle.net/statement*",
        "https://audiojungle.net/statement*",
        "http://codecanyon.net/statement*",
        "https://codecanyon.net/statement*",
        "http://graphicriver.net/statement*",
        "https://graphicriver.net/statement*",
        "http://photodune.net/statement*",
        "https://photodune.net/statement*"
      ],
      "js": [
        "jquery-1.11.1.min.js",
        "background.js"
      ],
      "run_at": "document_end"
    }
  ]
}
