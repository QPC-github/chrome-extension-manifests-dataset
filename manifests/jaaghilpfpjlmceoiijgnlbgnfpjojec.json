{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "xkcd Alt Text Displayer",
  "version": "1.0.0",
  "description": "Displays the alt-text for xkcd comics below the comic, for easy readability.",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "background.js"
      ],
      "matches": [
        "*://xkcd.com/*",
        "*://xkcd.org/*",
        "*://xkcd.net/*",
        "*://www.xkcd.com/*",
        "*://www.xkcd.org/*",
        "*://www.xkcd.net/*"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2
}
