{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AngularJS debugger",
  "author": "bnm12",
  "description": "This extension allows the user to 'permanently' toggle AngularJS debug mode on in production deployments",
  "version": "1.3",
  "icons": {
    "128": "icon.png"
  },
  "devtools_page": "devtoolsBackground.html",
  "browser_action": {
    "default_icon": "icon-disabled.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage"
  ]
}
