{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ReteVisure.it",
  "short_name": "ReteVisure",
  "description": "ReteVisure.it servizi catastali",
  "version": "1.4",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+R",
        "linux": "Ctrl+Shift+R",
        "windows": "Alt+R",
        "mac": "Alt+R"
      }
    }
  },
  "browser_action": {
    "default_icon": "img/48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": false
  },
  "omnibox": {
    "keyword": "visura"
  },
  "permissions": [
    "https://www.fatturami.it/"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Retevisure.it",
      "search_url": "https://www.fatturami.it/convenzioni/searchopen.php?q={searchTerms}",
      "keyword": "visure",
      "favicon_url": "https://www.fatturami.it/convenzioni/favicon.ico",
      "is_default": false,
      "encoding": "UTF-8"
    }
  }
}
