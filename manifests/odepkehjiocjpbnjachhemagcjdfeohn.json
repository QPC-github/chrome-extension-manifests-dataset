{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EzyWebinarPRO Screen Sharing & Recording",
  "author": "Rob Wilson",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Ezyly Capture full screen of application screen on any HTTPs domain",
  "homepage_url": "https://webmeetings.ezywebinars.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://webmeetings.ezywebinars.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture",
    "audioCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.ezywebinars.com/*"
    ]
  }
}
