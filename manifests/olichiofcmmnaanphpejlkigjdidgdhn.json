{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Opinpress",
  "description": "Express your opinions and impact the popularity of the personalities and institutions you care about. Empower yourself.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "version": "1.1.3",
  "permissions": [
    "tabs",
    "cookies",
    "http://*.opinpress.com/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/config.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Opin it!",
    "default_popup": "popup.html"
  }
}
