{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AdClose",
  "version": "1.0.1",
  "description": "AdClose will close websites or popups listed in blacklist automatically once they are opened.",
  "author": "Roland KÃ¶rtvely",
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png",
    "512": "icon.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon_32.png",
    "default_title": "AdClose",
    "default_popup": "menu.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "https://fonts.googleapis.com/"
  ]
}
