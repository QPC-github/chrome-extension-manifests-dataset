{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Motivagent",
  "description": "Daily motivation for the modern real estate agent.",
  "version": "1.0.1",
  "chrome_url_overrides": {
    "newtab": "padash.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "paiconwhite128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [
    "js/*.js",
    "images/*.png",
    "images/background/*.jpg",
    "metadata.json",
    "fonts/*"
  ]
}
