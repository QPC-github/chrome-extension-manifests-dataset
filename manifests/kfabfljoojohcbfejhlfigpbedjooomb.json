{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TraktSub",
  "description": "Addic7ed subtitles on trakt.tv",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "icons/fre.png",
    "icons/eng.png"
  ],
  "permissions": [
    "*://*.trakt.tv/*",
    "*://*.addic7ed.com/*",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://trakt.tv/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "logo/active.png",
    "default_popup": "popup.html"
  }
}
