{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "MojoLive Monitor",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Easy tool to monitor your mojo score.",
  "icons": {
    "16": "images/mojolive.png",
    "48": "images/mojolive.png",
    "128": "images/mojolive.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/common.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "http://mojolive.com/",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/mojolive.png",
    "default_title": "MojoLive Monitor",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
