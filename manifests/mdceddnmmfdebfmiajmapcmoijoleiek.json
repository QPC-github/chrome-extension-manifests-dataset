{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TVonFly Instant Converter",
  "version": "5.0.4",
  "description": "Converts current tab URL data into the TV channels instantly",
  "homepage_url": "http://tvonfly.com",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-19-grey.png",
    "default_title": "TVonFly",
    "icons": {
      "48": "icon-48.png",
      "19": "icon-19-grey.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
