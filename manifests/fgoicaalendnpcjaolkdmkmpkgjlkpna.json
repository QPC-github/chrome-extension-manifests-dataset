{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Mark a link: add utm_ parameters easily",
  "version": "0.9.0",
  "manifest_version": 2,
  "description": "Copy any link to clipboard with Google Analytics UTM campaign parameters added automatically",
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-1.8.2.min.js",
      "copy.js",
      "context.js"
    ]
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "clipboardWrite",
    "contextMenus"
  ]
}
