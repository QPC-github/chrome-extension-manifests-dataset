{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Open-as-Popup",
  "description": "Open the current tab as a popup window.",
  "version": "2.0.0",
  "homepage_url": "https://ht0.de/open-as-popup.html",
  "manifest_version": 2,
  "incognito": "split",
  "icons": {
    "16": "app_icon_16.png",
    "48": "app_icon_48.png",
    "128": "app_icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "app_icon_16.png",
      "48": "app_icon_48.png"
    },
    "default_title": "Open the current tab as a popup window."
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "commands": {
    "toggle_popup": {
      "description": "Toggle popup mode",
      "suggested_key": {
        "default": "Alt+0"
      },
      "global": false
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
