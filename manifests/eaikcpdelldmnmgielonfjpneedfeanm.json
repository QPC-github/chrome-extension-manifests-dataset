{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bitcoin Exchange Rates",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Bitcoin exchange rates and currency conversion. Bitcoin currency (BTC) All Exchange Rates (163 Currencies)",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "tabs",
    "webRequestBlocking",
    "http://*/*"
  ]
}
