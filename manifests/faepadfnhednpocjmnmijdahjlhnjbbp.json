{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "InnerDebugger",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Transforme seus eventos de console em notificacoes e depure melhor sua aplicacao",
  "homepage_url": "http://innercode.com.br",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "InnerDebugger",
    "default_icon": "icon.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "notifications",
    "webNavigation"
  ]
}
