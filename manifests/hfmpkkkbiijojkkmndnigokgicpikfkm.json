{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTube Spoilershield",
  "description": "Hides Thumbnails and Comments on YouTube",
  "version": "0.2",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://*.youtube.com/",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_title": "Spoilershield",
    "default_icon": "shield.png"
  },
  "manifest_version": 2,
  "icons": {
    "16": "shield.png",
    "48": "shield48.png",
    "128": "shield128.png"
  }
}
