{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kanvz",
  "short_name": "The simplest way to build a compelling presence on the web.",
  "version": "1.21",
  "description": "Curate as you browse with Kanvz!",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon128.png"
  },
  "background": {
    "pages": [
      "canvas.html"
    ],
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "name": "Kanvz Ext",
    "default_title": "Kanvz â€“ Easily add web links to your canvas",
    "default_icon": "img/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery-1.11.2.min.js",
        "js/fb-sdk.js",
        "js/instagram-embed.js",
        "js/tweet-button.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "bookmarks",
    "background",
    "tabs",
    "notifications",
    "storage",
    "cookies",
    "https://*.kanvz.com/*",
    "https://*.facebook.net/",
    "https://*.twitter.com/",
    "https://*.instagram.com/",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "img/bookmark.png",
    "img/close.png",
    "img/play.png",
    "img/loading.gif",
    "img/check.gif",
    "img/logout.png",
    "img/default-canvas.jpg",
    "img/down-arrow.png",
    "img/plus.png",
    "img/post-btn.png",
    "img/post-btn-disabled.png",
    "img/icon.png",
    "img/options.png",
    "canvas.html"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
