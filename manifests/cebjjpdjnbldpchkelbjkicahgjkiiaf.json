{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Choose your insufficiently qualified racer, and neglect severe outcomes in your desperate search for victory.",
  "name": "Happy Wheels",
  "version": "1.0.0",
  "author": "Totaljerkface.com",
  "short_name": "Happy Wheels",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/logo128.png",
    "default_title": "Happy Wheels",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/config.js",
      "js/background.min.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "homepage_url": "http://www.totaljerkface.com/",
  "icons": {
    "128": "img/logo128.png",
    "16": "img/logo16.png",
    "48": "img/logo48.png"
  },
  "offline_enabled": false,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.cdn-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "<all_urls>"
  ]
}
