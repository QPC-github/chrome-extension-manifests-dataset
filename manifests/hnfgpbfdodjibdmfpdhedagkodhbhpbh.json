{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "A/B Toggle",
  "description": "Toggle between A/B test variants quickly",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/a-b-toggle16.png",
    "32": "images/a-b-toggle32.png",
    "48": "images/a-b-toggle48.png",
    "128": "images/a-b-toggle128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "html/options.html",
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "A/B Toggle",
    "default_icon": {
      "16": "images/a-b-toggle16.png",
      "32": "images/a-b-toggle32.png",
      "48": "images/a-b-toggle48.png",
      "128": "images/a-b-toggle128.png"
    }
  }
}
