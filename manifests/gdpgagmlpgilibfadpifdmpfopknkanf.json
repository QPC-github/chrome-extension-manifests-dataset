{
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/popup-default.png"
    },
    "default_title": "Кэшбэк-сервис Мой Сайдекс"
  },
  "content_scripts": [
    {
      "js": [
        "cs_price_history.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "cs_cashback.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Кэшбэк за покупки в магазинах будет зачисляться автоматически, а история цен за 30 дней покажет подлинность скидок и акций.",
  "homepage_url": "https://my.sidex.ru",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "Авто-Кэшбэк + Детектор скидок — \"Мой Сайдекс\"",
  "options_ui": {
    "page": "web/options.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.89",
  "web_accessible_resources": [
    "web/*"
  ]
}
