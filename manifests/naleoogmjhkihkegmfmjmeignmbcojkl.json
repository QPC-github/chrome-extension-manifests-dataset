{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tc calculator",
  "manifest_version": 2,
  "description": "Simple offline BC-like calculator for programmers with support for user defined functions and history.",
  "version": "0.1.30",
  "offline_enabled": true,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ],
    "scripts": [
      "sandbox.js",
      "library.js"
    ]
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "fileSystem"
  ]
}
