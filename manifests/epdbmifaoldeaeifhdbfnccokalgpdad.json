{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "讀 Extension",
  "version": "1.1",
  "description": "讀出網頁已選擇的文字",
  "icons": {
    "128": "TTS128.png",
    "48": "TTS48.png",
    "16": "TTS16.png"
  },
  "browser_action": {
    "default_icon": "TTS16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tts",
    "ttsEngine",
    "contextMenus",
    "storage"
  ]
}
