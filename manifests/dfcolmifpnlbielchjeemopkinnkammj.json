{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Epicodus Login",
  "description": "Your one stop shop for all things Epicodus! Built by students, for students.",
  "version": "1.9",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Epicodus Login"
  },
  "permissions": [
    "https://*.epicodus.com/*",
    "http://*.epicodus.com/*",
    "notifications",
    "storage",
    "cookies",
    "geolocation",
    "alarms"
  ]
}
