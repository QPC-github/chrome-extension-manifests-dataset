{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Картинка на стену/альбом VKontakte",
  "version": "2.7.1",
  "manifest_version": 2,
  "description": "Расширение позволяет постить картинки, найденные в интернете, на личную стену или стену группы в социальной сети ВКонтакте",
  "icons": {
    "16": "img/vkiu-16.png",
    "32": "img/vkiu-32.png",
    "48": "img/vkiu-48.png",
    "128": "img/vkiu-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Картинка стену/альбом VKontakte",
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "minimum_chrome_version": "6.0.0.0",
  "web_accessible_resources": [
    "img/vkiu-32.png"
  ]
}
