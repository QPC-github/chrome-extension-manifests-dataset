{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "3.1.4",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/tb-16.png",
    "128": "images/tb-128.png",
    "256": "images/tb-256.png"
  },
  "default_locale": "pt_BR",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "background",
    "notifications",
    "webRequest",
    "storage",
    "alarms",
    "*://*.google.com/",
    "*://comunidade.tecnoblog.net/",
    "*://tecnoblog.net/"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/tb-16.png",
      "32": "images/tb-32.png"
    },
    "default_title": "Tecnoblog",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/tb-64.png"
  ]
}
