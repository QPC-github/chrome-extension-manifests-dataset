{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Free Exame",
  "version": "1.0",
  "description": "Visualizar gratuitamente as not√≠cias da folha Exame.",
  "manifest_version": 2,
  "permissions": [
    "unlimited_storage",
    "notifications",
    "contextMenus",
    "cookies",
    "storage",
    "idle",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/default.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.exame.abril.com.br/*"
      ],
      "js": [
        "js/jquery-3.4.1.min.js",
        "js/exame.js"
      ],
      "run_at": "document_end",
      "persistent": false
    }
  ]
}
