{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fast Pinguer",
  "version": "1.0",
  "description": "Make your blog index quickly",
  "options_page": "html/options.html",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.jpg",
    "48": "img/icon48.jpg",
    "128": "img/icon128.jpg"
  },
  "browser_action": {
    "default_icon": "img/icon16.jpg",
    "default_popup": "html/popup.html"
  },
  "background": {
    "page": "html/background.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "notifications",
    "unlimitedStorage"
  ]
}
