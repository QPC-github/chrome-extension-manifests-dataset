{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "iPlug Healthcare",
  "author": "iPlug Healthcare",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for https://www.iplug360.com. to share your screen.",
  "homepage_url": "https://www.iplug360.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.iplug360.com/*",
      "http://*.iplug360.com/*",
      "https://localhost/*",
      "http://localhost/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
