{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Классические Диалоги ВКонтакте",
  "description": "Классический способ выделения непрочитанных сообщений ВКонтакте.",
  "version": "1.0",
  "permissions": [
    "*://*.vk.com/*",
    "*://vk.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.vk.com/*",
        "*://vk.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Классические Диалоги ВКонтакте",
    "default_icon": "icon.png"
  }
}
