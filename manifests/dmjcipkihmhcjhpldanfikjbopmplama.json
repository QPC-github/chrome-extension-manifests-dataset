{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Tabbex Site",
  "version": "0.0.0.4",
  "description": "A button to close all tabs from the current website",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "s19.png",
      "38": "s38.png"
    },
    "default_title": "Close all tabs from this domain"
  },
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "s16.png",
    "48": "s48.png",
    "128": "s128.png"
  },
  "manifest_version": 2
}
