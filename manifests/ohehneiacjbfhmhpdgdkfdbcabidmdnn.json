{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TODO List - In browser tab",
  "short_name": "TODO(s)",
  "description": "Shows up on browser, Re-order by drag-drop, Synced to your Chrome logged-in account, save on browser when not logged-in.",
  "version": "1.16",
  "author": "Mahesh Chand <mahesh.yadav.107@gmail.com>",
  "browser_action": {
    "default_icon": "assets/todo128.png",
    "default_title": "Todo(s) - In Browser"
  },
  "icons": {
    "16": "assets/todo16.png",
    "32": "assets/todo32.png",
    "48": "assets/todo48.png",
    "128": "assets/todo128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "identity",
    "identity.email"
  ]
}
