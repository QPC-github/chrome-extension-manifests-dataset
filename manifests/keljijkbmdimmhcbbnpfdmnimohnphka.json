{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Read Aloud",
  "short_name": "Aloud",
  "version": "1.0",
  "description": "Listen to audio version of any artice or story using Aloud extension!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "play-button.png"
  },
  "browser_action": {
    "default_title": "Read Aloud",
    "default_icon": "icon_19.png"
  },
  "permissions": [
    "tabs"
  ]
}
