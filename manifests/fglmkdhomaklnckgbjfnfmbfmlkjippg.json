{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appTitle__",
  "short_name": "Tracking Button",
  "manifest_version": 2,
  "version": "1.23",
  "author": "Tracking Time LLC",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "img/iconos/128x128_green.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/lib/jquery-3.3.1.min.js",
      "js/lib/moment-with-locales.min.js",
      "js/extension-helpers.js",
      "js/device_api.js",
      "js/model.js",
      "js/translate.js",
      "settings.js",
      "js/abstract/custom-jquery-ajax-localstorage-cache.js",
      "js/abstract/crud.js",
      "js/abstract/json_crud.js",
      "js/abstract/local_crud.js",
      "js/abstract/time_manager.js",
      "js/domains.js",
      "js/options.js",
      "js/notifications.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "<all_urls>",
    "webNavigation",
    "notifications",
    "cookies"
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": {
      "32": "img/iconos/32x32_grey.png"
    },
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js https://widget.intercom.io https://js.intercomcdn.com ; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "css": [
        "css/browser.css"
      ],
      "js": [
        "js/lib/jquery-3.3.1.min.js",
        "js/lib/moment-with-locales.min.js",
        "js/browser.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "web_accessible_resources": [
        "css/browser.css",
        "js/lib/jquery-3.3.1.min.js",
        "js/lib/moment-with-locales.min.js",
        "js/browser.js"
      ]
    }
  ]
}
