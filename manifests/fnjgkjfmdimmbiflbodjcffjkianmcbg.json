{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Auvious Screen Sharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Auvious",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.3",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Enable screen sharing and remote desktop at Auvious. All from your browser.",
  "externally_connectable": {
    "matches": [
      "*://*.auvious.com/*",
      "*://*.teledrom.com/*",
      "*://localhost:*/*"
    ]
  },
  "icons": {
    "128": "icon@128.png",
    "16": "icon@16.png",
    "48": "icon@48.png",
    "96": "icon@96.png"
  },
  "browser_action": {
    "default_icon": "icon@48.png"
  },
  "web_accessible_resources": [
    "manifest.json",
    "icon@16.png"
  ]
}
