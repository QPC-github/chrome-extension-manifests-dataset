{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Search ALL for Craigslist",
  "description": "Search ALL for Craigslist allows you to Search by State OR Search All States at once from the toolbar.",
  "version": "2.0",
  "permissions": [
    "http://allcraiglistsearch.com/*",
    "https://allcraiglistsearch.com/*",
    "http://*.allcraiglistsearch.com/*",
    "tabs",
    "https://*.allcraiglistsearch.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
