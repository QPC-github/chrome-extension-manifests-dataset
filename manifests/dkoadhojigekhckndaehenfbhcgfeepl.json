{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Keyboard Shortcuts to Close Other/Right Tabs",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Keyboard Shortcuts to Close Other/Right Tabs",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "close-other-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Close other Tabs"
    },
    "close-right-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Close Tabs to the right"
    },
    "toggle-pin": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Pin/unpin Tab"
    }
  }
}
