{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Deutschodoro",
  "description": "Practice German in your Pomodoro break time.",
  "version": "0.3.7",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Deutschodoro",
    "default_popup": "index.html"
  },
  "options_page": "settings.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "alarms",
    "notifications",
    "tabs",
    "*://deutschodoro.com/*",
    "*://*.deutschodoro.com/*"
  ],
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
