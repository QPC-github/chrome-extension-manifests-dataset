{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Контур-Фокус - быстрая проверка контрагентов",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "description": "Сервис экспресс-проверки контрагентов: выписки ЕГРЮЛ, ЕГРИП, Росстат; выявление зависимостей между фирмами, проверка благонадежности",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "js/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "file://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "ftp://*/*"
  ],
  "homepage_url": "http://kontur-f.ru/extensions"
}
