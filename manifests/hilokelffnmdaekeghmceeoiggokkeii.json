{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Netflix Play/Pause Anywhere",
  "short_name": "NPPA",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Play and pause Netflix playback by clicking anywhere on the video",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "*://www.netflix.com/*"
      ],
      "js": [
        "jquery.js",
        "nppa.js"
      ],
      "css": [
        "nppa.css"
      ]
    }
  ]
}
