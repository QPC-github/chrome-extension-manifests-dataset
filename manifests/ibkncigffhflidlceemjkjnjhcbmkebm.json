{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_APP_NAME__",
  "version": "2.0",
  "manifest_version": 2,
  "default_locale": "zh_CN",
  "description": "__MSG_APP_DESCRIPTION__",
  "icons": {
    "128": "icons/app_128.png",
    "64": "icons/app_64.png",
    "32": "icons/app_32.png",
    "16": "icons/app_16.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://api.douban.com; object-src 'self'",
  "background": {
    "page": "chrome/background.html"
  },
  "web_accessible_resources": [
    "popup.html",
    "chrome/injection.js",
    "themes/default/images/close_button.png",
    "themes/default/images/background.png",
    "themes/default/images/button_bg.png"
  ]
}
