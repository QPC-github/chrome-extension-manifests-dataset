{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Voila Web Screenshot",
  "short_name": "Voila Extension for web capturing",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icons/48x48.png",
    "default_popup": "popup.html",
    "default_title": "Voila Web Screenshot"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "description": "Capture webpages in a variety of ways from within your browser!",
  "icons": {
    "48": "images/icons/48x48.png",
    "64": "images/icons/64x64.png",
    "128": "images/icons/128x128.png"
  },
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "favicon.png"
  ],
  "homepage_url": "http://www.globaldelight.com",
  "permissions": [
    "downloads",
    "cookies",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "notifications",
    "<all_urls>",
    "identity"
  ]
}
