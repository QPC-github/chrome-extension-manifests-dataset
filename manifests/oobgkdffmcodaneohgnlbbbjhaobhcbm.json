{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Truteach",
  "author": "Truskills",
  "version": "2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for https://truteach.com WCS Api to enable screen capture.",
  "homepage_url": "https://truteach.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://truteach.com/*",
      "https://*.truteach.com/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
