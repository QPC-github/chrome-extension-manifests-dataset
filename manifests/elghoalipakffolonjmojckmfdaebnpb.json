{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Case Changer",
  "version": "2.0.0",
  "description": "Changes highlighted text to all Uppercase or Lowercase",
  "icons": {
    "16": "16_Inout.png",
    "48": "48_Inout.png",
    "128": "128_Inout.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "changeCase.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "short_name": "Changes highlighted text to all Uppercase or Lowercase",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "19_Inout.png",
      "38": "38_Inout.png"
    },
    "default_title": "Case Changer"
  }
}
