{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Webie",
  "description": "Real-time testing of responsive web sites on multiple devices simultaneously",
  "version": "1.2",
  "browser_action": {
    "default_title": "Webie",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "storage"
  ]
}
