{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cope",
  "version": "1.0",
  "description": "Save your copies from everywhere in your pocket",
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/icon/leaf_16.png",
    "48": "images/icon/leaf_48.png",
    "128": "images/icon/leaf_128.png"
  },
  "manifest_version": 2
}
