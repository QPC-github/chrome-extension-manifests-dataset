{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shorty Stream Notifier",
  "description": "Notify you when ShortyDesigner is streaming. By MiniWolskys. @MiniWolskys on Twitter.",
  "version": "1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://leveldown.fr/",
    "notifications",
    "activeTab"
  ]
}
