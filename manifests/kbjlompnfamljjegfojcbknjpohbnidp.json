{
  "browser_action": {
    "default_icon": "static/img/icon_main.png",
    "default_popup": "popup.html"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Need to study? See where your friends are working and meetup!",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "name": "inGroups",
  "permissions": [
    "http://www.getingroups.com/*",
    "https://www.facebook.com/*",
    "tabs",
    "geolocation",
    "alarms",
    "storage"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "version": "0.4.1"
}
