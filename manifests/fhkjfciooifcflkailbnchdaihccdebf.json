{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GetThemAll",
  "description": "Download all the images on a webpage",
  "version": "1.2.3",
  "author": "boyzhoulin@sina.com",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "GetThemAll"
  },
  "background": {
    "scripts": [
      "manager.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "downloads",
    "file://*"
  ]
}
