{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Auto Logout",
  "description": "Automagically logout from facebook, twitter and quora after 10 minutes.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.quora.com/",
        "https://twitter.com/*"
      ],
      "js": [
        "scripts/logout.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "You will be logged out in 10 minutes.",
    "default_icon": {
      "38": "icons/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "idle",
    "storage",
    "tabCapture",
    "tabs",
    "https://www.facebook.com/*",
    "https://twitter.com/*",
    "https://www.quora.com/*"
  ]
}
