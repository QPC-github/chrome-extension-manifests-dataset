{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QRLY",
  "version": "2.0",
  "description": "this plugin converts current web page url to QR Code!",
  "background": {
    "scripts": [
      "jquery.js",
      "qrcode.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/qrly16.png",
      "32": "images/qrly32.png",
      "48": "images/qrly48.png",
      "128": "images/qrly128.png"
    }
  },
  "icons": {
    "16": "images/qrly16.png",
    "32": "images/qrly32.png",
    "48": "images/qrly48.png",
    "128": "images/qrly128.png"
  },
  "manifest_version": 2
}
