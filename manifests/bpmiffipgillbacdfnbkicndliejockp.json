{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Daily Links",
  "version": "1.4",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "icons": {
    "32": "links-32.png",
    "48": "links-48.png",
    "128": "links-128.png"
  },
  "description": "Opens up a customizable set of links for every day.",
  "browser_action": {
    "name": "Load today's links",
    "default_icon": "links.png"
  }
}
