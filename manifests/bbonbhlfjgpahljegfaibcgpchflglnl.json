{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "JSON Formatter",
  "version": "1.2",
  "description": "JSON online formatting tool. Simple, quick and easy to use.",
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "clipboardRead",
    "tabs",
    "activeTab",
    "http://json.collaboradev.com/",
    "https://json.collaboradev.com/"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "overlay.html",
    "default_icon": {
      "16": "img/logo-16.png",
      "32": "img/logo-32.png",
      "48": "img/logo-48.png",
      "128": "img/logo-128.png"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://*.collaboradev.com/*"
    ]
  }
}
