{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Keep my Pinned Tab",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Confirms when you try to close a pinned tab.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
