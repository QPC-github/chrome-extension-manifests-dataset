{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Astrea Share Salesforce Records",
  "version": "1.0.2",
  "description": "Share records in Salesforce Lightning",
  "permissions": [
    "cookies",
    "activeTab",
    "https://*/*",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "/scripts/jquery-1.11.1.min.js",
      "background.js",
      "/scripts/jsforce.min.js",
      "/scripts/forcetk.ui.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/get_started16.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png"
  },
  "manifest_version": 2
}
