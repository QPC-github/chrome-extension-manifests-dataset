{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Velvet",
  "version": "1.3.9.1",
  "description": "Eases the browsing of Derpibooru by providing new functionalities.",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://derpibooru.org/settings",
    "https://trixiebooru.org/settings"
  ],
  "web_accessible_resources": [
    "icons/velvetIcon.png"
  ],
  "background": {
    "scripts": [
      "scripts/constants.js",
      "scripts/functions.js",
      "scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Open Velvet's settings"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.derpibooru.org/*",
        "*://*.trixiebooru.org/*"
      ],
      "js": [
        "scripts/constants.js",
        "scripts/functions.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.derpibooru.org/*",
        "*://*.trixiebooru.org/*"
      ],
      "js": [
        "scripts/beforeSubmit.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.derpibooru.org/search*",
        "*://*.trixiebooru.org/search*"
      ],
      "js": [
        "scripts/afterSubmit.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.derpibooru.org/search*",
        "*://*.trixiebooru.org/search*",
        "*://*.derpibooru.org/tags/*",
        "*://*.trixiebooru.org/tags/*"
      ],
      "js": [
        "scripts/afterLoad.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.derpibooru.org/*",
        "*://*.trixiebooru.org/*"
      ],
      "css": [
        "css/icon.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.derpibooru.org/settings",
        "*://*.trixiebooru.org/settings"
      ],
      "css": [
        "css/settings.css"
      ],
      "js": [
        "scripts/settings.js"
      ],
      "run_at": "document_end"
    }
  ]
}
