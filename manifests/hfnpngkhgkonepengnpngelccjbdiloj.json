{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shadow Systems Video Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into a group chat on Shadow Systems Video.",
  "version": "0.1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "ssv-logo-16x16.png",
    "48": "ssv-logo-48x48.png",
    "128": "ssv-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://v.shadow.systems/*"
    ]
  }
}
