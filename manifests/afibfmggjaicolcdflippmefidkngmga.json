{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "js/config.js",
      "js/store.js",
      "js/utility.js",
      "js/log.js",
      "js/search.js",
      "js/dailyFeature.js",
      "central.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_popup": "html/bAction/recipesAction.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtabhtml/newtabpage.html"
  },
  "default_locale": "en",
  "description": "__MSG_ProductDescription__",
  "icons": {
    "128": "icon.png"
  },
  "incognito": "split",
  "manifest_version": 2,
  "name": "__MSG_ProductName__",
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "*://*.hmyrecipefinder.co/*",
    "alarms",
    "contextMenus"
  ],
  "version": "1.2",
  "web_accessible_resources": [
    "*.json"
  ]
}
