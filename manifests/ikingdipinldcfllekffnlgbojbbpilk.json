{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reddit Notifier",
  "version": "1.0.6",
  "description": "Get reddit notifications in chrome",
  "options_page": "options.html",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "homepage_url": "https://chrome.google.com/webstore/detail/reddit-notifier/ikingdipinldcfllekffnlgbojbbpilk",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "http://www.reddit.com/*",
    "https://www.reddit.com/*",
    "notifications"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icongray.png",
      "38": "images/icongray38.png"
    },
    "default_title": "Reddit Notifier",
    "default_popup": "popup.html"
  }
}
