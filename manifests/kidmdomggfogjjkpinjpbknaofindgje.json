{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AstroScanner",
  "version": "3.9.0",
  "icons": {
    "16": "app/assets/images/16.png",
    "48": "app/assets/images/48.png",
    "128": "app/assets/images/128.png"
  },
  "manifest_version": 2,
  "description": "Extension to automate scanning in Astro Empires.",
  "browser_action": {
    "default_title": "AstroScanner",
    "default_icon": "app/assets/images/48.png"
