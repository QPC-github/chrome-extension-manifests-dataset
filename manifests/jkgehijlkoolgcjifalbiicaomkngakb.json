{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*.slack.com/archives/*",
        "https://*.slack.com/archives/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "Open Slack in Browser, not App",
  "icons": {
    "128": "icons/icon.png",
    "16": "icons/icon.png",
    "48": "icons/icon.png"
  },
  "manifest_version": 2,
  "name": "Open Slack in Browser, not App",
  "version": "1.0.0"
}
