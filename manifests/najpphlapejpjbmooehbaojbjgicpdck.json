{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Update Finial",
  "description": "Set finial flags from chrome.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "cookies",
    "*://*/*",
    "activeTab",
    "declarativeContent"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
