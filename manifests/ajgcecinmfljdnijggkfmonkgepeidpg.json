{
  "background": {
    "persistent": false,
    "scripts": [
      "js/init.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Bootswatch Previewer"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "description": "Preview any Bootswatch theme on your Bootstrap website right from the browser! Legacy version for Bootstrap v3",
  "icons": {
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "Bootswatch Previewer Legacy",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.2",
  "web_accessible_resources": [
    "themes/*",
    "lib/fonts/*"
  ]
}
