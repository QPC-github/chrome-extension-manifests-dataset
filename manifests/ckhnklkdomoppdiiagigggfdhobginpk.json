{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Les Toiles Héroïques",
  "short_name": "LTH",
  "version": "5.6",
  "description": "L'actualité super-héroïque en continu !",
  "icons": {
    "128": "img/icon_128_deadpool.png",
    "48": "img/icon_48_deadpool.png"
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/functions.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon_48_deadpool.png",
    "default_popup": "index.html",
    "default_title": "Les Toiles Héroïques"
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "http://lestoilesheroiques.fr/*"
  ],
  "web_accessible_resources": [
    "img/*.png",
    "img/*.gif"
  ]
}
