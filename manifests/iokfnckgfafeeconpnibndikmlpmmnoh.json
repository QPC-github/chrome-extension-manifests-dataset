{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bhutan Tour Booking",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Book your hotel or tour to Bhutan. Big savings on tour packages and hotel rooms",
  "homepage_url": "https://www.bookmytour.bt",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Bhutan Tour Booking"
  }
}
