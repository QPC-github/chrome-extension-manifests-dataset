{
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "background/background.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery_min.js",
        "js/functions.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Themob, agora sim, saiba as novidades do cinema.",
  "icons": {
    "128": "128.png"
  },
  "manifest_version": 2,
  "name": "Themob",
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "short_name": "Themob",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2",
  "web_accessible_resources": [
    "background/*",
    "js/*"
  ]
}
