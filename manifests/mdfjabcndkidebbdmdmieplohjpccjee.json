{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tozny Share",
  "description": "End to end encrypted sharing",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/img/logo.png",
    "128": "icons/img/logo.png"
  },
  "browser_action": {
    "default_title": "Tozny Sharing",
    "default_popup": "popup.html",
    "default_icon": "icons/img/logo.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
