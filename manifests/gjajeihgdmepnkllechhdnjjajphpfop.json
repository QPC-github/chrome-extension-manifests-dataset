{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Discord Status",
  "short_name": "Discord Status",
  "version": "1.61",
  "description": "Popup notifications informing you about the Discord status.",
  "icons": {
    "128": "logo/logo_online.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "128": "logo/logo_offline.png"
    }
  }
}
