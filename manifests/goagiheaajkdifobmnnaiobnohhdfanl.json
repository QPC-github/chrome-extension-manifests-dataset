{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nxtbase Screen Share",
  "description": "A Screen Sharing extension for Nxtbase Technologies Website",
  "version": "0.1.9",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "nxtbase-logo-16x16.png",
    "48": "nxtbase-logo-48x48.png",
    "128": "nxtbase-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.nxtbase.net/*",
      "*://golf.iit.tu-cottbus.de/*"
    ]
  }
}
