{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Speichern Button von doorlin",
  "short_name": "Speichern Button von doorlin",
  "description": "Speichere Inhalte aus dem Web ganz einfach auf doorlin und ordne sie dann sp√§ter.",
  "homepage_url": "https://doorlin.com",
  "author": "doors GmbH",
  "version": "1.4.1",
  "manifest_version": 2,
  "icons": {
    "16": "icons/logo-16x16.png",
    "20": "icons/logo-20x20.png",
    "32": "icons/logo-32x32.png",
    "40": "icons/logo-40x40.png",
    "48": "icons/logo-48x48.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/require.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/inject.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/logo-16x16.png",
      "20": "icons/logo-20x20.png",
      "32": "icons/logo-32x32.png",
      "40": "icons/logo-40x40.png",
      "48": "icons/logo-48x48.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
