{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "XNA Forum URL Redirect",
  "version": "1.2",
  "description": "Re-writes broken XNA article URLs",
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png",
    "256": "256.png"
  },
  "permissions": [
    "tabs"
  ],
  "author": {
    "name": "Nick Metnik",
    "email": "nickmetnik@hotmail.com"
  }
}
