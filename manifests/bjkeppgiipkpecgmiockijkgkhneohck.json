{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Novoclinical Video Screen sharing",
  "description": "An extension to allow you to share screen.",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.novoclinical.com/*",
      "*://*.novopatient.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
