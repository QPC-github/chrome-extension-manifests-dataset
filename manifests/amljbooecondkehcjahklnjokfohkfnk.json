{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "default_locale": "en",
  "short_name": "MB-Ruler",
  "version": "0.0.3.10",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "author": "Markus Bader - MB-Softwaresolutions",
  "background": {
    "scripts": [
      "content.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*"
      ],
      "js": [
        "jquery.js",
        "content.js",
        "mbruler_line.js",
        "mbruler_point.js",
        "grid/mbruler_grid.js",
        "triangularruler/mbruler_triangularruler.js",
        "guidelines/guidelines.js"
      ],
      "css": [
        "content.css",
        "mbruler_line.css",
        "mbruler_point.css",
        "grid/mbruler_grid.css",
        "triangularruler/mbruler_triangularruler.css",
        "guidelines/guidelines.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/triangularruler.png",
    "images/windowgrid.png",
    "images/guidelines.png",
    "images/hideinstruments.png",
    "images/showinstruments.png"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "images/MB-Ruler16.png",
    "128": "images/MB-Ruler128.png"
  },
  "browser_action": {
    "default_icon": "images/MB-Ruler19.png",
    "default_title": "MB-Ruler",
    "default_popup": "popup.html"
  }
}
