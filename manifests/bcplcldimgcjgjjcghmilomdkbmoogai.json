{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "USDT Tether Alert",
  "short_name": "USDT Tether Alert",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Is Tether in the danger zone? Stay alert with USDT Tether Alert!",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/popup.js"
    ]
  },
  "permissions": [
    "storage",
    "https://chrome-coin-alert-4.glitch.me/*",
    "https://api.coingecko.com/*",
    "http://api.ipstack.com/*",
    "http://jsonip.com/*",
    "https://jsonip.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser-icon-19.png",
      "38": "images/browser-icon-38.png"
    },
    "default_title": "USDT Tether Alert",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png",
    "images/*.png"
  ]
}
