{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitter Unseen",
  "description": "Block the 'seen' mention on Twitter's DMs",
  "version": "1.1.0",
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "128.png",
    "default_title": "Twitter Unseen"
  },
  "icons": {
    "128": "128.png"
  },
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "https://twitter.com/",
    "https://api.twitter.com/",
    "webRequest",
    "webRequestBlocking"
  ]
}
