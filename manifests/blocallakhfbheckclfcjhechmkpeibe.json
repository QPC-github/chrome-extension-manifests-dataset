{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Steam Cleaner",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The first extension that I made.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.steamcommunity.com/*",
        "http://steamcommunity.com/*",
        "http://*.steampowered.com/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
