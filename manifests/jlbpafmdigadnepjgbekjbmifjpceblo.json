{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Freedom.social Screenshare Extension",
  "description": "Extension for enabling screensharing in Chrome",
  "version": "2.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {},
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://freedom.social/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://freedom.social/*"
    ]
  }
}
