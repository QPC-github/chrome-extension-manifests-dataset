{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Brickplus",
  "description": "Brickplanet item notifier made by Peridax.",
  "manifest_version": 2,
  "version": "0.3",
  "icons": {
    "16": "/assets/img/icon16.png",
    "48": "/assets/img/icon48.png",
    "128": "/assets/img/icon128.png"
  },
  "background": {
    "scripts": [
      "assets/js/jquery.js",
      "assets/js/responsevoice.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Brickplus",
    "default_popup": "assets/html/popup.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "https://www.brickplanet.com/",
    "https://cdn.brickplanet.com/"
  ]
}
