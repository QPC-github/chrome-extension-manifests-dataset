{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "name": "Image Searcher",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "icons/is_128.png",
    "48": "icons/is_48.png",
    "16": "icons/is_16.png"
  },
  "manifest_version": 2,
  "version": "1.2",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "developer": {
    "name": "quoctrinh"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "description": "Search similar image by \"Google search by Image\"."
}
