{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Ref.li Official URL Shortener, Shorten the current URL and Save it in your account",
  "name": "Ref.li Official URL Shortener",
  "version": "1.10",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "https://*/",
    "http://*/",
    "https://ajax.googleapis.com/",
    "http://ref.li/"
  ],
  "browser_action": {
    "default_icon": "logo-dark.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon_128.png"
  }
}
