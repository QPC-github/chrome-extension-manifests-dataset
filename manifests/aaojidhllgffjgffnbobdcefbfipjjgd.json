{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Chrappify",
  "description": "This extension creates custom apps for your favorite websites. Use your favorite website like its own app. Only for MacOS.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "downloads.open",
    "background",
    "https://ajax.googleapis.com/"
  ]
}
