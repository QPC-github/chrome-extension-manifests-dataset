{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Marucast Desktop Capture",
  "description": "Allows the user to capture and share their screen",
  "version": "1.0.7",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "index.js"
    ],
    "persistant": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://192.168.60.242/*",
      "*://*.marucast.jp/*",
      "*://sokumen.net/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
