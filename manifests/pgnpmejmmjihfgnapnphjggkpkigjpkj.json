{
  "manifest_version": 2,
  "version": "2.1",
  "browser_action": {
    "default_icon": "wicon.png",
    "popup": "wikipopup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [],
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "description": "Quickly Look Up any thing in Wikipedia by just selecting the text. Also search on Amazon, Flipkart and IMDB on a new Tab.",
  "icons": {
    "128": "Semal.png"
  },
  "name": "QWicki",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx"
}
