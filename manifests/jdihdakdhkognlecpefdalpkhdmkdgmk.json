{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RENdez-vous Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with RENdez-vous.",
  "version": "0.1.8",
  "author": "RENATER RENdez-vous",
  "short_name": "rendez-vous screenshare",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icone16.png",
    "48": "icone48.png",
    "128": "icone128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://rendez-vous.renater.fr/*",
      "*://*.rendez-vous.renater.fr/*"
    ]
  }
}
