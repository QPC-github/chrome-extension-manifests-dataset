{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Stream Machine",
  "version": "0.1",
  "description": "Save, Queue, and Curate Video Easily.",
  "background": {
    "scripts": [
      "/js/jquery-2.1.1.min.js",
      "/js/utility.js",
      "/js/api.js",
      "/js/background.js"
    ]
  },
  "permissions": [
    "cookies",
    "tabs",
    "contextMenus",
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "/img/icon-48.png",
    "default_popup": "/popup.html"
  },
  "icons": {
    "16": "/img/icon-16.png",
    "48": "/img/icon-48.png",
    "128": "/img/icon-128.png"
  }
}
