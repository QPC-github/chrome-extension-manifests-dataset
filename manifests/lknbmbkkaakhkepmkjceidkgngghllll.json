{
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ],
    "all_frames": true
  },
  "content_scripts": [
    {
      "js": [
        "jquery.1.7.2.js",
        "loader.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "images/logo128x128.png",
    "default_title": "Jobs Zimbabwe",
    "default_popup": "popup.html"
  },
  "description": "Jobs Zimbabwe is a Job Listing Site. We aggregate jobs from other sites, companies and NGOs o provide daily jobs in Zimbabwe.",
  "icons": {
    "128": "images/logo128x128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "18.0",
  "name": "Jobs Zimbabwe",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "2.0.0.1001"
}
