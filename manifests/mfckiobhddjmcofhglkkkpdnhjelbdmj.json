{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Clocked-In",
  "description": "This extension keeps track of how much time you've spent on various sites.",
  "version": "0.7",
  "background": {
    "scripts": [
      "sites.js",
      "tracker.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "256": "./public/icon.png"
  },
  "browser_action": {
    "default_icon": "./public/icon.png",
    "default_popup": "popup.html",
    "default_title": "Clocked-In"
  },
  "permissions": [
    "idle",
    "tabs",
    "storage",
    "alarms"
  ]
}
