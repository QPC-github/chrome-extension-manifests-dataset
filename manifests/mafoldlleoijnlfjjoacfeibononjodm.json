{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DnD Spell Finder",
  "description": "This extension allows a user to quickly look up a DnD5e spell for use in the Roll20 environment.",
  "version": "1.5",
  "icons": {
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon64.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ]
}
