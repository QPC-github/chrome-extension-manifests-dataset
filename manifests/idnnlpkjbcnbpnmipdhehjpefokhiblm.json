{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Adsmurai Visual Commerce for Google Chromeâ„¢",
  "version": "0.0.8",
  "name": "Adsmurai Visual Commerce",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "cookies",
    "*://adsmurai.com/*",
    "*://*.adsmurai.com/*",
    "*://*.instagram.com/*",
    "*://instagram.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://chromedev.com/*",
      "*://adsmurai.com/*",
      "*://*.adsmurai.com/*",
      "*://instagram.com/*",
      "*://*.instagram.com/*"
    ]
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "addComment.js"
      ],
      "css": []
    }
  ],
  "web_accessible_resources": [
    "addComment.js",
    "icon-128.png",
    "icon-34.png",
    "logo-visual-commerce__negative.svg"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
