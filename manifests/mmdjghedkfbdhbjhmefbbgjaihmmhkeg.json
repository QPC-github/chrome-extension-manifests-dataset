{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Servistate HTTP Editor & REST API Client",
  "short_name": "Servistate",
  "version": "1.6.1",
  "description": "Create, edit and send HTTP requests. Run API tests, validate HTTP responses and measure API performance.",
  "author": "Servistate",
  "homepage_url": "http://www.servistate.com",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "browser_action": {
    "default_icon": "assets/logo48.png"
  },
  "icons": {
    "16": "assets/logo16.png",
    "32": "assets/logo32.png",
    "48": "assets/logo48.png",
    "128": "assets/logo128.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "unlimitedStorage"
  ]
}
