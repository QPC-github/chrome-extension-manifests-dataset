{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "防刷刷-迅速了解商品优缺点",
  "short_name": "防刷刷",
  "description": "挑选吐槽评价（带有缺点描述的评价），过滤水军刷单等产生的可疑评价，迅速了解商品的优缺点，避免上当受骗",
  "version": "2.1.17",
  "browser_action": {
    "default_icon": "images/logo_pic_19.png",
    "default_popup": "popup.html",
    "default_title": "防刷刷-迅速了解商品优缺点"
  },
  "permissions": [
    "storage",
    "http://www.xuanyouwang.com/*",
    "http://commentanalyzer-10047652.file.myqcloud.com/*",
    "*://*.taobao.com/*",
    "*://*.tmall.com/*",
    "*://*.tmall.hk/*",
    "*://*.jd.com/*",
    "*://*.yhd.com/*",
    "*://*.dangdang.com/*",
    "*://*.amazon.cn/*",
    "*://*.gome.com.cn/*",
    "*://*.suning.com/*",
    "*://*.yao.95095.com/*",
    "*://*.liangxinyao.com/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "images/logo_pic_16.png",
    "48": "images/logo_pic_48.png",
    "128": "images/logo_pic_128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "lib/jquery-3.0.0.min.js",
      "js/common.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": false,
      "css": [
        "css/bottomShow.css",
        "css/jquery.jqplot.css"
      ],
      "js": [
        "lib/jquery-3.0.0.min.js",
        "lib/macy.js",
        "lib/qrcode.min.js",
        "js/common.js",
        "js/contentscript.js"
      ],
      "matches": [
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://*.tmall.hk/*",
        "*://*.jd.com/*",
        "*://*.yhd.com/*",
        "*://*.dangdang.com/*",
        "*://*.amazon.cn/*",
        "*://*.gome.com.cn/*",
        "*://*.suning.com/*",
        "*://*.yao.95095.com/*",
        "*://*.liangxinyao.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.gif",
    "images/*.cur",
    "options.html"
  ]
}
