{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Imgur Valentine's Day Replacer",
  "description": "Replaces Valentines day posts from imgur with the money cat...",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "replace valentine with cats"
  },
  "content_scripts": [
    {
      "matches": [
        "*://imgur.com/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "*://imgur.com/*",
    "webRequest",
    "tabs",
    "*://s.imgur.com/*"
  ]
}
