{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Knowably",
  "short_name": "Knowably. The network for learning.",
  "description": "The network for learning. Connect with like-minded people, discover valuable learning resources and organize your knowledge base.",
  "version": "1.6.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "logo64.png",
    "default_title": "Save to Knowably"
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "64": "logo64.png",
    "128": "logo128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    }
  }
}
