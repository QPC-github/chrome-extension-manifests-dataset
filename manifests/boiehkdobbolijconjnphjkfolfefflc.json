{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "0.1.7",
  "minimum_chrome_version": "63",
  "description": "__MSG_appDesc__",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "anidub.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "incognito": "spanning",
  "browser_action": {
    "default_icon": {
      "19": "assets/icons/gray-19.png",
      "38": "assets/icons/gray-38.png"
    },
    "default_popup": "pages/popup.html",
    "default_title": "__MSG_titleOff__"
  },
  "icons": {
    "16": "assets/icons/blue-16.png",
    "32": "assets/icons/blue-32.png",
    "48": "assets/icons/blue-48.png",
    "128": "assets/icons/blue-128.png"
  },
  "default_locale": "ru",
  "permissions": [
    "proxy",
    "tabs",
    "webRequest",
    "*://*.anidub.com/*",
    "*://*.anidub.tv/*",
    "*://*.anidub.me/*",
    "https://newanime.cf/*",
    "webRequestBlocking",
    "notifications"
  ],
  "applications": {
    "gecko": {
      "strict_min_version": "60.0"
    }
  }
}
