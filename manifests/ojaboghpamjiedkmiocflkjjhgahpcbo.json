{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BBW - Big Bad Wolf",
  "short_name": "BBW",
  "description": "Big Bad Wolf is a simple, lightweight Ad-Blocker blocking Ads on most Sri Lankan websites.",
  "version": "1.3",
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://fonts.googleapis.com/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "content_scripts": [
    {
      "css": [
        "/css/block.css"
      ],
      "matches": [
        "http://*.dailymirror.lk/*",
        "https://*.yamu.lk/*",
        "http://*.ft.lk/*",
        "http://*/*"
      ]
    },
    {
      "matches": [
        "http://*.dailymirror.lk/*",
        "http://*.adaderana.lk/*"
      ],
      "css": [
        "/css/reader.css"
      ],
      "js": [
        "/js/reader.js"
      ]
    }
  ]
}
