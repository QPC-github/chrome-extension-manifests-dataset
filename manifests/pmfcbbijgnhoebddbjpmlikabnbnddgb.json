{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reditr - The Best Reddit Client",
  "manifest_version": 2,
  "description": "Desktop application developed for Reddit with an intuitive column design with fast browsing for your endless entertainment needs.",
  "version": "0.3.3.4",
  "icons": {
    "128": "icons/128x128.png",
    "48": "icons/48x48.png",
    "32": "icons/32x32.png",
    "16": "icons/16x16.png"
  },
  "app": {
    "background": {
      "page": "backgroundV2.html"
    }
  },
  "sandbox": {
    "pages": [
      "chromeV2/embedded_ga_host.html"
    ]
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "notifications",
    "<all_urls>",
    "clipboardWrite",
    "webview"
  ]
}
