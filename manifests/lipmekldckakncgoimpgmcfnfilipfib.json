{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cashback Helper",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Helps users to automatically redirect a request to a cashback link",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "settings.png"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "unlimitedStorage"
  ]
}
