{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RenderCan",
  "manifest_version": 2,
  "version": "0.2.8",
  "description": "A simple way to record a canvas. Convert to a movie with something like: `ffmpeg -r 60 -i canvas-%09d.png out.webm`",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "icons": {
    "16": "images/icon-recording-16.png",
    "32": "images/icon-recording-32.png",
    "48": "images/icon-recording-48.png",
    "128": "images/icon-recording-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-default-19.png",
      "38": "images/icon-default-38.png"
    },
    "default_title": "RenderCan"
  },
  "web_accessible_resources": [
    "rendercan.js"
  ]
}
