{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Баланс интернета Uplink.kz",
  "version": "0.2.0",
  "description": "Расширение для абонентов провайдера Кабельные Сети Костаная, отображающее текущий баланс.",
  "icons": {
    "16": "uplink16.png",
    "48": "uplink48.png",
    "128": "uplink128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_badge": "1"
  },
  "content_scripts": [
    {
      "js": [
        "loto17.js"
      ],
      "matches": [
        "http://loto17.uplink.kz/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "http://192.168.1.112/",
    "http://wotom.net/",
    "http://loto17.uplink.kz/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
