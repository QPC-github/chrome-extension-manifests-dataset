{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Glosario Bdmat",
  "description": "Añade un item en el menú contextual al seleccionar un texto",
  "version": "1.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "glosbdmat.js"
    ]
  },
  "icons": {
    "48": "icons/glos48.png",
    "96": "icons/glos96.png"
  },
  "manifest_version": 2
}
