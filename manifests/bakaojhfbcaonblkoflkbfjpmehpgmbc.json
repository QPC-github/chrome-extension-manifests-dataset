{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ServiioTube",
  "version": "1.6",
  "manifest_version": 2,
  "description": "Manage youtube feed subscriptions on serviio directly from youtube",
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "ServiioTube"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/icon.png",
    "images/icon.add.png",
    "images/icon.remove.png",
    "images/icon.refresh.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.youtube.com/channel/*"
      ],
      "js": [
        "scripts/thirdparty/jquery.min.js",
        "scripts/contentscript.js"
      ]
    },
    {
      "matches": [
        "http://www.youtube.com/user/*/videos*"
      ],
      "js": [
        "scripts/thirdparty/jquery.min.js",
        "scripts/contentscript.js"
      ]
    },
    {
      "matches": [
        "http://www.youtube.com/view_all_playlists*"
      ],
      "js": [
        "scripts/thirdparty/jquery.min.js",
        "scripts/contentscript.js"
      ]
    }
  ],
  "permissions": [
    "http://www.youtube.com/*",
    "http://*/",
    "tabs"
  ],
  "background": {
    "scripts": [
      "scripts/thirdparty/json2.js",
      "scripts/thirdparty/jquery.min.js",
      "scripts/serviioApi.js",
      "scripts/thirdparty/fancy-settings/lib/store.js",
      "scripts/background.js"
    ]
  },
  "options_page": "settings.html"
}
