{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Be A Mentor Screen Sharing",
  "author": "beamentor",
  "version": "2.8",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "The is a required extension for those wanting to share screens during tutoring/mentoring sessions.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://beamentor.org/*",
      "https://localhost/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ],
  "browser_action": {
    "default_title": "Be A Mentor Screen Sharing"
  }
}
