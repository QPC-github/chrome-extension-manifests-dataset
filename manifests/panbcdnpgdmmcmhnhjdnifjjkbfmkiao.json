{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Snipster - Crop and Capture anything from web",
  "description": "Easiet way to crop and capture any part of webpage and save it (CRTL+S)",
  "version": "1.4.0",
  "manifest_version": 2,
  "icons": {
    "128": "images/mask_on.png"
  },
  "browser_action": {
    "default_icon": "images/mask_off.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "clipboardRead",
    "tabs",
    "desktopCapture",
    "storage",
    "contextMenus",
    "tabCapture",
    "activeTab",
    "identity",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "styles/*",
    "libs/*",
    "images/*"
  ]
}
