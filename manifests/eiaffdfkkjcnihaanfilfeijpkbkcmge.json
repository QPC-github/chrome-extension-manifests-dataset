{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.5",
  "author": "Дашзэвэгийн Барбаяр / Barbayar Dashzeveg",
  "name": "Мазаалайхан",
  "description": "Монгол-Англи-Монгол Толь Бичиг / Mongolia-English-Mongolia Dictionary",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "libs/jquery-1.11.1.min.js",
      "libs/Snowball.min.js",
      "background.js",
      "dictionary.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "libs/mazaalai-bootstrap.css"
      ],
      "js": [
        "libs/jquery-1.11.1.min.js",
        "injection.js"
      ],
      "all_frames": true
    }
  ]
}
