{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Free and Simple Clipboard - Quick Clip",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Quick Clip is an easy to use Chrome Extension that helps you keep all the links you need to copy and past regularly in one place.",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "scripts": [
      "jquery-3.2.1.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_title": "Quick Clip",
    "default_popup": "popup.html",
    "js": [
      "jquery-3.2.1.min.js",
      "popup.js"
    ]
  }
}
