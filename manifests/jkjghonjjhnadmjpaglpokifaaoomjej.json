{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "__MSG_shortName__",
  "description": "__MSG_description__",
  "version": "1.0.3",
  "default_locale": "en",
  "icons": {
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "lib/moment.min.js",
      "js/settings.js",
      "js/background.js",
      "lib/jquery.min.js"
    ],
    "persistent": false
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "tabs"
  ],
  "optional_permissions": [
    "background"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "38": "img/icon38.png"
    }
  },
  "options_page": "options.html"
}
