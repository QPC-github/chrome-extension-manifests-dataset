{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Portal do Bitcoin",
  "description": "Exibe os índices de preço do Portal do Bitcoin",
  "version": "1.1",
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/logo_16.png",
      "32": "img/logo_32.png",
      "48": "img/logo_48.png",
      "128": "img/logo_128.png"
    }
  },
  "icons": {
    "16": "img/logo_16.png",
    "32": "img/logo_32.png",
    "48": "img/logo_48.png",
    "128": "img/logo_128.png"
  }
}
