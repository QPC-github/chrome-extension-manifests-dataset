{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Conector TopGram",
  "version": "1.9.0",
  "author": "Rasta - Rhafaman | Rha Marketing",
  "description": "Conectar sua conta em nosso sistema agora está muito fácil com nossa extensão!",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "webRequest",
    "unlimitedStorage",
    "notifications",
    "storage",
    "clipboardWrite",
    "webRequestBlocking",
    "*://*.instagram.com/*",
    "*://*.topgram.com.br/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "externally_connectable": {
    "matches": [
      "https://topgram.com.br/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.topgram.com.br/accounts-ext"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/noty/lib/noty.min.js",
        "js/rastabase.js"
      ],
      "css": [
        "css/style.css",
        "js/noty/lib/noty.css",
        "js/noty/lib/themes/sunset.css"
      ],
      "run_at": "document_end",
      "persistent": false
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "manifest_version": 2
}
