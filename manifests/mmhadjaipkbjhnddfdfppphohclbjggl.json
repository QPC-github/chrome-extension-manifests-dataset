{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DFT.BA Link Shortener",
  "short_name": "dft.ba",
  "version": "1.0.0",
  "description": "A quick link shortener that reminds everyone to not forget to be awesome.",
  "permissions": [
    "tabs",
    "http://dft.ba/*/"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon.png",
    "64": "img/icon.png"
  }
}
