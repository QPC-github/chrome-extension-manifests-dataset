{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "default_locale": "en",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Notifications for Instagram",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "idle",
    "notifications",
    "https://instagram.com/*",
    "http://*.instagram.com/*",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "unlimitedStorage",
    "<all_urls>",
    "cookies"
  ],
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
