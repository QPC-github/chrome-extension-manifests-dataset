{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Skurra_",
  "description": "Soyez notifié(e) lorsque Skurra est en ligne sur Twitch. Visualisez l'état du stream à tout moment.",
  "version": "0.3",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "64": "icon.png"
  },
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.min.js",
      "libs.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://cdn.embedly.com; object-src 'self'",
  "permissions": [
    "notifications",
    "tabs",
    "storage"
  ]
}
