{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Comentários não lido - Spectacula",
  "version": "0.2",
  "description": "Navegação pelos comentários não lidos.",
  "permissions": [
    "browsingData",
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Envia um 'toggle-feature' para a extensão"
    }
  }
}
