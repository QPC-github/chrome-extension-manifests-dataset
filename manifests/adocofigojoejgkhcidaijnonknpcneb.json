{
  "background": {
    "persistent": true,
    "scripts": [
      "/content/external/underscore-min.js",
      "/content/external/string.min.js",
      "/content/external/jquery-2.1.1.min.js",
      "/content/search/search-engines.js",
      "/content/chrome/settings.js",
      "/content/common/prefs-sys.js",
      "/content/common/prefs.js",
      "/content/common/conf-sys.js",
      "/content/common/conf.js",
      "/content/common/settings-dev.js",
      "/content/external/md5.min.js",
      "/content/chrome/utils.js",
      "/content/chrome/common.js",
      "/content/common/abtest.js",
      "/content/common/udata.js",
      "/content/chrome/setup.js",
      "/content/common/nt_ptr.js",
      "/content/chrome/lifecycle.js",
      "/content/search/search-redirect.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "/skin/icons/128.png",
      "16": "/skin/icons/16.png",
      "48": "/skin/icons/48.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "/content/newtab.html"
  },
  "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",
  "description": "Essa complemento permite que voce altere facilmente entre os mecanismos de buscas.",
  "icons": {
    "128": "/skin/icons/128.png",
    "16": "/skin/icons/16.png",
    "48": "/skin/icons/48.png"
  },
  "content_scripts": [
    {
      "js": [
        "/content/external/string.min.js",
        "/content/chrome/settings.js",
        "/content/common/prefs-sys.js",
        "/content/external/jquery-2.1.1.min.js",
        "/content/common/prefs.js",
        "/content/common/conf-sys.js",
        "/content/common/conf.js",
        "/content/common/settings-dev.js",
        "/content/external/md5.min.js",
        "/content/chrome/utils.js",
        "/content/external/jquery.slid.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2,
  "minimum_chrome_version": "32",
  "name": "Busca Perfeita",
  "permissions": [
    "<all_urls>",
    "management",
    "storage",
    "cookies",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "contextMenus",
    "bookmarks",
    "topSites"
  ],
  "sandbox": {
    "pages": []
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0.3",
  "web_accessible_resources": [
    "/skin/icons/16.png",
    "skin/external/*",
    "content/external/*",
    "content/common/*"
  ]
}
