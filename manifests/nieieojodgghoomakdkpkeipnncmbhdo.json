{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Download Notify",
  "description": "Alerts the user with a sound once a download has completed.",
  "version": "1.0.12",
  "author": {
    "name": "Quantum Web Solutions",
    "email": "contact@quantumwebsolutions.net",
    "url": "http://www.quantumwebsolutions.net/"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": true
  },
  "permissions": [
    "downloads",
    "downloads.shelf",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon38.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
