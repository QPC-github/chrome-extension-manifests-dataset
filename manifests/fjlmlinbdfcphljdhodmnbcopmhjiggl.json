{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cloudinterpreter Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Cloudinterpreter.",
  "version": "0.2.2",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "ci-logo-16x16.png",
    "48": "ci-logo-48x48.png",
    "128": "ci-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "https://usa.cloudinterpreter.com/*"
    ]
  }
}
