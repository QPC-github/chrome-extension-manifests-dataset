{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Motivational Shopify stats that live in your new tab page.",
  "version": "1.1.1",
  "name": "Hustle Tab for Shopify",
  "short_name": "HustleTab",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "icons": {
    "128": "hustle-icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.hustletab.com/api/auth/account_setup/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "hustle-icon.png"
    },
    "default_title": "Hustle Tab"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "webNavigation",
    "storage",
    "activeTab",
    "https://app.hustletab.com/api/auth/account_setup/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://app.hustletab.com/api/*",
      "*://app.hustletab.com/*"
    ]
  }
}
