{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "UAS ScreenSharing",
  "author": "Arck Interactive",
  "version": "0.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Provides screensharing capabilities for the UAS Connect network",
  "homepage_url": "https://uasconnect.uas.alaska.edu/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://alaska.arckdev.com/*",
      "https://*.arckdev.com/*",
      "https://uasconnect.uas.alaska.edu/*",
      "https://*.alaska.edu/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
