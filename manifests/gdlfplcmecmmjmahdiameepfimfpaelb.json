{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Rastreie-Context",
  "version": "1.0",
  "description": "Adiciona o Rastreie ao Menu para que seja possível ao selecionar um código de rastreio já seja pesquisado no site rastreie.com",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png"
  }
}
