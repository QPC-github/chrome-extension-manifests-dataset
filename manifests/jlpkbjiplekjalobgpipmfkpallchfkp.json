{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TimeBuy",
  "version": "0.2.6",
  "description": "TimeBuy is a price monitoring Internet resource.",
  "icons": {
    "16": "icon16.png",
    "20": "icon20.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "default_locale": "en",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Add price",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
