{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Post to PeopleThatMake",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Share web links with your team directly from your browser.",
  "homepage_url": "https://www.peoplethatmake.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Post link to PeopleThatMake",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab"
  ]
}
