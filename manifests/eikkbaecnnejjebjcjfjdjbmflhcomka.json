{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Czapucha: Automatyczne streszczanie tekstu.",
  "short_name": "Czapucha - Streszczanie tekstu",
  "description": "Wtyczka służy do automatycznego streszczania zaznaczonego tekstu.",
  "version": "1.0.1",
  "icons": {
    "16": "icons/czapucha-logo-S-16.png",
    "32": "icons/czapucha-logo-S-32.png",
    "48": "icons/czapucha-logo-S-48.png",
    "128": "icons/czapucha-logo-S-128.png"
  },
  "browser_action": {
    "default_icon": "icons/czapucha-logo-S-128.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "activeTab",
    "tabs",
    "webNavigation"
  ]
}
