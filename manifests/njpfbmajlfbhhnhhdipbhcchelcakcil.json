{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FreeShopper",
  "description": "Welcome to FreeShopper, where youâ€™ll find a collection of the best deals on some of your favorite products and services!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "FreeShopper"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-3.0.0.js",
        "handler.js",
        "relevancy.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "activeTab",
    "webNavigation",
    "storage",
    "management",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "icon.png",
    "rewards.json"
  ]
}
