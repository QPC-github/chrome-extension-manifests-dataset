{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Forklifts Live",
  "version": "1.4",
  "description": "Integrate your CRM to tomorrow's meeting and let your team prospect the surroundings.",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "*://*.forklifts.news/*",
    "geolocation",
    "background"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/extension-icon-16x16.png",
      "32": "images/extension-icon-32x32.png",
      "48": "images/extension-icon-48x48.png",
      "128": "images/extension-icon-120x120.png"
    }
  },
  "icons": {
    "16": "images/extension-icon-16x16.png",
    "32": "images/extension-icon-32x32.png",
    "48": "images/extension-icon-48x48.png",
    "128": "images/extension-icon-120x120.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com ; object-src 'self'",
  "manifest_version": 2
}
