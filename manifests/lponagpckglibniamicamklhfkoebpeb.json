{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GifHub",
  "version": "1.0.8",
  "description": "Insert GIFs from Giphy.com into GitHub comments",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "bundle.js",
    "extension.css"
  ],
  "permissions": [
    "https://api.giphy.com/v1/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "peristent": false
  }
}
