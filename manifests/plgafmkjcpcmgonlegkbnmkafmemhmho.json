{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Globalization Test Assistant",
  "short_name": "GTA",
  "description": "Right-click context menu to help with G11N testing",
  "version": "1.3",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "extension.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 2,
  "icons": {
    "128": "g11nGTI.png",
    "16": "g11nGTI-16.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
