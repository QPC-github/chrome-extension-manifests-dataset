{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RedditCop",
  "description": "This extension automatically closes all reddit tabs after a specified period of time.",
  "version": "0.1",
  "icons": {
    "16": "img/reddit16.png",
    "48": "img/reddit48.png",
    "128": "img/reddit128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://www.reddit.com/*"
  ],
  "background": {
    "scripts": [
      "jquery-1.11.3.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/reddit16.png",
    "default_popup": "popup.html"
  }
}
