{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Send to reMarkable",
  "version": "1.0",
  "description": "The best way to send content to your reMarkable tablet. Print any website and pick it up immediately on your tablet.",
  "manifest_version": 2,
  "icons": {
    "48": "static/icon48.png",
    "128": "static/icon128.png",
    "256": "static/icon256.png"
  },
  "permissions": [
    "storage",
    "printerProvider",
    "tabs",
    "https://document-storage-production-dot-remarkable-production.appspot.com/",
    "https://my.remarkable.com/",
    "https://storage.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "web_accessible_resources": [
    "static/*",
    "vendor/*"
  ]
}
