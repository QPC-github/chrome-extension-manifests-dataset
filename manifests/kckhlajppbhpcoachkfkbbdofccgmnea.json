{
  "manifest_version": 2,
  "name": "BasketBall Stars - New Tab",
  "short_name": "BasketBall Stars - New Tab",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Basketball Stars new tab extension is made up for fans of Basketball to have HD wallpapers of basketball stars on their New Tab.",
  "version": "1.0",
  "icons": {
    "128": "icons/home128.png",
    "48": "icons/home48.png",
    "16": "icons/home16.png"
  },
  "background": {
    "page": "background.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com/ https://www.google.com https://query.yahooapis.com; object-src 'self'",
  "optional_permissions": [
    "history"
  ],
  "permissions": [
    "tabs",
    "topSites",
    "http://google.com/complete/*"
  ],
  "web_accessible_resources": [
    "css/style.css"
  ]
}
