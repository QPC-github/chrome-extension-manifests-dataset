{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Gifteehub - Share Gift Ideas",
  "short_name": "Gifteehub",
  "description": "Post Gift Ideas from any web. Help others find great gifts",
  "version": "1.0",
  "browser_action": {
    "default_icon": "logo-192x192.png",
    "default_popup": "index.html"
  },
  "devtools_page": "devtools.html",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "https://app.gifteehub.com/create-idea"
  ]
}
