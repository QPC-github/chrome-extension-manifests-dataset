{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SP Link",
  "description": "SP Link is used to store the candidate profile",
  "version": "5.7",
  "browser_action": {
    "default_icon": {
      "48": "icon48.png",
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_title": "SP Link",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "content.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "contextMenus",
    "<all_urls>",
    "https://localhost:8443//*/*",
    "http://localhost:8080//*/*",
    "https://192.168.0.22:8443//*/*",
    "http://192.168.0.22:8080//*/*",
    "https://192.168.0.27:8443//*/*",
    "http://192.168.0.27:8080//*/*",
    "https://192.168.0.21:8443//*/*",
    "http://192.168.0.21:8080//*/*",
    "https://192.168.0.35:8443//*/*",
    "http://192.168.0.35:8080//*/*",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ]
}
