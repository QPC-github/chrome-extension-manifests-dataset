{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TopStop",
  "version": "0.1.1",
  "description": "Califica un sitio web con un pulgar arriba o uno abajo.",
  "author": "Alonso Calle",
  "browser_action": {
    "default_title": "TopStop - Extensi√≥n",
    "default_icon": {
      "19": "popup/img/icon48.png",
      "38": "popup/img/icon48.png"
    },
    "default_popup": "popup/register.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "popup/img/icon16.png",
    "48": "popup/img/icon48.png",
    "128": "popup/img/icon128.png"
  },
  "default_locale": "es",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.firebase.com https://topstop.firebaseio.com https://*.firebaseio.com; object-src 'self'",
  "web_accessible_resources": [
    "popup/img/icon128.png"
  ]
}
