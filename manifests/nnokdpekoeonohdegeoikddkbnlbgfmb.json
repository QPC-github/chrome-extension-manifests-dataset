{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SAMLPeek",
  "description": "Decodes SAML Requests and Responses",
  "version": "0.0.0.1",
  "icons": {
    "16": "icon.16.png",
    "48": "icon.48.png",
    "128": "icon.128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon.19.png",
      "38": "icon.38.png"
    },
    "default_title": "SAMLPeek",
    "default_popup": "samlpeek.html"
  },
  "background": {
    "scripts": [
      "samlpeek.background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "webRequest",
    "*://*/"
  ]
}
