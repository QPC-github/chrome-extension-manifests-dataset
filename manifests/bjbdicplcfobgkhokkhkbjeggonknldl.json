{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/browseraction.png",
    "default_popup": "popup.html",
    "default_title": "Easy Capture"
  },
  "commands": {
    "entire_page_screenshot": {
      "description": "Entire Page Screenshot"
    },
    "visible_screenshot": {
      "description": "visible screenshot"
    }
  },
  "default_locale": "en",
  "description": "Take FULL page or full screen snapshots  or capture a selection. Easily edit, annotate, save and share your screenshots!",
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png"
  },
  "manifest_version": 2,
  "name": "Easy Capture - Take, Edit & Save Screenshots",
  "short_name": "Easy Capture",
  "offline_enabled": true,
  "optional_permissions": [
    "desktopCapture",
    "downloads"
  ],
  "permissions": [
    "activeTab",
    "notifications",
    "webNavigation",
    "tabs",
    "<all_urls>",
    "storage",
    "contextMenus",
    "webRequest"
  ],
  "version": "7.3.1",
  "web_accessible_resources": [
    "/images/*.png",
    "/css/pagestyles.css",
    "/css/dialog.css",
    "/libs/gapi.js",
    "/libs/jquery.js",
    "/js/dialog.js"
  ]
}
