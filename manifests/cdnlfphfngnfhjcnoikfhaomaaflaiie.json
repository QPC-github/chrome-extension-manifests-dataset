{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Universal VideoMaximizer",
  "version": "1.0.12",
  "manifest_version": 2,
  "description": "Zoom, resize, expand or shrink videos on most websites.",
  "homepage_url": "https://chrome.google.com/webstore/support/cdnlfphfngnfhjcnoikfhaomaaflaiie",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Universal VideoMaximizer"
  },
  "background": {
    "scripts": [
      "/src/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "src/inject.css"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
