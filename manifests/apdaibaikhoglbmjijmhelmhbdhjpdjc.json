{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TabGrab",
  "description": "Record high quality videos of browsing tabs, quickly and easily.",
  "version": "1.0.0",
  "author": "Jordan Santell <jordan@jsantell.com>",
  "homepage_url": "https://jsantell.com",
  "icons": {
    "16": "assets/tabgrab_16.png",
    "32": "assets/tabgrab_32.png",
    "48": "assets/tabgrab_48.png",
    "64": "assets/tabgrab_64.png",
    "128": "assets/tabgrab_128.png",
    "256": "assets/tabgrab_256.png"
  },
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
    "downloads"
  ],
  "browser_action": {
    "default_title": "TabGrab"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/options.html"
  },
  "offline_enabled": true,
  "manifest_version": 2
}
