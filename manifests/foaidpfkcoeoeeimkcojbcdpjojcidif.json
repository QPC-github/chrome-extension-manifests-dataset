{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Illy Notifications Monitor",
  "description": "Provides a UI to the notifications api in the Illyriad browser game. This allows you to monitor your accounts from any web page.",
  "version": "0.0.4",
  "icons": {
    "64": "icons/dewt.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "webRequest",
    "https://elgea.illyriad.co.uk/external/notificationsapi/*"
  ],
  "background": {
    "scripts": [
      "library/jquery-3.3.1.min.js",
      "js/apiFuncs.js",
      "js/common.js",
      "inmBackground.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/dewt.png"
    },
    "default_title": "INM"
  }
}
