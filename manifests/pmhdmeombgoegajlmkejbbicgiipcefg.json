{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "Page Lock",
  "name": "Page Lock - Stay On Task",
  "description": "Lock down your browsing session to stay focused!",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icons/icon-off.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "tabs",
    "notifications"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "html/popup.html"
  ],
  "icons": {
    "128": "icons/logo.png"
  }
}
