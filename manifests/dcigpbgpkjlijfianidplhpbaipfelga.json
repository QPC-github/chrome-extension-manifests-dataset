{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CodeForge Note",
  "description": "CodeForge Note",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_popup": "content/popup.html",
    "default_title": "CodeForge 笔记"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "css": [],
      "js": [
        "js/jquery.js",
        "js/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16": "images/icon-16.png"
  },
  "web_accessible_resources": [
    "images/*.png",
    "css/*.css",
    "js/*.js",
    "content/*",
    "bower_components/*"
  ]
}
