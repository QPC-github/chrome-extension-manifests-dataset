{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mail Message Copy",
  "short_name": "Mail Copy",
  "description": "For use with Gmailâ„¢.  Cleanly copy messages to your system clipboard.",
  "version": "0.14",
  "background": {
    "scripts": [
      "message_copy.js"
    ],
    "persistent": false
  },
  "permissions": [
    "clipboardWrite",
    "tabs",
    "https://mail.google.com/",
    "clipboardRead"
  ],
  "browser_action": {
    "default_icon": "Mail Clip 48x48.png"
  },
  "icons": {
    "16": "Mail Clip 16x16.png",
    "48": "Mail Clip 48x48.png",
    "128": "Mail Clip 128x128.png"
  }
}
