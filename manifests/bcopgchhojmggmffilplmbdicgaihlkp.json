{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hycon Lite Client",
  "version": "1.1.2",
  "description": "Hycon Lite Client",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {},
  "permissions": [
    "http://wallet.hycon.io/*",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "hycon16.png",
    "48": "hycon48.png",
    "128": "hycon128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  }
}
