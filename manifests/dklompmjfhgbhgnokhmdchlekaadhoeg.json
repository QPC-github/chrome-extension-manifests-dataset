{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AppInSource Connect",
  "short_name": "AppInSource Connect",
  "description": "AppInSource Connect. For Partners and Friends, Video conferencing and screen sharing.",
  "version": "0.2.1",
  "minimum_chrome_version": "34",
  "icons": {
    "64": "appinsource-connect.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://connect.appinsource.com/*"
    ]
  }
}
