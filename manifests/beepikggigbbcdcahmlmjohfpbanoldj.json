{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "РобоПостинг - лучший инструмент для SMM.",
  "description": "Лучшее приложение для SMM маркетинга",
  "version": "1.2.3",
  "permissions": [
    "activeTab",
    "contextMenus",
    "background",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "/content/img/icons/iconBrowser.png"
  },
  "background": {
    "page": "bg.html"
  },
  "content_scripts": [
    {
      "css": [],
      "js": [
        "js/jquery.min.js",
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    "popup_body.html"
  ],
  "icons": {
    "16": "/content/img/icons/icon16.png",
    "48": "/content/img/icons/icon48.png",
    "128": "/content/img/icons/icon128.png"
  }
}
