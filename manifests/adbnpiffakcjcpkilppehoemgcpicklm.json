{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Heidi",
  "description": "Heidi - Не пропускай SMS и звонки, когда ты у монитора",
  "version": "0.15",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "background",
    "notifications",
    "http://heidi.im/*",
    "cookies"
  ],
  "icons": {
    "16": "img/chrome_ico_16.png",
    "48": "img/chrome_ico_48.png",
    "128": "img/chrome_ico_128.png"
  },
  "browser_action": {
    "default_title": "Heidi",
    "default_icon": "img/chrome_ico_default.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://heidi.im/*"
      ],
      "js": [
        "js/libs/jquery-2.0.3.min.js",
        "js/libs/jquery.atmosphere.js",
        "js/libs/util.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/libs/jquery-2.0.3.min.js",
      "js/libs/jquery.atmosphere.js",
      "js/libs/util.js",
      "js/api.js",
      "js/chrome_background.js"
    ]
  }
}
