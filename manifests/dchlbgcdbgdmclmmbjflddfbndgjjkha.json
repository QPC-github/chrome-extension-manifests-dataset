{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bookmarkz: A simple bookmark management tool",
  "short_name": "Bookmarkz",
  "version": "0.1.0",
  "description": "Google Chrome extension for Bookmarkz app.",
  "icons": {
    "128": "Icons/Icon-128.png",
    "48": "Icons/Icon-48.png",
    "16": "Icons/Icon-16.png"
  },
  "author": "Yuxuan Deng",
  "browser_action": {
    "default_icon": {
      "19": "Icons/Chrome-toolbar-icon.png",
      "38": "Icons/Chrome-toolbar-icon@2x.png"
    },
    "default_title": "Add to Bookmarkz"
  },
  "background": {
    "scripts": [
      "js/jquery-2.1.4.min.js",
      "js/base64.js",
      "js/common.js",
      "js/neaten.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://localhost/"
  ]
}
