{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HSLAColorPicker",
  "description": "A super simple, interactive HSLA (HUE, SATURATION, LIGHT and ALPHA) color picker",
  "version": "1",
  "author": "Kashif",
  "browser_action": {
    "default_icon": "tab-icon.png",
    "default_title": "HSLA color picker",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "activeTab"
  ]
}
