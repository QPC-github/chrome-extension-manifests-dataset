{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MageTools: DevTools Reimagined",
  "short_name": "MageTools",
  "version": "1.0.9",
  "manifest_version": 2,
  "description": "A faster, easier way to check and test CSS.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
