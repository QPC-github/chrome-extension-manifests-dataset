{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Rabb.it with Twitch Emotes",
  "description": "Adds 500+ Twitch/BTTV/FFZ emotes to Rabb.it! (Chrome)",
  "manifest_version": 2,
  "version": "0.1.8",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "*://www.rabb.it/*",
    "*://*.lacari.tv/*",
    "activeTab"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon_128.png",
      "48": "img/icon_48.png",
      "16": "img/icon_16.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.rabb.it/*"
      ],
      "js": [
        "js/script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
