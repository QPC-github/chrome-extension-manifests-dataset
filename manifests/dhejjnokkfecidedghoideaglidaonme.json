{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bugzilla Search",
  "description": "Search Bugzilla using Chrome Context Menu",
  "version": "1.1",
  "minimum_chrome_version": "20",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "images/bugzilla_16.png",
    "48": "images/bugzilla_48.png",
    "128": "images/bugzilla_128.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html"
}
