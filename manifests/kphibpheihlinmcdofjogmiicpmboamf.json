{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Blau's dictionary",
  "version": "1.0.8",
  "description": "Synonames etc.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Blau's Dictionary",
    "default_icon": {
      "16": "images/dic_icon_16.png",
      "32": "images/dic_icon_32.png",
      "48": "images/dic_icon_48.png",
      "128": "images/dic_icon_128.png"
    }
  },
  "icons": {
    "16": "images/dic_icon_16.png",
    "32": "images/dic_icon_32.png",
    "48": "images/dic_icon_48.png",
    "128": "images/dic_icon_128.png"
  },
  "manifest_version": 2
}
