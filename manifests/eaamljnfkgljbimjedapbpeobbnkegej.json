{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Trova Desktop Streamer For Flocareer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Trova.",
  "version": "1.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.flocareer.com/*"
    ]
  }
}
