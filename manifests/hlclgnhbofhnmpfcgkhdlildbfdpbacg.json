{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Local Certificates Interface",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Lets webpages sign XML files using digital signature you choose.",
  "icons": {
    "128": "icon-128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://dsc.microvistatech.com/main.aspx"
    ]
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://dsc.microvistatech.com/main.aspx",
    "nativeMessaging"
  ]
}
