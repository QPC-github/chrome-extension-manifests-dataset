{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Botón Buscalibre - Traemos Productos de EEUU",
  "short_name": "Botón Buscalibre",
  "version": "0.7.1",
  "manifest_version": 2,
  "description": "Comprar en Amazon y Ebay nunca fue tan fácil. Nosotros te traemos lo que quieras y nos encargamos de todo!",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "omnibox": {
    "keyword": "Cotizador Buscalibre"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "analytics.js"
    ]
  },
  "permissions": [
    "http://*.buscalibre.com/",
    "http://*.buscalibre.com.mx/",
    "http://*.amazon.com/",
    "http://*.amazon.es/",
    "http://*.amazon.co.uk/",
    "http://*.amazon.de/",
    "http://*.amazon.co.jp/",
    "http://*.ebay.es/",
    "http://*.ebay.com/",
    "http://*.ebay.co.uk/",
    "http://*.ebay.de/",
    "http://*.ebay.co.jp/",
    "http://*.ikea.com/",
    "http://*.toysrus.com/",
    "http://*.carters.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery18.js",
        "content.js",
        "lightbox.js"
      ],
      "run_at": "document_end",
      "css": [
        "style.css"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' chrome-extension://colmcabachdhhfliafaohakoonlmjlpo/analytics.js; object-src 'self'"
}
