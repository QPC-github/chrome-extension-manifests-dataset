{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "XKCD News Substitutions",
  "description": "Make reading news online more fun. Based on the XKCD comic http://xkcd.com/1288/",
  "version": "0.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make the news more interesting",
    "default_icon": "xkcd.png"
  },
  "manifest_version": 2,
  "author": "John Foushee <john.foushee@gmail.com>"
}
