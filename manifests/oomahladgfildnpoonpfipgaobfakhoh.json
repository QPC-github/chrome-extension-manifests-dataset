{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Teanglann.ie - An Foclóirí",
  "short_name": "Teanglann",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Add the Teanglann.ie 'An Foclóirí' Irish language translation tool to any website!",
  "background": {
    "scripts": [
      "background.js",
      "context_menu.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Teanglann.ie - An Foclóirí",
    "default_icon": "images/logo_v3.png"
  },
  "icons": {
    "16": "images/logo_v3.png",
    "48": "images/logo_v3.png",
    "128": "images/logo_v3.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
