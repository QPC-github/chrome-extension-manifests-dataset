{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bootstrap Snake",
  "description": "You remember this game.. IT'S SNAKE!! How long can you go?!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/bootstrap_snake_icon.png",
    "default_popup": "popup.html",
    "default_title": "Bootstrap Snake!"
  },
  "icons": {
    "96": "images/96_snake.png"
  },
  "commands": {
    "moveup": {
      "suggested_key": {
        "default": "MacCtrl + Up"
      },
      "description": "Move your snake up!",
      "global": true
    },
    "movedown": {
      "suggested_key": {
        "default": "MacCtrl + Down"
      },
      "description": "Move your snake down!",
      "global": true
    },
    "moveleft": {
      "suggested_key": {
        "default": "MacCtrl + Left"
      },
      "description": "Move your snake left!",
      "global": true
    },
    "moveright": {
      "suggested_key": {
        "default": "MacCtrl + Right"
      },
      "description": "Move your snake right!",
      "global": true
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
