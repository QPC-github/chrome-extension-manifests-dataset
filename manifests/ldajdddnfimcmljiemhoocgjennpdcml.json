{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "IG on Desk",
  "version": "0.82",
  "description": "IG Sharing for Desktop",
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "IG on Desk"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}
