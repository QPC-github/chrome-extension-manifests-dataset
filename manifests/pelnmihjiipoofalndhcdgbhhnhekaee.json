{
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Blockchain Explorer and Blockchain Information"
  },
  "description": "Easy to use Blockchain Explorer extension for chrome users!",
  "manifest_version": 2,
  "name": "Blockchain Explorer",
  "short_name": "BlockInfo",
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "https://*.google.com/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.7"
}
