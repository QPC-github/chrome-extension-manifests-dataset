{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "More Products",
  "description": "Discover related products on any Product Hunt post",
  "manifest_version": 2,
  "version": "0.5",
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.producthunt.com/*"
      ],
      "js": [
        "jquery.js",
        "ph.js"
      ],
      "css": [
        "ph.css"
      ]
    }
  ],
  "permissions": [
    "http://www.producthunt.com/*",
    "http://ph.mdg.io/"
  ]
}
