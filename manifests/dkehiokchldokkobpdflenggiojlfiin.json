{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lawless screensharing",
  "description": "Screensharing utility for lawless.cloud",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://lawless.cloud/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://lawless.cloud/*"
    ]
  }
}
