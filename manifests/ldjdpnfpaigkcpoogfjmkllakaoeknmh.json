{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reddit Remover",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Quickly close all your reddit tabs. Press Alt+Shift+R to close them.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "close-all-reddit": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Close all reddit tabs"
    }
  }
}
