{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "browser_action": {
    "default_icon": "hirokona_logo.png",
    "default_title": "Just Copy URL"
  },
  "name": "Just Copy URL",
  "short_name": "JustCopyURL",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "閲覧中のページのtitleとURLを即座にクリップボードにコピーする。ただそれだけのエクステンション。",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "48": "hirokona_logo.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "copyURL.js"
    ],
    "persistent": false
  }
}
