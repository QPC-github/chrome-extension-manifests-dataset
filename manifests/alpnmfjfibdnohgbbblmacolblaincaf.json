{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ilsinonimo.com",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Ricerca sinonimi italiani.",
  "icons": {
    "19": "icona_19.png",
    "64": "icona_64.png",
    "128": "icona_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "Ilsinonimo.com",
    "default_icon": "icona_19.png",
    "default_popup": "popup.html"
  }
}
