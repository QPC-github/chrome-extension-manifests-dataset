{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lightshot downloader",
  "description": "This extension allows you to open Lightshot screenshots via direct url",
  "version": "1.11",
  "icons": {
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Works only on prnt.sc"
  },
  "permissions": [
    "https://prnt.sc/*",
    "declarativeContent"
  ]
}
