{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Binge-er",
  "description": "Automatically plays next episode",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "netflix.jpg"
  },
  "manifest_version": 2
}
