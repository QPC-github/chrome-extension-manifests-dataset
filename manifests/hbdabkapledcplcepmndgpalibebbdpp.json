{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Prega Ogni Giorno",
  "short_name": "Pregaognigiorno",
  "description": "Risorse online per ascoltare e pregare",
  "version": "0.9",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+P",
        "linux": "Ctrl+Shift+P",
        "windows": "Alt+P",
        "mac": "Alt+P"
      }
    }
  },
  "browser_action": {
    "default_icon": "img/48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
