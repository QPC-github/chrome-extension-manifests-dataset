{
  "background": {
    "page": "bg.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "stars.js"
      ],
      "matches": [
        "*://*.twitter.com/*"
      ]
    }
  ],
  "description": "Remember The Fallen. Replaces Hearts for Poppies on Twitter",
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "name": "Remember on Twitter",
  "permissions": [
    "tabs",
    "*://www.twitter.com/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.7",
  "web_accessible_resources": [
    "assets/*"
  ]
}
