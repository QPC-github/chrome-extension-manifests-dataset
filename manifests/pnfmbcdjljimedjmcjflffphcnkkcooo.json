{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Flocker",
  "version": "1.0",
  "description": "Block user and page",
  "permissions": [
    "storage",
    "notifications",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "fb.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "run.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/bl16.png",
    "32": "images/bl32.png",
    "48": "images/bl48.png",
    "128": "images/bl128.png"
  },
  "manifest_version": 2
}
