{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Rxnless Facebook",
  "version": "0.1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'; ",
  "description": "Let's make your Facebook feed reaction-less, influense-less? Be in the control seat!",
  "icons": {
    "24": "heart-24.png",
    "48": "heart-48.png",
    "128": "heart-128.png"
  },
  "browser_action": {
    "default_icon": {
      "24": "heart-24.png",
      "48": "heart-48.png",
      "128": "heart-128.png"
    },
    "default_title": "Rxnless Facebook",
    "badge": "on"
  },
  "content_scripts": [
    {
      "js": [
        "jquery-2.1.1.min.js",
        "rxn_cleaner.js"
      ],
      "matches": [
        "*://www.facebook.com/?*",
        "*://www.facebook.com/"
      ],
      "run_at": "document_end"
    }
  ]
}
