{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ReNotes",
  "version": "0.2",
  "description": "Simple notes and remember their tasks ...",
  "author": "Augusto SÃ©rgio R Paiva",
  "background": {
    "scripts": [
      "scripts/notify.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/ext.css"
      ],
      "js": [
        "plugins/jquery-ui/jquery-ui.js",
        "plugins/jquery-ui/jquery-ui.min.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "icons": {
    "64": "icons/popup.png"
  }
}
