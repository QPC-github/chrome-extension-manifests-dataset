{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Twitter Favorites Extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "One-click access to the tweets you've added as favorites, from anywhere on Twitter.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "https://*.twitter.com/",
    "https://twitter.com/"
  ]
}
