{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bitly | Powerful Short Links",
  "description": "Create short, customized, powerful links from any page and share them with the world.",
  "version": "3.0.11",
  "manifest_version": 2,
  "minimum_chrome_version": "42.0.0.0",
  "background": {
    "persistent": false,
    "scripts": [
      "extension.js"
    ]
  },
  "browser_action": {
    "default_title": "bitly",
    "default_icon": "icon19.png"
  },
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "contextMenus",
    "https://api-ssl.bitly.com/"
  ],
  "web_accessible_resources": [
    "app.html",
    "src/app.js",
    "src/closeExtension.js",
    "Bitly.eot",
    "Bitly.svg",
    "Bitly.ttf",
    "Bitly.woff",
    "ProximaNova-Regular.otf",
    "ProximaNova-Semibold.otf"
  ]
}
