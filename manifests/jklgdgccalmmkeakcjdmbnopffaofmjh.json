{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "IcyPrice Price Tracker",
  "version": "1.0.3",
  "description": "View price history and track price changes for Amazon products, with free sales rank data!",
  "author": "icyprice.com",
  "homepage_url": "https://www.icyprice.com",
  "icons": {
    "16": "icons/icyprice-16.png",
    "32": "icons/icyprice-32.png",
    "48": "icons/icyprice-48.png",
    "128": "icons/icyprice-128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icyprice-16.png",
      "32": "icons/icyprice-32.png",
      "48": "icons/icyprice-48.png"
    },
    "default_title": "IcyPrice",
    "default_popup": "popup/chart.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.amzn.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.cn/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.jp/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.nl/*",
    "*://*.icyprice.com/*"
  ]
}
