{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Открытые вкладки - Chrome",
  "description": "Многофункциональное управление текущими вкладками",
  "version": "1.1.0",
  "minimum_chrome_version": "46.0.0.0",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "webNavigation",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "img/48.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
