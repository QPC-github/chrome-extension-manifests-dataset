{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FrequencyBot",
  "version": "0.0.4",
  "description": "Create MIDI files with random notes from a chosen scale.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "options_page": "src/html/browser_action.html",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    },
    "default_title": "FrequencyBot"
  },
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "web_accessible_resources": [
    "src/html/*.html",
    "src/css/*.css",
    "src/js/*.js"
  ]
}
