{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Extreme Mob Wars",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Online Multi-Player Mafia Game",
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "OneSignal.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "games-icon.png",
    "default_title": "Online Multi-Player Mafia Game",
    "default_popup": "extension.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "icons": {
    "128": "games-icon.png"
  }
}
