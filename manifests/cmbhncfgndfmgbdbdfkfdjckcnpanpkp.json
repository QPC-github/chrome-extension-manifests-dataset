{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tarsius Screensharing",
  "short_name": "Tarsius screensharing",
  "description": "This is the Tarsius extension utility for screensharing support",
  "version": "0.1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
