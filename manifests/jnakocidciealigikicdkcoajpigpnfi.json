{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mirror ninja",
  "version": "1.3",
  "description": "/r/eddit mirroring",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "page_action": {
    "default_icon": "mirror.png",
    "default_title": "mirror"
  },
  "permissions": [
    "tabs",
    "http://www.reddit.com/r/*/comments/*",
    "https://www.reddit.com/r/*/comments/*"
  ],
  "manifest_version": 2
}
