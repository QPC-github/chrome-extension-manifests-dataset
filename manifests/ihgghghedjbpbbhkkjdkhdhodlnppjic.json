{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Stride Meetings",
  "description": "A simple extension that allows you to schedule Stride Meetings and stream your desktop into Stride.",
  "version": "0.2.7.6",
  "minimum_chrome_version": "34",
  "icons": {
    "128": "stride-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture",
    "https://calendar.google.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://stride.video/*",
      "*://*.stride.video/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://calendar.google.com/calendar/*",
        "https://outlook.live.com/owa/*"
      ],
      "js": [
        "jquery.js",
        "RandomUtil.js",
        "RoomnameGenerator.js",
        "meet-calendar.js"
      ],
      "css": [
        "/css/all.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "stride-logo-128x128.png",
    "stride-logo-white-48x48.png",
    "stride-logo-blue.svg",
    "stride-logo-grey.svg"
  ],
  "browser_action": {
    "default_title": "Create Stride Meetings",
    "default_popup": "popup.html"
  }
}
