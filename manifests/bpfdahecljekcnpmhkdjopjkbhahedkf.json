{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Video Screen sharing",
  "description": "An extension to allow you to enable Video screen sharing.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://onvc.onwardsmg.net/*",
      "*://nvtest.onwardsmg.net/*",
      "*://nvvc.onwardsmg.net/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
