{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GooNow - Voice Search",
  "description": "An extension that lets you start a Google Voice Search in any website",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "version": "1.4",
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Google Voice Search"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "commands": {
    "voice-search": {
      "suggested_key": {
        "default": "Ctrl + M"
      },
      "description": "GooNow Voice Search"
    }
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "clickator.js"
  ]
}
