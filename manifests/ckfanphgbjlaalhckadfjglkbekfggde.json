{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Wishcan Bookmarklet",
  "description": "This extension adds bookmarks of destinations in your Wishcan account.",
  "version": "1.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Add this destination to Wishcan bookmarks."
  },
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "https://*.wishcan.com/*",
    "http://*.wishcan.com/*",
    "https://wishcan.com/*",
    "http://wishcan.com/*"
  ]
}
