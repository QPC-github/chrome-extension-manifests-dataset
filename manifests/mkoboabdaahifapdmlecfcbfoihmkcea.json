{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Amazopen - Price Tracker for Amazon",
  "version": "1.7",
  "manifest_version": 2,
  "description": "Check the price history and product rating of any Amazon product with just one-click. Easy to use and completely FREE!",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "logo.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
