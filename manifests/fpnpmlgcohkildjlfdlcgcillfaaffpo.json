{
  "version": "1.0",
  "version_name": "1",
  "description": "Reduce Google Chromeâ€™s RAM Usage automatically. Unload your unused tabs",
  "name": "Reduce RAM Usage",
  "short_name": "Reduce RAM Usage",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' 'unsafe-eval';object-src 'self'",
  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "incognito": "split",
  "background": {
    "scripts": [
      "js/common.js",
      "js/analytics.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "icons/32.png"
  },
  "icons": {
    "128": "icons/128.png",
    "32": "icons/32.png"
  },
  "web_accessible_resources": [
    "icons/32.png"
  ],
  "manifest_version": 2
}
