{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VK PostLimits",
  "version": "1.7.1",
  "description": "Покажет количество оставшихся и использованных постов групп ВК",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_title": "VK PostLimits",
    "default_popup": "popup.html"
  }
}
