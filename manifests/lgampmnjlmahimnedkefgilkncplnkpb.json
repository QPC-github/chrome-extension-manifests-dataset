{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Snip It",
  "version": "1",
  "manifest_version": 2,
  "description": "A tiny tool for programmers to save code snippits and access it conveniently!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],
  "offline_enabled": true,
  "browser_action": {
    "name": " ",
    "default_icon": "icon.png",
    "default_title": "Snip It",
    "default_popup": "snippit_saver.html"
  }
}
