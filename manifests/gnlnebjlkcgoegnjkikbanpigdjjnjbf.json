{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Fidiomeet Room Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for FidioMeet",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.4",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Chrome Extension to allow screen sharing in Fidiomeet Meetings.",
  "externally_connectable": {
    "matches": [
      "*://*.fidiomeet.com/*"
    ]
  },
  "icons": {
    "128": "sabhe_icon_128.png",
    "16": "sabhe_icon_16.png",
    "48": "sabhe_icon_48.png"
  },
  "browser_action": {
    "default_icon": "sabhe_icon_16.png"
  }
}
