{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SmartTabSwitch",
  "short_name": "SmartTabSwitch",
  "version": "1.0.1",
  "description": "Improve Ctrl+Tab behavior to seek through tabs in the history.",
  "permissions": [],
  "icons": {},
  "author": "Ofek Gila",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "general.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "undo-tabs": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Switch Tabs"
    },
    "redo-tabs": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Switch Tabs Redo"
    }
  }
}
