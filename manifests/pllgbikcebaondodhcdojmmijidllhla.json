{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Toonbook Buddy",
  "description": "A helpful Chrome extension for Toonbook users.",
  "version": "1.7",
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Toonbook Buddy",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.toonbook.me/*",
        "http://www.toonbook.me/*"
      ],
      "js": [
        "static/js/jquery.js",
        "static/js/sweetalert.min.js",
        "static/js/arrive.min.js",
        "static/js/EventEmitter.js",
        "content_script.js"
      ],
      "css": [
        "static/css/sweetalert.css",
        "static/css/toonbook_buddy.css"
      ]
    }
  ],
  "permissions": [
    "http://*.toonbook.me/*",
    "http://media.toonbook.me/*",
    "notifications",
    "tabs"
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "static/js/jquery.js",
      "shared.js",
      "toonbookbuddy.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "icon16.png",
    "static/img/bat16.ico",
    "static/img/chinesefood16.png",
    "static/img/cat16.png",
    "static/img/snowflake16.png",
    "static/img/heart16.ico",
    "static/img/xmas_logo.png",
    "static/img/catpaw16.png",
    "static/img/bowser16.png",
    "static/img/block16.png",
    "static/img/paw16.png",
    "static/img/cards16.png",
    "static/img/thing16.png",
    "static/img/procat16.gif"
  ]
}
