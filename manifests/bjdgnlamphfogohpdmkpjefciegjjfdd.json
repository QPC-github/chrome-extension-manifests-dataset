{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "hvr",
  "version": "3.5.4",
  "manifest_version": 2,
  "description": "Comment on websites like sticky notes on the web for friends to see!",
  "icons": {
    "16": "images/icon16.png",
    "19": "images/icon19.png",
    "38": "images/icon38.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "hvr",
    "default_icon": "images/38-inactive.png"
  },
  "permissions": [
    "background",
    "contextMenus",
    "management",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "web_accessible_resources": [
    "fonts/*.*",
    "images/*.*"
  ],
  "externally_connectable": {
    "matches": [
      "https://prod.hvr.world/*"
    ]
  }
}
