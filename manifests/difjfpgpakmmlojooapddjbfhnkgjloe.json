{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "4pda QMS 2.0",
  "description": "Check your QMS messages",
  "version": "1.2.1",
  "browser_action": {
    "default_icon": "4pda.ico",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "http://4pda.ru/",
    "http://*.4pda.ru/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
