{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Oplao weather",
  "short_name": "Oplao.com",
  "description": "Accurate weather forecast. Local to Global.",
  "version": "1.14",
  "default_locale": "en",
  "permissions": [
    "geolocation"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "OplaoChrome.html"
  },
  "background": {
    "scripts": [
      "oplaochromebackground/oplaochromebackground.nocache.js"
    ]
  }
}
