{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "NetFortris",
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_popup": "index.html",
    "default_title": "NetFortris for Office 365"
  },
  "manifest_version": 2,
  "name": "NetFortris Comm-unitY for Office 365",
  "short_name": "NFCU App",
  "version": "1.02",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "description": "Integrate your NetFortris Comm-unitY phone platform with Microsoft Office 365â„¢.",
  "web_accessible_resources": [
    "phone.svg",
    "phone-icon.png",
    "background.js"
  ],
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "http://localhost/*",
    "http://localhost:9900/*",
    "https://*.fonality.com/",
    "https://*.netfortris.com/",
    "https://*.office.com/",
    "https://*.office365.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.office.com/*",
        "https://*.office365.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
