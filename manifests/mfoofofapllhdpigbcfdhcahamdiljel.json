{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Spotlight App",
  "description": "Extens√£o para enriquecer documentos do AVA",
  "version": "0.57",
  "icons": {
    "64": "img/icon-64.png",
    "256": "img/icon-256.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "downloads",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ufpel.edu.br/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/nouislider.min.js",
        "js/bootstrap.min.js",
        "js/ripples.min.js",
        "js/material.min.js",
        "js/pdf.js",
        "js/pdf.worker.js",
        "js/popup.js",
        "js/send_links.js"
      ],
      "css": [
        "css/bootstrap.min.css",
        "css/material.min.css",
        "css/ripples.min.css",
        "css/popup.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "img/icon-64.png",
      "256": "img/icon-256.png"
    },
    "default_popup": "popup.html",
    "default_title": "Spotlight App"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
