{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pipeliner CRM",
  "description": "Pipeliner CRM helps you create records from information you find on the web and then view the CRM data in Gmail.",
  "version": "1.3.4",
  "icons": {
    "16": "/images/icon-logo-16x16.png",
    "48": "/images/icon-logo-48x48.png",
    "128": "/images/icon-logo-128x128.png"
  },
  "browser_action": {
    "default_icon": "/images/icon-logo-48x48.png",
    "default_popup": "/index.html#/clipper/"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "https://mail.google.com/*"
    ]
  },
  "web_accessible_resources": [
    "/index.html",
    "/general.css",
    "/gmail.js",
    "/jquery-1.10.2.min.js",
    "/communication.js",
    "/assets/*",
    "/fonts/*",
    "/images/*",
    "v21/index.html",
    "v21/general.css",
    "v21/gmail.js",
    "v21/jquery-1.10.2.min.js",
    "v21/communication.js",
    "v21/assets/*",
    "v21/fonts/*",
    "v21/images/*"
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "identity",
    "activeTab",
    "unlimitedStorage",
    "storage",
    "https://*.pipelinersales.com/",
    "https://linkedin.com/",
    "https://*.licdn.com/",
    "https://twitter.com/",
    "https://mail.google.com/",
    "https://cdn.jsdelivr.net/"
  ]
}
