{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Do the harlem shake",
  "description": "Make the current page do the harlem shake",
  "author": "Jamie Davies",
  "homepage_url": "http://twitter.com/viralpickaxe",
  "offline_enabled": false,
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Do the harlem shake!",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "manifest_version": 2
}
