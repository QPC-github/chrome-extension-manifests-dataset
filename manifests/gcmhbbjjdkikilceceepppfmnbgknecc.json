{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Catch ISIS",
  "description": "Catch and save website uri that support ISIS",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "img/icon-16.png",
    "default_popup": "popup.html",
    "default_title": "Catch ISIS",
    "persistent": false
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": [
      "lib/jq.js",
      "lib/background.js"
    ],
    "persistent": false
  }
}
