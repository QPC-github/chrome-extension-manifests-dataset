{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hotkeys",
  "description": "A Chrome Extension for quick tab shortcuts",
  "version": "1.0.3",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Hotkeys - Shortcuts for Chrome Tabs",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Period",
        "mac": "Command+Period",
        "linux": "Ctrl+Period"
      }
    }
  }
}
