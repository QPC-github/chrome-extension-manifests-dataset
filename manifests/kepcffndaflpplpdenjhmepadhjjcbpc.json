{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kaleidoscope",
  "description": "A Crowdsourcing QoE Tool for Web",
  "version": "1.0.6",
  "icons": {
    "130": "/img/icon.png"
  },
  "author": "Pengfei Wang",
  "permissions": [
    "file://*",
    "http://*/",
    "https://*/",
    "downloads",
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Kaleidoscope",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "img/*",
    "js/*"
  ]
}
