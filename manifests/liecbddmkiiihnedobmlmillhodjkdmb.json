  "browser_action": {
    "default_icon": {
      "19": "img/extension-logo/logo-19.png",
      "38": "img/extension-logo/logo-38.png"
    },
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "matches": [
        "https://github.com/*/pull/*",
        "https://github.com/*/compare/*",
        "https://github.com/*/issues/*",
        "https://github.com/*/wiki/*"
      ],
      "js": [
        "js/github.js"
      ]
    },
    {
      "matches": [
        "https://*.atlassian.net/wiki/spaces/*"
      ],
      "js": [
        "js/atlassian-confluence.js"
      ]
    },
    {
      "matches": [
        "https://*.jira-dev.com/*",
        "https://*.atlassian.net/*",
        "https://*.atlassian.com/*",
        "https://*.jira.com/*"
      ],
      "js": [
        "js/atlassian-jira.js"
      ]
    },
    {
      "matches": [
        "https://*.atlassian.net/servicedesk/*",
        "https://*.atlassian.com/servicedesk/*"
      ],
      "js": [
        "js/atlassian-jsd.js"
      ]
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "3rd/inboxsdk.js",
        "js/gmail.js"
      ]
    },
    {
      "matches": [
        "https://stage.loom.com/greetings",
        "https://www.loom.com/greetings"
      ],
      "js": [
        "js/greetings.js"
      ]
    },
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://app.intercom.io/*",
        "https://*.intercom.help/*",
        "http://support.loom.com/*",
        "https://support.loom.com/*",
        "https://trello.com/*",
        "https://projects.invisionapp.com/*",
        "https://www.producthunt.com/*",
        "https://www.dropbox.com/*",
        "https://news.ycombinator.com/*",
        "https://docs.google.com/document/*",
        "https://*.force.com/*",
        "https://app.salesforceiq.com/*"
      ],
      "js": [
        "js/link-expand.js"
      ],
      "run_at": "document_idle"
    },
    {
      "all_frames": true,
      "match_about_blank": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/intercom-link-expand-loader.js"
      ]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "chromeos": "Alt+Shift+L",
        "linux": "Alt+Shift+L",
        "mac": "Alt+Shift+L",
        "windows": "Alt+Shift+L"
      }
    },
    "cancel-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+C",
        "linux": "Alt+Shift+C",
        "mac": "Alt+Shift+C",
        "windows": "Alt+Shift+C"
      },
      "description": "Cancel a Recording"
    },
    "toggle-pause-recording": {
      "suggested_key": {
        "chromeos": "Alt+Shift+P",
        "linux": "Alt+Shift+P",
        "mac": "Alt+Shift+P",
        "windows": "Alt+Shift+P"
      },
      "description": "Pause/Resume a Recording"
    }
  },
  "content_security_policy": "script-src 'self' https://www.google.com https://www.gstatic.com https://cdn.segment.com https://cdn.amplitude.com https://connect.facebook.net https://www.google-analytics.com https://widget.intercom.io https://cdn.mxpnl.com https://js.intercomcdn.com https://cdn.ravenjs.com https://assets.customer.io https://d24n15hnbwhuhn.cloudfront.net; object-src 'self'"
}
