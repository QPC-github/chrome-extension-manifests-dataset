{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "content.js",
      "install.js"
    ]
  },
  "browser_action": {
    "default_icon": "icone.png",
    "default_popup": "popup.html",
    "default_title": "Décodex"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://spreadsheets.google.com; object-src 'self'",
  "description": "Avec le Décodex, évaluez en un clin d’oeil si les sites que vous consultez sont fiables.",
  "icons": {
    "16": "icone.png"
  },
  "manifest_version": 2,
  "name": "Decodex",
  "permissions": [
    "declarativeContent",
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "http://www.lemonde.fr/webservice/decodex/updates",
    "http://s1.lemde.fr/mmpub/data/decodex/hoax/hoax_debunks.json",
    "https://asset.lemde.fr/medias/mmpub/data/decodex/hoax/hoax_debunks.json"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.0.1",
  "web_accessible_resources": [
    "icone.png",
    "fonts/FetteEngschrift.woff"
  ]
}
