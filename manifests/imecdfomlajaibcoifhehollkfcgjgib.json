{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nancy",
  "version": "1.4",
  "manifest_version": 2,
  "options_page": "options.html",
  "description": "flexible killfile for Metafilter",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.metafilter.com/*",
        "https://*.metafilter.com/*"
      ],
      "css": [
        "options.css"
      ],
      "js": [
        "Nancy.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "*://*.metafilter.com/*",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "n16.png",
    "48": "n48.png",
    "128": "n128.png"
  }
}
