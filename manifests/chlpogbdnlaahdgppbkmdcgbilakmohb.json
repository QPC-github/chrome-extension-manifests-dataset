{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Infobrothers",
  "description": "Obtenha atualizações de forma rápida sobre novas tecnologias.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "ico_80.fw.png"
  },
  "background": {
    "page": "infobrothers.html",
    "persistent": false
  },
  "permissions": [
    "notifications",
    "http://infobrothers.com.br/",
    "http://infobrothers.com.br/phpExtChrome/php/list_posts.php"
  ],
  "web_accessible_resources": [
    "photo.jpg"
  ]
}
