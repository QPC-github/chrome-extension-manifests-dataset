{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BookTag.io",
  "short_name": "BookTag.io",
  "description": "Save your favorite web sites using a tag bookmarks.",
  "version": "1.0.3",
  "omnibox": {
    "keyword": "booktag.io"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "http://www.booktag.io/",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "main.html"
  }
}
