{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Uppercase Converter",
  "description": "Converts text into uppercase.",
  "version": "1.0",
  "permissions": [
    "clipboardRead"
  ],
  "browser_action": {
    "default_title": "Uppercase Converter",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
