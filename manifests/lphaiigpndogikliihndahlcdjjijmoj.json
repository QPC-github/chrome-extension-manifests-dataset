{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Turkcelestir",
  "description": "Türkçeyi Türkçe harflerle yazmak için!",
  "homepage_url": "http://www.turkcelestir.net/",
  "version": "0.18",
  "manifest_version": 2,
  "permissions": [
    "http://www.turkcelestir.net/",
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "view.js"
      ]
    }
  ]
}
