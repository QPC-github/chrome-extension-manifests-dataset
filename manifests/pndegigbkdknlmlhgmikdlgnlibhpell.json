{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.6.1",
  "default_locale": "ru",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "./shared/icons/16.png",
    "19": "./shared/icons/19.png",
    "38": "./shared/icons/38.png",
    "48": "./shared/icons/48.png",
    "128": "./shared/icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "./shared/icons/16_black.png",
      "19": "./shared/icons/16_black.png"
    },
    "default_popup": "",
    "default_title": "__MSG_extName__"
  },
  "web_accessible_resources": [
    "/shared/vendors/fonts/*.otf",
    "/shared/icons/check.jpg",
    "/shared/icons/danger.jpg",
    "/shared/icons/warning.jpg",
    "/shared/icons/icq.png",
    "/shared/icons/loader.gif",
    "/shared/images/logo.png"
  ],
  "background": {
    "page": "./background/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://olx.ua/*",
        "*://www.olx.ua/*",
        "*://www.olx.com.ua/*",
        "*://olx.com.ua/*"
      ],
      "css": [
        "./shared/vendors/css/font-awesome.min.css",
        "./injections/main.css"
      ],
      "js": [
        "./shared/libs/constants.js",
        "./shared/vendors/md5.js",
        "./shared/libs/utils.js",
        "./injections/main.js"
      ]
    }
  ],
  "options_page": "./options/index.html",
  "permissions": [
    "storage",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "https://loxdefender.com/",
    "http://loxdefender.com/",
    "https://olxdefender.com/",
    "http://olxdefender.com/",
    "*://olx.ua/*",
    "*://www.olx.ua/*",
    "*://www.olx.com.ua/*",
    "*://olx.com.ua/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://loxdefender.com; font-src 'self' https://loxdefender.com; object-src 'self'"
}
