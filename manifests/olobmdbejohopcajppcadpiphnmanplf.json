{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "UAHRate",
  "short_name": "UAHR",
  "description": "UAHRate provides you with latest National Bank of Ukraine foreign exchange rates",
  "version": "1.0",
  "permissions": [
    "https://api.privatbank.ua/"
  ],
  "icons": {
    "16": "./16x16.png",
    "32": "./32x32.png",
    "48": "./48x48.png",
    "96": "./96x96.png",
    "128": "./128x128.png"
  },
  "background": {
    "scripts": [
      "script.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
