{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NMEA Simulator",
  "short_name": "NMEASim",
  "version": "1.4.7",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": false
    }
  },
  "description": "NMEA sentence generator to mimic vessel position, speed & heading; Wind speed & direction; Water temperature and depth.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "minimum_chrome_version": "57",
  "author": "Adrian Panazzolo",
  "permissions": [
    "storage",
    "notifications",
    "serial",
    {
      "socket": [
        "tcp-connect",
        "tcp-listen"
      ]
    }
  ],
  "sockets": {
    "tcpServer": {
      "listen": "*:*"
    },
    "tcp": {
      "connect": "*:*"
    }
  },
  "offline_enabled": true
}
