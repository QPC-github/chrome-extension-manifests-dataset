{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FedLyrics Radio",
  "version": "0.1.4",
  "description": "Non-stop music player / radio Auto-DJ",
  "manifest_version": 2,
  "app": {
    "launch": {
      "local_path": "/launcher.html",
      "width": 30,
      "height": 30,
      "container": "panel"
    },
    "homepage_url": "http://fedlyrics.com/radio/?utm_source=chrome_ext&utm_content=homepage_url"
  },
  "icons": {
    "128": "img/icon_128.png",
    "16": "img/icon_16.png",
    "48": "img/icon_48.png"
  },
  "background": {
    "scripts": [
      "js/lib/jquery-1.7.1.min.js",
      "js/background.min.js"
    ]
  },
  "web_accessible_resources": [
    "img/icon_16.png",
    "app/cs_yt.css"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "options_page": "options.html"
}
