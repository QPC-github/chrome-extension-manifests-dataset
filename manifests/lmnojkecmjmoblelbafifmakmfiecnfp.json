{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch Live Streams",
  "description": "Never miss a live stream of your favorite streamers. Thanks to Twitch Live Streams, always keep an eye on the ones you follow!",
  "version": "1.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Who is streaming!"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "tabs",
    "https://*.twitch.tv/"
  ]
}
