{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Longbox",
  "description": "Your serialized reading companion",
  "version": "1.2",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "icons": {
    "16": "images/logo-16.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "pile.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "24": "images/logo-24.png",
      "32": "images/logo-32.png"
    }
  }
}
