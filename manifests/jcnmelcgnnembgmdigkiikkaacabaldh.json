{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Авиабилеты от LAGID.RU (Авиасоветник)",
  "version": "1.0.2",
  "description": "Выбирайте самый лучший вариант перелета вместе с Авиасоветником от LAGID.RU. А так же рекомендации и история поиска",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_popup": "pages/popup.html"
  },
  "background": {
    "page": "pages/background.html",
    "persistent": false
  },
  "permissions": [
    "identity",
    "cookies",
    "https://*/",
    "http://*/",
    "activeTab",
    "tabs",
    "notifications",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
