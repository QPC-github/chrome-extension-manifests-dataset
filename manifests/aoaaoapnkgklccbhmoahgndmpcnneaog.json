{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_application_title__",
  "short_name": "Donesi Plus",
  "version": "2.0",
  "description": "__MSG_application_description__",
  "homepage_url": "http://webinvade.rs/donesi-plus",
  "icons": {
    "16": "static/icon/icon16.png",
    "48": "static/icon/icon48.png",
    "128": "static/icon/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bin/3rd_party/jquery/jquery.min.js",
      "bin/background.js"
    ]
  },
  "options_ui": {
    "chrome_style": true,
    "page": "bin/options_page/options.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "static/icon/icon16.png",
      "48": "static/icon/icon48.png",
      "128": "static/icon/icon128.png"
    },
    "default_title": "Donesi Plus"
  },
  "permissions": [
    "https://*.donesi.com/*",
    "notifications",
    "storage",
    "background"
  ],
  "web_accessible_resources": [
    "static/icon/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.donesi.com/*thankyou*"
      ],
      "js": [
        "bin/3rd_party/jquery/jquery.min.js",
        "bin/get-data.js"
      ],
      "css": [
        "bin/timer.css"
      ]
    }
  ]
}
