{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bitcoin Ticker Brasil",
  "description": "Veja a cotação em reais do Bitcoin nas principais exchanges brasileiras.",
  "version": "0.3.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "vendor/jquery-3.1.1.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "storage",
    "http://api.bitvalor.com/"
  ]
}
