{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CampaignTrackly: Build UTM Links in Seconds",
  "short_name": "Click to Tag",
  "description": "Fully automated UTM generator, URL builder & link shortener makes your life easy: GA & Bitly integration, campaign dashboard",
  "version": "1.6",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Create campaign"
  },
  "background": {
    "scripts": [
      "context_menu.js",
      "background.js"
    ]
  },
  "icons": {
    "128": "images/icon.png",
    "16": "images/icon.png",
    "32": "images/icon.png",
    "64": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "https://app.campaigntrackly.com/",
    "bookmarks",
    "tabs"
  ]
}
