{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "contentscript.js"
      ],
      "matches": [
        "http://*.polygon.com/*",
        "https://*.polygon.com/*",
        "http://*.metacritic.com/*",
        "https://*.metacritic.com/*",
        "http://*.destructoid.com/*",
        "https://*.destructoid.com/*",
        "http://*.giantbomb.com/*",
        "http://*.giantbomb.com/*",
        "http://*.joystiq.com/*",
        "https://*.joystiq.com/*",
        "http://*.usgamer.net/*",
        "https://*.usgamer.net/*",
        "http://*.eurogamer.net/*",
        "https://*.eurogamer.net/*",
        "http://*.ign.com/*",
        "https://*.ign.com/*",
        "http://*.escapistmagazine.com/*",
        "https://*.escapistmagazine.com/*",
        "http://*.gameinformer.com/*",
        "https://*.gameinformer.com/*",
        "http://*.gamespot.com/*",
        "https://*.gamespot.com/*",
        "http://*.edge-online.com/*",
        "https://*.edge-online.com/*"
      ]
    }
  ],
  "icons": {
    "128": "reviewnomizer128.png",
    "16": "reviewnomizer16.png",
    "48": "reviewnomizer48.png"
  },
  "manifest_version": 2,
  "name": "Reviewnomizer",
  "permissions": [
    "http://*.polygon.com/*",
    "https://*.polygon.com/*",
    "http://*.metacritic.com/*",
