    "https://*.usgamer.net/*",
    "http://*.eurogamer.net/*",
    "https://*.eurogamer.net/*",
    "http://*.ign.com/*",
    "https://*.ign.com/*",
    "http://*.escapistmagazine.com/*",
    "https://*.escapistmagazine.com/*",
    "http://*.gameinformer.com/*",
    "https://*.gameinformer.com/*",
    "http://*.gamespot.com/*",
    "https://*.gamespot.com/*",
