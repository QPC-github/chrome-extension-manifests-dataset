{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Brelzin Utilitários",
  "description": "Utilitários para uma navegação no dia-a-dia.",
  "version": "1.1.2",
  "homepage_url": "http://www.brel.com.br/brelzin/",
  "options_page": "files/options.html",
  "icons": {
    "1": "img/brelzin.png",
    "16": "img/brelzin.png",
    "48": "img/brelzin.png",
    "128": "img/brelzin.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "./js/background.js",
      "./js/funcoes.js",
      "./js/menu.js"
    ]
  },
  "browser_action": {
    "default_title": "Brelzin Utilitários",
    "default_icon": "img/brelzin.png",
    "default_popup": "files/popup.html"
  }
}
