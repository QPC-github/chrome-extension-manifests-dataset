{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cognism",
  "description": "Stay updated on all company events and person details with Cognism",
  "version": "1.0.61",
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": {
      "16": "images/chrome_icon_inactive_16.png",
      "19": "images/chrome_icon_inactive_19.png",
      "24": "images/chrome_icon_inactive_24.png",
      "32": "images/chrome_icon_inactive_32.png",
      "48": "images/chrome_icon_inactive_48.png",
      "64": "images/chrome_icon_inactive_64.png",
      "128": "images/chrome_icon_inactive_128.png",
      "356": "images/chrome_icon_inactive_356.png"
    }
  },
  "icons": {
    "16": "images/chrome_icon_inactive_16.png",
    "19": "images/chrome_icon_inactive_19.png",
    "24": "images/chrome_icon_inactive_24.png",
    "32": "images/chrome_icon_inactive_32.png",
    "48": "images/chrome_icon_inactive_48.png",
    "64": "images/chrome_icon_inactive_64.png",
    "128": "images/chrome_icon_inactive_128.png",
    "356": "images/chrome_icon_inactive_356.png"
  },
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "unlimitedStorage",
    "*://*.cognism.com/*",
    "*://*.salesforce.com/*",
    "*://*.linkedin.com/*",
    "*://*.clearbit.com/*",
    "*://*.hubapi.com/*"
  ],
  "web_accessible_resources": [
    "html/company.html",
    "html/options.html",
    "html/person.html",
    "html/persons.html"
  ],
  "content_security_policy": "script-src 'self' https://*.cognism.com 'unsafe-eval'; object-src 'self'"
}
