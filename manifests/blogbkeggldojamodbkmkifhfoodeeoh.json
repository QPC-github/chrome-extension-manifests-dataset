{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pleb Summoner for streamers",
  "description": "Allows Twitch streamers to notifi their viewers whenever they want.",
  "version": "1.0.1",
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "gcm",
    "storage",
    "notifications",
    "background"
  ],
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "icon-16x16.png",
    "default_popup": "popup.html"
  }
}
