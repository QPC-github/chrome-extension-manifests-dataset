{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RFC Reader",
  "version": "1.0",
  "description": "Simply making RFC and manual pages easier to read.",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://tools.ietf.org/html/*"
      ],
      "css": [
        "style_ietf.css"
      ]
    },
    {
      "matches": [
        "*://man7.org/linux/man-pages/man*/*.html"
      ],
      "css": [
        "style_man.css"
      ]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_16.png",
    "48": "icon_16.png",
    "128": "icon_16.png"
  }
}
