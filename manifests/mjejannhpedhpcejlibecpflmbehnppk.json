{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "TeeHunter T-Shirts"
  },
  "name": "TeeHunter",
  "short_name": "TH Submit",
