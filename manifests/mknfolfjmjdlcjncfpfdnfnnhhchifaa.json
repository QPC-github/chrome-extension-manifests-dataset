{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cogger",
  "version": "1.1",
  "description": "A configurable logger for webrequests",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "webRequest",
    "downloads",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "128": "images/0.png"
    },
    "default_title": "Summary",
    "default_popup": "popup.html"
  }
}
