{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "maxiGramar corrector de català",
  "short_name": "maxiGramar",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Corrector gramatical de català.",
  "icons": {
    "16": "ico_16.png",
    "48": "ico_48.png",
    "128": "ico_128.png"
  },
  "browser_action": {
    "default_title": "maxiGramar",
    "default_icon": "ico_48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/popup.js"
    ]
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.maxigramar.com/*"
  ]
}
