{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lectio tilbagemeldinger",
  "description": "Få notifikationer og highlight når din lærer har skrevet en kommentar på din opgave.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.lectio.dk/lectio/*/OpgaverElev.aspx*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "opgaverScript.js"
      ],
      "all_frames": false
    },
    {
      "matches": [
        "*://www.lectio.dk/lectio*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "general.js"
      ],
      "all_frames": false
    }
  ],
  "manifest_version": 2
}
