{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DebateSynergy.com Timer",
  "description": "Critical times call for critical thinking! Debate timer tracks prep, speech progress and round timeline. https://debatesynergy.com",
  "author": "Alex Gulakov, 2010-2016 CC SA-BY 4.0",
  "version": "3.0.1",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "alwaysOnTopWindows",
    "contextMenus"
  ],
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "icons": {
    "48": "res/dstimer-icon48.png",
    "128": "res/dstimer-icon128.png"
  },
  "commands": {
    "key-showtimer": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Show Debate Timer"
    }
  }
}
