{
  "browser_action": {
    "default_icon": "icone.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Disable retweets on twitter.com",
  "name": "Retweet-Free",
  "icons": {
    "128": "icon-128.png",
    "64": "icon-64.png",
    "16": "icone.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "Retweet-Free.user.js"
      ]
    }
  ],
  "manifest_version": 2,
  "version": "0.1"
}
