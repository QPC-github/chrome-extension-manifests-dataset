{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.2.7",
  "name": "SQLite Manager",
  "description": "manage, edit, manipulate with Math.js or JavaScript, plot and save one or more SQLite databases",
  "offline_enabled": true,
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "*://*/*"
  ],
  "sandbox": {
    "pages": [
      "data/manager/sandbox.html"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "homepage_url": "http://add0n.com/sqlite-manager.html",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
