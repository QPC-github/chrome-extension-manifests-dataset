{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GoodTwitter",
  "version": "2.2",
  "description": "Forces your browser to use old twitter.",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.twitter.com/",
    "browsingData",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "remove-banner.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup/info.html"
  },
  "icons": {
    "128": "128.png"
  }
}
