{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "UKC Forum Tweaks",
  "version": "3.1",
  "description": "Offers options to hide like/dislike buttons and posts from certain users on UKClimbing Forum threads.",
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.ukclimbing.com/forums/*",
        "*://www.ukhillwalking.com/forums/*"
      ],
      "js": [
        "/content_script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
