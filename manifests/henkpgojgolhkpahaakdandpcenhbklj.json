{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MyBetterJourney",
  "description": "MyBetterJourney",
  "version": "2.0.7",
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    },
    "default_title": "MyBetterJourney"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "facebook.bundle.js"
      ],
      "css": [
        "facebook.bundle.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "linkedin.bundle.js"
      ],
      "css": [
        "linkedin.bundle.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "twitter.bundle.js"
      ],
      "css": [
        "twitter.bundle.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "instagram.bundle.js"
      ],
      "css": [
        "instagram.bundle.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "cookies",
    "contextMenus",
    "storage",
    "notifications",
    "webRequest",
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>",
    "http://localhost:4000/",
    "http://localhost.mbj.com/",
    "https://*.mybetterjourney.com/"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost.mbj.com/*",
      "*://*.mybetterjourney.com/*"
    ]
  }
}
