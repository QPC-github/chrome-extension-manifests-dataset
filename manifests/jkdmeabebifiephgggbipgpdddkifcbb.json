{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Time Control",
  "description": "Persist time span preferences across multiple Google searches.",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/calendar16.png",
      "32": "images/calendar32.png"
    },
    "default_title": "Time Control",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "*://*.google.com/*",
    "declarativeContent"
  ],
  "icons": {
    "16": "images/calendar16.png",
    "48": "images/calendar48.png",
    "128": "images/calendar128.png"
  },
  "manifest_version": 2
}
