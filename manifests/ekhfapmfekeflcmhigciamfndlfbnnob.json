{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Scottish Football Forums Topic Notification",
  "version": "0.7",
  "description": "Receive a notification whenever a new topic is created on Scottish Football Forums",
  "icons": {
    "16": "SFF_16.png",
    "48": "SFF_48.png",
    "128": "SFF_128.png"
  },
  "permissions": [
    "notifications",
    "http://forums.scottishfootballforums.co.uk/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "jquery.min.js",
      "SFF.js"
    ]
  },
  "web_accessible_resources": [
    "logo.png"
  ],
  "browser_action": {
    "default_icon": "SFF_19.png",
    "default_popup": "popup.html"
  }
}
