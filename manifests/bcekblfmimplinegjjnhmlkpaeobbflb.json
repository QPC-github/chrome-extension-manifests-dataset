{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weather Badge",
  "version": "1.0.7",
  "description": "Show Current Weather",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "64": "images/icon_64.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "http://api.worldweatheronline.com/*",
    "https://api.worldweatheronline.com/*",
    "http://cdn.worldweatheronline.net/*",
    "https://cdn.worldweatheronline.net/*",
    "geolocation",
    "background"
  ],
  "browser_action": {
    "default_icon": "images/loading.png",
    "default_title": "Weather Now"
  },
  "manifest_version": 2
}
