{
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "name": "YekVC Desktop Sharing Extension",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Desktop sharing for YekVC",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.1",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow desktop sharing in YekVC applications.",
  "externally_connectable": {
    "matches": [
      "*://*.instavc.com/*",
      "*://*.pardisco.ir/*"
    ]
  },
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png"
  },
  "browser_action": {
    "default_icon": "16.png"
  }
}
