{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Weather Today",
  "version": "0.0.4",
  "description": "Check Your Weather Today",
  "icons": {
    "16": "appicons/sunce16x16.png",
    "48": "appicons/sunce48x48.png",
    "128": "appicons/sunce128x128.png"
  },
  "browser_action": {
    "default_icon": "appicons/sunce128x128.png",
    "default_popup": "popup.html",
    "default_title": "Check Weather Today"
  },
  "author": "Weather Junior",
  "background": {
    "persistent": false,
    "scripts": [
      "jquery.min.js",
      "options.js"
    ]
  },
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "geolocation",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "version_name": "0.0.4"
}
