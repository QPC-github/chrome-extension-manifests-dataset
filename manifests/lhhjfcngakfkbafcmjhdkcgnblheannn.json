{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Planning Week Selector - ESC Troyes",
  "short_name": "Week Selector",
  "description": "This extension add a drop-down list to select the week to display in the planning of ESC Troyes.",
  "version": "1.0.2",
  "author": "Thibaud Charrier",
  "icons": {
    "19": "icon19.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://intranet.get-formation.fr/planningV2/*",
        "http://intranet.get-formation.fr/"
      ],
      "js": [
        "planning_week_selector.js"
      ],
      "css": [
        "planning_week_selector.css",
        "options.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Week Selector",
    "default_popup": "options.html"
  }
}
