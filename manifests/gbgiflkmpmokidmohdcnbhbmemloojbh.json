{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fallout 4 Wallpaper New Tab Theme",
  "version": "4.0.4",
  "description": "A tribute to the Fallout franchise with images that theme your new tab with wallpapers from Fallout 4!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Fallout 4 Wallpaper New Tab Theme",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "http://*.brandthunder.com/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
