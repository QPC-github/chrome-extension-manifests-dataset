{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Auto Alt Text",
  "version": "1.0.0.3",
  "description": "Get image captions for all images by right-clicking them",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "content.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "minimum_chrome_version": "6.0.0.0",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  }
}
