{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "5CH STYLE FORMAT",
  "version": "0.4.56",
  "description": "５ちゃんねる（旧２ちゃんねる）のスレッド（記事）ページをすっきり整形＆URL直リンク化、画像・レスのPOP表示等、いろいろ機能を付加します。",
  "options_page": "options.html",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "48": "img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.5ch.net/test/read.*/*/*"
      ],
      "css": [
        "css/reset.css",
        "css/ad_rewrite.css",
        "css/header_rewrite.css",
        "css/style_rewrite.css"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "font/icomoon.woff",
    "img/logo.svg"
  ],
  "permissions": [
    "contextMenus",
    "storage"
  ]
}
