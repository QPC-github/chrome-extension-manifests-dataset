    "128": "icon-128.png",
    "16": "icon-128.png",
    "48": "icon-128.png"
  },
  "manifest_version": 2,
  "name": "Công cụ Đặt hàng của Goodydeli",
  "permissions": [
    "http://*.taobao.com/*",
    "https://*.taobao.com/*",
    "http://*.1688.com/*",
    "https://*.1688.com/*",
    "http://*.tmall.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.hk/*",
    "https://*.tmall.hk/*",
    "storage",
    "tabs",
    "notifications"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "4.1.0",
  "web_accessible_resources": [
    "*"
  ]
}
