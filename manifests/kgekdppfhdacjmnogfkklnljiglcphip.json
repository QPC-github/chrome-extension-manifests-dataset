{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.5",
  "manifest_version": 2,
  "offline_enabled": true,
  "name": "Font Inspector",
  "short_name": "font-inspector",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "web_accessible_resources": [
    "data/content_script/popup.css"
  ],
  "homepage_url": "https://mybrowseraddon.com/font-inspector.html",
  "description": "Click on any HTML element to get the font info in a popup!",
  "browser_action": {
    "default_title": "Font Inspector",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
