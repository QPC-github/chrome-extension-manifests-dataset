{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Week Plan extension",
  "description": "Your todo list accessible straight from your Chrome browser.",
  "version": "1.25",
  "homepage_url": "https://next.weekplan.net",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.htm"
  },
  "icons": {
    "19": "icon19.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' https://next.weekplan.net; object-src 'self' https://next.weekplan.net",
  "permissions": [
    "https://next.weekplan.net/",
    "storage"
  ]
}
