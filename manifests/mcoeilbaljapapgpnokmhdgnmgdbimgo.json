{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kinjamprove Continued",
  "description": "Kinja with threaded replies, enhanced filters, additional comment sorting, user blocking, and other improvements.",
  "version": "0.0.2.16",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "jquery-3.4.1.js",
        "mutation-summary.js",
        "vanilla-picker.js",
        "CommentEditorAPI.js",
        "CommentEncoder.js",
        "XhrCommentTracker.js",
        "kinjamproveUtilities.js",
        "CommentClass.js",
        "CommentDropdown.js",
        "CommentDomCreator.js",
        "kinjamprove.js"
      ],
      "matches": [
        "*://*.kinja.com/*",
        "*://*.avclub.com/*",
        "*://*.jezebel.com/*",
        "*://*.jalopnik.com/*",
        "*://*.gizmodo.com/*",
        "*://*.deadspin.com/*",
        "*://*.kotaku.com/*",
        "*://*.lifehacker.com/*",
        "*://*.theroot.com/*",
        "*://*.splinternews.com/*",
        "*://*.thetakeout.com/*",
        "*://*.clickhole.com/*",
        "*://*.theinventory.com/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; default-src 'self'; img-src 'self' data: https://i.kinja-img.com/; connect-src 'self' https://kinja.com; frame-src 'self' https://kinja.com https://*.youtube.com;",
  "icons": {
    "128": "icons/kinjamproveLogoTransparentBackground.png",
    "16": "icons/kinjamproveLogoTransparentBackground.png",
    "32": "icons/kinjamproveLogoTransparentBackground.png",
    "64": "icons/kinjamproveLogoTransparentBackground.png"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html",
    "open_in_tab": true
  },
  "page_action": {
    "default_icon": {
      "19": "icons/kinjamprove-logo-green-transparent-background-32x32.png",
      "38": "icons/kinjamprove-logo-green-transparent-background-32x32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Kinjamprove"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "*://*.kinja.com/api/*",
    "*://*.avclub.com/api/*",
    "*://*.jezebel.com/api/*",
    "*://*.jalopnik.com/api/*",
    "*://*.gizmodo.com/api/*",
    "*://*.deadspin.com/api/*",
    "*://*.kotaku.com/api/*",
    "*://*.lifehacker.com/api/*",
    "*://*.theroot.com/api/*",
    "*://*.splinternews.com/api/*",
    "*://*.thetakeout.com/api/*",
    "*://*.clickhole.com/api/*",
    "*://*.theinventory.com/api/*"
  ],
  "web_accessible_resources": [
    "icons/*",
    "styles/*"
  ]
}
