{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hoovafy",
  "description": "make cHrome your wHole tHing",
  "version": "1.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "commands": {
    "hoovafy-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Hoovafy the page"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
