{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tripidee Button for Chrome",
  "version": "4.0",
  "description": "This extension allows you to quickly save ideas to your Tripidee trips from anywhere on the web.",
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "author": "Tripidee Corporation",
  "browser_action": {
    "default_icon": "icon-16x16.png",
    "default_title": "Add to Tripidee"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://www.tripidee.com",
  "short_name": "Tripidee Button"
}
