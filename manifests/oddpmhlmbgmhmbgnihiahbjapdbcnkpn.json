{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bestowd",
  "version": "1.1.9",
  "description": "Use the Bestowd extension to create personalized hand curated gift galleries for yourself and for your friends and loved ones!",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "popup.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Bestowd",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://*.bestowd.com/*"
    ]
  },
  "permissions": [
    "tabs",
    "cookies"
  ]
}
