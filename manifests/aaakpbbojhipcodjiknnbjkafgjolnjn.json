{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MyStickies - Sticky notes for the web",
  "manifest_version": 2,
  "version": "1.1.3",
  "description": "Add sticky notes to any web page.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon-38.png",
      "38": "icon-38.png",
      "128": "icon-128.png"
    },
    "default_title": "MyStickies"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "mystickies.css"
      ],
      "js": [
        "mystickies.js",
        "content.js"
      ]
    }
  ]
}
