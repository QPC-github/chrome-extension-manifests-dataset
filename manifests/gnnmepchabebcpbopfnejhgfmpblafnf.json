{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Michail Vasiliev <iamvasiliev143@gmail.com>",
  "version": "0.0.1",
  "name": "FMPLAY URL Getter",
  "description": "FMPLAY URL Getter позволяет получить адрес потока любимой радиостанции. Скопируй его в буфер и вставь в любимый радиоплеер.",
  "icons": {
    "128": "data/icons/active/128.png",
    "16": "data/icons/active/16.png",
    "32": "data/icons/active/32.png",
    "48": "data/icons/active/48.png",
    "64": "data/icons/active/64.png"
  },
  "background": {
    "page": "lib/chrome/background.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/active/16.png",
      "32": "data/icons/active/32.png",
      "48": "data/icons/active/48.png",
      "64": "data/icons/active/64.png"
    },
    "default_popup": "data/popup/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "<all_urls>",
    "webRequest"
  ]
}
