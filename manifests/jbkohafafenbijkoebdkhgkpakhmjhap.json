{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Droos Screen Sharing",
  "author": "Droos, Inc.",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://droos.me/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://droos.me",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://*.droos.me/*",
      "https://*.droos.me/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
