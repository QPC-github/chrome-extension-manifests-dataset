{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QuickClose",
  "version": "0.0.1",
  "description": "Quickly close pre-selected tabs",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "closetabs.js"
    ]
  },
  "commands": {
    "close-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "close all selected tabs",
      "global": "true"
    }
  },
  "icons": {
    "16": "logo16-v2.png",
    "48": "logo48-v2.png",
    "128": "logo128-v2.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
