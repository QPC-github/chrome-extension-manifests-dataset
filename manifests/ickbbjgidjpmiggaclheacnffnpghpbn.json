{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Snoopie",
  "short_name": "Snoopie",
  "description": "Snoopie lets you know when you're being recorded by popular tracking services.",
  "version": "0.2.0",
  "author": "David Byttow (d@simplethingsllc.com)",
  "homepage_url": "https://github.com/davidbyttow/snooptracker",
  "icons": {
    "16": "dog-16.png",
    "48": "dog-48.png",
    "128": "dog-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Nothing detected yet",
    "default_icon": "dog-16.png"
  }
}
