{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.2.0",
  "name": "leftbook buddy",
  "short_name": "leftbook",
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icon-32.png",
      "64": "icon-64.png",
      "128": "icon-128.png"
    },
    "default_popup": "action.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.facebook.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "leftbook.user.js"
  ]
}
