{
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/iFormatTool.min.js",
        "js/content.min.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "本工具用于查看js、json、css等源码时对其进行高亮、格式化、美化、压缩等操作",
  "homepage_url": "http://www.yuxiaoxi.com/2014-08-26-iformattool.html",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "iFormatTool",
  "offline_enabled": false,
  "options_page": "options.html",
  "permissions": [
    "webRequest",
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage"
  ],
  "version": "1.1",
  "web_accessible_resources": [
    "css/iFormatTool.min.css",
    "images/icon.png",
    "images/btn_bg.png"
  ]
}
