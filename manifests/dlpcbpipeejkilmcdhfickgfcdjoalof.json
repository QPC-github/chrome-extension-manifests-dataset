{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "IBM Faces",
  "version": "0.1.8",
  "manifest_version": 2,
  "description": "Chrome extension to lookup any IBMer at anytime from anywhere",
  "homepage_url": "http://faces.tap.ibm.com/#",
  "content_security_policy": "script-src 'self' https://faces.tap.ibm.com https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icons/smileylogowhite16.png",
    "48": "icons/smileylogowhite48.png",
    "128": "icons/smileylogowhite128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/smileylogowhite48.png",
    "default_title": "Faces For IBMers",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ]
}
