{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Manga reader",
  "description": "Show all images from local folder in single page. スクロールだけでマンガを読む",
  "version": "1.0.4",
  "permissions": [
    "storage",
    "bookmarks"
  ],
  "web_accessible_resources": [
    "images/*",
    "script/*",
    "fonts/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "48": "images/63x63.png"
  },
  "browser_action": {
    "default_title": "Click to create bookmark"
  },
  "manifest_version": 2
}
