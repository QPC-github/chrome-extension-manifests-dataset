{
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "default_locale": "en_US",
  "version": "2.0.1",
  "description": "__MSG_desc__",
  "browser_action": {
    "default_title": "Video Downloader professional",
    "default_popup": "pages/popup.html",
    "default_icon": "images/icon19c.png"
  },
  "background": {
    "scripts": [
      "pages/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "libs/EBML.js",
        "pages/content.js"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "downloads"
  ],
  "icons": {
    "128": "images/128.png",
    "48": "images/48.png",
    "16": "images/16.png"
  },
  "web_accessible_resources": [
    "*"
  ],
  "minimum_chrome_version": "60",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com https://pe.labelinganalytics.com; object-src 'self'"
}
