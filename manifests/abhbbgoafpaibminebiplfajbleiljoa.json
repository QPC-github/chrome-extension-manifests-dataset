{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Поиск сообществ ВКонтакте",
  "version": "6.0",
  "description": "Ищет сообщества ВКонтакте с открытой стеной по заданным ключевым словам",
  "permissions": [
    "tabs",
    "http://vk.com/*",
    "https://vk.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://vk.com/*vkso_enabled=true*",
        "https://vk.com/*vkso_enabled=true*"
      ],
      "js": [
        "searchopened.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "logo032.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_title": "Показать настройки",
    "default_icon": "logo032.png",
    "default_popup": "popup.html"
  }
}
