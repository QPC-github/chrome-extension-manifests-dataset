{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tc calculator (extension)",
  "short_name": "Tc",
  "version": "1.0.10",
  "manifest_version": 2,
  "description": "Simple offline BC-like calculator for programmers with support for user defined functions and history.",
  "options_page": "options.html",
  "offline_enabled": true,
  "permissions": [
    "unlimitedStorage",
    "storage",
    "contextMenus"
  ],
  "icons": {
    "16": "icon/16.png",
    "19": "icon/19.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ],
    "scripts": [
      "sandbox.js",
      "library.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon/19.png",
    "default_popup": "window.html",
    "default_title": "Tc calculator"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
