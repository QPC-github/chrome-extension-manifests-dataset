{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "nav.li: URL shortener",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "nav.li is a free and fast URL shortener, take a try!",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "clipboardWrite",
    "tabs"
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "nav.li",
    "default_popup": "popup.html"
  }
}
