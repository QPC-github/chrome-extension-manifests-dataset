{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Netflix Shortcuts",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Custom shortcuts for Netflix",
  "icons": {
    "64": "img/icon_grey.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": "img/icon_red.png"
  },
  "permissions": [
    "declarativeContent"
  ]
}
