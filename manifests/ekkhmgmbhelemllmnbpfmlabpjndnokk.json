{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Squerb It, with the better LIKE button",
  "short_name": "Squerb It!",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Express opinions about anything you browse on the web using Squerb's better 'like' button.",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Squerb!"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
