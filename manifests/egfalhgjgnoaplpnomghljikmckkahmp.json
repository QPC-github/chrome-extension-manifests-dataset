{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spot Clarify",
  "description": "Google Chrome plugin to automaticaly load SpotClarify into any website",
  "version": "1.0.7",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "128": "img/icon-128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "img/icon-16.png",
      "38": "img/icon-32.png"
    },
    "default_title": "SpotClarify"
  }
}
