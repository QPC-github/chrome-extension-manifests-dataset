{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Space Tabs",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Create spaces from multiple tabs and save it so you can reopen it, easily and at any time.",
  "homepage_url": "https://www.pushapps.mobi",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "clipboardRead",
    "contextMenus",
    "history",
    "storage",
    "tabs"
  ],
  "incognito": "split"
}
