{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LMG Forum Floatplane Window Width",
  "description": "Show a window with Floatplane video on the LMG forum",
  "version": "1.0.1",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://linustechtips.com/main/topic/*"
      ],
      "js": [
        "floatplane.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "*://linustechtips.com/main/topic/*"
  ]
}
