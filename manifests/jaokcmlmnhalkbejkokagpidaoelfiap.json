{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VidChat Screen Id",
  "author": "Stefan Peshikj",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Capture screen to allow screen sharing in VidChat!",
  "homepage_url": "https://ngx-vidchat.herokuapp.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://ngx-vidchat.herokuapp.com/*"
    ]
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
