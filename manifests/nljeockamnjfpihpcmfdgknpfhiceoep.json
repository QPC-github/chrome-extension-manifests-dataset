{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Packagingle Bells",
  "short_name": "pckgnglblls",
  "description": "Con Packagingle Bells podrás envolver y enviar online todos esos regalos que no sabes muy bien cómo envolver.",
  "version": "1.4",
  "background": {
    "scripts": [
      "content/content.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content/content.css"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "PACKAGINGLE BELLS",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/PGB_Boton_rollover.png",
    "PGB_Boton_rollover.png",
    "images/title.png"
  ]
}
