{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LifePreserver",
  "version": "1.0",
  "description": "Stop drowning in distraction",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "notifications",
    "webNavigation",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "LifePreserver",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "icons": {
    "16": "images/icon16.png"
  },
  "chrome_url_overrides": {
    "newtab": "override.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
