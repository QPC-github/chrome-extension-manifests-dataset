{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "El Sinonimo",
  "description": "Diccionario de sinónimos de la lengua española",
  "homepage_url": "http://www.elsinonimo.es",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "images/icon16.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png",
      "128": "images/icon128.png"
    },
    "default_popup": "sincon.html",
    "default_title": "El Sinonimo"
  },
  "background": {
    "scripts": [
      "sin_bg.js"
    ]
  },
  "manifest_version": 2,
  "offline_enabled": false
}
