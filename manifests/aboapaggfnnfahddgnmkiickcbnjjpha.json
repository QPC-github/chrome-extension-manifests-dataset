{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sportal.Am",
  "version": "1.0.3",
  "browser_action": {
    "default_title": "Sportal.Am",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "./src/background.js",
      "./src/jquery.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "./images/icons/16x16.png",
    "48": "./images/icons/48x48.png",
    "128": "./images/icons/128x128.png"
  },
  "description": "Բաժանորդագրությամբ հետևեք Sportal.Am կայքի լրահոսի այն նյութերին, որոնք Ձեզ հետաքրքիր են:"
}
