{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CoffeeSender",
  "description": "Send coffee within popular sites  like Gmail, Linkedin and others.",
  "version": "1.3.4",
  "options_page": "options/options.html",
  "icons": {
    "128": "/assets/icon.png"
  },
  "browser_action": {
    "default_icon": "/assets/icon.png",
    "default_popup": "/options/options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "utilities/*",
    "gmail/*",
    "linkedin/*",
    "salesforce/*"
  ]
}
