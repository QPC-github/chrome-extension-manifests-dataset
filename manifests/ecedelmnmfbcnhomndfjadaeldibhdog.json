{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DeviceOnline UPnP/DLNA MC",
  "description": "__MSG_appDesc__",
  "short_name": "DeviceOnline",
  "version": "1.42",
  "default_locale": "en",
  "minimum_chrome_version": "38",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  },
  "icons": {
    "32": "pics/logo.png",
    "48": "pics/logo48.png",
    "128": "pics/logo128.png"
  },
  "permissions": [
    "system.network"
  ],
  "sockets": {
    "udp": {
      "send": "*",
      "bind": "*:*"
    },
    "tcp": {
      "connect": ""
    },
    "tcpServer": {
      "listen": "*:*"
    }
  }
}
