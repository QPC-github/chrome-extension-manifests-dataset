{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Storage Monitor",
  "description": "Monitor system capacity",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "system.storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "extension.css"
      ],
      "js": [
        "extension.js"
      ]
    }
  ],
  "commands": {
    "toggle-storage-monitor": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Toggle Storage Monitor"
    }
  }
}
