{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bobzilla",
  "description": "L'extension de la Bobzilla Télévision",
  "version": "1.0.1",
  "background": {
    "scripts": [
      "parameters.js",
      "boutonStream.js",
      "chrome.js"
    ]
  },
  "permissions": [
    "https://api.twitch.tv/",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon-offLine-48.png"
  },
  "icons": {
    "16": "icon-offLine-16.png",
    "48": "icon-offLine-48.png",
    "128": "icon-offLine-128.png"
  }
}
