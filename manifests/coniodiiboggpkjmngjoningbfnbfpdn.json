{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cyclops Screen Sharing",
  "description": "Allows Cyclops users to share their Desktop.",
  "version": "3.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.cyclops.io/*"
    ]
  }
}
