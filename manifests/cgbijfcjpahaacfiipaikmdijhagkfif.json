{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Netflix Hidden Categories",
  "version": "1.2",
  "description": "Search categories hidden of Netflix",
  "author": "Junio Marques",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/image/icon-netflix16x16.png",
      "32": "assets/image/icon-netflix32x32.png",
      "48": "assets/image/icon-netflix48x48.png",
      "128": "assets/image/icon-netflix128x128.png"
    }
  },
  "icons": {
    "16": "assets/image/icon-netflix16x16.png",
    "32": "assets/image/icon-netflix32x32.png",
    "48": "assets/image/icon-netflix48x48.png",
    "128": "assets/image/icon-netflix128x128.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}
