{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Timr",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "Simple and elegant project timer.",
  "homepage_url": "https://chrome.google.com/webstore/detail/timr/jhodhmfdmfjckggphlgbneimcifpdidl",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Timr"
  },
  "permissions": [
    "tabs"
  ]
}
