{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Criterion Time Tracker",
  "short_name": "Criterion",
  "description": "Start and stop timer for Criterion HCM Timesheets",
  "version": "1.2",
  "browser_action": {
    "default_icon": "res/images/icon/icon_off.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "*://*.criterionhcm.com/",
    "*://*.criterionhcm.local/"
  ]
}
