{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fairshare.it",
  "version": "0.1",
  "manifest_version": 2,
  "description": "FairShare.it is a socially aware sharing platform. View & share content to support your favorite cause.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Official Fairshare.it extension"
  },
  "permissions": [
    "activeTab",
    "contentSettings",
    "https://fairshare.it/*"
  ]
}
