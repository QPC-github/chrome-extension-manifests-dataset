{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "vvvvid.it adv remover",
  "short_name": "vvvvid.it adv remover",
  "description": "Questa estensione rimuove le pubblicit√† da vvvvid.it",
  "version": "4.0.0",
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://www.vvvvid.it/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    },
    {
      "run_at": "document_start",
      "matches": [
        "https://www.vvvvid.it/*"
      ],
      "js": [
        "scripts/content_start.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "/scripts/inject.js",
    "/scripts/inject_start.js"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.vvvvid.it/*"
  ]
}
