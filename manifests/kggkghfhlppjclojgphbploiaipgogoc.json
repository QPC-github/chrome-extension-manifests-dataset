{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Dyslexia Formatter",
  "short_name": "dysfrm",
  "description": "WIP Extension that will make browsing the internet easier for dyslexic people.",
  "version": "0.0.0.6",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "browser_action": {
    "default_title": "Dyslexia Formatter. ~ to Activate/Deactivate.",
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "core.css"
      ],
      "js": [
        "jquery-3.1.1.min.js",
        "minicolors/jquery.minicolors.min.js",
        "core.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "web_accessible_resources": [
    "*.ttf"
  ],
  "manifest_version": 2
}
