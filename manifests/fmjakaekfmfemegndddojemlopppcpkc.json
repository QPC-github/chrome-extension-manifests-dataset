{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bamboo Web Screensharing file",
  "description": "Allows you to capture your desktop for use in video applications",
  "version": "1.0.9",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Bamboo Web Screensharing file"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.bamboolms.com/*",
      "*://*.hainayx.com/*",
      "*://*.sgedushare.com/*",
      "*://*.bamboostudy.com/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "declarativeContent"
  ]
}
