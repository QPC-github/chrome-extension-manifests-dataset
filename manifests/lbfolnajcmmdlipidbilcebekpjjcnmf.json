{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shorty",
  "version": "0.7",
  "description": "Priceline URL Shortener",
  "author": "Colin Viebrock <colin.viebrock@priceline.com",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "http://pws-ny/"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/img16.png",
      "32": "images/img32.png",
      "48": "images/img48.png",
      "128": "images/img128.png"
    },
    "default_title": "Shorten this URL",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/img16.png",
    "32": "images/img32.png",
    "48": "images/img48.png",
    "128": "images/img128.png"
  },
  "manifest_version": 2
}
