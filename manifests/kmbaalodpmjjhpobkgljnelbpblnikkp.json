{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BB10 / PlayBook App Manager",
  "version": "2.2.2",
  "description": "List, manage and install apps on BlackBerry 10 and PlayBook.",
  "icons": {
    "16": "images/icon16.png",
    "128": "images/playbook.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "BB10 / PlayBook App Manager"
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "minimum_chrome_version": "18.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "pb-apps.js"
  ],
  "offline_enabled": true,
  "homepage_url": "http://gridbook.org/pb-app-mgr/"
}
