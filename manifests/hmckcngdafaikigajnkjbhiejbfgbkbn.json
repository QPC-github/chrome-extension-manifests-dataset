{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kara ShareScreen",
  "author": "Gunnar Orri Kjartansson",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is for screen sharing when using the web app Kara",
  "homepage_url": "http://www.karaconnect.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://staging.karaconnect.com/*",
      "*://kara.karaconnect.com/*"
    ]
  },
  "icons": {
    "16": "KaraLogo.png",
    "48": "KaraLogo.png",
    "128": "KaraLogo.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
