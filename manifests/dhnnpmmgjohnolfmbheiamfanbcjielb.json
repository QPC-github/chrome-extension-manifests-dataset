{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Love",
  "short_name": "Love",
  "version": "0.20",
  "description": "Love Reaction for Grapevine.",
  "homepage_url": "https://www.grapevineextension.com",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_title": "Love",
    "default_icon": "love-32.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "Env.js",
      "Hnode.js",
      "Reaction.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "Env.js",
        "content_script.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "manifest_version": 2
}
