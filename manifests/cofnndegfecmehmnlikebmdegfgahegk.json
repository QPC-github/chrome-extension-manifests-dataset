{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Online Meeting Screen Sharing",
  "author": "X-MR Limited",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "The extension enables you to share content of your screen, as only you choose, when taking part in an online meeting.",
  "homepage_url": "https://buzzrocs.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://buzzin2view.com/*",
      "https://*.buzzin2view.com/*",
      "https://*.x-mr.com/*",
      "https://*.buzzrocs.com/*",
      "https://*.dsxml.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
