{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screensharing",
  "description": "Chrome extension for screen sharing",
  "version": "2.6",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://dev.theboardroom.com/*",
        "*://localhost/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "icon.png"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "externally_connectable": {
    "matches": [
      "*://dev.theboardroom.com/*",
      "*://localhost/*"
    ]
  }
}
