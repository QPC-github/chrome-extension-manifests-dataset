{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Search to Play the Song",
  "short_name": "SPS",
  "description": "歌曲搜索试听 & 在线广播",
  "version": "2.9.3",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "SPS",
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "base": {
      "description": "Stop/Start Music",
      "suggested_key": {
        "default": "Alt+Shift+Z",
        "mac": "Alt+Shift+Z"
      }
    },
    "next": {
      "description": "Next",
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Alt+Shift+X"
      }
    },
    "mv": {
      "description": "MV Youtube",
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Alt+Shift+V"
      }
    },
    "page": {
      "description": "Song Web Page",
      "suggested_key": {
        "default": "Alt+Shift+W",
        "mac": "Alt+Shift+W"
      }
    }
  },
  "icons": {
    "128": "logo.png",
    "16": "logo.png",
    "48": "logo.png"
  },
  "content_security_policy": "script-src 'self' https://c.y.qq.com https://i.y.qq.com https://y.qq.com/ https://base.music.qq.com https://www.youtube.com https://s.ytimg.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "*://music.163.com/*",
    "*://*.xiami.com/*",
    "*://*.qq.com/*",
    "http://45.248.86.38/sps/",
    "*://itunes.apple.com/*",
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking",
    "notifications"
  ]
}
