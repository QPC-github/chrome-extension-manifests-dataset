{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MallorcaTime",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "#mallorcatime",
  "homepage_url": "http://mallorcatime.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "MallorcaTime"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
