{
  "name": "小黄瓜快递查询",
  "version": "3.1.1",
  "manifest_version": 2,
  "description": "支持国内99%的快递单号查询,再也不用去百度各种官网了呢！更多小黄瓜精选扩展请访问http://huanggua.sinaapp.com",
  "icons": {
    "128": "/images/icon_128.png",
    "48": "/images/icon_48.png",
    "16": "/images/icon_16.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "idle",
    "management",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "/images/icon_19.png",
    "default_popup": "popup.html",
    "default_title": "快递查询"
  },
  "background": {
    "page": "background.html"
  },
  "update_url": "http://clients2.google.com/service/update2/crx"
}
