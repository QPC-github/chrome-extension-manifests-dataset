{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Music Lyrics",
  "description": "This extension provides lyrics support for Google Music.",
  "version": "1.1.2",
  "permissions": [
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.google.com/*"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "img/ics.png",
    "img/lyrics.png"
  ]
}
