{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Share Screen Mec.biz",
  "author": "Mec.biz",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for https://www.mec.biz/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "https://www.mec.biz/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.mec.biz/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
