{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WalkingDeadBR",
  "description": "Somos o único fansite brasileiro de The Walking Dead seguido e recomendado pelo elenco e produtores da série.",
  "version": "0.2",
  "permissions": [
    "http://*.walkingdeadbr.com/",
    "notifications",
    "tabs"
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
