{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Deepstash",
  "description": "This extension allows you to save insights from all over the web!",
  "version": "0.2.24",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "deepstash.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "contextMenus",
    "tabs",
    "https://deepstash.com/*",
    "https://fonts.googleapis.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://deepstash.com/*"
    ]
  },
  "icons": {
    "16": "deepstash16.png",
    "48": "deepstash48.png",
    "128": "deepstash128.png"
  },
  "web_accessible_resources": [
    "deepstash.html"
  ]
}
