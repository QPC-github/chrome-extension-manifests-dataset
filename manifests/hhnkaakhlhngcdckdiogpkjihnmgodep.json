{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Metaforce",
  "short_name": "Metaforce",
  "version": "3.1.2.6",
  "manifest_version": 2,
  "description": "Salesforce & Force.com Development IDE",
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "*://*.force.com/*",
    "*://*.salesforce.com/*",
    "https://www.google-analytics.com/",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "webview",
    "browser",
    "notifications",
    "storage",
    "gcm"
  ],
  "icons": {
    "128": "img/logo128-128.png"
  }
}
