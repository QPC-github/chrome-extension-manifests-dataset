{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SimAquarium",
  "version": "2.1.7",
  "author": "xtrsyz.org",
  "description": "Aquarium simulation game.",
  "manifest_version": 2,
  "offline_enabled": true,
  "minimum_chrome_version": "23",
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ],
    "content_security_policy": "sandbox allow-scripts"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "gfx/icon16.png",
    "48": "gfx/icon48.png",
    "128": "gfx/icon128.png"
  }
}
