{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RU Cubing",
  "description": "A Rubik's cube timer and scrambler",
  "version": "1.2",
  "icons": {
    "192": "icon.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "RU Cubing"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ]
}
