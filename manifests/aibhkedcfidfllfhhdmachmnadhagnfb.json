{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Latest Bitcoin News",
  "version": "1.1",
  "description": "Get the Latest Bitcoin News updates every 15 minutes",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_title": "Open Latest Bitcoin News",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bitcoin-news-icon.png",
      "32": "images/bitcoin-news-icon.png",
      "48": "images/bitcoin-news-icon.png",
      "128": "images/bitcoin-news-icon.png"
    }
  },
  "icons": {
    "16": "images/bitcoin-news-icon.png",
    "32": "images/bitcoin-news-icon.png",
    "48": "images/bitcoin-news-icon.png",
    "128": "images/bitcoin-news-icon.png"
  },
  "manifest_version": 2
}
