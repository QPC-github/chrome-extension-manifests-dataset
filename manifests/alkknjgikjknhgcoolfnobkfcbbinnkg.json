{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NetZig",
  "short_name": "NetZig",
  "version": "2.1",
  "manifest_version": 2,
  "description": "If you have come this far then you probably know what this extension is for and there is no need for any introduction.",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_title": "NetZig",
    "default_popup": "html/verify.html"
  },
  "homepage_url": "http://tecknity.com",
  "background": {
    "persistent": true,
    "scripts": [
      "js/jq.js",
      "js/a_background.js",
      "js/background.js",
      "js/requests.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jq.js",
        "js/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity",
    "management",
    "tabs",
    "notifications",
    "https://*/*",
    "http://*/*",
    "https://*.netflix.com/*",
    "https://ctrlv.it/*",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "http://www.amazon.com/*",
    "https://www.amazon.com/*",
    "http://smile.amazon.com/*",
    "https://smile.amazon.com/*",
    "http://www.amazon.ca/*",
    "https://www.amazon.ca/*",
    "http://www.amazon.co.uk/*",
    "https://www.amazon.co.uk/*",
    "http://www.amazon.de/*",
    "https://www.amazon.de/*",
    "http://www.amazon.es/*",
    "https://www.amazon.es/*",
    "http://www.amazon.fr/*",
    "https://www.amazon.fr/*",
    "http://www.amazon.it/*",
    "https://www.amazon.it/*",
    "http://www.amazon.co.jp/*",
    "https://www.amazon.co.jp/*",
    "http://www.amazon.cn/*",
    "https://www.amazon.cn/*",
    "http://www.amazon.in/*",
    "https://www.amazon.in/*",
    "https://amaflink-server.appspot.com/*",
    "http://www.flipkart.com/*",
    "https://www.flipkart.com/*",
    "http://dl.flipkart.com/*",
    "https://dl.flipkart.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://tecknity.com/*",
      "*://netflixcookie.com/*",
      "*://app.netflixcookie.com/*"
    ]
  }
}
