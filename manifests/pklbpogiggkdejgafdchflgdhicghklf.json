{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Affiliator",
  "short_name": "Easy affiliate linking",
  "description": "Easy affiliate linking",
  "version": "0.9.1",
  "homepage_url": "http://www.affiliator.io",
  "icons": {
    "16": "./icon16.png",
    "48": "./icon48.png",
    "128": "./icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "affiliator.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "*://*.affiliator.io/*",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/selection.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
