{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "version": "5.3.3",
  "default_locale": "ru",
  "description": "__MSG_extension_description__",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "toolbar_popup.html"
  },
  "background": {
    "page": "popup.html"
  },
  "web_accessible_resources": [
    "smmbox.html",
    "_locales/ru/messages.json",
    "_locales/en/messages.json",
    "selector.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "data/build/prep-plugins.min.js",
        "data/build/prep.min.js"
      ],
      "css": [
        "data/build/prep.min.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://cards-frame.twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "data/build/prep-plugins.min.js",
        "data/build/prep.min.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://www.avito.ru/*",
        "https://avito.ru/*"
      ],
      "css": [
        "data/css/avito.css"
      ]
    },
    {
      "matches": [
        "http://ok.ru/*",
        "https://ok.ru/*",
        "http://odnoklassniki.ru/*",
        "https://odnoklassniki.ru/*"
      ],
      "css": [
        "data/css/ok.css"
      ]
    },
    {
      "matches": [
        "http://vk.com/*",
        "https://vk.com/*"
      ],
      "css": [
        "data/css/vk.css"
      ]
    },
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "css": [
        "data/css/fb.css"
      ]
    },
    {
      "matches": [
        "http://www.tumblr.com/*",
        "https://www.tumblr.com/*"
      ],
      "css": [
        "data/css/tr.css"
      ]
    },
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "css": [
        "data/css/tw.css"
      ]
    },
    {
      "matches": [
        "http://pikabu.ru/*",
        "https://pikabu.ru/*"
      ],
      "css": [
        "data/css/pikabu.css"
      ]
    },
    {
      "matches": [
        "http://www.instagram.com/*",
        "https://www.instagram.com/*"
      ],
      "css": [
        "data/css/instagram.css"
      ]
    },
    {
      "matches": [
        "*://*.aliexpress.com/*"
      ],
      "css": [
        "data/css/aliexpress.css"
      ]
    },
    {
      "matches": [
        "*://guggy.com/*"
      ],
      "css": [
        "data/css/guggy.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
