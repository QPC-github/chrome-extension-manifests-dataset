{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "msign.kz",
  "version": "1.1",
  "description": "",
  "content_scripts": [
    {
      "matches": [
        "https://idp.egov.kz/*",
        "https://egov.kz/*"
      ],
      "js": [
        "content_script_injector.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://nca.pki.gov.kz/*"
      ],
      "js": [
        "content_script_injector.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "https://idp.egov.kz/*",
    "https://egov.kz/*",
    "https://nca.pki.gov.kz/*",
    "*://layer.msign.biz/*",
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "debugger"
  ],
  "web_accessible_resources": [
    "content_script_main.js",
    "styles.css",
    "options.html",
    "qr.html",
    "qr.js"
  ],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "qr.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png",
      "384": "images/logo-384.png",
      "512": "images/logo-512.png"
    }
  },
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "incognito": "split"
}
