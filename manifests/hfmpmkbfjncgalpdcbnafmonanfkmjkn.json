{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screenpages Toolkit",
  "description": "Tools for helping test e-commerce websites",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "SP_trans_logo16.png",
    "48": "SP_trans_logo48.png",
    "128": "SP_trans_logo128.png"
  },
  "browser_action": {
    "default_icon": "SP_trans_logo38.png",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "SP_trans_logo.png"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
