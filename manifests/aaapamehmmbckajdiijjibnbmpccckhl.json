{
  "name": "Ikariam Notify YA",
  "description": "Various notifications and improvements for Ikariam.",
  "version": "1.3",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "webRequest",
    "background",
    "notifications",
    "tabs",
    "*://*.ikariam.gameforge.com/*"
  ],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png",
    "256": "icon/256.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ikariam.gameforge.com/*"
      ],
      "js": [
        "javascript/jquery.js",
        "javascript/ikariam.js"
      ],
      "css": [
        "style/ikariam.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "image/chat.png",
    "image/diplomat.png",
    "image/general.png",
    "image/mayor.png",
    "image/scientist.png"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2
}
