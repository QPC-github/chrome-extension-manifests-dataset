{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "short_name": "Octonews",
  "name": "Octonews - News Trust Score",
  "version": "1.7",
  "description": "This extension allows you to identify the trust rate of armenian news websites according to scores given by media experts and users",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "chart.js",
        "analytics.js",
        "open-dialog.js"
      ]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "manifest_version": 2
}
