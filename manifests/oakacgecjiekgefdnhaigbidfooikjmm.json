{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HY Menu ",
  "description": "Menu for HY(translation and Wiki)",
  "version": "0.9",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "locales.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "hy16.png",
    "48": "hy48.png",
    "128": "hy128.png"
  }
}
