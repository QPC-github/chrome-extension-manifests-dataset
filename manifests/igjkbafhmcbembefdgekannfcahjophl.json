{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.0.1",
  "name": "Mijn Verlanglijst",
  "author": "Mijn Verlanglijst",
  "description": "Met de Mijn Verlanglijst-knop voeg je tijdens het shoppen heel gemakkelijk artikelen uit webwinkels toe aan je verlanglijstje.",
  "homepage_url": "https://www.mijnverlanglijst.eu/",
  "icons": {
    "16": "logo-16.png",
    "24": "logo-24.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "64": "logo-64.png",
    "96": "logo-96.png",
    "128": "logo-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "logo-16.png",
      "24": "logo-24.png",
      "32": "logo-32.png",
      "48": "logo-48.png",
      "64": "logo-64.png",
      "96": "logo-96.png",
      "128": "logo-128.png"
    },
    "default_title": "Toevoegen aan Mijn Verlanglijst"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
