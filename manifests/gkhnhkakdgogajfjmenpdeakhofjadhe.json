{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "RWDdy",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Keep your sanity while editing and debugging media queries.",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_icon": "img/icon_16.png",
    "default_title": "RWDdy"
  },
  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
