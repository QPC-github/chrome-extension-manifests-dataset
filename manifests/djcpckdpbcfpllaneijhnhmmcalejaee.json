{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_NAME__",
  "short_name": "Nowtaxi",
  "version": "0.0.2",
  "default_locale": "en",
  "description": "__MSG_DESCRIPTION__",
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "144": "icon144.png"
  },
  "browser_action": {
    "default_title": "__MSG_ORDER__",
    "default_icon": {
      "48": "icon48.png",
      "96": "icon96.png",
      "144": "icon144.png"
    }
  },
  "author": "Roman V. Nikolaev",
  "homepage_url": "https://nowtaxi.ru",
  "minimum_chrome_version": "16",
  "offline_enabled": false,
  "background": {
    "persistent": true,
    "scripts": [
      "index.js"
    ]
  },
  "permissions": [
    "https://*.nowtaxi.ru/*",
    "tabs"
  ]
}
