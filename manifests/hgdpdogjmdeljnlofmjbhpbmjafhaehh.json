{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Go Links",
  "description": "Quick links",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "32": "img/32.png",
      "24": "img/24.png",
      "16": "img/16.png"
    },
    "default_popup": "index.html?popup=true"
  },
  "omnibox": {
    "keyword": "go"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://go/*"
  ],
  "commands": {
    "open-go-link-tab": {
      "suggested_key": {
        "windows": "Ctrl+Shift+G",
        "mac": "Command+Shift+G",
        "chromeos": "Ctrl+Shift+G",
        "linux": "Ctrl+Shift+G"
      },
      "description": "Opens Go Links page",
      "global": true
    }
  }
}
