{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WebIL Screen Capture",
  "description": "Allows you to capture your desktop for use in video applications",
  "version": "1.1",
  "manifest_version": 2,
  "permissions": [
    "desktopCapture",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://matan.meetings.vocal-dev.com/*",
      "https://meetings-alpha.vonage.com/*",
      "https://meetings.vonage.com/*"
    ]
  },
  "background": {
    "scripts": [
      "screen-capture.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/vlt-icon-screen-share.png",
    "48": "images/vlt-icon-screen-share@2x.png",
    "128": "images/vlt-icon-screen-share@3x.png"
  }
}
