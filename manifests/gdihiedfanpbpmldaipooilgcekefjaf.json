{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "leapLIKE",
  "description": "A Simple Web App to like Facebook posts using LEAP MOTION Device.",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "16": "icon.png"
  },
  "background": {
    "scripts": [
      "leap.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications"
  ]
}
