{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Font Viewer",
  "description": "Looks up the hovered element and displays the Font Family",
  "version": "1.1",
  "author": "Emil Widlund",
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Font Viewer",
    "default_icon": "resources/icon_off.png"
  },
  "icons": {
    "16": "resources/icon_16.png",
    "48": "resources/icon_48.png",
    "128": "resources/icon_128.png"
  }
}
