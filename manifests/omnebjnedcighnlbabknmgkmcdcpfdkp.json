{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Diary@FavChk",
  "version": "1.4",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "dc.png",
    "default_popup": "popup.html",
    "default_title": ""
  },
  "description": "Предназначен для diary.ru. Отображает есть ли новые посты в избранном.",
  "icons": {
    "128": "icon_128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "idle",
    "background",
    "http://*.diary.ru/",
    "notifications"
  ]
}
