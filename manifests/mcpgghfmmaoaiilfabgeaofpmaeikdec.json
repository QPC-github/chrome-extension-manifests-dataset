{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RealTimeWeekly ScreenSharing",
  "author": "AgilityFeat",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension was developed for http://show.realtimeweekly.co/. It simply shares your screen as a video stream.",
  "homepage_url": "https://show.realtimeweekly.co/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.heroku.com/*",
      "https://*.realtimeweekly.co/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
