{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GrowthTribeâ€™s WebText Editor",
  "version": "0.2.0",
  "description": "A hassle-free extension to edit text on ANY website and make a screenshot of it afterwards. Brought to you by Growth Tribe.",
  "homepage_url": "http://growthtribe.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "WebText"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "manifest_version": 2
}
