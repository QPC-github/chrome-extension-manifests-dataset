{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "No Truffa",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "src/icons/icon-128.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "*://notruffa.com/*",
    "*://*.googleapis.com/",
    "notifications",
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "src/icons/icon-16.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "options_page": "options/options.html"
}
