{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Manupatra Connect",
  "description": "Allows user to search across www.manupatra.com using google's chrome extension.",
  "version": "1.2",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "Manupatra Connect",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
