{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Live Code",
  "description": "Automatic refresh on code change",
  "version": "1.0",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "48": "icon_48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "off-19.png",
      "38": "off-38.png"
    },
    "default_title": "Enable Fine Reader"
  },
  "web_accessible_resources": [
    "css/letemps.css"
  ]
}
