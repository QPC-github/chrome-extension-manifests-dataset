{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lethal-Zone.eu Chrome App",
  "description": "Connect and search Lethal-Zone.eu's servers from your browser!",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "http://*.lethal-zone.eu/*",
    "https://*.lethal-zone.eu/*",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}
