{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Steemit is Fun",
  "description": "Get steemin' now!",
  "version": "0.2.9.3",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "https://steemit.com/*",
    "tabs",
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "short_name": "STEEMIF",
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://steemit.com/*"
      ],
      "js": [
        "vendor/jquery-1.12.4.min.js",
        "vendor/underscore-min.js",
        "vendor/steem.min.js",
        "vendor/jquery.init.js",
        "vendor/vex.min.js",
        "Steemit.js"
      ],
      "css": [
        "vendor/vex.theme.css",
        "vendor/vex.css",
        "style.css"
      ],
      "permissions": [
        "activeTab",
        "storage"
      ]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Steemit is Fun!",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
