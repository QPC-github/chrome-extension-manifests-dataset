{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lights Out",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "El plug-in para Chrome con el que puedes apagar tu navegaci√≥n, sin dejar de navegar.",
  "homepage_url": "http://www.abanico.pe",
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "css": [
        "lightsout.css"
      ],
      "js": [
        "lightsout.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "src/bg/common.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/19.png",
    "default_title": "Lights OUT",
    "default_popup": "src/browser_action/popup.html"
  },
  "default_locale": "es"
}
