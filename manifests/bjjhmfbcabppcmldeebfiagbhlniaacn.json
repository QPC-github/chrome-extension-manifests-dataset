{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "permissions": [
    "notifications",
    "cookies",
    "http://*.newscurve.com/*",
    "https://*.newscurve.com/*"
  ],
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon_disabled.png"
  },
  "description": "Never miss an emerging trend on your website, let Newscurve alerts find you as you browse the web.",
  "icons": {
    "128": "img/logo128.png",
    "48": "img/logo48.png"
  },
  "name": "NewsCurve",
  "version": "0.1.12",
  "web_accessible_resources": [
    "img/logo48.png",
    "notification.js"
  ],
  "options_page": "html/options.html"
}
