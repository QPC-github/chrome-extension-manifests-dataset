  "homepage_url": "http://lorem.vn/",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "Lorem Ipsum Generator",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "https://lorem.vn/api/*",
    "http://fonts.googleapis.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
