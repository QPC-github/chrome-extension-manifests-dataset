{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Username linker for www.fetlife.com",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "Transform @handle mentions into clickable links",
  "permissions": [
    "https://*.fetlife.com/*",
    "webRequest",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.fetlife.com/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
