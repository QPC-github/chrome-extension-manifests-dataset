{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Manasav PriceTracker",
  "version": "1.1",
  "description": "Extension for adding products to Manasav PriceTracker!",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "https://us-central1-manasav-pricetracker.cloudfunctions.net/"
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
