{
  "background": {
    "persistent": false,
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "description": "ReloadTabs (Otomatik sayfa yenile)",
      "suggested_key": {
        "default": "Ctrl+R"
      }
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "description": "Bu uygulama ile aktif olan tüm sayfaların 60sn'de bir yenilemesini sağlayabilirsiniz.",
  "manifest_version": 2,
  "name": "ReloadTabs (Otomatik sayfa yenile)",
  "permissions": [
    "tabs",
    "background"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2",
  "homepage_url": "http://www.hizliresimyukle.net"
}
