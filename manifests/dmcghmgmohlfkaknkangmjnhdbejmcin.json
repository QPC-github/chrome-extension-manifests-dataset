{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Goatarize for Chrome",
  "version": "1.0",
  "description": "Instant bleating screaming goat on any page",
  "browser_action": {
    "name": "Goatarize",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "http://*/"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "jquery.goatarize.1.0.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "inject.js"
    ]
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "goat-sound-1.ogg",
    "goat-sound-2.ogg",
    "goat-sound-3.ogg",
    "goat.png",
    "goat-sound-1.mp3",
    "goat-sound-2.mp3",
    "goat-sound-3.mp3"
  ]
}
