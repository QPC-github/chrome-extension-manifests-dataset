{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hrvatska pošta",
  "version": "1.7.1",
  "description": "Pošta – Chrome proširenje – još brže do podataka",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "offline_enabled": true,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.googletagmanager.com https://www.google-analytics.com;  object-src 'self'"
}
