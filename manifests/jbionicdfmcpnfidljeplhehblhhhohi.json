{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HemenGorus Screen Sharing",
  "author": "Imona Ltd.",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is developed primary for https://hemengorus.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "https://www.hemengorus.com/anasayfa",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://www.hemengorus.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
