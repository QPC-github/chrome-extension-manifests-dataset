{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Armagedom Filmes - Assistir Filmes Online",
  "short_name": "Armagedom Filmes",
  "homepage_url": "http://www.armagedomfilmes.info/",
  "description": "Este plugin irá notificá-lo de novos filmes para assistir forma on-line, completamente livre e simples.",
  "version": "0.2",
  "icons": {
    "16": "/images/logos/16.png",
    "48": "/images/logos/48.png",
    "128": "/images/logos/128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications",
    "bookmarks",
    "*://*/"
  ],
  "background": {
    "scripts": [
      "/js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Armagedom Filmes",
    "default_icon": "/images/icon.png",
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
