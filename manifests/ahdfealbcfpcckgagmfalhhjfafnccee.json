{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Optimove Pop-up Preview Tool",
  "description": "Preview a webpage pop-up as it will appear when running on your website.",
  "version": "1.0.1",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "optimove16.png",
      "32": "optimove32.png",
      "96": "optimove96.png",
      "144": "optimove144.png"
    },
    "default_popup": "./popup.html"
  },
  "icons": {
    "16": "optimove16.png",
    "32": "optimove32.png",
    "96": "optimove96.png",
    "144": "optimove144.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "popInjector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "manifest.json"
  ]
}
