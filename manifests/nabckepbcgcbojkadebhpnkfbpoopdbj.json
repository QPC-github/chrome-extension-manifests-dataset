{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "石墨表格剪切板",
  "description": "可以访问系统剪切板的内容.",
  "version": "1.4",
  "page_action": {
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "https://shimodev.com/*",
      "https://release.shimodev.com/*",
      "https://staging.shimo.run/*",
      "https://shimo.im/*"
    ]
  }
}
