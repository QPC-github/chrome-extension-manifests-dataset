{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bello For Work",
  "short_name": "Bello",
  "version": "1.9.0",
  "author": "Bello",
  "homepage_url": "https://belloforwork.com",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "*://*/*",
    "*://*.newsio.com/*",
    "*://*.belloforwork.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.newsio.com/*",
      "*://*.belloforwork.com/*"
    ]
  },
  "description": "Share articles to Bello with a single click",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    },
    "default_title": "Share to Bello",
    "default_popup": "popup.html"
  }
}
