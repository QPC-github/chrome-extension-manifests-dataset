{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sourcery",
  "version": "2.1.0",
  "description": "Highlights source code files.",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "file:///*"
      ],
      "js": [
        "js/highlight.min.js",
        "js/script.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "themes/*.css",
    "themes.json"
  ],
  "icons": {
    "16": "img/logo_16.png",
    "64": "img/logo_64.png",
    "128": "img/logo_128.png",
    "512": "img/logo_512.png"
  }
}
