{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Skribbl.io Friend Finder",
  "version": "0.1.1",
  "description": "Find your friends in public lobbies!",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.skribbl.io/*"
      ],
      "run_at": "document_idle",
      "js": [
        "js/bot.js"
      ]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
