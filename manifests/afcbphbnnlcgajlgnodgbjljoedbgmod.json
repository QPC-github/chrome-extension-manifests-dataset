{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "showroom 48",
  "version": "0.7.1",
  "manifest_version": 2,
  "description": "顯示目前開台中的相關akb48相關台",
  "icons": {
    "16": "assets/icons/16.png",
    "48": "assets/icons/48.png",
    "64": "assets/icons/64.png",
    "128": "assets/icons/128.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "storage",
    "tabs",
    "webRequest",
    "alarms"
  ],
  "options_ui": {
    "page": "./options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_popup": "./popup.html"
  }
}
