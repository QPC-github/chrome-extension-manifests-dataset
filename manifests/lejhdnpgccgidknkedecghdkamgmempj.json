{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2.1",
  "name": "WelcomeKit.co Chrome Extension",
  "manifest_version": 2,
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "browser_action": {
    "default_title": "__MSG_extension_default_title__",
    "default_icon": "img/icon-16.png"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-candidate-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "/img/*",
    "/fonts/*"
  ],
  "permissions": [
    "contextMenus",
    "cookies",
    "identity",
    "storage",
    "*://*.welcomekit.co/*",
    "*://*.welcomekit.tech/*",
    "*://*.angel.co/*",
    "*://*.apec.fr/*",
    "*://*.behance.net/*",
    "*://*.dribbble.com/*",
    "*://*.facebook.com/*",
    "*://*.github.com/*",
    "*://*.employers.indeed.com/*",
    "*://*.leboncoin.fr/*",
    "*://*.linkedin.com/*",
    "*://*.stackoverflow.com/*",
    "*://*.talent.io/*",
    "*://*.twitter.com/*",
    "*://*.uxjobs.fr/*",
    "*://*.xing.com/*"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; connect-src https://www.welcomekit.co; img-src 'self' data:;"
}
