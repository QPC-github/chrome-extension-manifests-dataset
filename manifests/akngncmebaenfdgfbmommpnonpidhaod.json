{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Secure screen sharing",
  "version": "2.1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "desktopCapture",
    "activeTab",
    "https://*.24sessions.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.24sessions.com/*"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "version.txt"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.24sessions.com/*"
    ]
  }
}
