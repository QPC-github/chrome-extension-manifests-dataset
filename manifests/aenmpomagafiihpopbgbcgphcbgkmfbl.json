{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FOURGIFS",
  "version": "1.0.1",
  "description": "Translate any word or phrase with fun!!!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "static/js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "css": [
      "static/css/app.css"
    ],
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "static/js/content.js"
      ],
      "css": [
        "static/css/content.css"
      ]
    }
  ],
  "manifest_version": 2
}
