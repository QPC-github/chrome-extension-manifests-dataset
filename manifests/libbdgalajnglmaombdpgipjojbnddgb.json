{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Africom Balance Checker",
  "description": "Quickly and easily check your balance",
  "version": "0.8",
  "icons": {
    "16": "images/icon32.png",
    "32": "images/icon32.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "storage",
    "http://selfservices.ai.co.zw/*",
    "http://www.recharge.co.zw/*"
  ],
  "browser_action": {
    "default_icon": "images/icon32.png",
    "default_title": "Africom Balance Checker",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon32.png"
  ]
}
