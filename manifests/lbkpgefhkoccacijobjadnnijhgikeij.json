{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Clearhive",
  "version": "1.4.1",
  "description": "Create a clearhive forwarder for the current page in one click",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "clearhive-icon-48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "clearhive-icon-16.png",
    "48": "clearhive-icon-48.png",
    "128": "clearhive-icon-128.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "https://*.clearhive.com/"
  ]
}
