{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BLIMBEXT",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Repeatable timer. Reminds you to take breaks and helps you with eye exercises.",
  "icons": {
    "16": "images/on.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/off.png",
    "default_popup": "popup.html",
    "default_title": "BLIMBEXT"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "images/*",
    "audio/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
