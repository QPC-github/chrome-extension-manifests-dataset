{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FortunesRocks.me LLC ChartStream",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Chart Streaming application for TradeChat.me",
  "background": {
    "scripts": [
      "chartStream.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/capture22.png",
    "default_title": "chartSteam.me"
  },
  "externally_connectable": {
    "matches": [
      "*://*.tradechat.me/*"
    ]
  },
  "icons": {
    "16": "images/capture16.png",
    "22": "images/capture22.png",
    "32": "images/capture32.png",
    "48": "images/capture48.png",
    "128": "images/capture128.png"
  },
  "permissions": [
    "desktopCapture"
  ]
}
