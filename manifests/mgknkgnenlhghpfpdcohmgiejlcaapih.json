{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Salesforce1 Sandbox Simulator",
  "description": "Launch Salesforce1 (sandbox) in a mobile simulator.",
  "version": "0.1.3.1",
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "webview",
    "alwaysOnTopWindows",
    "storage"
  ],
  "icons": {
    "16": "assets/images/salesforce1.png",
    "48": "assets/images/salesforce1.png",
    "128": "assets/images/salesforce1.png"
  }
}
