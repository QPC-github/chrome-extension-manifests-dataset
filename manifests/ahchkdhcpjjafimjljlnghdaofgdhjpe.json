{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nota Brasil A3",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Certificado Digital A3.",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "https://novo.notabrasil.com.br/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "https://novo.notabrasil.com.br/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_page": "",
  "icons": {
    "128": "icon-128.png",
    "48": "icon-48.png",
    "38": "icon-38.png",
    "16": "icon-16.png",
    "19": "icon-19.png"
  },
  "permissions": [
    "nativeMessaging"
  ],
  "browser_action": {
    "default_title": "Click Me"
  }
}
