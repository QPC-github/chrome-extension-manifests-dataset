{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "antivata",
  "short_name": "antivata",
  "version": "1.3",
  "description": "Дадатак, які называе краіны слушна.",
  "browser_action": {
    "default_title": "antivata",
    "default_icon": "icons/48.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "word-swap-pairs.js",
        "swap.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "swap_bg.js"
    ]
  }
}
