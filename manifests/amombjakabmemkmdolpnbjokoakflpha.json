{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Instalgic Connector",
  "version": "1.9.1",
  "author": "Instalgic",
  "description": "From now on is even easier to add your account to our platform.",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "webRequest",
    "unlimitedStorage",
    "notifications",
    "storage",
    "clipboardWrite",
    "webRequestBlocking",
    "*://*.instagram.com/*",
    "*://*.app.instalgic.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "externally_connectable": {
    "matches": [
      "https://app.instalgic.com/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.app.instalgic.com/accounts-ext"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/noty/lib/noty.min.js",
        "js/rastabase.js"
      ],
      "css": [
        "css/style.css",
        "js/noty/lib/noty.css",
        "js/noty/lib/themes/sunset.css"
      ],
      "run_at": "document_end",
      "persistent": false
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "manifest_version": 2
}
