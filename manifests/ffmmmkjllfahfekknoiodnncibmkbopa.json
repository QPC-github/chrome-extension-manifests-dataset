{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EndoscopyNow Screen Sharing",
  "author": "EndoscopyNow",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for EndoscopyNow. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://endoscopynow.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.endoscopynow.com/*",
      "https://localhost/*"
    ]
  },
  "icons": {
    "16": "endo16.png",
    "48": "endo48.png",
    "128": "endo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
