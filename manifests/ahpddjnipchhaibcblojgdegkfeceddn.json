{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Columns",
  "short_name": "columns",
  "description": "Read your websites more relaxed with automatic columns for wide content.",
  "version": "1.16",
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "name": "Click to change columns"
  },
  "web_accessible_resources": [
    "background.css",
    "content.css"
  ],
  "manifest_version": 2,
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  }
}
