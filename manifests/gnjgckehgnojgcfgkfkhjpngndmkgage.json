{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mosibi Highlighter for Bullhorn",
  "permissions": [
    "activeTab",
    "*://*.bullhornstaffing.com/"
  ],
  "version": "0.9.0",
  "manifest_version": 2,
  "description": "Highlighter for Candidate and Contact records of particular statuses and to show email count on Candidates and Contacts",
  "icons": {
    "256": "icons/mosibi_highlighter.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "mh_styles.css"
      ],
      "js": [
        "mh_content.js"
      ],
      "matches": [
        "https://*.bullhornstaffing.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "mh_background.js"
    ],
    "persistent": false
  }
}
