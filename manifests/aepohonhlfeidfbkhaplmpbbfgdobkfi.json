{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AgoraWebinar ScreenSharing",
  "author": "Agora Webinar",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Captura a tela cheia ou a tela de alguma aplicação específica para compartilhar no Agora Webinar.",
  "homepage_url": "https://agorawebinar.com",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://*.agorawebinar.com/*",
        "http://*.agorawebinar.com/*",
        "http://app.agorawebinar.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon16.png",
    "icon48.png",
    "icon128.png"
  ]
}
