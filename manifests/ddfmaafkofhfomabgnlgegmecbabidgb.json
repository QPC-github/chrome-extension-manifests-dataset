{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Polyfono. Beyond Web Audio",
  "short_name": "Polyfono. Audio Plugin Host for the Web Browser",
  "version": "0.6",
  "manifest_version": 2,
  "minimum_chrome_version": "42",
  "description": "Polyfono is an audio plugin host as web extension, with multiple audio effects. More plugins are added constantly.",
  "homepage_url": "https://www.polyfono.com",
  "icons": {
    "16": "assets/images/16.png",
    "32": "assets/images/32.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png",
    "256": "assets/images/256.png",
    "512": "assets/images/512.png"
  },
  "default_locale": "en",
  "permissions": [
    "cookies",
    "tabs",
    "tabCapture",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "background": {
    "page": "/index.html?page=background",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "assets/images/256.png",
    "default_title": "Polyfono",
    "default_popup": "/index.html?page=workbench"
  },
  "web_accessible_resources": [
    "assets/fonts/Roboto/Roboto-Regular.ttf",
    "assets/fonts/Roboto/Roboto-Light.ttf",
    "assets/fonts/RobotoCondensed/RobotoCondensed-Regular.ttf",
    "assets/fonts/RobotoCondensed/RobotoCondensed-Light.ttf",
    "assets/fonts/Aria3dIconFontv4/Aria3dIconFontv4.eot",
    "assets/fonts/Aria3dIconFontv4/Aria3dIconFontv4.svg",
    "assets/fonts/Aria3dIconFontv4/Aria3dIconFontv4.ttf",
    "assets/fonts/Aria3dIconFontv4/Aria3dIconFontv4.woff",
    "assets/fonts/Aria3dIconFontv4/Aria3dIconFontv4.woff2"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.polyfono.com https://www.googletagmanager.com https://stats.g.doubleclick.net https://www.google-analytics.com https://ssl.google-analytics.com; object-src 'self'"
}
