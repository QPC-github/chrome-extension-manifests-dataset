{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Smart Pause on YouTube",
  "description": "Smart Pause on YouTube automatically pauses playback YouTube video when leaving the page.",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons": {
    "128": "images/icon_128.png",
    "48": "images/ico_48.png"
  },
  "background": {
    "scripts": [
      "background/script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content_scripts/script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/index.html",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "toggle-smartpause_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Toggle SmartPause"
    },
    "toggle-smartpause_2": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle SmartPause"
    },
    "toggle-smartpause_3": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Toggle SmartPause"
    }
  }
}
