{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pelican",
  "version": "1.5",
  "manifest_version": 2,
  "description": "Minimal and Focused versison of Facebook!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "assets/js/jquery.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Pelican Facebook",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*"
      ],
      "js": [
        "style_facebook.js",
        "js/jquery.min.js",
        "js/on-off-switch.js",
        "js/on-off-switch-onload.js"
      ]
    }
  ]
}
