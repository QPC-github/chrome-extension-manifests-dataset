{
  "background": {
    "page": "background.html"
  },
  "description": "Quickly create Amazon Affiliate links while browsing Amazon.",
  "icons": {
    "128": "icon-128.png",
    "16": "icon-16.png",
    "48": "icon-48.png"
  },
  "manifest_version": 2,
  "name": "Amazon Affiliates Link Maker",
  "options_page": "options.html",
  "page_action": {
    "default_icon": "icon-16.png",
