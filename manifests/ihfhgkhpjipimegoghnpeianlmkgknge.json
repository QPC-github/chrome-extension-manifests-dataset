{
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "short_name": "Music Seeker",
  "version": "1.5.1",
  "homepage_url": "https://media-seeker.com",
  "default_locale": "en",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_popup": "index.html"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "is_default": true,
      "name": "Music Seeker",
      "keyword": "Music",
      "encoding": "UTF-8",
      "search_url": "http://bestsearching.space/srch/?keyword={searchTerms}",
      "favicon_url": "http://bestsearching.space/favicon.ico"
    }
  },
  "icons": {
    "128": "icons/128.png"
  },
  "omnibox": {
    "keyword": "m"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "permissions": [
    "cookies",
    "http://*/*",
    "storage",
    "tabs",
    "https://*/*",
    "topSites",
    "contextMenus"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
