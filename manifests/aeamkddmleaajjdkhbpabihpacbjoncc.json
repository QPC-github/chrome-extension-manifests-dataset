{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon/icon48.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "css/tipsy.css",
        "css/page.css"
      ],
      "js": [
        "js/jquery-1.8.3.min.js",
        "js/jquery.tipsy.js",
        "js/page.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "A plugin by VocabXtreme",
  "icons": {
    "128": "icon/icon128.png",
    "16": "icon/icon16.png",
    "48": "icon/icon48.png"
  },
  "manifest_version": 2,
  "name": "VocabXtreme",
  "options_page": "popup.html",
  "permissions": [
    "storage",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.2",
  "web_accessible_resources": [
    "word_lists/dictionary.json"
  ]
}
