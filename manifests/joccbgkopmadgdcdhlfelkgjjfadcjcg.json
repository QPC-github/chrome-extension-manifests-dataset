{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "EmotiText",
  "description": "Browse through different emoticon categories, choose the one that suits you best and share it with friends!",
  "version": "0.3.1",
  "icons": {
    "16": "images/text-emoticon16.png",
    "48": "images/text-emoticon48.png",
    "128": "images/text-emoticon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/text-emoticon.png",
      "38": "images/text-emoticon.png"
    },
    "default_popup": "app.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "storage",
    "tabs"
  ]
}
