{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "css/font-awesome.css"
      ],
      "js": [
        "js/jquery.js",
        "js/test.js",
        "js/md5.min.js",
        "js/config.js",
        "js/script.js"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.1688.com/*",
        "https://*.1688.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*"
      ]
    },
    {
      "js": [
        "js/web_service_config.js",
        "js/web_service_script.js"
      ],
      "matches": [
        "https://1688pgs.vn/*",
        "http://1688pgs.vn/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://1688pgs.vn/*; object-src 'self'",
  "description": "Cho phép bạn đặt hàng, nhận báo giá trực tuyến tại các website thương mại điện tử như 1688, tmall, taobao.",
  "icons": {
    "128": "images/icon-128.png",
    "16": "images/icon-16.png",
    "48": "images/icon-48.png"
  },
  "manifest_version": 2,
  "name": "Công Cụ Đặt Hàng Của 1688PGS",
  "short_name": "1688PGS",
  "options_page": "options.html",
  "permissions": [
    "http://*.taobao.com/*",
    "https://*.taobao.com/*",
    "http://*.1688.com/*",
    "https://*.1688.com/*",
    "http://*.tmall.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.hk/*",
    "https://*.tmall.hk/*",
    "https://1688pgs.vn/*",
    "http://1688pgs.vn/*",
    "storage",
    "tabs"
  ],
  "version": "1.5",
  "web_accessible_resources": [
    "images/*",
    "template/*",
    "css/*"
  ]
}
