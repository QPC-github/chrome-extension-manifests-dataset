{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "description": "Imageperl addon for opera. Upload images from any website to your imageperl account.",
  "icons": {
    "16": "menu_icon.png",
    "64": "icon-64.png"
  },
  "name": "Imageperl.com Chrome Addon",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "version": "1.1"
}
