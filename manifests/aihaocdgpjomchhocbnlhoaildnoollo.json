{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weave Cloud",
  "short_name": "Weavecloud",
  "version": "0.1.8",
  "description": "Adds links to Grafana graph panels to start exploring those graph queries in Weave Cloud.",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "content_scripts": [
    {
      "js": [
        "vendors.js",
        "content-bundle.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
    "*://*/*"
  ],
  "manifest_version": 2
}
