{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "newsroom!",
  "version": "1.1.1",
  "description": "Newsroom! nahradí každou nově otevřenou kartu ve váš osobní zdroj důležitých informací.",
  "author": "Economia a.s. - SKLEP",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "build/background.bundle.js"
    ]
  },
  "permissions": [
    "alarms",
    "background",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
