{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Offnews.bg",
  "description": "Offnews последни новини от България политика, разследвания, култура, спорт, наука, авто",
  "version": "0.3.5",
  "manifest_version": 2,
  "author": "PIMDESIGN LTD, http://www.pimdesign.org",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Offnews последни новини"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "notifications",
    "http://offnews.bg/",
    "http://nauka.offnews.bg/",
    "http://auto.offnews.bg/"
  ],
  "background": {
    "scripts": [
      "jquery-1.9.1.min.js",
      "background.js",
      "alarms.js"
    ]
  },
  "web_accessible_resources": [
    "icon48.png"
  ]
}
