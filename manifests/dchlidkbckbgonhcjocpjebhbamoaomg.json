{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fox Real-Time notifications",
  "description": "Notificaciones de escritorio",
  "manifest_version": 2,
  "version": "1.0.0",
  "background": {
    "persistent": true,
    "scripts": [
      "OneSignal.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Caldero Mankoo",
    "default_icon": "ring.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity",
    "webRequest",
    "*://*.foxdigitalstudio.co/"
  ],
  "icons": {
    "128": "ring.png"
  }
}
