{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "USMD Screen Sharing",
  "author": "usmddirect",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is developed for usmd patients to share screen for doctors.It is just for showing reports to usmd doctors.",
  "homepage_url": "https://doctoroncall24x7.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.doctoroncall24x7.com/*"
    ]
  },
  "icons": {
    "16": "3.png",
    "48": "1.png",
    "128": "2.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "2.png"
  ]
}
