{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YATM (Yet Another Tab Manager) 2.2",
  "description": "Preview, Rename, Reorder and Search for your tabs from a central location",
  "version": "2.2",
  "browser_action": {
    "default_icon": "png/icon16.png"
  },
  "icons": {
    "16": "png/icon16.png",
    "32": "png/icon32.png",
    "48": "png/icon48.png",
    "128": "png/icon128.png"
  },
  "background": {
    "scripts": [
      "src/utils.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
