{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BitX Ticker",
  "description": "This extension shows bitcoin ticker on major exchanges.",
  "version": "0.1.1",
  "permissions": [
    "http://data.mtgox.com/",
    "https://btc-e.com/",
    "http://campbx.com/",
    "https://coinbase.com/",
    "https://www.bitstamp.net/",
    "https://data.btcchina.com/",
    "https://www.okcoin.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
