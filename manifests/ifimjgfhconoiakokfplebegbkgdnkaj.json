{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HF PM Notifications",
  "short_name": "HF PM",
  "description": "This extension will store the given api key and will notify the user for their hackforum messages",
  "version": "1.2",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "small_icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "notifications",
    "https://hackforums.net/api/v1/inbox"
  ]
}
