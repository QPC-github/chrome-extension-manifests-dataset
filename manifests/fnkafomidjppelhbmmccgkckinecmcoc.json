{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hello Foundation Screen Sharing",
  "author": "pCapacity",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://www.thehellofoundation.com.",
  "homepage_url": "http://www.thehellofoundation.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.thehellofoundation.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
