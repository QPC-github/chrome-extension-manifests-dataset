{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Progressly: Integrated process management",
  "short_name": "Progressly: Integrated process management",
  "homepage_url": "https://progressly.com/",
  "description": "Avoid email overload while staying in the loop by installing the Progressly Chrome extension.",
  "version": "2.0.5",
  "icons": {
    "16": "images/icon-green.png",
    "48": "images/icon-green-48.png",
    "128": "images/icon-green-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-default.png",
    "default_popup": "popup.html",
    "default_title": "Progressly"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/lib/jquery-1.11.3.min.js",
      "js/configuration.js",
      "js/icon_manager.js",
      "js/popup_manager.js",
      "js/gcm_manager.js",
      "js/progressly_event.js",
      "js/gcm_listener.js"
    ]
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "gcm",
    "https://progressly.com/"
  ]
}
