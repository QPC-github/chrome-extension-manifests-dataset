{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PatchWorks",
  "version": "0.0.0.3",
  "description": "Evaluate bug fixes and enhancements for a web application, as soon as they exist, but before they are officially released.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "web_accessible_resources": [
    "fonts/*",
    "css/*"
  ]
}
