{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "fingool | فینگول",
  "version": "0.0.1",
  "description": "convert finglish to farsi",
  "homepage_url": "http://fingool.ir",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "فینگول",
    "default_icon": {
      "16": "assets/images/fingool-16.png",
      "32": "assets/images/fingool-32.png",
      "48": "assets/images/fingool-48.png",
      "128": "assets/images/fingool-128.png"
    }
  },
  "icons": {
    "16": "assets/images/fingool-16.png",
    "32": "assets/images/fingool-32.png",
    "48": "assets/images/fingool-48.png",
    "128": "assets/images/fingool-128.png"
  },
  "manifest_version": 2
}
