{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Virtual Dice Rolling",
  "description": "Roll virtual dice online. Select from 1 to 5 dice to play any game with out actually needing dice",
  "version": "1.0",
  "offline_enabled": false,
  "app": {
    "urls": [
      "http://freeonlinedice.com/#dice"
    ],
    "launch": {
      "web_url": "http://freeonlinedice.com/#dice"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "unlimitedStorage",
    "notifications"
  ]
}
