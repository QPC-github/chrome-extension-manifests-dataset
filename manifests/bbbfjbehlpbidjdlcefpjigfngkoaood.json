{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Catalog repaint",
  "description": "This extension changes the style of the Catalog",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "matches": [
        "https://catalog.inf.elte.hu/*"
      ]
    }
  ]
}
