{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Brisk Plan",
  "version": "0.1.0",
  "description": "Take screenshot.",
  "background": {
    "persistent": false,
    "scripts": [
      "background/background.js"
    ]
  },
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "browser_action": {
    "default_icon": "/images/camera.png",
    "default_title": "Take a screen shot!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "http://*/",
    "tabs",
    "notifications",
    "contextMenus",
    "*://*/*"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "/images/camera.png",
    "/images/Jcrop.gif",
    "/images/pixel.png",
    "/images/indicator@2x.png",
    "/images/pencil@2x.png",
    "/images/brush@2x.png",
    "/images/eraser@2x.png",
    "/images/rectangle@2x.png",
    "/images/oval@2x.png",
    "/images/type@2x.png",
    "/images/crop@2x.png",
    "/images/blur@2x.png",
    "/images/color@2x.png",
    "/images/save@2x.png",
    "/images/share@2x.png",
    "/images/remove@2x.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
