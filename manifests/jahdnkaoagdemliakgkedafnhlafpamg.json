{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "myON",
  "version": "0.13",
  "manifest_version": 2,
  "description": "With access to thousands of award-winning digital books, the myON app lets readers download titles for offline, anywhere reading.",
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "fullscreen",
    "http://m.myon.com/api/mobile/*",
    "http://books.myon.com/*",
    "http://d1juyyn599or3q.cloudfront.net/*",
    "http://assets.myon.com/*",
    "https://m.myon.com/api/mobile/*",
    "https://books.myon.com/*",
    "https://d1juyyn599or3q.cloudfront.net/*",
    "https://assets.myon.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.myon.com/*",
      "*://myon.com/*"
    ]
  }
}
