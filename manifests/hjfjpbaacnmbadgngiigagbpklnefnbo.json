{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "SoftVision Email helper",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "helps you create email messages for standard status emails, or release notes",
  "options_page": "email_helper.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "email_helper.html"
  },
  "icons": {
    "128": "icon.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "offline_enabled": true,
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
