{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Orphaned Resources",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Find Resources with Expired Domains While Browsing.",
  "homepage_url": "https://thehackerblog.com",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "96": "icons/icon96.png"
    },
    "default_title": "Orphaned Resources",
    "default_popup": "src/ba/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "96": "icons/icon96.png"
  },
  "content_security_policy": "object-src 'self'; script-src 'self' 'unsafe-eval'",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}
