{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Thematics",
  "version": "0.2.6.2",
  "manifest_version": 2,
  "homepage_url": "http://www.thematicsapp.com",
  "description": "Google Search Themes and Words Within The Text Your Select",
  "icons": {
    "128": "logo-1281.png"
  },
  "browser_action": {
    "default_icon": "logo-1281.png",
    "default_title": "Thematic"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "<all_urls>"
      ],
      "js": [
        "summarizer/underscore.js",
        "summarizer/summary.js",
        "js/lib/jquery.js",
        "readability.js",
        "rss/jquery.zrssfeed.js",
        "website.js",
        "overlay.js"
      ],
      "css": [
        "css/default.css",
        "fonts/icomoon.svg",
        "css/bootstrap.min.css",
        "css/component.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/lib/jquery.js",
      "js/lib/xregexp-all-min.js",
      "nlp/lda.js",
      "nlp/ngram.js",
      "js/lib/d3.v3.min.js",
      "js/click.js"
    ]
  },
  "web_accessible_resources": [
    "js/lib/jquery.min.js",
    "icomoon/fonts/*",
    "img/*"
  ],
  "minimum_chrome_version": "18",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "tabs",
    "<all_urls>",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/ajax/services/search/news?q="
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/services/search/news ; object-src 'self'"
}
