{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BoB - Comentários não lido",
  "version": "0.1",
  "description": "Navegação pelos comentários não lidos.",
  "permissions": [
    "browsingData",
    "activeTab",
    "tabs",
    "http://www.bolhabrasil.org/*",
    "https://www.bolhabrasil.org/*",
    "http://bolhabrasil.org/*",
    "https://bolhabrasil.org/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Envia um 'toggle-feature' para a extensão"
    }
  }
}
