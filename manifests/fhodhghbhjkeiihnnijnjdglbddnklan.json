{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Infochannel 365",
  "short_name": "Infochannel 365",
  "description": "Info Channel 365 is a web based digital signage solution for restaurants, schools, internal communications and retail.",
  "version": "1.0.6",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "Icon Info Channel 365 16x16.png",
    "48": "Icon Info Channel 365 48x48.png",
    "128": "Icon Info Channel 365 128x128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js",
        "jquery.js"
      ]
    }
  },
  "permissions": [
    "tabs",
    "browser",
    "storage",
    "videoCapture",
    "webview",
    "audio",
    "audioCapture",
    "desktopCapture",
    "http://*/*",
    "https://*/*",
    "fullscreen",
    "overrideEscFullscreen",
    "unlimitedStorage"
  ],
  "externally_connectable": {
    "matches": [
      "*://voip.imeeting365.com/*",
      "*://infochannel365.com/*",
      "*://infochannel365.blob.core.windows.net/*"
    ]
  }
}
