{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QST",
  "description": "Quote, Shorten, Tweet",
  "version": "1.0.2",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://api-ssl.bitly.com; object-src 'self'"
}
