{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bug Sniper",
  "version": "0.0.2",
  "description": "Fun game to snipe security bugs.",
  "icons": {},
  "browser_action": {
    "default_title": "Snipe some bugs!",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://code.google.com/p/bug-sniper",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "tts"
  ]
}
