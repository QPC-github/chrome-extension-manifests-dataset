{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Shutter",
  "manifest_version": 2,
  "version": "1.6.4",
  "description": "Save all your current open tabs. Keep them accessible, anywhere and all the time.",
  "omnibox": {
    "keyword": "snapshot"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "19": "icon19.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*.appspot.com/",
    "https://*.google.com/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
