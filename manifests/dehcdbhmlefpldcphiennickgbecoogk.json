{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XCP Search",
  "description": "Counterparty (XCP) related search (code, open issues, docs, forums, addresses, assets) in your Chrome context menu. No ads!",
  "version": "0.7",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "xcp-search16.png",
    "32": "xcp-search32.png",
    "48": "xcp-search48.png",
    "128": "xcp-search.png"
  },
  "permissions": [
    "contextMenus"
  ]
}
