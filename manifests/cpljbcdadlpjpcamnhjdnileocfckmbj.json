{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RNDM Radio",
  "version": "1.0",
  "description": "Deliver Emotions Randomly",
  "manifest_version": 2,
  "background": {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "permissions": [
    "http://random-fm.ru:8000/"
  ],
  "web_accessible_resources": [
    "img/*"
  ]
}
