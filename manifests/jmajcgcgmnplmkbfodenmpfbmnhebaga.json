{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Healthy Social Media",
  "version": "1.3.6",
  "description": "Reduce addictive and neurotic aspects of social media.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "js": [
        "settings_reader.js",
        "jquery-3.3.1.min.js",
        "sites/reddit.js"
      ],
      "css": [
        "sites/reddit.css"
      ]
    },
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "settings_reader.js",
        "jquery-3.3.1.min.js",
        "sites/twitter.js"
      ],
      "css": [
        "sites/twitter.css"
      ]
    },
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "settings_reader.js",
        "jquery-3.3.1.min.js",
        "sites/facebook.js"
      ],
      "css": [
        "sites/facebook.css"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "settings_reader.js",
        "jquery-3.3.1.min.js",
        "sites/youtube.js"
      ],
      "css": [
        "sites/youtube.css"
      ]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
