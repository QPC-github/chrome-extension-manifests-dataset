{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gaia Online Friends",
  "version": "0.8.1",
  "manifest_version": 2,
  "description": "See who is online right now among your friends at Gaia Online.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Gaia Online Friends",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    "icon48.png"
  ],
  "permissions": [
    "tabs",
    "notifications",
    "http://www.gaiaonline.com/",
    "https://www.gaiaonline.com/"
  ],
  "optional_permissions": [
    "background"
  ]
}
