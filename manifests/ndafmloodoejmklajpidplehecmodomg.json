{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Learnta Screen Capture",
  "version": "1.0",
  "description": "A extension of CatchVideo for learnta.com",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "desktopCapture"
  ],
  "icons": {
    "48": "img/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
