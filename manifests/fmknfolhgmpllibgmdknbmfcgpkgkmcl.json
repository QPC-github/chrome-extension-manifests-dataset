{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MusicSpider",
  "description": "Search and listen to music while browsing",
  "version": "2.1.1",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
