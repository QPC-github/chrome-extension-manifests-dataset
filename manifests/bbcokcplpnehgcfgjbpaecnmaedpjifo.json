{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OWA User-Agent",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Allow the full version of Outlook Web Access (OWA) to be used in Chrome/Chromium in Linux, FreeBSD, and OSX.",
  "homepage_url": "https://github.com/jamiesonbecker/owa-user-agent/",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/owa/*,*://*/OWA/*",
    "tabs"
  ]
}
