{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Notepad Online",
  "version": "1.9.0",
  "description": "A simple online notepad that can sync between devices, edit notes as text (.txt) and HTML, save notes to your computer and more.",
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "web/*"
  ],
  "manifest_version": 2
}
