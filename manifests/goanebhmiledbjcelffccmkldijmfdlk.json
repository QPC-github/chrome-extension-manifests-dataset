{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OpenTok Screen Sharing",
  "author": "Minh hy.",
  "version": "2.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://tokbox.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://localhost/*",
      "https://dojo-staging.herokuapp.com/*",
      "https://dojo-pro.herokuapp.com/*",
      "https://community.innovationdojo.com.au/*",
      "https://192.168.1.14/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
