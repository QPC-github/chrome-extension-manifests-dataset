{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KeetMeet Desktop Sharing Extension",
  "description": "A simple extension that allows you to stream your desktop into meetings with Keet Meet.",
  "version": "0.2.0",
  "minimum_chrome_version": "0.1.0",
  "icons": {
    "16": "16x16-logo.png",
    "48": "48x48-logo.png",
    "128": "128x128-logo.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://inochimaru.io/*"
    ]
  }
}
