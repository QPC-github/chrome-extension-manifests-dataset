{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Clout Cleanse",
  "version": "0.0.3",
  "description": "Cleanse out the clout by removing stats from social media",
  "manifest_version": 2,
  "permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.twitter.com/*",
    "https://twitter.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "https://www.twitter.com/*",
        "https://twitter.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}
