{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Annofy",
  "version": "0.3.4",
  "manifest_version": 2,
  "description": "The worldâ€™s first image social network designed to help you connect, discover and talk through images",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_title": "Annofy"
  },
  "background": {
    "scripts": [
      "scripts/annofy_background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://*/*tbm=isch*",
        "https://www.annofy.com/*"
      ],
      "js": [
        "scripts/jquery-1.8.2.min.js",
        "scripts/AnnofyFinalScript.js",
        "scripts/AnnofyCommentScript.js",
        "scripts/login.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "images/icon-30.png",
    "images/loading.gif",
    "css/annofy_css.css",
    "css/AnnofyBox.css",
    "scripts/AnnofyFinalScript.js",
    "scripts/jquery-1.8.2.min.js",
    "scripts/AnnofyCommentScript.js",
    "scripts/login.js",
    "css/Metro.woff"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "cookies"
  ]
}
