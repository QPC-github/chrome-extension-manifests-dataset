{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ad Adder",
  "short_name": "Ad Adder",
  "version": "1.0.10",
  "manifest_version": 2,
  "homepage_url": "https://www.ad-adder.com/",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "*://*.geoplugin.com/*"
  ],
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "exclude_globs": [
        "*://mail.google.com/*",
        "mail.google.com",
        "https://mail.google.com",
        "http://mail.google.com"
      ],
      "run_at": "document_idle"
    },
    {
      "all_frames": false,
      "js": [
        "signup.js"
      ],
      "matches": [
        "*://*.ad-adder.com/signup/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "author": "Ron Bentata",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon76.png"
    },
    "default_title": "Ad Adder"
  }
}
