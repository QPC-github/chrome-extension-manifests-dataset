{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "description": "A simple extension that allows you to stream your desktop in JumpChat.",
  "externally_connectable": {
    "matches": [
      "*://jumpch.at/*",
      "*://stage.jumpch.at/*",
      "*://local.jumpch.at/*",
      "*://jump.chat/*",
      "*://stage.jump.chat/*",
      "*://local.jump.chat/*"
    ]
  },
  "icons": {
    "128": "logo-128x128.png",
    "16": "logo-16x16.png",
    "48": "logo-48x48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "JumpChat Desktop Capture",
  "permissions": [
    "desktopCapture"
  ],
  "version": "0.2"
}
