{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Project Centurion AG",
  "description": "Project Centurion AG",
  "version": "2.0",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://store.steampowered.com/join/",
    "https://projectcenturion.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/join/"
      ],
      "js": [
        "injected.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png"
  }
}
