{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SpecPage Bitrix Time Tracking",
  "description": "This extension allows the user to add elapsed time to tasks.",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "16": "images/TTIcon16.png",
      "24": "images/TTIcon24.png",
      "32": "images/TTIcon32.png",
      "48": "images/TTIcon48.png",
      "128": "images/TTIcon128.png"
    },
    "default_popup": "popupTimeTracking.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "<all_urls>",
    "https://crm.specpage.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com; object-src 'self'"
}
