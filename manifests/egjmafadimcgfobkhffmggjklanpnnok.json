{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Slader TV Live",
  "author": "Slader TV Live",
  "description": "Application de Slader, affiche un icone vert/rouge lors de live ou non. Affichage d'un lecteur en temps r√©el.",
  "version": "1.8.4",
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "Slader TV",
    "default_popup": "index.html"
  },
  "icons": {
    "64": "img/64.png"
  },
  "background": {
    "scripts": [
      "js/twitchalert.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "alarms",
    "https://*/*",
    "https://*/*",
    "http://*/*",
    "tabs",
    "notifications",
    "https://youtube.com/user/micka69250",
    "https://www.twitch.tv/mickagamer",
    "https://api.twitch.tv/"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js object-src 'self'"
}
