{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Imageye - Image downloader",
  "short_name": "Imageye",
  "description": "Find and download all images on a web page.",
  "version": "1.5.0",
  "browser_action": {
    "default_icon": "imageye128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "file://*/*",
    "http://*/*",
    "https://*/*",
    "downloads",
    "storage"
  ],
  "icons": {
    "128": "imageye128.png"
  }
}
