{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FiestaBonus Кешбэк",
  "short_name": "FiestaBonus",
  "description": "Часто делаешь покупки в Интернете? Включай кешбэк в самых популярных интернет-магазинах и получай часть денег обратно!",
  "version": "1.1",
  "icons": {
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": [
      "background.min.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "background",
    "cookies",
    "storage",
    "system.storage",
    "tabCapture",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_title": "FiestaBonus Кешбэк",
    "default_icon": "images/icon_16.png",
    "default_popup": "popup.html"
  }
}
