{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weather Tab",
  "short_name": "WeatherTab",
  "homepage_url": "https://timleland.com/weathertab/",
  "version": "0.13",
  "description": "Replace new tab page with the weather.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "unlimitedStorage",
    "geolocation",
    "notifications"
  ]
}
