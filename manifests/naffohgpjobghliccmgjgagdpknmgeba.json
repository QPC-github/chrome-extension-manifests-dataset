{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Anti-bar",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Removes black bar on top of Google.com, Gmail, and most Google apps.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "http://*.google.com/*"
      ],
      "js": [
        "jquery.js",
        "antibar.js"
      ]
    }
  ],
  "minimum_chrome_version": "17"
}
