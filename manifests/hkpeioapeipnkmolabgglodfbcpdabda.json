{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tektriks Search",
  "description": "Quick search Tektriks website",
  "version": "1.0.0",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://tektriks.com/*",
        "https://*.fontawesome.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "popup.js"
      ]
    }
  ]
}
