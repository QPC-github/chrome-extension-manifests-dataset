{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Soond",
  "description": "Send email simply.",
  "version": "4.4",
  "background": {
    "scripts": [
      "event.js",
      "lib/base64.js",
      "lib/jquery.js"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      }
    }
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "icons": {
    "16": "images/icon3.png",
    "48": "images/icon3.png",
    "128": "images/icon3.png"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "notifications",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "storage",
    "contextMenus",
    "<all_urls>",
    "activeTab",
    "*://*/*",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "images/soond-header.png",
    "images/soond-header-120.png",
    "options.html"
  ]
}
