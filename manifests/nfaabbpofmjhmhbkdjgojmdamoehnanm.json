{
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "19.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "jquery.min.js",
        "bgs.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "description": "Pagina de Downloads",
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png"
  },
  "manifest_version": 2,
  "name": "Controle de Downloads",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1"
}
