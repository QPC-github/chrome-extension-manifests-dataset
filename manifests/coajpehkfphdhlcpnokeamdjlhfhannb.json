{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AutoRefresh",
  "description": "Keeps tabs refreshed!",
  "version": "1.2",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "refresh.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  }
}
