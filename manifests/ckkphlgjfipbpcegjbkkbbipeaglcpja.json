{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Easy Email Scraper",
  "description": "This extension will scrape emails from websites.",
  "version": "1.4",
  "browser_action": {
    "default_title": "Easy Email Scraper",
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
