{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cordchat Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Cordchat.",
  "version": "1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.cordchat.com/*"
    ]
  }
}
