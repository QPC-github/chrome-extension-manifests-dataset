{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TTG Code",
  "description": "Makes the code on TTG look a little better.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon-no-128.png",
    "default_popup": "index.html",
    "default_title": "Better Code for TTG"
  },
  "background": {
    "scripts": [
      "popup.js"
    ]
  },
  "icons": {
    "16": "icon-no-16.png",
    "48": "icon-no-48.png",
    "128": "icon-no-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.thetechgame.com/*",
        "http://www.thetechgame.com/*",
        "https://thetechgame.com/*",
        "http://thetechgame.com/*"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "main.css",
    "FiraCode-Regular.ttf"
  ]
}
