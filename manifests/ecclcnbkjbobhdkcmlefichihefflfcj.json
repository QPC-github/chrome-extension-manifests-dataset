{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Zen Reader",
  "version": "3.5",
  "author": "PolarToCartesian",
  "description": "Zen Reader is a free and open source browser extension which makes the web more accesible.",
  "homepage_url": "https://github.com/PolarToCartesian/Zen-Reader",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "other/browser_compatibility_api.js",
        "content_scripts/js/addCssVariables.js",
        "content_scripts/js/fontScale.js"
      ],
      "css": [
        "content_scripts/css/general.css"
      ]
    },
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.google.fr/*"
      ],
      "css": [
        "content_scripts/css/google.css"
      ]
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": [
        "content_scripts/css/gmail.css"
      ]
    },
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "css": [
        "content_scripts/css/youtube.css"
      ]
    },
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "content_scripts/css/github.css"
      ]
    }
  ],
  "background": {
    "page": "background_scripts/index.html"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup/index.html"
  },
  "applications": {
    "gecko": {
      "id": "zen@read.er"
    }
  },
  "web_accessible_resources": [
    "content_scripts/js/addCssVariables.js",
    "content_scripts/js/fontScale.js",
    "content_scripts/css/general.js",
    "content_scripts/css/general.css"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
