{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "KrowdAds",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "The power of AI unleashed with advantage of crowd making your online store marketing easier, cheaper and effective.",
  "homepage_url": "https://www.krowdads.com/",
  "icons": {
    "16": "icons/16X16.png",
    "19": "icons/19X19.png",
    "48": "icons/48X48.png",
    "128": "icons/128X128.png"
  },
  "background": {
    "scripts": [
      "bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "",
  "browser_action": {
    "default_icon": {
      "16": "icons/16X16_dis.png",
      "19": "icons/19X19_dis.png",
      "48": "icons/48X48_dis.png",
      "128": "icons/128X128_dis.png"
    },
    "default_title": "Options",
    "default_popup": "popup/default.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "history",
    "notifications",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "https://*.facebook.com/*",
    "https://*.krowdads.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.facebook.com/adsmanager/manage*",
        "https://www.facebook.com/products"
      ],
      "css": [
        "inject/inject.css"
      ],
      "js": [
        "inject/jquery.min.js",
        "inject/inject.js"
      ],
      "run_at": "document_end"
    },
    {
      "css": [
        "inject/inject.css"
      ],
      "js": [
        "inject/jquery.min.js",
        "inject/employeeInfo.js",
        "inject/inject.js"
      ],
      "matches": [
        "https://www.facebook.com/",
        "https://www.facebook.com/adsmanager/creation*"
      ],
      "run_at": "document_end"
    },
    {
      "css": [
        "inject/inject.css"
      ],
      "js": [
        "inject/jquery.min.js",
        "inject/uploadCatelog.js",
        "inject/inject.js"
      ],
      "matches": [
        "https://www.facebook.com/products/catalogs*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "icons/16X16.png",
    "icons/19X19.png",
    "icons/48X48.png",
    "icons/128X128.png",
    "icons/addy_small_krowdAds.jpg",
    "icons/close.png",
    "icons/addy_tiny_krowdAds.gif",
    "icons/Addy_KrowdAds.gif",
    "icons/icon-import-success.png",
    "icons/icon-import-error.png",
    "icons/icon-close.png"
  ]
}
