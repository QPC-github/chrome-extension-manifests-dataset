{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HelloTalk Web",
  "short_name": "HelloTalk",
  "manifest_version": 2,
  "version": "1.0.3",
  "description": "Say hello to your HelloTalk friends on Mac or PC - learn a language by chatting with native speakers around the world.",
  "browser_action": {
    "default_icon": "img/favicon-512x512.png",
    "default_title": "HelloTalk"
  },
  "icons": {
    "16": "img/favicon-512x512.png",
    "48": "img/favicon-512x512.png",
    "128": "img/favicon-512x512.png"
  },
  "permissions": [
    "notifications",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
