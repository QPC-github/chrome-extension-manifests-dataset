{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "StockBeacon",
  "version": "1.0.0",
  "description": "股票灯塔插件，新一代智能炒股神器，实时查看自己的自选股，智能盯盘，成为您的智能炒股小伙伴！",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "股票灯塔",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://sec.wedengta.com/",
    "https://sec.wedengta.com/",
    "https://www.wedengta.com/",
    "https://res.idtcdn.com/"
  ],
  "homepage_url": "https://www.wedengta.com",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "default_locale": "zh_CN"
}
