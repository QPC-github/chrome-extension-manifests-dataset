{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "XPERTyme Screen Sharing",
  "author": "XPERTyme GmbH",
  "version": "2.6",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension enables you to share your screen during a video-consultation session.",
  "homepage_url": "https://www.xpertyme.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.xpertyme.com/*",
      "https://*.xpertyme.de/*",
      "https://*.medityme.com/*",
      "https://*.medityme.de/*",
      "https://*.footballtyme.com/*",
      "https://experten.agrarheute.com/*",
      "https://videosprechstunde.preventicum.de/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
