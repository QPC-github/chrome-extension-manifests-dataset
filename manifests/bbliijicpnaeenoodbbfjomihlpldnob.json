{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Spanish Translator",
  "short_name": "Spanish Translator",
  "description": "It helps you translate English to Spanish and Spanish to English for free.",
  "version": "1.2",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
