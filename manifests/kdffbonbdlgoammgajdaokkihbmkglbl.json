{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "KeepScore - AFL",
  "short_name": "KeepScore",
  "version": "2.2.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": false
    }
  },
  "description": "Australian Rules Football Scorecard.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "minimum_chrome_version": "42",
  "author": "Adrian Panazzolo",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "offline_enabled": true
}
