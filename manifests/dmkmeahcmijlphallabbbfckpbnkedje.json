{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Calltext Video Screen sharing",
  "description": "An extension to allow you to use Video screen sharing on calltext.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://ct1292.calltext.com/*",
      "*://staging.calltext.com/*",
      "*://*.calltext.com/*"
    ]
  },
  "page_action": {
    "default_icon": {
      "16": "sheildblack.png",
      "32": "sheildblack.png",
      "48": "sheildblack.png",
      "128": "sheildblack.png"
    }
  },
  "permissions": [
    "desktopCapture"
  ]
}
