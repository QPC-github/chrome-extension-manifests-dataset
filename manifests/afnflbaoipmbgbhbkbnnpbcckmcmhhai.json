{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Steadfast - BitBucket Diff - Plus and Minus",
  "description": "On BitBucket Code Diff Page, disable selecting on the plus and minus signs. EXTREMELY helpful for copying code around.",
  "version": "1.0.1",
  "background": {
    "persistent": false,
    "scripts": [
      "framework/log.js",
      "background/main.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://bitbucket.org/*"
      ],
      "js": [
        "framework/log.js",
        "libs/jquery/jquery.js",
        "content/scripts/config.js",
        "content/scripts/common.js",
        "content/scripts/custom.js"
      ],
      "css": []
    }
  ],
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "Steadfast - BitBucket Diff - Plus and Minus"
  },
  "icons": {
    "128": "images/logo.png",
    "16": "images/logo.png",
    "48": "images/logo.png"
  },
  "permissions": [
    "webNavigation",
    "activeTab",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "content/*",
    "css/*",
    "images/*",
    "lib/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
