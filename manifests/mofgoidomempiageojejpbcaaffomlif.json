{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Apple Communication Ltd. -  IIG",
  "description": "Share your desktop over - Apple Communication Ltd - IIG",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "apple-logo-16x16.png",
    "48": "apple-logo-48x48.png",
    "128": "apple-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://live.apple.net.bd/*"
    ]
  }
}
