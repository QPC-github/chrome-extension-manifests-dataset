{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tropical Islands Wallpapers HD Themes",
  "short_name": "TropicalIslands",
  "manifest_version": 2,
  "version": "1.0.1",
  "description": "The most beautiful Tropical Islands images to take you out of your routine! ",
  "icons": {
    "16": "images/icons/16x16.png",
    "64": "images/icons/64x64.png",
    "128": "images/icons/128x128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "cookies",
    "tabs",
    "unlimitedStorage",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "management"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "scripts/sitecontent.js"
      ],
      "match_about_blank": true,
      "matches": [
        "*://*.tabzmania.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "redirect.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://ajax.googleapis.com; object-src 'self'"
}
