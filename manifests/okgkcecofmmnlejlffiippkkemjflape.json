{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Распознавание голосовых сообщений ВКонтакте",
  "short_name": "Voice2Text VK",
  "permissions": [
    "storage",
    "*://*.vk.com/*",
    "*://asr.yandex.net/*",
    "*://*.vk.me/*",
    "*://*.userapi.com/*"
  ],
  "description": "Расширение распознает голосовые сообщения ВКонтакте и пишет текст под ним.",
  "version": "2.3",
  "incognito": "split",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Распознавание голосовых сообщений ВКонтакте",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://vk.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "vk.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2
}
