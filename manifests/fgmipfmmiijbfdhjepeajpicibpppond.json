{
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "description": "Stop colorful favicon from sites distract you. If you want to focus on your work tabs just turn it on.",
  "icons": {
    "128": "icons/icon.png"
  },
  "manifest_version": 2,
  "name": "Distract favicons",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1"
}
