{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HSBC CSV File Creator",
  "version": "2",
  "description": "Creates a CSV statement file from a HSBC account page",
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
