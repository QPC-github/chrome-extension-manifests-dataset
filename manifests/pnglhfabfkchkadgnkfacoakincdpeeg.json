{
  "manifest_version": 2,
  "version": "1.6.1",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "content_scripts": [
    {
      "js": [
        "js/index.js"
      ],
      "matches": [
        "*://*.strava.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "offline_enabled": false,
  "permissions": [
    "*://*.strava.com/*",
    "downloads"
  ],
  "icons": {
    "128": "i/128.png",
    "256": "i/256.png"
  },
  "browser_action": {
    "default_icon": "i/128.png"
  },
  "update_url": "http://clients2.google.com/service/update2/crx"
}
