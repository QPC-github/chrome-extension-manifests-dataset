{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YouTube Mini Player",
  "short_name": "yt-mini",
  "version": "0.1",
  "description": "Extends YouTube.com with mini video player.",
  "author": "Stephen A. Clark",
  "homepage_url": "http://sclark.io#yt-mini",
  "icons": {
    "128": "icon128.png",
    "512": "icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.youtube.com/*",
        "http://youtube.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
