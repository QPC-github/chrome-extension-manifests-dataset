{
  "name": "wx文章一键加干扰码(酷小子)",
  "version": "1.2",
  "manifest_version": 2,
  "description": "使用本插件，可以一键在微信文章中加隐藏的文字，躲过原创检测，防止别人复制。 Bug 提交：https://www.zuixiaopin.com/ly",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "page": "bg.html"
  },
  "permissions": [
    "https://*/*"
  ],
  "homepage_url": "http://www.44886.com",
  "browser_action": {
    "default_title": "微信文章一键加干扰码",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mp.weixin.qq.com/cgi-bin/*"
      ],
      "css": [],
      "js": [
        "js/jquery.min.js",
        "js/js.js"
      ]
    }
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
