{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PDF Meta-data",
  "description": "Displays pdf meta-data fields when viewing a pdf doc.",
  "version": "0.2",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "PDF Meta-data",
    "default_popup": "metadata.html"
  },
  "manifest_version": 2
}
