{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Drivel",
  "version": "0.0.0.3",
  "description": "A unique group chat on every webpage",
  "browser_action": {
    "default_icon": "images/chat_128.png",
    "default_title": "MyStyle"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "mystyle.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-3.3.1.min.js"
      ],
      "css": [
        "mystyle.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "images/chat_128.png"
  }
}
