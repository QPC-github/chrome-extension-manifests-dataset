{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "知乎提醒",
  "description": "这是一个专门针对知乎的消息提醒扩展插件。",
  "version": "1.1",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-2.1.0.min.js",
      "js/socket.io.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "知乎",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.zhihu.com/"
  ]
}
