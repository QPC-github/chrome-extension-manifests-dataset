{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Chat Hint",
  "author": "Ramil Kharisov & Adel Valeev",
  "version": "0.2.1",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "css": [
        "/static/css/main.css"
      ],
      "js": [
        "/static/js/main.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "icons": {
    "32": "icon_32px.png",
    "48": "icon_48px.png",
    "128": "icon_128px.png"
  }
}
