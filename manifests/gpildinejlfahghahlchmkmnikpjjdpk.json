{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "rackit",
  "description": "A Google Chrome Extension for notifying users about price drops.",
  "version": "1.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "page": "/app/background.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png",
    "css/content-script.css"
  ]
}
