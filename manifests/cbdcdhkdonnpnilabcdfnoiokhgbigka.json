{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PushAll",
  "description": "Chrome PushAll Client",
  "manifest_version": 2,
  "version": "1.5",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "pushall.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "gcm",
    "tabs",
    "storage",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "512": "pushall.png",
    "128": "gcm_128.png"
  }
}
