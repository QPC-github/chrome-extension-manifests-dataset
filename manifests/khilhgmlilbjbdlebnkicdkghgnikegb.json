{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OfficeTroops Candidate Scout",
  "version": "1.5",
  "description": "The OfficeTroops extension for capturing candidate data.",
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/OT_favicon.png",
      "32": "images/OT_favicon.png",
      "48": "images/OT_favicon.png",
      "128": "images/OT_favicon.png"
    }
  },
  "icons": {
    "16": "images/OT_favicon.png",
    "32": "images/OT_favicon.png",
    "48": "images/OT_favicon.png",
    "128": "images/OT_favicon.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js; object-src 'self'",
  "manifest_version": 2
}
