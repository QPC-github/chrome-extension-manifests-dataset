{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Optimum Talent Job Tracker",
  "version": "5.72.2",
  "description": "Track applications across the web with this plugin from Optimum Talent brought to you by CareerJSM",
  "homepage_url": "https://optimum.careerjsm.com",
  "default_locale": "en",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Optimum Talent",
    "default_icon": {
      "19": "icons/icon19bw.png",
      "38": "icons/icon38bw.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E",
        "linux": "Ctrl+Shift+E"
      },
      "description": "Toggles the sidebar"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "sidebar.html",
    "cornerCard.html",
    "cornerCard.css",
    "sidebar.css",
    "_locales/**"
  ],
  "content_scripts": [
    {
      "js": [
        "sidebarContentScript.bundle.js"
      ],
      "all_frames": true,
      "matches": [
        "*://*.stillingsok.nav.no/*",
        "*://*.finn.no/job/fulltime/ad*",
        "*://*.seek.com.au/*",
        "*://*.careerbeacon.com/en/job/*",
        "*://*.careerbeacon.com/fr/emplois/*",
        "*://*.workopolis.com/jobsearch/job/*",
        "*://*.indeed.com/cmp/*/jobs/*",
        "*://*.indeed.ca/cmp/*/jobs/*",
        "*://*.indeed.com/job/*",
        "*://*.indeed.ca/job/*",
        "*://*.indeed.com/jobs?*",
        "*://*.indeed.ca/jobs?*",
        "*://*.indeed.com/*-jobs-in-*",
        "*://*.indeed.ca/*-jobs-in-*",
        "*://*.google.ca/search?*;jobs*",
        "*://*.google.com/search?*;jobs*",
        "*://angel.co/*/jobs/*",
        "*://*.careerbuilder.ca/jobs/*",
        "*://*.findatruckerjob.com/jobs/*",
        "*://*.linkedin.com/*",
        "*://jobview.monster.com/*",
        "*://jobview.monster.ca/*",
        "*://job-openings.monster.com/*",
        "*://job-openings.monster.ca/*",
        "*://*.monster.ca/jobs/search/?q=*",
        "*://*.icims.com/jobs/*",
        "*://*.michaelpage.ca/job-detail/*",
        "*://*.glassdoor.ca/Job/*",
        "*://*.glassdoor.com/Job/*",
        "*://accenturecareers.jobs/*/job/*",
        "*://*.jobbank.gc.ca/jobposting.do*",
        "*://*.torontojobs.ca/display-job/*",
        "*://*.ziprecruiter.com/jobs/*",
        "*://*.ziprecruiter.com/c/*",
        "*://*.beyond.com/jobs/search?id*",
        "*://*.saskjobs.ca/jsp/joborder/detail.jsp?job_order_id=*",
        "*://*.workbc.ca/*jobid=*",
        "*://authenticjobs.com/jobs/*",
        "*://*.usajobs.gov/GetJob/ViewDetails/*",
        "*://*.dice.com/jobs/detail/*",
        "*://careers.jobscore.com/careers/jobscore/jobs/*",
        "*://*.looksharp.com/organizations/*/listings/*",
        "*://jobs.lever.co/*",
        "*://*.indeed.ca/viewjob?*",
        "*://*.indeed.com/viewjob?*",
        "*://*.stackoverflow.com/jobs/*/*",
        "*://*.vagas.com.br/vagas/*/*",
        "*://*.neuvoo.com/view/*id=*",
        "*://neuvoo.ca/view/*id=*"
      ],
      "exclude_matches": [
        "*://www.gstatic.com/recaptcha/*",
        "*://www.google.com/recaptcha/*",
        "*://s7.addthis.com/*",
        "*://jdn.monster.com/*",
        "*://olm.monster.com/*",
        "*://*.demdex.net/*",
        "*://*.youtube.com/*",
        "*://assets.adobedtm.com/*",
        "*://static.licdn.com/*",
        "*://*.cedexis.com/*",
        "*://*.googlesyndication.com/*",
        "*://*.doubleclick.net/*",
        "*://*.rubiconproject.com/*",
        "*://*.chango.com/*",
        "*://*.craigslist.ca/*",
        "*://*.criteo.com/*",
        "*://*.sharethis.com/*",
        "*://*.facebook.com/*",
        "*://*.adtechus.com/*",
        "*://*.recruitics.com/*",
        "*://*.weather.ca/*",
        "*://platform.twitter.com/*",
        "*://*.quantcast.com/*",
        "*://*.rlcdn.com/*",
        "*://secure.jdn.monster.com/*",
        "*://*.retargeter.com/*",
        "*://*.crsspxl.com/*",
        "*://*.cloudfront.net/*",
        "*://apply.indeed.com/*",
        "*://about.zoosk.com/*",
        "*://pixel.appcast.io/*",
        "*://corp.support.com/*",
        "*://*.sacredheartcs.org/*",
        "*://pixel.mathtag.com/*",
        "*://*.burstbeacon.com/*",
        "*://*.burstnet.com/*",
        "*://*.afternic.com/*",
        "*://stags.bluekai.com/*",
        "*://disqus.com/embed/*",
        "*://*.greenhouse.io/embed*",
        "*://*.looksharp.com/check_session",
        "*://*.issuu.com/*",
        "*://ad2.cdns.turn.com/*",
        "*://*.adnxs.com/*",
        "*://*.a3cloud.net/*",
        "*://*.googletagmanager.com/*",
        "*://*.demex.net/*",
        "*://*.googleapis.com/*",
        "*://accounts.google.com/*",
        "*://*.jometer.com/*",
        "*://clickmeter.com/*",
        "*://*.clickmeter.com/*",
        "*://*.jdn.monster.com/*",
        "*://*.indeed.com/viewjob?viewtype=embedded*"
      ]
    },
    {
      "matches": [
        "*://*.stillingsok.nav.no/*",
        "*://*.finn.no/job/fulltime/ad*",
        "*://*.seek.com.au/*",
        "*://*.careerbeacon.com/en/job/*",
        "*://*.careerbeacon.com/fr/emplois/*",
        "*://*.workopolis.com/jobsearch/job/*",
        "*://*.indeed.com/cmp/*/jobs/*",
        "*://*.indeed.ca/cmp/*/jobs/*",
        "*://*.indeed.com/job/*",
        "*://*.indeed.ca/job/*",
        "*://*.indeed.com/jobs?*",
        "*://*.indeed.ca/jobs?*",
        "*://*.indeed.com/*-jobs-in-*",
        "*://*.indeed.ca/*-jobs-in-*",
        "*://*.google.ca/search?*;jobs*",
        "*://*.google.com/search?*;jobs*",
        "*://angel.co/*/jobs/*",
        "*://*.careerbuilder.ca/jobs/*",
        "*://*.findatruckerjob.com/jobs/*",
        "*://*.linkedin.com/*",
        "*://job-openings.monster.com/*",
        "*://job-openings.monster.ca/*",
        "*://jobview.monster.com/*",
        "*://jobview.monster.ca/*",
        "*://*.monster.ca/jobs/search/?q=*",
        "*://*.icims.com/jobs/*",
        "*://*.michaelpage.ca/job-detail/*",
        "*://*.glassdoor.ca/Job/*",
        "*://*.glassdoor.com/Job/*",
        "*://accenturecareers.jobs/*/job/*",
        "*://*.jobbank.gc.ca/jobposting.do*",
        "*://*.torontojobs.ca/display-job/*",
        "*://*.ziprecruiter.com/jobs/*",
        "*://*.ziprecruiter.com/c/*",
        "*://*.beyond.com/jobs/search?id*",
        "*://*.saskjobs.ca/jsp/joborder/detail.jsp?job_order_id=*",
        "*://*.workbc.ca/*jobid=*",
        "*://authenticjobs.com/jobs/*",
        "*://*.usajobs.gov/GetJob/ViewDetails/*",
        "*://*.dice.com/jobs/detail/*",
        "*://careers.jobscore.com/careers/jobscore/jobs/*",
        "*://*.looksharp.com/organizations/*/listings/*",
        "*://jobs.lever.co/*",
        "*://*.indeed.ca/viewjob?*",
        "*://*.indeed.com/viewjob?*",
        "*://*.stackoverflow.com/jobs/*/*",
        "*://*.vagas.com.br/vagas/*/*",
        "*://neuvoo.ca/view/*id=*"
      ],
      "js": [
        "cornerCardContentScript.bundle.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://staging-optimum.careerjsm.com/*",
        "*://optimum.careerjsm.com/*",
        "*://optimum.localhost/*"
      ],
      "all_frames": true,
      "js": [
        "flag.bundle.js"
      ]
    }
  ],
  "permissions": [
    "*://*/*",
    "tabs",
    "storage"
  ]
}
