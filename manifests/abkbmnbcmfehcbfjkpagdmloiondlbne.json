{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LiquidVoice PCI",
  "description": "Browser extension to extend LiquidVoice Automatic PCI DSS functionality",
  "version": "1.5",
  "icons": {
    "48": "lvicon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lv.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "lvicon.png"
    }
  }
}
