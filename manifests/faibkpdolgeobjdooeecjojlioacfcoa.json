{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Alustadh Institute Screenshare",
  "author": "Alustadh",
  "version": "0.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to Alustadh Institute meetings.",
  "homepage_url": "https://alustadh.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.big.learnarabic.co/*",
      "*://*.class.alustadh.com/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
