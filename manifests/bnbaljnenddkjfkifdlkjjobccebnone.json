{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chorus for IBM Verse",
  "description": "Displays the number of unread messages in your IBM Verse inbox and also provides advanced notification popups.",
  "version": "2.0",
  "permissions": [
    "tabs",
    "idle",
    "alarms",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "background",
    "tabs",
    "notifications"
  ],
  "omnibox": {
    "keyword": "v"
  },
  "icons": {
    "8": "chorus.png",
    "12": "chorus.png",
    "16": "chorus.png",
    "48": "chorus.png"
  },
  "browser_action": {
    "default_title": "Open IBM Verse",
    "default_icon": "icon.png"
  },
  "commands": {
    "open_verse": {
      "suggested_key": {
        "default": "Alt+V",
        "mac": "Alt+V"
      },
      "description": "Open IBM Verse"
    },
    "open_calendar": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Open calendar"
    },
    "refresh_counter": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Refresh counter and check for new mail"
    },
    "compose_mail": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Alt+Shift+V"
      },
      "description": "Open IBM Verse and compose new mail"
    }
  },
  "background": {
    "persistent": true,
    "scripts": [
      "jquery-2.1.4.min.js",
      "sha.js",
      "background.js"
    ]
  },
  "options_page": "options.html",
  "manifest_version": 2
}
