{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Water Walk",
  "description": "A super cool anti-sedentary reminder",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Water Walk",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
