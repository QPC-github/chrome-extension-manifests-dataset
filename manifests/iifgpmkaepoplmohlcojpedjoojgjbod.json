{
  "name": "AweSci - Science Everyday",
  "description": "AweSci.com is a one-man science magazine where you can learn one new thing everyday - no more, no less.",
  "browser_action": {
    "default_icon": "iconxs.png",
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "AweSci - Science Everyday",
    "default_popup": "awesci.html"
  },
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "version": "0.2"
}
