{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "19.png"
    }
  },
  "description": "Instant Download button to the download page",
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png"
  },
  "manifest_version": 2,
  "name": "Instant Download",
  "permissions": [
    "tabs",
    "notifications",
    "storage"
  ],
  "version": "2.0"
}
