{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "offline_enabled": true,
  "short_name": "gesture-based-scroll",
  "name": "Gesture Based Scroll (Using AI)",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "data/content_script/icons/*"
  ],
  "homepage_url": "https://mybrowseraddon.com/gesture-based-scroll.html",
  "description": "Scroll a page with hand gestures via your computer's camera!",
  "browser_action": {
    "default_title": "Gesture Based Scroll (Using AI)",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
