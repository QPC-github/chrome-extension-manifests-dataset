{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "右键先生-百度搜索",
  "short_name": "右键百度搜索",
  "description": "在右键菜单添加百度文字和图片搜索功能。与全家桶式右键扩展不一样的是，本扩展专注百度搜索，因此扩展右键顶级菜单就是搜索按钮，更适合高频率使用百度的用户。",
  "version": "1.1.0",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "https://www.baidu.com/"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "baidu.js"
    ]
  },
  "manifest_version": 2
}
