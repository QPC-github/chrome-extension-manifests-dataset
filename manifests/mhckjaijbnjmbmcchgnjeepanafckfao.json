{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Simple Translator",
  "version": "1.0.0",
  "description": "Select the texts, the extension will translate them to the target language. 选中需要翻译的文字，此插件将为你自动翻译。",
  "permissions": [
    "declarativeContent",
    "storage",
    "http://*/",
    "https://*/",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
