{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Save Image As PNG",
  "description": "Adds the \"Save Image As PNG\" option to the context menu of images.",
  "version": "1.0.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "downloads"
  ]
}
