{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pin It!",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "Save links to read later across any chrome.",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo-bitty.png",
    "48": "logo-small.png",
    "128": "logo-large.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
