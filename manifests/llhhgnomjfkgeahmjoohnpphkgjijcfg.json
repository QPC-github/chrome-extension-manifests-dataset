{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Video Wallgrab",
  "short_name": "wallgrab",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Download your favorite video thumbnails and wallpapers",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
