{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RooShare",
  "version": "1.0.1",
  "description": "A modern, innovative and intuitive solution for secure file sharing",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "19": "assets/icon-19.png",
      "32": "assets/icon-32.png",
      "38": "assets/icon-38.png"
    }
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/utils.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "cookies",
    "*://*.rooshare.com/",
    "storage",
    "notifications"
  ]
}
