{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "short_name": "epizodUA",
  "description": "__MSG_appDesc__",
  "default_locale": "uk",
  "version": "1.5.3",
  "manifest_version": 2,
  "homepage_url": "https://epizod.ua",
  "author": "primeUA",
  "content_security_policy": "img-src 'self' http://* https://* data:; object-src 'self' https://api.epizod.ua/*; script-src 'self' https://api.epizod.ua/; connect-src https://api.epizod.ua; frame-src data:",
  "icons": {
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png"
  },
  "background": {
    "scripts": [
      "source/js/background-min.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icons/defaultIcon.png",
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "options_page": "settings.html",
  "minimum_chrome_version": "20",
  "permissions": [
    "tabs",
    "https://epizod.ua/*",
    "https://*.epizod.ua/*",
    "unlimitedStorage",
    "storage",
    "notifications"
  ]
}
