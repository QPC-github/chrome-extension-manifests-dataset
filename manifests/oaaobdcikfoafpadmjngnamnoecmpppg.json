{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reddit DownVoter",
  "version": "1.0.5",
  "description": "Downvote everything on the page",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon_19.png",
    "default_title": "Downvote!"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2
}
