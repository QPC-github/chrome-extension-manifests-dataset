{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "I Wish It",
  "description": "With I Wish It, share your wishes and see your friends' ones.",
  "version": "0.2",
  "icons": {
    "16": "images/logo-16.png",
    "128": "images/logo-128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/logo-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://*/*",
    "http://*/*"
  ]
}
