{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0",
  "name": "TextOn.me",
  "short_name": "Поиск синонимов",
  "manifest_version": 2,
  "description": "Удобный поиск синонимов к слову",
  "browser_action": {
    "default_title": "Поиск синонимов к слову",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "background",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self' https://texton.me; connect-src https://texton.me; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
