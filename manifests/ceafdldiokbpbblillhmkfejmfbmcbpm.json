{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Type Above Hate",
  "description": "Become a more conscious social media poster!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "version": "0.0.6",
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.twitter.com/*",
        "https://*.instagram.com/*",
        "https://*.youtube.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "bootstrap.bundle.min.js",
        "variables.js",
        "content.js"
      ],
      "css": [
        "bootstrap.css"
      ]
    }
  ]
}
