{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QRLthis",
  "description": "Generates a QR code from the page URL to be scanned by handheld device. No data is sent to a third party.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "qrlthis.html"
  },
  "permissions": [
    "activeTab"
  ]
}
