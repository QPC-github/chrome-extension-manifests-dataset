{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ClassDo Screen sharing",
  "description": "An extension to allow you to share your screen on ClassDo.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://classdo.com/*",
      "https://classdo.test/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
