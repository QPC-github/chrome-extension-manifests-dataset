{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "save2txt",
  "description": "Save selected text to TXT file.",
  "version": "1.1",
  "icons": {
    "16": "img/icon-bitty.png",
    "48": "img/icon-small.png",
    "128": "img/icon-large.png"
  },
  "browser_action": {
    "default_icon": "img/icon-large.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ]
}
