{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Care",
  "homepage_url": "http://webgiv.com",
  "manifest_version": 2,
  "name": "Care",
  "version": "2.4.5",
  "icons": {
    "128": "assets/images/icons/icon128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "assets/images/icons/icon128.png"
    },
    "default_popup": "assets/html/popup.html"
  },
  "background": {
    "scripts": [
      "assets/js/global/config.js",
      "assets/js/background/preloader.js",
      "assets/js/background/affiliates.js",
      "assets/vendor/jquery.js",
      "assets/js/global/postOffice.js",
      "assets/js/background/ui.js",
      "assets/js/background/api.service.js",
      "assets/js/background/helpers.js",
      "assets/js/background/http.service.js",
      "assets/js/background/events.js",
      "assets/js/background/default_new_tab.js",
      "assets/js/background/monetise.js",
      "assets/js/background/contextMenu.js",
      "assets/js/background/default_search_engine.js",
      "assets/js/global/extractDomain.js",
      "assets/js/background/notifications.js",
      "assets/js/background/init.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "assets/css/main.css"
      ],
      "js": [
        "assets/vendor/jquery.js",
        "assets/vendor/mutation-summary.js",
        "assets/js/global/config.js",
        "assets/js/global/postOffice.js",
        "assets/js/content/affiliates.js",
        "assets/js/content/init.js",
        "assets/js/content/donation-popup.js",
        "assets/js/content/base.js",
        "assets/js/content/events.js",
        "assets/js/content/collections-popup.js",
        "assets/js/content/new-collection-popup.js",
        "assets/js/content/reveal.js",
        "assets/js/global/buttons.js",
        "assets/js/global/preview.js",
        "assets/js/content/login.js"
      ]
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "cookies",
    "contextMenus",
    "activeTab",
    "webRequestBlocking",
    "webRequest",
    "storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "assets/images/*.gif",
    "assets/images/*.jpg",
    "assets/images/*.png",
    "assets/images/*.svg",
    "assets/fonts/*.ttf",
    "assets/fonts/*.woff2",
    "assets/fonts/*.woff",
    "assets/fonts/*.eot"
  ]
}
