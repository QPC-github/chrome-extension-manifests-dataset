{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Covfefify",
  "author": "Covfefe Labs",
  "description": "Covfefify any webpage! Visit covfefify.me for more information.",
  "version": "1.1",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon_enabled.png",
    "default_title": "Disable Covfefify"
  },
  "background": {
    "scripts": [
      "manager.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ]
    }
  ]
}
