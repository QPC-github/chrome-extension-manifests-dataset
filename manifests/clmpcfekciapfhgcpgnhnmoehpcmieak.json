{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "2KXAOC - online!",
  "short_name": "2KXAOC",
  "description": "Легкий виджет, с которым вы не пропустите ни одного стрима.",
  "version": "1.3",
  "icons": {
    "16": "img/hots_16_on.png",
    "48": "img/hots_48_on.png",
    "128": "img/hots_128_on.png"
  },
  "browser_action": {
    "default_icon": "img/hots_19_off.png",
    "default_title": "Стрим сейчас оффлайн."
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/event.js"
    ]
  },
  "permissions": [
    "alarms",
    "notifications",
    "https://ajax.googleapis.com/",
    "http://gohots.ru/streamers/gohots",
    "https://api.twitch.tv/kraken/streams/gohots"
  ],
  "content_security_policy": "script-src 'self' https://api.twitch.tv/; object-src 'self'"
}
