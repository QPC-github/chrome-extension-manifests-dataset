{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NFORMR - Breaking News Content Generator",
  "short_name": "NFORMR",
  "description": "NFORMR is a tool for Web Producers to break news quickly and accurately with just a few clicks.",
  "version": "1.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "author": "Kevin Lee Dupuy Jr.",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Generate Breaking News"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
