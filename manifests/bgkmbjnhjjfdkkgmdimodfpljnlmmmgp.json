{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LocationWizard",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Test Your Ads and Apps from Different Locations",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "alarms",
    "background",
    "cookies",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "notifications",
    "proxy",
    "storage",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "LocationWizard",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
