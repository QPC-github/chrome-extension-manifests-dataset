{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "name": "Linklet",
  "version": "1.0",
  "options_page": "options.html",
  "description": "Lets you share links with the people you want.",
  "icons": {
    "16": "Linklet-16.png",
    "19": "Linklet-19.png",
    "48": "Linklet-48.png",
    "128": "Linklet-128.png"
  },
  "browser_action": {
    "default_title": "Linklet",
    "default_icon": "Linklet-19.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z",
        "chromeos": "Ctrl+Shift+Z",
        "linux": "Ctrl+Shift+Z"
      }
    }
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ]
}
