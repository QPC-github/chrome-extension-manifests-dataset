{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "valotalive.com",
  "short_name": "valotalive.com",
  "description": "The valotalive.com Chrome Extension",
  "version": "1.0.5",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/valota_app_icon_128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/valota_app_icon_16.png",
    "32": "img/valota_app_icon_32.png",
    "48": "img/valota_app_icon_48.png",
    "64": "img/valota_app_icon_64.png",
    "128": "img/valota_app_icon_128.png"
  },
  "permissions": [
    "https://*.valotalive.com/*",
    "unlimitedStorage",
    "system.memory",
    "system.storage",
    "system.cpu",
    "storage",
    "power",
    "geolocation"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.valotalive.com/*"
    ]
  },
  "offline_enabled": true,
  "background": {
    "scripts": [
      "js/jquery-1.11.2.min.js",
      "js/fs.js",
      "js/bg.js"
    ]
  }
}
