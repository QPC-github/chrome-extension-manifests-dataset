{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Clipper",
  "short_name": "Clipper",
  "version": "1.3.4",
  "manifest_version": 2,
  "description": "Easy copy & pase text clips between your devices, dedicated 'to email' button. Create custom text clips, email templates, etc.",
  "browser_action": {
    "default_icon": "clip22.png",
    "default_popup": "popup.html",
    "default_title": "Clipper"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "http://localhost/",
    "chrome://favicon/",
    "http://clipper.dev:3000/*",
    "*://*/*",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "background",
    "storage"
  ],
  "icons": {
    "16": "clip16.png",
    "32": "clip32.png",
    "48": "clip48.png",
    "128": "clip128.png"
  },
  "background": {
    "page": "background.html"
  }
}
