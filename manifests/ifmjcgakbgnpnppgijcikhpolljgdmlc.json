{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Auth Header Extractor For Microsoft Azure",
  "description": "Extracts Azure authorization header from requests sent to Azure portal. This extension is NOT an official Microsoft product",
  "version": "1.2.1",
  "permissions": [
    "tabs",
    "clipboardWrite",
    "storage",
    "webRequest",
    "https://*.portal.azure.com/*",
    "https://management.azure.com/*"
  ],
  "browser_action": {
    "default_title": "Show header",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2
}
