{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Social Unlocker",
  "permissions": [
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "http://*/*"
  ],
  "description": "Desbloqueia os vídeos e imagens que te obrigam a dar Like. Vê o conteúdo que tu queres sem limitações!.",
  "version": "2.0.1",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19x19.png",
      "38": "icons/38x38.png"
    },
    "default_title": "Social Unlocker"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "spoofer.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery.min.js",
        "jquery.cookie.js",
        "content.js"
      ]
    },
    {
      "matches": [
        "http://rirlouco.net/*"
      ],
      "js": [
        "jquery.min.js",
        "jquery.cookie.js",
        "spoofer_cs.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "jquery.min.js",
    "jquery-1.10.2.min.map",
    "jquery.cookie.js",
    "content.js"
  ]
}
