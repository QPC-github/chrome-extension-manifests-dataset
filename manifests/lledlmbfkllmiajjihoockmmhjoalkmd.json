{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Eyewriter easy surf",
  "description": "This app is to enable the Eyewrtier user to use the chrome browser and surf the web. https://github.com/SMD2/eyewriter-chrome-ext",
  "version": "0.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "header.html",
    "mnu.html",
    "images/*",
    "style.css"
  ],
  "permissions": [
    "background",
    "tabs",
    "tts",
    "webRequest",
    "storage",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}
