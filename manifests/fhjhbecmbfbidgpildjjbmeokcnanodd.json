{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "kilogram pound converter",
  "version": "1.0",
  "description": "convert lbs and kg back and forth",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "manifest_version": 2
}
