{
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "description": "Makes 'r/subreddit' links work like reddit magic. Typing r/subreddit in the address bar navigates to http://reddit.com/r/subreddit.",
  "icons": {
    "16": "rSlash_logo_thin_16.png",
    "48": "rSlash_logo_thin_48.png",
    "128": "rSlash_logo_thin_128.png"
  },
  "manifest_version": 2,
  "name": "rSlash",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0"
}
