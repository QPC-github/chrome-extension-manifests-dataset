{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CareerJSM",
  "version": "2.7.6",
  "description": "Track applications across the web with this plugin from CareerJSM",
  "homepage_url": "https://careerjsm.com",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "CareerJSM",
    "default_icon": {
      "19": "icons/icon19bw.png",
      "38": "icons/icon38bw.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E",
        "linux": "Ctrl+Shift+E"
      },
      "description": "Toggles the sidebar"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "popup.html",
    "cornerCard.html",
    "popup.css",
    "cornerCard.css"
  ],
  "content_scripts": [
    {
      "js": [
        "sidebar.bundle.js"
      ],
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://s7.addthis.com/*",
        "*://jdn.monster.com/*",
        "*://olm.monster.com/*",
        "*://*.demdex.net/*",
        "*://*.google.ca/*",
        "*://*.youtube.com/*",
        "*://assets.adobedtm.com/*",
        "*://static.licdn.com/*",
        "*://*.cedexis.com/*",
        "*://*.googlesyndication.com/*",
        "*://*.google.com/*",
        "*://*.doubleclick.net/*",
        "*://*.rubiconproject.com/*",
        "*://*.chango.com/*",
        "*://*.craigslist.ca/*",
        "*://*.criteo.com/*",
        "*://*.sharethis.com/*",
        "*://*.facebook.com/*",
        "*://*.adtechus.com/*",
        "*://*.recruitics.com/*",
        "*://*.weather.ca/*",
        "*://platform.twitter.com/*",
        "*://*.quantcast.com/*",
        "*://*.rlcdn.com/*",
        "*://secure.jdn.monster.com/*",
        "*://*.retargeter.com/*",
        "*://*.crsspxl.com/*",
        "*://*.cloudfront.net/*",
        "*://apply.indeed.com/*",
        "*://about.zoosk.com/*",
        "*://pixel.appcast.io/*",
        "*://corp.support.com/*",
        "*://*.sacredheartcs.org/*",
        "*://pixel.mathtag.com/*",
        "*://*.burstbeacon.com/*",
        "*://*.burstnet.com/*",
        "*://*.afternic.com/*",
        "*://stags.bluekai.com/*",
        "*://disqus.com/embed/*",
        "*://*.greenhouse.io/embed*",
        "*://*.looksharp.com/check_session",
        "*://*.issuu.com/*",
        "*://ad2.cdns.turn.com/*",
        "*://*.adnxs.com/*",
        "*://*.a3cloud.net/*",
        "*://*.googletagmanager.com/*"
      ]
    },
    {
      "matches": [
        "*://*.workopolis.com/jobsearch/job/*",
        "*://*.indeed.com/cmp/*/jobs/*",
        "*://*.indeed.ca/cmp/*/jobs/*",
        "*://angel.co/*/jobs/*",
        "*://*.careerbuilder.ca/jobs/*",
        "*://*.findatruckerjob.com/jobs/*",
        "*://*.linkedin.com/jobs/view/*",
        "*://jobview.monster.com/*",
        "*://jobview.monster.ca/*",
        "*://*.icims.com/jobs/*",
        "*://*.michaelpage.ca/job-detail/*",
        "*://*.glassdoor.ca/Job/*?jl=*",
        "*://*.glassdoor.com/Job/*?jl=*",
        "*://accenturecareers.jobs/*/job/*",
        "*://*.jobbank.gc.ca/jobposting.do*",
        "*://*.torontojobs.ca/display-job/*",
        "*://*.ziprecruiter.com/jobs/*",
        "*://*.beyond.com/jobs/search?id*",
        "*://*.saskjobs.ca/jsp/joborder/detail.jsp?job_order_id=*",
        "*://*.workbc.ca/*jobid=*",
        "*://authenticjobs.com/jobs/*",
        "*://*.usajobs.gov/GetJob/ViewDetails/*",
        "*://*.dice.com/jobs/detail/*",
        "*://careers.jobscore.com/careers/jobscore/jobs/*",
        "*://*.looksharp.com/organizations/*/listings/*",
        "*://jobs.lever.co/*",
        "*://*.indeed.ca/viewjob?*",
        "*://*.indeed.com/viewjob?*"
      ],
      "js": [
        "cornerCardContent.bundle.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://*.careerjsm.com/*",
        "*://*.localhost/*"
      ],
      "js": [
        "flag.bundle.js"
      ]
    }
  ],
  "permissions": [
    "*://*/*",
    "tabs",
    "cookies",
    "notifications",
    "contextMenus",
    "webNavigation",
    "unlimitedStorage",
    "storage"
  ]
}
