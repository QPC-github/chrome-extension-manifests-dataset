{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reins - Crawl real estate and send to LINE",
  "short_name": "Search in reins",
  "description": "This extension helps you search and share your results from Reins to your friends.",
  "version": "1.0.0",
  "author": "FTV",
  "icons": {
    "19": "Icon-19.png",
    "38": "Icon-38.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "Icon-19.png",
      "38": "Icon-38.png"
    },
    "default_title": "Open https://system.reins.jp/",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "index.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "lib/content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
