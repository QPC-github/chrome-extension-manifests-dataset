{
  "manifest_version": 2,
  "name": "Leprosorium on Steroids",
  "description": "Set of different things and pipyakas that increase hang time on Leprosorium.",
  "version": "2.0.13",
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "background": {
    "scripts": [
      "lib/tracker.js",
      "lib/jquery-2.2.1.js",
      "utils.js",
      "options.js",
      "goverment.sync.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": [
        "lib/jquery-2.2.1.js",
        "lib/jquery.scrollTo-1.4.14.js",
        "lib/jquery-nearest-1.4.0.js",
        "lib/jquery.nano.js",
        "lib/imagesloaded-3.2.0.js",
        "lib/mousetrap-1.5.3.js",
        "utils.js",
        "options.js",
        "image_loader.js",
        "highlight.js",
        "goverment.js",
        "video.js",
        "pinterest.js",
        "launcher.pinterest.js"
      ],
      "css": [
        "image_loader.css",
        "pinterest.css",
        "highlight.css",
        "video.css"
      ],
      "matches": [
        "*://*.leprosorium.ru/",
        "*://*.leprosorium.ru/pages/*",
        "*://*.leprosorium.ru/my/",
        "*://*.leprosorium.ru/my/favourites/",
        "*://*.leprosorium.ru/users/*/posts",
        "*://*.leprosorium.ru/users/*/posts/*",
        "*://*.leprosorium.ru/users/*/favs",
        "*://*.leprosorium.ru/users/*/favs/*",
        "*://*.leprosorium.ru/fraud",
        "*://*.leprosorium.ru/fraud/*",
        "*://*.leprosorium.ru/my/inbox",
        "*://*.leprosorium.ru/my/inbox/*",
        "*://*.leprosorium.ru/my/charlie/hidden",
        "*://*.leprosorium.ru/my/charlie/hidden/*"
      ]
    },
    {
      "run_at": "document_end",
      "js": [
        "lib/jquery-2.2.1.js",
        "lib/jquery.scrollTo-1.4.14.js",
        "lib/jquery-nearest-1.4.0.js",
        "lib/jquery.nano.js",
        "lib/imagesloaded-3.2.0.js",
        "lib/mousetrap-1.5.3.js",
        "lib/intervals.js",
        "lib/moment-2.6.0.js",
        "linear_partitions.js",
        "utils.js",
        "options.js",
        "image_loader.js",
        "highlight.js",
        "goverment.js",
        "video.js",
        "comments.js",
        "comments.filter.js",
        "launcher.comments.js"
      ],
      "css": [
        "image_loader.css",
        "comments.css",
        "highlight.css",
        "video.css"
      ],
      "matches": [
        "*://*.leprosorium.ru/comments/*",
        "*://*.leprosorium.ru/users/*/comments/*",
        "*://leprosorium.ru/democracy/"
      ]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "unlimitedStorage",
    "*://*.leprosorium.ru/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [
    "img/*",
    "lib/color/minicolors.png",
    "video_helper.js"
  ],
  "minimum_chrome_version": "22.0.0.0",
  "content_security_policy": "script-src 'self' https://stats.g.doubleclick.net; object-src 'self'"
}
