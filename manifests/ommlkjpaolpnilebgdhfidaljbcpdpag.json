{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "name": "Reader View",
  "offline_enabled": true,
  "short_name": "reader-view",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "https://mybrowseraddon.com/reader-view.html",
  "description": "Open any page in reader view mode; light, dark or sepia and clutter free.",
  "browser_action": {
    "default_title": "Reader View",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "commands": {
    "reader-view": {
      "description": "Reader View",
      "suggested_key": {
        "mac": "Alt+Shift+V",
        "default": "Alt+Shift+V"
      }
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
