{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Belobot",
  "version": "3.0.3",
  "author": "Vitaly Belov",
  "current_locale": "en",
  "description": "Free OlympTrade Robot",
  "homepage_url": "https://belobot.ru/en/",
  "content_scripts": [
    {
      "matches": [
        "https://olymptrade.com/*"
      ],
      "js": [
        "content_script_injector.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://olymptrade.com/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "https://*.olymptrade.com/",
    "https://belobot.ru/",
    "storage"
  ],
  "web_accessible_resources": [
    "content_script.js"
  ],
  "browser_action": {
    "default_title": "Belobot",
    "default_popup": "poup/poup.html",
    "default_icon": "icons/32.png"
  },
  "icons": {
    "192": "icons/192.png",
    "168": "icons/168.png",
    "144": "icons/144.png",
    "96": "icons/96.png",
    "72": "icons/72.png",
    "48": "icons/48.png",
    "32": "icons/32.png"
  }
}
