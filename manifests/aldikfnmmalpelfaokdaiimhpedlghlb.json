{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "日本語のShopify",
  "version": "0.0.11",
  "manifest_version": 2,
  "description": "ShopifyのAdminを日本語に切り替えます。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.myshopify.com/*",
        "https://*.myshopify.io/*"
      ],
      "js": [
        "src/tree.js",
        "src/locales/ja.js",
        "src/main.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ]
}
