{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Soundcloud Cleaner",
  "version": "1.21",
  "description": "Randomly removes some reposts from the soundcloud feed.",
  "icons": {
    "48": "iconOn.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://soundcloud.com/*"
      ],
      "js": [
        "jquery.js",
        "script.js"
      ],
      "run_at": "document_start"
    }
  ]
}
