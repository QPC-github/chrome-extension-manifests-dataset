{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bitcoin Altcoin Ticker",
  "description": "Ticker, price graph, currency converter and price desktop notifications and more",
  "short_name": "Crypto Ticker",
  "version": "2.4.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "128x128.png",
    "48": "128x128.png",
    "16": "38x38.png"
  },
  "browser_action": {
    "default_title": "Bitcoin Altcoin Ticker",
    "default_icon": {
      "19": "19x19.png",
      "38": "38x38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "http://*.bitcoincharts.com/*",
    "https://bitcoinwisdom.com/*",
    "https://*.cryptowat.ch/*",
    "https://*.stocks.exchange/*"
  ],
  "background": {
    "scripts": [
      "src/jquery-1.11.2.min.js",
      "eventPage.js",
      "popup.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "scr/*.*",
    "img/*.*"
  ]
}
