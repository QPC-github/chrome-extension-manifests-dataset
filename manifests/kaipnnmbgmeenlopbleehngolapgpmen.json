{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Компоновщик URL",
  "version": "1.0.1",
  "description": "Профессиональный компоновщик URL c поддержкой динамических параметров Яндекс.Директ, Google AdWords, Таргетинга ВКонтакте, myTarget.",
  "homepage_url": "https://semantica.in/tools/url-builder",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Компоновщик URL",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  }
}
