{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Photo Frame Configurator",
  "description": "Configure your PhotoFrame via USB stick!",
  "version": "0.3",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "permissions": [
    {
      "fileSystem": [
        "write",
        "directory"
      ]
    }
  ]
}
