{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AppStore Price Drop Tracker",
  "version": "2.0",
  "description": "Be notified when an application price drops from iTunes appStore !",
  "background_page": "background.html",
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "appStore price drop tracker",
    "popup": "popup.html"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://www.appstore-discounts.com/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
