{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Thai Translate",
  "description": "Highlight Text to Auto-Translate Simple Words from English-Thai or Thai-English",
  "version": "1.0.3",
  "short_name": "Thai English Translation",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery.js",
        "script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/translate-th128icon.png"
  },
  "icons": {
    "16": "img/translate-th16icon.png",
    "32": "img/translate-th32icon.png",
    "64": "img/translate-th64icon.png",
    "128": "img/translate-th128icon.png",
    "256": "img/translate-th256icon.png",
    "512": "img/translate-th512icon.png"
  }
}
