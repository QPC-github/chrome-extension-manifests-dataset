{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Replayr YouTube Button",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Quickly post YouTube videos to Replayr.io",
  "homepage_url": "http://replayr.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "*://*.youtube.com/*"
  ],
  "web_accessible_resources": [
    "img/logo_r.png"
  ]
}
