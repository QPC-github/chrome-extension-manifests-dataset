{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Al-Quran Learning Center",
  "author": "A.L.C.",
  "version": "2.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Teacher Extension for Al-Quran Learning Center",
  "homepage_url": "https://alquranlearningcenter.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.alquranlearningcenter.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
