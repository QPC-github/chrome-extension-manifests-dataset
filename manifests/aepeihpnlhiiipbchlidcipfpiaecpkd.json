        "lib/js/jquery.tooltipster.min.js",
        "shared/js/messaging.js",
        "sites/config.js",
        "sites/util.js",
        "sites/hootsuite.js"
      ],
      "css": [
        "lib/css/tooltipster.css",
        "sites/base.css",
        "sites/hootsuite.css"
      ]
    },
    {
      "matches": [
        "*://*.sproutsocial.com/*"
      ],
      "all_frames": true,
      "run_at": "document_end",
