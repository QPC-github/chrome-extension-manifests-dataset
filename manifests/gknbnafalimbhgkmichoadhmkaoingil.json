{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "zDebug",
  "version": "0.1.7",
  "manifest_version": 2,
  "description": "Debug extension for Zend Debugger.",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "zDebug",
    "default_icon": "img/ico.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/vendor/jquery-1.8.3.min.js",
      "js/default.js",
      "js/cookie.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
