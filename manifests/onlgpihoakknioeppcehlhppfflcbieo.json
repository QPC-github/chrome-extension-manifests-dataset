{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Patientus",
  "author": "Patientus GmbH",
  "version": "1.0.4",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Teile deinen Bildschirm w√§hrend einer Online Videosprechtunde.",
  "homepage_url": "https://patientus.de/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.patientus.de/*"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://*.patientus.de/*"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
