{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Enviroswitcher",
  "description": "Allows for easy switching between environment URLs",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "images/enviroswitcher16.png",
    "32": "images/enviroswitcher32.png",
    "48": "images/enviroswitcher48.png",
    "128": "images/enviroswitcher128.png"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "html/options.html",
  "page_action": {
    "default_popup": "html/popup.html",
    "default_title": "Enviroswitcher",
    "default_icon": {
      "16": "images/enviroswitcher16.png",
      "32": "images/enviroswitcher32.png",
      "48": "images/enviroswitcher48.png",
      "128": "images/enviroswitcher128.png"
    }
  }
}
