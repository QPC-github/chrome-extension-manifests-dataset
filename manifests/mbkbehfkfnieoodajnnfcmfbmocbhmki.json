{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "드래그 글자수 세기",
  "shortname": "글자수세기",
  "version": "1.2",
  "description": "드래그를 통해 손쉽게 글자수를 세세요",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      }
    }
  }
}
