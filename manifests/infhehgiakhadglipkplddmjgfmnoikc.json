{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Missed Salah Tracker",
  "version": "1.0",
  "description": "A simple, user-friendly, and reliable way of tracking your missed Salahs.",
  "content_security_policy": "script-src 'unsafe-inline'; object-src 'self'",
  "permissions": [
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "Webp.net-resizeimage.png",
      "48": "rsz_hands.png",
      "128": "Webp.net-resizeimage (2).png"
    },
    "default_popup": "popup.html",
    "default_title": "Missed Salah Tracker"
  }
}
