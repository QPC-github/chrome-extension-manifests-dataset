{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Coneecta.com Â· Screen Sharing",
  "author": "Coneecta.com",
  "version": "0.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "A tool for the users of Coneecta.com to share realtime video of any desktop app within a lessons room",
  "homepage_url": "https://coneecta.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://rtc.coneecta.com/*",
        "https://coneecta.com/*",
        "https://coneecta.javier.whads.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "*.png"
  ]
}
