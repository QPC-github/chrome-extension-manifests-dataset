{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Singular Extension",
  "version": "1.2",
  "description": "Singular extension utility",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "singular-logo.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "*://*.singular.live/*"
    ]
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}
