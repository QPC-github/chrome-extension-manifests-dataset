{
  "author": "Max Grass (http://maxgrass.eu)",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "description": "MG Gmail Count",
  "icons": {
    "128": "icon_128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2,
  "name": "MG Gmail Count",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://www.google.com https://mail.google.com https://apis.google.com; object-src 'self'",
  "permissions": [
    "alarms",
    "idle",
    "notifications",
    "storage",
    "tabs",
    "cookies",
    "webRequest",
    "*://*.google.com/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "3.1.0",
  "web_accessible_resources": [
    "icon_128.png",
    "note.mp3"
  ]
}
