{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Moly Tab Menu",
  "version": "1.1.1",
  "description": "Switch tabs more efficiently.",
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content-light.css",
        "styles/content-dark.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "history",
    "chrome://favicon/"
  ]
}
