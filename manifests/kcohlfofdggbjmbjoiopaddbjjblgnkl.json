{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Design Mode",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Allows you to make temporary edits to any page.",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_icon": "img/icon_19.png",
    "default_title": "Design Mode: off"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
