{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mobile2Desktop Facebook Links",
  "description": "This extension converts a m.facebook.com link and redirects the tab to the desktop version.",
  "version": "1.1",
  "background": {
    "scripts": [
      "install.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "declarativeContent",
    "activeTab"
  ]
}
