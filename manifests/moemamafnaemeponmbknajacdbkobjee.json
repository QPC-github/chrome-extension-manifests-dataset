{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BugPopper",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Chrome extension to view BugDB pages",
  "options_page": "options.html",
  "icons": {
    "16": "bug_white_bg.png",
    "48": "bug_white_bg.png",
    "128": "bug_white_bg.png"
  },
  "browser_action": {
    "default_icon": "bug_white_bg.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "contentSettings",
    "https://bug.oraclecorp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/styles.css",
        "css/tipped.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/tipped.js",
        "js/jquery.highlight-5.js",
        "js/content.js"
      ]
    }
  ]
}
