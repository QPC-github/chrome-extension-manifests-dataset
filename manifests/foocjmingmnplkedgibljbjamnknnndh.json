{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Corpus Screen Sharing",
  "author": "The Corpus",
  "version": "1.71",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://the-corpus.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://the-corpus.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://room.the-corpus.com/*",
      "https://slpn1.ddns.net:3001/*",
      "https://corpus-safari.herokuapp.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
