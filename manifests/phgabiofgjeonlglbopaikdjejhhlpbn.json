{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Flash!",
  "version": "1.08",
  "description": "Flash est votre nouvel assistant shopping!",
  "icons": {
    "16": "img/flash_icon_128.png",
    "48": "img/flash_icon_128.png",
    "128": "img/flash_icon_128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies",
    "notifications",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "Flash!",
    "default_icon": "img/flash_icon_128.png",
    "default_popup": "popup.html"
  }
}
