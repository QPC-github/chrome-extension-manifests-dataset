{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hearthstone Linkifier",
  "short_name": "HS Linkifier",
  "version": "1.13.0",
  "description": "Turn Hearthstone card names into links with tooltips.",
  "options_page": "options.html",
  "icons": {
    "16": "images/HS-19.png",
    "48": "images/HS-48.png",
    "64": "images/HS-64.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "optional_permissions": [
    "tabs",
    "<all_urls>"
  ]
}
