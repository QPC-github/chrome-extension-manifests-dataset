{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Canvas Discussion Post Length Checker",
  "short_name": "CDPLC",
  "version": "1.0.1",
  "description": "Calculates statistics pertaining to the length of discussion posts on Canvas",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png",
      "128": "icon128.png"
    },
    "default_title": "C_D_P_L_C",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "manifest_version": 2
}
