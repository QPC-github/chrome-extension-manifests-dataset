{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "app/background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.png",
    "default_popup": "html/bAction/newsbrowseraction.html"
  },
  "chrome_url_overrides": {
    "newtab": "html/index.html"
  },
  "description": "Access worldwide news websites & services, weather, email & shopping websites, plus free web search, right from your new tab page!",
  "homepage_url": "https://breakingnewsnowtab.com",
  "icons": {
    "128": "icon.png"
  },
  "incognito": "split",
  "manifest_version": 2,
  "name": "Breaking News Now",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "cookies",
    "contextMenus",
    "*://breakingnewsnowtab.com/*",
    "*://*.breakingnewsnowtab.com/*"
  ],
  "version": "1.5",
  "web_accessible_resources": [
    "*.json"
  ]
}
