{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Propellor",
  "version": "1.1",
  "description": "Propellor push notifications extension",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "author": "Darko Krstev",
  "background": {
    "persistent": true,
    "scripts": [
      "js/jquery.3.1.0.min.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "gcm",
    "tabs",
    "background",
    "notifications",
    "storage",
    "cookies",
    "http://*.propellor.eu/*",
    "http://propellor.dev/*"
  ]
}
