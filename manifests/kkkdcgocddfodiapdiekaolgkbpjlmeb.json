{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PodOut",
  "short_name": "podout",
  "description": "PodOut for all your files, links and web content.",
  "version": "1.0.1.5",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://www.podout.com/",
    "http://podout.com/",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs",
    "storage",
    "cookies"
  ]
}
