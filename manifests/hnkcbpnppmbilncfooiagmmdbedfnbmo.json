{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CustomSearch",
  "short_name": "Search",
  "description": "Custom search extension",
  "version": "1.0.0",
  "minimum_chrome_version": "38",
  "options_page": "options/options.html",
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "16": "assets/search_icon_16.png",
    "128": "assets/search_icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/search_icon_16.png",
      "128": "assets/search_icon_128.png"
    },
    "default_title": "Search"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}
