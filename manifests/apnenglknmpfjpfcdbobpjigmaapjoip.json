{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GPS Link",
  "description": "Use your phone GPS in desktop Chrome browser",
  "author": "https://www.cleansoft.lv",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "1.5",
  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",
  "background": {
    "scripts": [
      "config.js",
      "socket.io.slim.js",
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "inject.js"
  ],
  "browser_action": {
    "default_title": "Load GPS Link",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "manifest_version": 2
}
