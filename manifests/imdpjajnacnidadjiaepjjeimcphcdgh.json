{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ankart Extension",
  "description": "Cette extension vous permet de savoir lorsque Ankart est en direct !",
  "version": "1.0.4",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "128": "img/offline.png"
  },
  "background": {
    "scripts": [
      "assets/js/jquery.min.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "storage",
    "notifications"
  ]
}
