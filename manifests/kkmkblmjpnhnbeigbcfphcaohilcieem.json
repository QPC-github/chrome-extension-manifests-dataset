{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Capturing",
  "short_name": "Capturing",
  "description": "This extension will use to allow the screen share option",
  "version": "0.3",
  "background": {
    "scripts": [
      "index.js"
    ]
  },
  "icons": {
    "16": "Capturing.png",
    "48": "Capturing.png",
    "128": "Capturing.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "Capturing.png",
      "24": "Capturing.png",
      "32": "Capturing.png",
      "48": "Capturing.png",
      "128": "Capturing.png"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://*.smarthinking/*",
      "*://*.localhost/*",
      "*://*.local.think.com/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    "Capturing.png"
  ]
}
