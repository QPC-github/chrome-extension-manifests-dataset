{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AEM Wireframe",
  "description": "Extension adjusts AEM accelerator styles for more readable format. Useful during debugging or authoring",
  "version": "1.0.0",
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "assets/32off.png"
    }
  },
  "web_accessible_resources": [
    "styles/g12.css",
    "styles/g16.css",
    "styles/main.css"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
