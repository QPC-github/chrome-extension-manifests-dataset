{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pip - Caderno de Receitas",
  "description": "Essa extensão permite que você acesse o seu caderno de receitas do Pip a qualquer momento!",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Pip - Suas receitas de forma fácil!"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "https://pip-api-slave.elasticbeanstalk.com/",
    "https://ajax.googleapis.com/",
    "http://*.pip.pe/",
    "https://pipv2.s3.amazonaws.com/"
  ]
}
