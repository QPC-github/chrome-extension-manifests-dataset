{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LeaDroid Chat",
  "description": "Monitor chat requests from LeaDroid Chat without opening a chat",
  "version": "1.2",
  "permissions": [
    "idle"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}
