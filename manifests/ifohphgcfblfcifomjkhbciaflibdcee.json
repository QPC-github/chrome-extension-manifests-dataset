{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hot Kashmir News",
  "version": "3",
  "description": "Check out the latest news updates of Jammu and Kashmir on HotKashmir (http://hotkashmir.com)",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "page": "bg.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Hot Kashmir",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "http://*/*",
    "unlimited_storage"
  ]
}
