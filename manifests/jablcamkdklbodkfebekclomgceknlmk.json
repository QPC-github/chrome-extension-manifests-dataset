{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tuk-Tuk - Captura de Tela",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Capture páginas na internet de forma simples e rápida.",
  "browser_action": {
    "default_icon": "icon-999.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
