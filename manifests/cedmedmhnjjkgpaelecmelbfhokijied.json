{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tabsflow - Track your tabs",
  "version": "0.5",
  "description": "Document your browser window's selected tabs, a productivity work flow tool being tested with early adopters.",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Document tabs"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
