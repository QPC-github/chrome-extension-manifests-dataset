{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Viewability Monitor",
  "short_name": "Viewability Monitor",
  "version": "1.2.3",
  "manifest_version": 2,
  "description": "Highlights ads in your browser when viewability pixels fire on them.",
  "author": "Shane Kerwin",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "<all_urls>",
    "webNavigation",
    "pageCapture",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "browseraction/assets/js/jquery-1.11.1.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon48.png",
      "38": "icons/icon48.png"
    },
    "default_title": "Viewability Monitor",
    "default_popup": "browseraction/popup.html"
  }
}
