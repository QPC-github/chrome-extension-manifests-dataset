{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Koi Pixiv Extension",
  "version": "1.3.3",
  "description": "Make Pixiv Browsing Better",
  "icons": {
    "48": "icon48.PNG",
    "128": "icon128.PNG"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon48.PNG"
    },
    "default_title": "Koi Pixiv Extension",
    "default_popup": "dlEvent.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "*://www.pixiv.net/history.php"
      ]
    }
  ],
  "permissions": [
    "downloads",
    "http://*.pixiv.net/*",
    "https://*.pixiv.net/*",
    "https://i.pximg.net/*"
  ]
}
