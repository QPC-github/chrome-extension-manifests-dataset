{
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },
  "default_locale": "en",
  "homepage_url": "https://ukoment.com",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "__MSG_appDesc__",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "uKoment",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.2",
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://ukoment.com/*",
      "*://ukoment.it/*"
    ]
  }
}
