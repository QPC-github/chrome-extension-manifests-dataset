{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Alt-Right to Butthurt Nazis",
  "short_name": "Butthurt Nazis",
  "description": "Replaces the text 'Alt-Right' with 'Butthurt Nazis'.",
  "author": "A Concerned Citizen",
  "version": "1.1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
