{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Youtube to Strm File",
  "version": "0.4",
  "description": "Create Strm file from Youtube url",
  "permissions": [
    "activeTab",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Save Strm",
    "default_icon": "icon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
