{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "G-BOT Siren",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "G-Bot Risk 제보",
  "icons": {
    "16": "images/siren_icon_16px.png",
    "48": "images/siren_icon_48px.png",
    "128": "images/siren_128px.png"
  },
  "browser_action": {
    "default_icon": "images/siren_icon_48px.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "gbot-extension.js",
    "gbot-extension.css"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
