{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Flowlingo",
  "short_name": "Flowlingo",
  "description": "Learn a different language while watching TV",
  "version": "1.0.11",
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Flowlingo"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "libs/jquery.js",
      "installCheck.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "css": [
        "libs/jqueryui.css",
        "libs/tooltipster.bundle.min.css",
        "libs/tooltipster-sideTip-borderless.min.css",
        "style.css"
      ],
      "js": [
        "libs/firebase.js",
        "libs/jquery.js",
        "libs/jqueryui.js",
        "libs/tooltipster.bundle.min.js",
        "libs/sha1.js",
        "libs/nlp_compromise.js",
        "libs/_languageData.js",
        "libs/guessLanguage.js",
        "code/util.js",
        "code/netflix_dom.js",
        "code/quiz.js",
        "code/prof_test.js",
        "code/sidebar.js",
        "code/subtitles.js",
        "translations.js",
        "replace.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://connect.facebook.net; object-src 'self'",
  "permissions": [
    "webRequest",
    "*://*.netflix.com/",
    "*://*.nflxvideo.net/",
    "activeTab",
    "storage"
  ]
}
