{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Silver Utility",
  "description": "Utilit√°rio para auxiliar o desenvolvimento de software.",
  "icons": {
    "128": "icon.png",
    "64": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
