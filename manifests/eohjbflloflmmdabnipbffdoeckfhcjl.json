{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "snapy:docs",
  "short_name": "snapydocs",
  "version": "0.0.0.2",
  "description": "Documentation made easy. Create documentation with screenshots fast.",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "browser_action": {
    "default_icon": "browser-action-default-icon.png",
    "default_title": "snapy:docs",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "background"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*"
    ]
  },
  "manifest_version": 2
}
