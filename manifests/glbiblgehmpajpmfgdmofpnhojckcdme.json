{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Sam's Cookie Monster",
  "author": "Shashank Racherla",
  "version": "1.0",
  "description": "Tool to copy-pasta cookies",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
