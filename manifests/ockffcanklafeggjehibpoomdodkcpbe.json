{
  "short_name": "Leer Snel Beleggen",
  "name": "Chrome extensie voor LeerSnelBeleggen.nl",
  "description": "LSB Nieuwsfeed",
  "browser_action": {
    "default_icon": {
      "38": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "LSB - Nieuws",
    "default_popup": "nieuws.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "http://leersnelbeleggen.nl/"
  ],
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "version": "1.2"
}
