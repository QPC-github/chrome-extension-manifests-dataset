{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Radar das Ofertas",
  "short_name": "Radar de Ofertas",
  "version": "2.0",
  "description": "Radar das ofertas proporciona as melhores ofertas para voce.",
  "icons": {
    "48": "img/48x48.png",
    "128": "img/128x128.png",
    "16": "img/16x16.png"
  },
  "background": {
    "scripts": [
      "js/func.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/48x48.png"
  },
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "activeTab",
    "alarms",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "img/*",
    "js/*"
  ]
}
