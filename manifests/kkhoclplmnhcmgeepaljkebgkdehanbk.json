{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Combine",
  "manifest_version": 2,
  "short_name": "tab-combine",
  "description": "Automaticlly combine tabs on the fly",
  "version": "1.0.8",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "author": "Daniel Cohen <dcohenb@gmail.com>",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  }
}
