{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Social Monitor",
  "description": "Monitore os conte√∫dos mais importantes das redes sociais",
  "version": "0.91",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://app.socialmonitor.com.br/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.google.com/*"
      ],
      "js": [
        "jquery.min.js",
        "popup.js"
      ]
    }
  ]
}
