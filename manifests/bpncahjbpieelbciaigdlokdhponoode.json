{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Link to Your Repos - Github",
  "short_name": "Your Repos",
  "description": "Adds a link to your repositories right after the 'Your profile' link in the header of Github.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "insert.js"
      ]
    }
  ]
}
