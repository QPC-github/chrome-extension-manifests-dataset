{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Incentive, Inc.",
  "manifest_version": 2,
  "name": "Saudi Connect",
  "short_name": "SaudiConnect",
  "version": "1.0.60",
  "description": "From any web application, access embedded team newsfeeds, instant messaging, files from OneDrive, Google Drive, Dropbox, and more.",
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "browser_action": {
    "default_title": "Saudi Connect",
    "default_icon": {
      "19": "images/logo19.png",
      "32": "images/logo32.png",
      "38": "images/logo38.png"
    }
  },
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "permissions": [
    "storage",
    "alarms",
    "https://*/*",
    "http://*/*",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
