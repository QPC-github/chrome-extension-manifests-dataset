{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lookup on Merriam-Webster",
  "description": "Looks up the selected text on Merriam-Webster online dictionary.",
  "version": "1.3",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "mw_logo_16x16.png",
    "48": "mw_logo_48x48.png",
    "128": "mw_logo_128x128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "lookupMW.js"
    ]
  },
  "commands": {
    "lookup-on-MW": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Lookup on Merriam-Webster"
    }
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
