{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mine The Diamond MTD",
  "short_name": "Mine",
  "description": "Join Vasco and his companions in their hunt for diamonds in this addicting game!",
  "version": "2.3.1",
  "author": "Michael Burke",
  "minimum_chrome_version": "38",
  "icons": {
    "128": "assets/icon.png"
  },
  "permissions": [
    "storage",
    "webview"
  ],
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
