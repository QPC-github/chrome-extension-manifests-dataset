{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reload All The Tabs",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Reload all the current tabs open.",
  "browser_action": {
    "default_icon": "refresh.png"
  },
  "permissions": [
    "tabs"
  ],
  "icons": {
    "128": "refresh.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  }
}
