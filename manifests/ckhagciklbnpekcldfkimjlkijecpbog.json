{
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/logo-origin.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/logo-origin.png",
    "16": "images/logo-origin.png",
    "48": "images/logo-origin.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/config.js",
        "js/script.js",
        "js/core/alibaba.js",
        "js/core/taobao.js",
        "js/core/tmall.js"
      ],
      "css": [
        "css/addon_tool.css"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "http://*.tmall.com/*",
        "http://*.1688.com/*",
        "http://*.tmall.hk/*",
        "https://*.taobao.com/*",
        "https://*.tmall.com/*",
        "https://*.1688.com/*",
        "https://*.tmall.hk/*"
      ]
    }
  ],
  "description": "Công cụ mua hàng, đặt hàng trên Taobao, 1688, Tmall - Website NhapHangVn.com.",
  "manifest_version": 2,
  "name": "Order hàng trên Taobao,1688 - NhapHangVn.com",
  "permissions": [
    "http://*.taobao.com/*",
    "https://*.taobao.com/*",
    "http://*.1688.com/*",
    "https://*.1688.com/*",
    "http://*.tmall.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.hk/*",
    "https://*.tmall.hk/*",
    "https://nhaphangvn.com/*",
    "http://nhaphangvn.com/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [
    "addon_tool.css",
    "images/logo-origin.png",
    "images/cart-icon.png",
    "images/logo-white.png"
  ],
  "version": "1.0"
}
