{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Metabot Lite",
  "version": "0.0.0.3",
  "description": "Упрощённая версия Metabot",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "injectscript.js",
    "noboty.js",
    "localstoragedb.js"
  ],
  "permissions": [
    "tabs",
    "declarativeContent",
    "activeTab",
    "storage",
    "webNavigation",
    "unlimitedStorage",
    "notifications",
    "downloads",
    "tabCapture",
    "cookies",
    "browsingData",
    "webRequest",
    "*://*/*",
    "contextMenus"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.youtube.com/*"
    ]
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
