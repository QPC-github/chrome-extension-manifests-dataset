{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Right Click Search Amazon",
  "description": "Add “Search Amazon” to right click menu. Try it out, click “Add to Chrome” now! 😊",
  "version": "0.73",
  "short_name": "Highlight, RightClick, Search Amazon",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "rightclick.js"
    ]
  },
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "browser_action": {
    "default_icon": "icon-small.png"
  },
  "manifest_version": 2
}
