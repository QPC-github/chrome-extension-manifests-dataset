{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Acelawl Stream Support",
  "short_name": "Acelawl Support",
  "description": "Diese Erweiterung verwandelt einen normalen Amazon-Link in einen AcelawlAffiliate-Link.",
  "author": "Acelawl",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "20": "icons/icon_20.png",
      "25": "icons/icon_25.png",
      "30": "icons/icon_30.png",
      "40": "icons/icon_40.png"
    },
    "default_title": "Acelawl Twitch"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://www.amazon.de/*",
    "https://www.amazon.de/*",
    "http://www.amazon.co.uk/*",
    "https://www.amazon.co.uk/*"
  ],
  "background": {
    "scripts": [
      "js/tw.js"
    ],
    "persistent": true
  }
}
