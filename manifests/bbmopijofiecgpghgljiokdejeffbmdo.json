{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Password Crypt",
  "version": "0.3.5",
  "manifest_version": 2,
  "author": "Benny Nissen",
  "content_security_policy": "default-src 'self' https://pcrypt.org; img-src 'self' blob:",
  "description": "Handle your username and password credentials for all web pages.",
  "homepage_url": "https://pcrypt.org",
  "icons": {
    "16": "icons/key_icon16.png",
    "48": "icons/key_icon48.png",
    "128": "icons/key_icon128.png"
  },
  "options_ui": {
    "page": "src/browser_action/options.html",
    "open_in_tab": true
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/lib/jserror/jserror.js",
      "js/lib/lang/languagedb.js",
      "js/lib/pcrypt.js",
      "js/lib/pcryptapi.js",
      "js/lib/forge.min.js",
      "js/lib/elliptic.min.js",
      "js/lib/srp6a/thinbus-srp-config.js",
      "js/lib/srp6a/thinbus-srp6a-sha256-versioned.js",
      "js/pcrypt_shared.js",
      "js/pcrypt_extension.js",
      "src/bg/background.js",
      "js/ui/options.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/key_icon16.png",
      "48": "icons/key_icon48.png",
      "128": "icons/key_icon128.png"
    },
    "default_title": "Password Crypt",
    "default_popup": "src/browser_action/popup.html"
  },
  "permissions": [
    "notifications",
    "geolocation",
    "storage",
    "clipboardWrite",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.beast.dk/*",
      "https://*.pcrypt.dk/*",
      "https://*.pcrypt.eu/*",
      "https://*.pcrypt.com/*",
      "https://*.pcrypt.org/*",
      "https://*.passcrypt.dk/*",
      "https://*.passcrypt.eu/*",
      "https://*.passcrypt.com/*",
      "https://*.passcrypt.org/*",
      "https://*.passwordcrypt.dk/*",
      "https://*.passwordcrypt.eu/*",
      "https://*.passwordcrypt.org/*"
    ]
  },
  "web_accessible_resources": [
    "icons/chevron-left.svg",
    "icons/eye.svg",
    "icons/key.svg",
    "icons/key_icon.png",
    "icons/link.svg",
    "icons/settings.svg",
    "icons/settings_black.svg",
    "icons/user.svg"
  ]
}
