{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gmail Mic Down",
  "version": "0.0.1",
  "description": "Gmail Mic Down - No more for just April Fools. Enjoy...But, take precautions while using :-)",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/jquery.min.js",
        "scripts/mic-drop.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
