{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Гром и молния",
  "short_name": "Гром и молния",
  "description": "Новости, и ничего лишнего. Мы будем слать Вам только важные новости",
  "version": "0.0.7",
  "homepage_url": "https://grim.pro",
  "browser_action": {
    "default_icon": "icon_inactive.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "jquery-1.11.3.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-1.11.3.min.js",
        "content.js"
      ],
      "css": [
        "css/style.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "pageCapture",
    "webRequest",
    "activeTab",
    "tabCapture",
    "tabs",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "jquery-1.11.3.min.js",
    "content.js",
    "injections.js",
    "images/svg/*",
    "css/*",
    "*.png",
    "fonts/*"
  ]
}
