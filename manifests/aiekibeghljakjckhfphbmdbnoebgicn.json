{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "클리앙 UI 확장 (Clien Script)",
  "description": "클리앙 웹사이트를 이용할 때, 다양한 부가 기능을 제공하는 익스텐션 입니다.",
  "version": "1.49.12",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "default_options.js",
      "/lib/exif.js",
      "back_getexif.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.clien.net/*"
      ],
      "js": [
        "/lib/jquery-3.5.1.min.js",
        "/lib/is_editable.js",
        "/cs_msg.js",
        "/function.js",
        "/shortboardname.js",
        "/start.js",
        "/contextmenu_script.js",
        "/optionstyle.js",
        "/storage_remove.js",
        "/preview.js",
        "/find_comment.js",
        "/clien_memo.js",
        "/all_memo.js",
        "/etc.js",
        "/etc_article_comment.js",
        "/etc_popup.js",
        "/etc_mypage.js",
        "/heartchart.js",
        "/alarm_mouseover.js",
        "/observe_mouseover2.js",
        "/userinfo_get.js",
        "/article_userinfo.js",
        "/comment_userinfo.js",
        "/cmt_observer.js",
        "/imgexif.js",
        "/postbackup.js",
        "/extendmemo.js",
        "/best_comment.js",
        "/myviewlist_newcmt_highlight.js",
        "/new_message_chk.js",
        "/key_move.js",
        "/notice_message.js"
      ],
      "css": [
        "/clien_style.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://m.clien.net/*"
      ],
      "js": [
        "/godesktopsite.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.clien.net/service/amp/*"
      ],
      "js": [
        "/godesktopsite.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.clien.net/service/message*"
      ],
      "js": [
        "/message_popup.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.clien.net/service/cs/singo/*"
      ],
      "js": [
        "/singo_page.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "클리앙 스크립트",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
