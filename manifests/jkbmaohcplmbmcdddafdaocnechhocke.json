{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Myfav.es",
  "version": "0.16",
  "description": "Myfav.es is an elegant start page replacement for your browser.",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "cookies",
    "contextMenus",
    "tabs",
    "topSites",
    "bookmarks",
    "history",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "lib/jquery.js",
    "lib/select2.js",
    "lib/select2.css",
    "src/options.html",
    "src/save.css",
    "src/save.js",
    "src/chrome.js"
  ],
  "content_security_policy": "script-src 'self' https://myfav.es; object-src 'self'",
  "background": {
    "scripts": [
      "lib/jquery.js",
      "src/chrome.js"
    ]
  },
  "options_page": "src/options.html",
  "chrome_url_overrides": {
    "newtab": "src/myfaves.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Add Site to Myfav.es"
  }
}
