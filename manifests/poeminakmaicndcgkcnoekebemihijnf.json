{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "加宽版微博，充分利用屏幕空间",
  "content_scripts": [
    {
      "all_frames": false,
      "css": [
        "style.css"
      ],
      "matches": [
        "http://weibo.com/*",
        "http://www.weibo.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "48": "icon.png"
  },
  "manifest_version": 2,
  "name": "Widened Weibo",
  "permissions": [
    "http://weibo.com/*",
    "http://www.weibo.com/*"
  ],
  "version": "1.0.0.5",
  "web_accessible_resources": [
    "style.css"
  ]
}
