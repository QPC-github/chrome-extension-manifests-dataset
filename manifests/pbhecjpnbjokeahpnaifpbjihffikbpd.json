{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Redd Reader",
  "version": "4.4.2",
  "description": "Displays recent stories from Reddit",
  "icons": {
    "18": "images/icon18.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Redd Reader",
    "default_icon": "images/icon18.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage",
    "https://www.reddit.com/",
    "http://www.reddit.com/",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.reddit.com/; object-src 'self' 'unsafe-eval' https://www.reddit.com/"
}
