{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GmailUpgrader",
  "author": "@luluwebmaster",
  "description": "GmailUpgrader est un outil très simple permettant d'ajouter quelques fonctionnalités à Gmail.",
  "version": "1.0.3",
  "permissions": [
    "storage",
    "*://mail.google.com/*"
  ],
  "homepage_url": "https://www.luc-mergault.fr/",
  "icons": {
    "16": "/img/icon-128.png",
    "48": "/img/icon-128.png",
    "128": "/img/icon-128.png"
  },
  "browser_action": {
    "default_icon": "/img/icon-128.png",
    "default_title": "GmailUpgrader",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/mail/u/*"
      ],
      "js": [
        "js/jquery/jquery-3.4.1.min.js",
        "js/include.js"
      ],
      "css": [
        "css/include.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "img/loading.svg"
  ]
}
