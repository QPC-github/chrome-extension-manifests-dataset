{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Restore Page Size",
  "description": "Remembers the size of current page and restores it when you switch to the page again.",
  "version": "1.0.1",
  "page_action": {
    "default_icon": "restore-disabled.png",
    "default_title": "Restore Page Size"
  },
  "permissions": [
    "tabs",
    "declarativeContent"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
