{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "123Kora",
  "description": "123Kora Notifications App",
  "short_name": "123kora",
  "version": "0.2.4",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "images/logo128.png"
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "background": {
    "scripts": [
      "lib/jquery/jquery-2.1.3.min.js",
      "lib/socket/socket.io-1.3.4.js",
      "app/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications",
    "debugger",
    "storage",
    "https://connect.facebook.net/en_US/all.js",
    "http://api.123kora.com/",
    "http://www.123kora.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://connect.facebook.net https://ssl.google-analytics.com; object-src 'self'"
}
