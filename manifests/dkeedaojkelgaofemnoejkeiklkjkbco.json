{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Youtube Repeater",
  "short_name": "You-Re",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Repeat Youtube Videos that you like",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": [
        "jquery.min.js",
        "content.js"
      ]
    }
  ]
}
