{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "StatusCake Alert",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Get notified every time your site's connection status changes",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "StatusCake Alert",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "notifications",
    "https://*.statuscake.com/*",
    "http://*.statuscake.com/*"
  ],
  "web_accessible_resources": [
    "img/tick.png",
    "img/cross.png",
    "img/icon19.png"
  ]
}
