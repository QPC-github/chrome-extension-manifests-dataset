{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nuestro Mundo Online",
  "short_name": "Nuestro Mundo",
  "version": "0.4",
  "description": "Lector de noticias en tiempo real de Diario Nuestro Mundo",
  "icons": {
    "128": "images/128x128.png",
    "16": "images/icon.png",
    "24": "images/24x24.png"
  },
  "permissions": [
    "*://*/*",
    "background",
    "notifications",
    "gcm",
    "storage",
    "identity"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "scripts/OneSignal.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/19x19.png",
      "38": "images/38x38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Lector Nuestro Mundo Online"
  },
  "web_accessible_resources": [
    "images/128x128.png"
  ],
  "incognito": "spanning"
}
