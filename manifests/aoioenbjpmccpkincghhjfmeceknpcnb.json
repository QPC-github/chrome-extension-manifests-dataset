{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MetaCPAN Helper",
  "version": "1.12",
  "description": "MetaCPAN helper extension for Chrome",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ],
  "icons": {
    "16": "ico_16.png",
    "48": "ico_48.png",
    "128": "ico_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "js": [
        "prep.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
