{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TweetBeeg",
  "description": "Write more than 140 characters in Twitter wherever you are",
  "version": "0.2.5",
  "author": "TweetBeeg",
  "permissions": [
    "http://www.tweetbeeg.com/",
    "cookies",
    "tabs",
    "https://*/*",
    "http://*/*",
    "notifications",
    "background",
    "storage"
  ],
  "background": {
    "scripts": [
      "app/js/app.js"
    ],
    "persistent": true
  },
  "sandbox": {
    "pages": [
      "app/js/app.js"
    ]
  },
  "icons": {
    "16": "icons/tweetbeeg16x16.png",
    "48": "icons/tweetbeeg48x48.png",
    "128": "icons/tweetbeeg128x128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "app/index.html"
  }
}
