{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TeacherOnline Screen Sharing",
  "short_name": "TeacherOnline",
  "author": "TeacherOnline",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for TeacherOnline (https://www.teacheronline.be) in order to support screen sharing.",
  "homepage_url": "https://www.teacheronline.be",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.teacheronline.be/*",
      "https://*.teacheronline.eu/*",
      "https://*.teacheronline.fr/*",
      "https://*.teach-me.online/*",
      "https://*.teach-me.be/*",
      "https://*.teacher-online.be/*",
      "https://*.teacher-online.nl/*",
      "https://*.teacher-online.org/*",
      "https://*.teacher-online.fr/*",
      "https://*.teacher-online.uk/*",
      "https://*.teacher-online.uk/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
