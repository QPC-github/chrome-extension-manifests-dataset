{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.1",
  "author": "Szczesny Rutkovski",
  "default_locale": "uk",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "urls.js",
      "alerts_show.js",
      "listener.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*.ua/*",
    "https://*.ua/*",
    "http://*.biz/*",
    "https://*.biz/*",
    "http://*.com/*",
    "https://*.com/*",
    "http://*.ugmk.info/*",
    "https://*.ugmk.info/*",
    "http://*.net/*",
    "https://*.net/*",
    "http://*.oll.tv/*",
    "https://*.oll.tv/*",
    "http://*.kanalukraina.tv/*",
    "https://*.kanalukraina.tv/*"
  ]
}
