{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Leap Motion Integration (Beta)",
  "description": "Enables hand gestures with LeapMotionâ„¢ for browsing the web.",
  "version": "1.4",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "leap.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "storage",
    "history"
  ],
  "icons": {
    "128": "icon.png",
    "64": "icon_64.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "web_accessible_resources": [
    "ico_hand.png",
    "ico_hand_stop.png"
  ]
}
