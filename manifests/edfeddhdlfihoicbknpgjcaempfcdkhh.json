{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shortcut Button for Google Chrome Extensions",
  "manifest_version": 2,
  "version": "0.0.4",
  "description": "Now you only need 1 click to view your installed Chrome extensions!",
  "icons": {
    "48": "cog.png",
    "128": "cog.png"
  },
  "background": {
    "scripts": [
      "launch.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "cog.png",
      "38": "cog.png"
    },
    "default_title": "See your Chrome extensions"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}
