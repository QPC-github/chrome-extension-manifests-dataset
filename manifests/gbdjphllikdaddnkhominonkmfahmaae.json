{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YaTraffic",
  "version": "3.1",
  "manifest_version": 2,
  "description": "Traffic monitor based on Yandex service.",
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Получение информации о пробках...",
    "default_icon": "icons/yatraffic_def.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "main_128.png",
    "32": "main_32.png",
    "48": "main_48.png"
  },
  "permissions": [
    "alarms",
    "https://export.yandex.ru/*",
    "https://jgo.maps.yandex.net/*"
  ]
}
