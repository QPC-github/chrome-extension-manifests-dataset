{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Color-Blind-Friendly Flipper",
  "description": "This extension changes flippers' open gate to be more visible",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://*.vts.com/flipper/*",
        "https://*.herokuapp.com/flipper/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "https://*.vts.com/flipper/*",
    "https://*.herokuapp.com/flipper/*"
  ]
}
