{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "聚划算绿色版",
  "version": "1.1",
  "icons": {
    "64": "icon.png",
    "128": "icon_128.png"
  },
  "description": "聚划算去除广告,去除焦点图,去除推荐插件, powered by 独行, for clean world ... no pain, no ad!",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/clean.js"
      ],
      "matches": [
        "http://ju.taobao.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "cookies",
    "tabs",
    "notifications",
    "background",
    "storage",
    "http://ju.taobao.com/*"
  ]
}
