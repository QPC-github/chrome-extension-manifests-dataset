{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Punycode alert",
  "description": "Punycode alert is an extension that alerts you when a unicode url has been opened preventing phishing attacks.",
  "version": "0.2.4",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": [
      "lib/alert.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications",
    "webNavigation"
  ],
  "icons": {
    "16": "img/scan.png",
    "128": "img/scan-128.png"
  },
  "browser_action": {
    "default_icon": "img/scan.png",
    "default_popup": "main.html"
  }
}
