{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Schooly",
  "description": "Schooly Chrome Extension",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icons/24X24.png",
    "default_title": "Schooly"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "http://shoolapps.co.il/*"
  ]
}
