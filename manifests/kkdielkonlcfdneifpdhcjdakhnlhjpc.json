{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bilgi Kapısı",
  "short_name": "Engelsiz Ansiklopedi",
  "description": "Engelli bilgi kaynağına erişim",
  "version": "0.0.0.4",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.gowikipedia.org/*"
    ]
  },
  "browser_action": {
    "default_icon": "images/active16.png"
  },
  "icons": {
    "16": "images/active16.png",
    "48": "images/active48.png",
    "128": "images/active128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "*://*.wikipedia.org/*",
    "webRequestBlocking"
  ]
}
