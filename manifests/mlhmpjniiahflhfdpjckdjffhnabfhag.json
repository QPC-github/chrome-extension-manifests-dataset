{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QR Code This!",
  "description": "Convert text, links and pictures to QR Codes.",
  "version": "0.0.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "16-icon.png",
    "128": "128-icon.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "qrcode.js",
      "bg_script.js"
    ],
    "presistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "128-icon.png",
    "default_title": "QR Code Result",
    "default_popup": "options.html"
  },
  "manifest_version": 2
}
