{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Скриншотер",
  "short_name": "Скриншотер",
  "manifest_version": 2,
  "version": "1.4",
  "description": "Жми на иконку, выдели область и скриншот готов!",
  "background": {
    "persistent": false,
    "scripts": [
      "eventPage.js",
      "date.format.js",
      "contextMenu.js"
    ]
  },
  "browser_action": {
    "default_title": "Сделать скриншот текущей страницы"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "activeTab",
    "notifications",
    "storage",
    "http://xn--e1affnfjebo2d.xn--p1ai/",
    "http://skrinshoter.ru/"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://xn--e1affnfjebo2d.xn--p1ai/*",
        "http://skrinshoter.ru/*"
      ],
      "js": [
        "selfIdentifier.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
