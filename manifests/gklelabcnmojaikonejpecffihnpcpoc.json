{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "2.0.2",
  "homepage_url": "http://www.redesocialbeta.com.br/p/lembretes.html",
  "manifest_version": 2,
  "offline_enabled": true,
  "default_locale": "pt_BR",
  "app": {
    "launch": {
      "local_path": "home.html"
    }
  },
  "options_page": "home.html?page=settings",
  "background": {
    "scripts": [
      "alertJS.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/iconMin.png"
  },
  "content_security_policy": "script-src 'self' https:// 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "*",
    "storage",
    "notifications",
    "background",
    "unlimited_storage"
  ]
}
