{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ShopOut",
  "short_name": "ShopOut",
  "description": "Convert Product Price into Your Earning Time",
  "version": "1.3.3",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon-16px.png",
    "48": "icons/icon-48px.png",
    "128": "icons/icon-128px.png"
  },
  "browser_action": {
    "default_title": "shopout",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "/images/*",
    "/popup/*",
    "/icons/*"
  ],
  "permissions": [
    "https://www.amazon.in/*",
    "https://www.amazon.com.au/*",
    "https://www.amazon.com.br/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.cn/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.de/*",
    "https://www.amazon.it/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.com.mx/*",
    "https://www.amazon.nl/*",
    "https://www.amazon.es/*",
    "https://www.amazon.ae/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.com/*",
    "https://www.amazon.com.tr/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "./content/content.js"
      ],
      "css": [
        "./content/content.css"
      ],
      "matches": [
        "https://www.amazon.in/*",
        "https://www.amazon.com.au/*",
        "https://www.amazon.com.br/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.cn/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.de/*",
        "https://www.amazon.it/*",
        "https://www.amazon.co.jp/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.nl/*",
        "https://www.amazon.es/*",
        "https://www.amazon.ae/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.com/*",
        "https://www.amazon.com.tr/*"
      ]
    }
  ]
}
