{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Phonetic Alphabet Generator - Spelling ",
  "description": "Nato phonetic alphabet translator.Pronounciation Tool. Highly useful for Help Desk",
  "version": "0.0.5",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Click to open Popup",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
