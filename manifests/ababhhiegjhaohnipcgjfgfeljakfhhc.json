{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Base64 Decoder",
  "description": "Decodes Base64 strings. Highlight the string and right-click.",
  "version": "0.2",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "zepto.js",
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}
