{
  "name": "Pandoraâ„¢ Voice Recognition",
  "short_name": "PandoraVR",
  "description": "Adds voice commands to Pandora, allowing you to control your music more freely.",
  "version": "0.2",
  "icons": {
    "128": "media/icon-128.png",
    "48": "media/icon-48.png",
    "16": "media/icon-16.png"
  },
  "permissions": [
    "tabs",
    "*://*.change.org/"
  ],
  "minimum_chrome_version": "25.0.0.0",
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "css": [
        "media/styles.css"
      ],
      "js": [
        "scripts/sha256.js",
        "scripts/core.js",
        "scripts/deploy.js",
        "scripts/feedback.js"
      ],
      "matches": [
        "https://*.pandora.com/*",
        "http://*.pandora.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "media/sprites.png",
    "media/icon-16.png"
  ]
}
