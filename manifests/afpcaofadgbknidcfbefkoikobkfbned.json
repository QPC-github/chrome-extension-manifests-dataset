{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "智能自动刷新工具",
  "description": "适用于抖音、火山小视频、悟空问答、今日头条、吉云互动等团队审核后台自动任务刷新，解放双手，提高生产力。",
  "short_name": "智能自动刷新工具",
  "version": "2.0.8",
  "author": "sarike",
  "icons": {
    "64": "image/icon128.png",
    "128": "image/icon128.png",
    "256": "image/icon256.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "image/icon128.png",
      "128": "image/icon128.png",
      "256": "image/icon256.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_start",
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms"
  ]
}
