{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Injector",
  "short_name": "Injector",
  "description": "A handy utility to replace Chrome's removed 'Custom.css' functionality.",
  "version": "0.4.0",
  "icons": {
    "32": "img/si_32.png",
    "64": "img/si_64.png",
    "128": "img/si_128.png",
    "256": "img/si_256.png"
  },
  "minimum_chrome_version": "32.0",
  "permissions": [
    "storage",
    "tabs"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": [
        "js/style_injector.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Injector",
    "default_icon": {
      "19": "/img/si_19.png",
      "38": "/img/si_38.png"
    },
    "default_popup": "popup.html"
  }
}
