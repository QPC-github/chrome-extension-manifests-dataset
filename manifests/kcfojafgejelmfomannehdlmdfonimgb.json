{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SpeedFaces Screen Sharing",
  "short_name": "SpeedFaces ScreenShare",
  "author": "SpeedFaces, LLC",
  "version": "1.2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension allows you to share your screen when using SpeedFaces.",
  "homepage_url": "https://speedfaces.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.speedface.me/*",
      "https://*.speedfaces.com/*"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "matches": [
        "https://*.speedface.me/*",
        "https://*.speedfaces.com/*"
      ]
    }
  ],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
