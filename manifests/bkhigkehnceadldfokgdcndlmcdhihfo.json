{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ValcomAlert for Chrome",
  "description": "ValcomAlert for Chrome extension allows for non-mobile device intgergration with Valcom's ecosystem.",
  "manifest_version": 2,
  "version": "1.2.6",
  "background": {
    "persistent": true,
    "scripts": [
      "sendSignal.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "ValcomAlert Extension",
    "default_icon": "chrome-icon.png",
    "default_popup": "ConnectionPage.html"
  },
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity",
    "background"
  ],
  "icons": {
    "128": "chrome-icon.png"
  }
}
