{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Signal all sites that you are vegan!",
  "manifest_version": 2,
  "name": "Vegan Signal",
  "version": "0.11",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "cookies",
    "webNavigation",
    "notifications",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Signal all sites that you are vegan!",
    "default_icon": "icon_enable.png"
  }
}
