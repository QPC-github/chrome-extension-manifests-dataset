{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Visualizador de cookies",
  "description": "Lo mejor para visualizar cookies en tu navegador",
  "version": "1.0.0",
  "icons": {
    "128": "img/cookies.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "img/cookies.png"
    },
    "default_title": "Cookies",
    "default_popup": "index.html"
  },
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "gcm",
    "storage",
    "notifications",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}
