{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spoc Pro Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Spoc Pro VTR.",
  "version": "0.1.1.1",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://vtr.spoc.pro/*",
      "*://vtr-preprod.spoc.pro/*"
    ]
  }
}
