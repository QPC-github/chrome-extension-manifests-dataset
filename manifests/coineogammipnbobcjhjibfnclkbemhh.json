{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "News Hub",
    "default_popup": "popup.html"
  },
  "description": "The easiest way to stay updated with your favorite news sites",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "name": "News Hub",
  "version": "1.0.0.1",
  "permissions": [
    "tabs",
    "notifications",
    "https://*.google.com/*",
    "http://*.google.com/*"
  ]
}
