{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cachemunk Chrome Extension",
  "version": "1.7",
  "manifest_version": 2,
  "description": "Easily Cache Resources from the web as you find them.",
  "icons": {
    "16": "style/img/icons/logo.16px.png",
    "48": "style/img/icons/logo.48px.png",
    "128": "style/img/icons/logo.128px.png"
  },
  "background": {
    "page": "layout/bg.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "style/img/icons/logo.19px.png",
      "38": "style/img/icons/logo.38px.png"
    },
    "default_title": "Cachemunk",
    "default_popup": "layout/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "style/content.css",
        "style/browserspecifics.css"
      ],
      "js": [
        "script/api/msgevents.js",
        "script/api/content.js",
        "script/api/browserspecifics.js",
        "script/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "style/img/logo.png"
  ],
  "permissions": [
    "background",
    "tabs",
    "activeTab",
    "contextMenus",
    "cookies",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ]
}
