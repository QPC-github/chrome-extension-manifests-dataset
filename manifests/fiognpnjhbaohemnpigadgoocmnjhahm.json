{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cinema Mode",
  "version": "4.0.1",
  "icons": {
    "128": "popcorn-icon.png"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "storage"
  ],
  "browser_action": {
    "default_title": "Cinema Mode",
    "default_icon": "popcorn-icon.gif",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://extensionfactory.com https://*.extensionfactory.com; object-src 'self';"
}
