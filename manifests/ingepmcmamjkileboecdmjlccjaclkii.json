{
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "access"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Ne dépensez pas plus d'argent qu'il n'en faut! Épargnez à partir d'aujourd'hui!",
  "background": {
    "scripts": [
      "js/main.js"
    ],
    "persistent": true
  },
  "name": "Québec Échantillons Gratuits",
  "permissions": [
    "http://www.quebecechantillonsgratuits.com/",
    "notifications",
    "tabs",
    "storage"
  ],
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "16": "images/icon16.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "version": "1.1"
}
