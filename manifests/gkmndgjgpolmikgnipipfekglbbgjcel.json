{
  "manifest_version": 2,
  "name": "__MSG_app_name__",
  "short_name": "__MSG_app_short_name__",
  "description": "__MSG_app_description__",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "default_locale": "en",
  "version": "2.10.0",
  "author": "raingart",
  "permissions": [
    "storage",
    "downloads",
    "downloads.shelf"
  ],
  "optional_permissions": [
    "tabs",
    "notifications",
    "downloads.open"
  ],
  "background": {
    "page": "/html/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "__MSG_app_title__",
    "default_icon": {
      "16": "/icons/16.png",
      "48": "/icons/48.png",
      "128": "/icons/128.png"
    }
  },
  "icons": {
    "16": "/icons/16.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },
  "options_page": "/html/options.html"
}
