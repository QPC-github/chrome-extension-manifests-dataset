{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Salesforce Org Status",
  "description": "Quickly determine Salesforce instance information with a single click",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "declarativeContent",
    "tabs"
  ],
  "page_action": {
    "default_icon": {
      "19": "Online_19.png",
      "38": "Online_38.png"
    },
    "default_title": "Check Salesforce Org Status"
  },
  "icons": {
    "48": "Online_48.png",
    "60": "Online_60.png",
    "128": "Online_128.png"
  },
  "manifest_version": 2
}
