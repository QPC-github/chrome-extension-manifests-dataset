{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "三人行屏幕共享",
  "description": "您允许共享屏幕吗？",
  "version": "1.0.4",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "web屏幕录制与分享"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://10.242.65.222/*",
      "*://webnrtc.netease.im/*",
      "*://apptest.netease.im/*",
      "*://app.netease.im/*",
      "*://app.yunxin.163.com/*",
      "*://live-dev.3ren.cn/*",
      "*://live-uat.3ren.cn/*",
      "*://live.3ren.cn/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "declarativeContent"
  ]
}
