{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mega Copy Tabs",
  "version": "0.0.0.3",
  "description": "Create one link to copy and share all your opened tabs",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "management",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "manifest_version": 2
}
