{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "n2n Web Screensharing",
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "short_name": "Screen sharing for n2n Application",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.1.1",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in Finexis Web Application.",
  "externally_connectable": {
    "matches": [
      "*://webxx.agora.io/*",
      "*://localhost/*",
      "*://finexis-web.herokuapp.com/*",
      "*://finexis-web-stag.herokuapp.com/*",
      "*://finexis-web-prod.herokuapp.com/*",
      "*://n2n-stag.qiscus.io/*",
      "*://n2n.qiscus.io/*"
    ]
  },
  "icons": {
    "128": "128w.png",
    "16": "16w.png",
    "48": "48w.png"
  },
  "browser_action": {
    "default_icon": "16w.png"
  }
}
