{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Triforce: Cloud Links Saver",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Salve seus links na nuvem e acesse em qualquer lugar que vocÃª esteja e em qualquer navegador!",
  "icons": {
    "16": "square-logo-black.png",
    "48": "square-logo-black.png",
    "128": "square-logo-black.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
