{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Statsily",
  "version": "1.0",
  "description": "Block your own page views so they don't count towards your stats in Statsily",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "128": "128.png"
  },
  "browser_action": {
    "default_title": "Statsily"
  },
  "optional_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "*://*.statsily.com/*",
    "webRequest",
    "webRequestBlocking",
    "declarativeContent",
    "storage",
    "activeTab"
  ]
}
