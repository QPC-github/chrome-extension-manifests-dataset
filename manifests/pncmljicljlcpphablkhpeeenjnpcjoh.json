{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "assets/js/jquery.js",
      "assets/js/notifications.js"
    ]
  },
  "browser_action": {
    "default_icon": "assets/img/offline.png",
    "default_popup": "popup/index.html",
    "default_title": "MysTK - Hors-Ligne"
  },
  "description": "Notifie lorsque MysTK est en LIVE !",
  "icons": {
    "128": "assets/img/logo_mini.png"
  },
  "manifest_version": 2,
  "name": "MysTK Live",
  "permissions": [
    "background",
    "https://api.twitch.tv/kraken/streams?channel=*",
    "*://*.googleapis.com/*",
    "notifications",
    "storage"
  ],
  "short_name": "MysTK Live",
  "version": "1.0"
}
