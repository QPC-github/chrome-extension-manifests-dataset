{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "short_name": "__MSG_name__",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
    "128": "img/128.png",
    "64": "img/64.png",
    "32": "img/32.png"
  },
  "browser_action": {
    "default_icon": "img/32.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "/pages/newtab.html"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "history",
    "unlimitedStorage",
    "chrome://favicon/",
    "contextMenus",
    "storage",
    "topSites",
    "activeTab",
    "*://newtab-search.com/*",
    "*://mini.s-shot.ru/*"
  ],
  "content_security_policy": "connect-src *; script-src 'self' https://www.google-analytics.com https://query.yahooapis.com; object-src 'self'",
  "version": "3.1"
}
