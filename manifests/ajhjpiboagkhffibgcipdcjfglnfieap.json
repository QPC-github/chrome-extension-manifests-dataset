{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Maven Weekly",
  "description": "Use this extension to share links with friends in a weekly digest",
  "version": "1.0.5",
  "browser_action": {
    "default_popup": "add.html"
  },
  "externally_connectable": {
    "matches": [
      "http://mavenweekly.com/*",
      "https://mavenweekly.com/*"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' http://mavenweekly.com/; object-src 'self'"
}
