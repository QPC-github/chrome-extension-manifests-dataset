{
  "name": "小猪标签页 (Pig Tab)",
  "version": "1.0.3",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "core/background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "core/newpage-pop.html"
  },
  "default_locale": "zh_CN",
  "description": "小猪标签页 (Pig Tab/Pig Tools)，一个定制的浏览器开始标签页。轻松找到自己喜欢的书签和关闭的标签页、随手记笔记。",
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png"
  },
  "optional_permissions": [
    "topSites",
    "chrome://favicon/"
  ],
  "options_page": "core/options.html",
  "permissions": [
    "http://*.flickr.com/",
    "tabs",
    "bookmarks",
    "management",
    "contextMenus",
    "unlimitedStorage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
