{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sunny",
  "version": "1.2",
  "description": "Weather plugin for Google Chrome",
  "icons": {
    "128": "images/badge/128/sun.png"
  },
  "background": {
    "scripts": [
      "javascripts/jquery.min.js",
      "javascripts/application.js"
    ]
  },
  "permissions": [
    "storage",
    "geolocation"
  ],
  "browser_action": {
    "default_icon": {
      "64": "images/badge/128/sun.png"
    },
    "default_title": "Sunny",
    "default_popup": "popup.html"
  }
}
