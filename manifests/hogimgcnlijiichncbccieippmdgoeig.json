{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "easy calculator",
  "description": "calculate simply and fast",
  "version": "2.0",
  "permissions": [
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "500": "calc.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "click to open calculator",
    "default_icon": "calc.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
