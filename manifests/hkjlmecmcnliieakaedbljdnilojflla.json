{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ITnews PICKボタン",
  "short_name": "ITnews",
  "description": "ITnewsPICKボタンを使えば、今見ているウェブサイトを簡単にPick＆SNSにシェアできます！",
  "version": "1.5",
  "author": "Rocketa Inc.",
  "permissions": [
    "storage",
    "background",
    "tabs",
    "https://itnews.org/"
  ],
  "browser_action": {
    "default_title": "ITnews PICKボタン",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "scripts/jquery.min.js",
      "scripts/background.js"
    ]
  }
}
