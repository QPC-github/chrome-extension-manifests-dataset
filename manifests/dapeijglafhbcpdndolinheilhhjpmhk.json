{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ニコ生履歴",
  "short_name": "ニコ生履歴",
  "description": "ニコニコ生放送の視聴履歴を管理する拡張機能",
  "version": "1.3.2",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://live.nicovideo.jp/watch/lv*",
        "http://live2.nicovideo.jp/watch/lv*"
      ],
      "js": [
        "lib/jquery-2.2.0.min.js",
        "liveHistory.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "tabs",
    "*://*.nicovideo.jp/"
  ],
  "content_security_policy": "script-src 'unsafe-eval' https://www.google-analytics.com; object-src 'self'"
}
