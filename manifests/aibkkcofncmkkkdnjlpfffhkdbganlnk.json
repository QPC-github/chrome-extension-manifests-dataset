{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TMTChat Screen Share",
  "author": "TechMeetsTrader",
  "version": "0.1.8",
  "minimum_chrome_version": "34",
  "description": "Enable screen sharing for TMTChat by techmeetstrader.com",
  "homepage_url": "https://techmeetstrader.com",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "64": "favicon-64x64.png",
    "96": "favicon-96x96.png",
    "128": "favicon-128x128.png",
    "256": "favicon-256x256.png"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://chat.techmeetstrader.com/*",
      "*://conference.techmeetstrader.com/*",
      "*://vchat.techmeetstrader.com/*",
      "*://al.techmeetstrader.com/*",
      "*://erick.techmeetstrader.com/*",
      "*://alphashark.techmeetstrader.com/*",
      "*://staging.techmeetstrader.com/*",
      "*://techmeetstrader.com/*"
    ]
  }
}
