{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Subreddit to Imgur ",
  "version": "1.0",
  "description": "Converts subreddit url into imgur gallery url.",
  "background": {
    "scripts": [
      "background.js",
      "rtoi.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Convert to Imgur gallery"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://*.reddit.com/r/*"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon.png"
  },
  "manifest_version": 2
}
