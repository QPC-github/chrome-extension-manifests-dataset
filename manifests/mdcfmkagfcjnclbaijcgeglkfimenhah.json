{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "No Trending",
  "description": "Remove Trends from Facebook and Twitter",
  "version": "1.1",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "no-trending.js"
      ],
      "css": [
        "no-trending.css"
      ]
    }
  ]
}
