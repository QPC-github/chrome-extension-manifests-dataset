{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CodeHover",
  "version": "0.0.7",
  "description": "Quickly view the code of pieces on a website.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Enable.",
    "default_icon": {
      "16": "images/ch16.png",
      "32": "images/ch32.png",
      "48": "images/ch48.png",
      "128": "images/ch128.png"
    }
  },
  "icons": {
    "16": "images/ch16.png",
    "32": "images/ch32.png",
    "48": "images/ch48.png",
    "128": "images/ch128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
