{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "crx downloader",
  "description": "Download extensions and apps from chrome webstore.（一键将Webstore的扩展程序保存到本地）",
  "version": "0.3",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "https://chrome.google.com/webstore/detail/*"
  ],
  "browser_action": {
    "default_title": "Click to download this extension!",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
