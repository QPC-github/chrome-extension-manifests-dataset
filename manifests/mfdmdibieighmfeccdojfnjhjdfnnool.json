{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Wave Radio",
  "version": "1.6",
  "description": "Share songs on waveradio.co",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "cookies",
    "tabs",
    "*://*.waveradio.co/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdn.jsdelivr.net/npm/vue; object-src 'self'",
  "manifest_version": 2
}
