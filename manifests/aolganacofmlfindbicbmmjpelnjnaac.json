{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.1",
  "default_locale": "en",
  "background": {
    "scripts": [
      "background/index.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "contentScript/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "inject.js"
  ],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "identity",
    "alarms",
    "notifications",
    "contentSettings",
    "webRequest",
    "webRequestBlocking",
    "https://*/",
    "http://*/"
  ]
}
