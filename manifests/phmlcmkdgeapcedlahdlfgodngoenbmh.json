{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Включение Flash для игры Косынка-Онлайн",
  "version": "0.1.0",
  "description": "Играй в Косынку-Онлайн, используя это специальное расширение от Kosmos и Playkot LTD.",
  "permissions": [
    "contentSettings",
    "background",
    "*://*.vk.com/*",
    "*://*.ok.ru/*",
    "*://*.odnoklassniki.ru/*",
    "*://*.my.mail.ru/*",
    "*://*.fotostrana.ru/*"
  ],
  "browser_action": {
    "default_icon": "assets/ru/icon_48.png",
    "default_popup": "html/ru/popup.html"
  },
  "icons": {
    "16": "assets/ru/icon_16.png",
    "48": "assets/ru/icon_48.png",
    "128": "assets/ru/icon_128.png"
  },
  "background": {
    "page": "html/ru/background.html",
    "persistent": false
  },
  "minimum_chrome_version": "59",
  "manifest_version": 2
}
