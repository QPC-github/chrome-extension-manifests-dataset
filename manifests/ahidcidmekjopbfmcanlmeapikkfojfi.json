{
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "IG-Engager"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:3000 https://localhost:3000 https://ssl.google-analytics.com/ https://www.google-analytics.com; object-src 'self'",
  "description": "IG-Engager",
  "icons": {
    "128": "img/icon_128.png",
    "16": "img/icon_16.png",
    "48": "img/icon_48.png"
  },
  "manifest_version": 2,
  "name": "IG-Engager",
  "permissions": [
    "alarms",
    "background",
    "power",
    "storage",
    "unlimitedStorage",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://*.instagram.com/"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.1.1",
  "web_accessible_resources": [
    "https://www.instagram.com/*"
  ]
}
