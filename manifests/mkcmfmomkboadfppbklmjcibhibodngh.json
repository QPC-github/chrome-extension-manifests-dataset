{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Công cụ hỗ trợ sử dụng các sản phẩm VAWAY.VN",
  "description": "Công cụ hỗ trợ sử dụng các sản phẩm VAWAY.VN",
  "version": "5.1.0",
  "permissions": [
    "https://*.facebook.com/",
    "https://*.vaway.vn/",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "storage/img/icon.png"
  },
  "manifest_version": 2,
  "version_name": "1.0",
  "icons": {
    "64": "storage/img/icon.png"
  },
  "background": {
    "scripts": [
      "storage/js/system.js"
    ],
    "persistent": false
  }
}
