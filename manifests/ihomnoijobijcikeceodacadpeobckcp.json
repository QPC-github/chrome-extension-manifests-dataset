{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "One Click Screenshot",
  "version": "1.0",
  "description": "A very simple screenshot extension. One click, done!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Create a screenshot",
    "default_icon": "icon16.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
