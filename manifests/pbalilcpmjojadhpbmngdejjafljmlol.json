{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "lib/angular/angular.min.js",
      "js/base.js",
      "js/bg.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/19.png",
      "38": "img/38.png"
    },
    "default_popup": "app.html",
    "default_title": "mensagensdamanha.com"
  },
  "description": "Mensagens e Frases Positivas para começar bem um novo dia.",
  "icons": {
    "128": "img/128.png",
    "16": "img/16.png",
    "48": "img/48.png"
  },
  "manifest_version": 2,
  "name": "Mensagens da Manhã",
  "permissions": [
    "notifications",
    "https://ajax.googleapis.com/ajax/services/feed/load"
  ],
  "version": "1.0.1",
  "web_accessible_resources": [
    "img/48.png"
  ]
}
