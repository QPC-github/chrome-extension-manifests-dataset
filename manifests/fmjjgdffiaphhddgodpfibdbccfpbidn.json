{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "优惠券联盟-全网内部券",
  "version": "2.1.6",
  "manifest_version": 2,
  "description": "优惠券联盟是集淘宝天猫、拼多多等购物热门站优惠券，可自行搜索关键字查找内部折扣优惠券，特别是在淘宝购买商品的时候，往往可能会忘记优惠券领用，此插件工具能够让你永远都不会忘记领取内部券，省钱省到家。本工具致力做到网内最好用的工具。",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_title": "优惠券联盟-全网内部券",
    "default_popup": "html/popup.html"
  },
  "offline_enabled": true,
  "content_scripts": [
    {
      "js": [
        "scripts/jquery.js",
        "scripts/echarts.min.js",
        "scripts/jquery.cookie.js",
        "scripts/content.js",
        "scripts/background.js"
      ],
      "css": [
        "css/content.css"
      ],
      "matches": [
        "*://*.taobao.com/*",
        "*://*.chi.taobao.com/*",
        "*://*.ju.taobao.com/*",
        "*://*.alitrip.com/*",
        "*://*.tmall.com/*",
        "*://*.tmall.hk/*",
        "*://*.1688.com/*",
        "*://*.detail.tmall.com/*",
        "*://*.jd.com/*",
        "*://*.jd.hk/*",
        "*://*.baidu.com/*",
        "*://*.sogou.com/*",
        "*://*.so.com/*",
        "*://*.hao123.com/*",
        "*://*.amazon.cn/*",
        "*://*.dangdang.com/*",
        "*://*.jumei.com/*",
        "*://*.suning.com/*",
        "*://*.gome.com.cn/*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://tb.jad6.com; object-src 'self'",
  "web_accessible_resources": [
    "images/*",
    "scripts/*.js"
  ],
  "permissions": [
    "http*://*/*",
    "cookies",
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "alarms",
    "clipboardWrite",
    "notifications",
    "management",
    "webRequest",
    "webRequestBlocking"
  ]
}
