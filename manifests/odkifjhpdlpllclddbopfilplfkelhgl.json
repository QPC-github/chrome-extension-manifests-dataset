{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bible Quote",
  "version": "2.0.2",
  "description": "Цитата из Библии",
  "default_locale": "ru",
  "permissions": [
    "tabs",
    "http://bible-desktop.com/api*",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Цитата из Библии",
    "default_popup": "popup.html",
    "default_icon": "bibleapp-48.png"
  },
  "icons": {
    "16": "bibleapp-16.png",
    "48": "bibleapp-48.png",
    "128": "bibleapp-128.png"
  }
}
