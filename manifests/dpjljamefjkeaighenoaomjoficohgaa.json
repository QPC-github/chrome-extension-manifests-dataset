{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Weight On Planets",
  "short_name": "SpaceCalc",
  "description": "Weight Calculator which allows you to calculate your weight on different planets of solar system",
  "version": "1.0",
  "author": "Amit Gujar",
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_title": "Weight on Planets?"
  },
  "web_accessible_resources": [
    "scripts/*",
    "images/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
