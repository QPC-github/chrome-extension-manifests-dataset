{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "PriceLocal"
  },
  "name": "PriceLocal",
  "description": "Chrome Extension for PriceLocal",
  "homepage_url": "http://www.getpricelocal.com",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "<all_urls>",
    "geolocation",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.getpricelocal.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "bookmarklet.js"
  ],
  "version": "0.192",
  "manifest_version": 2
}
