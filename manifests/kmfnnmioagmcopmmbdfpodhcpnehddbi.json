{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "short_name": "__MSG_extCompany__",
  "version": "0.9.39",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "icons": {
    "16": "mt_16.png",
    "48": "mt_48.png",
    "128": "mt_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "mt_19.png",
      "38": "mt_38.png"
    },
    "default_title": "__MSG_extCompany__",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}
