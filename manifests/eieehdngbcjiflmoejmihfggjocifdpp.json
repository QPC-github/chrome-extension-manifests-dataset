{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LanguageConvo Screen Sharing",
  "version": "1.0.4",
  "minimum_chrome_version": "62",
  "description": "Share your screen during lessons!",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_title": "LanguageConvo Screen Sharing"
  },
  "author": "LanguageConvo",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.languageconvo.com/*"
    ]
  },
  "homepage_url": "https://www.languageconvo.com/",
  "permissions": [
    "desktopCapture",
    "declarativeContent"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
