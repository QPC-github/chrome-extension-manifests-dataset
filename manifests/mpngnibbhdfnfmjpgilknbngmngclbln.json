{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "icafium",
  "version": "0.0.0.4",
  "description": "Baidu icafe assistant used for managing bugs, messages.",
  "icons": {
    "75": "img/logo_75.png"
  },
  "author": "diydyq@126.com",
  "browser_action": {
    "default_icon": {
      "19": "img/logo_19_gray.png",
      "38": "img/logo_38_gray.png"
    },
    "default_title": "iCafe助手",
    "default_popup": "html/options.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "*://*/*",
    "background",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
