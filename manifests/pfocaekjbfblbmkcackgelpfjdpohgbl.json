{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nsibidi translator",
  "version": "2.2.1",
  "description": "Translate all web pages in Nsibidi and Bamum alphabet so that you can learn Nsibidi and bamum",
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "nsibidi16.png",
    "48": "nsibidi48.png",
    "128": "nsibidi128.png"
  },
  "web_accessible_resources": [
    "nsibidiWeb.js",
    "nsibidiBamum.ttf"
  ],
  "manifest_version": 2
}
