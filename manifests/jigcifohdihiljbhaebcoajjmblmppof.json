{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "resources/background.js"
    ]
  },
  "name": "Verify Links",
  "commands": {
    "VerifyLinks": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Verify Links"
    }
  },
  "description": "Verify there are no broken links on the current page",
  "icons": {
    "16": "resources/icon-16.png",
    "48": "resources/icon-48.png",
    "128": "resources/icon-128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.1",
  "manifest_version": 2
}
