{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Icebergs - Reflection Reminder",
  "description": "Building on the Freeze Game exercise - the extension alerts you to freeze and reflect at set times",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Icebergs Reflect Event",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "iceberg-16.png",
    "32": "iceberg-32.png",
    "48": "iceberg-48.png",
    "128": "iceberg-128.png"
  }
}
