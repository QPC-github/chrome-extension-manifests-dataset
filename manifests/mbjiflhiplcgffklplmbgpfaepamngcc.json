{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CampWare Card Reader Extension",
  "short_name": "CampWare",
  "version": "1.13",
  "description": "Passes card scans to CampWare for processing",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "nativeMessaging"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/CampWare16.png",
      "32": "images/CampWare32.png",
      "48": "images/CampWare48.png",
      "128": "images/CampWare128.png"
    }
  },
  "icons": {
    "16": "images/CampWare16.png",
    "32": "images/CampWare32.png",
    "48": "images/CampWare48.png",
    "128": "images/CampWare128.png"
  },
  "manifest_version": 2,
  "externally_connectable": {
    "matches": [
      "*://campware.ca/*",
      "*://localhost/*",
      "*://10.216.21.17/*",
      "*://smlb-ut001.campware.ca/*",
      "*://smlb-d001.campware.ca/*"
    ]
  }
}
