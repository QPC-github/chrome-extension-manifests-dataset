{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GIF Maker Plus",
  "description": "Make gifs right on your browser",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon-16.png",
    "19": "icon-19.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_title": "GIF Maker Plus",
    "default_icon": "icon-19.png"
  },
  "manifest_version": 2
}
