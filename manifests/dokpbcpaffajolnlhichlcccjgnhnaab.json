{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Minimoviles.com",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Entérate de todas las novedades sobre telefonía móvil, tablets, tarifas y operadores.",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-1.8.2.min.js",
      "js/lib.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "tabs",
    "background",
    "storage",
    "notifications"
  ]
}
