{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Switch NYT between web and mobile",
  "description": "Toggle NYTimes site between mobile and www",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Switch to NYTimes mobile"
  },
  "permissions": [
    "declarativeContent",
    "tabs"
  ]
}
