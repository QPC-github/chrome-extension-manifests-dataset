{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "The Shopping Toolbar for eBay",
  "version": "3.0",
  "description": "Track your eBay auctions and deals",
  "browser_action": {
    "default_icon": "img/logo32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/logo16.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "background": {
    "scripts": [
      "js/lib/jquery.min.js",
      "js/lib/underscore-min.js",
      "js/storage.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "http://ajax.googleapis.com/",
    "https://api.ebay.com/",
    "http://www.ebay.com/",
    "https://signin.ebay.com/",
    "http://my.ebay.com/",
    "https://www.ebay.com/"
  ]
}
