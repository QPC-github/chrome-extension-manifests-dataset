{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ukiwa",
  "version": "0.9.1",
  "description": "popup preview for iwara",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.iwara.tv/video*",
        "*://*.iwara.tv/users*"
      ],
      "css": [
        "css/ukiwa.css"
      ],
      "js": [
        "content_scripts/ukiwa.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}
