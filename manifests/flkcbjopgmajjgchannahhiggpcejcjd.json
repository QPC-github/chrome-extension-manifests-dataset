{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "老司机驾驶证",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "./images/icon.png",
    "48": "./images/icon.png",
    "128": "./images/icon.png"
  },
  "browser_action": {
    "default_title": "老司机驾驶证",
    "default_icon": "./images/icon.png",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "scripts": [
      "./background/background.js"
    ]
  },
  "commands": {
    "get-in": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "上车"
    }
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "tabs"
  ]
}
