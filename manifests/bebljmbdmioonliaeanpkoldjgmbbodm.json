{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Marketeer",
  "short_name": "Marketeer",
  "version": "0.21",
  "minimum_chrome_version": "38",
  "description": "Marketeer status extension: Talk to your visitors, check who is online, see opened conversations and get notifications!",
  "author": "Marketeer Lab",
  "icons": {
    "16": "assets/marketeer_logo_16px.png",
    "32": "assets/marketeer_logo_32px.png",
    "48": "assets/marketeer_logo_48px.png",
    "128": "assets/marketeer_logo_128px.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/marketeer_logo_16px.png",
      "32": "assets/marketeer_logo_32px.png",
      "48": "assets/marketeer_logo_48px.png",
      "128": "assets/marketeer_logo_128px.png"
    },
    "default_title": "Marketeer Status",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://my.marketeer.co/",
    "http://my.marketeer.co/",
    "notifications",
    "tabs"
  ],
  "web_accessible_resources": [
    "assets/icon_48.png"
  ],
  "background": {
    "page": "login.html",
    "persistent": false
  }
}
