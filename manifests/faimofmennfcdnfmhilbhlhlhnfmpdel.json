{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.3",
  "manifest_version": 2,
  "name": "Social Disconnect Plus",
  "short_name": "social-disconnect-plus",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/social-disconnect-plus.html",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "description": "removes all forms of tracking from social media contents (i.e. Facebook like button).",
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "commands": {
    "add-to-whitelist": {
      "description": "Add domain to whitelist",
      "suggested_key": {
        "mac": "Command+Shift+A",
        "default": "Ctrl+Shift+A"
      }
    },
    "remove-from-whitelist": {
      "description": "Remove domain from whitelist",
      "suggested_key": {
        "mac": "Command+Shift+V",
        "default": "Ctrl+Shift+V"
      }
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
