{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Improved Rock Paper Shotgun Comments",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Makes comments easier to read on the PC gaming blog \"Rock Paper Shotgun\" aka RPS - http://rockpapershotgun.com",
  "permissions": [
    "tabs",
    "*://*.rockpapershotgun.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.rockpapershotgun.com/*"
      ],
      "js": [
        "jquery-2.0.0.js",
        "script.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
