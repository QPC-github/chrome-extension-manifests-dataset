{
  "background": {
    "page": "bg.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon.png",
      "38": "img/icon@2x.png"
    },
    "default_popup": "popup.html",
    "default_title": "Bitcoin Assist"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Bitcoin Assist",
  "icons": {
    "128": "img/app_icon128.png",
    "16": "img/app_icon16.png",
    "48": "img/app_icon48.png"
  },
  "manifest_version": 2,
  "name": "Bitcoin Assist",
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "unlimitedStorage",
    "pageCapture",
    "webNavigation",
    "idle",
    "<all_urls>"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.7"
}
