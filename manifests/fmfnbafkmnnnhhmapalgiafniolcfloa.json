{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "includes/content.js"
      ]
    }
  ],
  "name": "Better",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/button.png"
  },
  "web_accessible_resources": [
    "assets/styles/compiled_target.css",
    "assets/img/logo.png",
    "assets/img/oddBg.png",
    "assets/img/girl.png",
    "assets/icons/betbrain-logo.png"
  ],
  "description": "Better - betting odds extension",
  "background": {
    "page": "background.html"
  },
  "homepage_url": "http://betteraddon.com/",
  "version": "1.0.3",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/better_button.png",
    "default_title": "Better"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "webNavigation"
  ]
}
