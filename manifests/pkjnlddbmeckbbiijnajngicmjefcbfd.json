{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Screen Sharing for Vis-A-Vis Platform",
  "short_name": "VAV Screen Sharing",
  "description": "Adds Screen Sharing functionality to Vis-A-Vis Platform",
  "author": "Vis-A-Vis Platform",
  "version": "1.2.0",
  "background": {
    "scripts": [
      "extension.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://qa.vis-a-vis.io/*",
      "*://vis-a-vis.io/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  }
}
