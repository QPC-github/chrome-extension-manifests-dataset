{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kamikaze",
  "description": "Automatically kill idle tabs",
  "version": "0.0.2",
  "background": {
    "scripts": [
      "src/kamikaze.js",
      "src/background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "src/icons/19.png",
      "38": "src/icons/38.png"
    },
    "default_title": "Kamikaze",
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "src/icons/16.png",
    "48": "src/icons/48.png",
    "128": "src/icons/128.png"
  },
  "manifest_version": 2
}
