{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Live Signage Chrome Player",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Player per la visualizzazione di un canale Live Signage o Live Tourist su totem outdoor e indoor, tv/display, tablet e Chromebit",
  "short_name": "Live Signage",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "windows",
    "system.display",
    "https://api.livesignage.it/v1/*"
  ]
}
