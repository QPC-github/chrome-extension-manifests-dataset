{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DDI - Connector f√ºr Instagram",
  "short_name": "Connector",
  "manifest_version": 2,
  "version": "0.0.0.4",
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "jquery-3.1.0.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*/*",
        "https://www.instagram.com/*",
        "https://www.instagram.com/*/",
        "https://www.instagram.com/*/*/"
      ],
      "js": [
        "jquery-3.1.0.min.js",
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "DDI - Connector",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://www.instagram.com/*",
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
