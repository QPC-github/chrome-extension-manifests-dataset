{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kraken.Me",
  "version": "1.1.0",
  "manifest_version": 2,
  "author": "Telecooperation Group, TU Darmstadt",
  "description": "Kraken.Me (Research project)",
  "homepage_url": "http://www.kraken.me",
  "icons": {
    "16": "icons/launcher/launcher_disabled16.png",
    "48": "icons/launcher/launcher_disabled48.png",
    "128": "icons/launcher/launcher_disabled128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/launcher/launcher_disabled128.png",
    "default_title": "Kraken.Me",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "identity",
    "geolocation",
    "storage",
    "unlimitedStorage",
    "tabs",
    "webNavigation",
    "cookies"
  ]
}
