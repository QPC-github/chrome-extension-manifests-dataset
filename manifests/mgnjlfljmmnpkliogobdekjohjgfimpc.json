{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "short_name": "pdf-tools",
  "name": "PDF Tools: Convert, Resize & Merge",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "web_accessible_resources": [
    "data/UI/icons/loader.gif"
  ],
  "homepage_url": "http://mybrowseraddon.com/pdf-tools.html",
  "permissions": [
    "storage",
    "downloads",
    "nativeMessaging"
  ],
  "description": "Manipulate PDF documents via Ghostscript interpreter right in your browser.",
  "browser_action": {
    "default_title": "PDF Tools: Convert, Resize & Merge",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
