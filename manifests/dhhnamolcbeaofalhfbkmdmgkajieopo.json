{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BALI - Booking Affiliate Link Integrator",
  "description": "Automatically adds Booking.com's Affiliate Tracking Id to webpages ensuring that bookings are credited to affiliates.",
  "icons": {
    "128": "icon_128.png"
  },
  "version": "0.2.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/includes/redux.min.js",
      "js/messages.js",
      "js/actions.js",
      "js/reducer.js",
      "js/background.js"
    ]
  }
}
