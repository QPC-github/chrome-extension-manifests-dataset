{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "chromit",
  "description": "Your Personal Brain Assistent",
  "version": "0.1.3",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "chromit",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
