{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NetMatch Desktop Streamer",
  "description": "A simple extension that allows you to stream your screen, tab or program into Netmatch hosted meetings.",
  "version": "1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "NetMatch-logo-16x16.png",
    "48": "NetMatch-logo-48x48.png",
    "128": "NetMatch-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.netmatch.nl/*"
    ]
  }
}
