{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TrelloTabs",
  "short_name": "TrelloTabs",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Store your open chrome tabs in Trello.",
  "homepage_url": "https://trello.com/b/KaowhW41/trellotabs",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Trello tab management",
    "default_popup": "lib/TrelloTabs/popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "settings/index.html",
    "lib/TrelloTabs/*"
  ],
  "options_page": "settings/index.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
