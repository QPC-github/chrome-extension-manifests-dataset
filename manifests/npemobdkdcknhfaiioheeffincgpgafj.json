{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Close Right",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Close Right Tabs.",
  "icons": {
    "16": "close_right.png",
    "48": "close_right_48.png",
    "128": "close_right_128.png"
  },
  "browser_action": {
    "default_icon": "close_right.png",
    "default_title": "Close Right"
  },
  "background": {
    "scripts": [
      "close_right.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ]
}
