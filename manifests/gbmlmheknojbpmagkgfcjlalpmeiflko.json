{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Contribute Cloud Cast",
  "author": "Contribute Cloud",
  "version": "1.1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Contribute Cloud enables content delivery, collaboration, Casting and Multi-Casting all through a FREE cloud-based platform.",
  "homepage_url": "https://contribute.cloud",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://contribute.cloud/*",
        "https://*.contribute.cloud/*",
        "https://localhost:3000/*",
        "https://localhost:3001/*"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon16.png",
    "icon48.png",
    "icon128.png"
  ]
}
