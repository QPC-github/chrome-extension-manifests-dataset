{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Disprz Screen Share",
  "author": "Disprz",
  "version": "2.4",
  "manifest_version": 2,
  "minimum_chrome_version": "50",
  "description": "This Chrome extension is developed as a screen share extension for the Disprz application.",
  "homepage_url": "https://www.disprz.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.learntron.net/*",
      "https://*.talentedge.in/*",
      "https://*.disprz.com/*",
      "https://*.educonverge.com/*",
      "https://*.bjaz.in/*",
      "https://*.bajajallianzlife.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
