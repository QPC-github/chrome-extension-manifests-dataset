{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cusli Chrome Extension",
  "short_name": "Cusli Extension",
  "description": "Create, save and copy your branded short links",
  "version": "1.0.4",
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Customize this link"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "https://www.customizelinks.com/",
    "clipboardWrite"
  ]
}
