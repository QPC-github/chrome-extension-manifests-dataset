{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pamuk Alışveriş Habercisi",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Pamuk.co Alışveriş Habercisi, alışveriş sitelerinde sunulan ürün ve markalar hakkında günlük kampanya ve indirim bilgileri sunar.",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "homepage_url": "http://www.pamuk.co/",
  "permissions": [
    "tabs",
    "storage",
    "http://pamuk.rottam.com/"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Pamuk.co",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
