{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Go fullscreen",
  "version": "1.0.2",
  "description": "This extension is made for MacOS users in particular, where Chrome has a bad fullscreen mode.",
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Go Fullscreen"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab",
    "contextMenus",
    "webNavigation",
    "storage"
  ]
}
