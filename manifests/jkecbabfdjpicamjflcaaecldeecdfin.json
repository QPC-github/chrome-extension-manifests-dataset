{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Articled",
  "description": "Focus on the content.",
  "version": "0.0.7",
  "browser_action": {
    "default_icon": "media/logo-rounded-256.png",
    "default_popup": "popup.html",
    "default_title": "Send this page to Articled"
  },
  "icons": {
    "16": "media/logo-rounded-16.png",
    "48": "media/logo-rounded-48.png",
    "128": "media/logo-rounded-128.png",
    "256": "media/logo-rounded-256.png"
  },
  "permissions": [
    "activeTab",
    "identity",
    "identity.email",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
