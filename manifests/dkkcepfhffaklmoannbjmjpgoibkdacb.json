{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weetok Screen Sharing",
  "author": "Weetok Inc.",
  "version": "2.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This chrome extension allows Weetok users to share screen contents.",
  "homepage_url": "http://weetok.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://weetok.com/*",
      "https://www.weetok.com/*",
      "https://weetok.xyz:8081/*",
      "https://47.254.32.204/*",
      "http://localhost:8887/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
