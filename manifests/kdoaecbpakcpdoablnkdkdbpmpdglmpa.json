{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "readwynk",
  "short_name": "read what you need to know",
  "version": "1.0",
  "description": "Find the curated content that matches with your interests and save it to your list.",
  "incognito": "split",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "activeTab",
    "cookies",
    "notifications"
  ],
  "icons": {
    "16": "./images/rw-logo-128px.png",
    "48": "./images/rw-logo-128px.png",
    "128": "./images/rw-logo-128px.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "./images/rw-logo-128px.png",
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
