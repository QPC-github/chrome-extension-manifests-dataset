{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "sceduler plugin",
  "version": "1.1.6",
  "description": "sceduler plugin is a simple solution to post web content to any connected social accounts",
  "homepage_url": "https://sceduler.com/",
  "icons": {
    "48": "logo-el.png"
  },
  "browser_action": {
    "default_icon": "logo-el.png"
  },
  "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'",
  "permissions": [
    "debugger",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "*pinterest.com/*",
        "*twitter.com/*",
        "*facebook.com/*",
        "*calendar.google.com/*",
        "*mail.*"
      ],
      "css": [
        "css/jquery-ui.css",
        "css/style.css",
        "lib/css/font-awesome.min.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/jquery-ui.min.js",
        "js/config.js",
        "js/profanity_words.js",
        "js/content.js",
        "js/script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "extension.png",
    "logo-el.png",
    "splash.png",
    "lib/fonts/*",
    "icons/*"
  ]
}
