{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.3",
  "manifest_version": 2,
  "name": "Downloads Button",
  "short_name": "downloads-button",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "homepage_url": "http://mybrowseraddon.com/downloads-button.html",
  "description": "Easily open downloads in a new tab with just one click!",
  "browser_action": {
    "default_title": "Downloads Button",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
