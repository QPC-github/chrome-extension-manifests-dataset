{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Inspire Extension",
  "description": "Daily Inspiration in your new tab",
  "homepage_url": "https://www.inspireextension.com",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "https://www.bex-digital.com/inspire/*",
    "bookmarks"
  ],
  "version": "1.3",
  "browser_action": {
    "default_icon": {
      "16": "images/bd-16.png",
      "32": "images/bd-32.png",
      "48": "images/bd-48.png",
      "128": "images/bd-128.png"
    }
  },
  "icons": {
    "16": "images/bd-16.png",
    "32": "images/bd-32.png",
    "48": "images/bd-48.png",
    "128": "images/bd-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "landing.html"
  },
  "web_accessible_resources": [
    "images/*.*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://www.bex-digital.com/inspire/custom.js https://www.bex-digital.com/inspire/background.js; object-src 'self' ;style-src 'self' 'unsafe-inline' *;media-src *;"
}
