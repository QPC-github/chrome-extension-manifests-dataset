{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unnoficial Reddit NSFW Filter for redesign",
  "version": "1.0",
  "options_page": "src/options/options.html",
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "manifest_version": 2,
  "description": "This extension removes NSFW items from reddit or makes them the only ones visible (your choice).",
  "author": "Peter McTeague",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.reddit.com/*",
        "https://www.reddit.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "options",
    "popup": "src/options/options.html",
    "default_popup": "src/options/options.html"
  }
}
