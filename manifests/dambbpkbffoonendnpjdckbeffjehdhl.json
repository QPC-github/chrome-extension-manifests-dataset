{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Docs Background Changer",
  "short_name": "Docs Background Changer",
  "version": "1.1.0",
  "description": "A modification to Google Docs to turn it into a sleek, modern design.",
  "author": "Carter",
  "content_scripts": [
    {
      "css": [
        "main.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://docs.google.com/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icons/icon128.png",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png"
  },
  "permissions": [
    "tabs"
  ]
}
