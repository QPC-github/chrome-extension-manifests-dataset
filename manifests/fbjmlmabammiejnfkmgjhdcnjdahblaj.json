{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pronounce",
  "description": "English text-to-speech app with natural voice to read aloud, boost your productivity and improve pronunciation.",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "index.html",
  "browser_action": {
    "default_title": "Pronounce",
    "default_popup": "index.html?popup"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'"
}
