{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ScreenAwake",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "Schedule your screen, using the chrome power API.",
  "icons": {
    "16": "Sun16.png",
    "48": "Sun48.png",
    "128": "Sun.png"
  },
  "permissions": [
    "power",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "Sun16.png",
    "default_title": "ScreenAwake",
    "default_popup": "index.html"
  }
}
