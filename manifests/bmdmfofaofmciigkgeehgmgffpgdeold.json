{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Drones Buyer Tool",
  "short_name": "DBT",
  "description": "The perfect extension to help you compare the cheapest tech items from sites like Gearbest, Banggood, FastTech, GeekBuying, etc.",
  "version": "0.4",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "author": "Malasuerte94",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Drones Buyer Tool"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://www.gearbest.com/",
    "http://www.shareasale.com/",
    "https://www.fasttech.com/",
    "http://m.gearbest.com/",
    "http://*.gearbest.com/",
    "http://www.steam-engine.org/",
    "http://www.banggood.com/",
    "http://m.banggood.com/",
    "http://img.banggood.com/",
    "http://amazon.com/",
    "https://www.amazon.com/",
    "http://dronesbuyer.com/",
    "http://recommended.dronesbuyer.com/rec.php"
  ]
}
