{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_lcl_ext_name__",
  "description": "__MSG_lcl_ext_desc__",
  "short_name": "CaseFixer",
  "default_locale": "en",
  "version": "1.0.2",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/128.png",
    "default_title": "CaseFixer"
  },
  "permissions": [
    "history",
    "storage",
    "contextMenus",
    "tabs",
    "cookies",
    "browsingData",
    "unlimitedStorage",
    "background",
    "identity",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "css/pull-style.css"
      ],
      "js": [
        "js/jquery.js",
        "js/listener.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/clipboard.js",
      "js/functions.js",
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "img/*",
    "js/*",
    "css/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
