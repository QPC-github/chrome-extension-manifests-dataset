{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "Collect Tabs",
  "name": "Collect Tabs",
  "description": "Collects all open tabs from other windows and adds them to this window",
  "version": "0.1.1",
  "background": {
    "scripts": [
      "collect.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "collect19.png",
      "38": "collect38.png"
    },
    "tooltip": "Collects all open tabs from other windows and adds them to this window"
  },
  "icons": {
    "16": "collect16.png",
    "48": "collect48.png",
    "128": "collect128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}
