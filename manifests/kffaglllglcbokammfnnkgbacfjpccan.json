{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SI Viewer",
  "version": "1.1.1",
  "description": "Ein einfaches Addon zur Darstellung des Sistrix Index. Den API Key in den Einstellungen in das erforderliche Feld eintragen.",
  "permissions": [
    "tabs",
    "storage",
    "https://api.sistrix.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Open dashboard"
  },
  "manifest_version": 2
}
