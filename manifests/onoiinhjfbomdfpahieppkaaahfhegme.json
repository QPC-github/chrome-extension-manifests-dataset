{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SMART Desktop Streamer",
  "description": "An extension that allows you to stream your desktop into meetings with SMART Conferene, powered by Jitsi Videobridge.",
  "version": "0.8",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "smart-logo-16x16.png",
    "48": "smart-logo-48x48.png",
    "128": "smart-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://join.smartadvisers.tech/*",
      "*://join.smartadvisers.com/*",
      "*://vc.smartadvisers.com/*",
      "*://conference.smartadvisers.com/*"
    ]
  }
}
