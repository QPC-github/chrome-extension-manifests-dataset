{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Jisho-OJAD",
  "description": "Add pitch accent display to Jisho",
  "version": "1.9",
  "background": {
    "scripts": [
      "jquery.js",
      "parse.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://jisho.org/search/*",
        "*://www.jisho.org/search/*",
        "*://jisho.org/word/*",
        "*://www.jisho.org/word/*"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "permissions": [
    "nativeMessaging",
    "http://www.gavo.t.u-tokyo.ac.jp/"
  ]
}
