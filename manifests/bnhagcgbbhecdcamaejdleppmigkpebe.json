{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Restyle Your Background",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "browsingData",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/functions.js",
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/functions.js",
      "js/background.js"
    ]
  },
  "icons": {
    "16": "icons/favicon_16.png",
    "32": "icons/favicon_32.png",
    "64": "icons/favicon.png"
  },
  "browser_action": {
    "default_title": "Restyle Your Background",
    "default_icon": "icons/favicon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "/*"
  ],
  "content_security_policy": "script-src 'unsafe-eval' https://127.0.0.1; object-src 'self'"
}
