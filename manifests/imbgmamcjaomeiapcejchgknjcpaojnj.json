{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fantasy Football Recommender",
  "version": "1.0",
  "description": "Use this extension on nfl.com to pick your optimal fantasy lineup.",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "js_functions/*"
  ],
  "page_action": {
    "default_popup": "popup.html"
  }
}
