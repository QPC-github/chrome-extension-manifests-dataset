{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Poltergeist",
  "version": "1.0",
  "description": "A prank Chrome extension that randomly rearranges your Chrome tabs at least once every 30 minutes.",
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "alarms"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "http://poltergeist.queg.net",
  "offline_enabled": true,
  "incognito": "spanning",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
