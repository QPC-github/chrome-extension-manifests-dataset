{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HTML Inspector",
  "description": "Injects HTML Inspector snippet into pages",
  "version": "0.0.3",
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "html-inspector.js"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "html-inspector.js"
      ]
    }
  ],
  "commands": {
    "Ctrl+I": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Ctrl+I"
      },
      "description": "Toggle HTML Inspector"
    }
  }
}
