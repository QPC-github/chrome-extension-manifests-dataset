{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cross Browser Screenshot Generator",
  "short_name": "Cross Browser",
  "author": "Nick Lee",
  "description": "Generate screenshots of the current web page on different browsers using BrowserStack",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "ui.html"
  },
  "background": {
    "scripts": [
      "./background.js"
    ],
    "persistent": false
  },
  "offline_enabled": false,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.browserstack.com/",
    "activeTab",
    "unlimitedStorage",
    "cookies"
  ]
}
