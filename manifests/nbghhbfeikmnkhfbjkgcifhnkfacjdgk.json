{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lichess Live Analysis Engine",
  "version": "1.0",
  "description": "Adds live analysis board for post-mortem analysis.",
  "icons": {
    "19": "icon-19.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.lichess.org/*"
      ],
      "js": [
        "chess.js",
        "jquery-2.1.4.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Lichess Live Analysis Engine"
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
