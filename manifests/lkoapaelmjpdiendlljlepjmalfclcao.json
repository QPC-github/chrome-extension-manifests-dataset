{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Betpal",
  "version": "1.0.2",
  "description": "The latest promotions for betting, casinos, poker and more online!",
  "manifest_version": 2,
  "icons": {
    "64": "img/bpicon-64.png",
    "128": "img/bpicon-128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background_script.js"
    ]
  },
  "permissions": [
    "https://www.betpal.com/",
    "tabs",
    "alarms",
    "storage"
  ],
  "browser_action": {
    "default_title": "Betpal latest promotions",
    "default_icon": "img/bpicon-128.png"
  }
}
