{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "右键谷歌翻译",
  "description": "选择网页文本内容，右键对选定文本进行翻译",
  "manifest_version": 2,
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "谷歌翻译"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "myscript.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
