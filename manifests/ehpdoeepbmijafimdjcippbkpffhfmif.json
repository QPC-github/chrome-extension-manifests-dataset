{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bookmark Manager per Domain",
  "version": "1.0.2",
  "description": "Lists all bookmarks for the domain of the current page as hyperlinks.",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "manifest_version": 2
}
