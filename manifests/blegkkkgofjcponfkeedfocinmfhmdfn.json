{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HN Styler",
  "version": "1.2.8",
  "manifest_version": 2,
  "description": "Highlights the comments on HN to make them easier to see the depth of the discussion",
  "icons": {
    "48": "hn48.png",
    "128": "hn128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "hn48.png"
    },
    "default_title": "HN"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "http://*/",
    "https://*/*",
    "https://*/"
  ],
  "web_accessible_resources": [
    "hn48.png",
    "hn128.png",
    "hnextension.js",
    "background.js"
  ]
}
