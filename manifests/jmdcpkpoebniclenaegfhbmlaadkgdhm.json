{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Подборка-Туров.ру",
  "author": "ООО \"МоиДокументы.ру\"",
  "version": "1.0.19",
  "description": "Идеальные подборки туров!",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png"
    },
    "default_title": "Подборка-Туров.ру",
    "default_popup": "pages/preview.html"
  },
  "background": {
    "scripts": [
      "scripts/libs/jquery-3.3.1.min.js",
      "scripts/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "match_about_blank": true,
      "js": [
        "scripts/libs/jquery-3.3.1.min.js",
        "scripts/libs/jquery-plugins.js",
        "scripts/libs/js-crypto.js",
        "scripts/content-script.js"
      ],
      "css": [
        "css/libs/cssreset.css",
        "css/basic-elements.css",
        "css/dialog-block.css",
        "css/rating-block.css",
        "css/load-ratings-block.css",
        "css/toggle-tour-button.css",
        "css/tour-row.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/*",
    "css/*"
  ],
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
