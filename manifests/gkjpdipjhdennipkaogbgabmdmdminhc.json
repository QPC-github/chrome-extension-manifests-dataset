{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "The Harlem Shake",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Make any website dance The Harlem Shake",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Do the Harlem Shake"
  },
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
