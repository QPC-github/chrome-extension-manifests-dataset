{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "description": "Предназначен для diary.ru. Отображает есть ли на вашем дневнике новые коментарии, дискуссии и u-mail сообщения",
  "icons": {
    "128": "icon_128.png"
  },
  "manifest_version": 2,
  "name": "Diary@AllChk",
  "options_page": "options.html",
  "permissions": [
    "idle",
    "background",
    "tabs",
    "http://*.diary.ru/",
    "notifications"
  ],
  "version": "2.3.2",
  "web_accessible_resources": [
    "icon_128.png"
  ]
}
