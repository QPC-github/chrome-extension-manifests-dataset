{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Marmoset",
  "description": "Create gorgeous code snapshots.",
  "version": "1.5",
  "requirements": {
    "3D": {
      "features": [
        "webgl"
      ]
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "permissions": [
    "fileSystem",
    "fileSystem.write"
  ],
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
