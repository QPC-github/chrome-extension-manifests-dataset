{
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/utils.js",
        "js/amazoncom.js"
      ],
      "matches": [
        "https://*.amazon.co.jp/*",
        "http://*.amazon.co.jp/*"
      ]
    },
    {
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/utils.js",
        "js/uniqlocom.js"
      ],
      "matches": [
        "http://*.uniqlo.com/*",
        "https://*.uniqlo.com/*"
      ]
    }
  ],
  "description": "Công cụ mua trên amazon nhật bản , uniqlo nhật bản của NEXT247 - Order tool",
  "icons": {
    "128": "images/128icon.png",
    "16": "images/16icon.png",
    "48": "images/48icon.png"
  },
  "manifest_version": 2,
  "name": "CÔNG CỤ ĐẶT HÀNG - NEXT247 ",
  "permissions": [
    "activeTab",
    "tabs",
    "https://*.taobao.com/*",
    "http://*.taobao.com/*",
    "https://*.1688.com/*",
    "http://*.1688.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.com/*",
    "http://*.hm.com/*",
    "https://*.tmall.hk/*",
    "http://*.tmall.hk/*",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "5.2"
}
