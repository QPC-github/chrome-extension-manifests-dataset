{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LTI Rainbow Sharing",
  "description": "LTI Rainbow Sharing (screens and applications)",
  "version": "1.1.0",
  "author": "Olivier Anguenot, Germain Clauss, Gerard Bunel",
  "browser_action": {
    "default_icon": "rainbow_128.png"
  },
  "icons": {
    "16": "rainbow_16.png",
    "48": "rainbow_48.png",
    "128": "rainbow_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "desktopCapture",
    "https://*.openrainbow.org/*",
    "https://*.openrainbow.net/*",
    "https://*.openrainbow.com/*",
    "https://*.ale-international.com/*",
    "https://*.al-mydemo.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.openrainbow.org/*",
      "https://*.openrainbow.net/*",
      "https://*.openrainbow.com/*",
      "https://*.ale-international.com/*",
      "https://*.al-mydemo.com/*"
    ]
  },
  "web_accessible_resources": [
    "rainbow_128.png"
  ]
}
