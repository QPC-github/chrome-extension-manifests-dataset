{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Word count",
  "description": "Counts words and characters in selected text",
  "version": "1.0.0",
  "icons": {
    "32": "icons/icon_32.png",
    "128": "icons/icon_128.png",
    "64": "icons/icon_64.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "notifications"
  ]
}
