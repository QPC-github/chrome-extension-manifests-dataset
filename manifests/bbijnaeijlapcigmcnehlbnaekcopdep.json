{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "kasswat",
  "description": "Get rid of Facebook / Google / Amazon ads & sponsored content",
  "version": "0.1.4.3",
  "icons": {
    "512": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "background.js"
      ],
      "matches": [
        "*://*.facebook.com/*",
        "*://*.google.com/*",
        "*://*.google.fr/*",
        "*://*.amazon.com/*",
        "*://*.amazon.fr/*",
        "*://*.9gag.com/*"
      ]
    }
  ]
}
