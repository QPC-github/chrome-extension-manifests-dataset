{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Memotes",
  "version": "1.1",
  "description": "Add meme emotes everywhere",
  "permissions": [
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "jquery-3.4.1.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "replace.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "img/memotes_icon128.png"
  },
  "manifest_version": 2
}
