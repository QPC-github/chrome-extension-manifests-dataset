{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Notix",
  "description": "Closed community tagging",
  "version": "0.2",
  "browser_action": {
    "default_icon": "notix/icons/icon48.png",
    "default_popup": "notix/main.html"
  },
  "background": {
    "scripts": [
      "ext/js/jquery-1.11.3.js",
      "ext/js/socket.js",
      "background.js",
      "ext/js/underscore.min.js"
    ]
  },
  "icons": {
    "16": "notix/icons/icon16.png",
    "48": "notix/icons/icon48.png",
    "128": "notix/icons/icon128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://notixapp.com/",
    "storage",
    "http://ipinfo.io/",
    "http://www.gravatar.com/"
  ]
}
