{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Save Text to Google Drive™",
  "description": "Save current webpage's plain text to google drive",
  "version": "1.2.3",
  "manifest_version": 2,
  "icons": {
    "16": "img/logo16.png",
    "24": "img/logo24.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png",
    "256": "img/logo256.png"
  },
  "browser_action": {
    "default_title": "Save Text to Google Drive™",
    "default_icon": {
      "16": "img/logo16.png",
      "24": "img/logo24.png",
      "32": "img/logo32.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
    },
    "default_popup": "popup/dist/index.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "img/logo48.png"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications",
    "contextMenus"
  ]
}
