{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shopping for Good",
  "version": "1.3",
  "description": "By shopping at select online stores, at no extra cost to you, a portion of your purchase will be donated to disaster relief.",
  "permissions": [
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/i16.png",
      "32": "images/i32.png",
      "48": "images/i48.png"
    }
  },
  "icons": {
    "16": "images/i16-active.png",
    "32": "images/i32-active.png",
    "128": "images/i128-active.png"
  },
  "manifest_version": 2
}
