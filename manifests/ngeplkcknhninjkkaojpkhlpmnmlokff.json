{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "News ad-blocker",
  "description": "Blocks undesired ads in news sites",
  "icons": {
    "128": "bi.png"
  },
  "version": "2.0",
  "permissions": [
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Free this page!",
    "default_icon": "bi.png"
  }
}
