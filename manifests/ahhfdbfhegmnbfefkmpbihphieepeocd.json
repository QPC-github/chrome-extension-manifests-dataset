{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cachet ClickOnce for Chrome",
  "version": "2.0.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16-cachet.png",
    "32": "icons/icon32-cachet.png",
    "48": "icons/icon48-cachet.png",
    "64": "icons/icon64-cachet.png",
    "128": "icons/icon128-cachet.png"
  },
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*",
    "tabs",
    "nativeMessaging",
    "webRequest",
    "webRequestBlocking"
  ]
}
