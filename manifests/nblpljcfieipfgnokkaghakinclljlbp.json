{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TongueMap - Plan Your Next Trip",
  "version": "2.1.1",
  "description": "TongueMap is a tool that lets user bookmark useful travel materials like blogs, articles and related websites on personal map",
  "permissions": [
    "tabs",
    "activeTab",
    "chrome://favicon/",
    "storage",
    "cookies",
    "*://*.google.com/*",
    "http://api.tonguefriend.com/",
    "http://api.tonguefriend.com/userc/login/",
    "http://tonguemap.com/",
    "https://maps.googleapis.com/"
  ],
  "browser_action": {
    "default_title": "TongueMap - Plan Your Next Trip",
    "default_icon": "icon.png",
    "default_popup": "facebook-login.html"
  },
  "icons": {
    "64": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'"
}
