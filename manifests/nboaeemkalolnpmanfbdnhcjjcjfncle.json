{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SparxTab",
  "description": "Override the new tab page with a cool looking background image and the current time.",
  "version": "1.0.0",
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "web_accessible_resources": [
    "icon.png",
    "style.css"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here for more Information!"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "homepage_url": "http://sparxdev.de",
  "background": {
    "scripts": [
      "time.js"
    ]
  },
  "manifest_version": 2
}
