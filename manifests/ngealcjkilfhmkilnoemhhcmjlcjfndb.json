{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YT Gamify",
  "version": "1.4",
  "description": "A better YouTube Interface",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "page": "bg.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "http://*.youtube.com/*",
    "https://*.youtube.com/*"
  ],
  "browser_action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
