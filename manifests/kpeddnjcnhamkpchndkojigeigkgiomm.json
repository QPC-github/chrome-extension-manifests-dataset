{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "URL to QR Code",
  "short_name": "URL to QR Code",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Generate a QR code for the page you're currently on. Pretty simple, really.",
  "homepage_url": "https://chrome.google.com/webstore/detail/url-to-qr-code/kpeddnjcnhamkpchndkojigeigkgiomm",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Generate QR Code",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
