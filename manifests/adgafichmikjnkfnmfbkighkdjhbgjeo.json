{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "知乎+相关问答条目",
  "manifest_version": 2,
  "version": "2.2.8",
  "description": "在知乎的页面右侧，自动添加百度知道、360问答、新浪爱问、搜搜问问、天涯问答的相关条目。",
  "background": {
    "page": "background.htm"
  },
  "icons": {
    "16": "appicon16.png",
    "48": "appicon48.png",
    "128": "appicon128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "idle",
    "cookies",
    "contextMenus",
    "background",
    "browsingData",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ],
  "optional_permissions": [
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' https://secure.nenglp.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "appconf.js",
        "contentscript.js",
        "chromecs.js",
        "appcs.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
