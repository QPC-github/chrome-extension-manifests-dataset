{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Meta: Google for your files",
  "short_name": "metasearch",
  "version": "0.8.2",
  "description": "Search across all your cloud services as easily as youâ€™d search the Internet.",
  "author": "Meta Search",
  "homepage_url": "https://www.meta.sc/",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "40": "assets/images/icon-40.png"
    },
    "default_title": "Meta Search"
  },
  "icons": {
    "40": "assets/images/icon-40.png",
    "226": "assets/images/icon-226.png"
  },
  "permissions": [
    "contextMenus",
    "cookies",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K",
        "chromeos": "Ctrl+Shift+K",
        "linux": "Ctrl+Shift+K"
      }
    }
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdn.jsdelivr.net https://stats.pusher.com; object-src 'self'",
  "version_name": "0.8.2"
}
