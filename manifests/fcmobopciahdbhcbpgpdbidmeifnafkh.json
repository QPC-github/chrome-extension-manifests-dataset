{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "2beLive Screen Sharing",
  "author": "2Mundos, Inc.",
  "version": "1.02",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://2belive.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://2belive.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://localhost/*",
      "http://localhost:8013/*",
      "https://tbox-api-session-develop.tbox.2mundos.net/*",
      "https://tbox-backend-session-develop.tbox.2mundos.net/*",
      "https://tbox-backend-session-qa.tbox.2mundos.net/*",
      "https://arco-backend-session.2tor.2mundos.net/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
