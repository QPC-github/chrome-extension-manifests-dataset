{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BaseTradeTV Tier 3",
  "version": "0.3",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "description": "Tier 3 Helper",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "scripts.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "short_name": "BTTV Tier 3",
  "web_accessible_resources": [
    "inject.js"
  ]
}
