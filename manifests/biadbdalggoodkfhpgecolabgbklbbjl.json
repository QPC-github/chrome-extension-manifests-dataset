{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "초롱이 알림이",
  "description": "초롱이 알림이(Google Chrome)",
  "manifest_version": 2,
  "version": "0.1.2",
  "background": {
    "page": "background.html"
  },
  "externally_connectable": {
    "matches": [
      "*://*.allim2.kr/*"
    ]
  },
  "permissions": [
    "alarms",
    "gcm",
    "notifications",
    "storage",
    "*://*.allim2.kr/"
  ],
  "browser_action": {
    "default_title": "초롱이 알림이",
    "default_popup": "popup.html",
    "default_icon": "images/icon-not-logged-in.png"
  },
  "icons": {
    "128": "images/default-128.png"
  }
}
