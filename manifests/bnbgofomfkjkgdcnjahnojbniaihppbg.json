{
  "background": {
    "scripts": [
      "chrome.js"
    ]
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "Collectap Tap Boutton"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.collectap.com/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "128": "favicon.png",
    "16": "favicon.png",
    "48": "favicon.png"
  },
  "manifest_version": 2,
  "name": "Collectap Tap Boutton",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "description": "Cliquez sur le bouton TAP pour collectionner les images et videos de vos sites favoris.",
  "version": "1"
}
