{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pink Fluffy Unicorn",
  "description": "such god unicorn",
  "version": "3.0.0",
  "icons": {
    "128": "tiles/scratch.png"
  },
  "background": {
    "scripts": [
      "run.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "tiles/*"
  ],
  "browser_action": {
    "default_title": "click to get a unicorn",
    "default_icon": "tiles/scratch.png"
  }
}
