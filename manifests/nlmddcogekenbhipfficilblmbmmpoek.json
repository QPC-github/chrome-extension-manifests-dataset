{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MyFreeCams Flash Enabler",
  "version": "1.3.0",
  "description": "Automatically enable the Adobe Flash plugin for MyFreeCams.com",
  "short_name": "MfcFlashEnabler",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon-196.png",
    "default_popup": "index.html",
    "default_title": "MyFreeCams Flash Enabler"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "196": "images/icon-196.png"
  },
  "homepage_url": "https://wiki.myfreecams.com/wiki/Flash",
  "permissions": [
    "contentSettings"
  ],
  "minimum_chrome_version": "69",
  "manifest_version": 2
}
