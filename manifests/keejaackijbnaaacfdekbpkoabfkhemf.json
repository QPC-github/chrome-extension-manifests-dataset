{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Serenitab",
  "version": "1.0.0",
  "description": "Bringing serenity to your empty tabs.",
  "author": "parkjongwon.com",
  "browser_action": {
    "default_title": "New Tab",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icons/serenitab16.png",
    "32": "./icons/serenitab32.png",
    "48": "./icons/serenitab48.png",
    "128": "./icons/serenitab128.png",
    "512": "./icons/serenitab512.png"
  },
  "chrome_url_overrides": {
    "newtab": "dashboard.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "./js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "*://*.serenitab.com/*"
  ],
  "short_name": "Serenitab",
  "homepage_url": "http://serenitab.com",
  "offline_enabled": true
}
