{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unwander App",
  "version": "0.1.4",
  "manifest_version": 2,
  "description": "Select any text(location or point of interest) on any website and add it to the your travel plan on Unwander",
  "icons": {
    "16": "Unwander_Logo_16.png",
    "48": "Unwander_Logo_48.png",
    "128": "Unwander_Logo_128.png"
  },
  "browser_action": {
    "default_title": "Unwander App",
    "default_popup": "browser_action.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/global.css"
      ],
      "js": [
        "js/jquery.js",
        "js/contentscript.js"
      ],
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "content.html"
  ],
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/env.js",
      "node_modules/auth0-chrome/dist/auth0chrome.min.js",
      "js/events.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.unwander.com/*"
    ]
  },
  "permissions": [
    "identity",
    "notifications",
    "<all_urls>",
    "storage",
    "tabs",
    "contextMenus",
    "cookies",
    "*://*.unwander.com/",
    "*://localhost/*",
    "webRequest",
    "*://*.yelp.com/"
  ]
}
