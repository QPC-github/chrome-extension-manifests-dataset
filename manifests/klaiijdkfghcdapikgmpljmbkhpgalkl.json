{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YT Light Switch",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "YT Light Switch",
  "homepage_url": "http://technovationmedia.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://*.youtube.com/"
  ]
}
