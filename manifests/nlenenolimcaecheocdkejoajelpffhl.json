{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "StaySavr+",
  "description": "Book vacation rentals and hotels without paying commissions and booking fees.",
  "version": "1.2.10",
  "author": "StaySavr Team",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "StaySavr settings",
    "default_icon": "StaySavr.png",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.homeaway.co.uk/*",
        "*://*.aluguetemporada.com.br/*",
        "*://*.homeaway.com/*",
        "*://*.abritel.fr/*",
        "*://*.homeaway.com.co/*",
        "*://*.homeaway.dk/*",
        "*://*.homeaway.fi/*",
        "*://*.homeaway.com.ar/*",
        "*://*.homeaway.nl/*",
        "*://*.homeaway.se/*",
        "*://*.homeaway.ca/*",
        "*://*.homeaway.co/*",
        "*://*.homeaway.it/*",
        "*://*.homeaway.jp/*",
        "*://*.bookabach.co.nz/*",
        "*://*.homeaway.pt/*",
        "*://*.homeaway.asia/*",
        "*://*.homeaway.com.cn/*",
        "*://*.homeaway.hk/*",
        "*://*.homeaway.tw/*",
        "*://*.homeaway.co.id/*",
        "*://*.homeaway.com.sg/*",
        "*://*.homeaway.com.my/*",
        "*://*.homeaway.com.vn/*",
        "*://*.homeaway.co.th/*",
        "*://*.homeaway.com.ph/*",
        "*://*.homeaway.co.in/*",
        "*://*.homeaway.co.kr/*",
        "*://*.homeaway.ru/*",
        "*://*.homeaway.lk/*",
        "*://*.homeaway.ec/*",
        "*://*.homeaway.com.pe/*",
        "*://*.homeaway.com.uy/*",
        "*://*.homeaway.cl/*",
        "*://*.homeaway.at/*",
        "*://*.homeaway.es/*",
        "*://*.homeaway.com.mx/*",
        "*://*.homeaway.com.au/*",
        "*://*.vrbo.com/*",
        "*://*.ownersdirect.co.uk/*",
        "*://*.homelidays.com/*",
        "*://*.travelmob.com/*",
        "*://*.homelidays.fr/*",
        "*://*.homelidays.es/*",
        "*://*.asia.homeaway.com/*",
        "*://*.vacationrentals.com/*",
        "*://*.fewo-direkt.de/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "*://*.booking.com/*",
        "*://*.priceline.com/*",
        "*://*.expedia.com/*",
        "*://*.expedia.co.uk/*",
        "*://*.travelocity.com/*",
        "*://*.orbitz.com/*",
        "*://*.laterooms.com/*",
        "*://*.hotels.com/*"
      ],
      "js": [
        "content2.js"
      ]
    }
  ]
}
