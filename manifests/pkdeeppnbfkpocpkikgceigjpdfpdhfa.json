{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.1.3",
  "name": "Automatic Scrolling Tabs",
  "short_name": "AutoScrollTabs",
  "description": "This extension auto scroll down on tabs and switch to the next when it reaches the bottom of the current tab. Â©Copyright CyonTech.ca",
  "options_page": "options.html",
  "browser_action": {
    "default_title": ""
  },
  "icons": {
    "128": "icon128.png",
    "32": "icon32.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "scripts/eventListener.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "background",
    "<all_urls>",
    "*://*/*",
    "storage"
  ]
}
