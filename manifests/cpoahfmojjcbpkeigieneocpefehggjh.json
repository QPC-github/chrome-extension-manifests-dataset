{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Schedule to Calendar",
  "version": "1.0",
  "description": "Converts UC Davis schedule builder to ical calendar format.",
  "permissions": [
    "declarativeContent",
    "activeTabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://my.ucdavis.edu/schedulebuilder/*"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2
}
