{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VanNamExpress Nhập hàng Order taobao",
  "description": "Công cụ đặt hàng của VanNamExpress.com",
  "version": "1.1.2",
  "browser_action": {
    "default_icon": {
      "16": "images/icon_16x16.png",
      "24": "images/icon_32x32.png",
      "32": "images/icon_32x32.png",
      "64": "images/icon_64x64.png",
      "128": "images/icon_128x128.png"
    },
    "default_title": "Công cụ đặt hàng VanNamExpress.com",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/icon_16x16.png",
    "32": "images/icon_32x32.png",
    "64": "images/icon_64x64.png",
    "128": "images/icon_128x128.png"
  },
  "permissions": [
    "storage",
    "https://vannamexpress.com/*",
    "https://2.taobao.com/item.htm"
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.vannamexpress.com/*",
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "https://*.tmall.hk/*",
        "https://*.jd.com/*",
        "https://*.jd.hk/*",
        "http://detail.1688.com/*",
        "https://detail.1688.com/*",
        "http://item.1688.com/*",
        "https://item.1688.com/*",
        "http://item.jd.com/*",
        "https://item.jd.com/*",
        "https://item.jd.hk/*"
      ],
      "css": [
        "all.min.css"
      ],
      "js": [
        "all.min.js"
      ]
    }
  ]
}
