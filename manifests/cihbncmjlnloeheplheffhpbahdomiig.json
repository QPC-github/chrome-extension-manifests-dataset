{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Synonymicon",
  "description": "This extension will find german synonyms. It provides this via the omnibox and the context menu. Icon: James Brummett (CC BY 3.0 US)",
  "version": "0.0.1",
  "homepage_url": "http://www.dnl.re",
  "omnibox": {
    "keyword": "syn"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://www.openthesaurus.de/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
