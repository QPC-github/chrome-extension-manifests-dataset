{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "browser_action": {
    "default_icon": "img/dv_gray.png",
    "default_title": "DV PM Checker"
  },
  "description": "Получает уведомления о личных сообщениях с сайта DimonVideo.ru",
  "icons": {
    "128": "img/128.png",
    "16": "img/16.png",
    "48": "img/48.png",
    "64": "img/64.png"
  },
  "name": "DV PM Checker",
  "background": {
    "scripts": [
      "get_pm.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "notifications",
    "http://m.dimonvideo.ru/*",
    "https://dimonvideo.ru/*",
    "http://api.dimonvideo.ru/*"
  ],
  "web_accessible_resources": [
    "img/16.png",
    "img/48.png",
    "img/64.png",
    "img/128.png",
    "img/dv_gray.png",
    "img/logo_small.png"
  ],
  "manifest_version": 2,
  "version": "2.7"
}
