{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DocsInk",
  "author": "DocsInk",
  "version": "3.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Extension for DocsInk allows you to share your screen on video calls.",
  "homepage_url": "https://connect.docsink.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.docsink.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
