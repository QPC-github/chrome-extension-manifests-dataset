{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Rainbow Sharing",
  "description": "Rainbow HD Sharing (screens and applications)",
  "version": "1.5.3",
  "author": "Olivier Anguenot, Germain Clauss",
  "browser_action": {
    "default_icon": "rainbow_128.png"
  },
  "icons": {
    "16": "rainbow_16.png",
    "48": "rainbow_48.png",
    "128": "rainbow_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "desktopCapture",
    "https://*.openrainbow.org/*",
    "https://*.openrainbow.net/*",
    "https://*.openrainbow.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.openrainbow.org/*",
      "https://*.openrainbow.net/*",
      "https://*.openrainbow.com/*"
    ]
  },
  "web_accessible_resources": [
    "rainbow_128.png"
  ]
}
