{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Veracross GPA Viewer",
  "description": "View your GPA below your grades list on veracross student portals.",
  "version": "0.1.4",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs",
    "alarms",
    "cookies",
    "https://*.veracross.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://portals.veracross.com/gulliver/student"
      ],
      "js": [
        "./js/jquery-3.4.1.min.js",
        "./js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./js/jquery-3.4.1.min.js",
      "./js/background.js"
    ],
    "persistent": false
  }
}
