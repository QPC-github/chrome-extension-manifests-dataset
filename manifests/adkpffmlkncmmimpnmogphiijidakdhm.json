{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "哔哩哔哩bilibili影片下載工具",
  "version": "2.0.0.4",
  "description": "bilibili又名哔哩哔哩與嗶哩嗶哩甚至簡稱為B站，而哔哩哔哩bilibili影片下載工具提供你免費快速下載B站上的資源，其功能包含了動漫(番剧)、影片(視頻)與音樂(音頻)等資源的下載",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*.bilibili.com/*",
    "https://*.bilibili.com/*",
    "https://*.acgvideo.com/*",
    "https://*.bilivideo.com/*",
    "https://*.akamaized.net/*",
    "https://*.hdslb.com/*",
    "*://y-w-y.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.bilibili.com/*",
        "https://*.bilibili.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "jquery.min.js",
        "content_scripts.js"
      ],
      "css": [
        "/assets/css/skin/main.min.css"
      ]
    }
  ],
  "manifest_version": 2
}
