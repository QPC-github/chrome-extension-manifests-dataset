{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Slinkky - Better Bookmarks",
  "description": "Add links to Slinkky with a single click",
  "version": "0.0.0.15",
  "icons": {
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html",
    "default_title": "Add to Slinkky"
  },
  "permissions": [
    "activeTab",
    "https://www.slinkky.com/*"
  ]
}
