{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Craigslist Autoposter",
  "description": "Automatically post to Craigslist.",
  "version": "0.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*.craigslist.org/",
    "tabs",
    "cookies"
  ],
  "page_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Craigslist Autoposter"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
