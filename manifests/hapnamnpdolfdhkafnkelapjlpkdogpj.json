{
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Is Trump actually rich?"
  },
  "content_scripts": [
    {
      "js": [
        "content_script.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Add this app to your Chrome browser and replace all instances of \"Trump\" (and variants) with \"alleged billionaire Trump\"",
  "manifest_version": 2,
  "name": "Tiny Hands Man",
  "permissions": [
    "http://*.google.com/",
    "http://*.com/",
    "tabs"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0",
  "author": "Trevor Phillippi",
  "homepage_url": "http://tinyhandsman.com",
  "short_name": "Prefix Trump with \"alleged billionaire\""
}
