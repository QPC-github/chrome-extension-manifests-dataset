{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Employee Time Tracker",
  "version": "0.4",
  "description": "To keep track of how much time employee is spending on work & non-work related sites.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "jquery-2.1.3.min.js",
      "chrome-storage.js",
      "config.js",
      "sites.js",
      "tracker.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "alarms",
    "idle",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Time Tracker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "19": "images/icon19.png",
    "38": "images/icon38.png",
    "128": "images/icon.png"
  }
}
