{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Prayer Time",
  "description": "This extension gives the prayer times based on the localisation and timezone of the user.",
  "version": "0.0.6",
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "ressources/islam16.png",
    "48": "ressources/islam48.png",
    "128": "ressources/islam128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "ressources/islam19.png",
      "38": "ressources/islam38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "geolocation",
    "notifications"
  ]
}
