{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "We Love Katya",
  "version": "0.0.0.2",
  "description": "Display lots of pictures of Katya in your browser",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "jquery.js",
        "background.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
