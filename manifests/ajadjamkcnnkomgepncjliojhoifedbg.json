{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RoboGardenPro Screenshare Extension",
  "author": "BigBlueButton",
  "version": "0.0.6",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to RoboGardenPro meetings.",
  "homepage_url": "https://professional.robogarden.ca/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.rgp-dev.com/*",
      "*://*.robogarden.ca/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
