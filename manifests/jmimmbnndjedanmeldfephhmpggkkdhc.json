{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HushBGone",
  "description": "Mutes/un-mutes a selected tab whenever other tabs start/stop playing audio.",
  "version": "2.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "zipit.png",
    "32": "zipit_32.png",
    "128": "zipit_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "zipit.png",
    "default_title": "HushBGone: INACTIVE"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
