{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.3",
  "manifest_version": 2,
  "offline_enabled": true,
  "short_name": "cookie-switch",
  "name": "Cookie Switch ON|OFF",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contentSettings"
  ],
  "description": "Switch cookies ON or OFF with just one click!",
  "homepage_url": "https://mybrowseraddon.com/cookie-switch.html",
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "browser_action": {
    "default_title": "Cookie Switch ON|OFF",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
