{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Gini - Smart HR Tool",
  "description": "Gini helps recruiter analyze people, understand personality & deployable skill,find similar candidates across LinkedIn & Job Portals",
  "version": "1.1.1",
  "homepage_url": "https://github.com/dvidsilva/chrome-ext-sample",
  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "Gini - Smart HR Tool"
  },
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/jquery.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/in/*",
        "http://159.89.161.221/gini/wizardry/",
        "http://159.89.161.221/gini/lookalike/",
        "http://127.0.0.1:8000/gini/wizardry/"
      ],
      "all_frames": true,
      "css": [
        "css/fix.css"
      ],
      "js": [
        "scripts/jquery.min.js",
        "scripts/jquery.highlight-5.js",
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "popup.html",
    "css/fix.css",
    "button.html",
    "scripts/jquery.min.js",
    "Logo_HD.png"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}
