{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "unK WEB TV",
  "author": "Chevalier Simon",
  "description": "Extension Chrome unK WEB TV",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "dist/scripts/background_unk.min.js"
    ]
  },
  "icons": {
    "256": "icons/logo256.png",
    "128": "icons/logo128.png",
    "64": "icons/logo64.png",
    "32": "icons/logo32.png"
  },
  "permissions": [
    "https://api.twitch.tv/",
    "notifications",
    "management",
    "tabs",
    "background"
  ],
  "browser_action": {
    "default_title": "unkTV - Offline",
    "default_popup": "index.html",
    "default_icon": "icon_off.png"
  }
}
