{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TBS Play forum plugin",
  "short_name": "TBS Play",
  "description": "Плагин нотификации о наличии новых сообщений на форуме tbs-play.com",
  "version": "1.4",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "empty.png",
    "default_title": "Непрочитанные сообщения"
  },
  "permissions": [
    "http://tbsplay.com/*",
    "http://*.tbsplay.com/*",
    "https://tbsplay.com/*",
    "https://*.tbsplay.com/*",
    "http://tbs-play.com/*",
    "http://*.tbs-play.com/*",
    "https://tbs-play.com/*",
    "https://*.tbs-play.com/*"
  ]
}
