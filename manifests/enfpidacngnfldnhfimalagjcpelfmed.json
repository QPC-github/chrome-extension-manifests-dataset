{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Radio ROKS player",
  "description": "Слухати станцію Radio ROKS стало простіше.",
  "version": "0.5.5",
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/radio_roks_16.png",
    "48": "images/radio_roks_48.png",
    "128": "images/radio_roks_128.png"
  },
  "permissions": [
    "http://www.radioroks.ua/",
    "http://*.tavrmedia.ua/",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "images/radio_roks_48.png"
  ],
  "browser_action": {
    "popup": "popup.html",
    "default_icon": "images/radio_roks_48.png"
  }
}
