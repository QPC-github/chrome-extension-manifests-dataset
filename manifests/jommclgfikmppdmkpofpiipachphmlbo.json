{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Imgur Image Hosting",
  "short_name": "Imgur Image Hosting",
  "description": "Easy to use Imgur Image Hosting, supports select/drag upload pictures and generate picture address, HTML, UBB and Markdown formats",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "tts",
    "webRequest",
    "webRequestBlocking",
    "*://*/",
    "tabs",
    "contextMenus",
    "webNavigation",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
