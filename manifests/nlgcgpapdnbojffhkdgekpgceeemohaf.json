{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bible.com - Consulta Rápida",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Essa extensão foi desenvolvida para facilitar os estudos bíblicos pelo site bible.com (YouVersion).",
  "author": "Tihh Gonçalves (tihh.gon@gmail.com)",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png",
    "200": "images/icon_200.png"
  },
  "browser_action": {
    "default_icon": "images/icon_128.png",
    "default_title": "Bible.com - Consulta Rápida",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ]
}
