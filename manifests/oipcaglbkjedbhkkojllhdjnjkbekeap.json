{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HideTheDamnBar",
  "description": "Hides the annoying tumblr menu bar when you scroll down.",
  "version": "1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://tumblr.com/*",
        "https://tumblr.com/*",
        "https://www.tumblr.com/*",
        "http://www.tumblr.com/*"
      ],
      "js": [
        "jquery.js",
        "hidebar.js"
      ]
    }
  ]
}
