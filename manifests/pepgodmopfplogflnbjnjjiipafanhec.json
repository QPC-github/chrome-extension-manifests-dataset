{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "description": "Search With lets you search any text with your favorite search engine.",
  "icons": {
    "16": "icon.png",
    "40": "icon.png"
  },
  "manifest_version": 2,
  "name": "Search With",
  "author": "IgorX2",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "background",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "20": "icon.png",
      "40": "icon.png"
    },
    "default_title": "Search With",
    "default_popup": "options.html"
  },
  "version": "1.0"
}
