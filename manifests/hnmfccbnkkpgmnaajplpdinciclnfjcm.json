{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CopyEdit",
  "version": "0.1",
  "description": "A simple tool to edit what you copy on the fly.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "copyedit.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/copyedit16.png",
      "32": "images/copyedit32.png",
      "48": "images/copyedit64.png",
      "128": "images/copyedit128.png"
    }
  },
  "web_accessible_resources": [
    "images/copyedit16.png"
  ],
  "icons": {
    "16": "images/copyedit16.png",
    "32": "images/copyedit32.png",
    "48": "images/copyedit64.png",
    "128": "images/copyedit128.png"
  },
  "manifest_version": 2
}
