{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Freecom.me",
  "version": "2.0",
  "icons": {
    "16": "i/icon.png",
    "48": "i/icon48.png",
    "128": "i/icon128.png"
  },
  "author": "Evgeny Dolganov",
  "description": "You can leave a comment to any site you want. Just open Freecom.me Plugin in any url.",
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "js/props.js",
        "js/inline/inlineApp.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
