{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Fake Alerts",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Fake Alerts is a browser plugin that uses OCR and Twitter APIs to validate tweet screenshots. Powered by Azure Functions.",
  "author": "Microsoft",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "html/popup.html",
    "default_title": "Protect"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}
