{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Do It",
  "version": "1.1",
  "description": "Manage tasks for the day",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js",
      "js/app.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
