{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Discover Your Next Dream Travel Destination!",
  "short_name": "GlobeSpree",
  "description": "Discover Your Next Dream Travel Destination!",
  "version": "1.1",
  "author": "GlobeSpree.Com",
  "browser_action": {
    "default_icon": "tab-icon.png",
    "default_title": "GlobeSpree"
  },
  "chrome_settings_overrides": {
    "homepage": "https://globespree.com/?utm_source=chrome-extension-home&utm_medium=chrome-extension-home"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}
