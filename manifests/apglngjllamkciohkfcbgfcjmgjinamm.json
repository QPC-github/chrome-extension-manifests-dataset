{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Scroller",
  "version": "0.5",
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "manifest_version": 2,
  "description": "Scroll through tabs with [rclick+scroll] like in Sublime text",
  "permissions": [
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "minimum_chrome_version": "17",
  "web_accessible_resources": [
    "*.js",
    "*.json"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery_sm.js",
        "content_script.js"
      ],
      "css": [],
      "run_at": "document_end"
    }
  ]
}
