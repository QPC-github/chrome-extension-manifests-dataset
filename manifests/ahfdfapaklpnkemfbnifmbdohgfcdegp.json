{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.2",
  "manifest_version": 2,
  "name": "看豆人搜书",
  "description": "1、帮助kindle/nook用户搜索电子书。2、在豆瓣、亚马逊、当当网页面中可以对书籍进行电子版订阅和电子版寻找",
  "homepage_url": "http://kindleren.com",
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },
  "icons": {
    "128": "logo.png",
    "64": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://book.douban.com/*",
        "http://read.douban.com/*",
        "http://www.amazon.cn/*",
        "http://product.dangdang.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/jquery.qtip.min.js",
        "js/insert.js"
      ],
      "css": [
        "css/jquery.qtip.min.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "proxy",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "http://*/*",
    "unlimitedStorage",
    "notifications"
  ],
  "web_accessible_resources": [
    "images/*",
    "js/*",
    "flashs/*"
  ]
}
