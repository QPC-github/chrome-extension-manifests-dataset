{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sondakika.com",
  "short_name": "Sondakika",
  "description": "Türkiye ve dünyadan son dakika haberler. Son dakika haberleri takip edin.",
  "icons": {
    "16": "sondakika-16.png",
    "48": "sondakika-48.png",
    "128": "sondakika-128.png"
  },
  "version": "1.0.4",
  "omnibox": {
    "keyword": "sondakika"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "https://*.sondakika.com/",
    "http://*/",
    "tabs",
    "notifications",
    "idle"
  ],
  "homepage_url": "https://www.sondakika.com/",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "sondakika-128.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "birand.jpg"
  ]
}
