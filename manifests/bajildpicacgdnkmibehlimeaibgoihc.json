{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TurboPix",
  "description": "Hebergeur d'images simple et rapide.",
  "version": "1.2.1",
  "author": "lines, soyuka",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "uploader.js"
    ]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "manifest_version": 2
}
