{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "short_name": "RecipeSearch",
  "name": "レシピ検索ツール",
  "description": "Chromeのアドレスバーからレシピを直接検索",
  "version": "1.0",
  "omnibox": {
    "keyword": "rs"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "https://www.google.com/"
  ],
  "minimum_chrome_version": "9",
  "manifest_version": 2
}
