{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "jquery-3.3.1.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "NowStreaming"
  },
  "description": "Manage your favorite Twitch streamers, get instant notifications when they come online, and much more!",
  "icons": {
    "128": "icon.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "name": "Twitch Manager",
  "permissions": [
    "notifications",
    "activeTab",
    "alarms",
    "storage",
    "http://api.twitch.tv/*",
    "https://api.twitch.tv/*",
    "http://*.jtvnw.net/*",
    "https://*.jtvnw.net/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.3"
}
