{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Etoos Pay",
  "description": "This extension is for paying by etoos service",
  "version": "1.8.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  },
  "background": {
    "scripts": [
      "jquery-1.11.3.min.js",
      "jquery.signalR-2.0.3.min.js",
      "hubs",
      "background.js"
    ],
    "run_at": "document_end"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-1.11.3.min.js",
        "content.js"
      ],
      "css": [
        "lightbox.css"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "*.gif",
    "*.css",
    "*.png"
  ]
}
