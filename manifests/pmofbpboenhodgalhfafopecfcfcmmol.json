{
  "name": "Apigeon - REST & WebSocket API Testing Client",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "The Simplest REST & WebSocket API Testing Client",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/128x128.png",
    "128": "icons/128x128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/48x48.png",
    "default_title": "Simplest Rest & Websocket Client"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "cookies",
    "clipboardWrite",
    "identity"
  ]
}
