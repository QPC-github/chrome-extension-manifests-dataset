{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://ionmeeting.com/*"
      ]
    }
  ],
  "description": "Share the screen from your computer in a video conversation, to show presentations, photos and documents. ",
  "icons": {
    "128": "images/logo_128.png",
    "16": "images/logo_16.png",
    "48": "images/logo_48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "ionmeeting.com screen sharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "ionmeeting screen sharing",
  "version": "2.0.6",
  "externally_connectable": {
    "matches": [
      "https://ionmeeting.com/*"
    ]
  }
}
