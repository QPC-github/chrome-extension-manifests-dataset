{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NEW Google Mobile Friendly Test Quick Access",
  "description": "Send your current page to Google Mobile Friendly Test tool to verify if it is Mobile-Friendly, if it is responsive web design.",
  "version": "2.0.5",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "minimum_chrome_version": "16.0.884",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_security_policy": "script-src 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
