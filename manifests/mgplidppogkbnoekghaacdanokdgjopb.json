{
  "name": "Главная и поиск Hi.Ru",
  "description": "Моментальный доступ к поисковому и другим сервисам Hi.ru",
  "version": "0.2",
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "chrome_settings_overrides": {
    "homepage": "http://hi.ru",
    "startup_pages": [
      "http://hi.ru"
    ],
    "search_provider": {
      "encoding": "UTF-8",
      "favicon_url": "http://hi.ru/search.ico",
      "is_default": true,
      "keyword": "hi.ru",
      "name": "Hi.Ru",
      "search_url": "http://hi.ru/search2/?q={searchTerms}"
    }
  },
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "48": "icons/48.png"
  }
}
