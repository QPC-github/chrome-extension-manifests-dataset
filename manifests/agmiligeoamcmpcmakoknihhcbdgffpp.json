{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MoneyMessage",
  "description": "Send money by email with ease",
  "version": "0.8.2",
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*",
        "http://moneymessage.radynamics.com/*"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/bootstrap.min.js",
        "js/oAuth.js",
        "js/sha1.js",
        "js/twitter.js",
        "session.js",
        "js/inboxsdk.js",
        "js/moneymessage-0.6.0.js",
        "js/currencyconverter-0.0.1.js",
        "utils.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://mail-attachment.googleusercontent.com/*",
    "https://api.twitter.com/*",
    "https://www.bitstamp.net/*",
    "http://moneymessage.radynamics.com/*"
  ],
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/oAuth.js",
      "js/sha1.js",
      "js/twitter.js",
      "js/moneymessage-0.6.0.js",
      "js/currencyconverter-0.0.1.js",
      "utils.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
