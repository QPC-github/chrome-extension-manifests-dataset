{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "News Tracker",
  "description": "Stay Up to date with any News Topics you want!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_news.png",
    "default_popup": "popup.html",
    "default_title": "News Tracker"
  },
  "background": {
    "scripts": [
      "popup.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "https://ajax.googleapis.com/"
  ]
}
