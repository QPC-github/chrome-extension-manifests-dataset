{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RevLink",
  "description": "Reverse a link or url and copy it to clipboard",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "icon-bitty.png",
    "19": "icon-small.png",
    "128": "icon-large.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon-small.png",
    "default_title": "Click to reverse and copy current URL"
  }
}
