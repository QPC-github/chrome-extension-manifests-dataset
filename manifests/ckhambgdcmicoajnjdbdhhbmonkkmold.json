{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.1",
  "author": "delwing",
  "name": "9gag save gag for later",
  "description": "Add quick option to save gags for later. Access stashed gags by easy to use popup window right in tab with 9gag opened.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://9gag.com/*"
      ],
      "css": [
        "9gag.css"
      ],
      "js": [
        "jquery.js",
        "9gag.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "page_action": {
    "default_title": "Save for later storage",
    "default_icon": "icon19.png",
    "default_popup": "gags.html"
  }
}
