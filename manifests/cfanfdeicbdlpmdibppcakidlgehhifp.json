{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Care2Rock Lesson Screen Sharing",
  "author": "Care2Rock",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "A screen-sharing extension allowing you to share all or part of your screen with other participants in your Care2Rock lessons.",
  "homepage_url": "https://care2rock.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.care2rock.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
