{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Oli - Compartilhamento de tela",
  "short_name": "Oli",
  "author": "Aerolito",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Compartilhe a tela inteira ou a tela de um aplicativo",
  "homepage_url": "http://oli.to",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.oli.to/*",
      "http://localhost:8001/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon16.png",
    "icon48.png",
    "icon128.png"
  ]
}
