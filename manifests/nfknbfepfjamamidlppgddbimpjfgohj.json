{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Enables screen sharing with Deltapath",
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png",
    "64": "images/64.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Deltapath Screensharing",
  "options_page": "options.html",
  "permissions": [
    "desktopCapture",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.5"
}
