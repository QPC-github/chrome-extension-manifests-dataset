{
  "manifest_version": 2,
  "name": "Alivt Beta",
  "author": "guangcai.jgc@alibaba-inc.com",
  "description": "alibaba view tracking; easier? faster? lighter? not only! You have a revolutionary way to make tracking now!",
  "icons": {
    "128": "image/icon_128.png",
    "16": "image/icon_16.png",
    "48": "image/icon_48.png",
    "64": "image/icon_64.png"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "image/icon_48.png",
    "default_title": "alivt 2.0.35",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "js/jquery.js",
        "js/main.js",
        "js/jquery-ui.min.js"
      ],
      "css": [
        "css/main.css",
        "js/jquery-ui.min.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*.taobao.com/*"
    ]
  },
  "content_security_policy": "script-src 'self'  https://s.tbcdn.cn http://127.0.0.1 http://localhost; object-src 'self'",
  "optional_permissions": [
    "clipboardWrite",
    "pageCapture",
    "tabCapture",
    "contextMenus",
    "storage",
    "tabs",
    "<all_urls>",
    "downloads"
  ],
  "permissions": [
    "browsingData",
    "<all_urls>",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "notifications",
    "management",
    "history",
    "cookies",
    "alarms",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0.35",
  "web_accessible_resources": [
    "image/icon/icon_48.png"
  ]
}
