{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Howjsay.com pronunciation context menu",
  "description": "Adds a pronounce feature to your right-click menu for selected text that opens HowJsay in a new tab",
  "version": "2.0.0",
  "icons": {
    "16": "hjspronounce16.png",
    "48": "hjspronounce48.png",
    "128": "hjspronounce128.png"
  },
  "background": {
    "scripts": [
      "hjspronounce.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "manifest_version": 2
}
