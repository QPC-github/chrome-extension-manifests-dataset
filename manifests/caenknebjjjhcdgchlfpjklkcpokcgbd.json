{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Feedline - RSS News Reader",
  "short_name": "Feedline",
  "description": "Minimal, offline-enabled RSS Feed Reader",
  "author": "Josephus Paye II",
  "version": "1.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "chrome.js"
      ]
    }
  },
  "offline_enabled": true,
  "permissions": [
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "webview",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "icons": {
    "16": "assets/img/icons/feedline-16.png",
    "32": "assets/img/icons/feedline-32.png",
    "48": "assets/img/icons/feedline-48.png",
    "128": "assets/img/icons/feedline-128.png"
  }
}
