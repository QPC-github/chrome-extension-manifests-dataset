{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Viking Deals",
  "author": "Mobile Vikings",
  "short_name": "Viking Deals",
  "description": "Never forget to grab a Viking Deal!",
  "homepage_url": "https://www.vikingdeals.be/",
  "version": "2.5.0",
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/styles.css"
      ],
      "js": [
        "js/vendor/finally-polyfill.js",
        "js/vendor/browser-polyfill.js",
        "js/vendor/sanitizer.js",
        "js/constants.js",
        "js/logger.js",
        "js/utils.js",
        "js/state.js",
        "js/listing.js",
        "js/sidebar.js",
        "js/content.js"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*",
        "https://google.com/*",
        "https://www.google.be/*",
        "https://google.be/*"
      ],
      "js": [
        "js/integrations/google.js"
      ],
      "css": [
        "css/integrations/google.css"
      ]
    },
    {
      "matches": [
        "https://mobilevikings.be/*"
      ],
      "js": [
        "js/integrations/mobilevikings.js"
      ]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "js/vendor/finally-polyfill.js",
      "js/vendor/browser-polyfill.js",
      "js/vendor/sanitizer.js",
      "js/constants.js",
      "js/logger.js",
      "js/utils.js",
      "js/listing.js",
      "js/api.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "https://www.google-analytics.com/*",
    "notifications",
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "assets/*",
    "html/*"
  ],
  "browser_action": {
    "default_icon": {
      "512": "assets/img/icons/32_light.png"
    },
    "default_title": "Viking Deals",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "19": "assets/img/icons/19.png",
    "32": "assets/img/icons/32.png",
    "38": "assets/img/icons/38.png",
    "64": "assets/img/icons/64.png",
    "128": "assets/img/icons/128.png",
    "256": "assets/img/icons/256.png",
    "512": "assets/img/icons/512.png"
  }
}
