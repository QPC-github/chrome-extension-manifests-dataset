{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "2.0.0",
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "short_name": "Pingterval",
  "default_locale": "en",
  "minimum_chrome_version": "63",
  "offline_enabled": true,
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "alarms",
    "idle",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/globalConstants.js",
      "js/shortFuncs.js",
      "js/background.js"
    ],
    "persistent": false
  }
}
