{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GoPeer Screen Capture",
  "description": "Allows you to share the screen during the GoPeer online session",
  "version": "1.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://gopeer.org/*",
      "*://usepeers.com/*"
    ]
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-16.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ]
}
