{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Flowshare: How To Guides For Everday Software",
  "version": "0.0.3.0",
  "description": "Flowshare is a collection of 'How To' Guides for Everyday Software. Users can follow easily with screenshots for every step.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "tabs",
    "<all_urls>",
    "identity.email",
    "identity",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "outline.css"
  ],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P",
        "windows": "Alt+P"
      },
      "description": "Manually capture screenshot"
    }
  },
  "browser_action": {
    "default_icon": {
      "48": "images/flowshare.png",
      "32": "images/flowshare32.png",
      "128": "images/flowshare128.png"
    }
  },
  "icons": {
    "32": "images/flowshare32.png",
    "48": "images/flowshare.png",
    "128": "images/flowshare128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
