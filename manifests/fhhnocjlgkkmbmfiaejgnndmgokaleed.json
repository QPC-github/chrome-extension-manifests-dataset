{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Copy XML",
  "description": "Copies XML text, tries to indent and places it under the extension button",
  "version": "0.6",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon-s.png",
    "48": "icon-m.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
