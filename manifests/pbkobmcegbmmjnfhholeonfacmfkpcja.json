{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Melhores Destinos",
  "version": "1.1.6",
  "description": "Receba em primeira mão alertas com as promoções de passagens aéreas encontradas pela equipe do Melhores Destinos. Instale agora!",
  "permissions": [
    "storage",
    "notifications",
    "gcm",
    "https://us-central1-melhores-destinos-teste.cloudfunctions.net/subscribeToAllTopic",
    "https://passagensaereas.melhoresdestinos.com.br/*",
    "https://us-central1-melhores-destinos.cloudfunctions.net/subscribeToAllTopic",
    "https://mdassets.net/images/480x480/"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self' https://mdassets.net/*",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "80": "images/icon_80.png",
      "128": "images/icon_128.png"
    }
  },
  "icons": {
    "80": "images/icon_80.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}
