{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Namaz Vakitleri",
  "short_name": "Ezan Vakti",
  "description": "Türkiye'nin herhangi bir ilçesindeki namaz vakitlerini görürsünüz. Bunun yanı sıra ezana kalan süreyi de sağ üst köşede gösterir.",
  "version": "2.0.4",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "namaz_vakti.html",
    "default_icon": "img/namaz_vakti_icon.png"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "scripts": [
      "kalan_onizle.js"
    ]
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com/; object-src 'self'"
}
