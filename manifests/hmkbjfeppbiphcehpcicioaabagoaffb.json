{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Acumeni Chrome Browser Extension Lite",
  "short_name": "WAcumeni",
  "version": "0.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "37",
  "description": "Acumeni Chrome Browser Extension.To use the Extension you must have an active account, you can conduct Surveys on WhatsApp.",
  "icons": {
    "16": "img/favicon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.whatsapp.com/*"
      ],
      "js": [
        "script.js",
        "lib/drop/drop.js"
      ],
      "css": [
        "style.css",
        "lib/drop/css/drop-theme-basic.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "img/iconMenuItem128.png"
  ],
  "browser_action": {
    "default_icon": {
      "19": "img/favicon19.png",
      "38": "img/favicon38.png"
    },
    "default_title": "Open WhatsApp"
  },
  "options_page": "options.html",
  "permissions": [
    "*://*.whatsapp.com/*",
    "http://88.208.208.72:1880/*",
    "http://*/*",
    "https://*/*",
    "http://cryptoexchange.oluwatosin.me*",
    "tabs",
    "background",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "cookies"
  ]
}
