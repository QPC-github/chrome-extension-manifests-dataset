{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "绿色搜索",
  "description": "屏蔽百度搜索结果列表中的广告信息, 将移除或者弱化显示",
  "version": "0.1",
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "logo-16.png",
    "default_title": "绿色搜索"
  },
  "options_page": "options.html",
  "permissions": [
    "https://www.baidu.com/*",
    "http://www.baidu.com/*"
  ]
}
