{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Query stripper",
  "version": "1.8",
  "manifest_version": 2,
  "description": "Strips annoying query parameters from URLs. It does utm_* (google), atl_* (atlassian) and ref_ (imdb). More tokens are customizable.",
  "icons": {
    "128": "images/logo_128.png",
    "48": "images/logo_48.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "querystripper.logic.js",
      "querystripper.background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "querystripper.logic.js",
        "querystripper.content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "options_page": "options/options.html"
}
