{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Zapstore Share",
  "version": "0.0.2",
  "description": "Zapstore.com is a social network where friends can refer or share products and deals with each other from leading online stores.",
  "icons": {
    "16": "icons/zapstore16.png",
    "32": "icons/zapstore32.png",
    "48": "icons/zapstore48.png",
    "128": "icons/zapstore128.png"
  },
  "browser_action": {
    "default_icon": "icons/zapstore32.png",
    "default_title": "Zapstore Share",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "homepage_url": "https://zapstore.com",
  "incognito": "split",
  "permissions": [
    "tabs",
    "https://zapstore.com/"
  ],
  "short_name": "ZapShare"
}
