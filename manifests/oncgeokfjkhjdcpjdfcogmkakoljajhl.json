{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Growthfication",
  "version": "1.02",
  "description": "Easily manage contacting pages and people",
  "icons": {
    "128": "img/128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://m.facebook.com/*",
    "https://www.facebook.com/*",
    "https://growthfication.herokuapp.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "scripts": [
      "js/jQuery3.4.1.min.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/128.png"
    }
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/6.4.1/firebase-app.js https://www.gstatic.com/firebasejs/6.4.1/firebase-auth.js https://www.gstatic.com/firebasejs/6.4.1/firebase-firestore.js; object-src 'self'"
}
