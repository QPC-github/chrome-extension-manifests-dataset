{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fox Tail",
  "description": "Let Fox Tail extension clean up your history & cookies in the background while you surfing the web.",
  "version": "1.2",
  "icons": {
    "16": "icon_38_on.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "icon_38_off.png",
      "38": "icon_38_off.png"
    },
    "default_title": "Turn-on the Fox Tail mode",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "history",
    "browsingData"
  ]
}
