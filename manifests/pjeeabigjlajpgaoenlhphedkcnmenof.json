{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TGC Enhancer",
  "version": "0.2",
  "options_page": "options/index.html",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.thegamecrafter.com/*"
      ],
      "js": [
        "jquery-2.2.1.min.js",
        "content_scripts/inches_to_cm.js",
        "content_scripts/add_status_link.js"
      ]
    },
    {
      "matches": [
        "https://www.thegamecrafter.com/games/*"
      ],
      "js": [
        "content_scripts/show_extra_shop_properties.js"
      ]
    },
    {
      "matches": [
        "https://www.thegamecrafter.com/publish/editor/*"
      ],
      "js": [
        "content_scripts/create_widget.js"
      ]
    }
  ],
  "permissions": [
    "https://www.thegamecrafter.com/",
    "storage",
    "unlimitedStorage"
  ]
}
