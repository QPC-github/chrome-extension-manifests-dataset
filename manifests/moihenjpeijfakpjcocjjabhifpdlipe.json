{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mini Clock",
  "description": "Mini Clock displays actual time / day / month / year.",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "img/ico_19.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/ico_16.png",
    "48": "img/ico_48.png",
    "128": "img/ico_128.png"
  }
}
