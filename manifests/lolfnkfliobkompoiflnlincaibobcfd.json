{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "Stelios Petrakis",
  "web_accessible_resources": [
    "css/gamasutra-beautifier.css",
    "icons/icon-256.png"
  ],
  "description": "Beautifies the Gamasutra article pages.",
  "homepage_url": "http://stelabouras.com",
  "icons": {
    "16": "icons/icon-16.png",
    "256": "icons/icon-256.png"
  },
  "page_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Switch to original design"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "manifest_version": 2,
  "name": "Gamasutra Beautifier",
  "permissions": [
    "https://*.gamasutra.com/*",
    "http://*.gamasutra.com/*",
    "webRequestBlocking",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.gamasutra.com/*",
        "http://*.gamasutra.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "js/gamasutra-beautifier.js"
      ],
      "css": [
        "css/gamasutra-beautifier.css"
      ]
    }
  ],
  "version": "3.4"
}
