{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TT Countdown",
  "description": "Time Trial Start line countdown",
  "version": "0.0.1",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Open TT Countdown Timer",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  }
}
