{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cloudwise COOL",
  "short_name": "COOL",
  "default_locale": "nl",
  "description": "__MSG_extDescription__",
  "icons": {
    "128": "assets/images/cool-logo-128.png"
  },
  "manifest_version": 2,
  "version": "6.4.0",
  "options_page": "assets/html/options/options.html",
  "options_ui": {
    "page": "assets/html/options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Cloudwise COOL",
    "default_icon": {
      "19": "assets/images/cool-logo-19.png",
      "38": "assets/images/cool-logo-38.png"
    }
  },
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/html/lock_chrome/js/lock_chrome.js"
      ],
      "css": [
        "assets/html/lock_chrome/css/lock_chrome.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "assets/*"
  ],
  "oauth2": {
    "client_id": "626455687957-kfga3sseb056ejf1d6ghlbmd5csicqc3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "notifications",
    "identity",
    "identity.email",
    "management",
    "cookies"
  ]
}
