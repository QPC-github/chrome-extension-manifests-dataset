{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "scroll persistent subreddit bar",
  "description": "This extension modifies your Reddit user experience to make the subreddit bar follow your scroll.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.reddit.com/*"
      ],
      "css": [
        "reddit.css"
      ]
    }
  ]
}
