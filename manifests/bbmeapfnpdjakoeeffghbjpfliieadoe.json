{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "The Paleochora Site",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Links and information about Paleochora at your fingertips!",
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "OneSignal.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "iconapp.png",
    "default_title": "Links and information about Paleochora at your fingertips!",
    "default_popup": "extension.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "icons": {
    "128": "iconapp.png"
  }
}
