{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WP This",
  "version": "0.1.1",
  "description": "WordPress “Press This” directly in chrome",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "press-this.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Publish on your blog",
    "default_icon": "38.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
