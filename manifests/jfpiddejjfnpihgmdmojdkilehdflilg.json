{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Herdmind",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Send fanfacts to Herdmind.net without having to visit the site!",
  "browser_action": {
    "default_icon": "exticon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://beta.herdmind.net; object-src 'self'",
  "permissions": [
    "tabs",
    "https://*.herdmind.net/*"
  ]
}
