{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FastCapture",
  "short_name": "FastCapture",
  "description": "Download the page screen with just one click",
  "version": "1.1",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "downloads"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19x19.png",
      "38": "icons/38x38.png"
    },
    "default_title": "Save a screenshot"
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Save a screenshot"
    }
  }
}
