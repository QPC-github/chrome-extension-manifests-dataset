{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gaia Live PM",
  "description": "Get alerted when you receives PM at any time even when not in Gaia Online page",
  "version": "2.0.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "gaia-logo.png"
  },
  "browser_action": {
    "default_title": "Gaia Live PM",
    "default_icon": "gaia.png",
    "default_popup": "window.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "alarms",
    "*://*.gaiaonline.com/",
    "*://*.kazu.pw/"
  ]
}
