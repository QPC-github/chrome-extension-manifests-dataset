{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Stack Overflow++",
  "version": "1.0",
  "description": "Extends StackOverflow.com to include additional features.",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://stackoverflow.com/*"
      ],
      "js": [
        "guide-button.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
