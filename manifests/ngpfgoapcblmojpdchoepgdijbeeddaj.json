{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ntu.ac | url shortener",
  "short_name": "ntu.ac",
  "version": "1.0",
  "description": "Quick link shortening addon for ntu.ac users",
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": "img/logo48.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "contextMenus",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "js/popup.js",
    "css/style.css"
  ],
  "content_scripts": [
    {
      "js": [
        "js/popup.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "js/context.js",
      "js/background.js"
    ]
  }
}
