{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.1",
  "name": "OkaySpeak",
  "short_name": "Speak loudly",
  "description": "Right click and select the text you want us to speak out.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tts"
  ]
}
