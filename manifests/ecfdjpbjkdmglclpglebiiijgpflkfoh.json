{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weeazy - Screen Sharing",
  "author": "Weeazy Company",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Extens√£o utilizada apenas para compartilhamento de tela dentro da plataforma do Weeazy",
  "homepage_url": "https://www.weeazy.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.weeazy.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
