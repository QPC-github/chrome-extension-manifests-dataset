{
  "name": "url-shortener",
  "version": "1.0.1",
  "manifest_version": 2,
  "author": "ReAlign",
  "description": "A generator to shorter url",
  "homepage_url": "https://github.com/ReAlign/url-shortener",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "update_url": "http://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [
    "app.css",
    "app.js"
  ],
  "browser_action": {
    "default_title": "url-shortener",
    "default_popup": "index.html",
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
