{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Listening Back",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "This extension plays a synth sound whenever a cookie is written, overwritten or deleted.",
  "homepage_url": "http://jasmineguffond.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {},
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/timbre.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
