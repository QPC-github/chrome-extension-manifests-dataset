{
  "manifest_version": 2,
  "name": "PocketChange",
  "description": "Micro-donation on Facebook, using social content as a trigger.",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.3.2",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/IconGradient.png",
    "default_popup": "html/options.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": false
  },
  "web_accessible_resources": [
    "images/*"
  ]
}
