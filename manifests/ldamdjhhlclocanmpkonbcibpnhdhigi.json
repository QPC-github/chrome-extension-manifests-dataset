{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Acme Screen Sharing",
  "author": "Acme, Inc.",
  "version": "2.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for www.acmeconnect.org. It doesn't do anything except capture content of your screen.",
  "homepage_url": "https://www.acmeconnect.org/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.acmeconnect.org/*",
      "https://*.acme-dev.2mundos.net/*",
      "https://*.acme-test.2mundos.net/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
