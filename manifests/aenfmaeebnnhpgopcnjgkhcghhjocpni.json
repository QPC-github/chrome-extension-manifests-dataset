{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Window Sizer",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Simple resize chrome window. I do not need donate!",
  "icons": {
    "16": "images/16x16.png",
    "48": "images/48x48.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "images/19x19.png",
    "default_title": "Window Sizer",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "background"
  ]
}
