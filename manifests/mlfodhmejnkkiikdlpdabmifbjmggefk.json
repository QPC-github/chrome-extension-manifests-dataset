{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "حجوزات فنادق",
  "version": "1.1",
  "description": "مع حجوزات . كوم وفّر حى 70% من أسعار غرف الفنادق, شاهد صور الفندق من الداخل والخارج قبل الحجز وقارن الأسعار مجاناً.",
  "icons": {
    "48": "img/hotel48.png",
    "128": "img/hotel128.png",
    "16": "img/hotel16.png"
  },
  "browser_action": {
    "default_icon": "img/hotel16.png",
    "default_title": "خصم 70% على الفنادق",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs"
  ]
}
