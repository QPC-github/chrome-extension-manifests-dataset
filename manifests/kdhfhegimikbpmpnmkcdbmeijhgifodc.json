{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "The Scholarship System",
  "description": "Imports scholarship details into user's account",
  "version": "0.15",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "js/event.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "The Scholarship System",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://api.backendless.com https://unpkg.com 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab"
  ]
}
