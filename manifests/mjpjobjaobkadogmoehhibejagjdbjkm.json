{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Map Location",
  "version": "1.0",
  "description": "Map Location allows you to find not only yourself on the map, but also get directions.",
  "icons": {
    "128": "px128.png",
    "48": "px48.png",
    "16": "px16.png"
  },
  "browser_action": {
    "default_icon": "px16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "http://*/",
    "https://maps.google.com/*",
    "https://maps.googleapis.com/*",
    "http://localhost/*",
    "geolocation"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com; object-src 'self'"
}
