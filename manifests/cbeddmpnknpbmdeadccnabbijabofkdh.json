{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Digital Communications Platform Screen Share",
  "author": "TABLE.co",
  "version": "3.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension facilitates screen sharing functionality for the Table Digital Communications Platform.",
  "homepage_url": "https://table.co",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://table.co/*",
      "https://*.table.co/*",
      "http://localhost:8080/*",
      "http://localhost/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
