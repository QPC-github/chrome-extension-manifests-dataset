{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Twitch Clip Downloader",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Twitch Clip Downloader"
  },
  "permissions": [
    "tabs"
  ]
}
