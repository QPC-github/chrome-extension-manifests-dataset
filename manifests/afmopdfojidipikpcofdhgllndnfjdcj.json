{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.0",
  "name": "BreakBase Notifier",
  "description": "BreakBase Notifier Extension for Google Chrome",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "BreakBase",
    "default_icon": "img/icon16.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png",
    "256": "img/icon256.png"
  },
  "permissions": [
    "tabs",
    "*://breakbase.com/*"
  ]
}
