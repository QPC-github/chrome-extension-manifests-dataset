{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "qubbie - a bookmarking tool",
  "description": "we make it easy to save, organize and share your favorite pages and help you to share your links among browsers and devices",
  "version": "2.0.2",
  "icons": {
    "128": "html/img/logo.png",
    "16": "html/img/logo.png"
  },
  "browser_action": {
    "default_icon": "html/img/logo.png",
    "default_popup": "html/panel.html"
  },
  "omnibox": {
    "keyword": "q"
  },
  "background": {
    "scripts": [
      "html/js/jquery-2.0.2.js",
      "js/lib/sha1.js",
      "js/lib/api.js",
      "js/lib/storage.js",
      "js/lib/background.js"
    ]
  },
  "offline_enabled": false,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "web_accessible_resources": [
    "html/img/*",
    "html/fonts/*"
  ]
}
