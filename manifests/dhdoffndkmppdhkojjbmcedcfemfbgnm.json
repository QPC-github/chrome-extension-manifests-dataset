{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PageFlag",
  "version": "0.3.2",
  "description": "Mark where youâ€™d last stopped on the page!",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "PageFlag",
    "default_popup": "popup.html",
    "default_icon": {
      "32": "img/icon_32.png",
      "64": "img/icon_64.png"
    }
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "32": "img/icon_32.png",
    "64": "img/icon_64.png"
  },
  "manifest_version": 2
}
