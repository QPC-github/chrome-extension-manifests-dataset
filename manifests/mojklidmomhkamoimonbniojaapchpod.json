{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ВК - листай посты одним нажатием",
  "short_name": "ВКскролл",
  "description": "Для тех, кому надоело скролить посты мышкой!",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon_final.png",
    "32": "images/icon_final.png",
    "48": "images/icon_final.png",
    "128": "images/icon_final.png"
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon_final.png",
      "32": "images/icon_final.png",
      "48": "images/icon_final.png",
      "128": "images/icon_final.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "js": [
        "scroll.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "commands": {
    "scrollToNext": {
      "suggested_key": {
        "default": "Ctrl+Down",
        "mac": "Command+Down"
      },
      "description": "Scroll to next post"
    },
    "scrollToPrev": {
      "suggested_key": {
        "default": "Ctrl+Up",
        "mac": "Command+Up"
      },
      "description": "Scroll to prev post"
    }
  }
}
