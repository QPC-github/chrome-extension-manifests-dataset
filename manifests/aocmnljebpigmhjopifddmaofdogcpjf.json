{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "#HashNag",
  "version": "0.9",
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "hashnag.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://twitter.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "hashNagPopup.html"
  }
}
