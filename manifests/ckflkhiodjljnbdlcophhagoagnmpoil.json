{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Meetrix Screen Share",
  "description": "A Screen Sharing extension Meetrix Meet demo",
  "version": "0.1.7",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "meetrix-logo-16x16.png",
    "48": "meetrix-logo-48x48.png",
    "128": "meetrix-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.meetrix.xyz/*"
    ]
  }
}
