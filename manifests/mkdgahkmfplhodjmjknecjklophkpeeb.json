{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shopcrux Plugin",
  "description": "Add a product to your shopcrux list",
  "version": "1.4",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "128": "1392804176_shopping-trolley-icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "Add To Shopcrux",
    "default_icon": "1392804297_cart-shopping-icon.png",
    "default_popup": "popup.html"
  }
}
