{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Offline CodeIgniter",
  "description": "Offline CodeIgniter",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "images/32.png",
    "default_popup": "user_guide/index.html"
  },
  "icons": {
    "128": "images/128.png",
    "64": "images/64.png",
    "48": "images/48.png",
    "32": "images/32.png",
    "16": "images/16.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.min.js",
        "js/css-icons.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "<all_urls>"
  ],
  "options_page": "user_guide/index.html"
}
