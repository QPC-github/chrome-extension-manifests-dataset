{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "ping.js",
      "notifications.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/48x48_Bing_Grey.png",
    "default_popup": "rewards_popup.html"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "is_default": true,
      "prepopulated_id": 3,
      "search_url": "https://www.bing.com/search?FORM=U523DF&PC=U523&q={searchTerms}",
      "suggest_url": "https://www.bing.com/osjson.aspx?FORM=U523DF&PC=U523&query={searchTerms}"
    }
  },
  "default_locale": "en",
  "description": "__MSG_RewardsDesc__",
  "icons": {
    "128": "images/128x128_Bing_Grey.png",
    "16": "images/16x16_Bing_Grey.png",
    "48": "images/48x48_Bing_Grey.png"
  },
  "manifest_version": 2,
  "name": "__MSG_RewardsTitle__",
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*",
    "management",
    "notifications"
  ],
  "short_name": "__MSG_RewardsTitle__",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.9",
  "web_accessible_resources": [
    "*.png"
  ]
