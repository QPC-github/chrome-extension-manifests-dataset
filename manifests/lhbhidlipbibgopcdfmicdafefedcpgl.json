{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "REVGO Chrome Extension",
  "short_name": "REVGO Chrome Extension",
  "version": "1.2.3",
  "description": "REVGO Chrome Extension",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "nativeMessaging",
    "background"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://*.minerva.net:*/*",
      "https://*.minerva.net:*/*",
      "http://*.minervanetworks.com:*/*",
      "https://*.minervanetworks.com:*/*",
      "http://*.rev2go.com:*/*",
      "https://*.rev2go.com:*/*",
      "http://*.revgoplay.com:*/*",
      "https://*.revgoplay.com:*/*"
    ]
  }
}
