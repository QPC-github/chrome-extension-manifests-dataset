{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Extension permettant de suivre les actualit√©s des blogs chiens/chats les plus connus en France",
  "name": "OGVA",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "imgs/icon.png",
    "default_title": "OGVA",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "icons": {
    "128": "imgs/icon128.png",
    "48": "imgs/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/js/libs/jquery.js",
        "/js/content_scripts.js"
      ]
    }
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "notifications",
    "unlimitedStorage"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
}
