{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HI Notifier",
  "short_name": "HIN",
  "description": "This extension looks for the latest issue of the Hello Internet podcast.",
  "version": "1.0.9",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "http://*.hellointernet.fm/*",
    "http://*.podtrac.com/*",
    "notifications",
    "storage"
  ],
  "icons": {
    "48": "images/hi_48.png",
    "128": "images/hi_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/hi_19.png",
      "38": "images/hi_38.png"
    },
    "default_title": "HI Notifier",
    "default_popup": "popup.html"
  }
}
