{
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "author": "Sergey Shelgunov",
  "name": "Радио плеер",
  "short_name": "Radiopleer",
  "description": "Слушайте бесплатно тысячи радиостанций самых различных жанров.",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.3",
  "homepage_url": "http://radiopleer.net/",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Радио плеер",
    "default_icon": "radiopleer.png"
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  }
}
