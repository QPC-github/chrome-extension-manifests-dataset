{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Orthos Maximizer",
  "description": "Orthos Maximizer will autoscale Chrome across two or more browsers. For use with Orthos Cloud.",
  "version": "1.0",
  "icons": {
    "48": "images/icon.png"
  },
  "incognito": "split",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "system.display"
  ]
}
