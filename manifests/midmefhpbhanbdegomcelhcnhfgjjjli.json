{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Reddit - Hide Side",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Toggle Reddit Sidebar by Daniel Coffelt",
  "icons": {
    "16": "reddit-icon.png",
    "48": "reddit-icon.png",
    "128": "reddit-icon.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "unlimitedStorage",
    "notifications",
    "tabs",
    "http://*.reddit.com/*"
  ]
}
