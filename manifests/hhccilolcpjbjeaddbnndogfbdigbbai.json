{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "pimentaLIVE Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with pimentaLIVE.",
  "version": "0.7.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "pimentachat-logo-16x16.png",
    "48": "pimentachat-logo-48x48.png",
    "128": "pimetnachat-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://pimenta.live/*"
    ]
  }
}
