{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TorrentSafe Right-Click Extension",
  "description": "Anonymous bit downloads, just right click the magnet link",
  "version": "0.0.4",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "128": "images/icon67.png",
    "16": "images/icon67.png",
    "48": "images/icon67.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon67.png"
    },
    "default_title": "TorrentSafe"
  },
  "manifest_version": 2
}
