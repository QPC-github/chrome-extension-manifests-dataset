{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Count Life",
  "short_name": "Count Life",
  "description": "A minimalist life calendar. Shows you how many weeks you've lived, and how many you have left.",
  "version": "1.5",
  "permissions": [
    "https://*.pingstatsnet.com/",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "calendar_extension.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/deskmetrics-2.0.0-min.js",
      "js/background.js"
    ]
  }
}
