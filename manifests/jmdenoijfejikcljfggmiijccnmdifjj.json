{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "page_action": {
    "default_icon": "images/128-icon.png",
    "default_popup": "popup.html",
    "default_title": "VK color changer"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "exclude_matches": [
        "*://vk.com/away.php*"
      ],
      "js": [
        "js/app/rules.js",
        "bg-content.js"
      ],
      "matches": [
        "*://vk.com/*",
        "*://*.vk.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "description": "Позволяет менять цвет оформления и фон социальной сети Вконтакте",
  "icons": {
    "128": "images/128-icon.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "name": "VK color changer - смена цвета и фона в ВК",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "*://vk.com/*",
    "*://*.vk.com/*",
    "*://*.vk.me/*"
  ],
  "version": "1.9.7",
  "web_accessible_resources": [
    "popup.html",
    "js/picker.js",
    "js/lib.js",
    "css/style.css"
  ]
}
