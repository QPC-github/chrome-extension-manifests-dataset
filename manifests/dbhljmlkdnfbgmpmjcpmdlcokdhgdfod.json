{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Always Select",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Always Select prevents sites from disabling user selection via css.",
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "style.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
