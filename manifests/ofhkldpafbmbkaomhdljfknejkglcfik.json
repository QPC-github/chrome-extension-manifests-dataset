{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pluck",
  "version": "0.8.5",
  "description": "Share exactly what you want",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "offline_enabled": false,
  "browser_action": {
    "name": "Pluck",
    "default_icon": "pluck-icon-16.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "pluck-icon-16.png",
    "48": "pluck-icon-48.png",
    "128": "pluck-icon-128.png"
  }
}
