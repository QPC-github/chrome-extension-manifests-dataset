{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "看纽约在线中英词典 Online Dictionary",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "description": "提供在线中英单词翻译，同义词、反义词、复数和时态、例句等功能。网页划词翻译，发音和自动发音功能。",
  "version": "1.7",
  "background": {
    "scripts": [
      "assets/jquery.min.js",
      "assets/knyDict.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "assets/jquery.min.js",
        "assets/knyDict.js",
        "assets/knyDictContent.js",
        "content.js"
      ],
      "css": [
        "assets/knyDict.bootstrap.css",
        "assets/knyDict.font-awesome.min.css",
        "assets/knyDict.css"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "打开在线词典",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "cookies",
    "webRequest",
    "storage"
  ],
  "web_accessible_resources": [
    "assets/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; media-src 'self' https://www.kannewyork.com;"
}
