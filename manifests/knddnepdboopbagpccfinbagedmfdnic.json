{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.2",
  "name": "Bingo Edge",
  "manifest_version": 2,
  "description": "The Leading extension for Bingo players to track trends and predict patterns",
  "icons": {
    "16": "static/icons/icon-16.png",
    "48": "static/icons/icon-48.png",
    "128": "static/icons/icon-128.png"
  },
  "browser_action": {
    "default_title": "Bingo Edge",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "facebook.sdk.js"
  ],
  "permissions": [
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*",
    "tabs",
    "history",
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*",
    "https://connect.facebook.net/en_US/all.js",
    "https://connect.facebook.net/en_US/sdk.js"
  ]
}
