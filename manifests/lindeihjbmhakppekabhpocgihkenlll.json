{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Focus Overflow",
  "version": "1.0.1",
  "description": "No more distractions on stack overflow.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Focus Overflow",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
