{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fast bookmarks",
  "short_name": "Fast bookmarks",
  "version": "1.0.3",
  "description": "Fast, lightweight and reliable bookmarks",
  "homepage_url": "http://fastbmk.com/",
  "icons": {
    "48": "img/fastbmk-48.png",
    "96": "img/fastbmk-96.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "<all_urls>",
    "*://*/*",
    "*://fastbmk.com/*"
  ],
  "browser_action": {
    "default_icon": "img/star-empty-38.png",
    "default_title": "fastbmk.com"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
