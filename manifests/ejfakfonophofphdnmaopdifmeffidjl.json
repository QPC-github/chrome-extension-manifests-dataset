{
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "underscore.js",
        "underscore.string.min.js",
        "color-thief.min.js",
        "default.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "This extension blocks all Sarahah related posts from appearing on a webpage",
  "icons": {
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  },
  "manifest_version": 2,
  "name": "Block Sarahah",
  "permissions": [
    "activeTab"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1"
}
