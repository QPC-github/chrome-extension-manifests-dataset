{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Property Tracker",
  "version": "1.1.16",
  "icons": {
    "128": "icon128.png"
  },
  "description": "Tracks changes to property prices on the RightMove website.",
  "browser_action": {
    "default_icon": "icon3.png",
    "default_popup": "options.html"
  },
  "background": {
    "pages": [
      "background.html"
    ],
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.rightmove.co.uk/*find*",
        "https://www.rightmove.co.uk/property-for-sale/*"
      ],
      "css": [
        "ptrack.css",
        "jquery.tooltip.css"
      ],
      "js": [
        "jquery.js",
        "jquery.tooltip.min.js",
        "ptrack.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.png"
  ],
  "permissions": [
    "tabs",
    "https://us-central1-housetrack-uk.cloudfunctions.net/",
    "https://codemwnci.azurewebsites.net/"
  ]
}
