{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GithubRemark",
  "version": "0.2",
  "description": "给你的Github好友增加备注名吧～",
  "icons": {
    "128": "images/github_512.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "bg.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "GithubRemark",
    "default_icon": {
      "19": "images/github.png"
    },
    "default_popup": "popup.html"
  }
}
