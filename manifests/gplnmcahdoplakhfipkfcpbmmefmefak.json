{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lingua Franca",
  "version": "1.0.5",
  "description": "Read news to learn languages.",
  "icons": {
    "48": "icons/extension-48x48.png",
    "96": "icons/extension-96x96.png",
    "128": "icons/extension-128x128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "*://*.linguafran.ca/*"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/extension-19x19.png",
      "38": "icons/extension-38x38.png"
    },
    "default_title": "Lingua Franca"
  },
  "background": {
    "scripts": [
      "background/linguafranca.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content_scripts/linguafranca.js"
      ]
    }
  ]
}
