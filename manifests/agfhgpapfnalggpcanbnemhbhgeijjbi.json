{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Precise links",
  "description": "Enables creating and resolving links to specific pieces of text in a page.",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "contextMenus"
  ],
  "applications": {
    "gecko": {
      "id": "precise-links@precise-links"
    }
  },
  "manifest_version": 2
}
