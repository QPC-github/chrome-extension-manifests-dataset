{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Topaz SigPlusExtLite Background Extension",
  "version": "2.0.15.0",
  "manifest_version": 2,
  "description": "The Topaz SigPlusExtLite Chrome Extension enables users to capture signatures on a wide variety of Topaz signature pads.",
  "minimum_chrome_version": "23",
  "background": {
    "scripts": [
      "SigPlusExtLiteBgExtn.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "http://*/*",
        "<all_urls>"
      ],
      "js": [
        "SigPlusExtLiteSigningChromeExt.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "nativeMessaging",
    "tabs",
    "<all_urls>"
  ]
}
