{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "amplifyer.io Screensharing",
  "description": "Screensharing utility for amplifyer.io",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "48",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://amplifyer.io/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://amplifyer.io/*"
    ]
  }
}
