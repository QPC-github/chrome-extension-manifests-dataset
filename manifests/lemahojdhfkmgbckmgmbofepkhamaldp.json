{
  "manifest_version": 2,
  "name": "ShoppingSkidka - Скидки для Вас",
  "description": "Самые новые акции, скидки и распродажи прямо в вашем браузере.",
  "homepage_url": "http://www.shoppingskidka.com/promo/chrome/",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "notifications",
    "webNavigation",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.2",
  "icons": {
    "128": "icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "Есть скидки!",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "purl.js",
      "shoppingskidka.js",
      "background.js"
    ],
    "persistent": false
  }
}
