{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Forever Old Reddit",
  "version": "1.0.1",
  "description": "Redirects requests to Reddit to old.reddit.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://www.reddit.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Logo_withbeard16.png",
      "32": "images/Logo_withbeard32.png",
      "48": "images/Logo_withbeard48.png",
      "128": "images/Logo_withbeard128.png"
    }
  },
  "icons": {
    "16": "images/Logo_withbeard16.png",
    "32": "images/Logo_withbeard32.png",
    "48": "images/Logo_withbeard48.png",
    "128": "images/Logo_withbeard128.png"
  },
  "manifest_version": 2
}
