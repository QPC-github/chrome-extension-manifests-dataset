{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SVG Viewer",
  "description": "A simple application for viewing and editing SVG files.",
  "version": "1.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "js/background/background.js"
      ]
    }
  },
  "icons": {
    "16": "images/icons/svg-16.png",
    "128": "images/icons/svg-128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    {
      "fileSystem": [
        "directory",
        "write",
        "retainEntries"
      ]
    }
  ]
}
