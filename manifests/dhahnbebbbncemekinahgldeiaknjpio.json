{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "时光网电影一键看",
  "version": "1.1.1.3",
  "manifest_version": 2,
  "description": "浏览时光网的时候，对感兴趣的影片再也不用自己在网上搜索影片资源了，一键点击即可播放，无需下载。",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery/jquery-1.8.3.min.js",
        "jquery/jquery.json-2.4.min.js",
        "contentscript/util.js",
        "contentscript/contentscript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "page": "background/background.html"
  },
  "icons": {
    "48": "ui/icon.png"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "http://*.hellokittycn.com/"
  ]
}
