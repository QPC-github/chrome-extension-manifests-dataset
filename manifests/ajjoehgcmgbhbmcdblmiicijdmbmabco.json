{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Opynyn",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Allows you to see ratings, tags, opinions of the current page as well as rate and give your opinion on it.",
  "icons": {
    "16": "icons/icon-16.png",
    "120": "icons/icon-120.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "https://api.opynyn.com/",
    "https://www.opynyn.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Opynyn"
  },
  "web_accessible_resources": [
    "popup.html",
    "icons/logo.png",
    "/icons/rating-moderate.svg",
    "/icons/rating-offtopic.svg",
    "/icons/rating-bad.svg",
    "/icons/rating-awesome.svg",
    "/icons/rating-humorous.svg",
    "/icons/rating.svg",
    "/icons/opinion.svg",
    "/icons/up.svg",
    "/icons/down.svg",
    "/styles/main.css",
    "/styles/contentscript.css",
    "/icons/error.png",
    "/icons/3dots.svg"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
