{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Right-Click Search IMDb",
  "description": "Quickly search for highlighted text on IMDb via right-click",
  "version": "1.0",
  "icons": {
    "16": "imdb-icon.png",
    "48": "imdb-icon-big.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}
