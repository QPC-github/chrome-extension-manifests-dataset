{
  "background": {
    "scripts": [
      "app.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "index.html",
    "default_title": "各种小工具"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "jquery-1.10.2.js",
        "init.js"
      ],
      "matches": [
        "http://aone.alibaba-inc.com/aone2/*",
        "https://mail.alibaba-inc.com/alimail/*",
        "https://webmail.alibaba-inc.com/alimail/*",
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "description": "各种小工具【作者：duan.zhangd@alibaba-inc.com】",
  "icons": {
    "128": "images/logo.png",
    "16": "images/logo.png",
    "48": "images/logo.png"
  },
  "manifest_version": 2,
  "name": "AliTools",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "https://mail.alibaba-inc.com/alimail/*",
    "https://webmail.alibaba-inc.com/alimail/*",
    "http://*.alibaba-inc.com/",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.3"
}
