{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NCA Single Window SignOn",
  "description": "An Extension developed for NCA Dignity to enable cross portal secure signins.",
  "version": "1.1.5",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "alarms",
    "webNavigation",
    "https://*/*",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "img/nca-1.png",
    "default_popup": "popup.html"
  }
}
