{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sleepy Tabs",
  "description": "This extension puts to sleep tabs that have not been viewed after a while.",
  "version": "1.1",
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
