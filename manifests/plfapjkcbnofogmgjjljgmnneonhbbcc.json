{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "OlympRobot",
  "author": "Cyberdyne Systems",
  "homepage_url": "https://forexbinaryrobot.ru/",
  "version": "31.0",
  "description": "Расширение для автоматической торговли инструментами Fixed Time Trade на платформе Olymp Trade.",
  "icons": {
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "cookies",
    "https://olymptrade.com/*",
    "https://forexbinaryrobot.ru/*",
    "https://api.olymptrade.com/*"
  ],
  "browser_action": {
    "default_title": "Торговый робот OlympRobot",
    "default_icon": "img/icon128.png",
    "default_popup": "preview.html"
  },
  "background": {
    "scripts": [
      "scripts/service.js",
      "scripts/jquery.js",
      "scripts/background.js"
    ]
  }
}
