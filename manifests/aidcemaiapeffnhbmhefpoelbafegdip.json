{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LaBelleCollecte",
  "version": "1.50",
  "description": "Collecter des fonds grâce à vos achats sur nos sites partenaires",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "notifications",
    "http://*/",
    "https://*/",
    "tabs",
    "cookies",
    "storage"
  ],
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}
