{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cyber Security Checklist Extension",
  "version": "4.0",
  "description": "Check your Web Security fast and easy with this Chrome Extension!",
  "author": "Alva Cardona",
  "icons": {
    "128": "icon-2.png"
  },
  "browser_action": {
    "default_title": "Cyber Security Checklist Tool",
    "default_icon": "icon-2.png",
    "default_popup": "popup.html",
    "chrome_style": true
  },
  "options_ui": {
    "page": "popup.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage",
    "history",
    "cookies"
  ]
}
