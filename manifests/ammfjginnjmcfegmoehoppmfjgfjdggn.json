{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "xkcd++",
  "short_name": "xkcd++: Better alt-text and button for comic explanations",
  "version": "1.0",
  "description": "Improves xkcd and What If with easier to read alt-text and a button for comic explanations.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.xkcd.com/*",
        "*://xkcd.com/*"
      ],
      "js": [
        "comic.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://what-if.xkcd.com/*"
      ],
      "js": [
        "whatif.js"
      ],
      "run_at": "document_end"
    }
  ]
}
