{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "DNOTICIAS.PT for Google Chrome",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "Extensao para o Google Chrome, permite visualizar de forma simples toda a informacao disponibilizada no site www.dnoticias.pt.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "http://www.dnoticias.pt/",
    "tabs",
    "cookies",
    "storage"
  ]
}
