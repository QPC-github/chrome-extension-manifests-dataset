{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CliteHD Desktop Sharing",
  "description": "A simple extension that allows you to share your desktop into meetings with CliteHD Meetings.",
  "version": "1.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "clitehd-logo-16x16.png",
    "48": "clitehd-logo-48x48.png",
    "128": "clitehd-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.clitehd.com/*",
      "*://*.nltvc.com/*"
    ]
  }
}
