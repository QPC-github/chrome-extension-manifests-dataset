{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bit eShortener",
  "description": "Just an easiest button for shorten and copy URL using Bit.ly API. No ads!",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "jquery.js",
      "fn.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon_19.png",
    "default_title": "Shorten and copy URL"
  },
  "icons": {
    "19": "icon_19.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
