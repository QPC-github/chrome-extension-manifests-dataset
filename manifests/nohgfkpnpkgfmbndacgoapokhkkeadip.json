{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Conrad",
  "version": "0.1.2",
  "description": "A writer-focused swipe file",
  "web_accessible_resources": [
    "entry.js"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Conrad"
  },
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "webRequest",
    "webRequestBlocking"
  ]
}
