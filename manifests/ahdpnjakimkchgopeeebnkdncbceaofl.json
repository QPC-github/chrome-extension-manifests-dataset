{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BAP - Link Generator",
  "version": "1.0.4",
  "description": "Bukalapak Affiliate Program - Link Generator",
  "author": "Bukalapak",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "background",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_title": "Bukalapak Link Generator",
    "default_popup": "pages/popup.html"
  },
  "background": {
    "persistent": false,
    "page": "pages/background.html"
  },
  "web_accessible_resources": [
    "pages/oauth.html"
  ],
  "options_page": "pages/options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
