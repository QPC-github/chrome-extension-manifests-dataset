{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Post It",
  "version": "1.0.0",
  "description": "Select and post easily to Facebook",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/sharer/*"
      ],
      "js": [
        "jquery.min.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "*://*/*/"
  ],
  "homepage_url": "http://pgasocialhub.com"
}
