{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PureWeb App Share",
  "short_name": "App Share",
  "author": "Calgary Scientific Inc.",
  "version": "1.7",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Developed by Calgary Scientific to provide screen sharing to PureWeb Applications",
  "homepage_url": "http://calgaryscientific.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "CSI_logo_16.png",
    "48": "CSI_logo_48.png",
    "128": "CSI_logo_128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.pureweb.io/*"
    ]
  }
}
