{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Add Shortcut Tool",
  "version": "1.0",
  "description": "Quickly adds shortcuts to your online Desktop at Blondbird.",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background_script.js"
    ]
  },
  "permissions": [
    "http://*.mmods.co.uk/",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "DROP URL",
    "default_icon": "icon_16.png"
  }
}
