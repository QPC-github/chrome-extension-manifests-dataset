{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tabs",
  "description": "This extension adds hotkeys to tab. Tabs, man.",
  "version": "1.0",
  "author": "Michael Bonds",
  "icons": {
    "16": "tabs.png",
    "32": "tabs.png",
    "64": "tabs.png"
  },
  "commands": {
    "same-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open same page in new tab."
    },
    "pin-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Pin current tab."
    }
  },
  "background": {
    "scripts": [
      "tabs.js"
    ],
    "persistent": false
  },
  "permissions": [
    "commands",
    "tabs"
  ]
}
