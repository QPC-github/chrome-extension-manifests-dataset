{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Capture Screens",
  "author": "xandutec",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Capture full-screen or specific application's screen on any HTTPs domain!",
  "homepage_url": "https://cfscommunicator.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://cfscommunicator.com/"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
