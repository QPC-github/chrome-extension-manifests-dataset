{
  "name": "Kawhi Leonard HD Wallpapers & New Tab",
  "manifest_version": 2,
  "short_name": "Kawhi",
  "description": "Kawhi Leonard Wallpapers and New Tab Themes for your Browser",
  "version": "2.0",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "chrome_url_overrides": {
    "newtab": "files/mega-new.html"
  },
  "browser_action": {
    "default_title": "Kawhi Leonard HD Wallpapers & New Tab",
    "default_icon": {
      "16": "files/icon16.png",
      "48": "files/icon48.png",
      "128": "files/icon128.png"
    }
  },
  "offline_enabled": true,
  "incognito": "split",
  "permissions": [
    "unlimitedStorage",
    "storage",
    "contextMenus",
    "management"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "icon128.png"
  }
}
