{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bliss",
  "description": "Because Ignorance is bliss, and The Facebook's news is malarchy",
  "version": "0.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "mystyles.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.facebook.com/*"
  ]
}
