{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "豆瓣电影工具版",
  "manifest_version": 2,
  "version": "1.8.6",
  "description": "在任意网页上选中影视剧链接或者包含影视剧名称的文本后右键加载豆瓣电影工具版，双击图标即可在页面右侧显示豆瓣电影的评分及链接，是豆瓣电影用户的必备工具。",
  "background": {
    "page": "background.htm"
  },
  "icons": {
    "16": "appicon16.png",
    "48": "appicon48.png",
    "128": "appicon128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "idle",
    "cookies",
    "contextMenus",
    "background",
    "browsingData",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://secure.nenglp.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "appconf.js",
        "contentscript.js",
        "chromecs.js",
        "appcs.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
