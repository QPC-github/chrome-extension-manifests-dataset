{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Page Reader",
  "version": "1.0",
  "description": "A completely free extension to read highlighted text via Text To Speech.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {},
  "permissions": [
    "activeTab",
    "alarms",
    "storage"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "manifest_version": 2
}
