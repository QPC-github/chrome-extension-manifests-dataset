{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RuneScape Wiki Fullscreen",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Toggle the navigation on the RS wiki",
  "content_scripts": [
    {
      "matches": [
        "*://*.runescape.wiki/*",
        "*://runescape.wiki/*"
      ],
      "css": [
        "css/main.css"
      ]
    },
    {
      "matches": [
        "*://*.runescape.wiki/*",
        "*://runescape.wiki/*"
      ],
      "js": [
        "js/main.js"
      ]
    }
  ],
  "incognito": "split",
  "permissions": [
    "tabs",
    "*://*.runescape.wiki/*",
    "*://runescape.wiki/*"
  ]
}
