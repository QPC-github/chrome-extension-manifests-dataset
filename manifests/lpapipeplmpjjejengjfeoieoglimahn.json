{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": true
  },
  "name": "Bytezy Messenger",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Use Bytezy Messenger from within your browser",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon_128.png",
    "16": "img/icon_16.png",
    "24": "img/icon_24.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png"
  },
  "permissions": [
    "http://*.bytezy.com/*",
    "tabs",
    "bookmarks"
  ]
}
