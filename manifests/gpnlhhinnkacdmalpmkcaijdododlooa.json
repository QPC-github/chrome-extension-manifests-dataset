{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Refresher",
  "version": "1",
  "manifest_version": 2,
  "description": "Refresher - A Google Chrome extension by Tony Coculuzzi",
  "author": "Tony Coculuzzi",
  "icons": {
    "16": "images/icons/16x16.png",
    "48": "images/icons/48x48.png",
    "128": "images/icons/128x128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "omnibox": {
    "keyword": "Refresher"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icons/19x19.png",
      "38": "images/icons/38x38.png"
    },
    "default_title": "Refresher",
    "default_popup": "web/browseraction.html"
  },
  "background": {
    "page": "web/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "web/jquery.js",
        "web/content.js"
      ],
      "css": [
        "web/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "web/jquery.js",
    "web/jquery-2.0.3.min.map"
  ]
}
