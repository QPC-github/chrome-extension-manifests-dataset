{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Aristocractic Moustache",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.5",
  "default_locale": "uk",
  "author": "Anton Pets",
  "offline_enabled": false,
  "icons": {
    "26": "./img/icon26.png",
    "32": "./img/icon32.png",
    "48": "./img/icon48.png",
    "64": "./img/icon64.png",
    "128": "./img/icon128.png",
    "256": "./img/icon256.png"
  },
  "permissions": [
    "tabs",
    "http://aristocrats.fm/*"
  ],
  "browser_action": {
    "default_icon": "./img/icon32.png"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  }
}
