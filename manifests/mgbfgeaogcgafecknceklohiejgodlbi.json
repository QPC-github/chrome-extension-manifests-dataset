{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "short_name": "Calkeen Tracker",
  "name": "Calkeen Website Tracker",
  "description": "Keep track of the time you spend in Chrome and synchronizes the data with the Calkeen Calendar.",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "icons": {
    "16": "16px_icon.png",
    "32": "32px_icon.png",
    "48": "48px_icon.png",
    "128": "128px_icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "static/js/background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "identity"
  ],
  "manifest_version": 2,
  "version": "1.0.0"
}
