{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "name": "Image Downloader",
  "short_name": "download-all-images",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/download-all-images.html",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "downloads",
    "notifications"
  ],
  "description": "Easily save all images in a website to a zip file with just one click!",
  "commands": {
    "action-mode": {
      "description": "Image Downloader",
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      }
    }
  },
  "browser_action": {
    "default_title": "Image Downloader",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
