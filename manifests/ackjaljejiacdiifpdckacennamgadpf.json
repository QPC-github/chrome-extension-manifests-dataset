{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MinerStop Blocker - Майнинг Блокиратор",
  "description": "MinerStop Blocker - лучший блокиратор криптовалютных майнеров на сайтах!",
  "homepage_url": "https://btcnovosti.com",
  "version": "0.2.5",
  "icons": {
    "128": "src/img/icon.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "src/overview.html"
  },
  "background": {
    "scripts": [
      "src/js/blocker.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "notifications",
    "tabs"
  ]
}
