{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lazy for Google Chrome™",
  "version": "0.0.2",
  "description": "Google Chrome™ extension for reading run tests details for Salesforce Deployments",
  "icons": {
    "16": "img/lz-16x16.png",
    "48": "img/lz-48x48.png",
    "128": "img/lz-128x128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/showPageAction.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_title": "Login to Lazy from Salesforce",
    "default_icon": "img/lz-48x48.png"
  }
}
