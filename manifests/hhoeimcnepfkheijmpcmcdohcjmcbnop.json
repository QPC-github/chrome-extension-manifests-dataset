{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ERN Screen Sharing",
  "author": "OpenApp",
  "version": "2.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is developed for screen sharing within the European Reference Network application.",
  "homepage_url": "http://www.openapp.ie/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.openapp.ie/*",
      "https://*.ern-net.eu/*",
      "http://localhost/*",
      "*://192.168.20.111/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128transparent.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
