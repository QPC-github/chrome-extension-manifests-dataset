{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Close My Tabs",
  "description": "Close all open tabs at once !!",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "",
    "default_icon": "CloseMyTabs_Icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html"
}
