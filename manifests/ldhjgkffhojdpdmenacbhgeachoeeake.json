{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sipwise Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Sipwise Meet and its underlying Jitsi Videobridge.",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "sipwise-logo-16x16.png",
    "48": "sipwise-logo-48x48.png",
    "128": "sipwise-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.sipwise.com/*"
    ]
  }
}
