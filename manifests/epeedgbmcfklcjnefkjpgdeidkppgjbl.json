{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Random Song",
  "description": "Plays a random song.",
  "short_name": "Random Song",
  "version": "0.5",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "cookies"
  ],
  "background": {
    "scripts": [
      "third-party/jquery.js",
      "config.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "commands": {
    "play_random_song": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Play Random Song"
    }
  },
  "browser_action": {
    "default_title": "Surprise me! (F4)",
    "default_icon": "icon_128.png"
  }
}
