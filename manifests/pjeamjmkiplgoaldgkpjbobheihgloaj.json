{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MotaWord - Grabber",
  "short_name": "MotaWord",
  "version": "1.6",
  "author": "MotaWord Development - it@motaword.com",
  "description": "Select any content from your website and get it translated professionally.",
  "homepage_url": "https://www.motaword.com",
  "background": {
    "persistent": false,
    "scripts": [
      "src/services/enabler.js"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon_inactive19.png",
      "38": "icons/icon_inactive38.png"
    },
    "default_title": "MotaWord Translation"
  },
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "src/*",
    "font/*",
    "icons/*"
  ],
  "incognito": "split",
  "offline_enabled": false
}
