{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "1.1",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "omnibox": {
    "keyword": "checker"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "/img/icon128.png"
  },
  "icons": {
    "16": "/img/icon16.png",
    "32": "/img/icon32.png",
    "48": "/img/icon48.png",
    "128": "/img/icon128.png"
  },
  "manifest_version": 2
}
