{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ocular Automaton",
  "version": "1.5.3",
  "description": "Identify Modern legal MTG cards by clicking on their text box.",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19x19.png",
      "38": "img/icon38x38.png"
    },
    "default_title": "Click or press Alt+A to activate"
  },
  "icons": {
    "16": "img/icon16x16.png",
    "48": "img/icon48x48.png",
    "128": "img/icon128x128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "altprogramstart": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Activate Ocular Automaton"
    }
  },
  "web_accessible_resources": [
    "modernlist.json"
  ],
  "manifest_version": 2
}
