{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Drift Email",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "inboxsdk.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    },
    {
      "matches": [
        "https://*.salesforce.com/*"
      ],
      "js": [
        "salesforce-content.js"
      ]
    },
    {
      "matches": [
        "https://*.lightning.force.com/*"
      ],
      "js": [
        "lightning-content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "2020_Drift_Icon_48.png",
    "128": "2020_Drift_Icon_128.png"
  },
  "web_accessible_resources": [
    "jquery-1.10.2.min.js",
    "*.png",
    "*.gif",
    "*.otf",
    "*.ttf",
    "onboarding.html",
    "feature-onboarding.html",
    "sequence-onboarding.html",
    "enrollv2.html"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.driftqa.com/*",
      "*://*.drift.com/*"
    ]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.segment.com https://cloud.tinymce.com:*; object-src 'self'",
  "description": "Drift lets you automatically greet prospects you email with a personalized message when theyâ€™re on your site.",
  "version": "8.21.16"
}
