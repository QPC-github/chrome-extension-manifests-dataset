{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "description": "Chrome extension for desktop sharing",
  "externally_connectable": {
    "matches": [
      "*://meet.etalk.net/*",
      "*://meet.etalk.net/*/*",
      "*://meet.polylink.net/*",
      "*://meet.polylink.net/*/*"
    ]
  },
  "icons": {
    "128": "logo128.png",
    "16": "logo16.png",
    "48": "logo48.png"
  },
  "manifest_version": 2,
  "name": "Polylink Desktop Sharing",
  "minimum_chrome_version": "34",
  "permissions": [
    "desktopCapture"
  ],
  "version": "0.2"
}
