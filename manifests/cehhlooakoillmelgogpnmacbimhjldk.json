{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTube Comments Hide",
  "version": "0.7.1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "css": [
        "style.css",
        "style2.css",
        "style3.css",
        "style4.css",
        "style5.css",
        "style6.css",
        "style7.css"
      ],
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Say goodbye to angry YouTube comments. Hides all user comments on YouTube.",
  "icons": {
    "128": "pictures/5.png",
    "1": "pictures/1.png",
    "2": "pictures/2.png",
    "3": "pictures/3.png",
    "4": "pictures/4.png"
  }
}
