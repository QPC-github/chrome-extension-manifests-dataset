{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Ayotree Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Ayotree",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.4",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in Ayotree Whiteboard.",
  "externally_connectable": {
    "matches": [
      "*://*.ayotree.com/*",
      "*://*.eliteclass.net/*"
    ]
  },
  "icons": {
    "128": "Ayotree_icon_128.png",
    "16": "Ayotree_icon_16.png",
    "48": "Ayotree_icon_48.png"
  },
  "browser_action": {
    "default_icon": "Ayotree_icon_128.png"
  }
}
