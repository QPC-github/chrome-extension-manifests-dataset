{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fin.",
  "version": "0.1.0",
  "description": "This extension hides noise in comments section on Designer News so that you can move on with your busy designer life.",
  "browser_action": {
    "default_icon": {
      "32": "icon32.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.designernews.co/*"
      ]
    }
  ]
}
