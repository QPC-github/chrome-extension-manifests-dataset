{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BTC Price Ticker",
  "short_name": "BTC Price",
  "description": "Quickly view BTC price. If you like it, you can donate here: 1BMowQLgHNnEeqkB3JNJnURVTYsYTB91c2",
  "version": "1.3.1",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "browser_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "popup.html",
    "default_title": "BTC Price Ticker"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "http://coincap.io/",
    "storage"
  ]
}
