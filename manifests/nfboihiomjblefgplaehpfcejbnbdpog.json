{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Webpage Default Encoding Changer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension modifies the default encoding, useful for chrome 55+ which removed this standard feature",
  "homepage_url": "https://github.com/drnorthcott/chrome-default-encoding",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}
