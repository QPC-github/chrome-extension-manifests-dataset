{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Web time tracking",
  "description": "This extension tracks the website time usage.",
  "version": "1.0",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "http://timer-tr.herokuapp.com/*",
    "webNavigation",
    "activeTab",
    "tabs",
    "idle"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html"
  }
}
