{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "101 Live Class Desktop Sharing",
  "description": "Extension to allow you to stream your desktop during live classes with the 101 Live Class application.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://liveclass.101visionsacademy.com/*"
    ]
  }
}
