{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "The Missing Link",
  "description": "Makes web-links more accessible for monochrome and other visually impared users",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icons/inactive.png"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
