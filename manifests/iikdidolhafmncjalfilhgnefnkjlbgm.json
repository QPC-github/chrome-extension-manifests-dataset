{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nighty",
  "description": "Switch certain apps into a finely tuned night mode.",
  "author": "Tim Watkins",
  "homepage_url": "https://github.com/jankcat/nighty",
  "short_name": "Nighty",
  "version": "1.3",
  "browser_action": {
    "default_icon": "icon2.png"
  },
  "background": {
    "scripts": [
      "nighty.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
