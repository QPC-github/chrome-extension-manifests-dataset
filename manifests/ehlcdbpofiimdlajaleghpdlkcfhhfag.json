{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BreakTimer",
  "description": "Reminds you to take breaks from your computer.",
  "version": "1.0",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon19.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ]
}
