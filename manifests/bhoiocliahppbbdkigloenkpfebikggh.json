{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mobigame Tools",
  "version": "3.2.2",
  "manifest_version": 2,
  "description": "QuickLinks on card games of Mobigame",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": "icon/default.png",
    "default_title": "Mobigame Tools Extension",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ]
}
