{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Varify Website loading helper",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Helps you to load website with the varify Editor when having trouble to load",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Varify Website loading helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "on.png",
    "off.png"
  ]
}
