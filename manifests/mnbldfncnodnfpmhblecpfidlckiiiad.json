{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ScratchMoji",
  "short_name": "SM",
  "description": "Brings Emojis to Scratch!",
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://scratch.mit.edu/*"
      ],
      "css": [
        "inject-styles.css"
      ],
      "js": [
        "code.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "version": "1.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "https://scratch.mit.edu/*",
    "storage"
  ],
  "optional_permissions": [
    "notifications"
  ]
}
