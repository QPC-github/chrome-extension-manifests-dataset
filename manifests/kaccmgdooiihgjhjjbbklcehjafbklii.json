{
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "jquery.js",
        "run.js"
      ],
      "matches": [
        "http://book.douban.com/subject/*",
        "http://www.amazon.cn/*",
        "http://*.dangdang.com/*",
        "http://*.jd.com/*",
        "http://202.118.250.131/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "哈工大图书馆助手，目前可以解决哈工大图书馆网站只能在IE下查询的问题。消灭bug，人人有责。",
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "name": "哈工大图书馆助手",
  "update_url": "http://clients2.google.com/service/update2/crx",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.1"
}
