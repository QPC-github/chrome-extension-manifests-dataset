{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DeltaX - Measurement Plugin",
  "description": "The DeltaX Measurement Plugin can be used to generate tracking URLs for your campaigns",
  "version": "1.5",
  "browser_action": {
    "default_icon": "icons/dx-measurement-48.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icons/dx-measurement-16.png",
    "32": "icons/dx-measurement-32.png",
    "48": "icons/dx-measurement-48.png",
    "64": "icons/dx-measurement-64.png",
    "128": "icons/dx-measurement-128.png",
    "256": "icons/dx-measurement-256.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "login.html",
    "channels.html",
    "errorscreen.html"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
