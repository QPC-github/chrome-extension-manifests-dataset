{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Vister Screen Sharing",
  "version": "1.0",
  "description": "Vister extension to share content from your screen in Chrome",
  "manifest_version": 2,
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.vister.co/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ]
}
