{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Сокращатель vk.cc",
  "short_name": "vk.cc",
  "description": "Сделает всё длинное коротким",
  "version": "0.3.2",
  "author": "Vasily Stadnik",
  "minimum_chrome_version": "46",
  "offline_enabled": false,
  "browser_action": {
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Нажмите здесь для сокращения URL текущей страницы"
  },
  "content_security_policy": "script-src 'self' https://vk.com https://*.vk.com; object-src 'self'",
  "permissions": [
    "activeTab"
  ]
}
