{
  "author": "",
  "background": {
    "persistent": false,
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://deskmate.loc/*",
        "*://*.deskmate.loc/*",
        "*://deskmate.com/*",
        "*://*.deskmate.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "This WebRTC screen capturing extension can be used within any WebRTC library/application!",
  "externally_connectable": {
    "matches": [
      "*://deskmate.loc/*",
      "*://*.deskmate.loc/*",
      "*://deskmate.com/*",
      "*://*.deskmate.com/*"
    ]
  },
  "homepage_url": "https://deskmate.com",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "512": "icon512.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Deskmate Screen Capturing",
  "permissions": [
    "desktopCapture",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.4",
  "web_accessible_resources": [
    "icon48.png",
    "icon128.png",
    "icon512.png"
  ]
}
