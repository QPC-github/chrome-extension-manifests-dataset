{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mamba love tools",
  "short_name": "Mamba tools",
  "version": "1.2",
  "description": "Расширенные функции для Mamba.ru и Знакомства@Mail.Ru (love.mail.ru): быстрый просмотр фото, новый мессенджер...",
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "96": "icons/logo96.png",
    "128": "icons/logo128.png"
  },
  "permissions": [
    "*://www.b-n-b.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://love.mail.ru/*",
        "*://*.mamba.ru/*"
      ],
      "js": [
        "message.js",
        "photo.js",
        "settings.js",
        "advert.js"
      ],
      "css": [
        "photo.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "icons/close.png",
    "icons/hold.png",
    "icons/holdn.png",
    "icons/mulist.png",
    "icons/settings.png",
    "icons/ignor.jpg",
    "icons/progressbar.gif",
    "icons/close30.png",
    "icons/sllar.png",
    "icons/slrar.png",
    "help.html"
  ]
}
