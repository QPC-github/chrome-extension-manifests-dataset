{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "potato Potato",
  "description": "Lets you record news articles on the internet and send them to potatopotato.me for reading news to those visually impaired.",
  "version": "0.3",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "icons": {
    "16": "mic-16.png",
    "128": "mic-128.png"
  },
  "permissions": [
    "https://ajax.googleapis.com/",
    "audioCapture",
    "webview",
    "<all_urls>"
  ]
}
