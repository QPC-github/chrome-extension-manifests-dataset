{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Visor",
  "short_name": "Visor",
  "description": "Screen dimmer and reading aid, may help with fluency, eye-strain, concentration and comprehension whilst reading.",
  "version": "2.0.6",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Visor",
    "default_popup": "popup.html"
  },
  "icons": {
    "19": "icons/19.png",
    "38": "icons/38.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
