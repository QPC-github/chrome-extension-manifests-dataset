{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Oxygen Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Oxygen Calls",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "lotus_flower_16x16.png",
    "48": "lotus_flower_48x48.png",
    "128": "lotus_flower_128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.laxroute53.com/*"
    ]
  }
}
