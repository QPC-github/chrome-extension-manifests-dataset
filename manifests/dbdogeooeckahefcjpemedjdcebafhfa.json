{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Group A: Q1",
  "description": "Adds the functionality to provide recommendations on nStudy's annotation tools on Chrome.",
  "version": "1.0.0.4",
  "icons": {
    "16": "nstudy.png",
    "128": "nstudy_large.png"
  },
  "permissions": [
    "alarms",
    "cookies",
    "https://eccc-nll.bigdata.sfu.ca/*",
    "https://localhost/*",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "nstudy_disabled.png"
  },
  "background": {
    "scripts": [
      "utils.js",
      "login.js",
      "host.js",
      "eventbus.js",
      "mediator.js",
      "main.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "awesomplete.css",
        "addin.css"
      ],
      "js": [
        "editutil.js",
        "awesomplete.min.js",
        "textoffset.js",
        "utils.js",
        "eventbus.js",
        "mainscript.js",
        "host.js",
        "mediator.js",
        "edit_parsers.js",
        "sha256.js",
        "lib-typedarrays-min.js",
        "page_addin.js",
        "add_web_font.js"
      ]
    },
    {
      "matches": [
        "https://eccc-nll.bigdata.sfu.ca/ns4/user/login",
        "https://eccc-nll.bigdata.sfu.ca/ns4/user/signup"
      ],
      "css": [
        "awesomplete.css",
        "addin.css"
      ],
      "js": [
        "login.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "cursor_move.png",
    "close.png",
    "nstudy.png",
    "trash.png",
    "menu.png",
    "awesomplete.css",
    "addin.css",
    "internalpages/*"
  ]
}
