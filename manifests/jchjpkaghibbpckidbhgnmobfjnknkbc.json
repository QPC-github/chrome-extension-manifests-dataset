{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MondragonLingua Screenshare Chrome Extension",
  "author": "MondragonLingua",
  "version": "0.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to MondragonLingua meetings.",
  "homepage_url": "https://www.mondragonlingua.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.mondragonlingua.com/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
