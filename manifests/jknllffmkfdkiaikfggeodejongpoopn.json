{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Nashr.at Articles",
  "description": "This extension allows you to add articles to your Nashr.at report with a single click of a button.",
  "version": "0.1",
  "icons": {
    "16": "images/nashrat-icon-16.png",
    "48": "images/nashrat-icon-48.png",
    "128": "images/nashrat-icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/nashrat-icon-19.png",
      "38": "images/nashrat-icon-38.png"
    },
    "default_popup": "form.html",
    "default_title": "يمكنك إضافة هذا المقال للتقرير عن طريق الضغط هنا."
  },
  "permissions": [
    "activeTab",
    "https://app.nashr.at/api/1.1/*/",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "page": "background.html"
  },
  "homepage_url": "http://www.nashr.at/"
}
