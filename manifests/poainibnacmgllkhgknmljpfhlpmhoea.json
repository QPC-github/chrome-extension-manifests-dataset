{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Balancer",
  "version": "1.1",
  "description": "Make your tabs perfectly balanced",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "gauntlet_128.png"
    }
  },
  "permissions": [
    "declarativeContent"
  ],
  "web_accessible_resources": [
    "snap.png"
  ],
  "manifest_version": 2
}
