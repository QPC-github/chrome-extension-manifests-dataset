{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "short_name": "__MSG_short_name__",
  "description": "__MSG_appDesc__",
  "author": "__MSG_author__",
  "version": "3.6.3",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "jquery.qtip.custom/jquery.qtip.min.css",
        "jquery.qtip.custom/jquery.qtip.styles.css"
      ],
      "js": [
        "BSJSLib/jquery.min.js",
        "BSJSLib/jquery-ui.min.js",
        "jquery.qtip.custom/jquery.qtip.min.js",
        "constants.js",
        "BSJSLib/BSChromeConsole.js",
        "BSJSLib/BSObjectHelper.js",
        "BSJSLib/BSStringHelper.js",
        "BSJSLib/BSEventHelper.js",
        "BSJSLib/BSAudio.js",
        "content.js"
      ],
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "BSJSLib/jquery.min.js",
      "BSJSLib/BSjQueryExtends.js",
      "constants.js",
      "BSJSLib/BSChromeConsole.js",
      "BSJSLib/BSChromeHelper.js",
      "BSJSLib/BSObjectHelper.js",
      "BSJSLib/BSStringHelper.js",
      "BSJSLib/BSStorageDefaults.js",
      "BSJSLib/BSStorage.js",
      "MTStorageDefaults.js",
      "MTStorage.js",
      "BSTranslateHelper.js",
      "BSMicrosoftTranslate.js",
      "BSYandexTranslate.js",
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage",
    "contextMenus",
    "clipboardWrite",
    "fontSettings"
  ],
  "web_accessible_resources": [
    "jquery.qtip.custom/jquery.qtip.min.css",
    "jquery.qtip.custom/jquery.qtip.styles.css"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "browser_action": {},
  "commands": {
    "translate_selection": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Translate selected text"
    }
  }
}
