{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sneekr",
  "short_name": "Sneekr",
  "description": "Save your entire browser history behind a password-protected dashboard. Works with incognito mode too.",
  "homepage_url": "http://sneekr.net",
  "version": "1.0.3",
  "background": {
    "scripts": [
      "build/background-bundle.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "web_accessible_resources": [
    "build/*"
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "activeTab",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
