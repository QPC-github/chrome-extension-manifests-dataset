{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide The Scores! (in NBA League Pass)",
  "description": "Hide all scores in the NBA League Pass game page.",
  "manifest_version": 2,
  "version": "0.0.1",
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.nba.com/*"
      ],
      "css": [
        "main.css"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "http://www.nba.com/*"
  ]
}
