{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*",
        "file:///*"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "Công cụ ký điện tử công ty in tài chính",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "40.0",
  "name": "tokenSigner.intaichinh.vn",
  "permissions": [
    "contextMenus",
    "tabs",
    "nativeMessaging",
    "<all_urls>",
    "webNavigation"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.4",
  "web_accessible_resources": [
    "page.js",
    "checkPlugin.js"
  ]
}
