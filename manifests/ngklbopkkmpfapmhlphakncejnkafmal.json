{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LyncMe",
  "version": "1.1",
  "manifest_version": 2,
  "devtools_page": "option.html",
  "description": "LyncMe is the best and quickest way to create your branded  and shorten links to share your social networks and websites",
  "icons": {
    "128": "images/icon_128.png",
    "24": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage",
    "webNavigation",
    "contextMenus"
  ],
  "options_ui": {
    "page": "html/option.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "LyncMe",
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
