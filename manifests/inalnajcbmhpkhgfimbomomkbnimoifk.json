{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Stepping scroll",
  "author": "Jeff Guo",
  "version": "0.1",
  "description": "Auto scrolling like motors. Scroll with direction, speed and intervals. ",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab"
  ],
  "page_action": {
    "default_popup": "src/layouts/speed-control.html"
  },
  "web_accessible_resources": [
    "src/js/*",
    "src/css/*"
  ]
}
