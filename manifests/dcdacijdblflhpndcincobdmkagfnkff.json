{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VSESSION Screen Sharing Extension",
  "short_name": "VS_Ext",
  "version": "2.0.3",
  "manifest_version": 2,
  "description": "Web会議・テレビ会議システム「VSESSION」のスクリーン共有拡張機能です。",
  "icons": {
    "16": "vsession_icon_16.png",
    "48": "vsession_icon_48.png",
    "128": "vsession_icon_128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "https://*.vsession.jp/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.vsession.jp/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
