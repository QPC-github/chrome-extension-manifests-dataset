{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tablify",
  "description": "Productivity tool",
  "author": "Samir Alajmovic",
  "homepage_url": "https://github.com/samiralajmovic/tablify",
  "version": "0.3.0",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "web_accessible_resources": [
    "suspended.html"
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "Tablify",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "activeTab",
    "alarms",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "commands",
    "management",
    "downloads",
    "tabs",
    "background"
  ],
  "offline_enabled": true
}
