{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Force Google API to use HTTPS",
  "version": "0.1",
  "author": "小影",
  "description": "Force `ajax.googleapis.com` & `fonts.googleapis.com` to use SSL(https) connection.",
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://ajax.googleapis.com/",
    "http://fonts.googleapis.com/"
  ]
}
