{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Slither.io Gamepad",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Created so you can slither in bed ;)",
  "homepage_url": "http://slither.io/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "http://slither.io/",
    "tabs",
    "activeTab",
    "storage"
  ]
}
