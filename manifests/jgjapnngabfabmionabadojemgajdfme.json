{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Statcounter blocking",
  "version": "2.0",
  "description": "Stops your visits from showing up in your statcounter stats",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "Statcounter blocking"
  },
  "background": {
    "scripts": [
      "background.js",
      "block2.js",
      "block3.js"
    ]
  }
}
