{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Link Forwarder",
  "description": "Automaticaly redirects when a url matches a pattern, and avoid boring ads blocking sites",
  "version": "0.2",
  "icons": {
    "48": "app-icon-48.png"
  },
  "permissions": [
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "app-icon-48.png"
  }
}
