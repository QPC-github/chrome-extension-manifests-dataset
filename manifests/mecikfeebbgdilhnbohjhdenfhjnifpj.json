{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Indian Rail App",
  "description": "This app provides enhanced user experience for indianrailapp.com",
  "version": "1.147",
  "offline_enabled": true,
  "omnibox": {
    "keyword": "indianrailapp"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "mbackground.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.indianrailapp.com/*"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "contextMenus",
    "notifications",
    "unlimitedStorage",
    "storage",
    "http://*.indianrailapp.com/*",
    "https://*.indianrailapp.com/*",
    "http://*.irctc.co.in/*",
    "https://*.irctc.co.in/*",
    "http://*.indianrail.gov.in/*",
    "https://*.indianrail.gov.in/*",
    "http://*.trainenquiry.com/*"
  ]
}
