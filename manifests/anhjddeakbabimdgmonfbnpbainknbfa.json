{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "short_name": "__MSG_short_name__",
  "version": "1.1.6",
  "default_locale": "en",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "options_page": "options.html",
