{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tagboard for Google Chrome",
  "description": "Manage your tagboards and feature public posts directly from Facebook, Twitter, and Instagram.",
  "version": "2.0.44",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icong.png",
      "38": "icon76g.png"
    },
    "default_popup": "popup.html",
    "default_title": "Change destination tagboard"
  },
  "background": {
    "scripts": [
      "jquery-2.1.4.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "jquery-2.1.4.min.js",
        "bootstrap.min.js",
        "contentscript.js"
      ],
      "css": [
        "injected.css"
      ],
      "matches": [
        "https://*.twitter.com/*",
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.youtube.com/*",
        "https://*.crowdtangle.com/*",
        "https://*.snapchat.com/*",
        "https://*.zipwhip.com/*",
        "https://*.sproutsocial.com/*",
        "https://*.reddit.com/*",
        "https://*.tiktok.com/*"
      ],
      "match_about_blank": true
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "https://tagboard.com/u/send_to_tagboard"
  ],
  "web_accessible_resources": [
    "frame.html"
  ]
}
