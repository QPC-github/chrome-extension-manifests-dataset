{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "NewsHub",
  "description": "__MSG_appDesc__",
  "version": "3.3",
  "default_locale": "en",
  "icons": {
    "47": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "scripts": [
      "nwsh-background.js",
      "nwsh-back.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.newshub.org/*"
      ],
      "js": [
        "nwsh-ext.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "*://*.newshub.org/*",
    "*://newshub.org/"
  ],
  "browser_action": {
    "default_title": "NewsHub",
    "default_icon": {
      "19": "images/19.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
