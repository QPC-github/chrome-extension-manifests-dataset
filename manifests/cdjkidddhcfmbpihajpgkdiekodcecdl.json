{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "InvestorDeck Plugin",
  "description": "Convenient way to find Investor Presentations.",
  "version": "1.0.1",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "activeTab",
    "https://*.investordeck.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'",
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "main.html"
  }
}
