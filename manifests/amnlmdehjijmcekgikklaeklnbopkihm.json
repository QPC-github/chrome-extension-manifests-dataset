{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reactionary",
  "description": "Save image urls for later use and manage them in a library. Please don't hotlink images!",
  "version": "0.1.3",
  "browser_action": {
    "default_icon": "ReactionaryIcon19.png",
    "default_popup": "popup.html",
    "default_title": "Reactionary"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "16": "ReactionaryIcon16.png",
    "19": "ReactionaryIcon19.png",
    "38": "ReactionaryIcon38.png",
    "48": "ReactionaryIcon48.png",
    "128": "ReactionaryIcon128.png"
  }
}
