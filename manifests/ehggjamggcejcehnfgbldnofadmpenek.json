{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "xkcd Substitutions",
  "description": "Substitutions that make reading the news more fun",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "substitute.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "xkcd substitutions",
    "default_icon": {
      "19": "sub_icon_19.png",
      "38": "sub_icon_38.png"
    }
  }
}
