{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pevio | URL Shortener with advanced analytics",
  "description": "URL shortener and link management platform with advanced analytics.",
  "version": "1.0.0",
  "background": {
    "persistent": true,
    "scripts": [
      "event.js",
      "jquery-1.7.1.min.js"
    ]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "favicon_pevio.png",
    "default_popup": "popup.html",
    "default_title": "Shorten current URL with Pevio"
  },
  "offline_enabled": false,
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://*.pevio.co/*",
    "http://*/*",
    "https://*/*"
  ]
}
