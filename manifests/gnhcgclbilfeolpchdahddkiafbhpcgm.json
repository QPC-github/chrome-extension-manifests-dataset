{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ОД и ВК - без рекламы!",
  "version": "0.4",
  "manifest_version": 2,
  "description": "Социальные сети без рекламы!",
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/main.js"
      ],
      "matches": [
        "*://ok.ru/*",
        "*://www.ok.ru/*",
        "*://vk.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*/*"
  ]
}
