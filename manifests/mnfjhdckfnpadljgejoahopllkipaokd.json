{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "WaniKani Notifier",
  "version": "0.2.3",
  "manifest_version": 2,
  "description": "An extension that notifies you when there are new reviews available at WaniKani.",
  "browser_action": {
    "default_icon": "images/icon-48.png"
  },
  "icons": {
    "12": "images/icon-12.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "javascripts/background.js"
    ]
  },
  "permissions": [
    "http://www.wanikani.com/",
    "alarms",
    "tabs",
    "notifications",
    "storage",
    "idle",
    "webNavigation"
  ],
  "web_accessible_resources": [
    "images/icon-48.png"
  ],
  "options_page": "pages/options.html"
}
