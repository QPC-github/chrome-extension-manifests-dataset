{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Travelux - save links for travel",
  "short_name": "Travelux",
  "manifest_version": 2,
  "version": "1.0.1",
  "description": "Save travel information for planning.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Travelux - Simple",
    "default_icon": "icon.png",
    "default_popup": "travelux.html"
  },
  "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'"
}
