{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Colourful Planner",
  "version": "0.1",
  "description": "Makes Microsoft Planner cards more colourful, based on the selected labels",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://tasks.office.com/*"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "PlannerCardColouring.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "ColourfulPlanner128.png"
  }
}
