{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QComment - биржа комментариев",
  "description": "Инструмент по крауд-маркетингу",
  "version": "2.0.10",
  "background": {
    "persistent": true,
    "scripts": [
      "jquery-3.1.1.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/16x16.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "permissions": [
    "background",
    "notifications",
    "https://qcomment.ru/site/userplugin"
  ],
  "optional_permissions": [
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
    "*.ttf",
    "*.wofl"
  ]
}
