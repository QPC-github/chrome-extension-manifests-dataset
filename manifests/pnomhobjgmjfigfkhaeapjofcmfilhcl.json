{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Guiato - Dinheiro de Volta",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "Bot√£o economizador da Guiato",
  "icons": {
    "16": "assets/icon/icon16.png",
    "48": "assets/icon/icon48.png",
    "128": "assets/icon/icon128.png"
  },
  "background": {
    "scripts": [
      "assets/js/underscore.js",
      "plugin.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "cookies",
    "notifications",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "unlimitedStorage",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "assets/js/moobaLib.js",
        "assets/js/moobaNavegacao.js",
        "assets/js/jquery.min.js",
        "assets/js/mustache.js",
        "assets/js/client.min.js",
        "paginas.js"
      ],
      "css": [
        "assets/css/style.css",
        "assets/css/notification.css"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "assets/icon/icon19off.png",
    "default_title": "Guiato - Dinheiro de volta"
  },
  "web_accessible_resources": [
    "assets/*"
  ]
}
