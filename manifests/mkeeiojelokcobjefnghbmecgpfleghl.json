{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Distant Planets",
  "version": "0.6",
  "description": "Mario bross like game",
  "manifest_version": 2,
  "minimum_chrome_version": "6",
  "browser_action": {
    "default_icon": "img/nuke_128.png",
    "default_title": "Distant Planets"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "persistent": true,
    "scripts": [
      "bg.js"
    ]
  },
  "icons": {
    "128": "img/nuke_128.png",
    "16": "img/nuke_16.png",
    "32": "img/nuke_32.png",
    "48": "img/nuke_48.png"
  },
  "web_accessible_resources": [
    "img/nuke_48.png"
  ],
  "permissions": [
    "http://*/*",
    "contextMenus",
    "tabs",
    "notifications"
  ]
}
