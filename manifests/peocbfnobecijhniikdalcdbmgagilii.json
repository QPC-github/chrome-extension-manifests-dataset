{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fix VK Redesign",
  "description": "Субъективные улучшения нового дизайна vk.com",
  "version": "0.5",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "*://new.vk.com/*",
    "*://vk.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://new.vk.com/*",
        "*://vk.com/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "jquery-3.1.0.min.js",
        "script.js"
      ]
    }
  ],
  "background": {
    "scripts": []
  },
  "browser_action": {
    "default_title": "Fix VK redesign",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "css/round_avatar.css",
    "css/bg_header.css",
    "css/white_bg.css"
  ]
}
