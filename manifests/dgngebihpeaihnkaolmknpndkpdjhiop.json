{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "wavey.tips",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Open wavey.tips in a new tab to add links faster!",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "cookies",
    "https://wavey.tips/",
    "https://*.wavey.tips/",
    "background"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "page_action": {
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  },
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
