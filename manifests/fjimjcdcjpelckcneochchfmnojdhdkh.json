{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pluto TV: TV for the Internet",
  "short_name": "Pluto TV",
  "author": "Pluto TV",
  "description": "Entertaining the planet with 100+ TV channels handmade for the Internet, FREE!",
  "version": "1.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "37.0.0.0",
  "permissions": [
    "identity",
    "webview",
    "fullscreen",
    "http://pluto.tv/",
    "https://pluto.tv/",
    "http://*.pluto.tv/",
    "https://*.pluto.tv/"
  ],
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png",
    "256": "images/256.png",
    "512": "images/512.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
