{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "One Click QR",
  "description": "One Click QR lets you view your current url in your mobile. It's useful to check responsive designs in many devices.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "https://chart.googleapis.com/",
    "http://www.malagaonrails.com/",
    "https://ssl.google-analytics.com/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "128": "ocqr_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
