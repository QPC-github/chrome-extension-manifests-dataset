{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Letras.mus.br",
  "version": "1.1.3",
  "manifest_version": 2,
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "app/eventos.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icon_128.png",
    "default_title": "Letras.mus.br",
    "default_popup": "app/home.html"
  },
  "web_accessible_resources": [
    "winamp_home.php",
    "winamp.php"
  ]
}
