{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DAX Ticker",
  "description": "Zeigt die aktuelle DAX-Entwicklung.",
  "version": "0.4",
  "icons": {
    "16": "data/img/icon16.png",
    "32": "data/img/icon32.png",
    "48": "data/img/icon48.png",
    "64": "data/img/icon64.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "data/jquery-3.1.1.min.js",
      "core.js",
      "background.js"
    ]
  },
  "options_page": "data/popup/options.html",
  "browser_action": {
    "default_title": "DAX Ticker",
    "default_icon": {
      "16": "data/img/icon16.png",
      "32": "data/img/icon32.png",
      "48": "data/img/icon48.png",
      "64": "data/img/icon64.png"
    },
    "default_popup": "data/popup/popup.html"
  },
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "*://*/*"
  ]
}
