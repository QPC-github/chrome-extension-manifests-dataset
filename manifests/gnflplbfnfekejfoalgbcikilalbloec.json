{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Responsive Window",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Making responsive design a little bit easier.",
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "background": {
    "scripts": [
      "responsive_window.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ]
}
