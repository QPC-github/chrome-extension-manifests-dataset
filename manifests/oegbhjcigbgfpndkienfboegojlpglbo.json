{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "酱爆视频",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "酱爆视频谷歌插件 – 将网站视频快速保存到手机",
  "background": {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "icons": {
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
