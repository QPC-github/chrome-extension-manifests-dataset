{
  "content_scripts": [
    {
      "js": [
        "index.js"
      ],
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*",
        "http://twitter.com/*",
        "https://twitter.com/*"
      ]
    }
  ],
  "description": "Quer bloquear textos relacionados ao fim do mundo? O AddOn NoFimdoMundo bloqueia esses posts da sua timeline!",
  "icons": {
    "128": "logo128.png",
    "16": "logo19.png",
    "48": "logo48.png"
  },
  "manifest_version": 2,
  "name": "No Fim Do Mundo",
  "permissions": [
    "https://facebook.com/*",
    "http://facebook.com/*",
    "http://twitter.com/*",
    "https://twitter.com/*",
    "tabs"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0.1"
}
