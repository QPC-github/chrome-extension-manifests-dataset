{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BeeCost Trợ lý Mua Sắm",
  "short_name": "beecost",
  "description": "Tiện ích Bảo vệ bạn khi Mua đồ Online. Phát hiện Sale Ảo, Hàng kém chất lượng và Tìm Giá Rẻ Nhất trên Tiki, Shopee, Sendo, Lazada...",
  "author": "BeeCost Team <beecost.com@gmail.com>",
  "version": "1.9.8",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "permissions": [
    "*://*.lazada.vn/*",
    "*://*.shopee.vn/*",
    "*://*.tiki.vn/*",
    "*://*.sendo.vn/*",
    "*://*.beecost.com/*",
    "storage",
    "cookies",
    "webRequest"
  ],
  "browser_action": {
    "default_title": "BeeCost Trợ lý Mua Sắm",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end",
      "matches": [
        "*://*.lazada.vn/*",
        "*://*.shopee.vn/*",
        "*://*.tiki.vn/*",
        "*://*.sendo.vn/*",
        "*://*.beecost.com/*"
      ],
      "all_frames": false
    }
  ],
  "options_page": "options/options.html",
  "content_security_policy": "script-src 'self' https://*.beecost.com https://*.googleapis.com https://www.google-analytics.com; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "https://*.beecost.com/*"
    ]
  },
  "web_accessible_resources": [
    "content/content.css",
    "lib/css/antd.css"
  ]
}
