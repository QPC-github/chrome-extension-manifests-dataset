{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Otogami PowerUp",
  "short_name": "PowerUp",
  "version": "0.0.16",
  "description": "Compra tus videojuegos siempre al mejor precio.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "*://*/*",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js",
        "iframeResizer.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "manifest_version": 2
}
