{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EOT",
  "description": "Visualize the length of the article you're reading on the vertical scrollbar, so you know how long is it relative to comments",
  "version": "1.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Display article's length",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
