{
  "author": "Policloak",
  "content_scripts": [
    {
      "css": [
        "style.css",
        "inline-images.css"
      ],
      "exclude_globs": [
        "http://*.channel.facebook.com/*",
        "http://static.*.facebook.com/*",
        "http://*.facebook.com/ai.php*",
        "http://*.facebook.com/connect/*",
        "https://*.channel.facebook.com/*",
        "https://static.*.facebook.com/*",
        "https://*.facebook.com/ai.php*",
        "https://*.facebook.com/connect/*",
        "https://*.facebook.com/saved*"
      ],
      "include_globs": [
        "http://*.facebook.com/*",
        "http://facebook.com/*",
        "https://*.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": [
        "x.js",
        "fx.js",
        "post_processor.js",
        "apps/apps.js",
        "control_panel/control_panel.js",
        "display_tweaks/display_tweaks.js",
        "external_css/external_css.js",
        "font_family/font_family.js",
        "hide/hide.js",
        "menu/menu.js",
        "most_recent/most_recent.js",
        "notification_popup/notification_popup.js",
        "notify/notify.js",
        "options/options.js",
        "sticky_note/sticky_note.js",
        "stretch_wide/stretch_wide.js",
        "post_filters/post_filters.js",
        "vue.min.js",
        "vue_sfx.js",
        "purify.min.js",
        "index.js"
      ],
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Policloak allows you to hide all political posts on Facebook.",
  "homepage_url": "https://www.facebook.com/",
  "icons": {
    "128": "see_no_evil.png",
    "16": "see_no_evil.png",
    "32": "see_no_evil.png",
    "48": "see_no_evil.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "41.0",
  "name": "Policloak",
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "page_action": {
    "default_icon": {
      "19": "see_no_evil.png",
      "38": "see_no_evil.png"
    },
    "default_popup": "options.html",
    "default_title": "Policloak"
  },
  "permissions": [
    "http://*.facebook.com/*",
    "https://*.facebook.com/*",
    "storage",
    "unlimitedStorage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.3"
}
