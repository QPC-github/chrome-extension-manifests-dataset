{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hover Read Facebook Messages",
  "version": "0.1",
  "description": "Allows you to read Facebook messages without opening them.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "js": [
        "fbNotificationUnread.js"
      ]
    }
  ]
}
