{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "mBuddy",
  "description": "Your mobile site preview assistant",
  "version": "1.3",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "mobile.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking",
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
