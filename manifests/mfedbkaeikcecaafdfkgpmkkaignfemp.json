{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AHS Bell Time",
  "version": "0.1.5",
  "description": "An extension that shows the minutes left in an Agoura High School class period.",
  "permissions": [
    "alarms"
  ],
  "browser_action": {
    "default_title": "AHS Bell Schedule",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
