{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Сделать Knopka.ca домашней страницей",
  "description": "Новости, афиша, доска объявлений Knopka.ca - все под рукой в любой момент.",
  "version": "1.5",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "knopka.html",
    "default_icon": "knopkalogo.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens knopka.html"
    }
  },
  "chrome_settings_overrides": {
    "homepage": "https://www.knopka.ca",
    "startup_pages": [
      "https://www.knopka.ca"
    ]
  }
}
