{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Snapple Screenshots",
  "short_name": "Snapple",
  "description": "Snaps screenshots with ease!",
  "version": "1.0.9",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "browser_action": {
    "default_title": "Take a screenshot"
  },
  "manifest_version": 2
}
