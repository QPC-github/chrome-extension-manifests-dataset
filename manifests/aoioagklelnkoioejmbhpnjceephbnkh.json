{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Acconline.Vn Token Signing",
  "short_name": "Acconline.Vn",
  "version": "1.0.2",
  "minimum_chrome_version": "40.0",
  "manifest_version": 2,
  "description": "AccOnline.vn - Cung cấp các giải pháp về hóa đơn điện tử",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.acconline.vn/*",
        "https://*.amwayvietnam-einvoice.com/*",
        "https://*.smart-einvoice.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "nativeMessaging"
  ]
}
