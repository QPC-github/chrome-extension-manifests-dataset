{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Dealhack",
  "version": "1.2.24.0",
  "manifest_version": 2,
  "description": "Automatically uncovers promo codes and sales as you shop online.",
  "homepage_url": "https://dealhack.com/",
  "author": "dealhack.com",
  "icons": {
    "128": "images/favicon-black.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "20": "images/favicon-grey.png",
      "48": "images/favicon-grey.png"
    },
    "default_title": "Dealhack"
  },
  "background": {
    "scripts": [
      "scripts/background_bundle.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles/main.css"
      ],
      "js": [
        "scripts/content_bundle.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.svg",
    "images/*.jpg",
    "images/fonts/*.ttf",
    "styles/*.css"
  ]
}
