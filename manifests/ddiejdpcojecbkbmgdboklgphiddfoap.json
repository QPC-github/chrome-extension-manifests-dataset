{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CoinBase Extension",
  "description": "This extension shows CoinBase USD BTC price, give BUY/SELL Shortcuts",
  "version": "1.5",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "priceCheck.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "background",
    "storage",
    "notifications",
    "alarms",
    "https://api.coinbase.com/v2/"
  ]
}
