{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WebNotes",
  "description": "Make a note of important points in any article on a web page",
  "version": "1.4.3",
  "icons": {
    "16": "icons/note_16.png",
    "128": "icons/note_128.png"
  },
  "browser_action": {
    "default_icon": "icons/note_19.png",
    "default_title": "Web Note"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "alarms"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self' https://maxcdn.bootstrapcdn.com"
}
