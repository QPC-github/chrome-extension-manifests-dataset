{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "cool scroll bar",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Cool Google Plus scroll bar everywhere!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://plus.google.com/*",
        "https://docs.google.com/*"
      ],
      "css": [
        "scroll_bar.css"
      ]
    }
  ]
}
