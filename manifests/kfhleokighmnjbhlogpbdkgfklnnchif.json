{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Flash Enabler",
  "version": "1.5",
  "description": "This extension will enable Flash for K12, FuelEducation, Keystone, and A+nywhere hosted content.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "chrome_icon_blue_white.png"
  },
  "permissions": [
    "contentSettings",
    "activeTab"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.k12.com/*",
      "*://*.brightspace.com/*",
      "*://*.fueleducation.com/*",
      "*://*.blackboard.com/*",
      "*://*.aplusanywhere.com/*"
    ]
  }
}
