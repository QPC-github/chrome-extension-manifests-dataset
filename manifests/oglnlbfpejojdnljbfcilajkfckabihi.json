{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Handsfree",
  "version": "0.1.2",
  "description": "Use voice commands to browse the web",
  "browser_action": {
    "default_title": "Handsfree",
    "default_icon": "start.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/jquery.js",
        "vendor/underscore.js",
        "content.js"
      ],
      "css": [
        "handsfree.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  }
}
