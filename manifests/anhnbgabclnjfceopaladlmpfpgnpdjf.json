{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "js/jquery.js",
      "js/application.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "/images/19x19.png",
      "38": "/images/38x38.png"
    },
    "default_popup": "index.html",
    "default_title": "Make a GIF"
  },
  "description": "Find and create GIFs - Makeagif",
  "icons": {
    "128": "/images/128x128.png",
    "16": "/images/16x16.png",
    "19": "/images/19x19.png",
    "38": "/images/38x38.png",
    "48": "/images/48x48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "css": [
        "css/youtube.css"
      ],
      "js": [
        "js/jquery.js",
        "js/youtube.js"
      ]
    },
    {
      "js": [
        "js/jquery.js",
        "js/tumblr.js"
      ],
      "matches": [
        "http://www.tumblr.com/*"
      ]
    },
    {
      "js": [
        "js/jquery.js",
        "js/facebook.js"
      ],
      "css": [
        "css/facebook.css"
      ],
      "matches": [
        "*://*.facebook.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2,
  "name": "Make a GIF",
  "version": "0.1.4",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "*://makeagif.com/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "images/anim.gif",
    "images/logo-green.png"
  ]
}
