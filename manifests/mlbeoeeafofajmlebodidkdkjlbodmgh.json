{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "clipr: Add page URL to copied text",
  "short_name": "clipr",
  "author": "Thomas Gahr",
  "description": "Puts selected text into clipboard, preceded by the URL of the page you're on.",
  "version": "0.0.2",
  "homepage_url": "https://github.com/0xfd000000/clipr",
  "icons": {
    "128": "icon/icon128.png",
    "64": "icon/icon64.png",
    "48": "icon/icon48.png",
    "32": "icon/icon32.png"
  },
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ]
}
