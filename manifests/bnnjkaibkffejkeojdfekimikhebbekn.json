{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "YouTube Comment Section Remover",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "description": "Remove comments from a YouTube video you are currently watching.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YouTube Comment Section Remover",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}
