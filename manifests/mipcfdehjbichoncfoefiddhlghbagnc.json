{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "fwrd2.me",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "Send links to yourself with just one click!",
  "homepage_url": "http://fwrd2.me",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon256.png",
    "default_title": "Send page to my inbox!"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "notifications",
    "https://*/*",
    "http://*/*"
  ]
}
