{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "101 Great Goals",
  "description": "101 Great Goals: Enjoy access to the latest football (soccer) news, specialising in videos, transfers and social media updates.",
  "version": "1.0.8",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/welcome.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "*://*.101greatgoals.com/",
    "storage",
    "activeTab"
  ]
}
