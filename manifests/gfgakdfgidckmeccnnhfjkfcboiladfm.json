{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "OSU Off Campus Sign-in",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Takes the current URL and runs it through the Ohio State University Libraries proxy for off-campus access.",
  "icons": {
    "16": "block-o-16x16.png",
    "32": "block-o-32x32.png",
    "48": "block-o-48x48.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "proxy.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "block-o-16x16.png"
  }
}
