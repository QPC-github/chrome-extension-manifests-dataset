{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kadu⚡️Beta",
  "short_name": "Kadu⚡️Beta",
  "description": "Saiba quando seu streamer preferido está online!",
  "version": "1.0",
  "author": "Bruno Dombidau",
  "background": {
    "persistent": true,
    "scripts": [
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "src/popup.html",
    "default_title": "Kadu⚡️Beta"
  },
  "homepage_url": "https://www.twitch.tv/kaduraiobeta",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "https://api.twitch.tv/",
    "background"
  ]
}
