{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Weather forecast",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "description": "Weather forecast for current city.",
  "background": {
    "scripts": [
      "src/vremenska_prognoza/vremenska_prognoza.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "img/icon38.png"
