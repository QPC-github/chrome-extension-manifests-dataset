{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "ITAMilesCalculator",
  "description": "Calculates airline miles and cents per mile for ITA's Matrix Airfare Search.",
  "version": "1.0",
  "background": {
    "scripts": [
      "jquery-1.7.2.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "background",
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "ITAMilesCalculator",
    "default_icon": "icon19.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
