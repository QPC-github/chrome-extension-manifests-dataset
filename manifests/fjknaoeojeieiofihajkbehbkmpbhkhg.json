{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cookieswitcher",
  "version": "0.1",
  "description": "switch cookies",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Cookieswitcher",
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
