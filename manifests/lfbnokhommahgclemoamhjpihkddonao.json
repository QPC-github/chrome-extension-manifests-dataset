{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Web0",
  "author": "Anton Kochetkov",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Web0 blockchain authorization solutions",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "128": "assets/icons/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "background/background.js",
      "hotreload/hotreload.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "activeTab",
    "contextMenus",
    "webNavigation"
  ],
  "options_ui": {
    "page": "options/index.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icons/icon-19.png",
      "38": "assets/icons/icon-38.png"
    },
    "default_title": "Web0"
  }
}
