{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TheONE Screen Sharing",
  "author": "WeMindd B.V.",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Extension to share your screen on TheONE - https://www.calltheone.com/. ",
  "homepage_url": "https://www.calltheone.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.calltheone.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
