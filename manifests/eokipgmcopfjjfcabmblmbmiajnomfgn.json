{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BetaList Checker",
  "version": "0.2",
  "description": "Discover tomorrow's startup, today on BetaList.com",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128-no-shadow.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://*/",
    "http://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
