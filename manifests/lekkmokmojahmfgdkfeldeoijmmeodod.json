{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Stop Crypto Coin Mining",
  "description": "This extension stops Coin Hive and JSE miners if detected on the page.",
  "version": "1.2",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "icons": [
      "icon.png"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "stop_miner.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
