{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VT4Browsers",
  "version": "3.0.10",
  "default_locale": "en",
  "description": "VirusTotal Browser Extension.",
  "icons": {
    "16": "icons/vt-16.png",
    "32": "icons/vt-32.png"
  },
  "browser_action": {
    "default_icon": "icons/vt_logo.png",
    "default_popup": "src/options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://*.virustotal.com/*"
      ],
      "css": [
        "src/styles.css"
      ],
      "js": [
        "src/jquery.min.js",
        "src/virustotal.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "src/jquery.min.js",
      "src/background.js"
    ]
  },
  "options_ui": {
    "page": "src/options.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "downloads",
    "storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "icons/vt-32.png"
  ]
}
