{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pappaya Screenshare Extension",
  "author": "Pappaya",
  "version": "0.0.8",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to Pappaya meetings.",
  "homepage_url": "https://pappaya.education/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.pappaya.education/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
