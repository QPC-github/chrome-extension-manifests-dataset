{
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "login.js"
      ],
      "matches": [
        "https://adfs.griftland.nl/adfs/ls*"
      ]
    }
  ],
  "description": "Hiermee kan je automatisch inloggen op de website van Het Griftland College.",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "name": "Het Griftland College Autologin",
  "permissions": [
    "https://adfs.griftland.nl/",
    "storage"
  ],
  "short_name": "HBL Autologin",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0"
}
