{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HTML5 Editor",
  "short_name": "HTML5 Editor Web App",
  "description": "HTML5 Editor with CSS, JS, HTML validator and beautify code",
  "version": "1.5.0",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "assets/ic_launcher-web_16.png",
    "48": "assets/ic_launcher-web_128.png",
    "128": "assets/ic_launcher-web_128.png"
  },
  "permissions": [
    "fileSystem",
    "storage",
    "unlimitedStorage",
    "fullscreen"
  ],
  "author": "UlmDesign - Francesco De Stefano",
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.ulm.html5editorfortablet"
    }
  ],
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    }
  }
}
