{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tidings",
  "short_name": "Tidings",
  "author": "Tidings Company LLC",
  "description": "Save articles from around the web to your Tidings newsletter.",
  "version": "1.0.0.0",
  "homepage_url": "https://tidings.com",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/icon_grey@32.png",
    "default_title": "Save to Tidings"
  },
  "icons": {
    "48": "images/logo@48.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "https://app.tidings.com/*"
  ]
}
