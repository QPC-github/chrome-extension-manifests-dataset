{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cashback Reminder",
  "description": "Never forget about cashback in most popular shops!",
  "version": "2.5.0.1",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "profile.html"
  },
  "background": {
    "css": [
      "css/profile.css"
    ],
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}
