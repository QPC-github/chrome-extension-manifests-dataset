{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hero",
  "short_name": "Hero",
  "description": "Read and write website reviews directly from the website! Get informed about where you visit.",
  "version": "1.1",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "declarativeContent",
    "identity.email",
    "identity"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "starBicon.png",
    "default_title": "hero",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
