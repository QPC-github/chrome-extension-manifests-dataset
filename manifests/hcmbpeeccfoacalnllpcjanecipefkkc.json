{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Viddheo Compartilhamento de Tela",
  "description": "Extens√£o da Viddheo para compartilhamento de tela no Google Chrome.",
  "version": "1.4",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "images/viddheo16.png",
    "22": "images/viddheo22.png",
    "32": "images/viddheo32.png",
    "48": "images/viddheo48.png",
    "128": "images/viddheo128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabCapture"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://viddheo.com/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://viddheo.com/*"
    ]
  }
}
