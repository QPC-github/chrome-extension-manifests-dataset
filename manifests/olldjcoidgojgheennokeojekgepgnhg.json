{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Download Virus Checker",
  "short_name": "idvchecker",
  "description": "Automatically check all the download files against well-known anti-viruses using VirusTotal API",
  "author": "James Fray",
  "version": "0.1.2",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "https://www.virustotal.com/*"
  ],
  "background": {
    "persistant": false,
    "scripts": [
      "common.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "homepage_url": "https://add0n.com/virus-checker.html",
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  }
}
