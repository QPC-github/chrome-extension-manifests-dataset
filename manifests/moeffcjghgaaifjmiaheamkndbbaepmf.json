{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ninja: Hide / Blur Windows & Tabs",
  "short_name": "Ninja",
  "version": "1.1.4",
  "description": "Hides / Blurs inactive windows and tabs to keep your browsing truly private.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "buy.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Ninja",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "assets/logo/logo@19px.png",
      "38": "assets/logo/logo@38px.png"
    }
  },
  "icons": {
    "16": "assets/logo/logo@16px.png",
    "48": "assets/logo/logo@48px.png",
    "128": "assets/logo/logo@128px.png"
  },
  "incognito": "spanning",
  "permissions": [
    "tabs",
    "storage",
    "*://*/*"
  ],
  "oauth2": {
    "client_id": "345309162971-gl6078fcbd3atiqtblsmph172j77orb5.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/chromewebstore.readonly"
    ]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://ajax.googleapis.com; object-src 'self'"
}
