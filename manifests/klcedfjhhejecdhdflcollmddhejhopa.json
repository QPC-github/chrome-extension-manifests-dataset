{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "L'extension At0mium",
  "short_name": "At0mium",
  "description": "Cette extension permet d'être alerté en direct des dernières vidéos et des lives d'At0mium.",
  "version": "0.5.1",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup-page.html",
    "default_title": "At0mium"
  },
  "icons": {
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "eventPage.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://api.twitch.tv/",
    "https://www.googleapis.com/",
    "notifications",
    "alarms",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google.com;object-src 'self'"
}
