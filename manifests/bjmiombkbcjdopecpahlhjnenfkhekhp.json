{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "清爽大师",
  "version": "2.2",
  "description": "用于去除微博V5版首页中不利于阅读的模块，使页面在布局上更易于阅读。",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "brisk_16x16.png",
    "default_title": "清爽大师"
  },
  "permissions": [
    "tabs",
    "http://*/*/"
  ],
  "icons": {
    "48": "brisk_48x48.png",
    "128": "brisk_128x128.png"
  },
  "manifest_version": 2
}
