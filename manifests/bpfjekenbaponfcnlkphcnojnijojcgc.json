{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Subreddit Redirector",
  "version": "1.0",
  "description": "Navigate to any subreddit quickly from the search bar",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "omnibox": {
    "keyword": "r/"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/reddit16.png",
      "32": "images/reddit32.png",
      "48": "images/reddit48.png",
      "128": "images/reddit128.png"
    }
  },
  "icons": {
    "16": "images/reddit16.png",
    "32": "images/reddit32.png",
    "48": "images/reddit48.png",
    "128": "images/reddit128.png"
  },
  "manifest_version": 2
}
