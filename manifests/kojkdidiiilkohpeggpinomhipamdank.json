{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Boostum download manager",
  "short_name": "Boostum",
  "description": "Connect your browser to Boostum desktop download manager.",
  "version": "1.2",
  "manifest_version": 2,
  "author": "Authorship: Thiago Rodrigues Vasconcellos",
  "permissions": [
    "downloads",
    "background",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "reader.js"
    ]
  }
}
