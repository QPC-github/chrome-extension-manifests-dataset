{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bookmarks Simplified",
  "author": "Chetan Dasauni",
  "version": "2.0.0",
  "default_locale": "en",
  "description": "Now you can view and manage all your saved bookmarks just by a button click.",
  "browser_action": {
    "default_title": "Bookmarks Simplified",
    "default_icon": {
      "16": "./static/icon.png",
      "48": "./static/icon.png"
    },
    "page_action": {
      "default_icon": {
        "16": "./static/icon.png",
        "48": "./static/icon.png"
      },
      "default_title": "Bookmarks Simplified"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "bookmarks"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "offline_enabled": true,
  "icons": {
    "16": "./static/icon.png",
    "48": "./static/icon.png"
  }
}
