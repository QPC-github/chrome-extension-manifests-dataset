{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "超惠买",
  "version": "1.0.0.8",
  "description": "超惠买是一款购物辅助工具，在用户网购时提供商品返利及优惠信息，并搜集各大电商的实时优惠商品推荐给用户，帮助您在网购时省心省钱，轻松愉快买买买。",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "management",
    "nativeMessaging",
    "notifications",
    "cookies"
  ],
  "web_accessible_resources": [
    "jquery.js"
  ],
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    },
    "default_popup": "popup.html",
    "default_title": "超惠买"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.js",
        "cj.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png"
  }
}
