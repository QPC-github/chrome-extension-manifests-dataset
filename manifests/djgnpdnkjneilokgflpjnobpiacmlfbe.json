{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Chefkoch.de – Rezepte zum Kochen und Backen",
  "version": "1.0.10",
  "description": "Deine Rezepte zum Kochen und Backen Chefkoch.de für jeden Tag",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon49.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "app/global.js",
      "app/background.js"
    ]
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "permissions": [
    "notifications",
    "storage",
    "management",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "background"
  ],
  "browser_action": {
    "default_icon": "images/icon16.png",
    "default_title": "Chefkoch.de – Rezepte zum Kochen und Backen",
    "default_popup": "app/templates/popup.html"
  }
}
