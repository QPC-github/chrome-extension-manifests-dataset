{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Aspen chrome extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Instantly add words to your dictionary",
  "homepage_url": "http://aspen.kayzer.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Add to dictionary",
    "default_popup": "src/page_action/page_action.html"
  },
  "background": {
    "scripts": [
      "js/content.js"
    ],
    "persistent": false
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "cookies",
    "*://*.kayzer.me/*",
    "*://aspen.dev/*"
  ]
}
