{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Hide Reddit Sidebar",
  "version": "1.1",
  "manifest_version": 2,
  "description": "hides the sidebar when the media is too small",
  "content_scripts": [
    {
      "matches": [
        "http://*.reddit.com/*"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_start"
    }
  ]
}
