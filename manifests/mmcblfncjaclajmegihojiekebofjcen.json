{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Plugins",
  "version": "6.0.1.0",
  "manifest_version": 2,
  "homepage_url": "https://singleclickapps.com/plugins-button",
  "description": "Shortcut to Chrome plugins pages",
  "icons": {
    "16": "icon.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "optional_permissions": [
    "management"
  ],
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Plugins",
    "default_popup": "popup/popup.html"
  },
  "incognito": "spanning",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "settings.html"
}
