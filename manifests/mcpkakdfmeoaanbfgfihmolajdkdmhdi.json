{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "dlr",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The best way to download files from URLs without a hassle!",
  "homepage_url": "http://tac61.webstarts.com/dlr",
  "icons": {
    "128": "icons/dlr-128.png",
    "1024": "icons/dlr-1024.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/dlr-full.png",
    "default_title": "dlr",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "downloads",
    "downloads.open",
    "notifications",
    "contextMenus",
    "tabs",
    "http://*/*"
  ],
  "omnibox": {
    "keyword": "dlr"
  }
}
