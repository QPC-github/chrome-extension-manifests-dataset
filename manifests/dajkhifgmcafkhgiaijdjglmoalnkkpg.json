{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reload",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Reloads Active tab and custom extensions",
  "short_name": "Reload",
  "author": "Sindhura Vaka",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/Reload.png"
  },
  "icons": {
    "16": "images/reload-16.png",
    "32": "images/reload-32.png",
    "64": "images/reload-64.png",
    "128": "images/reload-128.png"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "notifications",
    "contextMenus",
    "tabs",
    "management"
  ]
}
