{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "豆瓣搜索",
  "version": "0.2",
  "description": "豆瓣评分搜索（图书、电影、电视剧等）",
  "icons": {
    "16": "douban_16.png",
    "128": "douban_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
