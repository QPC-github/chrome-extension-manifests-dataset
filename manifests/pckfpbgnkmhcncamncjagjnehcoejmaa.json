{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "JOIN Desktop Share",
  "description": "A simple extension that allows you to stream your desktop into meetings with JOIN Videobridge.",
  "version": "0.2",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "join-logo-16x16.png",
    "48": "join-logo-48x48.png",
    "128": "join-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "https://join.4services.cz/*"
    ]
  }
}
