{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Blitzz - Screen Share for Remote Assistance",
  "description": "Use this extension to share your screen during ongoing video call of Blitzz.",
  "version": "1.0.4",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "incognito": "spanning",
  "externally_connectable": {
    "matches": [
      "*://dev.blitzz.co/*",
      "*://join.blitzz.co/*",
      "*://web.blitzz.co/*",
      "*://joinrc.blitzz.co/*",
      "*://rc.blitzz.co/*",
      "*://app.blitzz.co/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
