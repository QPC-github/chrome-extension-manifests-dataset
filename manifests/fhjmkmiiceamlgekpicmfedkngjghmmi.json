{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Salesforce Trust Simplified",
  "version": "0.19",
  "description": "Displays important Trust information for your Salesforce instance.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://us-central1-upbeat-airfoil-244213.cloudfunctions.net/"
  ],
  "page_action": {
    "default_icon": {
      "16": "trust_16.png",
      "24": "trust_24.png",
      "32": "trust_32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "manifest_version": 2
}
