{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "2.13.1",
  "icons": {
    "16": "app-icons/colored-16x16-unsharp.png",
    "48": "app-icons/colored-48x48-unsharp.png",
    "128": "app-icons/colored-128x128-unsharp.png"
  },
  "name": "BeeLine Reader",
  "homepage_url": "http://www.beelinereader.com",
  "description": "BeeLine's color gradient makes reading faster/easier for over 90% of people. How much will it help you?",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "chrome-utils.js",
        "content-script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "chrome-utils.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "app-icons/colored-19x19-unsharp.png",
      "38": "app-icons/colored-38x38-unsharp.png"
    },
    "default_title": "BeeLine Reader",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "chrome-utils.js",
    "background.js",
    "content-script.js",
    "chrome.css",
    "chrome.js",
    "surveys.json",
    "templates/*.html",
    "vendor/readability.js",
    "vendor/readability_print.css",
    "vendor/jquery/jquery.min.js",
    "vendor/dompurify/purify.min.js",
    "vendor/squirrelly/squirrelly.min.js",
    "vendor/spectrum-colorpicker/spectrum.js",
    "vendor/spectrum-colorpicker/spectrum.css",
    "vendor/open-dyslexic.css",
    "vendor/fonts/OpenDyslexic-Bold.otf",
    "vendor/fonts/OpenDyslexic-BoldItalic.otf",
    "vendor/fonts/OpenDyslexic-Italic.otf",
    "vendor/fonts/OpenDyslexic-Regular.otf",
    "vendor/magnific-popup/magnific-popup.css",
    "vendor/magnific-popup/jquery.magnific-popup.min.js",
    "vendor/react/umd/react.production.min.js",
    "vendor/react-dom/umd/react-dom.production.min.js"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Open settings panel"
    },
    "activate-clean-mode": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Activate Clean Mode"
    }
  }
}
