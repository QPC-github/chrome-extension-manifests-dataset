{
  "name": "Поиск Hi.Ru",
  "description": "Быстрый доступ к поисковому сервису Hi.ru",
  "version": "0.1",
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "chrome_settings_overrides": {
    "search_provider": {
      "encoding": "UTF-8",
      "favicon_url": "http://hi.ru/search.ico",
      "is_default": true,
      "keyword": "hi.ru",
      "name": "Hi.Ru",
      "search_url": "http://hi.ru/search2/?q={searchTerms}"
    }
  },
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "48": "icons/48.png"
  }
}
