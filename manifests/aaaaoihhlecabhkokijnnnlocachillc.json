{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "css": [
        "core/skins.css"
      ],
      "matches": [
        "https://g2a.com/*",
        "http://g2a.com/*",
        "https://www.g2a.com/*",
        "http://www.g2a.com/*"
      ]
    },
    {
      "js": [
        "core/jquery-min.js",
        "core/skins.js",
        "core/steamprice.js"
      ],
      "matches": [
        "https://g2a.com/*",
        "http://g2a.com/*",
        "https://www.g2a.com/*",
        "http://www.g2a.com/*"
      ]
    }
  ],
  "manifest_version": 2,
  "name": "G2Steam - Find deals on G2A games & skins!",
  "description": "Spot the biggest discounts before the other guys!",
  "version": "1.21",
  "browser_action": {
    "default_icon": "logo-small.png",
    "default_popup": "core/options.html",
    "default_title": "G2Steam"
  },
  "background": {
    "scripts": [
      "core/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-med.png",
    "128": "logo-large.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "https://store.steampowered.com/"
  ],
  "web_accessible_resources": [
    "logo-med.png"
  ]
}
