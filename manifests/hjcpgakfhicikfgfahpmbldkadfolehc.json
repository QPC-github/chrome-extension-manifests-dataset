{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "QuikBox Desktop Streamer",
  "description": "QuikBox Desktop Streamer is a desktop sharing plugin for use with QuikBox Connect (The QuikBox video conferencing solution).",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "quikbox-16x16.png",
    "48": "quikbox-48x48.png",
    "128": "quikbox-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://video.quikbox.com/*"
    ]
  }
}
