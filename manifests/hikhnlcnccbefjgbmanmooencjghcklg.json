{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Klon Privacy Extension",
  "description": "Store your credentials in a secure, encrypted, and easy manner while retaining your privacy.",
  "author": "Klon LLC",
  "version": "0.0.5",
  "icons": {
    "19": "images/klon-icon-19.png",
    "32": "images/klon-icon-32.png",
    "48": "images/klon-icon-48.png",
    "64": "images/klon-icon-64.png",
    "128": "images/klon-icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "js/contentScript-dist.js"
      ]
    }
  ],
  "browser_action": {
    "browser_style": false,
    "default_icon": "images/klon-icon-19.png",
    "default_title": "Klon Privacy Extension",
    "default_popup": "login.html"
  },
  "background": {
    "scripts": [
      "js/scripts-dist.js",
      "js/createIdentity.js",
      "js/background-dist.js",
      "js/comms.js",
      "js/useIdentity.js",
      "js/identities.js",
      "js/settings.js"
    ],
    "persistent": false
  }
}
