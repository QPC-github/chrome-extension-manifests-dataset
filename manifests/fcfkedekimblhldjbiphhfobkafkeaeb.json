{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "source/style.css"
      ],
      "js": [
        "source/jquery-2.1.3.min.js",
        "source/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "description": "Pokemon NO! - Block ALL mentions of Pokemon on the internet!",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "name": "Pokemon NO! Pokemon BLOCKER!",
  "permissions": [
    "storage",
    "management"
  ],
  "version": "1.1"
}
