{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Userstand Screensharing - Staging",
  "author": "IsmaÃ«l Sow at Userstand",
  "version": "2.4",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension allows you to share your screen when participating to a user research session with Userstand.",
  "homepage_url": "http://userstand.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://userstand.com/*",
      "https://staging.userstand.com/*",
      "https://staging.searchness.com/*",
      "https://searchness.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "64": "logo64.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
