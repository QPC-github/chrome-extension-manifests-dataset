{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Spectabular",
  "description": "A program to enable tab hoarders to to save multiple copies of open tabs for different projects",
  "version": "0.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "spectabular.html"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
