{
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Block Games"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Popular Bloctris game",
  "manifest_version": 2,
  "name": "Blocktris - Try Block Game",
  "permissions": [
    "tabs",
    "bookmarks"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.3"
}
