{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tab Shortcuts",
  "description": "Allows pinning and duplication of tabs via keyboard shortcuts.",
  "manifest_version": 2,
  "version": "1.1",
  "background": {
    "scripts": [
      "content_script.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Press to toggle tab pinning"
  },
  "commands": {
    "toggle-pin-tab": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Toggles whether the current tab is pinned"
    },
    "duplicate-tab": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Duplicates the current tab"
    },
    "duplicate-new-window": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Duplicates the current tab to a new window"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
