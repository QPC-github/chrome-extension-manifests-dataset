{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "3-Click Ordering",
  "description": "Stop spending money on Amazon!",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "3-Click Ordering"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*"
      ],
      "css": [
        "styles/modal.css",
        "styles/contentstyle.css"
      ],
      "js": [
        "scripts/jquery.js",
        "scripts/modal.js",
        "scripts/contentscript.js"
      ]
    }
  ],
  "options_page": "preferences.html",
  "permissions": [
    "tabs",
    "webNavigation",
    "*://*.amazon.com/*",
    "storage"
  ],
  "web_accessible_resources": [
    "icons/*"
  ]
}
