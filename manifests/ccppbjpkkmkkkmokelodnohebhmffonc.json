{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "GameOsin.com",
  "version": "1.14",
  "manifest_version": 2,
  "description": "GameOsin.com - Bảng tin của Game thủ",
  "icons": {
    "16": "icon-game-osin-16x16.png",
    "48": "icon-game-osin-48x48.png",
    "128": "icon-game-osin-128x128.png"
  },
  "browser_action": {
    "default_icon": "icon_normal.png",
    "default_title": "GameOsin.com - Bảng tin của Game thủ"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "icon_alert.png"
  ],
  "homepage_url": "http://gameosin.com"
}
