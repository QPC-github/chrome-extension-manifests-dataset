{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Accura Documents",
  "short_name": "Documents",
  "description": "Official Accura browser extension for adding articles to Accura Documents.",
  "version": "1.0",
  "icons": {
    "16": "accura.png",
    "32": "accura.png",
    "48": "accura.png",
    "128": "accura.png"
  },
  "browser_action": {
    "default_popup": "dist/index.html",
    "default_icon": "accura.png"
  },
  "web_accessible_resources": [
    "dist/index.html"
  ],
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens index.html"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage"
  ]
}
