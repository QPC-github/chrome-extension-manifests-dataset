{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "short_name": "anoWeb",
  "name": "Annotate the Internet",
  "manifest_version": 2,
  "description": "A comment page for any page of the Internet. In this current version, we show comment pages for any youtube video.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "origami28.png",
    "default_popup": "disqus2.html",
    "default_title": "Click here!"
  },
  "icons": {
    "64": "origami28_64.png",
    "128": "origami28_128.png"
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://*.disqus.com https://*.disquscdn.com; object-src 'self'"
}
