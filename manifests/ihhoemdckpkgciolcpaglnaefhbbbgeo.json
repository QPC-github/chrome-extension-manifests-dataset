{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "@bashvlas",
  "name": "Wein‑Plus",
  "description": "Wein‑Plus",
  "version": "1.0.0",
  "icons": {
    "128": "/img/128.png",
    "16": "/img/16.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "/img/128.png",
      "48": "/img/48.png",
      "32": "/img/32.png",
      "19": "/img/19.png",
      "16": "/img/16.png"
    },
    "default_popup": "/popup/index.html"
  },
  "background": {
    "scripts": [
      "/js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus"
  ]
}
