{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RocketOn.App",
  "description": "RocketOn.App - Screensharing",
  "short_name": "RocketOn.App",
  "version": "0.7",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.rocketon.app/*",
      "*://rocketon.app/*",
      "*://rocketon.io/*",
      "*://*.rocketon.io/*",
      "*://*.rocketon.com.br/*",
      "*://rocketon.com.br/*",
      "*://rapp.ngrok.io/*",
      "*://localhost/*"
    ]
  },
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  }
}
