{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2.0",
  "name": "Speak Text",
  "description": "Speak Text converts selected text to speech. Select - Speak - Listen.",
  "background": {
    "scripts": [
      "js/jquery.js",
      "background.js"
    ]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "tabs",
    "contextMenus",
    "tts"
  ],
  "icons": {
    "16": "img/ico_16.png",
    "48": "img/ico_48.png"
  }
}
