{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Watched",
  "short_name": "Watched",
  "description": "Keep track of episodes from your favorite TV shows.",
  "version": "1.2",
  "author": "Ayala Nakashima Barbosa",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/tv16.png",
    "48": "icons/tv48.png",
    "128": "icons/tv128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/tv19.png",
      "38": "icons/tv38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Watched"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
