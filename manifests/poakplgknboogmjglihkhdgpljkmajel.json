{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Full Window Image Viewer",
  "version": "3.2",
  "manifest_version": 2,
  "description": "View images on the current page as a slideshow.",
  "browser_action": {
    "default_icon": {
      "19": "logo19.png",
      "38": "logo38.png"
    }
  },
  "background": {
    "scripts": [
      "imageviewerbg.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
