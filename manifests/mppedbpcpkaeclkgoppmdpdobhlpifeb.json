{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.5",
  "manifest_version": 2,
  "offline_enabled": true,
  "permissions": [
    "*://*/*",
    "storage"
  ],
  "short_name": "screen-color-temperature",
  "name": "Color Temperature (Change Lux)",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "web_accessible_resources": [
    "data/content_script/*"
  ],
  "homepage_url": "https://mybrowseraddon.com/screen-color-temperature.html",
  "description": "A lite and easy-to-use addon that adjusts the screen color to match the environment!",
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "browser_action": {
    "default_popup": "data/popup/popup.html",
    "default_title": "Color Temperature (Change Lux)",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "commands": {
    "toggle-screen-color-temperature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle color temperature (ON | OFF)"
    },
    "add-to-whitelist": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Add the active tab to whitelist"
    },
    "remove-from-whitelist": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Remove the active tab from whitelist"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "match_about_blank": true,
      "run_at": "document_start",
      "js": [
        "data/content_script/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
