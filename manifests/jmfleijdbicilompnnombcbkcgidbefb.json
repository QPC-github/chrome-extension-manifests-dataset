{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tape",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Measurement tools, rulers and grids",
  "icons": {
    "128": "tape128.png"
  },
  "browser_action": {
    "default_icon": "tape19.png",
    "default_title": "Measure stuff"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
