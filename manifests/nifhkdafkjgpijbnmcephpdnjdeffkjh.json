{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Morse Player",
  "version": "1.0.6",
  "description": "Highlight text and translate it into audible Morse code.",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "downloads"
  ],
  "browser_action": {},
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Replay",
      "global": true
    }
  }
}
