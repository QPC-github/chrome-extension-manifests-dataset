{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "copper",
  "manifest_version": 2,
  "version": "1.3.4",
  "description": "A tipping and appreciation service",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://www.copper.is/",
  "icons": {
    "16": "logo_16.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon@2x.png"
    },
    "default_title": "tip this page"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
