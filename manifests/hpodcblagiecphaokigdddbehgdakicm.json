{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "KantanSnippet™",
  "version": "2.0",
  "manifest_version": 2,
  "description": "KantanSnippet™ is a browser based Machine Translation productivity app that instantly translates snippets of web content.",
  "icons": {
    "16": "Images/icon.png",
    "48": "Images/icon.png",
    "128": "Images/icon.png"
  },
  "browser_action": {
    "default_popup": "widget.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
