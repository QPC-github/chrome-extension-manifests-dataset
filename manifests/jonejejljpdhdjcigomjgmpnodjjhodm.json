{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SEODOMETER",
  "version": "3.1",
  "description": "SEOdometer",
  "content_scripts": [
    {
      "css": [
        "/css/style.css"
      ],
      "js": [
        "js/jquery.js",
        "js/script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "js": [
        "js/google.js",
        "js/search.js"
      ],
      "matches": [
        "https://www.google.com/*",
        "https://*.google.com/*"
      ]
    }
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Keywords Collector",
    "default_popup": "/html/popup.html"
  },
  "permissions": [
    "alarms",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "128": "img/icon.png"
  },
  "web_accessible_resources": [
    "/html/content.html",
    "sound/voice.wav"
  ]
}
