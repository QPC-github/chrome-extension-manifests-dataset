{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Share everything!",
  "description": "Share ALL the things!",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "shareeverything.js"
      ],
      "css": [
        "shareeverything.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": false
    }
  ],
  "icons": {
    "32": "icons/32x32.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  }
}
