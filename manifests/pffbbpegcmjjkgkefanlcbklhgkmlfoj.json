{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_application_title__",
  "short_name": "__MSG_application_shortname__",
  "description": "__MSG_application_description__",
  "default_locale": "en",
  "version": "2.44",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ]
  },
  "browser_action": {
    "default_title": "New Tools and Design",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "jquery-3.1.0.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://connect.facebook.net/en_US/sdk.js https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "https://www.facebook.com/*",
    "https://*.facebook.net/*",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "img/*.png"
  ],
  "options_page": "settings.html"
}
