{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Zucc The Bird",
  "description": "Don't look at this bird",
  "version": "2.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "manifest_version": 2
}
