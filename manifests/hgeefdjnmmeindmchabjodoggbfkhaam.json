{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Responsive View",
  "description": "To view the page in different device screen sizes, just by a click",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "19": "icon19.png",
    "38": "icon38.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "View page in various dimensions"
  },
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": false
  }
}
