{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Portrait Mode",
  "description": "Experience the new horizon of web browsing; portrait mode.",
  "version": "1.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-1.9.1.min.js",
        "inject_rotate.js"
      ]
    }
  ]
}
