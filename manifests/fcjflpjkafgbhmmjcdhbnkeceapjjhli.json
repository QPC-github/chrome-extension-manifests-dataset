{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Randomify",
  "short_name": "Randomify",
  "description": "Shuffle the Internet",
  "author": "M. Dhia",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "http://randomify.lost-code.de/"
  ],
  "commands": {
    "randomPage": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "windows": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S"
      },
      "description": "Shuffle the Internet"
    }
  }
}
