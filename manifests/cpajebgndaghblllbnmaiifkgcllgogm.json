{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Video Screen Sharing Plugin",
  "description": "An extension to allow screen sharing when using video conferencing services at Qase.ca",
  "version": "0.1.2",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://api.qase.net/*",
      "*://dev.api.qase.net/*",
      "*://dev.qase.net/*",
      "*://qase.ca/*",
      "*://www.qase.ca/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
