{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TravaZap",
  "version": "1.0",
  "description": "Evite olhares curiosos em suas conversas",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "scripts": [
      "script.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Modo Privacidade"
  }
}
