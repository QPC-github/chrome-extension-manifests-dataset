{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Network Checker",
  "description": "This extension shows if the networkconnection is online or offline",
  "version": "0.0.0.2",
  "icons": {
    "128": "logo128.png"
  },
  "background": {
    "page": "default.html"
  },
  "permissions": [
    "notifications",
    "tabs"
  ],
  "web_accessible_resources": [
    "offline.png"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "default.html"
  }
}
