{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NodeWeaver Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with NodeWeaver Meeting.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "nw-logo-16x16.png",
    "48": "nw-logo-48x48.png",
    "128": "nw-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.nodeweaver.eu/*"
    ]
  }
}
