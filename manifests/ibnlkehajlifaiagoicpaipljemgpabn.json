{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "content_scripts": [
    {
      "js": [
        "./build.js"
      ],
      "matches": [
        "https://web.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Sick of trolls on Facebook? TrollBlock will censor their posts",
  "name": "TrollBlock - block trolls on social media",
  "version": "0.0.1",
  "permissions": [
    "storage"
  ]
}
