{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Darkify",
  "short_name": "Darkify",
  "version": "1.0.0",
  "description": "Changes every website that you visit into a Dark Mode!",
  "author": "Carter",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icons/icon256.png",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png",
    "256": "img/icons/icon256.png"
  },
  "permissions": [
    "storage"
  ]
}
