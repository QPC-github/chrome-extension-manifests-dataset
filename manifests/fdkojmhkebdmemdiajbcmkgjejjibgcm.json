{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Reconnect",
  "version": "1.2",
  "description": "Reloads any offline webpage until they come back online.",
  "icons": {
    "128": "icon128x128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "injector.js"
    ],
    "persistent": false
  }
}
