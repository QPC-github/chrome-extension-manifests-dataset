{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cookie Creator",
  "version": "1.2",
  "manifest_version": 2,
  "description": "This extension help you to create cookie for your website.",
  "icons": {
    "16": "/icons/16x16.png",
    "48": "/icons/48x48.png",
    "128": "/icons/128x128.png"
  },
  "omnibox": {
    "keyword": "create cookie"
  },
  "background": {
    "scripts": [
      "/js/jquery-3.3.1.slim.min.js",
      "/js/popper.min.js",
      "/js/bootstrap.min.js",
      "/popup.js"
    ]
  },
  "permissions": [
    "cookies",
    "<all_urls>",
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/16x16.png",
      "32": "/icons/38x38.png",
      "48": "/icons/48x48.png",
      "128": "/icons/128x128.png"
    },
    "default_title": "Cookie Creator"
  },
  "devtools_page": "devtools/devtools.html"
}
