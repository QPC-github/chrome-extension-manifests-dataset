{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "externally_connectable": {
    "matches": [
      "*://*.mtm.video/*"
    ]
  },
  "minimum_chrome_version": "40",
  "permissions": [
    "desktopCapture"
  ],
  "manifest_version": 2,
  "version": "0.1.7",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "description": "A simple extension that allows you to stream your desktop into meetings with MTM Video.",
  "name": "MTM Desktop Streamer",
  "icons": {
    "48": "mtmicon48.png",
    "128": "mtmicon128.png",
    "16": "mtmicon16.png"
  }
}
