{
  "author": "Topiogame",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "manifest_version": 2,
  "default_locale": "en_US",
  "version": "1.2",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": {
      "128": "images/128.png",
      "16": "images/16.png",
      "24": "images/24.png",
      "48": "images/48.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/js/background.js"
    ]
  },
  "permissions": [
    "gcm",
    "storage",
    "identity",
    "tabs",
    "https://*.topiogame.com/*",
    "bookmarks",
    "topSites",
    "geolocation",
    "https://*.google.com/*",
    "https://*.fontawesome.com/"
  ],
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "24": "images/24.png",
    "48": "images/48.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx"
}
