{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SnowConnect",
  "description": "This extension allows to dial phone numbers via SnowConnect.",
  "version": "3.5",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/snow_48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "contextmenu.js",
      "background.html"
    ]
  },
  "icons": {
    "16": "images/snow_16.png",
    "32": "images/snow_32.png",
    "48": "images/snow_48.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "background",
    "http://*/*",
    "https://*/*"
  ]
}
