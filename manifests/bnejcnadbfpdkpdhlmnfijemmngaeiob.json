{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BA eStore Alert",
  "version": "1.2",
  "description": "Never miss Avios on your online shopping!",
  "author": "Caprid Ventures Limited",
  "homepage_url": "http://www.baestorealert.com",
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "96": "images/icon96.png",
      "128": "images/icon128.png"
    },
    "default_title": "BA eStore Alert",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "tabs",
    "<all_urls>",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "data/*.json"
  ],
  "manifest_version": 2
}
