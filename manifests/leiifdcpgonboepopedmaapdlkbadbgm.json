{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Namaz Vakitleri",
  "version": "3.0",
  "description": "Diyanet sistemi ile uyumlu, namaz vakitlerini gösteren eklenti. Çevrimdışı çalışabilir ve uyari sistemi ve iftar sayacı vardir.",
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "1": "images/icon.png"
  },
  "browser_action": {
    "default_name": "Namaz Vakitleri",
    "default_icon": "images/icon32.png",
    "default_title": "Namaz Vakitleri",
    "default_popup": "pencere.html"
  },
  "author": "Digiweb Teknoloji Ltd. Şti. - Selman CANKURT",
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/tab.js",
      "js/namaz_vakti_selman.js"
    ]
  },
  "permissions": [
    "http://*.dunyanamazvakitleri.com/*",
    "https://*.dunyanamazvakitleri.com/*",
    "tabs",
    "storage",
    "notifications"
  ],
  "homepage_url": "http://www.dunyanamazvakitleri.com",
  "offline_enabled": true,
  "short_name": "Dünya Namaz Vakitleri"
}
