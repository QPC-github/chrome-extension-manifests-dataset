{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pundit Annotator Beta",
  "version": "0.0.50",
  "manifest_version": 2,
  "description": "Annotate the web using Pundit Annotator: highlight and comment text on any page and manage your annotations in the Pundit Dashboard.",
  "author": "Pundit",
  "short_name": "Pundit Annotator",
  "background": {
    "page": "html/background.html"
  },
  "homepage_url": "http://thepund.it/annotator",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/pundit-icon-48-close.png",
    "128": "icons/pundit-icon-128-close.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/pundit-icon-19.png",
      "38": "icons/pundit-icon-38.png"
    },
    "default_title": "Launch Pundit Annotator"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'",
  "web_accessible_resources": [
    "inject/css/fonts/*.*",
    "inject/*.*"
  ]
}
