{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SME-ME Screen Sharing",
  "version": "0.1.0",
  "description": "Allows you to share your screen when using the SME-ME service.",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "author": "SME-ME",
  "homepage_url": "https://sme-me.com/",
  "minimum_chrome_version": "34",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://localhost:8085/*",
      "https://sme-me-fe-dev.firebaseapp.com/*",
      "https://sme-me.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
