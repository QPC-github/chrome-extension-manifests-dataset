{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "知乎私信助手",
  "description": "知乎私信功能增强插件。",
  "version": "0.2.1.10",
  "icons": {
    "32": "icon.png"
  },
  "permissions": [
    "http://www.zhihu.com/",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.zhihu.com/inbox/*"
      ],
      "js": [
        "jQuery-2.1.1.min.js",
        "helper.user.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "jquery.min.map"
  ]
}
