{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ShinySearch",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Personalized Homepage for your new-tab",
  "permissions": [
    "cookies",
    "tabs",
    "webNavigation",
    "http://www.shinysearch.com/"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.shinysearch.com/sethomepage.php"
      ],
      "css": [
        "css/chr_ext.css"
      ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png"
    },
    "default_title": "Goto ShinySearch"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
