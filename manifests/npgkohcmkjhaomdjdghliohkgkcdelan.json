{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TJMT Tools",
  "description": "Atalhos para serviços essenciais do Sistema Judiciário de Mato Grosso.",
  "version": "0.4.1",
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "browser_action": {
    "default_icon": "lib/png/martelo.png",
    "default_popup": "popup.html",
    "default_title": "TJMT Tools",
    "default_background": "#CCC"
  },
  "icons": {
    "16": "lib/png/icones/tjmtTools16.png",
    "48": "lib/png/icones/tjmtTools48.png",
    "128": "lib/png/icones/tjmtTools128.png"
  },
  "permissions": [
    "unlimitedStorage",
    "https://tjmttools.firebaseio.com/"
  ]
}
