{
  "background": {
    "scripts": [
      "core.js"
    ]
  },
  "description": "Quickly summarize ther website via right-click",
  "icons": {
    "16": "wikipedia-icon.png",
    "48": "wikipedia-icon-big.png"
  },
  "manifest_version": 2,
  "name": "Right-Click Summarizy",
  "options_page": "options.html",
