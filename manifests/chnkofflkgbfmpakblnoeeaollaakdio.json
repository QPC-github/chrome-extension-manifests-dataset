{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WP Read Time",
  "short_name": "WP Read Time",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Tells You How Long It Takes To Read Your Blog Posts",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "jq.js",
        "background.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
