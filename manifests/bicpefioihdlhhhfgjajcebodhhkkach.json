{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Today's Quote",
  "description": "Today's Quote",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "img/Icon_16_pixel.png",
    "48": "img/Icon_48_pixel.png",
    "128": "img/Icon_128_pixel.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/Icon_48_pixel.png",
      "38": "img/Icon_48_pixel.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png",
    "data/quotes_data.json"
  ]
}
