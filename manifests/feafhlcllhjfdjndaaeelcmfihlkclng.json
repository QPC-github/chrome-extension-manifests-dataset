{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AdShrink.it",
  "version": "1",
  "manifest_version": 2,
  "description": "AdShrink Browser Extension - Catch and shrinks",
  "browser_action": {
    "default_title": "Some tooltip",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "icons": {
    "16": "images/logo6.png"
  },
  "permissions": [
    "https://*/",
    "https://www.adshrink.it/",
    "http://192.168.0.21/",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "notifications",
    "management"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.google.com/*",
      "*://*.chromium.org/*"
    ]
  }
}
