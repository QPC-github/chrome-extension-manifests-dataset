{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Echofin Screen Sharing",
  "author": "Echofin",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "40",
  "description": "This Chrome extension is developed for https://www.echofin.co to enable screen capture.",
  "homepage_url": "https://www.echofin.co",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.dev.echofin.co/*",
      "https://*.echofin.co/*",
      "https://*.echofin.com/*",
      "https://*.dev.echofin.com/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo48.png"
  ]
}
