{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Top Slack",
  "description": "Moves slack text box to top of page.",
  "version": "1.1",
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*"
      ],
      "js": [
        "background.js"
      ]
    }
  ],
  "permissions": [
    "https://*.slack.com/*"
  ],
  "browser_action": {
    "default_title": "Move Slack Up",
    "default_icon": "slack_up.png"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2
}
