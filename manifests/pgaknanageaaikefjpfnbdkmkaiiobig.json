{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Mes échantillons gratuits",
  "version": "1.7",
  "manifest_version": 2,
  "description": "Mes échantillons gratuits - Les meilleurs bons plans, échantillons gratuits et cadeaux à recevoir gratuitement chez vous!",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/main.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://www.mesechantillonsgratuits.fr/",
    "notifications",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "access"
  ]
}
