{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "自動計数のオン／オフ"
  },
  "commands": {
    "execute-count": {
      "description": "文字数を数える"
    },
    "toggle-autocount": {
      "description": "自動計数のオン／オフ"
    }
  },
  "description": "選択テキストの文字数を数えます。",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "字数",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "version": "1.4.0"
}
