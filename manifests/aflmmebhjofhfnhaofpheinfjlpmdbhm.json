{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "3.5.3",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "assets/jquery-3.2.1.min.js",
      "assets/common.js",
      "assets/listener.background.script.js",
      "assets/background.js",
      "assets/storefrontcheckeraddon-background.js",
      "assets/variations.service.js",
      "assets/fbamfncalculator.js",
      "assets/qtyinjection.service.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "assets/jquery-3.2.1.min.js",
        "assets/common.js",
        "assets/listener.content.script.js",
        "assets/pagehook.js",
        "assets/storefrontcheckeraddon.js",
        "assets/producttrackeraddon.js",
        "assets/fbamfncalculator.js",
        "assets/rangeslider.js",
        "assets/variations.service.js",
        "assets/qtyinjection.service.js"
      ],
      "css": [
        "assets/amzpecty.inject.sc.css",
        "assets/amzpecty.popup.css"
      ],
      "matches": [
        "*://*.amzpecty.com/*",
        "*://*.amazon.com/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.in/*",
        "*://*.amazon.it/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.es/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.sg/*",
        "*://*.amazon.ae/*"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.amzpecty.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.cn/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.in/*",
    "*://*.amazon.it/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.es/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.sg/*",
    "*://*.amazon.ae/*"
  ],
  "icons": {
    "128": "icon.png"
  }
}
