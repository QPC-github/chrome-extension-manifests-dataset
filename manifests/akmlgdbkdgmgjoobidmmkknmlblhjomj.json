{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WebOutLoud - Text-to-Speech Web Reader",
  "description": "Listen to the web using text-to-speech. Perfect for dyslexia, low vision, students, researchers, kids, learning to read.",
  "version": "3.0.0",
  "permissions": [
    "storage",
    "contextMenus",
    "tts",
    "activeTab",
    "https://weboutloud.io/"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "19": "icon19.png",
      "38": "icon38.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "jquery-2.1.1.min.js",
      "websitereaderjs/common.js",
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://weboutloud.io/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "jquery-2.1.1.min.js",
        "websitereaderjs/common.js",
        "content.js",
        "websitereaderjs/reader.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "img/*",
    "icon38.png",
    "icon128.png",
    "websitereaderjs/*"
  ]
}
