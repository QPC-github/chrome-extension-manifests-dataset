{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Cyberhorizon Screensharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Cyberhorizon",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.6",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in Cyberhorizon applications.",
  "externally_connectable": {
    "matches": [
      "*://*.cyberhorizon.com/*"
    ]
  },
  "icons": {
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": "logo.png"
  }
}
