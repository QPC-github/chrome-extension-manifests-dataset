{
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "imgs/globe_48.png",
    "default_name": "Pinyin ME: Translate Chinese to Pinyin",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "css/styles.css"
      ],
      "js": [
        "js/jquery.js",
        "js/dictionary.js",
        "js/translate.js",
        "js/helpers.js",
        "js/config.js",
        "js/init.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "description": "Pinyin ME: Translate Chinese to Pinyin",
  "icons": {
    "128": "imgs/globe_128.png",
    "48": "imgs/globe_48.png",
    "16": "imgs/globe_16.png"
  },
  "name": "Pinyin ME!",
  "permissions": [
    "tabs"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.2"
}
