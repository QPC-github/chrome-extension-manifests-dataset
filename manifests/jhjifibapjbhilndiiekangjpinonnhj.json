{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Remplace les chaînes de caractère Unicode en Smiley sur YouTube",
  "name": "Smile'Tube",
  "manifest_version": 2,
  "version": "1.5",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "smiley.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "smile_tube.png"
  },
  "browser_action": {
    "default_icon": "smile_tube.png",
    "popup": "smiley.js"
  }
}
