{
  "background": {
    "scripts": [
      "js/common.js",
      "js/background.js",
      "js/context.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/common.js",
        "js/content.js",
        "js/contentChrome.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Click to Call for Kerio Operator"
  },
  "options_page": "html/options.html",
  "description": "Click to Call for Kerio Operator",
  "author": "Filip Jeníček",
  "homepage_url": "http://www.kerio.com/operator",
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "30.0",
  "name": "Click to Call for Kerio Operator",
  "short_name": "ClickToCall",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "0.5",
  "web_accessible_resources": [
    "js/common.js",
    "img/icon16.png",
    "img/icon19d.png",
    "img/icon38d.png"
  ]
}
