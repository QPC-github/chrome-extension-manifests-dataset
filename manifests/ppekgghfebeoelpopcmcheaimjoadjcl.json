{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ShareThis",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "A Chrome extension that tweets your current page.",
  "homepage_url": "http://www.mattrodigheri.com",
  "icons": {
    "128": "icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "__MSG_ShareThis__"
  },
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ]
}
