{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Safer MyMonero",
  "description": "Wallet for the cryptocurrency Monero",
  "version": "1.0.3",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*.mymonero.com/*",
    "http://mymonero.com/*",
    "https://mymonero.com/*",
    "https://api.mymonero.com:8443/*"
  ],
  "web_accessible_resources": [
    "application.html"
  ],
  "browser_action": {
    "default_icon": "icons/safe.png",
    "default_title": "Open MyMonero UI"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
