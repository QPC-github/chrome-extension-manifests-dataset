{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Force WenQuanYi Micro Hei Font",
  "version": "0.1.1",
  "description": "Use WenQuanYi Micro Hei / Microsoft Yahei Font for all sites",
  "manifest_version": 2,
  "icons": {
    "48": "48px-WenQuanYi.png",
    "128": "128px-WenQuanYi.png"
  },
  "content_scripts": [
    {
      "css": [
        "font.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
