{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RadioBotsEU",
  "description": "Spiele jetzt noch einfach neue Musik auf deinem Musikbot ab. Einfach auf YouTube gehen, Bot auswählen, genießen.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],
  "version": "1.0.0",
  "icons": {
    "16": "icon.png"
  },
  "externally_connectable": {
    "matches": [
      "https://*.radiobots.eu/*"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "index.js"
    ],
    "persistent": true
  }
}
