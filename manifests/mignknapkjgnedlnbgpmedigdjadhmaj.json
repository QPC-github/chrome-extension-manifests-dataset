{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Квадратный ВКонтакте",
  "short_name": "Квадратный ВКонтакте",
  "description": "Плагин для хрома, возвращающий квадратные аватарки пользователей.",
  "version": "1.0.8",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "64": "64.png",
    "96": "96.png",
    "128": "128.png",
    "256": "256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://new.vk.com/*",
        "*://vk.com/*",
        "*://*.vk.me/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Квадратный ВКонтакте",
    "default_icon": "16.png"
  }
}
