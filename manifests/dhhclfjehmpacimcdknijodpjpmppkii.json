{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Slido",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_icon": "icons/128x128.png",
    "default_popup": "popup.html"
  },
  "description": "Engage your audience with live polling and Q&A without ever leaving Google Slides",
  "background": {
    "persistent": true,
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2,
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "https://docs.google.com/presentation/*",
    "https://*.sli.do/*",
    "https://*.slido.com/*",
    "https://script.google.com/*",
    "https://meet.google.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.sli.do/*",
      "*://*.slido.com/*",
      "*://*.googleusercontent.com/*"
    ]
  },
  "incognito": "split",
  "content_security_policy": "script-src 'self' https://js-agent.newrelic.com https://bam.nr-data.net",
  "version": "0.42.0"
}
