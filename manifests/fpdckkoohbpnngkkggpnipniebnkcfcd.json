{
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "Video Downloader For Facebook",
  "version": "3.1",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com/ga.js https://www.google-analytics.com/analytics.js; object-src 'self'",
  "background": {
    "scripts": [
      "js/settings.js"
    ]
  },
  "content_scripts": [
    {
      "match_about_blank": false,
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/main.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
