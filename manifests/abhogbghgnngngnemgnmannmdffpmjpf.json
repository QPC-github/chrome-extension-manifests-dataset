{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hey Crypto!",
  "description": "Alert system for Cryptocurrency investors",
  "permissions": [
    "tabs",
    "identity",
    "identity.email"
  ],
  "version": "1.2",
  "author": "Manuel Vertiz",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/*.png",
    "images/currencyIcons/*.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js",
        "transition.min.js",
        "manny-toolbox-2.js",
        "popup.js"
      ],
      "exclude_globs": [
        "https://www.facebook.com/*",
        "https://mail.google.com/*"
      ],
      "css": [
        "transition.min.css",
        "w3.css",
        "font-awesome.min.css",
        "manny-toolbox-2.css",
        "pop.css"
      ],
      "run_at": "document_end"
    }
  ]
}
