{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RefreshBox add links",
  "version": "0.0.28",
  "manifest_version": 2,
  "description": "This little extention quickly add the current web page to your latest RefreshBox weekly newsletter. ",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "128": "images/icon-128.png"
    },
    "default_title": "RefreshBox",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
