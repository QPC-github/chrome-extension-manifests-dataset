{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Dynamic InMail",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "chrome_style": false
  },
  "manifest_version": 2,
  "description": "This extension dynamically generates a customized InMail using data from the candidate's profile.",
  "version": "3.2",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "background",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "browser_action": {
    "default_title": "Dynamic-InMail",
    "default_icon": "icon.png"
  }
}
