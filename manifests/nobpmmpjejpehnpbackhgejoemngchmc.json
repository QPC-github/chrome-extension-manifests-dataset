{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NotaBook",
  "description": "Note taking for the lazies",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "notebook16.png",
      "48": "notebook48.png",
      "128": "notebook128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "myScript.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "downloads"
  ]
}
