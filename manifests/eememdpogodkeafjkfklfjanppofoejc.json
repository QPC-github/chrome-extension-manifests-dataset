{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Infinite Connect (i-Connect)",
  "short_name": "i-Connect",
  "description": "i-Connect is a portal for digital marketing community to interact and communicate in a more organized and easy to use way.",
  "version": "0.2",
  "icons": {
    "16": "InfiniteConnect_16.png",
    "48": "InfiniteConnect_48.png",
    "128": "InfiniteConnect_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "InfiniteConnect.png",
    "default_title": "i-Connect, Connect All Digital-Pros... "
  },
  "permissions": [
    "activeTab"
  ]
}
