{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Dotka",
  "description": "Inspect player profiles during your DotA 2 matches.",
  "version": "0.1.4.4",
  "permissions": [
    "storage",
    "tabs",
    "https://www.dotabuff.com/",
    "file://../steamapps/common/dota 2 beta/game/dota/server_log.txt"
  ],
  "icons": {
    "16": "shared/img/dotka-16.png",
    "48": "shared/img/dotka-48.png",
    "128": "shared/img/dotka-128.png"
  },
  "browser_action": {
    "default_icon": "shared/img/dotka-19.png",
    "default_popup": "pages/popup/index.html"
  },
  "background": {
    "scripts": [
      "lib/jquery-3.2.1.min.js",
      "App/bundle.js",
      "App/background.js"
    ]
  }
}
