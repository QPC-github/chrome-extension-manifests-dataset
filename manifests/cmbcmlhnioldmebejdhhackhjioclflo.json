{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Remove Twitter Notifications",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension does one thing only â€“ remove the notification number badge on Twitter.",
  "homepage_url": "http://www.aetherpoint.com/blogpost/no-notifications",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
