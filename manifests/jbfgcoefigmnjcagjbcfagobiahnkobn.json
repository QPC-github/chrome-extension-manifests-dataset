{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smartertime",
  "version": "1.0.0.0",
  "author": "Smarter Time",
  "homepage_url": "https://www.smartertime.com",
  "description": "Retrieve active tab's URL and send it to Smartertime app.",
  "permissions": [
    "tabs",
    "nativeMessaging"
  ],
  "background": {
    "scripts": [
      "main.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "images/48.png"
  }
}
