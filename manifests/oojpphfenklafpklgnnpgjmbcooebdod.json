{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bhiner Taobao Tmall Shopping Assistant",
  "short_name": "Taobao Assistant",
  "version": "2.2.0.1",
  "description": "Bhinerâ„¢ Taobao Extension help you to add items from Taobao.com and Tmall.com to taobao agent : bhiner.com",
  "icons": {
    "38": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/jquery.js",
      "js/bg.js"
    ]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "sessions",
    "tabs",
    "contextMenus",
    "storage",
    "*://item.taobao.com/*",
    "*://detail.tmall.com/*",
    "*://*.yandex.net/*",
    "*://*.bhiner.com/*",
    "*://*.mmstat.com/*",
    "*://*.tmall.hk/*",
    "*://count.taobao.com/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Bhiner Taobao Tmall Shopping Assistant",
    "default_icon": "/images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://*.tmall.hk/*",
        "*://item.taobao.com/*",
        "*://s.taobao.com/search?q=*",
        "*://detail.tmall.com/*",
        "*://list.tmall.com/*",
        "*://world.taobao.com/item/*",
        "*://world.tmall.com/item/*",
        "*://world.taobao.com/search/*"
      ],
      "css": [
        "css/style.css",
        "css/scrollbar.css"
      ],
      "js": [
        "js/jquery.js",
        "js/jquery.scrollbar.min.js",
        "js/animeList.js",
        "js/content.js",
        "js/kissy.1.4.8.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
