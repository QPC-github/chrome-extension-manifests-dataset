{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "How To Make Money Online",
  "description": "Start making millions online. Get one great advice each day.",
  "version": "1.4",
  "permissions": [
    "idle",
    "storage",
    "notifications",
    "alarms",
    "background"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; connect-src 'self' http://www.vanillapig.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "How To Make Money Online!"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    "icon-48.png"
  ]
}
