{
  "browser_action": {
    "default_icon": "bcicon32.png",
    "default_popup": "popup.html",
    "default_title": "CaVirtex Bitcoin Helper"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Keep track of current CaVirtex bitcoin prices.  Calculate the optimal price to use up your CAD.",
  "background": {
    "scripts": [
      "jquery.js",
      "bitcoin.js"
    ]
  },
  "name": "CaVirtex Bitcoin Helper",
  "permissions": [
    "https://www.cavirtex.com/*",
    "storage"
  ],
  "icons": {
    "48": "bcicon48.png",
    "128": "bcicon128.png",
    "32": "bcicon32.png",
    "16": "bcicon16.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "version": "0.0.4"
}
