{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "AgriSync Screenshare",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "AgriSync Screenshare",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0.1",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in AgriSync Web Application.",
  "externally_connectable": {
    "matches": [
      "*://app.agrisync.com/*",
      "*://wa-ags-stage.azurewebsites.net/*",
      "*://dt-video.azurewebsites.net/*",
      "*://wa-ags-devel.azurewebsites.net/*"
    ]
  },
  "icons": {
    "128": "128w.png",
    "16": "16w.png",
    "48": "48w.png"
  },
  "browser_action": {
    "default_icon": "16w.png"
  }
}
