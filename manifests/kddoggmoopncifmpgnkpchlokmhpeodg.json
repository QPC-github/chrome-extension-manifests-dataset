{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Conectar Screen Sharing",
  "version": "1.2",
  "description": "Extension needed to enable screen sharing in Conectar Classroom",
  "manifest_version": 2,
  "icons": {
    "96": "conectar.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://conectar.ru/*",
        "*://*.conectar.ru/*",
        "*://conectar.io/*",
        "*://*.conectar.io/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "desktopCapture",
    "tabCapture"
  ]
}
