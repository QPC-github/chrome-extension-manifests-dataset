{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GuideBuddy Editor",
  "description": "Real-time Guidance for Users to Learn an Application as they work.",
  "version": "1.0.4",
  "background": {
    "scripts": [
      "assets/js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "assets/img/16.png",
    "48": "assets/img/48.png",
    "128": "assets/img/128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Guide Buddy"
  },
  "web_accessible_resources": [
    "assets/js/*",
    "assets/img/*",
    "assets/css/gb.css",
    "guidebuilder.html",
    "login.html",
    "guidesteps.html"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.guidebuddy.com; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/js/broker.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ]
}
