{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Merge Chrome Windows",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Merge multiple chrome windows with multiple tabs.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Merge windows"
  },
  "permissions": [
    "tabs",
    "commands"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+M",
        "mac": "Alt+Shift+M",
        "chromeos": "Alt+Shift+M",
        "linux": "Alt+Shift+M"
      }
    }
  }
}
