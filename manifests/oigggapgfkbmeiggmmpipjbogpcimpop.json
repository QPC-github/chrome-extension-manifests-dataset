{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fresh Flower",
  "short_name": "Fresh Flower",
  "description": "Reflow tabs periodically if their titles match certain text. Tabs that are still flowing will not be affected.",
  "version": "1.1",
  "background": {
    "scripts": [
      "lib/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "data/icon19.png"
  },
  "icons": {
    "16": "data/icon16.png",
    "19": "data/icon19.png",
    "32": "data/icon32.png",
    "38": "data/icon38.png",
    "48": "data/icon48.png",
    "64": "data/icon64.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "alarms"
  ]
}
