{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Currency Alerts",
  "description": "This extension notify user of current Bitcoin, Ripple, Litcoin, Etherium rate. Also he can set realtime alerts",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-3.2.1.min.js",
      "popup.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://www.cvowl.com/koinex"
  ]
}
