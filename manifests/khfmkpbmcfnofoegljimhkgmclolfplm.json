{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NBATV block score",
  "version": "0.1",
  "manifest_version": 2,
  "description": "block scores for your favorite teams",
  "background": {
    "scripts": [
      "background.js",
      "jquery.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "calculator-16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://watch.nba.com/*",
        "https://watch.nba.com/*"
      ],
      "css": [
        "style.css",
        "jquery-ui.min.css",
        "jquery-ui.theme.min.css"
      ],
      "js": [
        "jquery.min.js",
        "script.js",
        "jquery-ui.min.js"
      ]
    }
  ]
}
