{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mobile2Desktop - Wikipedia",
  "description": "Redirect mobile wikipedia links to desktop links",
  "version": "1.0",
  "icons": {
    "16": "logo_16.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
  },
  "permissions": [
    "webRequest",
    "tabs"
  ],
  "page_action": {
    "default_icon": {
      "38": "logo_48.png"
    },
    "default_title": "Wikipedia M2D"
  },
  "background": {
    "scripts": [
      "events.js"
    ]
  }
}
