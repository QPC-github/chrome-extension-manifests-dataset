{
  "name": "Pulse.ng Extension for Chrome",
  "description": "Monitor the latest posts from Nigerian Entertainment, Movie, Music and Fashion News website, Pulse.ng",
  "browser_action": {
    "default_icon": {
      "128": "icon_128.png"
    },
    "default_title": "Pulse.ng Latest Posts",
    "default_popup": "pulse.html"
  },
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "version": "0.2"
}
