{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Brevity",
  "description": "Summarizes long webpages",
  "version": "2.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "options_page": "templates/options.html",
  "background": {
    "scripts": [
      "js/eventPage.js"
    ],
    "ersistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "tabs"
  ]
}
