{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QuoteIt",
  "version": "0.0.7",
  "manifest_version": 2,
  "description": "Save only what you want while you browse the web",
  "homepage_url": "http://quoteitapp.com",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://connect.facebook.net; object-src 'self'",
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "http://*.facebook.com/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png"
    },
    "default_title": "QuoteIt",
    "default_popup": "popup.html"
  }
}
