{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pixiv Downloader",
  "version": "1.2.10.97",
  "description": "__MSG_extentionDescription__",
  "options_page": "options.html",
  "manifest_version": 2,
  "default_locale": "ja",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "js": [
        "jq.js",
        "sh.js",
        "return.js"
      ],
      "matches": [
        "http://*.pixiv.net/*",
        "https://*.pixiv.net/*"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/app16.png",
    "19": "icons/app19.png",
    "32": "icons/app32.png",
    "38": "icons/app38.png",
    "48": "icons/app48.png",
    "64": "icons/app64.png",
    "128": "icons/app128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/app19.png",
      "38": "icons/app38.png"
    },
    "default_title": "Pixiv Downloader"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "downloads",
    "http://*.pixiv.net/",
    "https://*.pixiv.net/",
    "http://*.pximg.net/",
    "https://*.pximg.net/",
    "http://orca-soft.net/",
    "https://orca-soft.net/"
  ],
  "optional_permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "http://*.pixiv.net/",
    "https://*.pixiv.net/",
    "http://*.pximg.net/",
    "https://*.pximg.net/",
    "http://orca-soft.net/",
    "https://orca-soft.net/"
  ],
  "content_security_policy": "default-src 'self'; img-src 'self' http://* https://* data:; script-src 'self'; style-src 'self' http://* https://* data: 'unsafe-inline'; connect-src 'self' http://* https://*; frame-src 'self' http://* https://*;  font-src data:",
  "web_accessible_resources": [
    "jq.js",
    "sh.js",
    "style.css",
    "options.html",
    "downloaded.png",
    "update_icon.png",
    "loading.svg"
  ]
}
