{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bookmarks History",
  "description": "Chrome extension which keeps track of all the changes you made to your bookmarks",
  "version": "0.1.0",
  "homepage_url": "https://github.com/vladimir-tikhonov/bookmarks_history#readme",
  "permissions": [
    "bookmarks",
    "storage",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/favicon16.png",
      "32": "icons/favicon32.png",
      "48": "icons/favicon48.png",
      "128": "icons/favicon128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
