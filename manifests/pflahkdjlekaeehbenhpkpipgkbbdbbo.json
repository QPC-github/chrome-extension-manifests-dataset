{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "wmap",
  "short_name": "wmapscanner",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "wmap is a mass web screenshot tool for mapping web networks.",
  "homepage_url": "https://thehackerblog.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/index.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ]
}
