{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "RemoteTeachers Screen Share",
  "description": "A Screen Sharing extension for RemoteTeachersMeet demo",
  "version": "0.1.7",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meet.remoteteachers.com/*"
    ]
  }
}
