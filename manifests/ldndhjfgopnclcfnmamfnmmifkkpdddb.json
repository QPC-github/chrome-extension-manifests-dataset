{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Meaty Social Politics",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Meaty Social Politics replaces instances of 'Romney', 'Obama', 'Debate' and 'Election' with random paragraphs from Bacon Ipsum.",
  "browser_action": {
    "name": "Meaty Social Politics",
    "icons": "Bacon-icon.png",
    "default_icon": "Bacon-icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "jquery-1.8.2.min.js",
        "msp.js"
      ],
      "matches": [
        "*://*.facebook.com/*"
      ]
    }
  ],
  "permissions": [
    "*://baconipsum.com/*"
  ]
}
