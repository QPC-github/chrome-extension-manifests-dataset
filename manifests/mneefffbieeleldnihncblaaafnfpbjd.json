{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lesson aLIVE - Screen Share",
  "description": "An extension to allow you to use Twilio Video screen sharing locally.",
  "version": "1.0.3",
  "manifest_version": 2,
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://www.lessonalive.com/*",
      "*://www.tiuconsulting.com/*",
      "*://localhost/*"
    ]
  }
}
