{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WT:FiM",
  "description": "WarThunder: Forum is Magic",
  "version": "1.0",
  "icons": {
    "128": "resources/img/cupcake.png"
  },
  "browser_action": {
    "default_icon": "resources/img/cupcake.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://forum.warthunder.ru/*"
      ],
      "js": [
        "jquery-2.1.3.min.js",
        "owls_script.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "resources/img/cupcake.png",
    "resources/img/cup-ico.png",
    "resources/img/hay.png"
  ]
}
