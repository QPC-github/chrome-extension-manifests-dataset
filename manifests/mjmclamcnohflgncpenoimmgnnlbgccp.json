{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WikiSofia Copyvio Search Extension",
  "short_name": "WSofPlagiCheck",
  "description": "Extension that simplifies the search of text sources used on the project WikiSofia.cz",
  "version": "0.0.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "permissions": [
    "tabs",
    "http://www.wikisofia.cz/*",
    "http://wikisofia.cz/*",
    "https://www.wikisofia.cz/*",
    "https://wikisofia.cz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.wikisofia.cz/*",
        "http://wikisofia.cz/*",
        "https://www.wikisofia.cz/*",
        "https://wikisofia.cz/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "eventPage.js"
    ]
  }
}
