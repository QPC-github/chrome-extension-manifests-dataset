{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ThevangTV",
  "version": "1.0.3",
  "description": "Cung cấp lịch, diễn biến và phát trận đấu",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "activeTab",
    "https://*.thevang.info/",
    "https://*.googletagmanager.com/"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.thevang.com/*",
      "*://*.thevang.tv/*"
    ]
  },
  "browser_action": {
    "default_title": "Thevang",
    "default_icon": "icon/128.png",
    "default_popup": "thevang.html"
  },
  "manifest_version": 2
}
