{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bestiaire Draft Enhancer",
  "version": "1.0.0",
  "author": {
    "name": "Daan Broekhof",
    "email": "daan.broekhof@gmail.com"
  },
  "manifest_version": 2,
  "description": "Enhances the deck-building features of draft.bestiaire.org with casting-cost sorting, easier selecting. Loads data from mtgjson.com.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://draft.bestiaire.org/build.php"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/jquery/jquery.min.js",
    "js/bestiary-deck.js",
    "icons/0mana-16.png",
    "icons/1mana-16.png",
    "icons/2mana-16.png",
    "icons/3mana-16.png",
    "icons/4mana-16.png",
    "icons/5mana-16.png",
    "icons/6mana-16.png",
    "icons/xmana-16.png"
  ],
  "permissions": [
    "http://mtgjson.com/"
  ]
}
