{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pure YouTube GUI",
  "description": "Pure GUI",
  "version": "1.0",
  "background": {
    "scripts": [
      "pure.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*",
        "http://*.youtube.nl/*",
        "https://*.youtube.nl/*",
        "http://*.youtu.be/*",
        "https://*.youtu.be/*"
      ],
      "css": [
        "pure.css"
      ],
      "js": [
        "pure.js"
      ]
    }
  ],
  "permissions": [
    "http://*.youtube.com/*",
    "https://*.youtube.com/*",
    "http://*.youtube.nl/*",
    "https://*.youtube.nl/*",
    "http://*.youtu.be/*",
    "https://*.youtu.be/*"
  ]
}
