{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NodeBB Notifier",
  "version": "0.0.8",
  "description": "Displays notifications for NodeBB forums",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "NodeBB notifications",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "manifest_version": 2
}
