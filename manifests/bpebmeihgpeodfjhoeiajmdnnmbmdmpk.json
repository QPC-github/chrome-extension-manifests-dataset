{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Chevroulet Meeting Extension",
  "description": "A simple extension that allows you to stream your desktop into meetings with Chevroulet Conferencing System and Rocket.Chat Web.",
  "version": "0.1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "chevroulet-logo-16x16.png",
    "48": "chevroulet-logo-48x48.png",
    "128": "chevroulet-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://meeting.chevroulet.ch/*"
    ]
  }
}
