{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Dr. Home",
  "version": "0.90",
  "manifest_version": 2,
  "description": "__MSG_manifest_description__",
  "icons": {
    "16": "drchrome16.png",
    "48": "drchrome48.png",
    "128": "drchrome128.png"
  },
  "browser_action": {
    "default_title": "Dr. Home",
    "default_icon": {
      "19": "drchrome19.png",
      "38": "drchrome38.png"
    }
  },
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "management"
  ],
  "optional_permissions": [
    "file://*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "drchrome.html",
    "chrome.ico",
    "permiso.png",
    "drchrome128.png",
    "ok.png",
    "advertencia.jpg"
  ],
  "default_locale": "es"
}
