{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Click Mega Sena",
  "short_name": "MEGA-SENA",
  "description": "Acompanhe os Resultados da Mega Sena com apenas um clique. Simples assim!",
  "version": "3.1",
  "icons": {
    "128": "/assets/img/icon128.png",
    "48": "/assets/img/icon48.png",
    "16": "/assets/img/icon16.png"
  },
  "browser_action": {
    "default_icon": "/assets/img/icon48.png",
    "default_title": "Clique para exibir o Resultado Mega Sena.",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "http://www1.caixa.gov.br/",
    "storage"
  ]
}
