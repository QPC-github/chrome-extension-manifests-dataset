{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "WebVR API Emulation",
  "short_name": "WebVR Emu",
  "version": "1.1.4",
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "description": "WebVR API Emulation",
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "polyfill.js",
        "content-script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {},
    "default_title": "WebVR"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "polyfill.js"
  ]
}
