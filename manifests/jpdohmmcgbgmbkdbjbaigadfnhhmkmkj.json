{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "聚观点",
  "description": "快速设置关键词，不间断过滤微博，搜索结果实时推送。",
  "version": "1.0.0.7",
  "background": {
    "page": "back.htm"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "聚观点",
    "default_popup": "popup.htm",
    "default_icon": "icon19.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
