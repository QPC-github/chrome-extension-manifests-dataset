{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screen Sharing for Microcoaching",
  "author": "microcoaching.net",
  "version": "5.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Capture and share your screen (or any window you want) with your coach on microcoaching.net",
  "homepage_url": "https://microcoaching.net",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "https://microcoaching.net/*",
        "https://*.microcoaching.net/*",
        "http://*.microcoaching.net/*"
      ]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
