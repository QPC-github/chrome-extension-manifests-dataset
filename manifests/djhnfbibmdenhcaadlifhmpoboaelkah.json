{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Please stand up",
  "description": "Reminds you to stand up and strech once in a while",
  "version": "1.0.2",
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Please stand up",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "standup.png",
    "32": "standup.png",
    "48": "standup.png",
    "128": "standup.png"
  }
}
