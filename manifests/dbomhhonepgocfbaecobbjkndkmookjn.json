{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tabs Timer",
  "description": "Tab overdose? Tabs Timer allows users to configure a countdown timer after which tabs are automatically closed.",
  "version": "1.2",
  "author": "Andrei Dvornic",
  "icons": {
    "16": "img/on128.png",
    "48": "img/on128.png",
    "128": "img/on128.png"
  },
  "browser_action": {
    "default_icon": "img/off128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "html/options.html",
  "short_name": "Tabs Timer",
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
