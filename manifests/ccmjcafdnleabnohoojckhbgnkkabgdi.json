{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bit Poetry",
  "manifest_version": 2,
  "version": "1",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Write Poem",
    "default_icon": "images/poet.png"
  }
}
