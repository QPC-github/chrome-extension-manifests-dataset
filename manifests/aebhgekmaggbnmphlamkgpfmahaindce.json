{
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/icon_19.png",
    "default_popup": "popup.html",
    "default_title": "食品安全助手"
  },
  "content_scripts": [
    {
      "js": [
        "loader.js"
      ],
      "matches": [
        "http://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "当您网购食品时，若遭遇问题食品，小助手将自动弹窗预警，为您的健康饮食保驾护航。【即刻出品】",
  "icons": {
    "128": "images/icon_128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "18",
  "name": "食品安全助手",
  "permissions": [
    "tabs",
    "http://*/*",
    "notifications"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.1"
}
