{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SKYWAY ScreenShare",
  "short_name": "SSS",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "scrennshare on chrome",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "https://*.example.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://hakuho-nihongo.net/"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
