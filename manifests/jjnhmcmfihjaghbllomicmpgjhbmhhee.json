{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Inbox Simple Unread Count",
  "version": "1.0.3",
  "description": "Update the Inbox favicon with a count of unread messages",
  "icons": {
    "32": "images/m1.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "matches": [
      "*://inbox.google.com/*"
    ],
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "https://inbox.google.com/*"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "content.js"
  ]
}
