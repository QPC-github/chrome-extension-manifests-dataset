{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reload All Tabs with URL",
  "version": "1.1",
  "description": "Reload all tabs that have a specific URL",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "browser_action": {},
  "icons": {
    "128": "red128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+R",
        "mac": "MacCtrl+R",
        "chromeos": "Alt+R",
        "linux": "Alt+R"
      }
    }
  }
}
