{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Snapshot",
  "description": "A screen capture and annotation tool",
  "version": "1.0",
  "icons": {
    "16": "icons/camera16.png",
    "48": "icons/camera48.png",
    "128": "icons/camera128.png"
  },
  "browser_action": {
    "default_title": "make a screenshot"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
