{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pocket Count",
  "description": "Displays a count of unread Pocket items.",
  "version": "0.2",
  "permissions": [
    "https://getpocket.com/*",
    "identity",
    "storage",
    "alarms",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "jquery-2.1.1.min.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "icon-16x16.png"
  },
  "browser_action": {
    "default_icon": "icon-disabled.png",
    "default_popup": "menu.html"
  }
}
