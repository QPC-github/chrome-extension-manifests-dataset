{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Copy URL",
  "description": "Copies the website URL - saves a bit of effort.",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "button19.png",
      "38": "button38.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
