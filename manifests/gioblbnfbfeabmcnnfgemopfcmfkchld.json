{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KredsWallet Light-Client",
  "short_name": "KredsWallet",
  "description": "A limited KredsWallet client which can only view wallet summary information",
  "author": "KredsBlockchain.com",
  "version": "1.2",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/img/icon48.png",
      "38": "assets/img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "assets/img/icon128.png"
  ]
}
