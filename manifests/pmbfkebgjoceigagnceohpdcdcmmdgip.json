{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Free News Reading",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension allows you to read news articles without the need of paid subscription.",
  "homepage_url": "http://google.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "cookies",
    "tabs",
    "webNavigation",
    "http://*.capital.bg/*",
    "https://*.capital.bg/*",
    "http://capital.bg/*",
    "https://capital.bg/*"
  ],
  "background": {
    "scripts": [
      "src/script.js"
    ],
    "persistent": false
  }
}
