{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.0",
  "manifest_version": 2,
  "short_name": "media-tools",
  "name": "Media Tools: Convert, Split & Extract",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "web_accessible_resources": [
    "data/UI/icons/loader.gif"
  ],
  "homepage_url": "http://mybrowseraddon.com/media-tools.html",
  "permissions": [
    "storage",
    "downloads",
    "nativeMessaging"
  ],
  "description": "Manipulate media files (video & audio) via FFmpeg commands right in your browser.",
  "browser_action": {
    "default_title": "Media Tools: Convert, Split & Extract",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
