{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Live Presence Indication",
  "description": "This extension shows if other people are looking at the same content as you.",
  "version": "1.0",
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "index.js"
      ],
      "matches": [
        "*://*.amazon.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
