{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HyperRead for Chrome",
  "short_name": "HyperRead",
  "description": "HyperRead web pages in Chrome",
  "author": "Alejandro J. Kwiatkowski",
  "version": "0.6.0",
  "icons": {
    "16": "HyperRead.16.png",
    "48": "HyperRead.48.png",
    "128": "HyperRead.128.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  },
  "browser_action": {
    "default_icon": {
      "19": "HyperRead.19.png",
      "38": "HyperRead.38.png"
    },
    "default_title": "HyperRead",
    "default_popup": "PopUp.html"
  }
}
