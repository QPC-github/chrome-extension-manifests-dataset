{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Microsurf",
  "version": "2.0.1",
  "description": "__MSG_ms_description__",
  "icons": {
    "48": "images/ms48.png",
    "128": "images/ms128.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "content.js",
        "common.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "<all_urls>",
    "tts"
  ],
  "default_locale": "en"
}
