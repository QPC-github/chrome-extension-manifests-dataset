{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Steam Account Protection",
  "version": "3.4.0",
  "manifest_version": 2,
  "description": "Help protect your Steam Account",
  "background": {
    "scripts": [
      "main/background.js"
    ]
  },
  "icons": {
    "512": "img/sap_512.png"
  },
  "content_scripts": [
    {
      "js": [
        "main/helpers/utilities.js",
        "main/helpers/storage.js",
        "main/helpers/steam.js",
        "main/helpers/overlay.js",
        "main/trade_window.js",
        "main/profile.js",
        "main/helpers/html_effects.js",
        "main/helpers/profile_scanner.js",
        "main/api.js",
        "html/html_elements.js",
        "main/main.js"
      ],
      "matches": [
        "https://steamcommunity.com/dev/apikey",
        "https://steamcommunity.com/profiles/*",
        "https://steamcommunity.com/id/*",
        "https://steamcommunity.com/tradeoffer/*",
        "https://backpack.tf/api/IGetUsers/v3",
        "https://backpack.tf/api/IGetUsers/GetImpersonatedUsers",
        "https://marketplace.tf/api/Bots/GetBots/v2",
        "https://mannco.store/bots",
        "https://steamrep.com/api/beta4/reputation/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "img/*.png",
    "html/*"
  ],
  "browser_action": {
    "default_icon": "img/sap_bad.png"
  }
}
