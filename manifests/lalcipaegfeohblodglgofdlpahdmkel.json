{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Betty - Fix Google Image Search",
  "short_name": "Betty",
  "description": "Redirects you to Bing Image Search from Google after they removed the view image button.",
  "version": "1.0",
  "icons": {
    "16": "betty-16.png",
    "48": "betty-48.png",
    "128": "betty-128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "content.js"
    ]
  },
  "permissions": [
    "webRequest",
    "*://www.google.co.uk/search*tbm*=isch*",
    "webRequestBlocking"
  ]
}
