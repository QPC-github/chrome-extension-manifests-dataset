{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MuaChina.com",
  "description": "Cho phép bạn đặt hàng, nhận báo giá trực tuyến tại các website thương mại điện tử như 1688, tmall, taobao, aliexpress, ...",
  "version": "3.5.3",
  "icons": {
    "16": "data/icon/logo_16.png",
    "48": "data/icon/logo_48.png",
    "128": "data/icon/logo_128.png"
  },
  "author": "MuaChina",
  "background": {
    "scripts": [
      "data/js/conf/config.js"
    ]
  },
  "browser_action": {
    "default_icon": "data/icon/logo_128.png",
    "default_popup": "data/index.html",
    "default_title": "MuaChina"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "js": [
        "data/js/plugin/jquery/jquery.min.js",
        "data/js/plugin/jquery/jquery.cookie.js",
        "data/js/plugin/utils/textutils.js",
        "data/js/conf/config.js",
        "data/js/conf/action.js",
        "lib/chrome.js"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*",
        "http://*.1688.com/*",
        "https://*.1688.com/*",
        "http://*.jd.com/*",
        "http://*.amazon.cn/*",
        "https://*.amazon.cn/*",
        "http://*.aliexpress.com/*",
        "https://*.aliexpress.com/*",
        "http://*.alibaba.com/*",
        "https://*.alibaba.com/*",
        "http://*.orderaau.com/*",
        "https://*.orderaau.com/*",
        "http://*.muachina.com/*",
        "https://*.muachina.com/*"
      ]
    },
    {
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*"
      ],
      "js": [
        "data/js/bin/taobao.js"
      ]
    },
    {
      "matches": [
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*"
      ],
      "js": [
        "data/js/bin/tmall.js"
      ]
    },
    {
      "matches": [
        "http://*.1688.com/*",
        "https://*.1688.com/*"
      ],
      "js": [
        "data/js/bin/web1688.js"
      ]
    },
    {
      "matches": [
        "http://*.jd.com/*",
        "http://jd.com/*"
      ],
      "js": [
        "data/js/bin/jd.js"
      ]
    },
    {
      "matches": [
        "http://*.amazon.cn/*",
        "https://*.amazon.cn/*"
      ],
      "js": [
        "data/js/bin/amazoncn.js"
      ]
    },
    {
      "matches": [
        "http://*.aliexpress.com/*",
        "https://*.aliexpress.com/*"
      ],
      "js": [
        "data/js/bin/aliexpress.js"
      ]
    },
    {
      "matches": [
        "http://*.alibaba.com/*",
        "https://*.alibaba.com/*"
      ],
      "js": [
        "data/js/bin/alibaba.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
