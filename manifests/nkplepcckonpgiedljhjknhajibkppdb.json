{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
    "128": "img/icon128.png",
    "24": "img/icon24.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": "img/icon24.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://mynewtabs.com/*"
      ],
      "js": [
        "js/newtab.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "topSites",
    "https://mynewtabs.com/",
    "https://search.yahoo.com/*",
    "https://at.search.yahoo.com/*",
    "https://be.search.yahoo.com/*",
    "https://br.search.yahoo.com/*",
    "https://ca.search.yahoo.com/*",
    "https://ch.search.yahoo.com/*",
    "https://dk.search.yahoo.com/*",
    "https://es.search.yahoo.com/*",
    "https://us.search.yahoo.com/*",
    "https://uk.search.yahoo.com/*",
    "https://de.search.yahoo.com/*",
    "https://fr.search.yahoo.com/*",
    "https://it.search.yahoo.com/*",
    "https://in.search.yahoo.com/*",
    "https://no.search.yahoo.com/*",
    "https://nl.search.yahoo.com/*",
    "https://se.search.yahoo.com/*",
    "https://fi.search.yahoo.com/*",
    "https://www.bing.com/*",
    "https://www.google.com/*",
    "https://www.google.at/*",
    "https://www.google.fr/*",
    "https://www.google.be/*",
    "https://www.google.it/*",
    "https://www.google.dk/*",
    "https://www.google.co.in/*",
    "https://www.google.co.uk/*",
    "https://www.google.pt/*",
    "https://www.google.ca/*",
    "https://www.google.nl/*",
    "https://www.google.no/*",
    "https://www.google.es/*",
    "https://www.google.se/*",
    "https://www.google.de/*"
  ]
}
