{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0.46",
  "name": "Apollo.io: Email Finder and Open Tracker",
  "manifest_version": 2,
  "description": "Find email addresses, phone numbers, and research from anywhere on the web. Also see when people open and click on your emails.",
  "browser_action": {
    "default_title": "Apollo"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "*://mail.google.com/*",
    "*://*.linkedin.com/*",
    "*://*.salesforce.com/*",
    "*://*.force.com/*",
    "*://*.apollo.io/*",
    "notifications",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "loading.html",
    "panel.html",
    "window_v2.html",
    "img/*",
    "fonts/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://www.apollo.io/*",
      "https://beta.apollo.io/*",
      "https://app.apollo.io/*"
    ]
  }
}
