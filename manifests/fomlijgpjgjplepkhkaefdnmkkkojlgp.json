{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "EdSoft Screen Sharing Extension",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "EdSoft WebRTC Screen Sharing",
  "version": "1.9",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "EdSoft Screen Sharing Extension",
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://room.edsoft.us/*",
      "*://dev-room.edsoft.us/*"
    ]
  },
  "icons": {
    "128": "screen-sharing-128.png",
    "16": "screen-sharing-16.png",
    "48": "screen-sharing-48.png"
  },
  "page_action": {
    "default_icon": {
      "128": "screen-sharing-128.png",
      "16": "screen-sharing-16.png",
      "48": "screen-sharing-48.png"
    }
  }
}
