{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Play Store App Short Description Viewer",
  "description": "View Short Description of app in Google Play",
  "author": "ASODigger.com",
  "version": "0.3.5",
  "permissions": [],
  "page_action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://play.google.com/store/apps/details*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}
