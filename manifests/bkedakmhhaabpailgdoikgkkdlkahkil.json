{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Jenkins Web Assistant",
  "description": "Adaptive interface assistant for Chrome. Can be manually configured or granted access to recognise browsing patterns.",
  "version": "0.9",
  "version_name": "ALPHA (in Development) 0.9",
  "browser_action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "38": "images/38.png",
      "19": "images/19.png"
    }
  },
  "options_ui": {
    "page": "src/html/options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "src/js/DOMReader.js"
      ],
      "matches": [
        "*://*/*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/js/DOMReader.js"
  ],
  "icons": {
    "128": "images/128.png",
    "64": "images/64.png",
    "38": "images/38.png",
    "19": "images/19.png"
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "notifications",
    "activeTab",
    "tabs",
    "bookmarks",
    "browsingData",
    "identity",
    "topSites",
    "history",
    "*://*/*",
    "http://*/*",
    "https://*/*"
  ]
}
