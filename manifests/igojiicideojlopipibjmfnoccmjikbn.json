{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "name": "Badge Checker for Gmailâ„¢",
  "short_name": "badge-checker-for-gmail",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "permissions": [
    "*://mail.google.com/*",
    "storage",
    "alarms"
  ],
  "homepage_url": "http://mybrowseraddon.com/badge-checker-for-gmail.html",
  "options_ui": {
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "description": "Shows badge notification for unread emails (supports multi-account)",
  "browser_action": {
    "default_title": "Badge Checker for Gmail",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_start",
      "matches": [
        "*://*.mail.google.com/*"
      ],
      "js": [
        "data/content_script/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
