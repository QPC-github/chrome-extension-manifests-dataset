{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.1.2",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "zh_CN",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://www.wepost.com.my",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.min.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "oneclick.min.js"
      ],
      "css": [
        "oneclick.min.css"
      ],
      "matches": [
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://*.1688.com/*",
        "*://*.xiaomiyoupin.com/*",
        "*://*.jd.com/*",
        "*://*.meilishuo.com/*",
        "*://*.liwushuo.com/*",
        "*://*.handu.com/*",
        "*://*.vancl.com/*",
        "*://*.dangdang.com/*",
        "*://*.amazon.cn/*",
        "*://*.vip.com/*",
        "*://*.suning.com/*"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "https://www.wepost.com.my/"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  }
}
