{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Trello Sum",
  "short_name": "Trello Sum",
  "description": "Sum card costs in your Trello board",
  "version": "1.0.2",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "js": [
        "myScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "script.js"
  ],
  "icons": {
    "128": "icon_128.png"
  }
}
