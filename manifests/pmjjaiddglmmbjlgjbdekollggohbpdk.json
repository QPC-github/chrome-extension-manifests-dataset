{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "64 Bit Gamers Sharing",
  "short_name": "64-bit-screen",
  "author": "Jim Furnier",
  "version": "1.1",
  "manifest_version": 2,
  "minimum_chrome_version": "40",
  "description": "This Chrome extension is used for sharing your gaming content from your screen.",
  "homepage_url": "http://www.64bitgamers.com/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.64bitgamers.com/*",
      "https://*.gamers.jim/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
