{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.8",
  "default_locale": "zh_CN",
  "icons": {
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser_action/icon19.png",
      "38": "images/browser_action/icon38.png"
    },
    "default_title": "Bomoda"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*"
  ]
}
