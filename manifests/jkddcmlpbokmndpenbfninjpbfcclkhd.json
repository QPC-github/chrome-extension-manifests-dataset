{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "站长书签",
  "description": "这是一款专为站长朋友量身打造的网址收藏工具",
  "version": "1.0.0",
  "icons": {
    "48": "images/icon-48.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "cookies",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "收藏到站长书签"
  }
}
