{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Clackshare",
  "version": "1.0.1",
  "description": "Generate a public link to share a facebook chat conversation",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "tabs",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "Clackshare"
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
