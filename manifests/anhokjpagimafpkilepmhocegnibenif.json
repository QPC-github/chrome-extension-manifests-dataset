{
  "author": "Dhruv Gupta",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "css": [
        "data/content_script/inject.css"
      ],
      "js": [
        "data/content_script/inject.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Screencapta is an easy-to-use screen capturing tool from right-click context menu.",
  "icons": {
    "128": "data/icons/128.png",
    "16": "data/icons/16.png",
    "48": "data/icons/48.png"
  },
  "manifest_version": 2,
  "name": "Screencapta",
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "short_name": "dhruvii",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.2",
  "web_accessible_resources": []
}
