{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pipocas.TV",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Pipocas.TV - Site de Legendas em Português para filmes, series tv e documentários!",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://pipocas.tv/index.php/*",
    "http://pipocas.tv/index.php/shout.php"
  ],
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": true
  }
}
