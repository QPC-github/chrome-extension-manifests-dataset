{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BreakFriday",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Encontre os melhores preços, nas maiores lojas do Brasil!",
  "browser_action": {
    "default_icon": "img/ofertou-logo-blue.png",
    "default_title": "BreakFriday Ofertou - O Seu Radar de Preços",
    "default_popup": "init.html"
  },
  "icons": {
    "19": "img/ofertou-logo-blue.png",
    "48": "img/ofertou-logo-blue.png",
    "128": "img/ofertou-logo-blue.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' object-src 'self' self' 'unsafe-inline' blackfriday.ofertou.com"
}
