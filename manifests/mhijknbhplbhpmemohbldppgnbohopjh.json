{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bias Tracker",
  "description": "This extension tracks the biases of news websites you visit and maintains an aggregate score for you.",
  "version": "2.0",
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "permissions": [
    "https://bias-tracker.herokuapp.com/",
    "activeTab",
    "tabs",
    "identity",
    "storage"
  ],
  "browser_action": {
    "defaultIcon": {
      "128": "5-128.png"
    },
    "default_popup": "drop_down.html"
  },
  "icons": {
    "128": "5-128.png"
  }
}
