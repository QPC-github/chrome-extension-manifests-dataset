{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Honbu",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The easiest way to share news, ideas and knowledge. Ask questions and spark conversations with your co-workers all in one place.",
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon-19.png",
      "16": "assets/images/icon-16.png",
      "32": "assets/images/icon-32.png",
      "48": "assets/images/icon-48.png",
      "128": "assets/images/icon-128.png"
    },
    "default_title": "Share with others",
    "default_popup": "main.html"
  },
  "icons": {
    "19": "assets/images/icon-19.png",
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "cookies",
    "<all_urls>",
    "http://*.app.lvh.me/*",
    "https://*.app.lvh.me/*"
  ]
}
