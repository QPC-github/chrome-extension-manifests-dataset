{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "万全云电商 - 采集助手",
  "description": "万全云电商产品采集器，用于采集敦煌、速卖通、亚马逊等平台产品",
  "version": "2.2.5",
  "permissions": [
    "activeTab",
    "cookies",
    "tabs",
    "alarms",
    "*://*.51microshop.com/*",
    "*://*.ebaydesc.com/*",
    "*://*.dhgate.com/*",
    "webRequest",
    "declarativeContent"
  ],
  "icons": {
    "128": "images/ico.png",
    "16": "images/ico.png",
    "48": "images/ico.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "万全云电商采集助手",
    "default_popup": "popups/default.html",
    "default_icon": "images/ico.png"
  },
  "content_scripts": [
    {
      "css": [
        "assets/css/main.css"
      ],
      "js": [
        "assets/js/jquery.js",
        "assets/js/js.min.js"
      ],
      "matches": [
        "https://*.aliexpress.com/*",
        "https://*.amazon.com/*",
        "https://*.dhgate.com/*",
        "https://*.alibaba.com/*",
        "https://*.wish.com/*",
        "https://*.ebay.com/*",
        "https://*.bonanza.com/*",
        "https://*.etsy.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/addtolist.png",
    "images/icon-import-success.png",
    "images/icon-import-error.png",
    "images/icon-close.svg",
    "images/logo.png",
    "images/spinner.gif"
  ]
}
