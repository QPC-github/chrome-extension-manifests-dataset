{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Steam Community Redirect Bypass",
  "description": "Skips the link filter page when clicking a link in Steam chat",
  "version": "1.0.0.1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "steamfilter.js"
    ]
  },
  "permissions": [
    "*://*.steamcommunity.com/linkfilter/?url=*",
    "webRequest",
    "webRequestBlocking"
  ]
}
