{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "1.0",
  "description": "__MSG_appDescription__",
  "manifest_version": 2,
  "icons": {
    "256": "imgs/ft-logo.png",
    "128": "imgs/ft-logo@128.png",
    "64": "imgs/ft-logo@64.png",
    "32": "imgs/ft-logo@32.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "imgs/ft-logo.png",
    "default_title": "__MSG_appDescription__",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [],
  "default_locale": "en"
}
