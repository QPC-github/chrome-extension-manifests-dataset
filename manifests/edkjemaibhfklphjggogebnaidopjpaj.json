{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Ascribo PDF viewer extension.",
  "manifest_version": 2,
  "name": "ascribo",
  "version": "0.2",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "icons": {
    "48": "media/button-48.png"
  },
  "browser_action": {
    "default_title": "Ascribo",
    "default_icon": {
      "48": "media/button-48.png"
    },
    "browser_style": true,
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
