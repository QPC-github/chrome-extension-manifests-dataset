{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TurboTimer",
  "description": "Easy-to-use timer/stopwatch. Automatically display an alert or close tab on a timer and display timer across all tabs.",
  "offline_enabled": true,
  "version": "0.0.2.2",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Set a timer",
    "default_icon": {
      "16": "images/stop16.png",
      "32": "images/stop32.png",
      "48": "images/stop48.png",
      "128": "images/stop128.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "*.mp3"
  ],
  "icons": {
    "16": "images/stop16.png",
    "32": "images/stop32.png",
    "48": "images/stop48.png",
    "128": "images/stop128.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "optional_permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ]
}
