{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pond5 Visual Search",
  "description": "Pond5 extension for visual search",
  "version": "1.0.2",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "Icon-16.png",
      "32": "Icon-32.png",
      "48": "Icon-48.png",
      "64": "Icon-64.png",
      "96": "Icon-96.png",
      "128": "Icon-128.png"
    },
    "default_title": "Pond5 Visual Search"
  },
  "icons": {
    "16": "Icon-16.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "64": "Icon-64.png",
    "96": "Icon-96.png",
    "128": "Icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'none'",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+5",
        "mac": "Ctrl+Shift+5"
      },
      "description": "Pond5 Visual Search"
    }
  }
}
