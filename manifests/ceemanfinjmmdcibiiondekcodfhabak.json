{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Meld Screensharing Extension",
  "description": "Enables Screen Sharing for your Meld Virtual Meeting Space.",
  "version": "1.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "permissions": [
    "desktopCapture",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "options_page": "options.html"
}
