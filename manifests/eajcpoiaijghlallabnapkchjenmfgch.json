{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pivotal Tracker Notifier",
  "version": "0.0.8",
  "short_name": "ptnotifier",
  "icons": {
    "16": "img/icon_16x16.png",
    "48": "img/icon_48x48.png",
    "128": "img/icon_128x128.png"
  },
  "description": "Get notifications about stories in Pivotal Tracker.",
  "background": {
    "persistent": true,
    "scripts": [
      "js/shared.js",
      "js/jquery.min.js",
      "js/bootstrap.min.js",
      "background.js",
      "js/options.js"
    ]
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "minimum_chrome_version": "28.0.0.0",
  "manifest_version": 2,
  "options_page": "options.html"
}
