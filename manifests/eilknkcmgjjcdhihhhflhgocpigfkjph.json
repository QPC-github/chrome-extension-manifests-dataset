{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "__MSG_shortname__",
  "description": "__MSG_description__",
  "minimum_chrome_version": "30",
  "version": "0.0.0.1",
  "default_locale": "en",
  "offline_enabled": true,
  "icons": {
    "512": "/img/icon512.png",
    "256": "/img/icon256.png",
    "128": "/img/icon128.png",
    "64": "/img/icon64.png",
    "32": "/img/icon32.png",
    "16": "/img/icon16.png"
  },
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "app/module/map/mapView/mapView.html"
    ]
  },
  "permissions": [
    "notifications",
    "storage",
    "tts",
    "http://earthquake.usgs.gov/earthquakes/feed/*",
    "https://*.google.com/*",
    "https://*.googleapis.com/*",
    "https://*.gstatic.com/*"
  ]
}
