{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ad Colors Adviser",
  "description": "Ad Colors Adviser Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "main.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
