{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hibox Screensharing",
  "description": "Screensharing utility for Hibox videocalls",
  "version": "0.0.9",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
    "16": "hibox-16.png",
    "48": "hibox-48.png",
    "128": "hibox-128.png"
  },
  "permissions": [
    "desktopCapture",
    "https://*.hibox.co/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.hibox.co/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.hibox.co/*"
    ]
  }
}
