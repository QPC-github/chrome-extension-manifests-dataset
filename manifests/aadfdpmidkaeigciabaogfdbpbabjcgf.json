{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mentavio Video Screen sharing",
  "description": "An extension to allow you share screens on Mentavio platform.",
  "version": "0.3.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.mentavio.com/*",
      "*://*.mentavio.es/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
