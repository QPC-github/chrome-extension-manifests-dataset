{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Friends-Eliminator",
  "description": "Extension to escape facebook friends list spamming",
  "version": "1.0.7",
  "icons": {
    "48": "ffe.png"
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    "jquery.js",
    "popup.js",
    "facebook-script.js",
    "script.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "js": [
        "jquery.js",
        "script.js",
        "facebook-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "ffe.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery.js"
    ],
    "persistent": false
  }
}
