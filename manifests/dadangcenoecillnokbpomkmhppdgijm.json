{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Carouliker",
  "description": "Free, simple and secure Carousell Auto-like bot",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://carousell.com/*",
        "http://carousell.com/*"
      ],
      "js": [
        "jquery-2.2.4.min.js",
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Carouliker"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "*://*.carousell.com/*",
    "webRequestBlocking"
  ]
}
