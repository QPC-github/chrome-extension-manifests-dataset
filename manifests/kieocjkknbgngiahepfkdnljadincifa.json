{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CaveBonez",
  "version": "2.0.0.1",
  "icons": {
    "16": "icons/pro.png",
    "48": "icons/pro.png",
    "128": "icons/pro.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/pro.png",
    "popup": "game/index.html"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "tabs"
  ]
}
