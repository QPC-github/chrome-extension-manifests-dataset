{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Smartapp Screen Sharing",
  "author": "Awnsys Technologies Pte Ltd",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for http://awnsys.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://awnsys.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.awnpay.com/*",
      "https://*.awnsys.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
