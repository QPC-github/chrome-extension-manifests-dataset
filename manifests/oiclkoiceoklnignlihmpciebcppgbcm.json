{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Affilitizer",
  "version": "1.5.4",
  "description": "__MSG_extension_description__",
  "browser_specific_settings": {
    "gecko": {
      "id": "info@affilitizer.com"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://box.affilitizer.com/*",
    "webNavigation"
  ],
  "default_locale": "en",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "js/affilitizer.js",
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "popup.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "css/popup.css"
      ],
      "js": [
        "js/md5.js",
        "js/affilitizer.js",
        "js/popup-helper.js",
        "js/google_parser.js"
      ]
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/md5.js",
        "js/affilitizer.js",
        "js/affiliate_checker.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/inactive.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "manifest_version": 2
}
