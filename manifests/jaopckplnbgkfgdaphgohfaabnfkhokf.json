{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Validate",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Search across multiple locations on the web, in multiple tabs, to validate business ideas with one, single, search.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://www.iconspedia.com/",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "*://*.craigslist.org/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
