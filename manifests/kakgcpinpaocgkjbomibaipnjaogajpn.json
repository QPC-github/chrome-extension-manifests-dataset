{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CurlPic",
  "short_name": "CurlPic",
  "description": "This extension takes your current website HTML in Chrome, then sends it to CurlPic to be crawled for images.",
  "version": "0.0.0.1",
  "browser_action": {
    "default_icon": "square-curlpic1-extension.png",
    "default_popup": "popup.html",
    "default_title": "CurlPic"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
