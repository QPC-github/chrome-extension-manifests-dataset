{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Chris Rehfeld rehfeldchris@gmail.com",
  "name": "Controls for Instagram Videos",
  "short_name": "Ctrls4Insta",
  "description": "Adds video playback controls (seek bar, volume, play/pause, download video button) to Instagramâ„¢ Embedded Videos in web pages.",
  "version": "1.22",
  "extNameCode": "ic",
  "minimum_chrome_version": "41",
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "all_frames": true,
      "js": [
        "ic-script-injector.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "ic-background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "ic-main.js"
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/play-16x16.png",
    "48": "icons/play-48x48.png",
    "128": "icons/play-128x128.png"
  }
}
