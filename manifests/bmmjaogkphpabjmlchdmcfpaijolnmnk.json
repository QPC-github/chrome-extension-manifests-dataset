{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Vai Corinthians! Tema WhatsApp",
  "description": "Seu WhatsApp Web com a cara do Tim√£o!",
  "version": "1.0.3",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "tabs",
    "http://web.whatsapp.com/*",
    "https://web.whatsapp.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/ic_launcher_low.png"
    },
    "default_title": "Vai Corinthians!",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/ic_launcher_low.png",
    "128": "images/ic_launcher_low.png"
  },
  "web_accessible_resources": [
    "images/*",
    "audio/*"
  ]
}
