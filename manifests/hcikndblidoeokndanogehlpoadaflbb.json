{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GatedBox",
  "description": "Secure your brwosing excperiance",
  "version": "0.3",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "*://*/*",
    "storage",
    "tabs",
    "webRequest",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/sliding_win.css"
      ],
      "js": [
        "js/vendor/jquery.js",
        "js/sliding_win.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "htm/sliding_win_page.html"
  ],
  "browser_action": {
    "default_icon": "img/browser_btn.png",
    "default_popup": "htm/popup_page.html"
  }
}
