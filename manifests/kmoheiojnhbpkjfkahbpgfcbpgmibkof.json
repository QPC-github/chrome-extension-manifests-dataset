{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Toxblh Chat",
  "version": "1.0.6",
  "manifest_version": 2,
  "homepage_url": "http://toxblh.ru",
  "browser_action": {
    "default_title": "Открыть чат",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "notifications",
    "cookies",
    "http://toxblh.ru/chat/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "icon48.png"
  ],
  "icons": {
    "16": "icon16.ico",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
