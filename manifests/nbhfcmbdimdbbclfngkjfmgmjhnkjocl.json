{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "AliSave",
  "version": "3.1.4",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "http://*.alicdn.com/*",
    "https://*.alicdn.com/*",
    "https://*.alibaba.com/product-detail/*",
    "https://*.alibaba.com/product/*",
    "https://*.alibaba.com/suppliersubdomainalibabacom/product-detail/*",
    "https://*.aliexpress.com/item/*",
    "https://*.aliexpress.com/store/product/*",
    "https://*.aliexpress.com/i/*",
    "https://*.aliexpress.ru/item/*",
    "https://*.aliexpress.ru/store/product/*",
    "https://*.aliexpress.ru/i/*",
    "https://cloud.video.taobao.com/*",
    "https://cloud.video.alibaba.com/*",
    "https://cloud.video.aliexpress.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "ui.html",
    "default_title": "AliSave"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://*.alibaba.com/product-detail/*",
        "https://*.alibaba.com/product/*",
        "https://*.alibaba.com/suppliersubdomainalibabacom/product-detail/*",
        "https://*.aliexpress.com/item/*",
        "https://*.aliexpress.com/i/*",
        "https://*.aliexpress.com/store/product/*",
        "https://*.aliexpress.ru/item/*",
        "https://*.aliexpress.ru/i/*",
        "https://*.aliexpress.ru/store/product/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ]
}
