{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Redirect e-Gov",
  "version": "1.0.0",
  "description": "Redirect http to https on e-Gov",
  "author": "rndomhack",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "scripts": [
      "lib/browser.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*.e-gov.go.jp/"
  ]
}
