{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FlagIt",
  "description": "This extension allows the user to flag the content they think is extremist.",
  "version": "4.0",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js",
      "PasteURLinside.js"
    ],
    "persistent": false
  },
  "icons": {
    "19": "icon/19.png",
    "38": "icon/38.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon/19.png",
      "38": "icon/38.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Flagit by Reclaim Internet Project"
  },
  "manifest_version": 2
}
