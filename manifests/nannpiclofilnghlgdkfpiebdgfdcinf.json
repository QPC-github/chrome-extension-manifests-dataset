{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Social Adspiration",
  "short_name": "Social Adspiration",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Replaces FB Ads With Inspirational Quotes",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "background.js"
      ],
      "matches": [
        "https://www.facebook.com/*",
        "http://www.facebook.com/*"
      ]
    }
  ]
}
