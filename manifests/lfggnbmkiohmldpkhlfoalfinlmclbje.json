{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "uBookmark",
  "description": "Universal Bookmark Manager",
  "version": "2.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icons/16px.png",
    "128": "icons/128px.png"
  },
  "browser_action": {
    "default_icon": "icons/128px.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}
