{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Gareth Parker / Gerhard Fourie",
  "name": "iDonateByShopping",
  "version": "1.6.1",
  "description": "Raise money for planting trees when you shop online at our participating online stores - help save the Earth when you shop!",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.agoda.com/*",
        "https://www.amazon.com/*",
        "https://www.amazon.com.au/*",
        "https://arteza.com/*",
        "https://www.atmosrx.com/*",
        "https://www.bookdepository.com/*",
        "https://www.booking.com/*",
        "https://www.dx.com/*",
        "https://www.ebay.com/*",
        "https://www.ebay.com.au/*",
        "https://www.ebay.com.de/*",
        "https://www.ebay.com.fr/*",
        "https://www.ebay.co.uk/*",
        "https://www.ebooks.com/*",
        "https://www.fiverr.com/*",
        "https://www.gabrielny.com/*",
        "https://www.namecheap.com/*",
        "https://nordvpn.com/*",
        "https://www.siteground.com/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "build/content.js"
      ],
      "css": [
        "styles/index.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/checked.png",
    "images/cross.png",
    "images/basket.png",
    "images/loading.gif",
    "images/loadingComplete.png"
  ]
}
