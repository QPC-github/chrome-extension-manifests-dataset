{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Xiamini 2016 虾米你 2016",
  "description": "4-6维虫洞穿越 / 虾米网首页动态优化 / 播放器优化 / 歌词维基优化 / 320K专门店音质检测结果显示 / 古典音乐资料优化显示",
  "version": "2.13.1",
  "icons": {
    "16": "xiami.png",
    "48": "xiami.png",
    "128": "xiami.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "xiami.png",
    "default_title": "XiaMini",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.xiami.com/play*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/options.js",
        "js/linlin.js",
        "js/XiaMi OpenPlay.user.js"
      ]
    },
    {
      "matches": [
        "http://www.xiami.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/options.js",
        "js/XiaMi paging.user.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/*",
    "executejs/*",
    "database/wormhole.json",
    "js/player.js"
  ]
}
