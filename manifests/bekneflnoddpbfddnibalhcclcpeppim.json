{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "refnow-tick.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "matches": [
        "https://www.linkedin.com/*",
        "https://app.greenhouse.io/*",
        "https://*.workable.com/backend/*",
        "https://*.vtiger.com/index.php?module=Contacts&view=Detail*",
        "https://*.dynamics.com/*",
        "https://*.tbe.taleo.net/*"
      ]
    }
  ],
  "description": "Automated Employment Referencing. Supports Linkedin, Workable, Greenhouse.io, Microsoft Dynamics 365, Oracle Taleo, and vTiger CRM",
  "icons": {
    "128": "icon-128.png",
    "16": "icon-16.png",
    "48": "icon-48.png"
  },
  "web_accessible_resources": [
    "popup.html"
  ],
  "manifest_version": 2,
  "name": "RefNow - Online Employment Referencing",
  "permissions": [
    "https://api.refnow.co/*",
    "https://www.linkedin.com/in/*",
    "https://app.greenhouse.io/people/*",
    "https://*.workable.com/backend/*",
    "https://*.vtiger.com/index.php?module=Contacts&view=Detail*",
    "https://*.dynamics.com/*",
    "https://*.tbe.taleo.net/*",
    "tabs"
  ],
  "short_name": "RefNow",
  "version": "0.3.5"
}
