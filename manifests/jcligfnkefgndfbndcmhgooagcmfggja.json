{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cookies Switch",
  "version": "0.0.1",
  "minimum_chrome_version": "20.0",
  "manifest_version": 2,
  "homepage_url": "https://gitlab.com/nialv7/disable-cookies",
  "description": "Toggle cookies with one click.",
  "icons": {
    "16": "icon.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "contentSettings",
    "browsingData",
    "cookies",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Cookies Switch"
  },
  "incognito": "spanning",
  "background": {
    "scripts": [
      "core.js"
    ],
    "persistent": false
  },
  "options_page": "options.html"
}
