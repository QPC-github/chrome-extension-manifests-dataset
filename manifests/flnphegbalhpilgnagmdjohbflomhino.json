{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RepTex",
  "description": "To replace a text to desired text whenever a page loads",
  "short_name": "Replace-Text",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icontr.png",
    "128": "icontr.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "RepTex",
    "default_icon": {
      "19": "icontr.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
