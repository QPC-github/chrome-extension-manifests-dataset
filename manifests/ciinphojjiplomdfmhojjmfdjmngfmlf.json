{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Tom's Hardware FR - Mes sujets",
  "version": "0.2.0.1",
  "description": "L'extension vous notifie des nouvelles réponses dans vos discussions sur la communauté Tom's Hardware.",
  "background": {
    "page": "bg.html"
  },
  "options_page": "options.html",
  "default_locale": "fr",
  "browser_action": {
    "default_icon": "128.png",
    "badge": ""
  },
  "icons": {
    "128": "128.png"
  },
  "web_accessible_resources": [
    "128.png"
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "notifications",
    "http://www.tomshardware.fr/"
  ]
}
