{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "scripts": [
      "lib/jquery.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "modify.css"
      ],
      "js": [
        "lib/jquery.js",
        "bigcartel.js"
      ],
      "matches": [
        "http://*.bigcartel.com/*",
        "https://*.bigcartel.com/*"
      ]
    }
  ],
  "description": "Add to cart bot for some bigcartel sites.",
  "icons": {
    "128": "img/icon128.png"
  },
  "manifest_version": 2,
  "name": "Bigcartel ATC Bot",
  "permissions": [
    "cookies",
    "browsingData",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "version": "3.0",
  "web_accessible_resources": []
}
