{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "simple 1line memo",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "description": "very simple 1 line memo. text will auto save.",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ]
}
