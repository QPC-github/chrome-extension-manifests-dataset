{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hacker News Alerts",
  "version": "1.0",
  "description": "Chrome notifications when a story on Hacker News reaches a threshold of points",
  "icons": {
    "300": "hn.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background-bundle.js"
    ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "tabs"
  ]
}
