{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NMBLive Workshop Screen Sharing Extension",
  "author": "Mark Mongeau info@nmblive.com",
  "version": "2.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Developed for NMBLive.com. Captures and shares the content of your screen.",
  "homepage_url": "https://nmblive.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.nmblive.com/*",
      "https://*.nmblive.com:4443/*"
    ]
  },
  "icons": {
    "16": "nmb_16.png",
    "48": "nmb_48.png",
    "128": "nmb_128.png"
  },
  "permissions": [
    "desktopCapture"
  ]
}
