{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mattermark",
  "version": "1.3.3",
  "manifest_version": 2,
  "short_name": "__MSG_appName__",
  "description": "Quickly view important company information like location, funding, and employee count without ever leaving their site.",
  "icons": {
    "16": "images/chrome_icon_active_16.png",
    "19": "images/chrome_icon_active_19.png",
    "38": "images/chrome_icon_active_38.png",
    "48": "images/chrome_icon_active_48.png",
    "128": "images/chrome_icon_active_128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/chrome_icon_inactive_19.png",
      "38": "images/chrome_icon_inactive_38.png"
    },
    "default_title": "__MSG_iconTitle__"
  },
  "web_accessible_resources": [
    "html/company.html"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
