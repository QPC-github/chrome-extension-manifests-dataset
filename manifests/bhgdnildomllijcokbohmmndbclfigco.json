{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hivecloud Consulta XML Sefaz",
  "version": "1.5",
  "description": "Extens√£o hivecloud para consulta de XMLs de Nf-es e CT-es!",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.fazenda.gov.br/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Hivecloud Consulta XML Sefaz"
  },
  "permissions": [
    "tabs",
    "https://*.hivecloud.com.br/",
    "storage",
    "system.display"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/logo_off_16.png",
    "32": "images/logo_off_32.png",
    "48": "images/logo_off_48.png",
    "128": "images/logo_off_128.png"
  },
  "manifest_version": 2
}
