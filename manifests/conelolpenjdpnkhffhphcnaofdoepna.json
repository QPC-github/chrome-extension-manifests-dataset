{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Marathi WordNet",
  "version": "0.0.1",
  "description": "More than a conventional Marathi dictionary, It represents unique concepts as Synsets an unconventional form.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Marathi WordNet",
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "sample.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "selection.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
