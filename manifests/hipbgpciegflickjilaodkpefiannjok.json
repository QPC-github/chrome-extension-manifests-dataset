{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Header Surgeon",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Intercept and perform surgical operations on request headers.",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_icon": "img/icon_19.png",
    "default_title": "Header Surgeon: Disabled"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "options_page": "html/options.html",
  "background": {
    "scripts": [
      "js/background.js",
      "js/background_helpers.js",
      "js/listeners.js"
    ]
  }
}
