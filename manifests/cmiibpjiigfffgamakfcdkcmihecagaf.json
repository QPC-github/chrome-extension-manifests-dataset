{
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "css": [
        "content.css"
      ],
      "js": [
        "jquery-1.7.1.min.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "description": "Generate an Amazon Affiliate Link with one click",
  "default_icon": {
    "128": "amapop128.png",
    "16": "amapop16.png",
    "24": "amapop24.png",
    "32": "amapop32.png",
    "48": "amapop48.png",
    "96": "amapop96.png"
  },
  "name": "Amapop Amazon Affiliate Link Generator",
  "options_page": "option.html",
  "page_action": {
    "default_icon": "amapop16.png",
    "default_title": "Amapop",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "0.2.1",
  "manifest_version": 2,
  "web_accessible_resources": [
    "noticeWindow.png"
  ]
}
