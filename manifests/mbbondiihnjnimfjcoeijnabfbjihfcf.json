{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nhắc thắp hương",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Nhắc thắp hương vào ngày rằm, mùng một hàng tháng",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Hôm nay là ngày bao nhiêu âm lịch?",
    "default_icon": "icon48.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
