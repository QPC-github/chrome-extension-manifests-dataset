{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sigma Solve Desktop Share",
  "description": "Screen sharing extension for the Sigma Solve video chat",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "campcite-logo-16x16.png",
    "48": "campcite-logo-48x48.png",
    "128": "campcite-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://sigmasolvevideo.campcite.com/*"
    ]
  }
}
