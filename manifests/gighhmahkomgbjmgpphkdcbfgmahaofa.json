{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "linkify",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Turn plain text URLs into clickable links",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "linkify!"
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
