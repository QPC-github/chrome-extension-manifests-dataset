{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "2.1.0",
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_discription__",
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "__MSG_ext_name__",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://graph.facebook.com https://vk.com https://connect.ok.ru; object-src 'self'"
}
