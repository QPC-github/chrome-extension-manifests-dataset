{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Convert Text to ISL",
  "version": "1.02",
  "description": "Converts your selected data to ISL",
  "icons": {
    "128": "logo.png",
    "48": "logo.png",
    "16": "logo.png"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "contextMenus"
  ]
}
