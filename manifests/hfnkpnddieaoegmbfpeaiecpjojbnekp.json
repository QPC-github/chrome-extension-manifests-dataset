{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Activation Notification",
  "version": "0.0.0.4",
  "description": "Send notification to Slack channels when new code version is activated on development and staging instances.",
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "tabs",
    "webNavigation",
    "https://*.slack.com/"
  ],
  "icons": {
    "16": "images/icon2_16.png",
    "32": "images/icon2_32.png",
    "128": "images/icon2_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Activation Notification",
    "default_icon": {
      "16": "images/icon2_16.png",
      "32": "images/icon2_32.png",
      "128": "images/icon2_128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "manifest_version": 2
}
