{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AheevaCCS Browser Extension",
  "short_name": "aheevaccs",
  "description": "This extension enables making calls, sending emails & SMS to phone numbers and email addresses found on any page through AheevaCCS",
  "version": "1.8",
  "manifest_version": 2,
  "author": "Praveen Ravichandran",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "./assets/logo128.png",
      "48": "./assets/logo48.png",
      "16": "./assets/logo16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "./scripts/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "./assets/logo128.png",
    "48": "./assets/logo48.png",
    "16": "./assets/logo16.png"
  }
}
