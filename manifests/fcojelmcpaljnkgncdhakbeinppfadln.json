  "name": "Chrumie Mark Crusader",
  "version": "0.2.2",
  "manifest_version": 2,
  "description": "Piccole modifiche e funzionalit√† aggiunte per il forum Cutie Mark Crusader",
  "options_page": "opzioni.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "http://www.imgmlp.com/api",
    "http://www.mylittlepony.it/forum/posting.php"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.mylittlepony.it/forum/posting.php*",
        "http://www.mylittlepony.it/forum/ucp.php*"
      ],
      "js": [
        "js/imgmlp.js"
      ],
      "css": [
        "styles/imgmlp.css"
      ]
    },
    {
      "matches": [
        "http://www.mylittlepony.it/forum/posting.php*",
        "http://www.mylittlepony.it/forum/ucp.php*"
      ],
      "js": [
        "js/emopref.js"
      ],
      "css": [
        "styles/emopref.css"
      ]
    },
    {
      "matches": [
        "http://www.mylittlepony.it/forum/*"
      ],
      "js": [
        "js/noheader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/chrome_pony.png",
    "images/logoimgmlp.png",
    "images/ajax-loader.gif",
    "styles/opzioni.css",
    "styles/noheader.css"
  ]
