{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Alert Control",
  "version": "1.3",
  "description": "Control browser alert windows. Block by default or on specific websites.",
  "manifest_version": 2,
  "icons": {
    "16": "/img/icon16.png",
    "32": "/img/icon32.png",
    "48": "/img/icon48.png",
    "128": "/img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/chrp.js",
      "js/bg.js"
    ]
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "js": [
        "js/alerts.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_icon": "/img/pageaction.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
