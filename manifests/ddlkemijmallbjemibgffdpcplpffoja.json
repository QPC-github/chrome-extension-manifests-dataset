{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ExifShot: photo metadata design tool",
  "short_name": "ExifShot",
  "version": "1.0.3",
  "description": "Open image in ExifShot to capture, design and export photo metadata as useful graphics other photographers can learn from.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "icons": {
    "16": "es-icon-16.png",
    "32": "es-icon-32.png",
    "64": "es-icon-64.png",
    "128": "es-icon-128.png"
  },
  "manifest_version": 2
}
