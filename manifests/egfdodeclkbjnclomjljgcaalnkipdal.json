{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Urban3p",
  "version": "0.2.4",
  "background": {
    "scripts": [
      "js/script.js"
    ],
    "persistent": true
  },
  "description": "Показывает количество новых сообщений на сайте Urban3p.ru.",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_title": "Urban3p",
    "default_icon": "img/icon_19_ds.png"
  },
  "permissions": [
    "tabs",
    "http://urban3p.ru/*",
    "http://urban3p.com/*",
    "https://urban3p.ru/*",
    "https://urban3p.com/*"
  ]
}
