{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MyDramaList Review Character Counter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Counters the characters in your written review.",
  "author": "https://github.com/DecodedMonkey",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://*.mydramalist.com/*",
    "https://*.mydramalist.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.mydramalist.com/*",
        "https://*.mydramalist.com/*"
      ],
      "js": [
        "js/counter.js"
      ]
    }
  ]
}
