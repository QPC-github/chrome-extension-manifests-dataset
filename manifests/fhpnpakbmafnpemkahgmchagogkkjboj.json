{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Marantz control",
  "short_name": "Marantz control",
  "manifest_version": 2,
  "version": "1.14",
  "description": "Control marantz receiver",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "avr.js",
      "browser.js",
      "background.js"
    ],
    "persistant": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "http://*/"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
