{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Transcriber",
  "short_name": "Transcriber",
  "description": "Phonetic transcription of web pages.",
  "version": "1.7.7",
  "icons": {
    "32": "images/icon.active/icon32.png",
    "128": "images/icon.active/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "32": "images/icon.active/icon32.png"
    },
    "default_title": "Transcriber"
  },
  "background": {
    "scripts": [
      "javascript/words.js",
      "javascript/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "fonts/*",
    "images/*",
    "javascript/page.js"
  ]
}
