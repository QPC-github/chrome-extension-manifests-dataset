{
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "superbuy购物助手",
    "default_popup": "popup.html",
    "author": "nero(nerozhang@staritgp.com)"
  },
  "content_scripts": [
    {
      "css": [
        "css/inject.css",
        "css/box.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content_scripts.js",
        "js/inject_csp.js"
      ],
      "matches": [
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://buy.superbuy.com/views/single/*"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "description": "【superbuy出品】在您网购浏览商品的同时，可直接添加商品到superbuy代购购物车或提交转运寄送全球！",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-32.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "18",
  "name": "superbuy购物助手",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "notifications"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.1.9",
  "web_accessible_resources": [
    "js/*.js",
    "images/*.png"
  ]
}
