{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TweetTalk",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "homepage_url": "http://fortnight.club/tweettalk",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/codebird.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/settings/options.html",
  "permissions": [
    "tts",
    "ttsEngine",
    "idle",
    "notifications",
    "storage",
    "http://*.twitter.com/*",
    "https://*.twitter.com/*"
  ]
}
