{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_app_name__",
  "default_locale": "en",
  "icons": {
    "128": "images/icon128.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "version": "19",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tts",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/icon128.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "16": "images/icon16.png"
    },
    "default_popup": "popup.html"
  },
  "description": "A extension speak out the selected text for you"
}
