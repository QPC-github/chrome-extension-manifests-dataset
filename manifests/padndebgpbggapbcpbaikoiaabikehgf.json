{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AmazonFilter",
  "version": "1.01",
  "description": "AmazonFilter automatically applies common filters to all amazon searches, saving you time and giving you the best results!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "webRequest",
    "*://*.amazon.com/*",
    "webNavigation",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistence": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/AFlogo16.png",
      "32": "images/AFlogo32.png",
      "48": "images/AFlogo48.png",
      "128": "images/AFlogo128.png"
    }
  },
  "icons": {
    "16": "images/AFlogo16.png",
    "32": "images/AFlogo32.png",
    "48": "images/AFlogo48.png",
    "128": "images/AFlogo128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
