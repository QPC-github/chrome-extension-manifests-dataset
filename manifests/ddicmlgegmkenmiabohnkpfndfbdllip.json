{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "browser_action": {
    "default_icon": "assets/icon16.png",
    "default_popup": "popup.html",
    "default_title": "Hold My Beer"
  },
  "content_scripts": [
    {
      "js": [
        "js/script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "description": "See the 5 last hilarious videos posted by Hold My Beer",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "homepage_url": "https://www.twitter.com/holdmybeergif",
  "manifest_version": 2,
  "name": "Hold My Beer - 5 Latest Hilarious Videos",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "short_name": "Hold My Beer",
  "version": "0.1.2",
  "web_accessible_resources": [
    "assets/*"
  ]
}
