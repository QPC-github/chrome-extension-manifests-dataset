{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "name": "Courier",
  "description": "Automatically opens bookmarks saved in Chrome for Android or iOS.",
  "icons": {
    "16": "Courier_Icon_16.png",
    "48": "Courier_Icon_48.png",
    "128": "Courier_Icon_128.png"
  },
  "version": "1.0.3",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "Courier_Icon_19.png"
  }
}
