{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "RCODigital Platform Services Screen Capture",
  "author": "Rubix Technology",
  "version": "0.0.0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed primary for http://tokbox.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://rcoconnect.azurewebsites.net/*",
      "*://rcoconnectdemo.azurewebsites.net/*",
      "*://rcodigitalplatformservices.azurewebsites.net/*",
      "*://rcodigitalplatformservices2.azurewebsites.net/*",
      "*://rcodigitalplatformservicesdemo.azurewebsites.net/*"
    ]
  },
  "icons": {
    "128": "logo128.png",
    "16": "logo16.png",
    "48": "logo48.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
