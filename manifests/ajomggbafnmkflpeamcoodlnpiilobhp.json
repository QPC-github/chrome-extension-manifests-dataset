{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ad Link for Facebookâ„¢",
  "version": "1.0.4",
  "description": "Creates links for ad videos on pages ads section!",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    },
    "default_title": "Regenerate Ad Links"
  },
  "content_scripts": [
    {
      "js": [
        "inject.js"
      ],
      "css": [
        "inject.css"
      ],
      "matches": [
        "*://*.facebook.com/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
