{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Kopi",
  "version": "1.2",
  "description": "Email all URLs in your current Chrome tabs!",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "kopi_128x128.png"
  },
  "browser_action": {
    "default_title": "Kopi",
    "default_icon": "kopi_16x16.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
