{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Galaga Fullscreen",
  "short_name": "Galaga",
  "version": "1.0.0",
  "description": "My NEW version of freeplay Galaga!",
  "author": "Carter",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icons/icon256.png",
    "default_popup": "game/redirect.html"
  },
  "icons": {
    "256": "img/icons/icon256.png",
    "128": "img/icons/icon128.png",
    "64": "img/icons/icon64.png",
    "48": "img/icons/icon48.png",
    "16": "img/icons/icon16.png"
  }
}
