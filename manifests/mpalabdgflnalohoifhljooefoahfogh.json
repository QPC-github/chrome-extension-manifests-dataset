{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Inbox Zero Fanfare",
  "version": "1.0.1",
  "description": "When your Gmail hits Inbox Zero, play the Classic Mac OS Fanfare sound effect.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "zepto.js",
        "fanfare.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2
}
