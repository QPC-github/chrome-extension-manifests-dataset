{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide VRV Thumbnails",
  "version": "1.1",
  "description": "Hides unwatched video thumbnails on VRV.",
  "manifest_version": 2,
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://*.vrv.co/*"
      ],
      "css": [
        "hide_spoilers.css"
      ]
    }
  ],
  "icons": {
    "16": "images/vrv16.png",
    "32": "images/vrv32.png",
    "48": "images/vrv48.png",
    "128": "images/vrv128.png"
  }
}
