{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Convert Case",
  "description": "Easily convert text between different cases: lower case, UPPER CASE, Sentence case, Capitalized Case, aLtErNaTiNg cAsE and more.",
  "version": "1.0.0",
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Convert Case",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
