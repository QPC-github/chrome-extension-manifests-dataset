{
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Agora vc vai saber quando publicarmos algo novo no Portal de Notícia, em tempo real!",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "48": "icon_48.png"
  },
  "manifest_version": 2,
  "name": "Portal de Notícia",
  "permissions": [
    "http://localhost/",
    "http://*.potaldenoticia.com",
    "notifications",
    "tabs"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.3"
}
