{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PageWriter",
  "description": "PageWriter - Webpages re-coded live in a typewriter-interface: linear at 140 characters a minute",
  "icons": {
    "16": "pagewriter.png",
    "48": "pagewriter.png",
    "128": "pagewriter.png"
  },
  "version": "3.1",
  "permissions": [
    "activeTab",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "pagewriter.png"
  },
  "manifest_version": 2
}
