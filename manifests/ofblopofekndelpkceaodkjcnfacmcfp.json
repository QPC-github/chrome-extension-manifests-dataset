{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Unread Tab",
  "short_name": "UnreadTab",
  "author": "Adam Grodzki",
  "description": "Flags unvisited/unread (opened in the background) tabs, so it is easy to recognise what tabs still need to be read.",
  "version": "1.3",
  "icons": {
    "48": "icons/ch_ikonka48.png",
    "96": "icons/ch_ikonka96.png",
    "128": "icons/ch_ikonka128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "background"
  ]
}
