{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Presshub",
  "description": "Your Daily News Quest",
  "version": "1.9",
  "browser_action": {
    "default_icon": "presshubshico.png",
    "default_popup": "popup-page.html",
    "default_title": "Presshub Trending News"
  },
  "externally_connectable": {
    "matches": [
      "*://*.presshub.gr/*"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "cookies"
  ]
}
