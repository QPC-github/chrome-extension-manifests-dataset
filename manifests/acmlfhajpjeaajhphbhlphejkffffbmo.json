{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Chrome Board",
  "version": "1.6",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "description": "Simple Behavior Management for Classrooms",
  "author": "Edu Mission",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "scripts/contentscript.js"
      ],
      "matches": [
        "https://namesonboard.herokuapp.com/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "contentSettings",
    "storage",
    "background"
  ],
  "web_accessible_resources": [
    "scripts/inject.js"
  ]
}
