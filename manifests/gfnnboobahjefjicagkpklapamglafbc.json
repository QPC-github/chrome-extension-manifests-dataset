{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Будист",
  "description": "Будист (от слова \"будить\") — это лучший способ проснуться с улыбкой на лице от звонков доброжелательных незнакомцев со всего мира.",
  "version": "0.1.51",
  "manifest_version": 2,
  "icons": {
    "16": "img/logo-chrome-app-16.png",
    "48": "img/logo-chrome-app-48.png",
    "128": "img/logo-chrome-app-128.png"
  },
  "browser_action": {
    "default_icon": "img/logo-chrome-app-19-gray.png",
    "default_title": "Будист",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://budist.ru/*",
    "notifications",
    "cookies",
    "management"
  ],
  "background": {
    "scripts": [
      "lib/angular/angular.min.js",
      "js/app/services.js",
      "js/app/controllers.js",
      "js/bg.js"
    ]
  },
  "web_accessible_resources": [
    "img/logo-chrome-app-48.png"
  ]
}
