{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Allow BodyScroll",
  "version": "1.1",
  "description": "Tired of websites disallowing <body> scrolling? Click on a button of this extension and website will scroll again.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png",
      "48": "images/android-icon-48x48.png",
      "128": "images/ms-icon-128x128.png"
    }
  },
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "48": "images/android-icon-48x48.png",
    "128": "images/ms-icon-128x128.png"
  },
  "manifest_version": 2
}
