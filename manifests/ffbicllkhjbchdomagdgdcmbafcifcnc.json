{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "OttoBib Bibliography Generator - Extension",
  "version": "1.7",
  "permissions": [
    "http://ottobib.com/",
    "http://www.ottobib.com/",
    "http://localhost:8080/",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "name": "Get a citation from an ISBN"
  },
  "icons": {
    "16": "images/16-logotype.png",
    "48": "images/48-logotype.png",
    "128": "images/128-logotype.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
