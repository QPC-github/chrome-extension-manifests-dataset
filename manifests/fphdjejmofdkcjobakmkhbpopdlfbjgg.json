{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Look Smart Secure Search",
  "description": "Look Smart Secure Search - powered by Blockchain",
  "version": "1.0",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "chrome_settings_overrides": {
    "homepage": "http://my.looksmart.me",
    "search_provider": {
      "name": "Look Smart Secure Search",
      "keyword": "looksmart.me",
      "search_url": "http://my.looksmart.me/#q={searchTerms}",
      "favicon_url": "http://my.looksmart.me/favicon.ico",
      "suggest_url": "http://my.looksmart.me/#q={searchTerms}",
      "instant_url": "http://my.looksmart.me/#q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": true
    },
    "startup_pages": [
      "http://my.looksmart.me"
    ]
  },
  "omnibox": {
    "keyword": "s"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon-16.png",
    "19": "icon-19.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_title": "Look Smart Secure Search",
    "default_icon": "icon-19.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
