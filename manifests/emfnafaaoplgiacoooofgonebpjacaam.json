{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Horizon Screen Sharing",
  "author": "Fugent",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Leverage Horizon Screen Sharing to share your screen's content in a Horizon video chat.",
  "homepage_url": "http://fugent.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.fugent.io/*",
      "http://localhost/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
