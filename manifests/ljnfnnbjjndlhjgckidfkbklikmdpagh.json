{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hangout Bar Remover",
  "version": "1.0",
  "author": "WeedLion",
  "description": "Remove the top green bar in Google Hangouts when screensharing",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://plus.google.com/hangouts/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}
