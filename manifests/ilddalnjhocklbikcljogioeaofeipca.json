{
  "author": "Ruvenss G. Wilches",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/icon_128.png",
      "48": "icons/icon_48.png",
      "32": "icons/icon_32.png",
      "16": "icons/icon_16.png"
    },
    "default_title": "Darkside View (trolling @ Night)"
  },
  "description": "Use Darkside View at night without burning your eyes",
  "icons": {
    "128": "icons/icon_128.png",
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png"
  },
  "incognito": "split",
  "manifest_version": 2,
  "name": "Darkside View",
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "http://*/",
    "https://*/"
  ],
  "short_name": "Darkside View",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2",
  "web_accessible_resources": [
    "icons/*"
  ]
}
