{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SimpleSiteBlock",
  "description": "This extension will block specficied sites to limit distraction.",
  "version": "1.0.3",
  "options_page": "html/popup.html",
  "browser_action": {
    "default_icon": "stop.png",
    "default_title": "My Site Blocker",
    "default_popup": "html/popup.html"
  },
  "background": {
    "page": "html/background.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "background",
    "webNavigation"
  ]
}
