{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "ctt.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Click To Tweet"
  },
  "description": "Create Click To Tweet shareable links from any website.",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "manifest_version": 2,
  "name": "Click To Tweet",
  "short_name": "CTT",
  "permissions": [
    "tabs",
    "contextMenus",
    "notifications",
    "clipboardWrite"
  ],
  "version": "1.0"
}
