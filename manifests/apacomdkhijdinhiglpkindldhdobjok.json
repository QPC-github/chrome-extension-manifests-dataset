{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TweetReddit",
  "short_name": "TweetReddit",
  "author": "Jarryd Lee",
  "description": "Tweets a reddit link for you",
  "version": "1.0",
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "js": [
        "jquery.js",
        "background.js"
      ],
      "matches": [
        "http://www.reddit.com/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "permissions": [
      "contextMenus",
      "tabs",
      "http://www.reddit.com/*",
      "http://api.bit.ly/*"
    ]
  },
  "web_accessible_resources": [
    "jquery-1.10.1.min.map"
  ],
  "manifest_version": 2
}
