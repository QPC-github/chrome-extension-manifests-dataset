{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Show prices in Bitcoin",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Show prices in BTC",
    "default_icon": {
      "38": "icon38.png"
    }
  },
  "description": "Converts USD/EUR/GBP amounts into bitcoin.",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "permissions": [
    "*://*/",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "cookies",
    "contextMenus",
    "tabs",
    "activeTab",
    "storage"
  ],
  "version": "0.13"
}
