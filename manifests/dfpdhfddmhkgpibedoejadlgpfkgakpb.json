{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BrGP for Chrome",
  "version": "0.0.5",
  "icons": {
    "48": "resource/pgp-48.png"
  },
  "description": "Extend the browser with generic PGP features. Manage PGP keys and process messages via dashboard or right-click menu.",
  "author": "NeoAtlantis",
  "background": {
    "scripts": [
      "background/main.js"
    ]
  },
  "browser_action": {
    "default_icon": "resource/pgp-32.png",
    "default_title": "BrGP"
  },
  "sandbox": {
    "pages": [
      "brgp/index.html"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "http://*/",
    "https://*/"
  ]
}
