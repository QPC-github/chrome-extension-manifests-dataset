{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EventGhost",
  "description": "EventGhost event trigger",
  "homepage_url": "http://www.eventghost.net/",
  "icons": {
    "128": "images/icon_128.png",
    "16": "images/icon_16.png"
  },
  "version": "0.3",
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true,
    "matches": [
      "http://localhost/*",
      "https://localhost/*"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "downloads",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "contextMenus",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "manifest_version": 2
}
