{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Socializer!",
  "version": "3.0",
  "manifest_version": 2,
  "description": "Submission to top Social Networks, eMail recommendation, Translation, and more.",
  "icons": {
    "128": "128.png",
    "16": "19.png",
    "32": "32.png",
    "48": "48.png"
  },
  "background": {
    "scripts": [
      "socializerhead.js"
    ]
  },
  "browser_action": {
    "default_icon": "19.png",
    "default_title": "Share with Socializer!",
    "id": "Socializer!"
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ]
}
