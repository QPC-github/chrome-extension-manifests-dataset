{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "jquery.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html",
    "default_title": "settings"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "jquery.min.js",
        "script.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Some simple twitch.tv enhancements",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "48": "icon_48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "37",
  "name": "Twitch++",
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "version": "0.3",
  "web_accessible_resources": [
    "index.html"
  ]
}
