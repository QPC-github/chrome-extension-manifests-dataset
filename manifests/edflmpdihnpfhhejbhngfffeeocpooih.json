{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Rate Today",
  "description": "Currencies exchange rates for many currencies. 5 minutes updates",
  "version": "1.1",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "64": "64.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "64.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://*.rate-today.ru/"
  ]
}
