{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Seclave Chrome App",
  "short_name": "seclave app",
  "description": "Manage communication between Seclave and Chrome",
  "version": "0.9",
  "app": {
    "background": {
      "scripts": [
        "const.js",
        "seclave_ctl.js",
        "background.js"
      ]
    }
  },
  "icons": {
    "128": "icons/seclave_128x128.png"
  },
  "permissions": [
    "serial",
    "fileSystem"
  ]
}
