{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Alqua Suite",
  "version": "0.0.4",
  "description": "Post and Queue up content while browsing the web with Alqua Suite extension",
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "/js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/js/content_scripts.js",
        "/plugins/js/jquery-1.10.2.min.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Alqua",
    "default_icon": "/images/icon.png"
  }
}
