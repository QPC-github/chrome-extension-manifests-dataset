{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SLP Link Maker",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Useful Link Maker",
  "browser_action": {
    "default_icon": {
      "128": "icon@128.png"
    },
    "default_title": "SLP Link Maker",
    "default_popup": "main.html"
  },
  "icons": {
    "16": "icon@16.png",
    "19": "icon@19.png",
    "32": "icon@32.png",
    "48": "icon@48.png",
    "128": "icon@128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "background",
    "clipboardWrite",
    "clipboardRead"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Launch Extension."
    },
    "selectTabLink": {
      "suggested_key": {
        "windows": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Create link from selected tab."
    },
    "allTabLink": {
      "suggested_key": {
        "windows": "Ctrl+Shift+9",
        "mac": "Command+Shift+9"
      },
      "description": "Create links from all tabs."
    },
    "selectTabMeta": {
      "suggested_key": {
        "windows": "Ctrl+Shift+0",
        "mac": "Command+Shift+0 "
      },
      "description": "Create title and URL from selected tab."
    }
  }
}
