{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LinkedIn Dark Mode",
  "description": "Adds an experimental dark theme to LinkedIn",
  "version": "2.0",
  "author": "Apurav Chauhan",
  "permissions": [
    "tabs",
    "activeTab",
    "*://*.linkedin.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "128.png"
  },
  "browser_action": {
    "default_title": "Dark Mode",
    "default_icon": "false.png"
  },
  "manifest_version": 2
}
