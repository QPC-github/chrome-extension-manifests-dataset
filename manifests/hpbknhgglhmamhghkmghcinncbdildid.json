{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Amazon Font Rewinder",
  "version": "1.0",
  "description": "Change Amazon.com font back to default.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://amazon.com/*",
        "http://amazon.com/*",
        "https://www.amazon.com/*",
        "http://www.amazon.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}
