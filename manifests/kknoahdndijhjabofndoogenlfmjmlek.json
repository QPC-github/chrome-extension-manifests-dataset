{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Snap - Clear the downloads list automatically",
  "short_name": "Snap",
  "version": "1.1",
  "manifest_version": 2,
  "author": "Armand Grillet",
  "description": "Clear your downloads list automatically after a specified amount of time.",
  "homepage_url": "https://github.com/ArmandGrillet/Snap",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "incognito": "split",
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "downloads",
    "storage"
  ]
}
