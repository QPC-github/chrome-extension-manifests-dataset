{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FLVCD Helper",
  "description": "帮助用户快速使用flvcd.com网站来解析下载视频",
  "version": "1.0.1",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "context_menu.js"
    ]
  },
  "browser_action": {
    "default_title": "点击图标解析当前页视频\r\n选项页中可以修改打开方式",
    "default_icon": "images/flvcd.png"
  },
  "icons": {
    "16": "images/flvcd.png"
  },
  "manifest_version": 2
}
