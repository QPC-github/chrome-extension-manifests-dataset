{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Valarea Web Conference",
  "description": "An extension that allows you to stream your desktop into meetings with Valarea.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "valarea-logo-16x16.png",
    "48": "valarea-logo-48x48.png",
    "128": "valarea-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://webrtc.remago.com/*"
    ]
  }
}
