{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "零维",
  "short_name": "OneVnet",
  "description": "简单好用，一键接入电信联通网络，犹如身在中国内地。",
  "version": "18",
  "browser_action": {
    "default_icon": "img/128.png",
    "default_popup": "html/popup.html",
    "default_title": "点击启用或关闭OneVnet服务"
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/functions.js",
      "js/global.js",
      "js/bg.js",
      "js/popup.js"
    ]
  },
  "icons": {
    "16": "img/16.png",
    "128": "img/128.png"
  },
  "permissions": [
    "notifications",
    "background",
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "http://*/*",
    "https://*/*",
    "ftp://*/*"
  ]
}
