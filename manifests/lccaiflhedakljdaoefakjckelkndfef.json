{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "XOP Networks Screen Sharing And Recording",
  "author": "XOP dev team",
  "version": "0.83",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Capture full-screen or specific application's screen",
  "homepage_url": "http://www.xopnetworks.com/",
  "background": {
    "scripts": [
      "background.js",
      "plugins/jszip.min.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "/content/images/icons/icon.png"
  },
  "permissions": [
    "desktopCapture",
    "tabCapture",
    "tabs",
    "system.display",
    "*://*.xopnetworks.com/*",
    "*://*.univergecloud.net/*",
    "*://*.tadiran-us.com/*",
    "*://*.fastermeetings.com/*",
    "*://*.clicktohuddle.com/*"
  ],
  "commands": {
    "start-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Start Recording"
    },
    "stop-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Stop Recording"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://*.xopnetworks.com/*",
      "*://*.univergecloud.net/*",
      "*://*.tadiran-us.com/*",
      "*://*.fastermeetings.com/*",
      "*://*.clicktohuddle.com/*"
    ]
  },
  "browser_action": {
    "default_title": "XOP Networks Screen Sharing And Recording"
  }
}
