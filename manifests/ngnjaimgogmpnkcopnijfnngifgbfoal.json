{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Discuz 字体扩大插件",
  "short_name": "字体扩大插件",
  "description": "扩大 S1 论坛的正文帖子文字，也适用于其他 Discuz 论坛",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.saraba1st.com/*"
      ],
      "js": [
        "fontchange.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
