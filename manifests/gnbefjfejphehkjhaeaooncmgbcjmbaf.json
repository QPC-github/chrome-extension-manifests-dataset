{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Instant Ipsum",
  "description": "The quintessential Lorem Ipsum generator for instant access to chunks of your favorite blind text.",
  "version": "1.0.1",
  "browser_action": {},
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "src/background/browser.js",
      "src/background/resource.js",
      "src/background/clipboard.js",
      "src/background/debounce.js",
      "src/background/index.js"
    ]
  },
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ]
}
