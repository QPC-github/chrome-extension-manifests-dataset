{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pom",
  "version": "1.0",
  "description": "Pomodoro timer",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "main.html"
  },
  "background": {
    "scripts": [
      "background_alarms.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "notifications"
  ],
  "web_accessible_resources": [
    "pom.png"
  ],
  "icons": {
    "48": "pom.png"
  }
}
