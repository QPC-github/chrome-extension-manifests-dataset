{
  "background": {
    "scripts": [
      "scripts/jquery-1.8.2.min.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "SubManga (Notificador)"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "scripts/jquery-1.8.2.min.js",
        "scripts/ads.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Tu fuente diaria de manga.",
  "homepage_url": "http://submanga.org/",
  "icons": {
    "128": "images/128.png",
    "16": "images/icon.png",
    "48": "images/48.png"
  },
  "manifest_version": 2,
  "name": "SubManga (Notificador)",
  "permissions": [
    "*://*/*",
    "tabs",
    "notifications"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.1",
  "web_accessible_resources": [
    "images/128.png"
  ]
}
