{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "西方媒体查一查",
  "version": "1.3",
  "description": "提供西方媒体的简单介绍、 可信度和政治倾向性",
  "options_page": "about.html",
  "author": "新闻实验室",
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "popup.html",
    "script": [
      "background.js"
    ],
    "persistence": false
  },
  "permissions": [
    "tabs"
  ]
}
