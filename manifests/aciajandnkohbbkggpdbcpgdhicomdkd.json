{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smarp Point",
  "description": "partage automatiquement les articles de smarp",
  "version": "1",
  "icons": {
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Smarp Point"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://1min30.smarpshare.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-2.2.3.min.js",
        "main.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ]
}
