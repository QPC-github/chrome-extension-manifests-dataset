{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Check this Shop",
  "version": "0.5",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "description": "Always check with this tool an online shop before ordering anything.",
  "icons": {
    "48": "icons/icon-48.png",
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}
