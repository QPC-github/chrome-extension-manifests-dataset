{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Yambalú - Juegos al mejor precio",
  "manifest_version": 2,
  "version": "1.0.0.6",
  "author": "Yambalú",
  "description": "Comparamos automáticamente los precios de los videojuegos que estés visualizando y te ofrecemos el precio más barato",
  "icons": {
    "128": "logo128.png"
  },
  "homepage_url": "http://extension.yambalu.com",
  "short_name": "Yambalú",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "iframeResizer.min.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "38": "logo.png"
    },
    "default_title": "Yambalú"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "notifications",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.jmp-des.com/*",
      "*://*.yambalu.com/*"
    ]
  }
}
