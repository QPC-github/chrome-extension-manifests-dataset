{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Butler App",
  "version": "1.0",
  "description": "This extension will parse recipe ingredient data into an easily accessible",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self' https://code.jquery.com/; object-src 'self'",
  "permissions": [
    "storage",
    "https://butler-app-launch.herokuapp.com/*",
    "activeTab",
    "tabs"
  ]
}
