{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SICOF para Buses Urbanos",
  "version": "3.0.6",
  "manifest_version": 2,
  "description": "Ingreso al sistema de control, administración, gestión y monitoreo de buses urbanos, intercantonales e interprovinciales",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    },
    "default_title": "Sistema SICOF para Buses Urbanos"
  }
}
