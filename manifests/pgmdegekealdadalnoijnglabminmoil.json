{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Link Bucket",
  "description": "Public and shared your bookmark folder on the fly!",
  "version": "0.93",
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "http://linkbuckets.com/api/v1*"
  ],
  "background": {
    "scripts": [
      "utils/json2html.js",
      "utils/utils.js",
      "utils/request.js",
      "utils/bookmarks.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "./img/icon.png",
    "default_popup": "./popup/pop_up.html"
  },
  "icons": {
    "16": "./img/16.png",
    "48": "./img/48.png",
    "128": "./img/128.png"
  }
}
