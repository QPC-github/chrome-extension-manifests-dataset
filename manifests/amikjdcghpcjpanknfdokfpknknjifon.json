{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unbias - LinkedIn anonymiser for recruiters",
  "short_name": "Unbias",
  "version": "0.0.0.7",
  "manifest_version": 2,
  "description": "An extension to anonymise LinkedIn profiles and searches to reduce the influence of unconscious bias on recruiters.",
  "homepage_url": "http://unbias.io",
  "web_accessible_resources": [
    "deanonymise.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/profile/*",
        "*://*.linkedin.com/in/*",
        "*://*.linkedin.com/recruiter/*",
        "*://*.linkedin.com/vsearch/*"
      ],
      "css": [
        "anonymise.css"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Unbias Active"
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs",
    "*://*.linkedin.com/profile/*",
    "*://*.linkedin.com/in/*",
    "*://*.linkedin.com/recruiter/*",
    "*://*.linkedin.com/vsearch/*"
  ]
}
