{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Built-ID Inspiration Picker",
  "description": "Pick inspirations from the web and store them to your SandBox on Built-ID",
  "version": "0.0.9",
  "version_name": "0.0.9",
  "background": {
    "scripts": [
      "./scripts/contentscript.js",
      "./scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "built-id-inspiration-picker-19x19.png",
    "default_title": "Built-ID Inspiration Picker"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "built-id-inspiration-picker-16x16.png",
    "48": "built-id-inspiration-picker-48x48.png",
    "128": "built-id-inspiration-picker-128x128.png"
  },
  "web_accessible_resources": [
    "html/frame.html",
    "scripts/frame-script.js",
    "assets/styles/app.css"
  ]
}
