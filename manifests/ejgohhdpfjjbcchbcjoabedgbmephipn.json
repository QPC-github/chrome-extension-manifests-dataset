{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TwitchChatAlerts",
  "description": "Enchance your twitch chat.",
  "version": "1.0.2",
  "author": "brandonviles86@gmail.com",
  "browser_action": {
    "default_title": "TwitchChatAlerts"
  },
  "content_scripts": [
    {
      "css": [
        "app.css"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "app.js"
      ],
      "matches": [
        "https://www.twitch.tv/popout/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
