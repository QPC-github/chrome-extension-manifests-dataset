{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Linknest",
  "short_name": "Linknest",
  "description": "Linknest for Chrome lets you save your favorite website right from your favorite web browser.",
  "offline_enabled": true,
  "version": "1.2.2",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "options.html",
  "homepage_url": "https://linknest.com",
  "background": {
    "persistent": false,
    "scripts": [
      "assets/js/event.js",
      "assets/js/content.js",
      "assets/build/lc.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icons/38.png",
      "38": "assets/icons/38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "background"
  ]
}
