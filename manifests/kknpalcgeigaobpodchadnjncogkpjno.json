{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SimCity BuildIt Search",
  "version": "0.4",
  "description": "Search with SimCity BuildIt and get the lastest Sim City News!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "SimCity BuildIt Search",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "SimCity BuildIt",
      "keyword": "simcity",
      "search_url": "https://search.newtabgallery.com/omnibus-search.php?q={searchTerms}",
      "favicon_url": "https://home.newtabgallery.com/simcity/icon32.png",
      "encoding": "UTF-8",
      "is_default": true
    }
  }
}
