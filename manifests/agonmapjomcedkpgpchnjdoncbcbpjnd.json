{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "web-shade",
  "version": "1.0.1",
  "description": "Block out distracting web habits.",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "css/content-styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Web Shade",
    "default_popup": "templates/icon_action.html"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "history",
    "storage"
  ]
}
