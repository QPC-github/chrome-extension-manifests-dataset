{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QSearch",
  "version": "1.6",
  "description": "Search from a multitude of social media platforms and websites at once from any tab!",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "popup.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "downloads",
    "http://*/*",
    "https://*/*"
  ]
}
