{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "DuckDuckGo POST Search",
  "version": "1.21",
  "description": "Replaces GET request  to POST on DuckDuckGo",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "webRequestBlocking",
    "webRequest",
    "https://duckduckgo.com/?*q=*",
    "https://start.duckduckgo.com/?*q=*",
    "http://duckduckgo.com/?*q=*",
    "http://start.duckduckgo.com/?*q=*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
