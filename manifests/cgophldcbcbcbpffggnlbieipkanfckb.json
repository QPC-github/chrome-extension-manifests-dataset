{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "1.0.4",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "Trains New Tab",
    "default_popup": "popup.html"
  },
  "author": "Rodrigo Correa",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    "img/*"
  ],
  "homepage_url": "http://rodrigoit.com/",
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "bookmarks",
    "chrome://favicon/",
    "topSites",
    "management",
    "storage"
  ],
  "short_name": "Trains New Tab"
}
