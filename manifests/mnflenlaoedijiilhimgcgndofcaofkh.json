{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bookmark Pro",
  "version": "1.0.1",
  "manifest_version": 2,
  "author": "Jeff Vlahos",
  "description": "Save native bookmarks in Chrome faster.",
  "permissions": [
    "bookmarks",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Bookmark Pro for Chrome",
    "default_icon": "icon-16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+D",
        "mac": "Command+D",
        "chromeos": "Ctrl+D",
        "linux": "Ctrl+D"
      }
    }
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/selection.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "short_name": "Bookmark Pro"
}
