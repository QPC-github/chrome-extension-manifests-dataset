{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Retab",
  "version": "0.0.3",
  "description": "Retab updates the new tab with a list of subreddits.",
  "options_ui": {
    "page": "./build/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "chrome_url_overrides": {
    "newtab": "./build/hub.html"
  },
  "permissions": [
    "storage",
    "https://reddit.com/*",
    "https://api.twitch.tv/*"
  ],
  "icons": {
    "16": "./build/icon16.png",
    "48": "./build/icon48.png",
    "128": "./build/icon128.png"
  }
}
