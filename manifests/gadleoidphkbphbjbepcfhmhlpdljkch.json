{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Amazon Tracker",
  "author": "henryzhu(henryzxj1989@gmail.com)",
  "version": "1.1.8",
  "description": "Tracking your products' price, review, question-and-answer, ranks in multi categories and etc., besides your competitors'.",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "https://www.amazon.com.au/",
    "https://www.amazon.com.br/",
    "https://www.amazon.ca/",
    "https://www.amazon.cn/",
    "https://www.amazon.fr/",
    "https://www.amazon.de/",
    "https://www.amazon.in/",
    "https://www.amazon.it/",
    "https://www.amazon.co.jp/",
    "https://www.amazon.com.mx/",
    "https://www.amazon.nl/",
    "https://www.amazon.es/",
    "https://www.amazon.com.tr/",
    "https://www.amazon.co.uk/",
    "https://www.amazon.com/",
    "http://api.mf7m.com/",
    "https://api.mf7m.com/",
    "tabs",
    "cookies",
    "background",
    "unlimitedStorage",
    "storage",
    "idle",
    "cookies",
    "system.cpu",
    "system.memory"
  ],
  "browser_action": {
    "default_title": "Amazon Tracker"
  },
  "background": {
    "persistent": true,
    "page": "pages/background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com ; object-src 'self' "
}
