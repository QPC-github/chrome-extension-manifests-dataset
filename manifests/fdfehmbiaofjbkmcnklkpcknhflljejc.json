{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "deko",
  "description": "deko - Web Made Simple",
  "version": "1.0.0",
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "redirect.html"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "https://*/",
    "http://*/",
    "bookmarks",
    "storage",
    "history"
  ],
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "deko.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://auth-c5e05.firebaseapp.com/*",
      "*://deko.fyi/*",
      "http://localhost/*"
    ]
  }
}
