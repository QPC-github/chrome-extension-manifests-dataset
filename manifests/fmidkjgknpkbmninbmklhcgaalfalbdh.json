{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Use Immersive Reader on Websites [unofficial]",
  "description": "Select text, right-click, and Microsoft's Immersive Reader will help you read it! NOT ENDORSED BY MICROSOFT!",
  "icons": {
    "16": "book16.png",
    "48": "book48.png",
    "128": "book128.png"
  },
  "version": "1.01",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Read text on this page"
  },
  "manifest_version": 2
}
