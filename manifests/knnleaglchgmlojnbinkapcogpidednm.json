{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Voxa - Email to Salesforce Integration",
  "short_name": "Voxa",
  "version": "0.3.2",
  "author": "Voxa, LLC",
  "manifest_version": 2,
  "description": "Toggle on Voxa. Relax. It works silently, auto-logging, creating, and associating e-mails with Salesforce.",
  "icons": {
    "128": "img/voxa-o-dark.png"
  },
  "background": {
    "scripts": [
      "js/browser-action-handler.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "img/voxa-button.png"
    },
    "default_title": "Launch Voxa"
  },
  "web_accessible_resources": [
    "js/*"
  ]
}
