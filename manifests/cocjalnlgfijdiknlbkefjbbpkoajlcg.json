{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HappyTeam",
  "version": "1.0.2",
  "description": "Мотивирайте своя екип и повишете тяхната лоялност.",
  "manifest_version": 2,
  "default_locale": "bg",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "*://*/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "ext.css",
    "popup.js",
    "images/*"
  ]
}
