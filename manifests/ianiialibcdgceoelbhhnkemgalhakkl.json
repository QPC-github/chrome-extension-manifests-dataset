{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KISS FM Ukraine Radio Player",
  "description": "Слушайте любимое радио прямо в браузере.",
  "version": "0.0.1",
  "homepage_url": "https://vk.com/kissfm",
  "permissions": [
    "http://online-kissfm.tavrmedia.ua/*",
    "http://kissfm.ua/*",
    "http://djfordj.info/kissfm/*",
    "contextMenus",
    "tabs",
    "notifications",
    "management"
  ],
  "browser_action": {
    "default_title": "KISS FM Ukraine Radio Player",
    "default_icon": "images/play.png"
  },
  "background": {
    "page": "kissfm_main.html",
    "persistent": true
  },
  "offline_enabled": false,
  "icons": {
    "128": "icon128.png"
  }
}
