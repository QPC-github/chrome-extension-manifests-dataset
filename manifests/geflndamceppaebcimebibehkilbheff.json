{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Drift CLP Reset",
  "description": "Using Drift's Conversational Landing Pages to capture leads at a tradeshow? Automatically clear your Drift cookies after each lead!",
  "author": "Joshua Perk",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "https://*.drift.click/"
  ],
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
