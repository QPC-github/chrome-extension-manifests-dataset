{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Mainland Chinese Blocker",
  "description": "Mainland Chinese Blocker是一個Chrome瀏覽器的擴充功能。它的主要功能是翻譯瀏覽中網頁的大陸用語轉為正常香港用語。",
  "version": "1.0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "browser_action": {
    "default_icon": "img/logo19.png",
    "default_title": "Mainland Chinese Blocker : Enabled"
  },
  "manifest_version": 2
}
