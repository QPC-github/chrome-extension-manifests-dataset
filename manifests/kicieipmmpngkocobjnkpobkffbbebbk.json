{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Space",
  "short_name": "Space",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Your Salesforce Personal Assistant",
  "homepage_url": "http://avantgarde.systems/Space",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options_custom/options.html",
  "background": {
    "scripts": [
      "contextMenu.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Space",
    "default_popup": "src/browser_action/browser_action.html"
  }
}
