{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0",
  "minimum_chrome_version": "9",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "OneSignal.js",
      "background.js"
    ]
  },
  "description": "Αναζήτηση προσφορών και προϊόντων snif.gr.",
  "name": "Snif.gr",
  "permissions": [
    "gcm",
    "storage",
    "notifications",
    "identity",
    "contextMenus"
  ],
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Snif.gr",
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  }
}
