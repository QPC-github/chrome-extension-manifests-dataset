{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "No More Widows",
  "version": "0.2",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "A lightweight extension for persnickety design folk.",
  "homepage_url": "http://www.markthat.com/nomorewidows",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/inject/inject.min.js"
      ]
    }
  ]
}
