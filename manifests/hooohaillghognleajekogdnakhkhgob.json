{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "FastValidate Chrome Extension",
  "version": "1.4",
  "description": "FastValidate is a validation service to validate contact information including email, phone and address validation.",
  "permissions": [
    "storage",
    "https://fastvalidate.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://fastvalidate.com; object-src 'self'",
  "options_page": "options.html",
  "manifest_version": 2
}
