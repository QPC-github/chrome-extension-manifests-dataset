{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shur9000",
  "version": "0.1",
  "description": "Agrega algunas funciones a forocoches",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2,
  "browser_action": {
    "name": "Shur9000",
    "icons": [
      "icon.png"
    ],
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "jquery.min.js",
        "background.js",
        "options.js"
      ],
      "css": [
        "customStyles.css",
        "options.css"
      ],
      "matches": [
        "http://www.forocoches.com/*",
        "https://www.forocoches.com/*"
      ]
    }
  ]
}
