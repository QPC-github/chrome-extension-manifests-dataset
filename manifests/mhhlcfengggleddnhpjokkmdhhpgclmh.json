{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BrightTALK Screen Share",
  "author": "BrightTALK",
  "version": "0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "A quick and simple way for BrightTALK presenters to share their screen during their Pro Webinar.",
  "homepage_url": "http://www.brighttalk.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://www.int05.brighttalk.net/*",
      "https://presenter.local.brighttalk.net/*",
      "https://www.test01.brighttalk.net/*",
      "https://www.stage.brighttalk.net/*",
      "https://www.brighttalk.com/*"
    ]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
