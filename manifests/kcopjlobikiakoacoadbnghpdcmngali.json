{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "!Bang Quick Search",
  "description": "DuckDuckGo !bang quick search",
  "version": "1.5",
  "author": "Brian Dawson",
  "permissions": [
    "*://*.google.com/*",
    "*://*.bing.com/*",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "js/bang.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/bang.png",
    "48": "images/bang.png",
    "128": "images/bang.png"
  }
}
