{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FoodBlocker for Facebook",
  "version": "0.1.0",
  "description": "Hides food related posts on FB, keeping your diet alive",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon32.png"
  },
  "content_scripts": [
    {
      "js": [
        "data/quotes.js",
        "data/list.js",
        "plugin/content.js"
      ],
      "matches": [
        "https://www.facebook.com/"
      ]
    }
  ]
}
