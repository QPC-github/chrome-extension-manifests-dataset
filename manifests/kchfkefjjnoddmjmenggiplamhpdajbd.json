{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HabboColor - Conecte-se ao mundo colorido",
  "short_name": "HabboColor",
  "version": "1.0.3",
  "description": "Escute a rádio da HabboColor diretamente no seu navegador",
  "permissions": [
    "background"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "HabboColor - Escute a rádio",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16x16.png",
      "32": "images/icon-32x32.png",
      "48": "images/icon-48x48.png",
      "128": "images/icon-128x128.png"
    }
  },
  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },
  "manifest_version": 2
}
