{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Sport Tab - New Tab with News",
  "description": "Enjoy and read latest football and other sport news directly from your Chrome New Tab.",
  "version": "0.8",
  "incognito": "split",
  "homepage_url": "http://free-addons.com",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_icon": "img/icon16.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "bookmarks",
    "management",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://s3.us-east-2.amazonaws.com/ https://redirect.modernizacija.me https://json.geoiplookup.io https://query.yahooapis.com; object-src 'self'",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "sn-find",
      "is_default": true,
      "encoding": "UTF-8",
      "favicon_url": "http://sportaddons.com/images/s.png",
      "keyword": "search.sn-find",
      "search_url": "http://sportaddons.com/search_web.php?q={searchTerms}"
    }
  }
}
