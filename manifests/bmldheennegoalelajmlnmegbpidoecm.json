{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Crystal Shards Search",
  "version": "0.3",
  "description": "Search with Crystal Shards and get the lastest Crystal Shards News!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Crystal Shards Search",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Crystal Shards",
      "keyword": "crystalshards",
      "search_url": "https://search.newtabgallery.com/omnibus-search.php?q={searchTerms}",
      "favicon_url": "https://home.newtabgallery.com/crystalshards/icon32.png",
      "encoding": "UTF-8",
      "is_default": true
    }
  }
}
