{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "description": "Creates a short and clean link to the current amazon product page, for easy sharing.",
  "manifest_version": 2,
  "name": "Amazon.sh",
  "page_action": {
    "default_icon": {
      "128": "icon128.png",
      "32": "icon32.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.2",
  "homepage_url": "https://project-roth.com"
}
