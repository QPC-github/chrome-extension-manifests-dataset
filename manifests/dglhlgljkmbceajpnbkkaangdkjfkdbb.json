{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "name": "Theater Mode",
  "short_name": "theater-mode",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "data/content_script/*.css"
  ],
  "homepage_url": "http://mybrowseraddon.com/theater-mode.html",
  "description": "Simply focus on the video with theater mode add-on",
  "options_ui": {
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "browser_action": {
    "default_title": "Theater Mode",
    "default_icon": {
      "16": "data/icons/dark/16.png",
      "32": "data/icons/dark/32.png",
      "48": "data/icons/dark/48.png",
      "64": "data/icons/dark/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
