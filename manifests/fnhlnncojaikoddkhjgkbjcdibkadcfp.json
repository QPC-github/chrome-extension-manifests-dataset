{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "All In 1 Mail",
  "version": "1.0.2",
  "short_name": "All In 1 Mail",
  "description": "All your emails accounts in one place",
  "homepage_url": "http://allin1email.com/",
  "icons": {
    "16": "Icono16.png",
    "32": "Icono32.png",
    "64": "Icono64.png",
    "128": "Icono128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+F",
        "linux": "Alt+F",
        "mac": "Alt+F",
        "windows": "Alt+F"
      }
    }
  },
  "browser_action": {
    "default_icon": "Icono16.png",
    "default_title": "All In 1 Mail"
  },
  "permissions": [
    "http://allin1email.com/",
    "tabs"
  ],
  "chrome_settings_overrides": {
    "homepage": "http://allin1email.com/",
    "search_provider": {
      "name": "All In 1 Mail",
      "keyword": "f",
      "search_url": "http://allin1email.com/get.php?p={searchTerms}",
      "favicon_url": "http://allin1email.com/img/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  }
}
