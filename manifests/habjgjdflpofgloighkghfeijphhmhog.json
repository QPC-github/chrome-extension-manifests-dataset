{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Page Flipper",
  "description": "Rotate through page list, adding/removing pages on a timer",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "downloads",
    "downloads.shelf",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "name": "Page Flipper",
    "default_icon": "red32.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
