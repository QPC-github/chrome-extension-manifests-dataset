{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "page_action": {
    "default_icon": "img/spyIcon19.png",
    "default_title": "Ikariam IkaSpy"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "name": "IkaSpy",
  "description": "Ikariam 0.5.1 espionage overview extension for Google Chrome.   To avoid browser slow-down,\nkeep widget minimized when not using it.",
  "version": "0.5.1.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "matches": [
        "http://*.ikariam.com/*",
        "http://*.ikariam.org/*"
      ],
      "js": [
        "js/jquery-1.8.2.min.js",
        "js/jquery-ui-1.8.24.custom.min.js",
        "translation.js",
        "external.js"
      ]
    }
  ],
  "icons": {
    "16": "img/spyIcon16.png",
    "32": "img/spyIcon32.png",
    "48": "img/spyIcon48.png",
    "128": "img/spyIcon128.png"
  }
}
