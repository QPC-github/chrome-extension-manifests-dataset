{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Screen Sharing for Shyft",
  "author": "Crater Co.",
  "version": "0.0.0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This extension is developed for http://go.shyftmoving.com to enable sharing your screen.",
  "homepage_url": "https://shyftmoving.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.shyftmoving.com/*"
    ]
  },
  "icons": {
    "16": "favicon-16.png",
    "48": "favicon-57.png",
    "128": "favicon-120.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "favicon-16.png"
  ]
}
