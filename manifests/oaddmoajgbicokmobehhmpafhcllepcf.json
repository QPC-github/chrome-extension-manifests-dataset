{
  "name": "Cookies一键清除工具",
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "description": "Cookies一键清除工具(可指定域名或全部清空)，并可以随机切换User-Agent(或自定义)。",
  "minimum_chrome_version": "17.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "browsingData",
    "cookies"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Cookies一键清除工具",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon-big.png",
    "128": "icon-big.png"
  },
  "manifest_version": 2
}
