{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Teravoz Webphone",
  "version": "1.4.4",
  "description": "Com nosso Webphone, você pode integrar as funções de telefonia. Realize e receba chamadas e aumente a produtividade do atendimento.",
  "browser_action": {
    "default_title": "Abrir Teravoz Webphone"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.teravoz.com.br https://cdn-staging.teravoz.com.br; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "system.display",
    "https://*.teravoz.com.br/*"
  ]
}
