{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Wordflow",
  "version": "3.1",
  "manifest_version": 2,
  "description": "The perfect distraction-free text-editor. Tell your stories.",
  "icons": {
    "16": "images/chrome/16.png",
    "48": "images/chrome/48.png",
    "128": "images/chrome/128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "includes/background.js"
      ]
    }
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "minimum_chrome_version": "23.0"
}
