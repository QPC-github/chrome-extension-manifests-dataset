{
  "browser_action": {
    "default_icon": "sfh-48.png",
    "default_popup": "background.html",
    "default_title": "Salesforce Hover is ACTIVE!"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "sfhcss.css"
