{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hotmind - Tasks Manager",
  "description": "Hotmind - Tasks Manager",
  "version": "1.1.1",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://api.hotmind.ru/*",
    "https://api.hotmind.ru/*"
  ],
  "icons": {
    "16": "icons/hotmind.png",
    "64": "icons/hotmind.png",
    "128": "icons/hotmind.png"
  },
  "browser_action": {
    "default_icon": "icons/hotmind_inactive.png",
    "default_title": "Hotmind",
    "default_popup": "popup.html"
  },
  "homepage_url": "http://hotmind.ru/"
}
