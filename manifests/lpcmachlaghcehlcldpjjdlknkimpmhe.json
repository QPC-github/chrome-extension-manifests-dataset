{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pangea",
  "version": "0.1",
  "description": "Use Pangea to quickly alternate between Ecosia and Google search.",
  "permissions": [
    "declarativeContent",
    "storage",
    "commands",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "omnibox": {
    "keyword": "eco"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Pangea: type eco to use.",
    "default_icon": {
      "16": "img/pangea16.png",
      "32": "img/pangea32.png",
      "64": "img/pangea64.png",
      "128": "img/pangea128.png"
    }
  },
  "icons": {
    "16": "img/pangea16.png",
    "32": "img/pangea32.png",
    "64": "img/pangea64.png",
    "128": "img/pangea128.png"
  },
  "commands": {
    "alt-search": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Search with alternate engine."
    }
  },
  "manifest_version": 2
}
