{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "簡易抽籤筒",
  "description": "來抽籤吧！請壓住抽籤筒，搖晃後放開即可～",
  "version": "1.0.0",
  "icons": {
    "16": "hexboxicon.png",
    "48": "hexboxicon.png",
    "128": "hexboxicon.png"
  },
  "browser_action": {
    "default_icon": "hexboxicon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com.tw/*"
      ],
      "js": [
        "start.js"
      ]
    }
  ]
}
