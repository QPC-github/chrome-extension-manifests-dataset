{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Promocode.sale",
  "short_name": "Promocode.sale",
  "description": "Search the selected text in Promocode.sale for promo codes",
  "version": "0.1",
  "permissions": [
    "contextMenus"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "main.js"
    ]
  },
  "manifest_version": 2
}
