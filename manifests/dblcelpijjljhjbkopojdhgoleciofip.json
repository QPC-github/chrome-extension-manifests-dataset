{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Refresh list",
  "icons": {
    "16": "icons/refresh-icon-16.png",
    "48": "icons/refresh-icon-48.png",
    "64": "icons/refresh-icon-64.png",
    "128": "icons/refresh-icon-128.png"
  },
  "version": "1.0.2",
  "author": "Claudiu Ciurdea",
  "short_name": "Refresh list",
  "description": "Create and refresh a list of URLs.",
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/refresh-icon-16.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "resources/jquery-2.1.1.min.js",
      "background/background.js"
    ],
    "persistent": true
  }
}
