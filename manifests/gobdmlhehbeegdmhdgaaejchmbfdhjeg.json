{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PriceDrop",
  "version": "1.1.5",
  "description": "Track Amazon and Best Buy product prices and get notifications when they drop",
  "icons": {
    "16": "/images/16px.png",
    "48": "/images/48px.png",
    "128": "/images/128px.png"
  },
  "browser_action": {
    "default_title": "PriceDrop",
    "default_icon": "images/20px.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.amazon.com/*",
        "http://www.amazon.co.uk/*",
        "http://www.amazon.ca/*",
        "http://www.amazon.de/*",
        "http://www.amazon.fr/*",
        "http://www.amazon.it/*",
        "http://www.amazon.es/*"
      ],
      "js": [
        "amazon.js",
        "commoncontent.js"
      ]
    },
    {
      "matches": [
        "http://*.bestbuy.com/*"
      ],
      "js": [
        "bestbuy.js",
        "commoncontent.js"
      ]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "notifications",
    "http://*.amazon.com/*",
    "http://*.images-amazon.com/*",
    "http://*.amazon.fr/*",
    "http://*.amazon.ca/*",
    "http://*.amazon.co.uk/*",
    "http://*.amazon.de/*",
    "http://*.amazon.it/*",
    "http://*.amazon.es/*",
    "http://*.bestbuy.com/",
    "http://*.stuffstuff.org/*"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/20px.png",
    "images/loading.gif",
    "table/table.html"
  ]
}
