{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "KOLLEKT.FM Extension",
  "description": "Favorite and add tracks to playlists from external websites",
  "version": "1.8",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.mxpnl.com https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://kollekt.fm/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "js/installed.js"
  ]
}
