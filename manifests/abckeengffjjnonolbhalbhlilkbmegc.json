{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hide My Friend",
  "description": "Hide a friend on Facebook with a black square",
  "version": "2.0",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "mainscript.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_start"
    }
  ]
}
