{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BM Share",
  "version": "0.0.3",
  "description": "Share your bookmarks and bookmark folders!",
  "permissions": [
    "bookmarks"
  ],
  "browser_action": {
    "default_title": "My Bookmarks",
    "default_icon": "images/bms_icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/bms_icon.png",
    "32": "images/bms_icon.png",
    "48": "images/bms_icon.png",
    "128": "images/bms_icon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
