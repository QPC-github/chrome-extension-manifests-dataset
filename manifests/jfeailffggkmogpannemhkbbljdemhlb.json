{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BMIOneClick for Aspire",
  "description": "This extension will launch BMI from Aspire.",
  "version": "2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Launch BMI"
  },
  "background": {
    "scripts": [
      "background.js",
      "launchBMI.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent"
  ]
}
