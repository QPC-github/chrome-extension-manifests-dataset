{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PrivacySnapper",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Record privacy agreements and terms of service",
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "scripts": [
      "privacysnapper.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "PrivacySnapper",
    "default_icon": "logo.png"
  },
  "permissions": [
    "tabs",
    "cookies",
    "*://*/*"
  ]
}
