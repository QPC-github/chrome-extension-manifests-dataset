{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Product Genius",
  "description": "Navigate Product Hunt like a pro - an Algorithmia experiment.",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "tabs",
    "*://*.producthunt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.producthunt.com/*"
      ],
      "js": [
        "js/bootstrap.js"
      ],
      "css": [
        "css/font-awesome.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "fonts/*.*",
    "images/*.*",
    "js/*.*",
    "*.*"
  ]
}
