{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tokeet - Connector For Chrome",
  "version": "1.0.0",
  "description": "Chrome extension for connecting your Airbnbn account to Tokeet.",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "https://api.airbnb.com/",
    "https://app.tokeet.com/",
    "https://*.app.tokee.com/",
    "https://api.tokeet.com/",
    "https://dev.api.tokeet.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
