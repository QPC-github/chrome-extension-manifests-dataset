{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hudl Clip Link",
  "description": "Updates Hudl Library URL with a direct link to the clip being played",
  "version": "0.0.0.3",
  "browser_action": {
    "default_icon": "icon-disabled.png"
  },
  "permissions": [
    "activeTab",
    "*://*.hudl.com/library/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.hudl.com/library/*"
      ],
      "js": [
        "js/jquery.min.js",
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
