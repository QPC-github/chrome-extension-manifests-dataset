{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "neXboard Screen Sharing",
  "author": "neXboard GmbH",
  "version": "6.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed to provide screen sharing for neXboard",
  "homepage_url": "https://nexenio.com/nexboard.html",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.nexenio.com/*",
      "https://*.nexboard.de/*",
      "https://*.nexenio.de/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo16.png"
  ]
}
