{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Chrome Compete",
  "version": "1.0.2",
  "description": "Get a daily email report tracking your competitors' Chrome extensions and apps.",
  "short_name": "Chrome Compete",
  "icons": {
    "16": "CCLogo16.png",
    "48": "CCLogo48.png",
    "128": "CCLogo128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "38": "chrome-38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://www.chromecompete.com/",
    "https://www.chromecompete.com/"
  ]
}
