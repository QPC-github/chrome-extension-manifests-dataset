{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Agent Alive Screen Sharing",
  "author": "Agent Alive",
  "short_name": "Agent Alive",
  "version": "1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "homepage_url": "https://app.agentalive.tech/",
  "description": "Allows screen sharing for Agent Alive platform. It doesn't do anything except capture content of your screen.",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.agentalive.tech/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
