{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Go For Box for Chrome",
  "description": "The Go For Box extension enables you to save your favourite web content quickly and easily to your Go For Box account.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "1.1",
  "author": "GoForBox.com",
  "background": {
    "persistent": false,
    "scripts": [
      "/js/jquery-1.9.1.min.js",
      "/js/box_create.js",
      "/js/add_content.js",
      "/js/login.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pages/add_content.html"
  },
  "permissions": [
    "tabs",
    "http://goforbox.com/api/login",
    "http://goforbox.com/api/logout",
    "http://goforbox.com/api/add_content",
    "http://goforbox.com/api/add_box"
  ]
}
