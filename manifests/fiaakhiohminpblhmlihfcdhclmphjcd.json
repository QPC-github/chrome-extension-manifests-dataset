{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Salesforce Developer Tool Suite",
  "short_name": "Salesforce Tools",
  "version": "0.7.0",
  "description": "Suite of tools like Debug log viewer, which loads without any authentication or ask for user name or password. ",
  "permissions": [
    "notifications",
    "downloads",
    "background",
    "declarativeContent",
    "storage",
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "/images/logo/icon-16x16.png",
    "48": "/images/logo/icon-48x48.png",
    "128": "/images/logo/icon-128x128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://mts0.googleapis.com https://maps.googleapis.com; object-src 'self'",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "/scripts/ext/background-pageaction.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "/images/logo/icon-16x16.png",
    "default_title": "Salesforce Developer Tool Suite"
  }
}
