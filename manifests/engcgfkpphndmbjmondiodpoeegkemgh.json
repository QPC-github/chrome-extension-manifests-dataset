{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "VisualizeUs",
  "description": "VisualizeUs helps you collect and connect to the best visual inspiration of the web.",
  "version": "1.0.7",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "tb.png",
    "default_title": "Post to VisualizeUs",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "16": "16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "visualizeus.css"
      ],
      "js": [
        "visualizeus.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
