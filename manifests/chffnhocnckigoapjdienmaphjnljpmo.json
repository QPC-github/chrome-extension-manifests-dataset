{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "contextsearch",
  "default_locale": "en",
  "version": "0.7.1",
  "author": "Trufflepiggy e.U.",
  "homepage_url": "https://www.trufflepiggy.com/contextsearch",
  "icons": {
    "16": "images/omnibox-16x16.png",
    "32": "images/tpchromeicon-32.png",
    "64": "images/tpchromeicon-64.png",
    "128": "images/tpchromeicon-128.png"
  },
  "omnibox": {
    "keyword": "t"
  },
  "browser_action": {
    "default_icon": {
      "128": "images/tpchromeicon-128.png"
    },
    "default_title": "__MSG_iconTitle__"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/cmm_vendor_options.js",
      "js/cmm_env_options.js",
      "js/cmm_default_options.js",
      "js/cmm_local_options.js",
      "js/cmm_options_manager.js",
      "js/tp_sync.js",
      "js/tp_search.js",
      "js/tp_omnibox.js",
      "js/cmm_contextmenus.js",
      "js/cmm_extension_upgrade.js",
      "js/cmm_extension.js",
      "js/cmm_main.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    "js/cmm_web_message_relay.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.trufflepiggy.com/*"
      ],
      "js": [
        "js/cmm_web_message_relay.js"
      ],
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "optional_permissions": [
    "tabs"
  ]
}
