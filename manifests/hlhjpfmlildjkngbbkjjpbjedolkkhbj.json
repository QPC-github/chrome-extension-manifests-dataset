{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "js/bg.js"
    ]
  },
  "web_accessible_resources": [
    "/css/bootstrap.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "/images/random.png"
  },
  "browser_action": {
    "default_popup": "pages/popup.html"
  },
  "description": "Расширение получает рандомное число с сервера random.org",
  "manifest_version": 2,
  "name": "Рандомайзер|Randomizer",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications"
  ],
  "version": "0.0.1"
}
