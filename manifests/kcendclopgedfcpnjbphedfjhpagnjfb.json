{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MinTube",
  "version": "1.1",
  "description": "Watch videos distraction-free",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
