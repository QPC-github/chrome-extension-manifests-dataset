{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "7.2.6",
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "author": "Mail.ru Group",
  "default_locale": "ru",
  "icons": {
    "16": "img/icons/icon-16.png",
    "32": "img/icons/icon-32.png",
    "48": "img/icons/icon-48.png",
    "128": "img/icons/icon-128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://ad.mail.ru; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "visual-bookmarks.html"
  },
  "web_accessible_resources": [
    "resources/fonts/*",
    "img/*"
  ],
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "topSites",
    "webRequest",
    "https://covid.atom.qsoa.cloud/",
    "*://*.cdnmail.ru/*",
    "*://*.imgsmail.ru/*",
    "*://*.mail.ru/*",
    "*://*.ok.ru/*",
    "*://*.userapi.com/*",
    "*://*.vk.com/*",
    "cookies",
    "nativeMessaging"
  ],
  "minimum_chrome_version": "56",
  "browser_action": {
    "default_title": "__MSG_pageActionTitle__",
    "default_icon": {
      "16": "img/browser-action/disabled-16.png",
      "32": "img/browser-action/disabled-32.png",
      "48": "img/browser-action/disabled-48.png",
      "128": "img/browser-action/disabled-128.png"
    }
  }
}
