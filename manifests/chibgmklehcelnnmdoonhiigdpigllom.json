{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Envato Recent Sales & Comments Notifications",
  "short_name": "Envato Notifications",
  "version": "1.0.2",
  "description": "Notifies Envato authors when a new sale/comment has been made on the Envato Marketplaces",
  "author": "delabon.com",
  "background": {
    "scripts": [
      "moment-with-locales.js",
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "webNavigation",
    "*://*.envato.com/*",
    "*://api.envato.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Envato Notifications"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
