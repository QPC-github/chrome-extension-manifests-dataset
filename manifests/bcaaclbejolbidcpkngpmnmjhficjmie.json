{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Charlie Quotes",
  "description": "All your favorite Charlie quotes randomly displayed throughout the day!",
  "version": "2.1",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "css/modal.css"
      ],
      "js": [
        "js/jquery.js",
        "js/modal.js",
        "js/cookie.js",
        "js/script.js"
      ]
    }
  ]
}
