{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Копилка.Онлайн - кэшбэк-сервис",
  "description": "Кэшбэк сервис Копилка.Онлайн с более 950 магазинов",
  "version": "1.1.7",
  "icons": {
    "19": "icon_19x19.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "browser_action": {
    "default_icon": "icon_19x19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "http://*/*",
    "https://*/*"
  ],
  "default_locale": "ru",
  "web_accessible_resources": [
    "assets/*",
    "popup.html"
  ]
}
