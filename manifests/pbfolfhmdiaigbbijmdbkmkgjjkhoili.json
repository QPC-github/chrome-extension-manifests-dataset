{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Hi - My Hindi Translator",
  "version": "1.1.1",
  "description": "English to Hindi Translator Chrome Extension. Easy tool to translate text to Hindi language.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "background": {
    "scripts": [
      "eventpage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
