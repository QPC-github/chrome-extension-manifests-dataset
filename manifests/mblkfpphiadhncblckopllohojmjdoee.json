{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AirBridge",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "description": "Sends phone numbers and URLs to the AirBridge mobile app",
  "version": "1.62.04",
  "permissions": [
    "audio-capture",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    },
    "default_title": "AirBridge Extension",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "welcome.js",
      "riffwave.js",
      "globalsimg.min.js",
      "libmp3lame.min.js",
      "globals.min.js",
      "airbridge.js",
      "airbridgerx.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "content_script.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "images/*",
    "effect.wav"
  ]
}
