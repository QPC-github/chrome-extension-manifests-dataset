{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Loyal Guru Manager panel",
  "description": "This extension shows a on top panel for Loyal Guru manager site",
  "version": "1.0",
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "Open Loyal Guru Manager",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
