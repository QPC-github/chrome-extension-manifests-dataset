{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MeasureMate",
  "description": "The ultimate measuring tool for the web",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "version": "1.1.2",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "browser_action": {
      "default_title": "MeasureMate",
      "default_icon": "icon/icon128.png"
    }
  },
  "commands": {
    "toggle-measure-mate": {
      "suggested_key": {
        "default": "Alt+Shift+Z"
      },
      "description": "Toggles MeasureMate"
    }
  },
  "manifest_version": 2
}
