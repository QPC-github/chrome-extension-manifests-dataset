{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BookmarksButton",
  "version": "1.3",
  "description": "Add a button in your toolbar to open the chrome native bookmarks manager.",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "author": "Christian Barras",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "BookmarksButton",
    "default_icon": "icon_128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
