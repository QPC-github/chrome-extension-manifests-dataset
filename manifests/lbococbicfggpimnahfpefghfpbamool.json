{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "2048",
  "description": "packaged version of 2048, make you load game faster and play it offline",
  "app": {
    "launch": {
      "local_path": "game/index.html",
      "background": {
        "scripts": [
          "main.js"
        ]
      }
    }
  },
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2,
  "permissions": [
    "cookies",
    "storage",
    "management",
    "webRequest",
    "webRequestBlocking"
  ],
  "version": "1.0.1"
}
