{
  "manifest_version": 2,
  "minimum_chrome_version": "37",
  "name": "ViTAM ScreenSharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Vitam",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.1",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in ViTAM applications.",
  "externally_connectable": {
    "matches": [
      "*://*.vitam.es/*",
      "*://*.vitam.udg.edu/*",
      "*://*.udg.edu/*"
    ]
  },
  "icons": {
    "128": "vitam_icon_128.png",
    "16": "vitam_icon_16.png",
    "48": "vitam_icon_48.png"
  },
  "browser_action": {
    "default_icon": "vitam_icon_16.png"
  }
}
