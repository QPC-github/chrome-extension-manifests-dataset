{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Halloween Countdown",
  "description": "Want to know the days until the next Halloween? Then this is the app for you! Automatically updates on the day of Halloween.",
  "version": "1.2",
  "browser_action": {
    "default_icon": "miniicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://rss.bloople.net/",
    "http://www.therebelreport.org/",
    "http://www.justingoetz.net/",
    "webRequest"
  ]
}
