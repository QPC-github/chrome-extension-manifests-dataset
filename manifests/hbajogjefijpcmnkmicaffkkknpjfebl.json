{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kiosk exit",
  "description": "This extension closes any page when its url is updated to contain keyword 'exit', or any other user-specified.",
  "version": "1.0",
  "icons": {
    "16": "kioskexit16.png",
    "48": "kioskexit48.png",
    "128": "kioskexit128.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "tabclose.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
