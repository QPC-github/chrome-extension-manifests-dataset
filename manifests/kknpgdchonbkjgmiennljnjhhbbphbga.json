{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kaplan DM Desktop Streamer",
  "description": "A simple extension that allows you to share your desktop into meetings with DM.",
  "version": "1.0.0",
  "minimum_chrome_version": "60",
  "icons": {
    "16": "k-logo-16x16.png",
    "48": "k-logo-48x48.png",
    "128": "k-logo-128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.mykaplan.tv/*"
    ]
  }
}
