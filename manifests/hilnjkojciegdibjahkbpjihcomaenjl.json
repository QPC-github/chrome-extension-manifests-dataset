{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smart Click Capital Deposit Monitor",
  "short_name": "smart-click-capital-deposit-monitor",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "icons": {
    "128": "/icons/scc_chromeicon.png"
  },
  "browser_action": {
    "default_icon": "/icons/scc_chromeicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://sellercentral.amazon.com/*",
        "https://*.account.amazon.com/*"
      ],
      "js": [
        "/js/jquery.min.js",
        "/inject.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "/js/jquery.min.js",
      "/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://sellercentral.amazon.com/*",
    "https://*.account.amazon.com/*",
    "alarms",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "/*"
  ]
}
