{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Incentive Messenger",
  "version": "1.0.0.1",
  "description": "Group chat and instant messaging for teams. Securely connect and communicate on the go with Incentive Messenger.",
  "short_name": "Incentive Messenger",
  "permissions": [
    "webview",
    "pointerLock",
    "videoCapture",
    "audioCapture",
    "storage",
    "notifications"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  }
}
