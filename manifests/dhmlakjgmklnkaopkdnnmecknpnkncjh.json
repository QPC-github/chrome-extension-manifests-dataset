{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0",
  "version_name": "2018.05.017 release",
  "manifest_version": 2,
  "name": "Moonly",
  "short_name": "savetomoonly",
  "description": "Share and discover best of the internet and whats interesting to you",
  "chrome_url_overrides": {
    "newtab": "views/newtab.html"
  },
  "icons": {
    "16": "img/robot-logo.png",
    "48": "img/robot-logo.png",
    "128": "img/robot-logo.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "cookies",
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "js/libs/jquery.min.js",
      "js/bg.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/robot-logo.png",
    "default_popup": "views/popup.html"
  },
  "offline_enabled": true
}
