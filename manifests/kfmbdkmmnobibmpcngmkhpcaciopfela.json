{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Realine Screen Sharing",
  "author": "Realine",
  "version": "2.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for Realine videochat. It doesn't do anything except capture of your screen.",
  "homepage_url": "http://realine.net/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://video.realine.xxx/*",
      "https://videoreact.realine.xxx/*",
      "*://localhost/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
