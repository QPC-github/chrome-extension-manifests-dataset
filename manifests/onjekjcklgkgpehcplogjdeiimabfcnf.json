{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pro-Choice Honesty Plug-in",
  "description": "Changes the term Pro-Choice to a more honest term.",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "truthIcon16.png",
    "48": "truthIcon48.png",
    "128": "truthIcon128.png"
  }
}
