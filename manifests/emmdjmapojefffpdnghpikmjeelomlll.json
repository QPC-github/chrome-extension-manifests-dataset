{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "vipkid-tools-test",
  "description": "",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js",
      "js/base.js"
    ]
  },
  "icons": {
    "48": "img/icon.png"
  },
  "page_action": {
    "default_title": "vipkid",
    "default_popup": "popup.html",
    "default_icon": "img/icon.png"
  },
  "permissions": [
    "browsingData",
    "webRequest",
    "webRequestBlocking",
    "system.cpu",
    "system.storage",
    "system.memory",
    "tabs",
    "activeTab",
    "cookies",
    "storage",
    "webNavigation",
    "declarativeContent",
    "*://*.vipkid.com.cn/",
    "*://*.vipkidteachers.com/"
  ],
  "event_rules": [
    {
      "event": "declarativeContent.onPageChanged",
      "actions": [
        {
          "type": "declarativeContent.ShowPageAction"
        }
      ],
      "conditions": [
        {
          "type": "declarativeContent.PageStateMatcher",
          "pageUrl": {
            "urlContains": "vipkid.com.cn"
          }
        }
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/*"
  ],
  "manifest_version": 2
}
