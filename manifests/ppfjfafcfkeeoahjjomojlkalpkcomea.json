{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Vanishh",
  "description": "A simple and effective solution for securely sending e-mails that should only be read once by the intended recipients. ",
  "version": "1.0.20095",
  "options_page": "options.html",
  "default_locale": "en",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "page_action": {
    "default_icon": "images/vanishhlogo.png",
    "default_title": "Vanishh"
  },
  "permissions": [
    "https://mail.google.com/mail/*",
    "https://mail.google.com/",
    "http://www.google.com/*",
    "https://*/*",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    "jquery-ui-1.10.4.min.css",
    "cryptomail.css",
    "images/vanishhlogo.png",
    "images/vanishhlogo.gif",
    "images/lock_22x22.gif",
    "images/read.png",
    "images/unread.png",
    "images/vanishh.png",
    "images/vanishh_monster.png",
    "images/ui-bg_diagonals-thick_18_b81900_40x40.png",
    "images/ui-bg_diagonals-thick_20_666666_40x40.png",
    "images/ui-bg_flat_10_000000_40x100.png",
    "images/ui-bg_glass_100_f6f6f6_1x400.png",
    "images/ui-bg_glass_100_fdf5ce_1x400.png",
    "images/ui-bg_glass_65_ffffff_1x400.png",
    "images/ui-bg_gloss-wave_35_f6a828_500x100.png",
    "images/ui-bg_highlight-soft_100_eeeeee_1x100.png",
    "images/ui-bg_highlight-soft_75_ffe45c_1x100.png",
    "images/ui-icons_222222_256x240.png",
    "images/ui-icons_228ef1_256x240.png",
    "images/ui-icons_ef8c08_256x240.png",
    "images/ui-icons_ffd27a_256x240.png",
    "images/ui-icons_ffffff_256x240.png"
  ]
}
