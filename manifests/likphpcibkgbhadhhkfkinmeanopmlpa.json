{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "B24 button",
  "description": "Кнопка для размещения ссылки в портал Битрикс 24",
  "version": "2.1",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "http://*/*"
  ],
  "browser_action": {
    "default_title": "Опубликовать в моем Б24",
    "default_icon": "48x48.png",
    "default_popup": "popup.html"
  }
}
