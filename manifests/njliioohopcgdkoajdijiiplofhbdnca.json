{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.7",
  "manifest_version": 2,
  "name": "ECP",
  "short_name": "ARM ECP",
  "description": "Расширение для плагина ARM ECP",
  "permissions": [
    "system.storage",
    "nativeMessaging",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "./images/test_icon128.png",
    "48": "./images/test_icon48.png",
    "16": "./images/test_icon16.png"
  },
  "browser_action": {
    "default_icon": "./images/test_icon48.png",
    "default_popup": "./html/popup.html",
    "default_title": "ECP: Нажмите для более подробной информации"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": false
  }
}
