{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PonyTown Plugin",
  "short_name": "PonyTown Plugin",
  "manifest_version": 2,
  "version": "3.0.3.1",
  "description": "Add Emoji Shortcut to the Pony.Town Game",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "data/*"
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "*://*.pony.town/*",
        "file:///*/Po*Town.html",
        "file:///*po*.town/index.html"
      ],
      "css": [
        "css.css"
      ],
      "js": [
        "jquery.min.js",
        "jquery.migrate.js",
        "jquery.mobile.custom.min.js",
        "draggabilly.pkgd.min.js",
        "js-sortable.js",
        "js-jquery-sortable.js",
        "interact.min.js",
        "jq-attrchange.js",
        "js.js"
      ]
    }
  ]
}
