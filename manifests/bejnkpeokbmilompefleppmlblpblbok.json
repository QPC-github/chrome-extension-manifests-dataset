{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "version": "3.2.10.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "homepage_url": "https://userguiding.com",
  "default_locale": "en",
  "browser_action": {
    "default_title": "__MSG_appName__"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app.bundle.js"
      ],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*.userguiding.com/*",
      "http://localhost/*"
    ]
  },
  "permissions": [
    "webNavigation",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "bundle.css",
    "fonts.css",
    "non-shadow.css",
    "icons/*",
    "fonts/*",
    "steptypes/*",
    "logo/*",
    "templates/*",
    "emptystate/*"
  ]
}
