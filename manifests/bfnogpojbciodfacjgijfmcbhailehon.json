{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Full-Window Player for YouTube",
  "version": "1.0",
  "description": "Adds a button to YouTube videos that toggles a full-window player.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
