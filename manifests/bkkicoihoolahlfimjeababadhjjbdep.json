{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "default_icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "goodrae.js"
      ],
      "matches": [
        "http://*/*"
      ]
    }
  ],
  "description": "Goodrae - Diccionario hipertextual e inverso basado en el DRAE",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png"
  },
  "manifest_version": 2,
  "name": "Goodrae",
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0"
}
