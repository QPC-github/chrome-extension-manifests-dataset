{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Videocart.com Screen-sharing application",
  "description": "An extension to allow you to screen share your video editing.",
  "version": "0.2.0",
  "manifest_version": 2,
  "icons": {
    "16": "assets/vc-16.png",
    "48": "assets/vc-48.png",
    "128": "assets/vc-128.png"
  },
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/vc-32.png"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://videocart-214909.firebaseapp.com/*",
      "https://*.videocart.com/*",
      "https://videocart.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
