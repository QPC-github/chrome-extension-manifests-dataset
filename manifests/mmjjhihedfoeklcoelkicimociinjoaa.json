{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.1",
  "name": "New Tab Query Image",
  "description": "Load a query term matched image or gif from leading sites when new tab opens.",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "src/assets/images/128.png"
  },
  "chrome_url_overrides": {
    "newtab": "src/main.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "/src/assets/images/16.png",
    "48": "/src/assets/images/48.png",
    "128": "/src/assets/images/128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
