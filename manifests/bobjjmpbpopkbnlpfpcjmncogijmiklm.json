{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "jquery-1.8.0.min.js",
        "hide_twitter_replies.js"
      ],
      "matches": [
        "*://twitter.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Hide annoying replies on Twitter, see the genuine tweets.",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "minimum_chrome_version": "6",
  "name": "Hide Twitter Replies",
  "permissions": [
    "*://twitter.com/*"
  ],
  "version": "1.0.1",
  "manifest_version": 2
}
