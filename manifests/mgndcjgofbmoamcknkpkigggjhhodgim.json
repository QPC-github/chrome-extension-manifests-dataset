{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PlaneSpotters",
  "version": "4.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.flightradar24.com/*"
      ],
      "js": [
        "jquery.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "airplane16.png",
    "default_title": "Save selected aircraft to your personal database"
  },
  "description": "theplanespotterscommunity",
  "icons": {
    "16": "airplane16.png",
    "48": "airplane48.png",
    "128": "airplane128.png"
  },
  "manifest_version": 2
}
