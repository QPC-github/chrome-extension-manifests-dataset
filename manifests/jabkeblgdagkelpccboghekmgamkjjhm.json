{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Booklya Screen Sharing",
  "author": "Booklya",
  "version": "1.4",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Расширение позволяет расшаривать экран в онлайн-трансляции",
  "homepage_url": "https://booklya.ru",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://booklya.ru/*",
      "https://*.booklya.ru/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo_16x16.png",
    "48": "logo_48x48.png",
    "128": "logo_128x128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo_48x48.png"
  ]
}
