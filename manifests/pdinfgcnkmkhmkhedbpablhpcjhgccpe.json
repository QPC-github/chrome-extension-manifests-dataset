{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Salesforce Search ",
  "short_name": "Salesforce Serach for selected text",
  "description": "Quickly Salesforce search for selected text via right-click",
  "author": "Ghanshyam Choudhari",
  "version": "1",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "utils.js",
      "common.js",
      "xin.js",
      "settings.js",
      "setup.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  }
}
