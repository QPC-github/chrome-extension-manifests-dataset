{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shuttle",
  "description": "Share the complete content of an article via email in just 2 clicks.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "shuttle-icon.png",
    "icons": {
      "16": "shuttle-icon.png",
      "48": "shuttle-icon.png",
      "128": "shuttle-icon.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "bower_components/bootstrap/dist/css/bootstrap.css/style.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "oauth2": {
    "client_id": "688240404726-hoap1a5kj7haf57lqdljblv6v1ljcljl.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email https://www.googleapis.com/auth/gmail.compose https://mail.google.com/ https://www.googleapis.com/auth/gmail.modify https://www.google.com/m8/feeds https://www.googleapis.com/auth/contacts.readonly"
    ]
  },
  "permissions": [
    "https://readability.com/",
    "https://ajax.googleapis.com/",
    "https://ribhu.azure-mobile.net/",
    "http://ajax.aspnetcdn.com/",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "https://www.googleapis.com/auth/userinfo.email",
    "https://www.googleapis.com/auth/gmail.compose",
    "https://mail.google.com/",
    "https://www.googleapis.com/auth/gmail.modify",
    "tabs",
    "identity",
    "storage"
  ]
}
