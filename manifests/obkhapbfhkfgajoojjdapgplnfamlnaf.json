{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Vasiliy Lazarev",
  "version": "0.3.0.3",
  "name": "__MSG_application_title__",
  "description": "__MSG_application_description__",
  "default_locale": "ru",
  "icons": {
    "16": "img/icon/logo-16x16.png",
    "32": "img/icon/logo-32x32.png",
    "48": "img/icon/logo-48x48.png"
  },
  "options_page": "options.html",
  "permissions": [
    "<all_urls>",
    "notifications",
    "background",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_title": "__MSG_application_title__",
    "default_icon": "img/icon/logo-48x48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "commands": {
    "mmp-toggle-play": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "__MSG_application_togglePlay__"
    },
    "mmp-next-track": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "__MSG_application_nextTrack__"
    },
    "mmp-prev-track": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "__MSG_application_prevTrack__"
    },
    "mmp-add-to-myaudio": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "__MSG_application_addTrack__"
    }
  },
  "web_accessible_resources": [
    "img/icon/logo-48x48.png"
  ]
}
