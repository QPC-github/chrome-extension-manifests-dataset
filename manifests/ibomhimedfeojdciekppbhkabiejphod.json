{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Framatalk Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Framatalk.",
  "version": "1.0.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "framatalk16.png",
    "48": "framatalk48.png",
    "128": "framatalk128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "desktopCapture"
  ],
  "externally_connectable": {
    "matches": [
      "*://framatalk.org/*"
    ]
  }
}
