{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Tutor Screen Sharing",
  "author": "Tutor",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension is developed for https://tutor.ru WCS Api to enable screen capture.",
  "homepage_url": "https://tutor.ru",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://tutor.ru/*",
      "https://*.tutor.ru/*",
      "https://tutors.ru/*",
      "https://*.tutors.ru/*",
      "*://localhost/*",
      "*://127.0.0.1/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "logo48.png"
  ]
}
