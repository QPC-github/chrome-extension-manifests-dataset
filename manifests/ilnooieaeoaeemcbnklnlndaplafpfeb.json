{
  "name": "FOCUS",
  "description": "FOCUS puts news headlines and updates from your favourite Blogs in a compact, readable and minimalistic box.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png"
    },
    "default_title": "Click to FOCUS",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "manifest_version": 2,
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "version": "0.0.4"
}
