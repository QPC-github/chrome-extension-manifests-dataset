{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Copy&Tag Easily on Facebook",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "64": "icon-menu.png"
  }
}
