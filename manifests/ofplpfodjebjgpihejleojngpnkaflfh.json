{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Your Petra",
  "short_name": "YourPetra",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/icons/PetraEmotionx16.png",
    "48": "images/icons/PetraEmotionx48.png",
    "128": "images/icons/PetraEmotionx128.png"
  },
  "browser_action": {
    "default_icon": "images/icons/PetraEmotionx16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://api.bloonando.com/"
  ]
}
