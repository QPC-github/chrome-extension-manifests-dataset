{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "KJV Bible Verse Tagger",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Automatically create links to Bible verses or right click search any website passage using the KJV simple search parallel Bible.",
  "icons": {
    "16": "ktagger16.png",
    "48": "ktagger48.png",
    "128": "ktagger128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "ktagger32.png",
      "38": "ktagger48.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "kjvbibletag.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ]
}
