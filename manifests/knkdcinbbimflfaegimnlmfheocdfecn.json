{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "scripts": [
      "assets/js/jquery-3.3.1.min.js",
      "assets/js/background.js",
      "assets/js/send.js"
    ]
  },
  "name": "PR-Gateway: Presseportal Extension",
  "short_name": "PRG",
  "icons": {
    "128": "assets/images/icons/icon128.png",
    "48": "assets/images/icons/icon48.png",
    "16": "assets/images/icons/button.png"
  },
  "web_accessible_resources": [
    "res/*",
    "assets/*"
  ],
  "default_locale": "de",
  "description": "Veröffentlichen Sie Ihre Pressemitteilungen einfach & schnell auf über 250 kostenlosen Presseportalen.",
  "homepage_url": "https://www.pr-gateway.de/",
  "version": "1.0.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "login.html",
    "default_icon": "assets/images/icons/button.png",
    "default_title": "PR-Gateway"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "webNavigation",
    "storage"
  ]
}
