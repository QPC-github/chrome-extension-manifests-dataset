{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Quraner Screen Capture",
  "author": "Ahmed Abbas",
  "version": "3.6",
  "manifest_version": 2,
  "minimum_chrome_version": "35",
  "description": "Quraner extension for screen capturing during video sessions.",
  "homepage_url": "https://quraner.com/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.quraner.com/*"
    ]
  },
  "icons": {
    "128": "quraner.128x128.png",
    "16": "quraner.16x16.png",
    "48": "quraner.48x48.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "quraner.48x48.png"
  ]
}
