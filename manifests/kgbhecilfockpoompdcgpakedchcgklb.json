{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Character Count Tool",
  "description": "Counting the number characters in the selected text",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "notifications",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "wordstats.js"
    ]
  },
  "manifest_version": 2,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "homepage_url": "http://charactercounttool.net",
  "offline_enabled": true
}
