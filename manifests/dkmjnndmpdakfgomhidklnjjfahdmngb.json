{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "网易屏幕录制",
  "description": "Allows you to capture your desktop for use in video applications",
  "version": "0.9.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "网易屏幕录制"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://10.242.65.222/*",
      "*://webnrtc.netease.im/*",
      "*://app.netease.im/*",
      "*://apptest.netease.im/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "declarativeContent"
  ]
}
