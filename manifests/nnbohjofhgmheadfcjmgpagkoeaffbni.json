{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "3DR - Three Day Respawn",
  "version": "2.0.1",
  "description": "Keep up with the latest 3DR News and Discussion",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "3DR.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://3dayrespawn.com/*",
    "http://*.3dayrespawn.com/*",
    "https://*.twitter.com/*",
    "https://twitter.com/*",
    "tabs"
  ],
  "icons": {
    "16": "3DR_Logo_16.png",
    "48": "3DR_Logo_48.png",
    "128": "3DR_Logo_128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
