{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BufferVPN - Free Privacy & Security",
  "version": "1.27.11",
  "manifest_version": 2,
  "description": "You can stay secure and private on the Internet with us!",
  "homepage_url": "http://example.com",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "management",
    "proxy",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png"
    },
    "default_title": "BufferVPN - Free Privacy & Security",
    "default_popup": "popup/popup.html"
  }
}
