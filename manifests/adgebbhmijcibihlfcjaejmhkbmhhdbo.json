{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Steamgifts point monitoring",
  "version": "2.1",
  "description": "Real-time(60s) monitoring steamgifts.com website widget sweepstakes points. 监控steamgifts.com网站抽奖点数的小插件",
  "icons": {
    "128": "./sgpoint.png"
  },
  "background": {
    "scripts": [
      "jquery-1.9.1.min.js",
      "background.js"
    ]
  },
  "manifest_version": 2,
  "permissions": [
    "notifications",
    "tabs",
    "http://www.steamgifts.com/*"
  ],
  "browser_action": {
    "default_title": "SGPoint",
    "default_icon": "./sgpoint.png"
  }
}
