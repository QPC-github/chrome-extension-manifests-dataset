{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SGT Schaller Alert",
  "version": "2.3",
  "description": "Savoir quand SGT Schaller est en live !",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "64": "img/icon-on-64.png",
    "128": "img/icon-on-128.png"
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/config.js",
      "js/initialization.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "notifications"
  ]
}
