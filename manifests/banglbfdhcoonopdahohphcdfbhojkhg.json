{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GNU Social Share",
  "description": "Share content to your GNU Social as easily as you do with every other social network",
  "version": "1.2",
  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "popup.html",
    "default_title": "Share on your GNU Social!",
    "scripts": [
      "script.js"
    ],
    "css": [
      "style.css"
    ]
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "icons": {
    "19": "icon19.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
