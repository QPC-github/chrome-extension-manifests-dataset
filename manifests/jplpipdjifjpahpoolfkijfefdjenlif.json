{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Quick 3FM",
  "description": "One Button: toggle listening to \"3FM, Serious Radio!\"",
  "author": "Koen Bollen <meneer@koenbollen.nl>",
  "version": "0.1",
  "icons": {
    "16": "media/icon.png",
    "48": "media/icon.png",
    "128": "media/icon.png"
  },
  "browser_action": {
    "default_icon": "media/icon.png",
    "default_title": "Quick 3FM: Click to Play"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
