{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "YouTube Time Hider",
  "description": "Hides the length/current time of YouTube videos by making the control bar appear only on hover.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "http://youtube.com/*",
        "http://www.youtube.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "css": [
        "timehider.css"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
