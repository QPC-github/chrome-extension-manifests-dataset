{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DataTrust",
  "version": "1.2",
  "omnibox": {
    "keyword": "*"
  },
  "manifest_version": 2,
  "options_page": "options/options.html",
  "description": "Access privacy policy information on the fly while browsing the web.",
  "browser_action": {
    "default_icon": "images/thumbsdown-19.png",
    "default_popup": "popup.html",
    "default_title": "Security Popup"
  },
  "icons": {
    "16": "images/dt-icon-16.png",
    "48": "images/dt-icon-48.png",
    "128": "images/dt-icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ]
}
