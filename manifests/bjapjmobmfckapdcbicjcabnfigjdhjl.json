{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*.skatter.me/*"
    ]
  },
  "description": "Skatter Screenshare Chrome Extension",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Skatter Screenshare",
  "permissions": [
    "desktopCapture",
    "activeTab",
    "https://*.skatter.me/"
  ],
  "short_name": "Skatter Screenshare",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.8"
}
