{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Puntio",
  "short_name": "Puntio",
  "version": "0.0.7",
  "description": "Navegar tiene recompensa. Consigue descuentos y premios por navegar en Internet.",
  "icons": {
    "16": "puntio16x16.png",
    "48": "puntio48x48.png",
    "128": "puntio128x128.png"
  },
  "author": "Puntio",
  "homepage_url": "http://puntio.com",
  "background": {
    "persistent": true,
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "permissions": [
    "alarms",
    "contentSettings",
    "contextMenus",
    "cookies",
    "fileBrowserHandler",
    "identity",
    "idle",
    "notifications",
    "privacy",
    "proxy",
    "storage",
    "tabs",
    "topSites",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ]
}
