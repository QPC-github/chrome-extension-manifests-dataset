{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Fullscreen Messenger",
  "description": "Swaps messenger.com into a simplified fullscreen mode.",
  "version": "0.0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fullscreen Messenger"
  },
  "permissions": [
    "tabs",
    "https://www.messenger.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
