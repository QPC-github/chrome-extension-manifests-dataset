{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Gravy Host Screen Sharing",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Gravy Hosts",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.2",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "This features enables hosts on Gravy's live show platform to share their screen during their own live broadcasts",
  "externally_connectable": {
    "matches": [
      "https://gravy.live/*"
    ]
  },
  "icons": {
    "16": "16w.png",
    "48": "48w.png",
    "128": "128w.png"
  },
  "browser_action": {
    "default_icon": "16w.png"
  }
}
