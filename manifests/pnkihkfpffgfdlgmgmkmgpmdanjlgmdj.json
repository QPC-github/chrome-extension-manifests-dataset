{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Random Yoruba Proverbs",
  "version": "1.2.0",
  "description": "Replaces a new tab with a random yoruba proverb featuring it's interpretation and meaning.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "chrome_url_overrides": {
    "newtab": "tabPage.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "./images/icon16.jpg",
      "24": "./images/icon24.jpg",
      "32": "./images/icon32.jpg"
    }
  },
  "manifest_version": 2
}
