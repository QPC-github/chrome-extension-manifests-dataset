{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Search in PeeringDB",
  "short_name": "PeeringDB",
  "description": "Use a search box or the context menu to search for ASNs, Networks, and IXs in PeeringDB",
  "version": "2.1",
  "manifest_version": 2,
  "author": "Joel Pacheco",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "peeringdb48.png",
    "default_popup": "peeringdb.html"
  },
  "icons": {
    "16": "peeringdb16.png",
    "48": "peeringdb48.png",
    "128": "peeringdb128.png"
  }
}
