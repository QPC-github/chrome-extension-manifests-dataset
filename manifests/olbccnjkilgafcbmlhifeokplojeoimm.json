{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "(flip) Cookie flip!",
  "description": "Flips a cookie between two states and reloads the page",
  "version": "1.0.1",
  "background": {
    "scripts": [
      "cookieflip.js",
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Click to change the icon's color",
    "default_icon": "icon19.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
