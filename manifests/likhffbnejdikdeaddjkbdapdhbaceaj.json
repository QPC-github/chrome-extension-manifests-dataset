{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "jquery.1.7.2.js",
        "loader.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "images/logo16x16.png",
    "default_title": "Конфетамин",
    "default_popup": "popup.html"
  },
  "description": "Конфетамин, интересно обо всем",
  "icons": {
    "128": "images/logo128x128.png",
    "16": "images/logo16x16.png",
    "48": "images/logo48x48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "18.0",
  "name": "Konfetamin.ru официальный плагин",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.7.0.12"
}
