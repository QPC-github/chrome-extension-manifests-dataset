{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "ZalivAccs",
  "description": "Browser extension to manage web site cookies",
  "version": "1.0.0",
  "author": "Arby Tran",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Add your cookie here!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "https://*.facebook.com/",
    "https://facebook.com/",
    "tabs"
  ],
  "background": {
    "scripts": [
      "main.js"
    ]
  }
}
