{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "author": "Vitaliano Palmieri Neto",
  "background": {
    "scripts": [
      "tools.js",
      "jquery.min.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "proofreading.png"
    }
  },
  "content_scripts": [
    {
      "css": [
        "tools.css"
      ],
      "js": [
        "jquery.min.js",
        "tools.js"
      ],
      "matches": [
        "http://*/*, https://*/*"
      ]
    }
  ],
  "description": "A set of tools to improve the Proof-Reading skills in a daily basis",
  "name": "Proof-Reading Tools",
  "permissions": [
    "activeTab"
  ],
  "version": "0.0.0.2"
}
