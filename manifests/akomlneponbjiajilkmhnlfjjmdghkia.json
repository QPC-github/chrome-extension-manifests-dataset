{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Favematic.com",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Easily create & manage online bookmarks across all devices with Favematic.com",
  "homepage_url": "http://favematic.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Add to Favematic",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
