{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "What's new!",
  "description": "This extension lets you get notifications instantly from your favourite social networking site powered by Oxwall",
  "version": "1.0.0.2",
  "author": "Zarif Safiullin",
  "browser_action": {
    "default_title": "What's new!",
    "default_popup": "views/index.html",
    "default_icon": "css/images/icon48.png"
  },
  "icons": {
    "16": "css/images/icon16.png",
    "48": "css/images/icon48.png",
    "128": "css/images/icon128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "options_page": "views/options.html",
  "background": {
    "page": "views/background.html"
  }
}
