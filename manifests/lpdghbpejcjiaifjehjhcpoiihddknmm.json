{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "gyazo permalink to direct image link",
  "description": "GyazoったらクリップボードのURLをImageの直リンクに書き換えるやつ",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "http://gyazo.com/*",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://gyazo.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
