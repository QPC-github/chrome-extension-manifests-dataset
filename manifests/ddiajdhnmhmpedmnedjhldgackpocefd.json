{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Notepad",
  "short_name": "Notepad",
  "description": "A light-weight notetaking tool.",
  "version": "1.0.4",
  "minimum_chrome_version": "38",
  "offline_enabled": true,
  "permissions": [
    "storage",
    "unlimitedStorage",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "icons": {
    "128": "assets/icon-128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
