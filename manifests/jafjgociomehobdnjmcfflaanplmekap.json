{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "satyr.io",
  "description": "Satyr.io extension for offline usage",
  "version": "0.3.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon-19-grayscale.png",
      "38": "icon-38-grayscale.png"
    },
    "default_title": "Enable offline mode"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://satyr.io/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
