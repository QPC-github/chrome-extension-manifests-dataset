{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CCR EasyConnect Screen Sharing for OpenTok",
  "short_name": "Screen Sharing",
  "author": "CCR EasyConnect",
  "description": "Screen sharing extension for an WebRTC Application. It doesn't do anything except capture content of your screen.",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "45",
  "homepage_url": "https://chat.ccr.com.tr/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.ccr.com.tr/*"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon128.png"
  ]
}
