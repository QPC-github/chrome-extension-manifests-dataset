{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VK Oasis",
  "description": "Extension for anonymous evaluation of your friends",
  "version": "1.1",
  "content_scripts": [
    {
      "matches": [
        "*://vk.com/*"
      ],
      "js": [
        "vk_inject.js"
      ],
      "css": [
        "vk_styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons_vk_oasis.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
