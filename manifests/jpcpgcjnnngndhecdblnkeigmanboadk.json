{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Subtle Patterns",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Lets web designers preview any of the [Subtle Patterns](http://subtlepatterns.com) tiled across their websites' background.",
  "icons": {
    "16": "icon.16.png",
    "48": "icon.48.png",
    "128": "icon.128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Set a Subtle Patterns.",
    "default_icon": "toolbar_icon.png",
    "default_popup": "main.html"
  }
}
