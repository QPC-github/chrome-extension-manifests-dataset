{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NewsletterSpot - Content Curation Tool.",
  "short_name": "NewsletterSpot",
  "description": "Curate Content to bookmark, share, build newsletters, blog.",
  "version": "1.3",
  "background": {
    "scripts": [
      "event.js",
      "content.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab"
  ]
}
