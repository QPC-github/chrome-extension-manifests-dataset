{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Clima en Mexico",
  "description": "Imagen satelital de las condici√≥nes meteorologicas actuales de la Replublica Mexicana",
  "version": "3.6",
  "browser_action": {
    "default_title": "Clima en Mexico",
    "default_icon": "img/weather_24x24.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "24": "img/weather_24x24.png",
    "48": "img/weather_48x48.png",
    "72": "img/weather_72x72.png",
    "128": "img/weather_128x128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "unlimited_storage"
  ]
}
