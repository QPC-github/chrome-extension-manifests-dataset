{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Benefie",
  "version": "1.32.0",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "/images/benefie_icon.png"
  },
  "web_accessible_resources": [
    "https://plugin.benefie.com/stores.php",
    "https://plugin.benefie.com/authenticate.php"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-2.2.1.min.js",
        "toast.min.js",
        "ext.js"
      ],
      "css": [
        "toast.min.css"
      ]
    }
  ]
}
