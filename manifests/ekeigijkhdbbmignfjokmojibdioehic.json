{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Malayalam Dictionary",
  "short_name": "Malayalam Dictionary ",
  "description": "Malayalam Dictionary extension for chrome using Olam Malayalam dictionary.",
  "version": "1.0.1",
  "author": "Jose Cherian",
  "minimum_chrome_version": "30",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": [
      "app.js"
    ]
  },
  "browser_action": {
    "default_icon": "assets/icon48.png"
  }
}
