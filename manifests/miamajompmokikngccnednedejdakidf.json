{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Buy Coupons",
  "description": "A Simple application to buy coupons for famous shopping websites",
  "version": "1.0.0",
  "offline_enabled": true,
  "icons": {
    "19": "imgs/sharepad1.png",
    "48": "imgs/sharepad2.png",
    "128": "imgs/sharepad3.png"
  },
  "browser_action": {
    "default_icon": "imgs/sharepadx128.png",
    "default_popup": "popamaanup.html"
  },
  "background": {
    "scripts": [
      "popamaanup.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
