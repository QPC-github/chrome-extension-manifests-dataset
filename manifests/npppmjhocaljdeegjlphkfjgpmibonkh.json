{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Leapsome",
  "version": "1.2",
  "description": "The All-in-One Platform for engagement surveys, feedback, 360Â° performance reviews, OKR tracking and 1:1 meetings",
  "icons": {
    "16": "images/Logo16.png",
    "48": "images/Logo48.png",
    "128": "images/Logo128.png",
    "256": "images/Logo256.png"
  },
  "permissions": [
    "identity",
    "https://www.leapsome.com/",
    "https://*.google.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": [
        "inboxsdk.js",
        "loader.js"
      ],
      "css": [
        "leapsome.css",
        "bootstrap-iso.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/logo.png",
    "images/icon.png",
    "client.html",
    "js/client.js",
    "js/client-init.js"
  ]
}
