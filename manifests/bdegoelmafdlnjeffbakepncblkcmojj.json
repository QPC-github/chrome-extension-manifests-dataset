{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Desktop Sharing",
  "version": "1.2",
  "manifest_version": 2,
  "description": "WebRTC Desktop Sharing",
  "background": {
    "scripts": [
      "capture.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/viewershare16.png",
    "22": "images/viewershare22d.png",
    "32": "images/viewershare32.png",
    "48": "images/viewershare48.png",
    "128": "images/viewershare128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://*.bbcollab.com/*",
      "*://*.bbcollab.net/*",
      "*://*.blackboard.com/*",
      "*://*.bbpd.io/*",
      "*://*.bbcollabcloud.com/*"
    ]
  },
  "permissions": [
    "desktopCapture",
    "activeTab"
  ],
  "web_accessible_resources": [
    "images/viewershare48.png"
  ]
}
