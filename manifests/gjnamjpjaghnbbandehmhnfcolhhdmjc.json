{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "webQR",
  "description": "Convert the current webpage to QR code for share on WeChat.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon-chrome.png",
    "default_popup": "popover.html"
  },
  "background": {
    "scripts": [
      "main.js",
      "qrcode-min.js"
    ],
    "persistent": false
  }
}
