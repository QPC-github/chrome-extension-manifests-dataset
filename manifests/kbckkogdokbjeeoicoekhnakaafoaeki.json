{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Lightning Deal Claimer for Amazon",
  "version": "0.1",
  "description": "This extension helps you snap up lightning deals on Amazon sites fast so you don't have to sit by your computer all day.",
  "permissions": [
    "background",
    "activeTab",
    "tts",
    "notifications",
    "storage",
    "tabs",
    "browsingData",
    "cookies",
    "alarms",
    "downloads",
    "pageCapture",
    "<all_urls>",
    "cookies",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "webRequest",
    "webNavigation",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Lightning Deal Claimer for Amazon"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "manifest_version": 2
}
