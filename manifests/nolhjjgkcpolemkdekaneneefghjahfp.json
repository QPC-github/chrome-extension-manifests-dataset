{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WatchDog2 Beta",
  "version": "1.1",
  "description": "Earn Rewards BRINGING TRUST TO THE INTERNET",
  "author": "CryptoPolice",
  "icons": {
    "128": "wd_128x128.png"
  },
  "browser_action": {
    "default_title": "WatchDog",
    "default_icon": "wd_128x128.png",
    "default_popup": "/index.html"
  },
  "permissions": [
    "unlimitedStorage",
    "activeTab",
    "background",
    "notifications",
    "cookies",
    "storage",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "/dist/background.js"
    ],
    "persistent": false
  }
}
