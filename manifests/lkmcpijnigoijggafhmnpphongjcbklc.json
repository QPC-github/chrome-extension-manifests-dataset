{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Zocalo",
  "version": "1.0.0.8",
  "manifest_version": 2,
  "icons": {
    "48": "img/zocaloRed.jpg"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://fonts.googleapis.com https://apis.google.com https://ajax.googleapis.com; object-src 'self'",
  "description": "Zocalo",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/zocaloRed38.jpg",
      "38": "img/zocaloRed38.jpg"
    }
  },
  "options_page": "signin.html",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "contextMenus",
    "notifications"
  ],
  "web_accessible_resources": [
    "img/facebookIcon.png",
    "img/sep.png",
    "img/submitchat.png",
    "img/fbbutton.png",
    "img/connectbutton.png",
    "img/invite.png",
    "img/zocaloGreen38.jpg"
  ]
}
