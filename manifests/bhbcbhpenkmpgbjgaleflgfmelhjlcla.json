{
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "vk32.png",
    "default_title": "Опубликовать ВКонтакте"
  },
  "description": "Поделиться ссылкой посещенной страницы с друзьями ВКонтакте (vk.com)",
  "icons": {
    "128": "vk128.png",
    "16": "vk16.png",
    "32": "vk32.png"
  },
  "name": "Опубликовать ВКонтакте (vk.com)",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*.vk.com/*",
    "https://*.vk.com/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' https://apis.google.com https://vk.com; object-src 'self'",
  "version": "1.3.5"
}
