{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Thing Safari",
  "version": "4.1.14",
  "description": "Makes wild Things appear in your browser. Find them, capture them, and store them into your Encyclopedia.",
  "permissions": [
    "<all_urls>",
    "storage",
    "alarms",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "iconPokeball.png",
    "default_popup": "menu.html"
  },
  "background": {
    "scripts": [
      "encounter.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "128": "safari128.png",
    "48": "iconPokeball.png"
  }
}
