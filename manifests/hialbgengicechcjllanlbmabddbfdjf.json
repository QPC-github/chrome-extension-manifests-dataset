{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AvatarTracker Mini",
  "short_name": "AvatarTracker",
  "description": "Always know where bobo and his friends are hanging out!",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Let's find bobo!"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://avatartrack.com/*"
  ]
}
