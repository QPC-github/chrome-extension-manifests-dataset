{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SGA para Chrome",
  "version": "1.9.1",
  "manifest_version": 2,
  "description": "Um caminho f√°cil para acessar o SGA(para alunos) da PUC Minas.",
  "options_page": "options/options.html#general",
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "permissions": [
    "tabs",
    "http://www.sistemas.pucminas.br/*",
    "https://www.sistemas.pucminas.br/*"
  ],
  "web_accessible_resources": [
    "horarios.html"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "http://www.sistemas.pucminas.br/*"
      ],
      "css": [
        "inject/folhadeestiloSGA.css",
        "inject/menu_site.css",
        "inject/menu_lateral_01.css",
        "inject/codeaholic_nc.css",
        "calendar.css"
      ],
      "js": [
        "jquery-1.8.3.js",
        "bpopup.js",
        "codeaholic_nc.js",
        "inject.js",
        "calendar.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "page": "background.html"
  }
}
