{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TWIST Ticker",
  "short_name": "TWIST Ticker",
  "description": "Displays information about the TWIST cryptocurrency using the cryptopia exchange and TWIST APIs",
  "version": "1.3",
  "browser_action": {
    "default_icon": "img/twist_logo_19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "http://twist.tools/"
  ],
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/background.js"
    ]
  },
  "icons": {
    "16": "img/twist_logo_16.png",
    "19": "img/twist_logo_19.png",
    "32": "img/twist_logo_32.png",
    "48": "img/twist_logo_48.png",
    "128": "img/twist_logo_128.png"
  }
}
