{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ultra accurate word counter",
  "description": "Counts characters and words on web pages with a simplicity of a MS Word count. English language only.",
  "version": "1.0",
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon0.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
