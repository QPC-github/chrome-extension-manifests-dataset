{
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Reproductor HLS"
  },
  "description": "Reproductor M3U8 nativo, reproducir Url HLS en tu navegador",
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "name": "Reproductor M3U8 - HLS Player",
  "permissions": [
    "tabs",
    "*://*/*.m3u8*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.5",
  "minimum_chrome_version": "23",
  "web_accessible_resources": [
    "player.html",
    "icon128.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
