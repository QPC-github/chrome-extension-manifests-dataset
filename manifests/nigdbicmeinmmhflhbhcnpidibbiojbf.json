{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XBert for Xero",
  "description": "See your XBert alerts plus create and link tasks from anywhere in Xero.",
  "version": "3.5.0",
  "icons": {
    "128": "assets/images/icon_128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "assets/images/icon.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "runtime.js",
      "vendor.js"
    ],
    "persistent": false
  },
  "permissions": [
    "*://*.xero.com/",
    "*://*.xbert.io/",
    "activeTab",
    "tabs",
    "cookies",
    "storage"
  ]
}
