{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Timezone Buddy",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "See what time it is anywhere in the world - and what people in that country are doing right now.",
  "icons": {
    "16": "icons/big_icon.png",
    "48": "icons/big_icon.png",
    "128": "icons/big_icon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' https://maps.google.com https://*.gstatic.com https://*.googleapis.com 'unsafe-eval'; object-src 'self' "
}
