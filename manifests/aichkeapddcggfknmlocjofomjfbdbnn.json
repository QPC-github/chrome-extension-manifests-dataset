{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VEEDEEO Screen Share",
  "author": "VEEDEEO",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "VEEDEEO WebRTC Screen Share Extension",
  "homepage_url": "https://www.veedeeo.me",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "matches": [
        "*://*.veedeeo.me/*",
        "*://*.veedeeo.guru/*",
        "*://*.secure.force.com/*",
        "*://*.force.com/*",
        "https://dev-veedeeo.cs18.force.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
