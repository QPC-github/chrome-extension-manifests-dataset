{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cabot Services",
  "description": "Shows you the status of your cabot services",
  "version": "1.0",
  "browser_action": {
    "default_icon": "static/arachnys/img/icon_180.png",
    "default_popup": "popup.html",
    "default_title": "Cabot Services"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "static/jquery-2.1.4.min.js",
      "eventPage.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "static/arachnys/img/icon_128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
