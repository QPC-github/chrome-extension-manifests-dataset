{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.2",
  "default_locale": "en",
  "homepage_url": "https://watchit-online.com/",
  "icons": {
    "16": "icons/logo-color-16.png",
    "48": "icons/logo-color-48.png",
    "128": "icons/logo-color-128.png"
  },
  "browser_action": {
    "default_icon": "icons/logoicon.png",
    "default_title": "Watchit-Online",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "alternate_urls": [],
      "encoding": "UTF-8",
      "favicon_url": "https://watchit-online.com/favicon1.ico",
      "image_url": "",
      "image_url_post_params": "",
      "instant_url": "",
      "instant_url_post_params": "",
      "is_default": true,
      "keyword": "__MSG_appName__ Search",
      "name": "__MSG_appName__",
      "search_url": "https://watchit-online.com/search?q={searchTerms}",
      "search_url_post_params": "",
      "suggest_url": "",
      "suggest_url_post_params": ""
    }
  },
  "omnibox": {
    "keyword": "watch"
  },
  "permissions": [
    "cookies",
    "tabs",
    "unlimitedStorage",
    "storage",
    "activeTab",
    "*://*.google.com/",
    "*://*.watchit-online.com/",
    "https://www.googleapis.com/*"
  ]
}
