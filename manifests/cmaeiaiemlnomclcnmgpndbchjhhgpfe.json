{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lightning Mode Switcher",
  "version": "0.0.4",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "toggle-org-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle org mode"
    }
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "management"
  ]
}
