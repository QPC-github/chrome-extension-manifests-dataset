{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "edutictac",
  "version": "1.0",
  "description": "Planeta EduTicTac",
  "icons": {
    "48": "img/64.png",
    "128": "img/192.png",
    "16": "img/ico.png"
  },
  "browser_action": {
    "default_icon": "img/ico.png",
    "default_title": "Comunitat EduTicTac",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ]
}
