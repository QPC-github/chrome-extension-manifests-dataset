{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "KomDesk",
  "version": "1.2",
  "description": "Checking new jobs posted at oDesk.",
  "icons": {
    "128": "resource/128.png"
  },
  "browser_action": {
    "default_title": "KomDesk",
    "default_icon": "resource/icon.png",
    "default_popup": "resource/popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "resource/background.js"
    ]
  }
}
