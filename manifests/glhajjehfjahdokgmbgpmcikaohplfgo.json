{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "images/icon_128x128.png",
      "16": "images/icon_16x16.png",
      "24": "images/icon_32x32.png",
      "32": "images/icon_32x32.png",
      "64": "images/icon_64x64.png"
    },
    "default_popup": "popup.html",
    "default_title": "Công cụ đặt hàng Vận chuyển FF"
  },
  "content_scripts": [
    {
      "css": [
        "all.min.css"
      ],
      "js": [
        "all.js"
      ],
      "matches": [
        "https://minhhuongit.com/*",
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "https://*.tmall.hk/*",
        "http://detail.1688.com/*",
        "https://detail.1688.com/*",
        "http://item.1688.com/*",
        "https://item.1688.com/*",
        "http://item.jd.com/*",
        "https://item.jd.com/*",
        "https://item.jd.hk/*"
      ]
    }
  ],
  "description": "Công cụ đặt hàng của Vận chuyển FF",
  "icons": {
    "128": "images/icon_128x128.png",
    "16": "images/icon_16x16.png",
    "32": "images/icon_32x32.png",
    "64": "images/icon_64x64.png"
  },
  "manifest_version": 2,
  "name": "Vận chuyển FF Nhập hàng trung quốc",
  "permissions": [
    "activeTab",
    "storage",
    "https://minhhuongit.com/*",
    "https://2.taobao.com/item.htm"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.18",
  "web_accessible_resources": [
    "images/*"
  ]
}
