{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "persistent": true,
    "scripts": [
      "OneSignal.js",
      "./scripts/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://soapps.net/live/loader/bundle.js https://*.soapps.net/* https://widget.engageya.com/engageya_loader.js https://*.engageya.com/*; object-src 'self'",
  "manifest_version": 2,
  "name": "Comment Anywhere",
  "description": "Comment on every page on the web. This is an amazing community. Rank up, earn rewards, gain reputation.",
  "version": "1.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Leave a Comment"
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "activeTab",
    "contextMenus"
  ]
}
