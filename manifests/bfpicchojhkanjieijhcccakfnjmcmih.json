{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "LongCat Scrollbar",
  "version": "0.2",
  "description": "LongCat Scrollbar - Because long page is long!",
  "manifest_version": 2,
  "content_scripts": [
    {
      "css": [
        "longcat.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "longcat/body.png",
    "longcat/body2.png",
    "longcat/head.png",
    "longcat/tail.png",
    "default/track.png",
    "default/thumb.png",
    "default/left.png",
    "default/right.png"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
