{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Voice Polls",
  "description": "Create embedable polls right from your browser.",
  "version": "1.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Create a poll",
    "default_icon": "icon16.png"
  },
  "manifest_version": 2,
  "offline_enabled": false
}
