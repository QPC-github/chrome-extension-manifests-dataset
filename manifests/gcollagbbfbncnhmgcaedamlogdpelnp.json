{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pepper panel - SMM инструмент для Вконтакте",
  "short_name": "Pepper panel",
  "version": "1.8.8",
  "description": "__MSG_appDescription__",
  "default_locale": "ru",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.vk.com/*",
        "https://localhost:8443/*"
      ],
      "js": [
        "vk.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Pepper panel",
    "default_icon": "assets/images/icons/128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icons/16.png",
    "48": "assets/images/icons/48.png",
    "128": "assets/images/icons/128.png",
    "240": "assets/images/icons/240.png"
  },
  "permissions": [
    "runtime",
    "storage",
    "tabs",
    "https://panel.pepper.ninja/*",
    "https://*.vk.com/*",
    "https://localhost:8443/*",
    "https://127.0.0.1:9000/*"
  ],
  "web_accessible_resources": [
    "/assets/images/*"
  ]
}
