{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch Notify",
  "version": "0.9.3",
  "description": "Sends an alert when a followed channel goes live",
  "icons": {
    "16": "Notify16.png",
    "48": "Notify48.png",
    "128": "Notify128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "https://api.twitch.tv/*",
    "https://static-cdn.jtvnw.net/*"
  ]
}
