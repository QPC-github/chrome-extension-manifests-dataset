{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "البواحث",
  "description": "تتيح هذه الأداة البحث عبر عدة مواقع إسلامية بشكل سريع أثناء التصفح",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "global.js",
      "menu.js",
      "jquery-2.2.4.min.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://www.alftwa.com/"
  ]
}
