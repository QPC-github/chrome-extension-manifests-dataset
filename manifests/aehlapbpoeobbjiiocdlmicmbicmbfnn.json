{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ottspott Connect Extension",
  "short_name": "Connect",
  "version": "0.1.30",
  "description": "Want to supercharge your sales/support phone conversation? The Fastest Way To Understand Who Is Calling & Log Everything To Your CRM",
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "css": [],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "matches": [
        "https://app-connect.ottspott.co/*",
        "https://connect-devel.ottspott.co/*",
        "https://connect-devel-alexis.ottspott.co/*",
        "https://*.pipedrive.com/*",
        "https://app.hubspot.com/*"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "images/connect-straight16.png"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/connect-straight16.png",
      "48": "images/connect-straight48.png",
      "128": "images/connect-straight128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Ottspott Connect",
    "scripts": [
      "popup.js"
    ]
  },
  "icons": {
    "16": "images/connect-straight16.png",
    "48": "images/connect-straight48.png",
    "128": "images/connect-straight128.png"
  },
  "manifest_version": 2
}
