{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Study Buddy",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/jquery.min.js",
      "scripts/chromereload.js",
      "scripts/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.math.utk.edu/~dydak/*/Files/*"
      ],
      "js": [
        "scripts/jquery.min.js",
        "scripts/contentscript.js",
        "scripts/popup.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
