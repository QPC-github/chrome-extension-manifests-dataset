{
  "name": "Capture Me",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Current tab instant capture",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "incognito": "split",
  "minimum_chrome_version": "22.0",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon64.png",
    "default_title": "Capture Now!"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
