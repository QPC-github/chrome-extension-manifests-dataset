{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XView 6 - Сервис сокращения длинных ссылок",
  "version": "1.2",
  "description": "Уникальный сервис сокращения длинных ссылок, очень легко в один клик Вы получаете короткую ссылку уже скопированную в буфер обмена!",
  "permissions": [
    "tabs",
    "http://xv6.ru/*"
  ],
  "browser_action": {
    "default_title": "Сократить URL-адрес текущей страницы",
    "default_icon": "images/favicon_19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/favicon_16.png",
    "32": "images/favicon_32.png",
    "48": "images/favicon_48.png",
    "128": "images/favicon_128.png"
  }
}
