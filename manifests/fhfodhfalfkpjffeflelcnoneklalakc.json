{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Instaload",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Baixe fotos e v√≠deos do Instagram diretamente do seu navegador, com apenas 1 clique!",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js",
      "jquery.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.instagram.com/*",
        "https://*.instagram.com/*"
      ],
      "js": [
        "jquery.js",
        "app.js"
      ]
    }
  ]
}
