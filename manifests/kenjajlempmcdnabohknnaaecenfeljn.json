{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Imdb Notes for Filmweb",
  "version": "2.04",
  "description": "Wy≈õwietlaj oceny z IMDb z poziomu portalu Filmweb.pl",
  "permissions": [
    "storage",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "imdb_16.png",
      "32": "imdb_32.png",
      "48": "imdb_48.png",
      "128": "imdb_128.png"
    }
  },
  "icons": {
    "16": "imdb_16.png",
    "32": "imdb_32.png",
    "48": "imdb_48.png",
    "128": "imdb_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.filmweb.pl/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "manifest_version": 2
}
