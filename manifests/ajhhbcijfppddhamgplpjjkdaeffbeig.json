{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TheHub",
  "author": "Code-Desk",
  "version": "0.1.3",
  "manifest_version": 2,
  "minimum_chrome_version": "40",
  "description": "TheHUB webrtc screen sharing and desk phone calling!",
  "homepage_url": "https://thehubwork.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "resources/icon_032.png",
    "32": "resources/icon_032.png",
    "48": "resources/icon_048.png",
    "128": "resources/icon_128.png"
  },
  "browser_action": {
    "default_icon": "resources/icon_032.png",
    "default_title": "Settings for click to dail"
  },
  "externally_connectable": {
    "matches": [
      "https://localhost/*",
      "https://hub.wavetelbusiness.co.uk/*",
      "https://hub.wave-tel.com/*",
      "https://staging.thehubwork.com/*",
      "https://codedesk.thehubwork.com/*"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "desktopCapture",
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/",
    "storage"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
