{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Twitter Media Block",
  "version": "1.3",
  "description": "Tweak your twitter feed: Hide media until you hover. Show full URL, Show smaller avatars, Highlight tweets from followers",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "css": [
        "media-block.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://twitter.com/*"
  ],
  "manifest_version": 2
}
