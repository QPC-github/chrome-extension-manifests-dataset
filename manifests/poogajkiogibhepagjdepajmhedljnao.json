{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Classy",
  "description": "Chrome extension for the popular post, 'How to be Classy in Three Steps:' ",
  "version": "0.1",
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "Click to become instantly classy.",
    "default_icon": "icon-m.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
