{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "SMOFast: Управление заданиями и заказами",
  "version": "2.1",
  "description": "Показывает информацию о заданиях и быстрых заказов с сайта smofast.com (название, ID, количество выполнений, актуальный статус).",
  "background": {
    "scripts": [
      "js/backend.bundle.js"
    ]
  },
  "manifest_version": 2,
  "icons": {
    "16": "img/128.png",
    "48": "img/128.png",
    "128": "img/128.png"
  },
  "browser_action": {
    "default_title": "SMOFast: Задания и заказы",
    "default_icon": "img/128.png",
    "icons": {
      "16": "img/128.png",
      "48": "img/128.png",
      "128": "img/128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://smofast.com/",
    "https://smofast.com/"
  ]
}
