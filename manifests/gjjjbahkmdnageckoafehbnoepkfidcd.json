{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "University of Adelaide Library Proxy",
  "version": "1",
  "manifest_version": 2,
  "description": "Load the current URL via the Barr Smith Library's proxy server",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "name": "Uni Adelaide proxy",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
