{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ReduMe",
  "version": "0.2",
  "description": "Reduce your link size in two clicks.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "clipboardRead",
    "clipboardWrite",
    "http://redu.me/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/redume16.png",
      "32": "images/redume32.png",
      "48": "images/redume64.png",
      "128": "images/redume128.png"
    }
  },
  "web_accessible_resources": [
    "images/redume16.png"
  ],
  "icons": {
    "16": "images/redume16.png",
    "32": "images/redume32.png",
    "48": "images/redume64.png",
    "128": "images/redume128.png"
  },
  "manifest_version": 2
}
