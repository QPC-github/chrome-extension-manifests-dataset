{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Kandy Support Simulator",
  "version": "1.1",
  "description": "Experience the KANDY Concierge feature on your own web site",
  "background": {
    "persistent": false,
    "scripts": [
      "bg_tabCapture.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "button.png",
    "default_title": "KANDY"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "tabCapture",
    "geolocation"
  ],
  "web_accessible_resources": [
    "images/*.png"
  ],
  "manifest_version": 2
}
