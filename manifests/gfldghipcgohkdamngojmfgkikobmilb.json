{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "КодКупона",
  "version": "1.0.1",
  "description": "Узнавайте о промокодах и скидках моментально",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "config.js",
      "bg.js"
    ]
  },
  "omnibox": {
    "keyword": "промокод"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "notifications"
  ],
  "browser_action": {
    "default_title": "КодКупона.РФ",
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/logo.png",
    "128": "images/icon.png"
  },
  "web_accessible_resources": [
    "pcplinstalled.js"
  ],
  "options_page": "options.html"
}
