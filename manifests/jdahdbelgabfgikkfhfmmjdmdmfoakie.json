{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Field Mouse",
  "version": "1.1.2",
  "description": "Shopify metafield management that doesn't suck.",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "declarativeContent",
    "https://*.myshopify.com/*",
    "https://fieldmouse.sensorstation.co/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "static/img/cheese_19.png",
      "38": "static/img/cheese_38.png",
      "72": "static/img/cheese_72.png"
    },
    "default_popup": "static/popup.html",
    "default_title": "Field Mouse",
    "show_matches": [
      "https://*.myshopify.com/admin",
      "https://*.myshopify.com/admin/*"
    ]
  },
  "background": {
    "scripts": [
      "static/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "static/img/icon_16.png",
    "48": "static/img/icon_48.png",
    "128": "static/img/icon_128.png"
  },
  "web_accessible_resources": [
    "static/img/*"
  ]
}
