{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Gitlab Clipboard Extension",
  "version": "1.2.4",
  "description": "Copy the issues and merge requests links with well-formatted description in seconds!",
  "permissions": [
    "http://gitlab.com/*",
    "https://gitlab.com/*",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://gitlab.com/*",
        "https://gitlab.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "web_accessible_resources": [
    "images/copy.svg",
    "images/copied.svg"
  ],
  "manifest_version": 2
}
