{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "webshule Screenshare Extension",
  "author": "WebShule",
  "version": "2.0.6",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities to WebShule Sessions.",
  "homepage_url": "https://shule.webshule.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.webshule.com/*",
      "*://*.globalmatch.me/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
