{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": [
        "riffle.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ]
    }
  ],
  "description": "Streaming companion for modern interactions between viewers and streamers.",
  "icons": {
    "128": "riffle.png"
  },
  "manifest_version": 2,
  "name": "Riffle.tv",
  "short_name": "Riffle",
  "homepage_url": "http://www.riffle.tv",
  "permissions": [
    "*://*.twitch.tv/*"
  ],
  "version": "0.3.4",
  "applications": {
    "gecko": {
      "id": "iorek@riffle.tv"
    }
  }
}
