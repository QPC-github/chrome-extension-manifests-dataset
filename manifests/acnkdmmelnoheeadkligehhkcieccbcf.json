{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Travel with Bitcoin",
  "version": "0.1",
  "description": "Book your vaction with btcVacations",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "btc.png",
    "default_title": "Book your vacation"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "manifest_version": 2
}
