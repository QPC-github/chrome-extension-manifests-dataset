{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "HeaderHunter",
  "description": "Notifications for recruitment messages in HTTP headers",
  "manifest_version": 2,
  "version": "1.0",
  "permissions": [
    "webRequest",
    "tabs",
    "storage",
    "*://*/*"
  ],
  "icons": {
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*/*"
      ],
      "css": [
        "inject.css"
      ],
      "js": [
        "inject.js"
      ]
    }
  ]
}
