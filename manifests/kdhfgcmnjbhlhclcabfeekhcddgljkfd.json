{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Wordpress Admin Bar Manager",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Show and Hide the Wordpress Admin Bar on your site.",
  "homepage_url": "http://www.jasonbutz.info",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Admin Bar",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "<all_urls>"
  ],
  "options_page": "src/options_custom/index.html"
}
