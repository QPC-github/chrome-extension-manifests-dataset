{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Plus Image",
  "description": "Shows images instead of links on GooglePlus",
  "version": "3.0",
  "icons": {
    "16": "AI16.png",
    "48": "AI48.png",
    "128": "AI128.png"
  },
  "permissions": [
    "tabs",
    "http://*.google.com/*",
    "https://*.google.com/*",
    "http://*.google.ru/*",
    "https://*.google.ru/*",
    "http://google.com/*",
    "https://google.com/*",
    "http://google.ru/*",
    "https://google.ru/*"
  ],
  "web_accessible_resources": [
    "images/lightbox-blank.gif",
    "images/lightbox-btn-close.gif",
    "images/lightbox-btn-next.gif",
    "images/lightbox-btn-prev.gif",
    "images/lightbox-ico-loading.gif"
  ],
  "manifest_version": 2,
  "content_security_policy": "default-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "http://*.google.com/*",
        "https://*.google.com/*",
        "http://*.google.ru/*",
        "https://*.google.ru/*",
        "http://google.com/*",
        "https://google.com/*",
        "http://google.ru/*",
        "https://google.ru/*"
      ],
      "js": [
        "jquery.min.js",
        "jquery.appear-1.1.1.min.js",
        "jquery.lightbox-0.5.min.js",
        "contentscript.js"
      ],
      "css": [
        "jquery.lightbox-0.5.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
