{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Dyslexic",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Changes the font on the page to OpenDyslexic.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
