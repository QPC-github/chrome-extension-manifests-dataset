{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ALADY",
  "version": "5",
  "description": "Save More at your Favourite Brands",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "ALADY",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "https://fonts.googleapis.com/",
    "https://www.alady.sg/"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon68.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
