{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Boneless Pizza",
  "version": "1.1",
  "description": "A simple way to meme-ify text using spacing or pigeoning.",
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "defaut_icon": {
      "128": "128_icon.png"
    }
  },
  "manifest_version": 2
}
