{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Universal Automation",
  "description": "Workers of the world... Relax!",
  "version": "0.2.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "https://authenticate.gateway.gov.uk/",
    "https://jobsearch.direct.gov.uk/"
  ],
  "web_accessible_resources": [
    "css/content-style.css",
    "img/icon128.png",
    "img/icon38.png"
  ],
  "options_page": "options.html",
  "icons": {
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "img/icon38.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://authenticate.gateway.gov.uk/sidp/SignIn.ashx*",
        "https://authenticate.gateway.gov.uk/sidp/Authenticate.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/authenticate-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/register.aspx*",
        "https://jobsearch.direct.gov.uk/Register.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/register-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/",
        "https://jobsearch.direct.gov.uk/Home.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/home-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/JobSearch/PowerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/JobSearch/Powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/JobSearch/powerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/JobSearch/powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/Jobsearch/PowerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/Jobsearch/Powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/Jobsearch/powerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/Jobsearch/powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobSearch/PowerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobSearch/Powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobSearch/powerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobSearch/powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobsearch/PowerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobsearch/Powersearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobsearch/powerSearch.aspx*",
        "https://jobsearch.direct.gov.uk/jobsearch/powersearch.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/jobsearch-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/Error.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/error-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/GetJob.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/getjob-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/Apply/ApplyStart.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/applystart-content.js"
      ]
    },
    {
      "matches": [
        "https://jobsearch.direct.gov.uk/confirmation/confirmation.aspx*"
      ],
      "js": [
        "js/zepto.js",
        "js/underscore.js",
        "js/selfactivity.js",
        "js/confirmation-content.js"
      ]
    }
  ]
}
