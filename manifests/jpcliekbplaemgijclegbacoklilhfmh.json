{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Amazone price observer",
  "description": "Checks daily the price and sends email when price limit is reached.",
  "version": "0.3",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16_.png",
      "32": "images/32_.png",
      "48": "images/48_.png",
      "128": "images/128_.png"
    }
  },
  "icons": {
    "16": "images/16_.png",
    "32": "images/32_.png",
    "48": "images/48_.png",
    "128": "images/128_.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ]
}
