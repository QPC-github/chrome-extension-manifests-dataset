{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SocialCounter",
  "version": "1.1",
  "description": "twitter, facebook, google+, hatena bookmark etc sns services share counter.",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "SocialCounter",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'; http://api-social-counter.herokuapp.com; object-src 'self'",
  "permissions": [
    "tabs"
  ]
}
