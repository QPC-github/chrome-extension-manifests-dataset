{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "IDC Challenge",
  "version": "0.1.2",
  "description": "Lateral blog post demo extension",
  "permissions": [
    "tabs",
    "bookmarks",
    "http://www.blogger.com/",
    "http://www.shmuelgarage.co.il/*",
    "http://www.gool.co.il/*",
    "http://*.google.com/",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "http://www.gool.co.il/*",
        "https://www.facebook.com/*"
      ]
    }
  ]
}
