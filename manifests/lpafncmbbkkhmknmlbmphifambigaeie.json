{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "myfastfile",
  "version": "0.0.1",
  "description": "myfastfile.com extension for Google Chrome/Chromium",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_popup": "popup.html",
    "default_title": "myfastfile"
  },
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "proxy",
    "*://*/*",
    "unlimitedStorage",
    "background"
  ]
}
