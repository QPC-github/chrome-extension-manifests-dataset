{
  "manifest_version": 2,
  "name": "Tactical Arbitrage - Restrictions Detective",
  "short_name": "Tactical Arbitrage - Restrictions Detective",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.7",
  "description": "With Restrictions Detective you can check in Tactical Arbitrage which products have Seller or Hazmat restrictions for your account.",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/ta-restrict.png"
  },
  "icons": {
    "128": "images/ta-restrict.png"
  },
  "optional_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.de/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://*.tacticalarbitrage.com/*",
      "https://tacticalarbitrage.com/*",
      "https://*.tacticalflips.com/liab/*",
      "https://tacticalflips.com/liab/*"
    ]
  }
}
