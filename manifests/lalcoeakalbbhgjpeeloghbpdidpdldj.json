{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MensagemPrivada",
  "author": "Samuel Pereira de Godoy",
  "description": "MensagemPrivada Ã© um programa para encriptar suas mensagens.",
  "version": "1.0",
  "icons": {
    "16": "data/msgpriv16.png",
    "48": "data/msgpriv48.png",
    "128": "data/msgpriv128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "data/js/libs/jquery.min.js",
        "data/js/libs/aes.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "data/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "data/msgpriv19.png",
      "38": "data/msgpriv38.png"
    },
    "default_title": "MsgPriv",
    "default_popup": "data/index.html"
  }
}
