{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VK Design Fix",
  "short_name": "VK Design Fix",
  "description": "Расширение, исправляющее недостатки нового дизайна ВКонтакте с субъективной точки зрения автора.",
  "version": "1.2.7",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "64": "64.png",
    "96": "96.png",
    "128": "128.png",
    "256": "256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://new.vk.com/*",
        "*://vk.com/*"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "VK Design Fix",
    "default_icon": "16.png",
    "default_popup": "popup.html"
  }
}
