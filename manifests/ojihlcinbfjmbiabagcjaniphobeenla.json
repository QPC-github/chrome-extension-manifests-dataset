{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "When the sceen is small Twitch chat is anchored at the bottom of the page",
  "manifest_version": 2,
  "name": "Twitch-Chat-Bottom",
  "version": "1.0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "browser_style": true,
    "default_title": "Twitch Chat Bottom"
  },
  "permissions": [
    "*://*.twitch.tv/*",
    "activeTab",
    "tabs"
  ]
}
