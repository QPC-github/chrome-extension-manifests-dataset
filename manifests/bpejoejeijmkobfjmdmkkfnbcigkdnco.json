{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "DOMBomber",
  "version": "1.0",
  "description": "Explode all the things",
  "icons": {
    "128": "images/icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "bombs.js"
      ],
      "css": [
        "bombs.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Click me idiot",
    "default_popup": "popupMenu.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/bobomb.gif",
    "images/bobomb.png",
    "images/boom.gif"
  ]
}
