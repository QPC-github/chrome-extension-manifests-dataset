{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "VeriTag",
  "description": "Displays the http requests headers of AdServers and Analytics",
  "version": "1.0.0",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "debugger",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "img/fire_48.png",
      "19": "img/fire_48.png"
    },
    "default_title": "VeriTag"
  },
  "icons": {
    "16": "img/fire_16.png",
    "48": "img/fire_48.png",
    "128": "img/fire_128.png"
  },
  "web_accessible_resources": [
    "js/jquery.min.js",
    "js/bootstrap.min.js",
    "css/bootstrap.min.css",
    "sound/windows_8_sms_tune_2.mp3"
  ]
}
