{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "PinUp",
  "version": "1.31",
  "manifest_version": 2,
  "description": "Message your followers, update your pins, and more all in one place!",
  "icons": {
    "16": "icons/pincredible_16x16.png",
    "48": "icons/pincredible_48x48.png",
    "128": "icons/pincredible_128x128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.js",
      "js/jHerc/jHerc.js",
      "src/lib/common.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/pincredible_19x19.png",
    "default_title": "Pincredible",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "web_accessible_resources": [
    "icons/*"
  ],
  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "webRequest",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://www.pinterest.com/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/jquery-ui/jquery-ui.js",
        "js/jHerc/jHerc.js",
        "src/lib/common.js",
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "http://pincredible.dev/connect/*",
        "http://pincredible.co/connect/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/jquery-ui/jquery-ui.js",
        "js/jHerc/jHerc.js",
        "src/inject/pinterest-connect.js"
      ]
    }
  ]
}
