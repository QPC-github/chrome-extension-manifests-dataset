{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Malapropism",
  "description": "Replaces words with their commonly mistaken for substitutes.  (ex. cite -> site)",
  "version": "0.1",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "bug16.png",
    "48": "bug48.png",
    "128": "bug128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
