{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HideTube",
  "short_name": "HideTube",
  "description": "__MSG_extension_description__",
  "version": "1.0.1",
  "default_locale": "ja",
  "permissions": [
    "tabs",
    "storage",
    "*://www.youtube.com/"
  ],
  "browser_action": {
    "default_icon": "img/visible.png",
    "default_title": "__MSG_title_invisible__"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistence": false
  },
  "icons": {
    "16": "img/icon16.png",
    "19": "img/icon19.png",
    "32": "img/icon32.png",
    "38": "img/icon38.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
