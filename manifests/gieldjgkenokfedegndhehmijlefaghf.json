{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smiley of the day",
  "version": "1.2",
  "description": "Random smiley at every click to copy and paste everywhere!",
  "icons": {
    "128": "128x128.png",
    "48": "48x48.png"
  },
  "browser_action": {
    "default_title": "Japanese Smiley",
    "default_icon": "48x48.png",
    "default_popup": "popup.html"
  },
  "author": "Cedric Simon",
  "permissions": [
    "clipboardWrite"
  ]
}
