{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TeaTimer",
  "version": "2.1.1",
  "manifest_version": 2,
  "description": "Simple timer for various types tea.",
  "icons": {
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_title": "TeaTimer",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "/js/background.js"
    ],
    "persistant": false
  },
  "permissions": [
    "notifications",
    "alarms"
  ],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
