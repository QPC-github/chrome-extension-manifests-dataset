{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "trollZEIT",
  "description": "Diese Extension kann Trolle im ZEIT ONLINE Forum markieren und ausblenden.",
  "version": "0.1.2",
  "content_scripts": [
    {
      "matches": [
        "http://www.zeit.de/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/app.js"
      ],
      "css": [
        "css/app.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  }
}
