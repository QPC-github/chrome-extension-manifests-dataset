{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Nice Font Rendering",
  "version": "1.0",
  "description": "替换字体，渲染阴影，提升浏览体验。",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "NFRmain.css"
      ]
    },
    {
      "matches": [
        "*://www.bilibili.com/*"
      ],
      "css": [
        "NFRspecial.css"
      ]
    }
  ]
}
