{
  "background": {
    "persistent": true,
    "scripts": [
      "js/amazon_infinite.js",
      "js/amazon_context.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/spin.js"
      ],
      "matches": [
        "*://*.amazon.de/*",
        "*://*.amazon.com/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.co.uk/*"
      ]
    }
  ],
  "omnibox": {
    "keyword": "a"
  },
  "icons": {
    "16": "icons/iconpage16.png",
    "48": "icons/iconpage48.png",
    "128": "icons/iconpage128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    }
  },
  "default_locale": "de",
  "manifest_version": 2,
  "author": "Alexander P.",
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "description": "__MSG_extDesc__",
  "permissions": [
    "background",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*.amazon.com/*",
    "*://*.amazon.de/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.co.uk/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "3.3"
}
