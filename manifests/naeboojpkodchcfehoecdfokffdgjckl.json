{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "NiHaoDun/你好读：TTS语音读出网页文本文字",
  "short_name": "NiHaoDu",
  "description": "将你选择的文本念出来，有时候长篇的东西懒的看就用这个同步多任务作业，后台念个小说、帖子什么的",
  "version": "1.0",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "tts",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
