{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kilxn",
  "description": "Kilect image URLs as you browse for later use!",
  "version": "1.0.0.4",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": [
      "kilect.js"
    ],
    "matches": [
      "https://*",
      "http://*"
    ]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "19": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
}
