{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "facebook usage control",
  "short_name": "facebook control",
  "version": "1.0.13",
  "description": "Limits the daily time spent on facebook based on the time limit user sets.",
  "permissions": [
    "storage",
    "idle",
    "alarms",
    "tabs",
    "background",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
