{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ecommerce Helper Coupon",
  "description": "This extension allows the user to find coupon for a product.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "*://amazon.in/*",
        "*://*.amazon.in/*",
        "*://flipkart.com/*",
        "*://*.flipkart.com/*"
      ],
      "js": [
        "bg.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "*://amazon.in/*",
    "*://*.amazon.in/*",
    "*://flipkart.com/*",
    "*://*.flipkart.com/*"
  ]
}
