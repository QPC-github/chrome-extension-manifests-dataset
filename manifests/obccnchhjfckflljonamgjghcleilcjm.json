{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Free Speech",
  "description": "Add a disqus thread to ANY web page.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "disqus.css"
      ],
      "js": [
        "iframe.js"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "disqus.css"
      ],
      "js": [
        "iframe.js"
      ]
    }
  ]
}
