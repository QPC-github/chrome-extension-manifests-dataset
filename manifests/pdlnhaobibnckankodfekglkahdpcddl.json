{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "mini人人",
  "description": "mini 人人,新鲜事,热门分享,通知",
  "manifest_version": 2,
  "version": "1.1.3",
  "permissions": [
    "proxy",
    "tabs",
    "http://*/",
    "https://*/",
    "contextMenus",
    "notifications",
    "webRequestBlocking",
    "webRequest",
    "unlimitedStorage",
    "browsingData",
    "alarms",
    "webNavigation",
    "cookies",
    "tabs",
    "*://*.renren.com/"
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "打开mini人人",
    "default_popup": "popup.html",
    "default_icon": "images/16.png"
  }
}
