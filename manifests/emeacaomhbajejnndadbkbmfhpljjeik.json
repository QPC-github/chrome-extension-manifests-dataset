{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reader Extension For Chrome",
  "short_name": "Reader",
  "description": "Simple extension to that reminds you to read what you saved.",
  "version": "1.7.7",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "https://fonts.googleapis.com/*",
    "https://cdnjs.cloudflare.com/*",
    "https://refresh.fun/api/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistant": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": [
        "main.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    },
    {
      "js": [
        "cs.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "home.html"
  },
  "icons": {
    "32": "icon32.png",
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "manifest_version": 2
}
