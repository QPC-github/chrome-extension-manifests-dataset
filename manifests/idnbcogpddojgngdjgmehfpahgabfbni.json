{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Trafficlight",
  "description": "Place a trafficlight on every page you want. Made for use in my classroom. Based on an example made by RiÃ«l Notermans from Zzapps.",
  "version": "2.1.1",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "clickHandler.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Toggle the traffic light.",
    "default_icon": "icon1.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}
