{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Comic Sansifier",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Make every webpage be displayed in fabulous comic sans.",
  "homepage_url": "https://olivercjcox.uk",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "icons": {
    "16": "logo_16.png",
    "24": "logo_24.png",
    "32": "logo_32.png",
    "48": "logo_48.png",
    "64": "logo_64.png",
    "128": "logo_128.png",
    "256": "logo_256.png",
    "512": "logo_512.png"
  }
}
