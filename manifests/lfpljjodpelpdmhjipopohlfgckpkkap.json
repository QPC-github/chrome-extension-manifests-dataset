{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "What is my IP with Bacon?",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created with the awesomeness empowered within bacon",
  "homepage_url": "http://baconip.com",
  "icons": {
    "16": "icons/baconflag16.png",
    "48": "icons/baconflag48.png",
    "128": "icons/baconflag128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/baconflag19.png",
    "default_title": "What is my IP with bacon?",
    "default_popup": "src/browser_action/ip.html"
  }
}
