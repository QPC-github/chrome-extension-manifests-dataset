{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Dump Trump",
  "description": "Replace references to Trump with a word of your choice!",
  "version": "1.0.1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dom.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "trump.png",
    "default_popup": "popup.html",
    "default_title": "Dump Trump!"
  },
  "permissions": [
    "tabs"
  ]
}
