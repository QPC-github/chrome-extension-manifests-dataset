{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Lintly",
  "version": "1.5",
  "manifest_version": 2,
  "description": "Simple Facebook linting tool for publishers",
  "browser_action": {
    "default_icon": "lintly.png",
    "default_popup": "popup.html",
    "default_title": "Lintly"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
