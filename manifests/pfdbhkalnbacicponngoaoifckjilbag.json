{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SOTW Link Extension",
  "description": "Converts Video URL link to a SOTW Link",
  "version": "0.5",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "SOTW Link Generator",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "tabs",
    "activeTab",
    "https://studio.youtube.com/video/*",
    "https://www.youtube.com/edit?*"
  ]
}
