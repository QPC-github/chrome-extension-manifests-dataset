{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Downloads Button",
  "short_name": "Downloads",
  "version": "1.2.1.0",
  "manifest_version": 2,
  "homepage_url": "https://singleclickapps.com/downloads-app",
  "description": "A shortcut to Chrome downloads",
  "icons": {
    "16": "icon.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [],
  "offline_enabled": true,
  "incognito": "spanning",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "app": {
    "launch": {
      "local_path": "index.html"
    }
  },
  "options_page": "settings.html"
}
