{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Shoppin - покупки на русском",
  "description": "Покупки за рубежом без посредников. Amazon.com, Cabela's, Victoria's Secret на русском языке.",
  "version": "0.3.21",
  "homepage_url": "http://shoppin.ru/page/browser/",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://www.amazon.com/*"
      ],
      "js": [
        "samzncom.js"
      ],
      "run_at": "document_idle"
    },
    {
      "all_frames": true,
      "matches": [
        "*://www.cabelas.com/*"
      ],
      "js": [
        "scblscom.js"
      ],
      "run_at": "document_idle"
    },
    {
      "all_frames": true,
      "matches": [
        "*://www.victoriassecret.com/*"
      ],
      "js": [
        "svscom.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Shoppin.ru - на понятном языке",
    "default_icon": "/icons/icon16.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "icons/*",
    "language/*"
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
