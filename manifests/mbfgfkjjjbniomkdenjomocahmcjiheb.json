{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Drive Anywhere",
  "short_name": "Drive Anywhere",
  "version": "1.2.5",
  "description": "One click unlocks a faster, more convenient dashboard for your Google Drive files with this free browser extension!",
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Drive Anywhere!",
    "default_popup": "popup.html",
    "default_tooltip": "Click it! I dare you."
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "minimum_chrome_version": "32.0",
  "content_security_policy": "script-src 'self' https://apis.google.com https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "background",
    "notifications",
    "storage",
    "*://*.google.com/",
    "*://ssl.gstatic.com/",
    "*://www.google-analytics.com/",
    "*://*.googleapis.com/"
  ],
  "background": {
    "page": "background.html"
  }
}
