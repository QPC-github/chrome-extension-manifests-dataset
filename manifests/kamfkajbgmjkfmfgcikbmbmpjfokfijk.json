{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Awesome Reload All Tabs Button",
  "version": "1.2.0.0",
  "description": "Awesome button to reload all tabs in the current Chrome window (or all Chrome windows).",
  "icons": {
    "16": "refreshAllTabs_16.png",
    "48": "refreshAllTabs_48.png",
    "128": "refreshAllTabs_128.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "refreshAllTabs_19.png",
    "default_title": "Awesome Reload All Tabs Button"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "manifest_version": 2
}
