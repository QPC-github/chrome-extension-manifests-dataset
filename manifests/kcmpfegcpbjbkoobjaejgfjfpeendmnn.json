{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icon128.png",
      "32": "assets/icon128.png",
      "48": "assets/icon128.png",
      "64": "assets/icon128.png",
      "128": "assets/icon128.png"
    },
    "default_title": "PTIGlobal QC Extension",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "PTIGlobal QC Extension helps users to create and edit issues which arise in localizaion projects",
  "short_name": "PTIGlobal QC Extension",
  "icons": {
    "16": "assets/icon128.png",
    "32": "assets/icon128.png",
    "48": "assets/icon128.png",
    "64": "assets/icon128.png",
    "128": "assets/icon128.png"
  },
  "manifest_version": 2,
  "name": "PTIGlobal QC Extension",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.1.17",
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://localhost/*",
      "https://qc.ptiglobal.com/*"
    ]
  }
}
