{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Banner Control - Dev ",
  "version": "0.93.7",
  "description": "Herramienta para controlar banners que use el plugin GSAP, utilisando la expresion de Timeline con la variable (tl.)",
  "icons": {
    "128": "img/128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js",
      "js/jquery.min.js",
      "js/jquery-ui.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/128.png",
    "default_title": "Banner Control GSAP"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      }
    }
  },
  "web_accessible_resources": [
    "img/*.*",
    "fonts/*.*",
    "css/*.*",
    "html/*.*",
    "js/*.*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "https://fonts.googleapis.com/*.*",
    "tabs",
    "background",
    "activeTab"
  ],
  "minimum_chrome_version": "28",
  "manifest_version": 2
}
