{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cozy Chrome Hub for Mental Well-being",
  "description": "A cozy chrome hub, displaying the date, time, weather and reminders to keep you mindful.",
  "version": "2.1",
  "author": "Justin Francisco",
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Have a good day"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "script/jquery.js",
      "script/functions.js",
      "script/script.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}
