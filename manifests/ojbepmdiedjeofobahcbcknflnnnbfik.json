{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Clean Medium",
  "description": "Allows the user to not see the huge footer and header of Medium posts, and creates a better reading experience.",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Click to clean Medium posts"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "https://www.google.com/*"
  ]
}
