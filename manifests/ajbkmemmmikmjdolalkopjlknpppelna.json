{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "4.0.1",
  "name": "TELUS Business Connect for Office 365",
  "description": "TELUS Business Connect for Office 365",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "notifications",
    "tabCapture",
    "http://*/",
    "https://*/",
    "storage",
    "identity"
  ],
  "browser_action": {},
  "icons": {
    "16": "telus16.png",
    "32": "telus32.png",
    "48": "telus48.png",
    "128": "telus128.png"
  },
  "web_accessible_resources": [
    "redirect.html",
    "client.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./content.js"
      ],
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' https://*.googleapis.com https://*.google.com https://*.segment.com https://*.mxpnl.com; object-src 'self'",
  "options_ui": {
    "page": "options.html"
  }
}
