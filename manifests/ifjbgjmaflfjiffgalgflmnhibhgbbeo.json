{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.0.3",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "offline_enabled": true,
  "permissions": [
    "storage",
    "webview"
  ],
  "icons": {
    "16": "assets/icon16x16.png",
    "128": "assets/icon128x128.png"
  },
  "url_handlers": {
    "play_mahjong": {
      "matches": [
        "https://mahjong.frvr.com/*",
        "http://mahjong.frvr.com/*"
      ],
      "title": "__MSG_playAppName__"
    }
  }
}
