{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Displays the local currency on Steemit",
  "manifest_version": 2,
  "name": "Steemit local currency display",
  "version": "1.1",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "*://*.coinmarketcap.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.steemit.com/*"
      ],
      "js": [
        "steemit.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
