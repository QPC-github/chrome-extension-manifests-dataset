{
  "background": {
    "scripts": [
      "player.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/desliga.png",
    "default_title": "RÁDIO PIXELADOS"
  },
  "description": "Ouça a Pixelados enquanto navega. É só clicar no icone para reproduzir ou parar a rádio. Simples e prático!",
  "icons": {
    "128": "images/logo.png",
    "19": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png"
  },
  "homepage_url": "http://www.mobileradio.com.br",
  "manifest_version": 2,
  "name": "RÁDIO PIXELADOS",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.1",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "notifications",
    "http://*.mobileradio.com.br/*",
    "webRequest",
    "<all_urls>",
    "tabs"
  ],
  "web_accessible_resources": [
    "images/*.png"
  ]
}
