{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "GriDesign",
  "description": "This extension adds a grid on web pages in order to check fixed and fluid page layout.",
  "version": "0.12",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
