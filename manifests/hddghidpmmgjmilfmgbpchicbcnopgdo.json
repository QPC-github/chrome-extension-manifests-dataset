{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Catalyst",
  "short_name": "Catalyst",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Easily and quickly share content, Websites and more to someone via email without leaving Chrome.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "src/browser_action/browser_action.html",
    "default_icon": "icons/48.png",
    "default_title": "Catalyst"
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "*://*/*",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "js/jquery.min.js",
      "src/bg/background.js"
    ]
  }
}
