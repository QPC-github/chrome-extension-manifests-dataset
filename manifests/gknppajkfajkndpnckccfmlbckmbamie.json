{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Falcone GDrive Full Path Title",
  "short_name": "FGDrive Title",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "description": "Esta extensao coloca o caminho completo da pasta atual do google drive no titulo da aba do Chrome",
  "icons": {
    "16": "icons/falcone16.png",
    "48": "icons/falcone48.png",
    "128": "icons/falcone128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://drive.google.com/*"
  ]
}
