{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Super Awesome Tweet Button",
  "description": "Super Awesome Tweet Button",
  "version": "1.0.2.1",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/19.png",
      "38": "img/38.png"
    },
    "default_title": "Super Awesome Tweet Button"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://twitter.com/*",
    "webNavigation",
    "contextMenus"
  ]
}
