{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Industry Jump Mentorship Screen Sharing",
  "description": "This extension allows you to share your screen with other participants of a mentorship session on industryjump.com.",
  "version": "0.1.3",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://industryjump.com/*",
      "https://www.industryjump.com/*",
      "https://dev.industryjump.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
