{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Narkuss Stream App",
  "description": "N'oubliez pas de prendre votre dose de sel quotidienne !",
  "version": "1.1",
  "permissions": [
    "https://api.twitch.tv/",
    "notifications"
  ],
  "background": {
    "scripts": [
      "js/jquery-1.11.3.js",
      "js/config.js",
      "js/background.js",
      "js/chrome.js"
    ]
  },
  "icons": {
    "128": "css/img/logo128.png",
    "256": "css/img/logo256.png",
    "32": "css/img/logo32.png",
    "64": "css/img/logo64.png"
  },
  "browser_action": {
    "default_icon": "css/img/logo128.png",
    "default_popup": "popup.html",
    "default_title": "Narkuss is Offline !"
  }
}
