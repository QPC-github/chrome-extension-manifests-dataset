{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Encoding Menu",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "A extension to append charset info when it's missing in response headers",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
