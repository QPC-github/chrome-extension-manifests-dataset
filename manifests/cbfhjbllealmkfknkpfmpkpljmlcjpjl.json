{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.3",
  "manifest_version": 2,
  "name": "Security Tweaks",
  "short_name": "security-tweaks",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "https://mybrowseraddon.com/security-tweaks.html",
  "description": "Improve your online security with few tweaks via toolbar popup!",
  "permissions": [
    "storage",
    "privacy",
    "contentSettings",
    "*://*/*",
    "webRequest",
    "notifications",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_title": "Security Tweaks",
    "default_popup": "data/popup/popup.html",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "data/content_script/inject.js",
        "data/content_script/tweaks/eval.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
