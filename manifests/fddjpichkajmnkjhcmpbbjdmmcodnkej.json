{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.9.26",
  "name": "РуТрекер - официальный плагин (доступ и пр.)",
  "short_name": "РуТрекер",
  "description": "РуТрекер: комфортная работа с зеркалами, поиск, доступ к RuTracker.org и пр.",
  "background": {
    "page": "/background.html"
  },
  "icons": {
    "128": "/images/addon-128.png"
  },
  "browser_action": {
    "default_icon": "/images/addon-128.png",
    "default_title": "РуТрекер (официальный плагин)",
    "default_popup": "/pages/popup.html"
  },
  "options_ui": {
    "page": "/pages/options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "/pages/*"
  ],
  "permissions": [
    "*://rutracker.org/*",
    "activeTab",
    "contextMenus",
    "proxy",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}
