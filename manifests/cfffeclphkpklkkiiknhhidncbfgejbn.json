{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Vertical Rail Ecommerce Marketing",
  "short_name": "Vertical Rail",
  "description": "Searches for eCommerce/marketing articles related to your search query.",
  "version": "1.0.4",
  "icons": {
    "128": "largeicon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
