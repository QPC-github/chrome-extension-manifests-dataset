{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SpiraCapture - Exploratory Testing Tool",
  "short_name": "SpiraCapture",
  "version": "1.1",
  "description": "Record exploratory testing sessions and integrates with Spira",
  "icons": {
    "16": "recording.png"
  },
  "browser_action": {
    "default_icon": "not-recording.png",
    "default_popup": "popup.html",
    "default_title": "SpiraCapture - Not Recording"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "webRequest",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "backgroundPage.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": []
}
