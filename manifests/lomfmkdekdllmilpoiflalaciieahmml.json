{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Shopsterhood Recipe",
  "description": "Create your own grocery list from any recipe you find on the web.",
  "manifest_version": 2,
  "version": "1.0.7",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Create your own grocery list from any recipe you find on the web.",
    "default_icon": "img/sh.png"
  },
  "icons": {
    "128": "img/sh.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "mac": "Ctrl+Shift+K",
        "chromeos": "Ctrl+Shift+K",
        "linux": "Ctrl+Shift+K"
      }
    }
  }
}
