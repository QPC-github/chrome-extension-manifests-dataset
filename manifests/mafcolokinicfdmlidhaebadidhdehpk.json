{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Story Saver",
  "version": "1.4",
  "description": "A chrome extension for saving stories from Facebook, Instagram, and WhatsApp.",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon_32.png"
  },
  "permissions": [
    "declarativeContent",
    "downloads",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.whatsapp.com/*"
  ]
}
