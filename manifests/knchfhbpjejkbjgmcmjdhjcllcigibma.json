{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "B&B",
  "description": "B&B prototype for stt",
  "version": "1",
  "author": "Ümit Yılmaz",
  "short_name": "B&B",
  "browser_action": {
    "default_icon": "caption.png",
    "default_title": "B&B",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "caption16.png",
    "48": "caption48.png",
    "128": "caption128.png"
  },
  "minimum_chrome_version": "25",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ]
}
