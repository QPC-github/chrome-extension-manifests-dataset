{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Lonely Heart",
  "version": "1.0.0",
  "description": "A button you can press to 'heart' a tweet",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery-2.1.3.min.js",
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "icomoon-lonelyheart.woff"
  ]
}
