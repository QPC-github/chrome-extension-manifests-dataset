{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "InstaAuto Blocker",
  "description": "This extension will block/unblock users.",
  "version": "1.1",
  "browser_action": {
    "default_title": "InstaAuto Blocker",
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": true
  },
  "options_page": "./options/options.html",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ]
}
