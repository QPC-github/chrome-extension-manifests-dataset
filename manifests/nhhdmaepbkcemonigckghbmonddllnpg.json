{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "EasyRaceLapTimer PocketEdition",
  "description": "companion app for the EasyRaceLapTimer PocketEdition",
  "version": "0.6.5",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "serial",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "storage",
    "clipboardWrite",
    "contextMenus"
  ],
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  },
  "icons": {
    "16": "icon-16.png",
    "128": "icon-196.png"
  }
}
