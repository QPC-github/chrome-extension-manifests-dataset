{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Safe Space Pronouns",
  "version": "1.0.0",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "safe-space-pronouns-icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "safe_space_pronouns_script.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "description": "Replaces: 'he' with 'he or she', and likewise 'her' with 'her or his', to create a safe space for your browsing enjoyment.",
  "manifest_version": 2
}
