{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "ELQ Screen Sharing Extension",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "ELQ Screen Sharing",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.6",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow desktop sharing in virlics applications.",
  "externally_connectable": {
    "matches": [
      "*://virlics-room-test.firebaseapp.com/*",
      "*://virlics-room.firebaseapp.com/*",
      "*://enfin-room.firebaseapp.com/*",
      "*://*.spjain.org/*",
      "*://localhost/*"
    ]
  },
  "icons": {
    "128": "icon-3.png",
    "16": "icon-1.png",
    "48": "icon-2.png"
  },
  "browser_action": {
    "default_icon": "icon-1.png"
  }
}
