{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pearson Chromebook Fix",
  "description": "This extension closes connections to avoid an issue with certain Chromebook configurations.",
  "version": "1.1",
  "icons": {
    "16": "pearson16.png",
    "48": "pearson48.png",
    "128": "pearson128.png"
  },
  "browser_action": {
    "default_icon": "pearson19.png"
  },
  "permissions": [
    "webRequest",
    "<all_urls>",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  }
}
