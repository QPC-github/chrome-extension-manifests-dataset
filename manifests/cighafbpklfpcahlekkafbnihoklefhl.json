{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "NitroRecorder",
  "version": "1.0.1.0",
  "description": "Gotta automate those tests!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "loader.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "128.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "short_name": "{NR}",
  "icons": {
    "128": "128.png"
  },
  "author": "Roman romanfromrome.com@gmail.com"
}
