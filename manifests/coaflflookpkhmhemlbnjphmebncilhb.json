{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MagicIWB Agent",
  "description": "SAMSUNG",
  "version": "4016",
  "minimum_chrome_version": "30",
  "icons": {
    "16": "Images/144x144.png",
    "128": "Images/144x144.png"
  },
  "app": {
    "background": {
      "scripts": [
        "Scripts/background.js"
      ]
    }
  },
  "permissions": [
    "contextMenus",
    {
      "fileSystem": [
        "write"
      ]
    },
    "app.window.alwaysOnTop",
    "storage",
    "power",
    "unlimitedStorage",
    "notifications",
    "fullscreen",
    "webview",
    {
      "socket": [
        "tcp-listen",
        "tcp-connect:*:*",
        "udp-bind",
        "udp-multicast-membership",
        "udp-send-to"
      ]
    }
  ]
}
