{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Ampare Max Image Width",
  "version": "1.0",
  "description": "Making Image Become Max-Width. So It doesn't goes out of border or screen.",
  "homepage_url": "https://www.ampareengine.com",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
