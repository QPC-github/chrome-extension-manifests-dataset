{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Minitube",
  "version": "1.2",
  "description": "Launch Minitube from browser",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "minitube16.png",
    "default_title": "Watch video with minitube"
  },
  "permissions": [
    "tabs",
    "http://*.youtube.com/",
    "https://*.youtube.com/"
  ],
  "icons": {
    "128": "minitube.png",
    "48": "minitube48.png",
    "16": "minitube16.png"
  },
  "manifest_version": 2
}
