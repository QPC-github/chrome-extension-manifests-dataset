{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Hearthstone Deck Decoder",
  "version": "1.1.00",
  "manifest_version": 2,
  "description": "Select deck code with your mouse and inspect deck in your browser. Easy, prettily and handy!",
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/browser.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "contextMenus",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    "icons/icon18.png",
    "img/heroes/*"
  ]
}
