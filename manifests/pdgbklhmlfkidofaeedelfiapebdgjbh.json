{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Sintelix Harvester",
  "description": "Harvest the web into Sintelix",
  "version": "1.1.10",
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:8098; object-src 'self'",
  "permissions": [
    "webRequest",
    "activeTab",
    "contextMenus",
    "downloads",
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "19": "images/icon_19.png",
      "128": "images/icon_128.png"
    },
    "default_title": "Sintelix Harvester",
    "default_popup": "popup.html"
  },
  "commands": {
    "current-page-harvesting": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Current page harvesting"
    },
    "store-url": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "Store current page URL"
    }
  },
  "web_accessible_resources": [
    "batch/index.html",
    "batch_harvest.html",
    "edit_ruleset.html",
    "current_page_harvesting.html",
    "images/icon-refresh.png",
    "images/slide-up.png",
    "images/slide-down.png",
    "images/send.png",
    "images/cancel.png",
    "images/cancel-add.png",
    "images/ok.png",
    "images/add.png",
    "images/help.png",
    "images/exit.png",
    "images/refresh.png",
    "images/icon_19.png",
    "images/spinner.gif",
    "images/icon-additem.png",
    "images/icon-tick.png",
    "images/icon-cancel.png",
    "images/icon-radio.png",
    "images/icon-keyboard.png",
    "images/icon-goto.png"
  ],
  "background": {
    "scripts": [
      "script/lib/jquery-3.1.1.min.js",
      "script/lib/async-2.1.4.min.js",
      "script/constants.js",
      "script/common.js",
      "script/sintelix-service.js",
      "script/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "script/lib/jquery-3.1.1.min.js",
        "script/lib/async-2.1.4.min.js",
        "script/common.js",
        "script/constants.js",
        "script/ruleset-marker-v2.js",
        "script/content-script.js",
        "script/batch-content-script.js"
      ],
      "css": [
        "css/content.css"
      ]
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "script/common.js",
        "script/constants.js",
        "script/iframe-script.js"
      ],
      "all_frames": true
    }
  ]
}
