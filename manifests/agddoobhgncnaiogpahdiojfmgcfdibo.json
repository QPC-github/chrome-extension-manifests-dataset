{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Vocab.Be",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Don't get stung by exams, use VocabBe!",
  "options_page": "popup.html",
  "browser_action": {
    "default_icon": "icon/icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://vocabowl.azurewebsites.net/",
    "https://api.singly.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/injection.js",
        "jquery-1.8.3.min.js",
        "jquery.tipsy.js",
        "page.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "css": [
        "tipsy.css",
        "page.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    "img/1353246156_twitter.png",
    "word_lists/advertisers.json",
    "word_lists/sat.json"
  ]
}
