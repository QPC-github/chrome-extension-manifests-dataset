{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Alt Hover for Twitter",
  "short_name": "Alt Hover",
  "version": "1.0",
  "description": "Display Twitter image descriptions on hover",
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "http://*.twitter.com/*"
      ],
      "js": [
        "tippy.min.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
