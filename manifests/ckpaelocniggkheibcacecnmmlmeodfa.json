{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CryptoBit: Bitcoin Wallet",
  "version": "1.2.1.5",
  "short_name": "CryptoBit: Bitcoin Wallet",
  "description": "Send, receive, and exchange Bitcoin instantly with anyone in the world for free and very anonymous",
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "64": "/images/icon64.png",
    "128": "/images/icon128.png"
  },
  "background": {
    "scripts": [
      "script/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "CryptoBit Bitcoin Wallet"
  },
  "permissions": [
    "storage"
  ]
}
