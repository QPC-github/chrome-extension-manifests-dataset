{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "CraftyDate",
  "short_name": "CraftyDate",
  "description": "",
  "version": "1.1",
  "homepage_url": "http://www.crafty184.com",
  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_title": "CraftyDate"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "scripts/bs_main.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "https://*/*",
    "http://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "*://*/*"
  ]
}
