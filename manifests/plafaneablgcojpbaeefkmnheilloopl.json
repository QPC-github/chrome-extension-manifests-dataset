{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Wordmark.it Extension",
  "version": "0.0.4",
  "description": "This extension enables you to see your fonts on Wordmark.it",
  "permissions": [
    "fontSettings"
  ],
  "background": {
    "scripts": [
      "javascripts/bugsnag.min.js",
      "javascripts/bugsnag_config.js",
      "javascripts/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/wordmarkit16.png",
      "32": "images/wordmarkit32.png",
      "48": "images/wordmarkit48.png",
      "128": "images/wordmarkit128.png"
    }
  },
  "icons": {
    "16": "images/wordmarkit16.png",
    "32": "images/wordmarkit32.png",
    "48": "images/wordmarkit48.png",
    "128": "images/wordmarkit128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:8000/*",
      "https://test.wordmark.it/*",
      "https://wordmark.it/*",
      "https://www.wordmark.it/*"
    ]
  },
  "manifest_version": 2
}
