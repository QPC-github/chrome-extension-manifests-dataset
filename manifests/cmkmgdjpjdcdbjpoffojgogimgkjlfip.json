{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "MYK Screen Sharing",
  "author": "MYK Applications",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome extension allows MYK App users to use screensharing.",
  "homepage_url": "http://mykapp.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.myk-app.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
