{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "To-Do List",
  "description": "Storage Sync Extension",
  "version": "0.1",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
