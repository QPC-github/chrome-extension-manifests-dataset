{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LADbible news",
  "short_name": "LADbible news",
  "version": "1.0.0",
  "description": "LADbible news",
  "homepage_url": "http://ladbible.com/news",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "/js/jquery.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "LADbible news",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://*/"
  ]
}
