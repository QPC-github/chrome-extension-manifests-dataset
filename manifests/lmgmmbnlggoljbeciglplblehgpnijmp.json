{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Companion",
  "description": "Companion is a chrome extension that displays a random inspirational quote when you open a new tab.",
  "version": "0.0.3",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Companion"
  },
  "chrome_url_overrides": {
    "newtab": "tab/tab.html"
  },
  "permissions": [
    "activeTab"
  ]
}
