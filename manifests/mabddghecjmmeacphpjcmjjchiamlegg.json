{
  "background": {
    "page": "pages/background.html"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "pages/popup.html"
  },
  "version": "2.0",
  "description": "Initiate shutdown in a desired time!",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "manifest_version": 2,
  "name": "PC Autoshutdown",
  "short_name": "Auto Shutdown for Windows",
  "offline_enabled": true,
  "permissions": [
    "nativeMessaging",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
