{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "For all those kids and adults who love the most mischievous kid in the anime world, Shinchan. Enjoy :-)",
  "name": "Shinchan Theme",
  "browser_action": {
    "default_icon": "finalIcon.png",
    "default_popup": "popupShinchan.html",
    "default_title": "Capsicum? Yuck!"
  },
  "theme": {
    "images": {
      "theme_ntp_background": "Shinchan.png"
    },
    "properties": {
      "ntp_background_alignment": "center"
    }
  },
  "icons": {
    "64": "finalIconSmall.png",
    "128": "finalIcon.png"
  },
  "incognito": "split"
}
