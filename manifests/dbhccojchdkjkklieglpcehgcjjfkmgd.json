{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Arrow ClickOnce Helper",
  "short_name": "ClickOnceHelper",
  "description": "This extension enables Microsoft® ClickOnce applications in Chrome™ and Chromium™ for Windows.",
  "version": "1.0.0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "nativeMessaging",
    "*://*/*",
    "declarativeContent"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "128": "icons/app-128.png",
    "16": "icons/app-16.png",
    "32": "icons/app-32.png",
    "48": "icons/app-48.png",
    "64": "icons/app-64.png"
  },
  "web_accessible_resources": [
    "images/blank.png"
  ]
}
