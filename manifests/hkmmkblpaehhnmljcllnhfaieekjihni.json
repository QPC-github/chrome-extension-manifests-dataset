{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "background": {
    "page": "background.html"
  },
  "description": "Share selected text from any website to Twitter",
  "icons": {
    "16": "16.png",
    "128": "128.png"
  },
  "name": "Twitter Share Button",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_title": " Twitter Share Button",
    "default_icon": "16.png"
  }
}
