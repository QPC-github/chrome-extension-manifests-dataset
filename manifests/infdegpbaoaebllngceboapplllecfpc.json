{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_extName__",
  "version": "2.6.12",
  "description": "__MSG_extDescription__",
  "browser_action": {
    "default_icon": {
      "16": "images/browser-action-icon-16.png",
      "19": "images/browser-action-icon.png"
    },
    "default_title": "__MSG_extDescription__",
    "default_popup": ""
  },
  "icons": {
    "128": "images/extensions-icon.png"
  },
  "default_locale": "en",
  "background": {
    "page": "html/background.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "css": [
        "/css/extrabux_extension.css"
      ],
      "js": [
        "/js/lib/jquery-1.11.3.min.js",
        "/js/lib/vue.js",
        "/js/lib/common.js",
        "/js/stores.js",
        "/js/inject.js",
        "/js/privacy.js",
        "/js/lib/sprintf.min.js",
        "/js/popup.js",
        "/js/login.js",
        "/js/setting.js",
        "/js/loader.js",
        "/js/lib/translator.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.jpg",
    "html/store.html",
    "html/popup.html",
    "html/login.html",
    "html/setting.html",
    "html/login_without.html",
    "html/nologin.html",
    "html/empty_store.html",
    "html/tips.html",
    "html/privacy.html",
    "_locales/de/messages.json",
    "_locales/en/messages.json",
    "_locales/ja/messages.json",
    "_locales/ko/messages.json",
    "_locales/ru/messages.json",
    "_locales/zh_CN/messages.json",
    "_locales/zh_TW/messages.json"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com https://extension.extrabux.io https://www.extrabux.com https://www.extrabux.cn; object-src 'self'"
}
