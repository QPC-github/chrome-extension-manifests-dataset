{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Target Toolbar",
  "description": "This extension demonstrates a 'browser action' with Target.",
  "version": "6.3",
  "browser_action": {
    "default_icon": "skin/logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "background",
    "http://tws.target.com/",
    "http://coupons.target.com/api/offers"
  ]
}
