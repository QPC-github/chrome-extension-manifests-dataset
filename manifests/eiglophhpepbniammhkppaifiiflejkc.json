{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "xCookie",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "xCookie, to close all session at all sites, not more.",
  "homepage_url": "http://4bem.com",
  "icons": {
    "16": "icons/xCookie16.png",
    "19": "icons/xCookie19.png",
    "48": "icons/xCookie48.png",
    "128": "icons/xCookie128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/xCookie128.png",
    "default_title": "xCookie"
  },
  "permissions": [
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "src/xCookie.js"
    ]
  }
}
