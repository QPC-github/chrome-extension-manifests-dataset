{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Bot me up, baby!",
  "short_name": "CotLI bot",
  "manifest_version": 2,
  "version": "1.0.14",
  "description": "Automated CotLI crusading, for all your idle/idol needs! (Windows only)",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "page_action": {
    "default_icon": "img/icon16.png"
  },
  "permissions": [
    "declarativeContent"
  ],
  "web_accessible_resources": [
    "bot.js",
    "windowchange.js",
    "progress.gif",
    "CotliBot.bin"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://idlemaster.djartsgames.ca/~idle/*"
      ],
      "js": [
        "inject_iframe.js"
      ],
      "css": [
        "bot.css"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "http://www.kongregate.com/games/codename_enter/crusaders-of-the-lost-idols"
      ],
      "js": [
        "inject_parent.js"
      ],
      "all_frames": true
    }
  ]
}
