{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Link Modifier",
  "short_name": "Link Modifier",
  "description": "Modify URL parameters of links in web page",
  "version": "0.0.0.6",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": [
      "/js/background.js"
    ]
  },
  "icons": {
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_title": "Link Modifier",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webNavigation",
    "webRequest"
  ]
}
