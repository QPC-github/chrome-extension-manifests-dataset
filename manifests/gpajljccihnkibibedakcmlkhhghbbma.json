{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Cerbo Screenshare",
  "author": "Cerbo, Inc.",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "This Chrome Extension enables screensharing in Cerbo Digital Classrooms. It doesn't do anything except capture your screen content.",
  "homepage_url": "http://cerbo.me/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.cerbo.me/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
