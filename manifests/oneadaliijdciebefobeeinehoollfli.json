{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TwitchWatcher",
  "description": "This extension will notify you when your favorite streamers change games.",
  "version": "1.0.4",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "56": "56.png",
    "112": "112.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "112.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "notifications"
  ]
}
