{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "TheRexenShow App Canale",
  "description": "App per avere sempre a portata di mano il mio canale! ;D",
  "default_locale": "en",
  "version": "1.0.10",
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/ico19.png",
    "default_title": "",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://*.wips.com https://*.facebook.net https://*.facebook.com https://*.twitter.com https://*.google.com https://*.google-analytics.com; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies",
    "management",
    "notifications",
    "webRequest",
    "contextMenus"
  ],
  "optional_permissions": [
    "background"
  ],
  "icons": {
    "19": "images/ico19.png",
    "32": "images/ico32.png",
    "48": "images/ico48.png",
    "128": "images/ico128.png"
  },
  "web_accessible_resources": [
    "images/ico48.png",
    "youtube_play.js"
  ]
}
