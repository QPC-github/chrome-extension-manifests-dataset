{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Merch Writer for Merch by Amazon",
  "short_name": "Merch Writer",
  "description": "Merch Writer is a tool that makes writing Merch By Amazon listings much quicker and easier.",
  "version": "0.6.2",
  "homepage_url": "https://merchwriter.app",
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "browser_action": {
    "default_title": "Merch Writer",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "http://tmhunt.com/*",
    "https://merch.amazon.com/*",
    "http://*.fontawesome.com/*",
    "https://*.fontawesome.com/*"
  ],
  "web_accessible_resources": [
    "images/*.*"
  ],
  "content_security_policy": "script-src 'self' https://gumroad.com https://kit.fontawesome.com/; object-src 'self'"
}
