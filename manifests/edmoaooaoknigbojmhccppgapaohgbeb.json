{
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ],
      "matches": [
        "http://*/*"
      ]
    }
  ],
  "description": "Replace the maddening face of Donald Trump with cute little kittens. A simple modification of the Stop Tony Meow extension.",
  "homepage_url": "http://stoptonymeow.com/",
  "icons": {
    "128": "icons/Icon-128.png",
    "16": "icons/Icon-16.png",
    "48": "icons/Icon-48.png"
  },
  "manifest_version": 2,
  "name": "Stop Donald Meow",
  "permissions": [
    "http://*/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.1"
}
