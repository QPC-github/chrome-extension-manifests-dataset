{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Mensagens Com Amor",
  "version": "0.1.55",
  "description": "Demonstre suas emoções com mensagens que falam por você.",
  "manifest_version": 2,
  "permissions": [
    "notifications",
    "https://ajax.googleapis.com/ajax/services/feed/load"
  ],
  "web_accessible_resources": [
    "img/48.png"
  ],
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "background": {
    "scripts": [
      "lib/angular/angular.min.js",
      "js/base.js",
      "js/bg.js"
    ]
  },
  "browser_action": {
    "default_title": "mensagenscomamor.com",
    "default_icon": {
      "19": "img/19.png",
      "38": "img/38.png"
    },
    "default_popup": "app.html"
  }
}
