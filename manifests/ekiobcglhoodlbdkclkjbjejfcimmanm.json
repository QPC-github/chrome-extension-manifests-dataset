{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Whomium",
  "description": "Monitors all HTTP requests, logs IP addresses and runs whois lookups on a local database.",
  "version": "2016.1.9.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Whomium",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "popup": "ui.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "*://*/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
