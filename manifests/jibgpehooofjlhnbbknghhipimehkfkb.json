{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "מעריב",
  "version": "0.1.18",
  "description": "ברוכים הבאים לאתר מעריב החדש – האתר הרשמי של עיתון מעריב.",
  "short_name": "מעריב",
  "content_security_policy": "script-src 'self' 'unsafe-eval';object-src 'self'",
  "permissions": [
    "browsingData",
    "cookies",
    "declarativeContent",
    "notifications",
    "tabs",
    "topSites",
    "unlimitedStorage",
    "webRequest",
    "activeTab",
    "pageCapture",
    "http://*/",
    "storage",
    "<all_urls>"
  ],
  "page_action": {
    "default_icon": {
      "19": "icons/19x19.png",
      "38": "icons/38x38.png"
    },
    "default_popup": "popup.html",
    "default_title": "מעריב"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-2.1.3.min.js",
      "js/common.js",
      "js/config.js",
      "js/language.js",
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "/newtab.html"
  }
}
