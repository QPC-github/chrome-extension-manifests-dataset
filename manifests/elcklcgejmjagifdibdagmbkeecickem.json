{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": ".io Games Manager",
  "version": "4.0.0",
  "manifest_version": 2,
  "description": "Manage and Analyse IO Games",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": ".io Games Manager",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
