{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "BrainsTutor Sharing Screen",
  "author": "BrainsTutor",
  "version": "2.2",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Developed for https://www.brainstutor.com/. This only capture content of your screen.",
  "homepage_url": "https://www.brainstutor.com",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.brainstutor.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
