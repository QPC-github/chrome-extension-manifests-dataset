{
  "background": {
    "persistent": true,
    "scripts": [
      "scripts/jquery-1.6.1.min.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Twitch Live"
  },
  "description": "A Twitch extension for displaying a user's favorite channels which are currently live.",
  "homepage_url": "https://www.averagearmy.co.uk",
  "icons": {
    "128": "images/icon-128.png",
    "16": "images/icon-16.png",
    "48": "images/icon-48.png"
  },
  "manifest_version": 2,
  "name": "Average Army Live",
  "options_page": "options.html",
  "permissions": [
    "https://api.twitch.tv/",
    "notifications"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "0.98",
  "web_accessible_resources": [
    "images/icon.png"
  ]
}
