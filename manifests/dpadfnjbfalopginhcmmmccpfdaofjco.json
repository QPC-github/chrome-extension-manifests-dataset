{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Keyword Search in YouTube Video",
  "short_name": "Keyword Search",
  "description": "This extension will let you search for a text in the transcript or subtitles of a youtube video and jump to the corresponding part.",
  "version": "1.3.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "page_action": {
    "default_icon": "images/logo128.png",
    "default_title": "Keyword Search in YouTube Video",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://video.google.com/",
    "http://diycaptions.com/php/get-automatic-captions-as-srt.php"
  ]
}
