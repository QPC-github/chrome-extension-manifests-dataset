{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "description": "Chrome extension for people who love cats!",
  "version": "0.0.1",
  "name": "CutieCats - New tab images of cats & kittens",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "./ext/background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./ext/content.bundle.js"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "/ext/icon_128.png"
  },
  "icons": {
    "128": "/ext/icon_128.png"
  },
  "manifest_version": 2,
  "permissions": [
    "background"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
