{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "eH2 Link Shortner",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "19",
  "description": "Shorten, Share and Earn$!",
  "homepage_url": "https://eh2.com",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "32": "icons/icon.png",
    "16": "icons/icon16.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Shorten & Share!",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "tabs",
    "geolocation",
    "https://*/*",
    "http://*/*"
  ]
}
