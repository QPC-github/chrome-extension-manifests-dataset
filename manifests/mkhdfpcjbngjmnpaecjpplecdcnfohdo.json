{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "iPresso Scenarios Capture",
  "version": "1.1",
  "description": "Capture screen of MA Scenarios in iPresso Marketing Automation.",
  "page_action": {
    "default_icon": "img/ico128.png",
    "default_title": "iPresso Scenarios Capture!"
  },
  "icons": {
    "16": "img/ico16.png",
    "48": "img/ico48.png",
    "128": "img/ico128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "https://*.ipresso.com/",
    "https://*.ipresso.pl/",
    "https://*.ipresso.dev/"
  ]
}
