{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Author Marketing Club",
  "short_name": "AMC",
  "version": "1.0.4",
  "description": "Helping Authors Sell More Books With Premium Author Marketing Club Services.",
  "content_scripts": [
    {
      "matches": [
        "http://authormarketingclub.com/members/*",
        "https://authormarketingclub.com/members/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*.amazon.com/",
    "https://*.amazon.com/"
  ],
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "logo19.png",
      "38": "logo38.png"
    },
    "default_title": "Author Marketing Club",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "offline_enabled": false
}
