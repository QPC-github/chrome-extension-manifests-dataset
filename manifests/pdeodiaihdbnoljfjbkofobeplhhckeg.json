{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Intrix™ CRM Login Addon",
  "short_name": "Intrix CRM Login",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_title": "Login to Intrix™ CRM",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "options_page": "options.html",
  "commands": {
    "login_quickly": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Login to Intrix™ CRM quickly with keyboard shortcut"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
