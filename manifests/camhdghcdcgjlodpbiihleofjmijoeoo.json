{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Surfeez",
  "description": "Surfeez is a desktop experience in your browser.",
  "version": "1.0.9",
  "short_name": "Surfeez",
  "icons": {
    "16": "/assets/logo/16.png",
    "32": "/assets/logo/32.png",
    "128": "/assets/logo/128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "/assets/logo/16.png",
      "32": "/assets/logo/32.png",
      "128": "/assets/logo/128.png"
    },
    "default_title": "Surfeez - Desktop your browser!",
    "default_popup": "menu/index.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "/assets//js/*",
    "/assets/tutorial/js/*"
  ],
  "permissions": [
    "notifications",
    "activeTab",
    "http://*/",
    "https://*/",
    "tabs",
    "storage",
    "cookies",
    "management",
    "topSites",
    "browsingData",
    "sessions",
    "downloads",
    "downloads.open",
    "contextMenus",
    "idle"
  ],
  "background": {
    "page": "/pages/background/background.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com;  object-src 'self'"
}
