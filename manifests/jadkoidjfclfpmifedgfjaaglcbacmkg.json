{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "The Blacklist Application",
  "short_name": "Blacklist",
  "description": "Does all kinds of cool stuff",
  "author": "G&G",
  "version": "2.2",
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.stoor.be/*",
      "*://*.blacklistapplication.be/*"
    ]
  },
  "permissions": [
    "tabs",
    "management"
  ],
  "web_accessible_resources": [
    "script.js",
    "icon16.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "js": [
        "jquery.js",
        "jquery.popup.overlay.js",
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
