{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "HTTP Headers",
  "short_name": "HTTP Headers",
  "description": "View and inspect HTTP headers for the current webpage request, including redirections and status codes.",
  "version": "1.1.3",
  "author": "Paulo Arromba",
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_popup": "popup.html",
    "default_title": "Inspect HTTP Headers"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icons/16.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ]
}
