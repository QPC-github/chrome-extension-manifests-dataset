{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "LinkBook",
  "version": "0.1.4",
  "description": "La extensión para copiar enlaces entre tus dispositivos más fácil y sencilla.",
  "icons": {
    "16": "/img/icon16.png",
    "48": "/img/icon48.png",
    "128": "/img/icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LinkBook",
    "default_icon": "/img/icon48.png"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "storage",
    "contextMenus",
    "notifications"
  ]
}
