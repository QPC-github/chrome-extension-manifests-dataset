{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PEPEETA",
  "description": "PEPEETA Suite",
  "version": "0.2.6",
  "version_name": "0.2.6build1",
  "incognito": "split",
  "icons": {
    "16": "icon/Pepeeta16.png",
    "48": "icon/Pepeeta48.png",
    "128": "icon/Pepeeta128.png"
  },
  "browser_action": {
    "default_icon": "icon/logo_plugin_96px.png",
    "default_title": "PEPEETA",
    "default_popup": "index.html"
  },
  "permissions": [
    "http://localhost:9998/*",
    "http://rpc.pepeeta.io/*",
    "http://ledger.pepeeta.io/*",
    "http://plugin.pepeeta.io/*",
    "https://api.binance.com/api/*",
    "https://api.bitfinex.com/v1/pubticker/*",
    "https://api.coingecko.com/api/v3/simple/price?ids=litecoin&vs_currencies=EUR",
    "activeTab",
    "tabs",
    "storage",
    "sessions"
  ],
  "content_security_policy": "script-src 'self' https://checkout.stripe.com https://www.google.com https://www.gstatic.com 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "assets/img/*"
  ]
}
