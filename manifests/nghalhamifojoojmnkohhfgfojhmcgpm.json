{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Discrete facebook messages",
  "description": "This extension changes the look of the messages page to make it more discrete for office use",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "http://facebook.com/messages*",
        "https://facebook.com/messages*",
        "http://www.facebook.com/messages*",
        "https://www.facebook.com/messages*"
      ],
      "css": [
        "global.css"
      ]
    }
  ],
  "permissions": [
    "http://facebook.com/",
    "https://facebook.com/",
    "http://www.facebook.com/",
    "https://www.facebook.com/"
  ]
}
