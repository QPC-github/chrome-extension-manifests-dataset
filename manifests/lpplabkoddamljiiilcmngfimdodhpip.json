{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Pedlar",
  "version": "1.0",
  "description": "Easily share deals on Pedlar. See https://pedlar.co",
  "homepage_url": "https://pedlar.co",
  "icons": {
    "48": "icons/pedlar-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/pedlar-32.png",
    "default_title": "Share deal on Pedlar"
  }
}
