{
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "Công cụ đặt hàng taobao, tmall và 1688 tại conduongtolua.net"
  },
  "content_scripts": [
    {
      "css": [
        "css/style.css"
      ],
      "exclude_matches": [
        "https://daixiao.1688.com/*",
        "http://daixiao.1688.com/*"
      ],
      "js": [
        "js/jquery-2.2.3.min.js",
        "js/bootstrap.min.js",
        "js/tools.js",
        "js/config.js",
        "js/app.js"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*",
        "http://*.1688.com/*",
        "https://*.1688.com/*",
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*"
      ]
    },
    {
      "js": [
        "js/taobao.js"
      ],
      "matches": [
        "http://*.taobao.com/*",
        "https://*.taobao.com/*"
      ]
    },
    {
      "js": [
        "js/tmall.js"
      ],
      "matches": [
        "http://*.tmall.com/*",
        "https://*.tmall.com/*",
        "http://*.tmall.hk/*",
        "https://*.tmall.hk/*",
        "http://detail.tmall.com/*",
        "https://detail.tmall.com/*",
        "http://world.tmall.com/*",
        "https://*.world.tmall.com/*"
      ]
    },
    {
      "js": [
        "js/1688.js"
      ],
      "matches": [
        "http://*.1688.com/*",
        "https://*.1688.com/*"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Công cụ giúp đặt hàng trên Taobao, 1688, Tmall thuận tiện, nhanh chóng. Mọi đơn hàng sẽ được chuyển tiếp về Conduongtolua.net!",
  "icons": {
    "128": "images/icon-128x128.png",
    "48": "images/logo.png"
  },
  "incognito": "split",
  "manifest_version": 2,
  "name": "Công cụ đặt hàng taobao, tmall và 1688 CDTL",
  "permissions": [
    "activeTab",
    "https://*.conduongtolua.net/*",
    "http://*.conduongtolua.net/*",
    "https://*.taobao.com/*",
    "http://*.taobao.com/*",
    "https://*.1688.com/*",
    "http://*.1688.com/*",
    "https://*.tmall.com/*",
    "http://*.tmall.com/*",
    "http://*.hm.com/*",
    "https://*.tmall.hk/*",
    "http://*.tmall.hk/*",
    "http://detail.tmall.com/*",
    "http://world.tmall.com/*",
    "https://*.world.tmall.com/*",
    "https://detail.tmall.com/*",
    "storage"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "2.0.1",
  "web_accessible_resources": [
    "images/*",
    "css/*",
    "template/*"
  ]
}
