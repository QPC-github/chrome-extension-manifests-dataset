{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "FFZ: Mikuia Extras",
  "short_name": "ffz-miku",
  "description": "Levels and stuff on Twitch chat.",
  "version": "0.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "script.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "exclude_globs": [
        "*://api.twitch.tv/*"
      ]
    }
  ],
  "permissions": [
    "*://*.mikuia.tv/*",
    "*://*.twitch.tv/*"
  ]
}
