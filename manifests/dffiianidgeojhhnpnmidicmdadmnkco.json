{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Samâ€™s Shopping Help",
  "author": "Yan Wu && Xining Li",
  "version": "1.2.0",
  "description": "Help you find better price of same item on Sam's club",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "jquery-3.4.1.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "samsclub logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "contentAmazon.js"
      ],
      "css": [
        "content.css"
      ]
    },
    {
      "matches": [
        "https://www.costco.com/*"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "contentCostco.js"
      ],
      "css": [
        "content.css"
      ]
    },
    {
      "matches": [
        "https://www.target.com/*"
      ],
      "js": [
        "jquery-3.4.1.min.js",
        "contentTarget.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "cookies"
  ]
}
