{
  "manifest_version": 2,
  "name": "Social Media References",
  "description": "Shows you all the discussions on the social media aggregators(Reddit, Hacker News) for the page you're visiting.",
  "version": "0.0.3",
  "icons": {
    "16": "img/sc16.png",
    "48": "img/sc48.png",
    "128": "img/sc128.png"
  },
  "background": {
    "scripts": [
      "lib/lodash-4.14.1.min.js",
      "lib/jquery-3.1.0.min.js",
      "lib/tracker.js",
      "lib/dexie-1.4.1.min.js",
      "utils.js",
      "options.js",
      "scm.providers.js",
      "scm.sync.js",
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Social Media References",
    "default_icon": "img/sc48.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "web_accessible_resources": [],
  "minimum_chrome_version": "22.0.0.0",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
