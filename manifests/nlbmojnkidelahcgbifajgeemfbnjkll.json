{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Unwanted word highlighter",
  "description": "Highlights words you type that you would rather not type, e.g. 'retard', 'guys', 'lame'",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "highlighter.js"
      ]
    }
  ]
}
