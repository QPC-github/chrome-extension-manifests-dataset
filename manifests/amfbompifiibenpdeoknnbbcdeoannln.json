{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Smart scrolling",
  "description": "Scroll any pages without using your hand!",
  "version": "0.11",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js",
        "gaze_tracking.js",
        "tracking.js",
        "face-min.js",
        "dat.gui.js"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
