{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "Rádio Fonte",
  "description": "Extensão Rádio Fonte",
  "author": "Rodrigo TI",
  "browser_action": {
    "default_title": "Rádio Fonte",
    "default_icon": "pause.png",
