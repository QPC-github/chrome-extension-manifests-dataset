{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bato",
  "short_name": "Bato",
  "description": "Додаток за помош при читање за лица со дислексија.",
  "version": "1.0.3",
  "icons": {
    "16": "/img/icon.16.png",
    "19": "/img/icon.19.png",
    "24": "/img/icon.24.png",
    "32": "/img/icon.32.png",
    "38": "/img/icon.38.png",
    "48": "/img/icon.48.png",
    "128": "/img/icon.128.png",
    "256": "/img/icon.256.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "/scripts/background/main.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "/img/icon.128.png",
    "default_popup": "/views/browser-action/main.html"
  },
  "web_accessible_resources": [
    "/font/*"
  ]
}
