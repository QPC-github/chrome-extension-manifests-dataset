{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "QT2 Screen Sharing",
  "author": "QT2 Systems, Inc.",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version": "40",
  "description": "This Chrome extension simply shares the moderators desktop view through the OpenTok (http://tokbox.com/) video streaming API.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.qt2systems.com/*",
      "https://*.outrivalracing.com/*",
      "https://*.your262.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
