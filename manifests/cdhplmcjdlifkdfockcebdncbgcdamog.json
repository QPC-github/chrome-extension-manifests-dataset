{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WoahReact",
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "woah.css"
      ]
    }
  ],
  "description": "This extension replaces the Wow react on Facebook with a Woah react.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "woahsobig.png",
    "default_title": "Woah!",
    "icons": {
      "16": "woahsmall.png",
      "48": "woahbig.png",
      "128": "woahsobig.png"
    }
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
