{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "Sticky bookmarks",
  "version": "0.1",
  "description": "Make bookmarks to follow your progress as you read",
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_icon": "img/grey.png",
    "default_title": "Click to make this bookmark sticky"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage"
  ],
  "minimum_chrome_version": "22.0",
  "icons": {
    "48": "img/sticky-48.png",
    "128": "img/sticky-128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
