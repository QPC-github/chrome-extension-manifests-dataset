{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Web Blocker - Don't get distracted",
  "description": "Add websites to your blacklist, which are not accessible while this extension is active!",
  "icons": {
    "128": "ressources/logo.png"
  },
  "version": "1.0.1",
  "browser_action": {
    "default title": "Work hard dream big",
    "default_popup": "HTML/popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*'/*",
    "tabs",
    "cookies",
    "*://*.google.com",
    "storage",
    "webrequestblocking"
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/storage.js"
    ],
    "pages": [
      "HTML/popup.html"
    ],
    "persistent": false
  }
}
