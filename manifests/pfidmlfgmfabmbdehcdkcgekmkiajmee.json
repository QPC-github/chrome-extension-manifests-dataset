{
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/qc.png",
    "default_title": "QC Notifier"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "./jq.js",
      "./stuff.js",
      "./background.js"
    ]
  },
  "description": "Notifies you when a new Questionable Content comic is available.",
  "icons": {
    "128": "images/icon_128.png",
    "32": "images/icon_32.png"
  },
  "name": "QC Notifier",
  "short_name": "QCN",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://www.questionablecontent.net/*",
    "alarms"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.4"
}
