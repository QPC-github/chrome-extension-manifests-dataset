{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Translator",
  "description": "Right Click to translate selected text using Google Translate",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/common.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ]
}
