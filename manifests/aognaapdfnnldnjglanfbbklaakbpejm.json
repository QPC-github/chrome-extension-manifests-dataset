{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "眼不见心不烦（新浪微博）",
  "short_name": "眼不见心不烦",
  "version": "2.6.1",
  "manifest_version": 2,
  "minimum_chrome_version": "20",
  "description": "新浪微博（weibo.com）非官方功能增强插件，可以无限制地屏蔽关键词、用户、来源，去除页面广告和推广微博，反刷屏，还您一个清爽干净的微博！",
  "icons": {
    "48": "weiboCleaner.png",
    "128": "weiboCleaner.large.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://weibo.com/*",
        "http://www.weibo.com/*",
        "http://d.weibo.com/*",
        "https://weibo.com/*",
        "https://www.weibo.com/*",
        "https://d.weibo.com/*"
      ],
      "js": [
        "weiboCleaner.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "http://weibo.com/*",
    "http://www.weibo.com/*",
    "http://d.weibo.com/*",
    "https://weibo.com/*",
    "https://www.weibo.com/*",
    "https://d.weibo.com/*"
  ]
}
