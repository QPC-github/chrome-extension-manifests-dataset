{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "REClaim",
  "description": "Realtime claim analyzer for drchrono",
  "version": "0.1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "REClaim"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://drbednarski.drchrono.com/*"
      ],
      "js": [
        "content.js",
        "jquery-3.2.1.min.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://drbednarski.drchrono.com/*",
    "storage"
  ]
}
