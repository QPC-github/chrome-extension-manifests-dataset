{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Simple Email Sharing",
  "version": "1.2",
  "author": "Jory Hatton",
  "homepage_url": "http://www.catalyzelabs.com",
  "description": "A simple extension to share your active tab via your default email client.",
  "short_name": "Share your active tab via email.",
  "icons": {
    "16": "images/share16.png",
    "48": "images/share48.png",
    "128": "images/share128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/share16.png",
      "32": "images/share32.png",
      "48": "images/share48.png",
      "128": "images/share128.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
