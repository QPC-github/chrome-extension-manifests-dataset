{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Site Monitor",
  "description": "Monitors your websites and alerts you if any go down",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "ok-icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "background",
    "http://*/",
    "https://*/"
  ]
}
