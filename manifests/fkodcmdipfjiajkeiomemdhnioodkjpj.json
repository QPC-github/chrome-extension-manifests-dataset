{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-large.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self'  https://ssl.google-analytics.com; object-src 'self'",
  "description": "The simplest way to search Wikipedia.",
  "icons": {
    "128": "icon-large.png",
    "16": "icon-bitty.png",
    "48": "icon-small.png"
  },
  "manifest_version": 2,
  "name": "Easy Search For Wikipedia",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "*://*/*"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0"
}
