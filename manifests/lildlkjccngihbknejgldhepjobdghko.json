{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Web-Ratings: Отзывы о сайтах",
  "version": "1.1",
  "description": "Расширение позволяет узнать о качестве сайта, который вы посетили. Для просмотра отзывов о сайте достаточно кликнуть на иконку.",
  "background": {
    "scripts": [
      "js/backend.bundle.js"
    ]
  },
  "manifest_version": 2,
  "icons": {
    "16": "img/128.png",
    "48": "img/128.png",
    "128": "img/128.png"
  },
  "browser_action": {
    "default_title": "Web-Ratings: Отзывы о сайтах",
    "default_icon": "img/128.png",
    "icons": {
      "16": "img/128.png",
      "48": "img/128.png",
      "128": "img/128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://web-ratings.ru/",
    "https://web-ratings.ru/",
    "tabs"
  ]
}
