{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Kiite",
  "short_name": "Kiite",
  "description": "Add to and access your Kiite knowledge base, wherever you are.",
  "version": "1.0.1",
  "author": "Kiite",
  "browser_action": {
    "default_icon": "favi.png",
    "default_title": "Kiite",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "favi.png",
    "32": "favi.png",
    "48": "favi.png",
    "128": "favi.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
