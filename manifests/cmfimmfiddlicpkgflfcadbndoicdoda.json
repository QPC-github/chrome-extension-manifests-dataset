{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "BookMook",
  "version": "1.0.3",
  "description": "Moves new bookmarks to the top of the folder",
  "icons": {
    "32": "images/bookmark-on-32.png",
    "64": "images/bookmark-on-64.png",
    "128": "images/bookmark-on-128.png"
  },
  "browser_action": {
    "default_title": "New bookmarks upwards",
    "default_icon": {
      "32": "images/bookmark-on-32.png",
      "64": "images/bookmark-on-64.png",
      "128": "images/bookmark-on-128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "minimum_chrome_version": "22",
  "permissions": [
    "bookmarks",
    "storage"
  ]
}
