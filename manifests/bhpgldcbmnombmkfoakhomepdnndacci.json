{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Steemit Voting Power",
  "description": "Shows your current voting power, daily votes and rep percentage on your Steemit.com blog.",
  "icons": {
    "16": "svote16.png",
    "48": "svote48.png",
    "128": "svote.png"
  },
  "version": "0.2.0",
  "content_scripts": [
    {
      "js": [
        "steem.min.js",
        "steemvotedata.js"
      ],
      "matches": [
        "https://steemit.com/@*"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
