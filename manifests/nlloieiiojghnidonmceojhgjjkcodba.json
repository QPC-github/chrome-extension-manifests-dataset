{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Rendevus Video Screen sharing",
  "description": "An extension to allow you to screenshare on Rendevus.com",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "https://rendevus.com/*",
      "https://*.rendevus.com/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ]
}
