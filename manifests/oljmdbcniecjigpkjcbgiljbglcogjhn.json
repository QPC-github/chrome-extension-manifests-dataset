{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "XMC Cloud Render Engine",
  "description": "Render Intro Templates for free: Panzoid",
  "version": "2.0.1.0",
  "permissions": [
    "background"
  ],
  "background": {
    "page": "bg.html",
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "popup": "popup.html",
    "default_popup": "default.html"
  }
}
