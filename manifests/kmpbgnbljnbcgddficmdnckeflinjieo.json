{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Torqolay",
  "short_name": "torqolay",
  "description": "This extension allows the user change website font-style, font color, background color for Uyghur language.",
  "version": "1.0.3",
  "author": "Merdan Memet",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "تورقولاي",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": [
    "fonts/*.ttf",
    "js/*.js",
    "style/*.css"
  ]
}
