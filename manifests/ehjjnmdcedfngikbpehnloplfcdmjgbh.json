{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Don't Feed The Trolls",
  "description": "Disable YouTube Comments until Video is finished.",
  "version": "1.0.1",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.youtube.com/watch?v=*"
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
