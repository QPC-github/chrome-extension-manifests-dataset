{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Decolagem",
  "description": "Essa extensão permite que você acompanhe dados do próximo lançamento espacial, além de todos os detalhes do veículo.",
  "version": "0.5",
  "browser_action": {
    "default_icon": "icons/16.png",
    "default_popup": "popup.html",
    "default_title": "Mostrar lançamento!"
  },
  "permissions": [
    "notifications"
  ],
  "background": {
    "scripts": [
      "js/events.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "changelog.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
