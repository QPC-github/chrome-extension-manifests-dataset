{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Manage Active Listings sortable by Views",
  "version": "0.0.1",
  "description": "eBay doesn't want you to be able to sort your list of items for sale by the number of views those items have had.  We disagree!",
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://ebay.com/sh/lst/active",
        "https://ebay.com/sh/lst/active?*",
        "https://www.ebay.com/sh/lst/active",
        "https://www.ebay.com/sh/lst/active?*",
        "https://ebay.ca/sh/lst/active",
        "https://ebay.ca/sh/lst/active?*",
        "https://www.ebay.ca/sh/lst/active",
        "https://www.ebay.ca/sh/lst/active?*"
      ]
    }
  ]
}
