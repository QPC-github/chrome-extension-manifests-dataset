{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Linker!",
  "version": "0.5",
  "description": "Делитесь ссылками! генерирует qr-код и ссылки в контакте, twitter, ij и т.д.",
  "browser_action": {
    "default_icon": "dc.png",
    "default_popup": "popup.html",
    "default_title": ""
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "idle",
    "background",
    "tabs",
    "http://clck.ru/*",
    "https://chart.googleapis.com/*",
    "http://rlu.ru/*"
  ]
}
