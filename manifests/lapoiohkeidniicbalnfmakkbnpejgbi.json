{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "支付宝安全插件",
  "version": "1.0.1",
  "description": "适应Chrome新版机制，完成浏览器对于支付宝原来安全控件的支持。",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "icon-128.png",
    "16": "icon-16.png",
    "48": "icon-48.png"
  },
  "permissions": [
    "nativeMessaging"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.taobao.com/*",
      "*://*.alibaba.com/*",
      "*://*.aliexpress.com/*",
      "*://*.etao.com/*",
      "*://*.tmall.com/*",
      "*://*.tmall.hk/*",
      "*://*.juhuasuan.com/*",
      "*://*.aliyun.com/*",
      "*://*.alipay.com/*",
      "*://*.1688.com/*",
      "*://*.alimama.com/*",
      "*://*.taobao.org/*",
      "*://*.alibaba-inc.com/*"
    ]
  }
}
