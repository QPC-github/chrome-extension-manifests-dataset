{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Woxikon",
  "version": "1.1",
  "description": "Translate easily and quickly from/to 21 languages. Advertisement free!",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "scripts": [
      "popup.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "fonts/Roboto-Regular.ttf"
  ],
  "homepage_url": "https://www.woxikon.de"
}
