{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Cars Follower",
  "description": "Будьте всегда в курсе о новых объявлениях на auto.ria.com, RST.ua и avtobazar.ua",
  "version": "1.2.6",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "32": "messageIco_Ar_32.png",
    "64": "messageIco_Ar_64.png",
    "128": "messageIco_Ar.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "https://auto.ria.com/*",
    "https://s-ua.auto.ria.com/*",
    "https://c-ua1.riastatic.com/*",
    "http://rst.ua/*",
    "https://avtobazar.ua/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery.js",
        "contentScript.js"
      ]
    }
  ]
}
