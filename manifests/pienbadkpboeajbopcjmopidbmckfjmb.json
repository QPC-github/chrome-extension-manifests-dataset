{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "One Tab per Job for LexiQA",
  "short_name": "LexiQA",
  "version": "1.0.1.0",
  "description": "Reuses existing Chrome tabs for LexiQA jobs within MateCat",
  "background": {
    "scripts": [
      "lexiqa.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
