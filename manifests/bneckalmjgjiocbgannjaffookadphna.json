{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "MTG Prices by MTGGoldfish",
  "short_name": "MTGGoldfish",
  "description": "Magic: the Gathering ONLINE and PAPER prices, and card images.",
  "version": "0.4.11",
  "web_accessible_resources": [
    "cdb.json"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ],
      "js": [
        "jquery-2.1.1.min.js",
        "jquery.highlight.js",
        "jquery.hoverIntent.minified.js",
        "common.js",
        "content_script.js",
        "bootstrap.min.js"
      ],
      "css": [
        "bootstrap.min.css",
        "mtggoldfish.css"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-2.1.1.min.js",
      "common.js",
      "background.js",
      "context_menu.js"
    ],
    "persistent": false
  }
}
