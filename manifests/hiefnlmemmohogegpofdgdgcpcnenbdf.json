{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Ext-Switch",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "A Chrome extension that disables/enables all extensions; with whitelist support.",
  "homepage_url": "https://github.com/nkcmr/ext-switch",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "/js/async.min-0.2.9.js",
      "/js/underscore-min-1.5.2.js",
      "/src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "management",
    "storage"
  ]
}
