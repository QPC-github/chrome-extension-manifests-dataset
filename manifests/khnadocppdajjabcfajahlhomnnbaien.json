{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Mindful Browsing",
  "description": "Stay focused by blurring out potentionally distracting parts of webpages.",
  "version": "1.3",
  "browser_action": {
    "default_title": "Mindful Browsing",
    "default_icon": {
      "48": "./icon_48.png",
      "96": "./icon_96.png",
      "128": "./icon_128.png",
      "512": "./icon_512.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/",
    "storage",
    "tabs",
    "webNavigation"
  ]
}
