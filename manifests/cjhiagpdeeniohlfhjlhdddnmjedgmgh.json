{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "便宜说 - 京东降价我知道",
  "version": "0.4",
  "manifest_version": 2,
  "description": "在便宜说，你可以看到京东商城最新的价格变动，某商品的历史价格趋势。",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://pianyishuo.com/",
    "notifications",
    "tabs",
    "activeTab",
    "http://www.360buy.com/*",
    "http://360buy.com/*",
    "http://www.jd.com/*",
    "http://jd.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
