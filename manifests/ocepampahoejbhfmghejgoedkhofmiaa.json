{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "WOWen Wilson",
  "description": "Wow! This extension replaces the facebook 'wow' reaction with Owen Wilson. You're welcome.",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "wow.png",
    "default_popup": "wow.html"
  },
  "icons": {
    "16": "wow16.png",
    "48": "wow48.png",
    "128": "wow128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "wow.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
