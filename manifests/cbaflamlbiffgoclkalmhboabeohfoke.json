{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "manifest_version": 2,
  "short_name": "hide-tabs",
  "name": "Hide Tabs (Panic Button)",
  "permissions": [
    "sessions",
    "storage"
  ],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://mybrowseraddon.com/hide-tabs.html",
  "description": "Easily hide and restore all open tabs with click of a button.",
  "commands": {
    "hide": {
      "description": "Hide Tabs (Panic Button)",
      "suggested_key": {
        "mac": "Alt+Shift+A",
        "default": "Alt+Shift+A"
      }
    }
  },
  "browser_action": {
    "default_title": "Hide Tabs (Panic Button)",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
