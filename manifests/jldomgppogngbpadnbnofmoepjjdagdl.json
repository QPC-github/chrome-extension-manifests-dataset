{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Incognito Amigo",
  "short_name": "Nito Amigo",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Moves sexually explicit sites to an incognito tab and deletes them from browser history.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "history"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Move Tab",
    "default_popup": "incognitoAmigo.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  "icons": {
    "128": "icon.png"
  }
}
