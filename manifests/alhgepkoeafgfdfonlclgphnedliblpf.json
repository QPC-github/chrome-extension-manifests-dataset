{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "author": "Gianluca Esposito",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "128": "assets/icons/icon-128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "*://*/*.gif",
        "*://*/*.GIF"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ]
}
