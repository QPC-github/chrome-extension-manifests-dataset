{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "TextInFocus",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Read pages of text easier",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Read pages of text easier"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "script.js"
  ]
}
