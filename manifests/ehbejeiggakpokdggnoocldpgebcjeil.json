{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "ConvertApp",
  "version": "1.4",
  "description": "Offizielle ConvertApp Chrome Erweiterung",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "ConvertApp"
  },
  "permissions": [
    "tabs",
    "https://*/",
    "activeTab",
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.convertapp.io/*",
      "*://localhost/*"
    ]
  },
  "manifest_version": 2
}
