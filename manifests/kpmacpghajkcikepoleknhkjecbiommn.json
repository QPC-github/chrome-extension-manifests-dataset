{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Konsultasi Syariah",
  "short_name": "TanyaUstadz",
  "version": "2.0",
  "description": "Konsultasi Syariah",
  "icons": {
    "19": "images/icon19.png",
    "38": "images/icon38.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Konsultasi Syariah",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://www.konsultasisyariah.com/",
  "permissions": [
    "*://*.konsultasisyariah.com/*",
    "alarms",
    "storage"
  ]
}
