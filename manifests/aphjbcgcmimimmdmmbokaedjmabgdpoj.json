{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Item Updater for Envato Market™",
  "version": "1.1.6",
  "manifest_version": 2,
  "description": "Easily auto-update attributes & metadata for items in your Envato Market™ portfolio.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options/options.html",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "https://api.envato.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://audiojungle.net/item/*/edit/*",
        "https://videohive.net/item/*/edit/*",
        "https://themeforest.net/item/*/edit/*",
        "https://codecanyon.net/item/*/edit/*",
        "https://photodune.net/item/*/edit/*",
        "https://graphicriver.net/item/*/edit/*",
        "https://3docean.net/item/*/edit/*",
        "https://activeden.net/item/*/edit/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://audiojungle.net/item/*",
        "https://videohive.net/item/*",
        "https://themeforest.net/item/*",
        "https://codecanyon.net/item/*",
        "https://photodune.net/item/*",
        "https://graphicriver.net/item/*",
        "https://3docean.net/item/*",
        "https://activeden.net/item/*"
      ],
      "js": [
        "src/inject/injectitem.js"
      ]
    },
    {
      "matches": [
        "https://audiojungle.net/content/upload/form*",
        "https://videohive.net/content/upload/form*",
        "https://themeforest.net/content/upload/form*",
        "https://codecanyon.net/content/upload/form*",
        "https://photodune.net/content/upload/form*",
        "https://graphicriver.net/content/upload/form*",
        "https://3docean.net/content/upload/form*",
        "https://activeden.net/content/upload/form*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/injectupload.js"
      ]
    }
  ]
}
