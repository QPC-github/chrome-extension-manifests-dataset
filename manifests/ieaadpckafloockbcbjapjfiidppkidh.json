{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Smark",
  "description": "This extension demonstrates tutorial bookmark",
  "version": "1.4",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "assets/smark-16.png",
    "default_popup": "main.html"
  },
  "permissions": [
    "https://readability.com/",
    "http://api.smark.cc/bookmarks1",
    "http://api.smark.cc/*",
    "https://ajax.googleapis.com/ajax/libs/",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.com.tw/*"
      ],
      "js": [
        "js/jquery-1.9.1.js",
        "js/smarkInjector.js",
        "js/angular.min.js",
        "js/modules.js",
        "js/controllers.js"
      ],
      "css": [
        "css/injector.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "assets/collection.png"
  ],
  "icons": {
    "16": "assets/smark-16.png",
    "48": "assets/smark-48.png",
    "128": "assets/smark-128.png"
  }
}
