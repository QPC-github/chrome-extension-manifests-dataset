{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Bandyer Corporate Screensharing Widget",
  "permissions": [
    "desktopCapture"
  ],
  "short_name": "Screen sharing for Bandyer Corporate",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.0.0.5",
  "background": {
    "persistent": true,
    "scripts": [
      "script.js"
    ]
  },
  "description": "Extension to allow screen sharing in Bandyer Corporate Widget page.",
  "externally_connectable": {
    "matches": [
      "*://*.bandyer.com/*"
    ]
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "icons": {
    "16": "bandyer16.png",
    "48": "bandyer48.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}
