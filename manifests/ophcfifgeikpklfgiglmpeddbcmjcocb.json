{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Bloonando-TravelAgent2Go",
  "short_name": "TravelAgent",
  "description": "Holiday offers tailored to your dreams delivered in real time",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "images/sun_icon_16px.png",
    "48": "images/sun_icon_48px.png",
    "128": "images/sun_icon_128px.png"
  },
  "browser_action": {
    "default_icon": "images/sun_icon_16px.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://api.bloonando.com/*"
  ]
}
