{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "version": "0.9.3",
  "name": "Yota Monitor",
  "description": "Индикатор состояния модема Yota",
  "permissions": [
    "storage",
    "https://my.yota.ru/*",
    "http://status.yota.ru/*",
    "http://10.0.0.1/*",
    "http://172.16.0.0/*",
    "http://192.168.0.1/*"
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "5.png",
    "default_popup": "popup.html"
  }
}
