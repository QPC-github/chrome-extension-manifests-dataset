{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "История буфера обмена",
  "short_name": "Мультибуфер обмена",
  "author": "Андрей Грибин",
  "version": "3.0",
  "manifest_version": 2,
  "icons": {
    "128": "icon/icon128.png"
  },
  "description": "Получите доступ к истории буфера обмена",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon/icon128.png",
    "default_popup": "panel.html"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "tabs"
  ],
  "commands": {
    "openbuffer": {
      "suggested_key": {
        "default": "Ctrl+Shift+0",
        "mac": "Command+Shift+0"
      },
      "description": "openbuffer",
      "global": true
    }
  }
}
