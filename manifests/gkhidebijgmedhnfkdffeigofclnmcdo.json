{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pomelo",
  "version": "0.5.3",
  "description": "Pomelo affiche les codes coupons, deals et opportunit√©s de cashback disponibles pour le site marchand que vous visitez.",
  "permissions": [
    "idle",
    "tabs",
    "https://www.getpomelo.com/",
    "storage",
    "webNavigation",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "ico-19.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "a.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "c.js"
      ],
      "run_at": "document_start",
      "match_about_blank": false,
      "all_frames": false,
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "ico-16.png",
    "48": "ico-48.png",
    "128": "ico-128.png"
  },
  "manifest_version": 2
}
