{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "GiveSmile",
  "description": "GiveSmile automatically redirects Amazon to Amazon Smile ensuring your favorite charity always gets a free donation.",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": {
    "32": "images/givesmile-32.png",
    "38": "images/givesmile-38.png",
    "64": "images/givesmile-64.png",
    "128": "images/givesmile-128.png",
    "256": "images/givesmile-256.png"
  },
  "browser_action": {
    "default_title": "Stay Fit&Blessed",
    "default_popup": "popup.html",
    "default_icon": {
      "32": "images/givesmile-32.png",
      "38": "images/givesmile-38.png",
      "64": "images/givesmile-64.png",
      "128": "images/givesmile-128.png",
      "256": "images/givesmile-256.png"
    }
  },
  "background": {
    "scripts": [
      "js/background/redirect.js",
      "js/background/background.js"
    ]
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://www.amazon.com/*",
    "*://www.amazon.de/*",
    "*://www.amazon.co.uk/*"
  ]
}
