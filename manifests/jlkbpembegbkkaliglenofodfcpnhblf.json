{
  "update_url": "http://clients2.google.com/service/update2/crx",
  "name": "forgif.me",
  "version": "1.5",
  "description": "Browser features for forgif.me",
  "permissions": [
    "notifications",
    "contextMenus",
    "tabs",
    "http://forgif.me/"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "forgif.me"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
