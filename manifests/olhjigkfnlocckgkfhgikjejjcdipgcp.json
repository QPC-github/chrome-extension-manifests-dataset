{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Reddit News Fixer",
  "version": "1.1",
  "description": "Fixes Reddit News Subreddit Names",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "News Subreddits Fixed!"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.reddit.com/*",
        "https://*.reddit.com/*"
      ],
      "js": [
        "jquery.min.js",
        "contentscript.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
