{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Sleeping Giants Oz - Remind Me",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Get a heads up when you visit websites of advertisers in the Sleeping Giants database.",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "images/running-128.png"
  },
  "browser_action": {
    "default_icon": "images/running-128.png",
    "default_title": "Giant Remind Me"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "<all_urls>"
  ]
}
