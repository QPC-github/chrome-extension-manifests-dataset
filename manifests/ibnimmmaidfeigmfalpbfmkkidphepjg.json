{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Universal Accessibility Toolkit",
  "description": "Universal Accessibility Toolkit",
  "author": "Jack Doonan",
  "version": "1.9",
  "permissions": [
    "tts",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "128-logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "manifest_version": 2
}
