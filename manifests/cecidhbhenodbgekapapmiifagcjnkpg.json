{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "The SkillPedia Screenshare Chrome Extension",
  "author": "The Skill Pedia",
  "version": "1.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "description": "Chrome Extension granting WebRTC screen capturing capabilities for The Skill Pedia.",
  "homepage_url": "https://skillpediaclasses.in/",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "*://*.skillpediaclasses.in/*"
    ]
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
