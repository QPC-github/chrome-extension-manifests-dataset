{
  "background": {
    "page": "bg.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/Controller.js",
        "js/jquery-1.7.1.min.js",
        "js/slider.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "description": "Turn purchases from your favorite online merchants into donations to your nonprofit, school, or association -- at no cost to you.",
  "icons": {
    "128": "icon_128.png"
  },
  "manifest_version": 2,
  "name": "We-Care Reminder",
  "options_page": "html/options.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.3.0.27",
  "web_accessible_resources": [
    "html/wca_slider.html",
    "html/container.html",
    "html/options.html",
    "images/dog.gif",
    "images/dog_wag.gif",
    "images/heart.gif"
  ]
}
