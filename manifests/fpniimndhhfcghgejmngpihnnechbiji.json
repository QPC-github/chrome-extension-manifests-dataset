{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Midhub Screen Sharing",
  "version": "1.1",
  "default_locale": "en",
  "description": "An extension for video sharing live in Midhub",
  "background": {
    "scripts": [
      "extension.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://midhub.co/*"
    ]
  },
  "permissions": [
    "desktopCapture"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
