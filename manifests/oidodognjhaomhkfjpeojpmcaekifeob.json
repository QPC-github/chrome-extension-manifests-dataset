{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "PassGem",
  "description": "Gerador de senhas, com opções de inserção de caracteres especiais, letras, números e limitador de caracteres",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon19.png",
      "38": "assets/images/icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "PassGem"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "permissions": [
    "activeTab"
  ]
}
