{
  "name": "GOload",
  "description": "Расширение от сайта goload.ru позволяющее делать, обрабатывать и загружать скриншоты на сервис.",
  "author": "http://goload.ru",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_title": "GOload Сделать скриншот"
  },
  "icons": {
    "256": "img/icon256.png",
    "128": "img/icon128.png"
  },
  "commands": {
    "take_screenshot": {
      "description": "GOload Сделать скриншот",
      "suggested_key": {
        "default": "Alt+S",
        "windows": "Alt+S",
        "mac": "Alt+S",
        "linux": "Alt+S"
      }
    }
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "tabCapture"
  ],
  "manifest_version": 2,
  "version": "2.3.1",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "update_url": "https://clients2.google.com/service/update2/crx"
}
