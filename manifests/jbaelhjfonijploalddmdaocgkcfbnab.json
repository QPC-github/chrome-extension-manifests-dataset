{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "VIO ile Ekran Paylaşımı",
  "short_name": "VIO",
  "description": "VIO ile ekran paylaşımı yapabilmek için gerekli eklentidir",
  "version": "1.0",
  "minimum_chrome_version": "34",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "default_icon.png"
  },
  "icons": {
    "16": "vio_logo_2_16.png",
    "48": "vio_logo_2_48.png",
    "128": "vio_logo_2_128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.netas.com.tr/*",
      "http://*.netas.com.tr/*",
      "https://meeting.tekfenim.com/*",
      "https://konferans.afad.gov.tr/*",
      "https://egitim.cezerisga.com/*"
    ]
  }
}
