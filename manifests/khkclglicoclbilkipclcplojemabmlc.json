{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Первый Криворожский",
  "short_name": "1kr.ua",
  "description": "Следите за последними новостями на 1kr.ua.",
  "version": "1.0.14",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "background",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://1kr.ua/*"
  ],
  "background": {
    "scripts": [
      "zepto.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icon48.png",
      "38": "icon48.png"
    },
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
