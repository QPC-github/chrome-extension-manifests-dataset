{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "icons": {
    "1024": "1024.png"
  },
  "manifest_version": 2,
  "name": "Geoboard, by The Math Learning Center",
  "short_name": "Geoboard",
  "description": "Geoboard is a tool for exploring a variety of mathematical topics introduced in the elementary and middle grades.",
  "version": "3.0.0",
  "offline_enabled": true,
  "permissions": [
    "background",
    "clipboard",
    "clipboardWrite",
    "storage",
    "webview"
  ],
  "webview": {
    "partitions": [
      {
        "name": "info",
        "accessible_resources": [
          "*"
        ]
      }
    ]
  }
}
