{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "SavePin",
  "description": "This extension preserves all pinned tabs indefinitely and across windows until they are unpinned",
  "version": "1.0.2",
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "icon.png",
    "256": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ]
}
