{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author": "#be",
  "name": "#be browser detector",
  "short_name": "#be detector",
  "description": "Boost your user profile with the #be browser detector.",
  "version": "6.1",
  "manifest_version": 2,
  "default_locale": "en",
  "background": {
    "persistent": true,
    "page": "html/background.html"
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/icon.png",
    "default_title": "click to see the share button"
  },
  "icons": {
    "128": "images/icon.png"
  },
  "offline_enabled": false,
  "permissions": [
    "tabs",
    "geolocation",
    "http://localhost/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "fonts/*",
    "images/*"
  ]
}
